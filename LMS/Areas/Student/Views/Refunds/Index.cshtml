@model List<LMS.Areas.Student.ViewModels.RefundDisplayViewModel>
@{
    ViewData["Title"] = Html.T("طلبات الاسترجاع", "Refund Requests");
}

@section Styles {
<style>
    .refund-card {
        transition: all 0.2s ease;
        border-right: 4px solid transparent;
    }
    .refund-card:hover {
        transform: translateX(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .refund-card.pending { border-right-color: #fbbf24; }
    .refund-card.approved { border-right-color: #22c55e; }
    .refund-card.rejected { border-right-color: #ef4444; }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-rotate-ccw text-primary me-2"></i>
                    @Html.T("طلبات الاسترجاع", "Refund Requests")
                </h3>
                <p class="text-muted mb-0">@Html.T("تتبع طلبات استرجاع أموالك", "Track your refund requests")</p>
            </div>
        </div>
    </div>
</div>

<!-- Refunds List -->
@if (Model?.Any() == true)
{
    <div class="row g-4">
        @foreach (var refund in Model)
        {
            var statusClass = refund.Status == LMS.Domain.Enums.RefundStatus.Pending ? "warning" : refund.Status == LMS.Domain.Enums.RefundStatus.Approved ? "success" : "danger";
            var statusText = refund.Status == LMS.Domain.Enums.RefundStatus.Pending ? Html.T("قيد المعالجة", "Pending") : refund.Status == LMS.Domain.Enums.RefundStatus.Approved ? Html.T("موافق عليه", "Approved") : Html.T("مرفوض", "Rejected");
            <div class="col-12">
                <div class="card refund-card stretch stretch-full @refund.Status.ToString().ToLower()">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <div class="d-flex align-items-start">
                                    <div class="avatar-text avatar-lg bg-soft-@statusClass text-@statusClass me-3">
                                        <i class="feather-rotate-ccw"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="fw-bold mb-2">@refund.CourseName</h5>
                                        <p class="text-muted fs-12 mb-2">
                                            @Html.T("طلب رقم:", "Request #") <strong>REF-@refund.Id</strong>
                                        </p>
                                        <p class="text-muted fs-13 mb-0">@refund.Reason</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3">
                                <div class="text-center">
                                    <small class="text-muted d-block mb-1">@Html.T("المبلغ", "Amount")</small>
                                    <h4 class="fw-bold text-primary mb-0">@refund.RefundAmount.ToEGP(2)</h4>
                                    <small class="text-muted">@Html.T("تاريخ الطلب:", "Request date:") @refund.RequestedAt.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 text-end">
                                <span class="badge bg-@statusClass mb-2">
                                    @statusText
                                </span>
                                <br />
                                <a asp-action="Details" asp-route-id="@refund.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="feather-eye me-2"></i>
                                    @Html.T("عرض التفاصيل", "View details")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body">
            @{
                ViewData["Icon"] = "rotate-ccw";
                ViewData["Title"] = Html.T("لا توجد طلبات استرجاع", "No refund requests");
                ViewData["Message"] = Html.T("لم تقم بتقديم أي طلبات استرجاع بعد.", "You haven't submitted any refund requests yet.");
            }
            @await Html.PartialAsync("_EmptyState")
        </div>
    </div>
}

<!-- Refund Policy -->
<div class="card stretch stretch-full mt-4">
    <div class="card-header">
        <h5 class="fw-bold mb-0">
            <i class="feather-info me-2"></i>
            @Html.T("سياسة الاسترجاع", "Refund policy")
        </h5>
    </div>
    <div class="card-body">
        <ul class="mb-0">
            <li class="mb-2">@Html.T("يمكن طلب استرجاع المبلغ خلال 30 يوماً من تاريخ الشراء", "You can request a refund within 30 days of purchase")</li>
            <li class="mb-2">@Html.T("لا يمكن استرجاع المبلغ إذا تم إكمال أكثر من 30% من الدورة", "Refund is not available if more than 30% of the course has been completed")</li>
            <li class="mb-2">@Html.T("سيتم معالجة الطلب خلال 5-7 أيام عمل", "The request will be processed within 5-7 business days")</li>
            <li class="mb-0">@Html.T("سيتم إرجاع المبلغ إلى نفس طريقة الدفع المستخدمة", "The amount will be refunded to the same payment method used")</li>
        </ul>
    </div>
</div>

