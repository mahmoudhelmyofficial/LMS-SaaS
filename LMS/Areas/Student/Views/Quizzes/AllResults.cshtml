@model List<LMS.Domain.Entities.Assessments.QuizAttempt>
@{
    ViewData["Title"] = Html.T("نتائج الاختبارات", "Quiz Results");
}

@section Styles {
<style>
    .results-header {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .result-card {
        transition: all 0.3s ease;
        border-right: 4px solid transparent;
    }
    .result-card:hover {
        transform: translateX(-5px);
    }
    .result-card.passed {
        border-right-color: #22c55e;
    }
    .result-card.failed {
        border-right-color: #ef4444;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="results-header">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-2">
                <i class="feather-bar-chart-2 me-2"></i>
                @Html.T("نتائج الاختبارات", "Quiz results")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("استعراض جميع نتائج اختباراتك السابقة", "View all your past quiz results")</p>
        </div>
        <div class="col-lg-6">
            <div class="row text-center g-3">
                <div class="col-4">
                    <h3 class="fw-bold mb-0">@Model.Count</h3>
                    <small class="opacity-75">@Html.T("إجمالي المحاولات", "Total attempts")</small>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold mb-0">@Model.Count(m => m.IsPassed)</h3>
                    <small class="opacity-75">@Html.T("ناجح", "Passed")</small>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold mb-0">@(Model.Any() ? Model.Average(m => m.PercentageScore).ToString("F0") : "0")%</h3>
                    <small class="opacity-75">@Html.T("المتوسط", "Average")</small>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var attempt in Model)
        {
            <div class="col-12">
                <div class="card result-card stretch stretch-full @(attempt.IsPassed ? "passed" : "failed")">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-text avatar-lg @(attempt.IsPassed ? "bg-soft-success text-success" : "bg-soft-danger text-danger") me-3">
                                        <i class="feather-@(attempt.IsPassed ? "check-circle" : "x-circle")"></i>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-1">@attempt.Quiz.Title</h5>
                                        <p class="text-muted fs-12 mb-0">
                                            <i class="feather-book-open me-1"></i>
                                            @attempt.Quiz.Lesson?.Module?.Course?.Title
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 text-center">
                                <h3 class="fw-bold mb-0 @(attempt.IsPassed ? "text-success" : "text-danger")">
                                    @attempt.PercentageScore.ToString("F0")%
                                </h3>
                                <small class="text-muted">@Html.T("النتيجة", "Score")</small>
                            </div>
                            <div class="col-lg-2 text-center">
                                <span class="badge bg-@(attempt.IsPassed ? "success" : "danger") fs-12">
                                    @(attempt.IsPassed ? Html.T("ناجح", "Passed") : Html.T("راسب", "Failed"))
                                </span>
                                <div class="mt-1">
                                    <small class="text-muted">@attempt.CompletedAt?.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>
                            <div class="col-lg-2 text-end">
                                <a asp-action="AttemptResults" asp-route-attemptId="@attempt.Id" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="feather-eye me-1"></i>
                                    @Html.T("التفاصيل", "Details")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body text-center py-5">
            <i class="feather-file-text fs-1 text-muted mb-3 d-block"></i>
            <h5 class="fw-bold mb-2">@Html.T("لا توجد نتائج اختبارات", "No quiz results")</h5>
            <p class="text-muted mb-4">@Html.T("لم تكمل أي اختبار حتى الآن", "You haven't completed any quiz yet")</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="feather-list me-2"></i>
                @Html.T("عرض الاختبارات المتاحة", "View available quizzes")
            </a>
        </div>
    </div>
}

