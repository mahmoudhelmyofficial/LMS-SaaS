@model LMS.Domain.Entities.Assessments.QuizAttempt
@{
    ViewData["Title"] = Html.T("نتيجة الاختبار", "Quiz Result");
    var isPassed = Model.IsPassed;
}

@section Styles {
<style>
    .results-header {
        background: linear-gradient(135deg, @(isPassed ? "#22c55e 0%, #16a34a 100%" : "#f59e0b 0%, #d97706 100%"));
        color: white;
        border-radius: 12px;
        padding: 50px;
        text-align: center;
    }
    .score-circle {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
</style>
}

<!-- Results Header -->
<div class="results-header mb-4">
    <div class="score-circle">
        <div>
            <h1 class="fw-bold text-@(isPassed ? "success" : "warning") mb-0" style="font-size: 48px;">
                @Model.PercentageScore.ToString("F0")%
            </h1>
            <p class="text-muted mb-0">@Model.Score / @Model.TotalScore</p>
        </div>
    </div>
    
    <h2 class="text-white fw-bold mb-2">
        @if (isPassed)
        {
            <i class="feather-check-circle me-2"></i>
            <span>@Html.T("مبروك! لقد نجحت", "Congratulations! You passed")</span>
        }
        else
        {
            <i class="feather-alert-circle me-2"></i>
            <span>@Html.T("يمكنك المحاولة مرة أخرى", "You can try again")</span>
        }
    </h2>
    <p class="text-white opacity-75 mb-0">@Model.Quiz.Title</p>
</div>

<div class="row g-4">
    <!-- Stats -->
    <div class="col-lg-8">
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                @{
                    ViewData["Label"] = Html.T("الدرجة النهائية", "Final Score");
                    ViewData["Value"] = Model.Score + " / " + Model.TotalScore;
                    ViewData["Icon"] = "award";
                    ViewData["ColorClass"] = isPassed ? "success" : "warning";
                }
                @await Html.PartialAsync("_StatsCard")
            </div>
            <div class="col-md-3">
                @{
                    ViewData["Label"] = Html.T("الإجابات الصحيحة", "Correct Answers");
                    ViewData["Value"] = Model.CorrectAnswers + " / " + Model.TotalQuestions;
                    ViewData["Icon"] = "check-circle";
                    ViewData["ColorClass"] = "success";
                }
                @await Html.PartialAsync("_StatsCard")
            </div>
            <div class="col-md-3">
                @{
                    ViewData["Label"] = Html.T("الوقت المستغرق", "Time Taken");
                    ViewData["Value"] = Model.TimeTaken?.ToString(@"mm\:ss") ?? Html.T("غير محدد", "Not specified").ToString();
                    ViewData["Icon"] = "clock";
                    ViewData["ColorClass"] = "info";
                }
                @await Html.PartialAsync("_StatsCard")
            </div>
            <div class="col-md-3">
                @{
                    ViewData["Label"] = Html.T("ترتيبك", "Your Rank");
                    ViewData["Value"] = "#" + (ViewBag.Rank ?? Html.T("غ/م", "N/A").ToString());
                    ViewData["Icon"] = "trending-up";
                    ViewData["ColorClass"] = "primary";
                }
                @await Html.PartialAsync("_StatsCard")
            </div>
        </div>

        <!-- Performance Breakdown -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-bar-chart-2 me-2"></i>
                    @Html.T("تحليل الأداء", "Performance analysis")
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>@Html.T("الإجابات الصحيحة", "Correct answers")</span>
                        <strong class="text-success">@Model.CorrectAnswers</strong>
                    </div>
                    <div class="progress ht-10 mb-3">
                        <div class="progress-bar bg-success" style="width: @((Model.CorrectAnswers * 100.0 / Model.TotalQuestions))%"></div>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>@Html.T("الإجابات الخاطئة", "Incorrect answers")</span>
                        <strong class="text-danger">@(Model.TotalQuestions - Model.CorrectAnswers)</strong>
                    </div>
                    <div class="progress ht-10 mb-3">
                        <div class="progress-bar bg-danger" style="width: @(((Model.TotalQuestions - Model.CorrectAnswers) * 100.0 / Model.TotalQuestions))%"></div>
                    </div>
                </div>

                <div class="alert alert-@(isPassed ? "success" : "warning") mb-0">
                    <strong>@(isPassed ? Html.T("ممتاز!", "Excellent!") : Html.T("تحتاج لتحسين:", "Needs improvement:"))</strong>
                    @if (isPassed)
                    {
                        <p class="mb-0">@Html.T("لقد تجاوزت درجة النجاح المطلوبة", "You exceeded the passing score") (@Model.Quiz.PassingScore%). @Html.T("استمر في التميز!", "Keep up the great work!")</p>
                    }
                    else
                    {
                        <p class="mb-0">@Html.T("درجة النجاح المطلوبة", "Passing score") @Model.Quiz.PassingScore%. @Html.T("راجع المحتوى وحاول مرة أخرى.", "Review the content and try again.")</p>
                    }
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex gap-3">
                    <a asp-action="ReviewAnswers" asp-route-attemptId="@Model.Id" class="btn btn-primary flex-grow-1">
                        <i class="feather-eye me-2"></i>
                        @Html.T("مراجعة الإجابات", "Review answers")
                    </a>
                    @if (!isPassed && ViewBag.CanRetake == true)
                    {
                        <a asp-action="Start" asp-route-quizId="@Model.QuizId" class="btn btn-warning flex-grow-1">
                            <i class="feather-repeat me-2"></i>
                            @Html.T("إعادة المحاولة", "Retry")
                        </a>
                    }
                    <a asp-controller="Learning" asp-action="Lesson" asp-route-lessonId="@Model.Quiz.LessonId" class="btn btn-outline-secondary flex-grow-1">
                        <i class="feather-arrow-right me-2"></i>
                        @Html.T("العودة للدرس", "Back to lesson")
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Certificate (if passed) -->
        @if (isPassed)
        {
            <div class="card stretch stretch-full bg-success text-white mb-4">
                <div class="card-body text-center">
                    <i class="feather-award fs-1 mb-3"></i>
                    <h5 class="text-white fw-bold mb-2">@Html.T("تهانينا!", "Congratulations!")</h5>
                    <p class="text-white opacity-75 mb-3">@Html.T("لقد اجتزت الاختبار بنجاح", "You have passed the quiz successfully")</p>
                    <button class="btn btn-light w-100">
                        <i class="feather-download me-2"></i>
                        @Html.T("تحميل الشهادة", "Download certificate")
                    </button>
                </div>
            </div>
        }

        <!-- Attempt History -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-clock me-2"></i>
                    @Html.T("محاولاتك", "Your attempts")
                </h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@Html.T("المحاولة الحالية", "Current attempt")</span>
                            <strong class="text-@(isPassed ? "success" : "warning")">@Model.PercentageScore.ToString("F0")%</strong>
                        </div>
                    </div>
                </div>
                <a asp-action="History" asp-route-quizId="@Model.QuizId" class="btn btn-sm btn-outline-primary w-100 mt-2">
                    @Html.T("عرض جميع المحاولات", "View all attempts")
                </a>
            </div>
        </div>
    </div>
</div>

