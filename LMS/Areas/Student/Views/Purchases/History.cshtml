@model LMS.Areas.Student.Controllers.PurchaseHistoryViewModel
@{
    ViewData["Title"] = Html.T("سجل المشتريات", "Purchase History");
}

@section Styles {
<style>
    .purchases-header {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .purchase-item {
        transition: all 0.2s ease;
    }
    .purchase-item:hover {
        background-color: #f9fafb;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="purchases-header">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-2">
                <i class="feather-shopping-bag me-2"></i>
                @Html.T("سجل المشتريات", "Purchase History")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("استعراض جميع مشترياتك السابقة", "Browse all your past purchases")</p>
        </div>
        <div class="col-lg-6">
            <div class="row text-center g-3">
                <div class="col-6">
                    <h3 class="fw-bold mb-0">@Model.TotalSpent.ToEGP()</h3>
                    <small class="opacity-75">@Html.T("إجمالي المبلغ", "Total amount")</small>
                </div>
                <div class="col-6">
                    <h3 class="fw-bold mb-0">@Model.TotalCoursesPurchased</h3>
                    <small class="opacity-75">@Html.T("دورات مشتراة", "Courses purchased")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Purchases List -->
<div class="card stretch stretch-full">
    <div class="card-header">
        <h5 class="card-title mb-0">@Html.T("المشتريات", "Purchases")</h5>
    </div>
    <div class="card-body">
        @if (Model.Payments.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var payment in Model.Payments)
                {
                    <div class="list-group-item purchase-item py-3 px-0">
                        <div class="row align-items-center">
                            <div class="col-lg-6">
                                <div class="d-flex align-items-center gap-3">
                                    @if (payment.Course != null)
                                    {
                                        @if (!string.IsNullOrEmpty(payment.Course.ThumbnailUrl))
                                        {
                                            <img src="@payment.Course.ThumbnailUrl" alt="" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                                                <i class="feather-book"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="fw-bold mb-1">@payment.Course.Title</h6>
                                            <small class="text-muted">
                                                <i class="feather-user me-1"></i>
                                                @(payment.Course.Instructor?.FullName ?? "-")
                                            </small>
                                        </div>
                                    }
                                    else if (payment.Book != null)
                                    {
                                        @if (!string.IsNullOrEmpty(payment.Book.CoverImageUrl))
                                        {
                                            <img src="@payment.Book.CoverImageUrl" alt="" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="avatar-text avatar-lg bg-soft-secondary text-secondary">
                                                <i class="feather-book-open"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="fw-bold mb-1">@payment.Book.Title</h6>
                                            <small class="text-muted">
                                                @(payment.Book.Author ?? payment.Book.Instructor?.FullName ?? "-")
                                            </small>
                                        </div>
                                    }
                                    else if (payment.BookBundle != null)
                                    {
                                        @if (!string.IsNullOrEmpty(payment.BookBundle.ThumbnailUrl))
                                        {
                                            <img src="@payment.BookBundle.ThumbnailUrl" alt="" class="rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="avatar-text avatar-lg bg-soft-info text-info">
                                                <i class="feather-package"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="fw-bold mb-1">@payment.BookBundle.Name</h6>
                                            <small class="text-muted">
                                                <i class="feather-book me-1"></i>
                                                @Html.T("باقة كتب", "Book bundle")
                                            </small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                                            <i class="feather-shopping-bag"></i>
                                        </div>
                                        <div>
                                            <h6 class="fw-bold mb-1">@Html.T("شراء", "Purchase") #@payment.Id</h6>
                                            <small class="text-muted">@(payment.CompletedAt?.ToString("dd/MM/yyyy") ?? payment.CreatedAt.ToString("dd/MM/yyyy"))</small>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-2 text-center">
                                <span class="badge bg-soft-success text-success fs-12">@Html.T("مكتمل", "Completed")</span>
                            </div>
                            <div class="col-lg-2 text-center">
                                <strong>@payment.TotalAmount.ToEGP(2)</strong>
                            </div>
                            <div class="col-lg-2 text-end">
                                <div class="fs-12 text-muted mb-1">
                                    @(payment.CompletedAt?.ToString("dd/MM/yyyy") ?? payment.CreatedAt.ToString("dd/MM/yyyy"))
                                </div>
                                <a asp-action="Details" asp-route-id="@payment.Id" class="btn btn-sm btn-outline-secondary d-inline-block mb-1">
                                    <i class="feather-eye me-1"></i>
                                    @Html.T("تفاصيل", "Details")
                                </a>
                                @if (payment.Invoice != null)
                                {
                                    <a asp-action="DownloadInvoice" asp-route-paymentId="@payment.Id" class="btn btn-sm btn-outline-primary d-inline-block">
                                        <i class="feather-file-text me-1"></i>
                                        @Html.T("الفاتورة", "Invoice")
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center mb-0">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="History" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="feather-chevron-right"></i>
                                </a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="History" asp-route-page="@i">@i</a>
                            </li>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="History" asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="feather-chevron-left"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="feather-shopping-bag fs-1 text-muted mb-3 d-block"></i>
                <h5 class="fw-bold mb-2">@Html.T("لا توجد مشتريات", "No purchases")</h5>
                <p class="text-muted mb-4">@Html.T("لم تقم بأي عملية شراء بعد", "You haven't made any purchases yet")</p>
                <a asp-area="Student" asp-controller="Courses" asp-action="Browse" class="btn btn-primary">
                    <i class="feather-search me-2"></i>
                    @Html.T("تصفح الدورات", "Browse courses")
                </a>
            </div>
        }
    </div>
</div>

