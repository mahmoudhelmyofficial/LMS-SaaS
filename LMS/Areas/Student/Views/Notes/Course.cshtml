@model IEnumerable<LMS.Domain.Entities.Learning.StudentNote>
@{
    ViewData["Title"] = Html.T("ملاحظاتي", "My Notes");
    var enrollment = ViewBag.Enrollment as LMS.Domain.Entities.Learning.Enrollment;
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
}

@section Styles {
    <style>
        .notes-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 20px;
        }
        .note-card {
            transition: all 0.3s ease;
            border-right: 4px solid transparent;
        }
        .note-card:hover {
            border-right-color: #667eea;
            transform: translateX(-3px);
        }
        .note-card.pinned {
            border-right-color: #ffc107;
            background-color: #fffbeb;
        }
        .timestamp-badge {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 4px 10px;
            border-radius: 15px;
            font-size: 0.75rem;
        }
    </style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Notes Header -->
<div class="notes-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="text-white fw-bold mb-2">
                <i class="feather-file-text me-2"></i>
                @Html.T("ملاحظاتي", "My notes")
            </h2>
            <p class="text-white opacity-75 mb-0">@course?.Title</p>
        </div>
        <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
            <div class="d-flex align-items-center justify-content-lg-end gap-3">
                <div class="text-center">
                    <h3 class="text-white mb-0">@ViewBag.TotalNotes</h3>
                    <small class="text-white opacity-75">@Html.T("ملاحظة", "Note")</small>
                </div>
                <div class="text-center">
                    <h3 class="text-white mb-0">@ViewBag.PinnedNotes</h3>
                    <small class="text-white opacity-75">@Html.T("مثبتة", "Pinned")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Main Content -->
    <div class="col-lg-8">
        <div class="card stretch stretch-full">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">
                    <i class="feather-bookmark me-2"></i>
                    @Html.T("قائمة الملاحظات", "Notes list")
                </h5>
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment?.Id" class="btn btn-light btn-sm">
                    <i class="feather-arrow-left me-2"></i>
                    @Html.T("العودة للدورة", "Back to course")
                </a>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    @foreach (var note in Model)
                    {
                        <div class="card note-card mb-3 @(note.IsPinned ? "pinned" : "")">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-3">
                                    <div class="d-flex align-items-center gap-2">
                                        @if (note.IsPinned)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="feather-anchor me-1"></i>
                                                @Html.T("مثبتة", "Pinned")
                                            </span>
                                        }
                                        @if (note.VideoTimestamp.HasValue)
                                        {
                                            <span class="timestamp-badge">
                                                <i class="feather-clock me-1"></i>
                                                @TimeSpan.FromSeconds(note.VideoTimestamp.Value).ToString(@"mm\:ss")
                                            </span>
                                        }
                                    </div>
                                    <small class="text-muted">@note.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                
                                <div class="mb-3">
                                    <small class="text-primary">
                                        <i class="feather-book-open me-1"></i>
                                        @note.Lesson?.Title
                                    </small>
                                </div>
                                
                                <p class="mb-3">@note.Content</p>
                                
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-light">
                                        <i class="feather-edit-2 me-1"></i>
                                        @Html.T("تعديل", "Edit")
                                    </a>
                                    <form asp-action="TogglePin" asp-route-id="@note.Id" asp-route-enrollmentId="@enrollment?.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm @(note.IsPinned ? "btn-warning" : "btn-outline-warning")">
                                            <i class="feather-anchor me-1"></i>
                                            @(note.IsPinned ? Html.T("إلغاء التثبيت", "Unpin") : Html.T("تثبيت", "Pin"))
                                        </button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@note.Id" asp-route-enrollmentId="@enrollment?.Id" method="post" class="d-inline" 
                                          onsubmit="return confirm('@Html.Raw(Html.T("هل تريد حذف هذه الملاحظة؟", "Do you want to delete this note?").ToString().Replace("'", "\\'"))')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="feather-trash-2 me-1"></i>
                                            @Html.T("حذف", "Delete")
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                            <i class="feather-file-text fs-1"></i>
                        </div>
                        <h5 class="mb-2">@Html.T("لا توجد ملاحظات", "No notes")</h5>
                        <p class="text-muted mb-4">@Html.T("لم تقم بإضافة أي ملاحظات لهذه الدورة بعد", "You haven't added any notes for this course yet")</p>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment?.Id" class="btn btn-primary">
                            <i class="feather-play-circle me-2"></i>
                            @Html.T("العودة للدورة وابدأ التعلم", "Back to course and start learning")
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Course Info -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("الدورة", "Course")</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(course?.ThumbnailUrl))
                {
                    <img src="@course.ThumbnailUrl" alt="@course.Title" class="img-fluid rounded mb-3" />
                }
                <h6 class="mb-2">@course?.Title</h6>
                <p class="text-muted fs-12 mb-3">@course?.ShortDescription</p>
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment?.Id" class="btn btn-primary btn-sm w-100">
                    <i class="feather-play-circle me-2"></i>
                    @Html.T("متابعة التعلم", "Continue learning")
                </a>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("إحصائيات", "Statistics")</h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                    <span class="text-muted">@Html.T("إجمالي الملاحظات", "Total notes")</span>
                    <span class="badge bg-primary">@ViewBag.TotalNotes</span>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                    <span class="text-muted">@Html.T("ملاحظات مثبتة", "Pinned notes")</span>
                    <span class="badge bg-warning text-dark">@ViewBag.PinnedNotes</span>
                </div>
                <div class="d-flex align-items-center justify-content-between">
                    <span class="text-muted">@Html.T("التقدم في الدورة", "Course progress")</span>
                    <span class="badge bg-success">@enrollment?.ProgressPercentage.ToString("F0")%</span>
                </div>
            </div>
        </div>
    </div>
</div>

