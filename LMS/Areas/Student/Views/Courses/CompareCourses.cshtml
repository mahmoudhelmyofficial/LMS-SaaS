@model List<CourseComparisonItem>
@{
    ViewData["Title"] = Html.T("مقارنة الدورات", "Compare Courses");
}

@section Styles {
<style>
    .comparison-table {
        overflow-x: auto;
    }
    .comparison-card {
        min-width: 300px;
    }
    .feature-row {
        border-bottom: 1px solid #e5e7eb;
        padding: 12px 0;
    }
    .feature-row:last-child {
        border-bottom: none;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-layers text-primary me-2"></i>
                    @Html.T("مقارنة الدورات", "Compare Courses")
                </h3>
                <p class="text-muted mb-0">@Html.T("قارن بين", "Compare") @Model.Count @Html.T("دورة لاتخاذ القرار الأفضل", "courses to make the best decision")</p>
            </div>
            <a asp-action="Browse" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("تصفح الدورات", "Browse Courses")
            </a>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <!-- Comparison Table -->
    <div class="card stretch stretch-full">
        <div class="card-body p-0">
            <div class="comparison-table">
                <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th style="min-width: 200px;">@Html.T("المعيار", "Criteria")</th>
                                @foreach (var course in Model)
                                {
                                    <th class="text-center" style="min-width: 250px;">
                                        <div class="comparison-card p-3">
                                            <h5 class="fw-bold mb-2">@course.Title</h5>
                                            <p class="text-muted small mb-0">@Html.T("بواسطة", "By") @course.InstructorName</p>
                                        </div>
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Price -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-dollar-sign text-success me-2"></i>
                                    @Html.T("السعر", "Price")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        @if (course.DiscountPrice.HasValue)
                                        {
                                            <span class="text-decoration-line-through text-muted">@course.Price.ToEGP()</span>
                                            <br />
                                            <span class="fw-bold text-success fs-5">@course.DiscountPrice.Value.ToEGP()</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold fs-5">@course.Price.ToEGP()</span>
                                        }
                                    </td>
                                }
                            </tr>

                            <!-- Level -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-trending-up text-primary me-2"></i>
                                    @Html.T("المستوى", "Level")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <span class="badge bg-soft-primary text-primary">@course.Level</span>
                                    </td>
                                }
                            </tr>

                            <!-- Duration -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-clock text-warning me-2"></i>
                                    @Html.T("المدة", "Duration")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <strong>@(course.Duration?.ToString("F1") ?? Html.T("غير محدد", "N/A"))</strong> @Html.T("ساعة", "hours")
                                    </td>
                                }
                            </tr>

                            <!-- Students -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-users text-info me-2"></i>
                                    @Html.T("عدد الطلاب", "Number of Students")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <strong>@course.TotalStudents</strong> @Html.T("طالب", "students")
                                    </td>
                                }
                            </tr>

                            <!-- Rating -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-star text-warning me-2"></i>
                                    @Html.T("التقييم", "Rating")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <div class="d-flex align-items-center justify-content-center gap-1">
                                            <i class="feather-star text-warning"></i>
                                            <strong>@course.AverageRating.ToString("F1")</strong>
                                            <span class="text-muted">(@course.TotalReviews @Html.T("تقييم", "reviews"))</span>
                                        </div>
                                    </td>
                                }
                            </tr>

                            <!-- Modules & Lessons -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-book-open text-primary me-2"></i>
                                    @Html.T("المحتوى", "Content")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <div><strong>@course.ModulesCount</strong> @Html.T("وحدة", "modules")</div>
                                        <div><strong>@course.LessonsCount</strong> @Html.T("درس", "lessons")</div>
                                    </td>
                                }
                            </tr>

                            <!-- Language -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-globe text-info me-2"></i>
                                    @Html.T("اللغة", "Language")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        @course.Language
                                    </td>
                                }
                            </tr>

                            <!-- Certificate -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-award text-success me-2"></i>
                                    @Html.T("الشهادة", "Certificate")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        @if (course.HasCertificate)
                                        {
                                            <i class="feather-check-circle text-success fs-4"></i>
                                        }
                                        else
                                        {
                                            <i class="feather-x-circle text-danger fs-4"></i>
                                        }
                                    </td>
                                }
                            </tr>

                            <!-- Last Updated -->
                            <tr class="feature-row">
                                <td class="fw-bold">
                                    <i class="feather-refresh-cw text-secondary me-2"></i>
                                    @Html.T("آخر تحديث", "Last Updated")
                                </td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        @course.LastUpdated.ToString("yyyy/MM/dd")
                                    </td>
                                }
                            </tr>

                            <!-- Actions -->
                            <tr>
                                <td class="fw-bold">@Html.T("الإجراءات", "Actions")</td>
                                @foreach (var course in Model)
                                {
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-primary w-100 mb-2">
                                            <i class="feather-eye me-2"></i>
                                            @Html.T("عرض التفاصيل", "View Details")
                                        </a>
                                        <a asp-controller="Checkout" asp-action="QuickBuy" asp-route-courseId="@course.CourseId" class="btn btn-success w-100">
                                            <i class="feather-shopping-cart me-2"></i>
                                            @Html.T("شراء الآن", "Buy Now")
                                        </a>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body">
            @{
                ViewData["Icon"] = "layers";
                ViewData["Title"] = Html.T("لا توجد دورات للمقارنة", "No Courses to Compare");
                ViewData["Message"] = Html.T("يرجى اختيار 2-3 دورات للمقارنة", "Please select 2-3 courses to compare");
                ViewData["ActionText"] = Html.T("تصفح الدورات", "Browse Courses");
                ViewData["ActionArea"] = "Student";
                ViewData["ActionController"] = "Courses";
                ViewData["ActionAction"] = "Browse";
            }
            @await Html.PartialAsync("_EmptyState")
        </div>
    </div>
}
