@model List<LMS.Domain.Entities.Learning.Enrollment>
@{
    ViewData["Title"] = Html.T("الدورات قيد التقدم", "Courses In Progress");
}

@section Styles {
<style>
    .inprogress-header {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        border-radius: 12px;
        padding: 50px 40px;
        color: white;
        margin-bottom: 30px;
    }
    .course-card {
        transition: all 0.3s ease;
    }
    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    .progress-bar-animated {
        animation: progressAnimation 1.5s ease-out;
    }
    @@keyframes progressAnimation {
        from { width: 0; }
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="inprogress-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-2">
                <i class="feather-play-circle me-2"></i>
                @Html.T("الدورات قيد التقدم", "Courses In Progress")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("استمر في رحلة التعلم وأكمل دوراتك", "Continue your learning journey and complete your courses")</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <div class="d-inline-block text-center">
                <h1 class="fw-bold mb-0">@Model.Count</h1>
                <small class="opacity-75">@Html.T("دورة قيد التقدم", "courses in progress")</small>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var enrollment in Model)
        {
            <div class="col-lg-6">
                <div class="card course-card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            @if (!string.IsNullOrEmpty(enrollment.Course.ThumbnailUrl))
                            {
                                <img src="@enrollment.Course.ThumbnailUrl" alt="@enrollment.Course.Title" 
                                     class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="avatar-text avatar-lg bg-soft-primary text-primary me-3">
                                    <i class="feather-book-open"></i>
                                </div>
                            }
                            <div class="flex-grow-1">
                                <h5 class="fw-bold mb-1 text-truncate">@enrollment.Course.Title</h5>
                                <p class="text-muted fs-12 mb-0">
                                    <i class="feather-user me-1"></i>
                                    @enrollment.Course.Instructor.FullName
                                </p>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fs-12 text-muted">@Html.T("التقدم", "Progress")</span>
                                <span class="fw-bold text-primary">@enrollment.ProgressPercentage.ToString("F0")%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar progress-bar-animated bg-primary" 
                                     role="progressbar" 
                                     style="width: @enrollment.ProgressPercentage%"
                                     aria-valuenow="@enrollment.ProgressPercentage" 
                                     aria-valuemin="0" 
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-2 mb-3 fs-12 text-muted">
                            <span>
                                <i class="feather-check-circle text-success me-1"></i>
                                @enrollment.CompletedLessons @Html.T("من", "of") @enrollment.TotalLessons @Html.T("درس", "lessons")
                            </span>
                            @if (enrollment.LastAccessedAt.HasValue)
                            {
                                <span>
                                    <i class="feather-clock me-1"></i>
                                    @Html.T("آخر وصول:", "Last accessed:") @enrollment.LastAccessedAt.Value.ToString("dd/MM/yyyy")
                                </span>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <a asp-action="ResumeLearning" asp-route-enrollmentId="@enrollment.Id" 
                               class="btn btn-primary flex-grow-1">
                                <i class="feather-play me-2"></i>
                                @Html.T("استمرار التعلم", "Continue Learning")
                            </a>
                            <a asp-action="Details" asp-route-id="@enrollment.Id" 
                               class="btn btn-outline-secondary" aria-label="@Html.T("التفاصيل", "Details")">
                                <i class="feather-info"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body text-center py-5">
            <i class="feather-play-circle fs-1 text-muted mb-3 d-block"></i>
            <h5 class="fw-bold mb-2">@Html.T("لا توجد دورات قيد التقدم", "No courses in progress")</h5>
            <p class="text-muted mb-4">@Html.T("ابدأ دورة جديدة أو استمر في دوراتك الحالية", "Start a new course or continue your current ones")</p>
            <a asp-action="Browse" class="btn btn-primary">
                <i class="feather-search me-2"></i>
                @Html.T("تصفح الدورات", "Browse Courses")
            </a>
        </div>
    </div>
}

