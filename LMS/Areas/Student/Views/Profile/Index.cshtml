@model LMS.Domain.Entities.Users.ApplicationUser
@using LMS.Services.Interfaces
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("الملف الشخصي", "Profile");
    var stats = ViewBag.Stats as LMS.Services.Interfaces.StudentLearningStats;
    var enableInstructorApplication = await PlatformSettings.GetBoolSettingAsync("EnableInstructorApplication", true);
    var instructorApplication = ViewBag.InstructorApplication as LMS.Domain.Entities.Users.InstructorApplication;
    var isAlreadyInstructor = ViewBag.IsAlreadyInstructor as bool? ?? false;
}

@section Styles {
<style>
    .profile-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 5px solid white;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .stat-box {
        text-align: center;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Profile Header -->
<div class="profile-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center">
                <div class="profile-avatar bg-white d-flex align-items-center justify-content-center me-4">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="@Model.FullName" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                    }
                    else
                    {
                        <i class="feather-user text-primary" style="font-size: 48px;"></i>
                    }
                </div>
                <div>
                    <h2 class="text-white fw-bold mb-2">@Model.FullName</h2>
                    <p class="text-white opacity-75 mb-2">@Model.Email</p>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <p class="text-white opacity-75 mb-0">@Model.Bio</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-4 text-end">
            <a asp-action="Edit" class="btn btn-light btn-lg">
                <i class="feather-edit me-2"></i>
                @Html.T("تعديل الملف", "Edit Profile")
            </a>
        </div>
    </div>
</div>

<!-- Stats -->
@if (stats != null)
{
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="stat-box">
                <div class="avatar-text avatar-lg bg-soft-primary text-primary mx-auto mb-3">
                    <i class="feather-book-open"></i>
                </div>
                <h3 class="fw-bold mb-1">@stats.TotalEnrolledCourses</h3>
                <p class="text-muted mb-0">@Html.T("دورة مسجلة", "Enrolled Courses")</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-box">
                <div class="avatar-text avatar-lg bg-soft-success text-success mx-auto mb-3">
                    <i class="feather-check-circle"></i>
                </div>
                <h3 class="fw-bold mb-1">@stats.CompletedCourses</h3>
                <p class="text-muted mb-0">@Html.T("دورة مكتملة", "Completed Courses")</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-box">
                <div class="avatar-text avatar-lg bg-soft-warning text-warning mx-auto mb-3">
                    <i class="feather-clock"></i>
                </div>
                <h3 class="fw-bold mb-1">@((stats.TotalStudyMinutes / 60.0).ToString("F0"))</h3>
                <p class="text-muted mb-0">@Html.T("ساعة تعلم", "Learning Hours")</p>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="stat-box">
                <div class="avatar-text avatar-lg bg-soft-info text-info mx-auto mb-3">
                    <i class="feather-award"></i>
                </div>
                <h3 class="fw-bold mb-1">@stats.CertificatesEarned</h3>
                <p class="text-muted mb-0">@Html.T("شهادة محصلة", "Certificates Earned")</p>
            </div>
        </div>
    </div>
}

<div class="row g-4">
    <!-- Personal Information -->
    <div class="col-lg-8">
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-user me-2"></i>
                    @Html.T("المعلومات الشخصية", "Personal Information")
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="fw-semibold text-muted fs-12 mb-2">@Html.T("الاسم الكامل", "Full Name")</label>
                        <p class="mb-0">@Model.FullName</p>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-semibold text-muted fs-12 mb-2">@Html.T("البريد الإلكتروني", "Email")</label>
                        <p class="mb-0">@Model.Email</p>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-semibold text-muted fs-12 mb-2">@Html.T("رقم الهاتف", "Phone Number")</label>
                        <p class="mb-0">@(Model.PhoneNumber ?? Html.T("غير محدد", "Not specified").ToString())</p>
                    </div>
                    <div class="col-md-6">
                        <label class="fw-semibold text-muted fs-12 mb-2">@Html.T("تاريخ الانضمام", "Join Date")</label>
                        <p class="mb-0">@Model.CreatedAt.ToString("dd MMMM yyyy")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="col-12">
                            <label class="fw-semibold text-muted fs-12 mb-2">@Html.T("نبذة عني", "About Me")</label>
                            <p class="mb-0">@Model.Bio</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        @{
            var recentActivities = ViewBag.RecentActivities as List<LMS.Domain.Entities.Analytics.ActivityLog> ?? new List<LMS.Domain.Entities.Analytics.ActivityLog>();
        }
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-activity me-2"></i>
                    @Html.T("النشاط الأخير", "Recent Activity")
                </h5>
            </div>
            <div class="card-body">
                @if (recentActivities.Any())
                {
                    <div class="timeline">
                        @foreach (var activity in recentActivities)
                        {
                            var iconClass = activity.ActivityType switch
                            {
                                "Login" => "feather-log-in text-primary",
                                "CourseEnrolled" => "feather-book-open text-success",
                                "LessonCompleted" => "feather-check-circle text-success",
                                "QuizCompleted" => "feather-edit text-info",
                                "BadgeEarned" => "feather-award text-warning",
                                "PasswordChanged" => "feather-lock text-danger",
                                "ProfileUpdated" => "feather-user text-primary",
                                _ => "feather-activity text-secondary"
                            };
                            var timeAgo = (DateTime.UtcNow - activity.CreatedAt).TotalMinutes < 60 
                                ? Html.T($"منذ {(int)(DateTime.UtcNow - activity.CreatedAt).TotalMinutes} دقيقة", $"{(int)(DateTime.UtcNow - activity.CreatedAt).TotalMinutes} minutes ago")
                                : (DateTime.UtcNow - activity.CreatedAt).TotalHours < 24 
                                    ? Html.T($"منذ {(int)(DateTime.UtcNow - activity.CreatedAt).TotalHours} ساعة", $"{(int)(DateTime.UtcNow - activity.CreatedAt).TotalHours} hours ago")
                                    : activity.CreatedAt.ToString("dd/MM/yyyy HH:mm");
                            <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                                <div class="avatar-text avatar-sm bg-soft-primary text-primary me-3">
                                    <i class="@iconClass"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1 fw-semibold">@activity.Description</p>
                                    <small class="text-muted">@timeAgo</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="avatar-text avatar-lg bg-soft-secondary text-secondary mb-3 mx-auto">
                            <i class="feather-activity"></i>
                        </div>
                        <p class="text-muted mb-0">@Html.T("لا يوجد نشاط مسجل حتى الآن", "No activity recorded yet")</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        @if (enableInstructorApplication && !isAlreadyInstructor)
        {
            <!-- Apply as Instructor Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h6 class="fw-bold mb-0 text-white">
                        <i class="feather-award me-2"></i>
                        @Html.T("كن مدرساً معنا", "Become an Instructor")
                    </h6>
                </div>
                <div class="card-body">
                    @if (instructorApplication == null)
                    {
                        <p class="text-muted mb-3">
                            @Html.T("شارك معرفتك وخبراتك مع الآخرين! تقدم الآن للانضمام كمدرس على منصتنا.", "Share your knowledge and experience! Apply now to join as an instructor on our platform.")
                        </p>
                        <a asp-area="Student" asp-controller="InstructorApplication" asp-action="Apply" class="btn btn-primary w-100">
                            <i class="feather-send me-2"></i>
                            @Html.T("التقديم كمدرس", "Apply as Instructor")
                        </a>
                    }
                    else
                    {
                        <div class="text-center py-2">
                            @switch (instructorApplication.Status)
                            {
                                case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                                    <div class="avatar-text avatar-lg bg-soft-warning text-warning mx-auto mb-3">
                                        <i class="feather-clock fs-3"></i>
                                    </div>
                                    <h6 class="fw-bold mb-2">@Html.T("طلبك قيد المراجعة", "Your application is under review")</h6>
                                    <p class="text-muted fs-12 mb-3">@Html.T("تم تقديم طلبك وسيتم مراجعته من قبل الإدارة قريباً.", "Your application has been submitted and will be reviewed soon.")</p>
                                    break;
                                case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                                    <div class="avatar-text avatar-lg bg-soft-info text-info mx-auto mb-3">
                                        <i class="feather-eye fs-3"></i>
                                    </div>
                                    <h6 class="fw-bold mb-2">@Html.T("جاري مراجعة طلبك", "Your application is being reviewed")</h6>
                                    <p class="text-muted fs-12 mb-3">@Html.T("فريق الإدارة يراجع طلبك حالياً.", "The administration team is currently reviewing your application.")</p>
                                    break;
                                case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                                    <div class="avatar-text avatar-lg bg-soft-success text-success mx-auto mb-3">
                                        <i class="feather-check-circle fs-3"></i>
                                    </div>
                                    <h6 class="fw-bold mb-2">@Html.T("تمت الموافقة على طلبك!", "Your application has been approved!")</h6>
                                    <p class="text-muted fs-12 mb-3">@Html.T("مبارك! يمكنك الآن الوصول للوحة المدرس.", "Congratulations! You can now access the instructor dashboard.")</p>
                                    <a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index" class="btn btn-success w-100">
                                        <i class="feather-log-in me-2"></i>
                                        @Html.T("الذهاب للوحة المدرس", "Go to Instructor Dashboard")
                                    </a>
                                    break;
                                case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                                    <div class="avatar-text avatar-lg bg-soft-danger text-danger mx-auto mb-3">
                                        <i class="feather-x-circle fs-3"></i>
                                    </div>
                                    <h6 class="fw-bold mb-2">@Html.T("تم رفض طلبك", "Your application was rejected")</h6>
                                    <p class="text-muted fs-12 mb-3">@Html.T("للأسف، لم يتم قبول طلبك. يمكنك التقديم مرة أخرى.", "Unfortunately, your application was not accepted. You can apply again.")</p>
                                    @if (!string.IsNullOrEmpty(instructorApplication.RejectionReason))
                                    {
                                        <div class="alert alert-light fs-12 mb-3">
                                            <strong>@Html.T("السبب:", "Reason:")</strong> @instructorApplication.RejectionReason
                                        </div>
                                    }
                                    break;
                            }
                            <a asp-area="Student" asp-controller="InstructorApplication" asp-action="Index" class="btn btn-outline-primary btn-sm w-100">
                                <i class="feather-file-text me-2"></i>
                                @Html.T("عرض تفاصيل الطلب", "View Application Details")
                            </a>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("إجراءات سريعة", "Quick Actions")</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" class="btn btn-outline-primary">
                        <i class="feather-edit me-2"></i>
                        @Html.T("تعديل الملف", "Edit Profile")
                    </a>
                    <a asp-action="Security" class="btn btn-outline-warning">
                        <i class="feather-shield me-2"></i>
                        @Html.T("الأمان", "Security")
                    </a>
                    <a asp-area="Student" asp-controller="Settings" asp-action="Index" asp-route-tab="notifications" class="btn btn-outline-info">
                        <i class="feather-bell me-2"></i>
                        @Html.T("إعدادات الإشعارات", "Notification Settings")
                    </a>
                    <a asp-action="Privacy" class="btn btn-outline-secondary">
                        <i class="feather-lock me-2"></i>
                        @Html.T("الخصوصية", "Privacy")
                    </a>
                </div>
            </div>
        </div>

        <!-- Badges -->
        @{
            var userBadges = ViewBag.UserBadges as List<LMS.Domain.Entities.Gamification.UserBadge> ?? new List<LMS.Domain.Entities.Gamification.UserBadge>();
        }
        <div class="card stretch stretch-full">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="fw-bold mb-0">
                    <i class="feather-award text-warning me-2"></i>
                    @Html.T("الشارات", "Badges")
                </h6>
                @if (userBadges.Any())
                {
                    <span class="badge bg-soft-warning text-warning">@userBadges.Count</span>
                }
            </div>
            <div class="card-body">
                @if (userBadges.Any())
                {
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        @foreach (var userBadge in userBadges)
                        {
                            <div class="text-center" title="@userBadge.Badge?.Description">
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-2">
                                    @if (!string.IsNullOrEmpty(userBadge.Badge?.IconUrl))
                                    {
                                        <img src="@userBadge.Badge.IconUrl" alt="@userBadge.Badge.Name" style="width: 32px; height: 32px;" />
                                    }
                                    else
                                    {
                                        <i class="feather-award fs-3"></i>
                                    }
                                </div>
                                <small class="text-muted">@userBadge.Badge?.Name</small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mb-2 mx-auto">
                            <i class="feather-award fs-3"></i>
                        </div>
                        <p class="text-muted mb-0 fs-12">@Html.T("ابدأ رحلتك للحصول على الشارات!", "Start your journey to earn badges!")</p>
                    </div>
                }
                <a asp-controller="Gamification" asp-action="Dashboard" class="btn btn-sm btn-outline-primary w-100 mt-3">
                    @Html.T("عرض جميع الشارات", "View All Badges")
                </a>
            </div>
        </div>
    </div>
</div>
