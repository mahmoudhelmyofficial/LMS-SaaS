@model LMS.Areas.Student.ViewModels.PrivacySettingsViewModel
@{
    ViewData["Title"] = Html.T("إعدادات الخصوصية", "Privacy Settings");
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Page Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <a asp-action="Index" class="btn btn-light me-3">
                <i class="feather-arrow-right"></i>
            </a>
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-lock text-primary me-2"></i>
                    @Html.T("إعدادات الخصوصية", "Privacy Settings")
                </h3>
                <p class="text-muted mb-0">@Html.T("تحكم في من يمكنه رؤية معلوماتك ونشاطك", "Control who can see your information and activity")</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <form asp-action="UpdatePrivacySettings" method="post">
            @Html.AntiForgeryToken()
            <!-- Profile Visibility -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">
                        <i class="feather-eye text-primary me-2"></i>
                        @Html.T("ظهور الملف الشخصي", "Profile Visibility")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label fw-bold">@Html.T("من يمكنه رؤية ملفك الشخصي؟", "Who can see your profile?")</label>
                        <select name="ProfileVisibility" class="form-select">
                            <option value="Public" selected="@(Model.ProfileVisibility == "Public")">@Html.T("الجميع", "Everyone")</option>
                            <option value="StudentsOnly" selected="@(Model.ProfileVisibility == "StudentsOnly")">@Html.T("الطلاب المسجلين فقط", "Registered Students Only")</option>
                            <option value="Private" selected="@(Model.ProfileVisibility == "Private")">@Html.T("خاص (أنا فقط)", "Private (Only Me)")</option>
                        </select>
                        <div class="form-text">
                            <i class="feather-info me-1"></i>
                            @Html.T("تحديد من يمكنه الوصول إلى ملفك الشخصي العام", "Determine who can access your public profile")
                        </div>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input type="hidden" name="ShowEmailPublicly" value="false" />
                        <input class="form-check-input" type="checkbox" name="ShowEmailPublicly" value="true" id="showEmail" @(Model.ShowEmailPublicly ? "checked" : "") />
                        <label class="form-check-label" for="showEmail">
                            <strong>@Html.T("إظهار البريد الإلكتروني", "Show Email")</strong>
                            <p class="text-muted small mb-0">@Html.T("السماح للآخرين برؤية بريدك الإلكتروني", "Allow others to see your email")</p>
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input type="hidden" name="ShowProgressPublicly" value="false" />
                        <input class="form-check-input" type="checkbox" name="ShowProgressPublicly" value="true" id="showProgress" @(Model.ShowProgressPublicly ? "checked" : "") />
                        <label class="form-check-label" for="showProgress">
                            <strong>@Html.T("إظهار تقدمي في الدورات", "Show My Course Progress")</strong>
                            <p class="text-muted small mb-0">@Html.T("السماح للآخرين برؤية تقدمك في الدورات", "Allow others to see your course progress")</p>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Activity Privacy -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">
                        <i class="feather-activity text-success me-2"></i>
                        @Html.T("خصوصية النشاط", "Activity Privacy")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input type="hidden" name="ShowCertificatesPublicly" value="false" />
                        <input class="form-check-input" type="checkbox" name="ShowCertificatesPublicly" value="true" id="showCertificates" @(Model.ShowCertificatesPublicly ? "checked" : "") />
                        <label class="form-check-label" for="showCertificates">
                            <strong>@Html.T("إظهار الشهادات", "Show Certificates")</strong>
                            <p class="text-muted small mb-0">@Html.T("عرض شهاداتك في ملفك العام", "Display your certificates on your public profile")</p>
                        </label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input type="hidden" name="ShowBadgesPublicly" value="false" />
                        <input class="form-check-input" type="checkbox" name="ShowBadgesPublicly" value="true" id="showBadges" @(Model.ShowBadgesPublicly ? "checked" : "") />
                        <label class="form-check-label" for="showBadges">
                            <strong>@Html.T("إظهار الشارات", "Show Badges")</strong>
                            <p class="text-muted small mb-0">@Html.T("عرض شاراتك وإنجازاتك", "Display your badges and achievements")</p>
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input type="hidden" name="AllowMessages" value="false" />
                        <input class="form-check-input" type="checkbox" name="AllowMessages" value="true" id="allowMessages" @(Model.AllowMessages ? "checked" : "") />
                        <label class="form-check-label" for="allowMessages">
                            <strong>@Html.T("السماح بالرسائل", "Allow Messages")</strong>
                            <p class="text-muted small mb-0">@Html.T("السماح للآخرين بإرسال رسائل لك", "Allow others to send you messages")</p>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex gap-3 justify-content-end mb-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="feather-x me-2"></i>
                    @Html.T("إلغاء", "Cancel")
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="feather-save me-2"></i>
                    @Html.T("حفظ التغييرات", "Save Changes")
                </button>
            </div>
        </form>
        
        <!-- Data Management (separate section, outside the form) -->
        <div class="card stretch stretch-full mb-4 border-danger">
            <div class="card-header bg-soft-danger">
                <h5 class="fw-bold mb-0 text-danger">
                    <i class="feather-alert-triangle me-2"></i>
                    @Html.T("إدارة البيانات", "Data Management")
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="fw-bold">@Html.T("تحميل بياناتك", "Download Your Data")</h6>
                    <p class="text-muted small mb-2">@Html.T("احصل على نسخة من جميع بياناتك الشخصية (GDPR)", "Get a copy of all your personal data (GDPR)")</p>
                    <form asp-action="DownloadData" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="feather-download me-2"></i>
                            @Html.T("تحميل البيانات", "Download Data")
                        </button>
                    </form>
                </div>

                <hr />

                <div>
                    <h6 class="fw-bold text-danger">@Html.T("حذف الحساب", "Delete Account")</h6>
                    <p class="text-muted small mb-2">@Html.T("حذف حسابك وجميع بياناتك بشكل نهائي", "Permanently delete your account and all your data")</p>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        <i class="feather-trash-2 me-2"></i>
                        @Html.T("حذف الحساب", "Delete Account")
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="feather-alert-triangle me-2"></i>
                    @Html.T("تأكيد حذف الحساب", "Confirm Account Deletion")
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <strong>@Html.T("تحذير:", "Warning:")</strong> @Html.T("هذا الإجراء لا يمكن التراجع عنه!", "This action cannot be undone!")
                </div>
                <p>@Html.T("سيتم حذف:", "The following will be deleted:")</p>
                <ul>
                    <li>@Html.T("جميع بياناتك الشخصية", "All your personal data")</li>
                    <li>@Html.T("تقدمك في الدورات", "Your course progress")</li>
                    <li>@Html.T("الشهادات والشارات", "Certificates and badges")</li>
                    <li>@Html.T("الملاحظات والإشارات المرجعية", "Notes and bookmarks")</li>
                </ul>
                <div class="mb-3">
                    <label class="form-label">@Html.T("اكتب \"حذف حسابي\" للتأكيد:", "Type \"Delete my account\" to confirm:")</label>
                    <input type="text" class="form-control" id="confirmDelete" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn" disabled>
                    @Html.T("حذف نهائياً", "Delete Permanently")
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    var confirmText = '@Html.Raw(Html.T("حذف حسابي", "Delete my account"))';
    $('#confirmDelete').on('input', function() {
        if ($(this).val() === confirmText) {
            $('#confirmDeleteBtn').prop('disabled', false);
        } else {
            $('#confirmDeleteBtn').prop('disabled', true);
        }
    });
</script>
}
