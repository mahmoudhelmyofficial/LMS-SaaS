@model LMS.Areas.Student.Controllers.PointsHistoryViewModel
@{
    ViewData["Title"] = Html.T("سجل النقاط", "Points History");
}

@section Styles {
<style>
    .points-header {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .transaction-item {
        transition: all 0.2s ease;
    }
    .transaction-item:hover {
        background-color: #f9fafb;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="points-header">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h2 class="fw-bold mb-2">
                <i class="feather-star me-2"></i>
                @Html.T("سجل النقاط", "Points History")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("تتبع جميع معاملات النقاط الخاصة بك", "Track all your point transactions")</p>
        </div>
        <div class="col-lg-6">
            <div class="row text-center g-3">
                <div class="col-4">
                    <h3 class="fw-bold mb-0">@Model.CurrentPoints</h3>
                    <small class="opacity-75">@Html.T("الرصيد الحالي", "Current balance")</small>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold mb-0 text-success">+@Model.TotalEarned</h3>
                    <small class="opacity-75">@Html.T("إجمالي المكتسب", "Total earned")</small>
                </div>
                <div class="col-4">
                    <h3 class="fw-bold mb-0">@Model.CurrentLevel</h3>
                    <small class="opacity-75">@Html.T("المستوى", "Level")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-success text-success">
                        <i class="feather-arrow-up"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0 text-success">+@Model.TotalEarned</h4>
                        <p class="text-muted mb-0">@Html.T("نقاط مكتسبة", "Points earned")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-danger text-danger">
                        <i class="feather-arrow-down"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0 text-danger">-@Model.TotalSpent</h4>
                        <p class="text-muted mb-0">@Html.T("نقاط مستخدمة", "Points spent")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transactions List -->
<div class="card stretch stretch-full">
    <div class="card-header">
        <h5 class="card-title mb-0">@Html.T("سجل المعاملات", "Transactions history")</h5>
    </div>
    <div class="card-body">
        @if (Model.Transactions.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var transaction in Model.Transactions)
                {
                    <div class="list-group-item transaction-item d-flex justify-content-between align-items-center px-0 py-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="avatar-text avatar-md @(transaction.Points > 0 ? "bg-soft-success text-success" : "bg-soft-danger text-danger")">
                                <i class="feather-@(transaction.Points > 0 ? "plus" : "minus")"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">@transaction.Reason</h6>
                                <small class="text-muted">
                                    <i class="feather-calendar me-1"></i>
                                    @transaction.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                        </div>
                        <div class="text-end">
                            <h5 class="fw-bold mb-0 @(transaction.Points > 0 ? "text-success" : "text-danger")">
                                @(transaction.Points > 0 ? "+" : "")@transaction.Points
                            </h5>
                            <small class="text-muted">@Html.T("نقطة", "point")</small>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center mb-0">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Points" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="feather-chevron-right"></i>
                                </a>
                            </li>
                        }
                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Points" asp-route-page="@i">@i</a>
                            </li>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Points" asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="feather-chevron-left"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="text-center py-5">
                <i class="feather-list fs-1 text-muted mb-3 d-block"></i>
                <h5 class="fw-bold mb-2">@Html.T("لا توجد معاملات بعد", "No transactions yet")</h5>
                <p class="text-muted">@Html.T("ابدأ التعلم لكسب النقاط!", "Start learning to earn points!")</p>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="feather-arrow-right me-2"></i>
        @Html.T("العودة للإنجازات", "Back to Achievements")
    </a>
</div>

