@model List<LMS.Areas.Student.Controllers.LeaderboardEntryViewModel>
@{
    ViewData["Title"] = Html.T("لوحة المتصدرين", "Leaderboard");
    var period = ViewBag.Period?.ToString() ?? "all";
}

@section Styles {
<style>
    .leaderboard-header {
        background: linear-gradient(135deg, #ec4899 0%, #be185d 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .rank-card {
        transition: all 0.3s ease;
    }
    .rank-card:hover {
        transform: translateX(-5px);
    }
    .rank-card.current-user {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 2px solid #f59e0b;
    }
    .top-3 .rank-1 { font-size: 48px; }
    .top-3 .rank-2 { font-size: 36px; }
    .top-3 .rank-3 { font-size: 28px; }
    .trophy-gold { color: #fbbf24; }
    .trophy-silver { color: #9ca3af; }
    .trophy-bronze { color: #d97706; }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="leaderboard-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-2">
                <i class="feather-bar-chart-2 me-2"></i>
                @Html.T("لوحة المتصدرين", "Leaderboard")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("تنافس مع الطلاب الآخرين واصعد إلى القمة!", "Compete with other students and climb to the top!")</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <div class="btn-group" role="group">
                <a asp-action="Leaderboard" asp-route-period="all" 
                   class="btn @(period == "all" ? "btn-light" : "btn-outline-light")">@Html.T("الكل", "All")</a>
                <a asp-action="Leaderboard" asp-route-period="month" 
                   class="btn @(period == "month" ? "btn-light" : "btn-outline-light")">@Html.T("هذا الشهر", "This month")</a>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <!-- Top 3 -->
    @if (Model.Count >= 3)
    {
        <div class="row g-4 mb-4 top-3">
            <!-- Second Place -->
            <div class="col-lg-4 order-lg-1 order-2">
                <div class="card stretch stretch-full text-center py-4">
                    <div class="card-body">
                        <div class="rank-2 trophy-silver mb-2">
                            <i class="feather-award"></i>
                        </div>
                        <h5 class="fw-bold mb-1">@Model[1].UserName</h5>
                        <p class="text-muted mb-2">@Html.T("المركز الثاني", "Second place")</p>
                        <h4 class="text-primary fw-bold">@Model[1].Points @Html.T("نقطة", "pts")</h4>
                        <span class="badge bg-secondary">@Html.T("المستوى", "Level") @Model[1].Level</span>
                    </div>
                </div>
            </div>
            <!-- First Place -->
            <div class="col-lg-4 order-lg-2 order-1">
                <div class="card stretch stretch-full text-center py-5 border-warning">
                    <div class="card-body">
                        <div class="rank-1 trophy-gold mb-2">
                            <i class="feather-award"></i>
                        </div>
                        <h4 class="fw-bold mb-1">@Model[0].UserName</h4>
                        <p class="text-muted mb-2">@Html.T("المركز الأول", "First place")</p>
                        <h3 class="text-warning fw-bold">@Model[0].Points @Html.T("نقطة", "pts")</h3>
                        <span class="badge bg-warning text-dark">@Html.T("المستوى", "Level") @Model[0].Level</span>
                    </div>
                </div>
            </div>
            <!-- Third Place -->
            <div class="col-lg-4 order-lg-3 order-3">
                <div class="card stretch stretch-full text-center py-4">
                    <div class="card-body">
                        <div class="rank-3 trophy-bronze mb-2">
                            <i class="feather-award"></i>
                        </div>
                        <h5 class="fw-bold mb-1">@Model[2].UserName</h5>
                        <p class="text-muted mb-2">@Html.T("المركز الثالث", "Third place")</p>
                        <h4 class="text-primary fw-bold">@Model[2].Points @Html.T("نقطة", "pts")</h4>
                        <span class="badge bg-warning text-dark">@Html.T("المستوى", "Level") @Model[2].Level</span>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Full Leaderboard -->
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title mb-0">@Html.T("الترتيب الكامل", "Full ranking")</h5>
        </div>
        <div class="card-body">
            <div class="list-group list-group-flush">
                @foreach (var entry in Model)
                {
                    <div class="list-group-item rank-card @(entry.IsCurrentUser ? "current-user" : "") d-flex align-items-center gap-3 py-3">
                        <div class="text-center" style="width: 50px;">
                            @if (entry.Rank == 1)
                            {
                                <span class="fs-4 trophy-gold"><i class="feather-award"></i></span>
                            }
                            else if (entry.Rank == 2)
                            {
                                <span class="fs-4 trophy-silver"><i class="feather-award"></i></span>
                            }
                            else if (entry.Rank == 3)
                            {
                                <span class="fs-4 trophy-bronze"><i class="feather-award"></i></span>
                            }
                            else
                            {
                                <span class="fw-bold fs-5">@entry.Rank</span>
                            }
                        </div>
                        <div class="avatar-text avatar-md bg-soft-primary text-primary">
                            @if (!string.IsNullOrEmpty(entry.ProfilePictureUrl))
                            {
                                <img src="@entry.ProfilePictureUrl" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover;" />
                            }
                            else
                            {
                                <i class="feather-user"></i>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="fw-bold mb-0">
                                @entry.UserName
                                @if (entry.IsCurrentUser)
                                {
                                    <span class="badge bg-primary ms-2">@Html.T("أنت", "You")</span>
                                }
                            </h6>
                            <small class="text-muted">@Html.T("المستوى", "Level") @entry.Level</small>
                        </div>
                        <div class="text-end">
                            <h5 class="fw-bold text-primary mb-0">@entry.Points</h5>
                            <small class="text-muted">@Html.T("نقطة", "pts")</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body text-center py-5">
            <i class="feather-users fs-1 text-muted mb-3 d-block"></i>
            <h5 class="fw-bold mb-2">@Html.T("لا توجد بيانات بعد", "No data yet")</h5>
            <p class="text-muted">@Html.T("كن أول من يتصدر لوحة المتصدرين!", "Be the first to top the leaderboard!")</p>
        </div>
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="feather-arrow-right me-2"></i>
        @Html.T("العودة للإنجازات", "Back to Achievements")
    </a>
</div>

