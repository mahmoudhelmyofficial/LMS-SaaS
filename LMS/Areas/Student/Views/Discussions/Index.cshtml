@model List<LMS.Areas.Student.ViewModels.DiscussionDisplayViewModel>
@{
    ViewData["Title"] = Html.T("المناقشات", "Discussions");
    var courseId = ViewBag.CourseId as int? ?? 0;
    var lessonId = ViewBag.LessonId as int?;
    var createModel = ViewBag.CreateModel as LMS.Areas.Student.ViewModels.CreateDiscussionViewModel;
}

@section Styles {
<style>
    .discussion-card {
        transition: all 0.2s ease;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
    }
    .discussion-card:hover {
        border-color: #667eea;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-message-circle text-primary me-2"></i>
                    @Html.T("مناقشات الدورة", "Course Discussions")
                </h3>
                <p class="text-muted mb-0">@Html.T("تفاعل مع زملائك والمدرسين", "Interact with your peers and instructors") (@(Model?.Count ?? 0) @Html.T("مناقشة", "discussion"))</p>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDiscussionModal">
                <i class="feather-plus me-2"></i>
                @Html.T("مناقشة جديدة", "New Discussion")
            </button>
        </div>
    </div>
</div>

<!-- Discussions List -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var discussion in Model)
        {
            <div class="col-12">
                <div class="card discussion-card stretch stretch-full">
                    <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col-lg-8">
                                <div class="d-flex align-items-start">
                                    @if (!string.IsNullOrEmpty(discussion.AuthorImageUrl))
                                    {
                                        <img src="@discussion.AuthorImageUrl" alt="@discussion.AuthorName" class="rounded-circle me-3" style="width: 48px; height: 48px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="avatar-text avatar-md bg-soft-primary text-primary me-3">
                                            <i class="feather-user"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            @if (discussion.IsPinned)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="feather-pin me-1"></i>
                                                    @Html.T("مثبت", "Pinned")
                                                </span>
                                            }
                                            @if (discussion.IsResolved)
                                            {
                                                <span class="badge bg-soft-success text-success">
                                                    <i class="feather-check-circle me-1"></i>
                                                    @Html.T("تم الحل", "Resolved")
                                                </span>
                                            }
                                        </div>
                                        <h5 class="fw-bold mb-2">@discussion.Title</h5>
                                        <p class="text-muted mb-2">
                                            @if (discussion.Content?.Length > 150)
                                            {
                                                <text>@discussion.Content.Substring(0, 150)...</text>
                                            }
                                            else
                                            {
                                                @discussion.Content
                                            }
                                        </p>
                                        <div class="d-flex align-items-center gap-3 fs-12 text-muted">
                                            <span>
                                                <i class="feather-user me-1"></i>
                                                @discussion.AuthorName
                                            </span>
                                            @if (!string.IsNullOrEmpty(discussion.LessonName))
                                            {
                                                <span>
                                                    <i class="feather-book-open me-1"></i>
                                                    @discussion.LessonName
                                                </span>
                                            }
                                            <span>
                                                <i class="feather-clock me-1"></i>
                                                @discussion.CreatedAt.ToRelativeTime()
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 text-end">
                                <div class="d-flex align-items-center justify-content-end gap-4 mb-2">
                                    <div class="text-center">
                                        <div class="fw-bold text-primary fs-5">@discussion.RepliesCount</div>
                                        <small class="text-muted">@Html.T("ردود", "replies")</small>
                                    </div>
                                    <div class="text-center">
                                        <div class="fw-bold text-info fs-5">@discussion.ViewCount</div>
                                        <small class="text-muted">@Html.T("مشاهدة", "views")</small>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Details" asp-route-id="@discussion.Id" class="btn btn-sm btn-primary">
                                        <i class="feather-message-circle me-2"></i>
                                        @Html.T("عرض", "View")
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="feather-message-circle fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">@Html.T("لا توجد مناقشات بعد", "No discussions yet")</h5>
                <p class="text-muted">@Html.T("كن أول من يبدأ مناقشة في هذه الدورة", "Be the first to start a discussion in this course")</p>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDiscussionModal">
                    <i class="feather-plus me-2"></i>
                    @Html.T("بدء مناقشة جديدة", "Start New Discussion")
                </button>
            </div>
        </div>
    }
</div>

<!-- Create Discussion Modal -->
<div class="modal fade" id="createDiscussionModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="feather-plus me-2"></i>
                    @Html.T("مناقشة جديدة", "New Discussion")
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="courseId" value="@courseId" />
                @if (lessonId.HasValue)
                {
                    <input type="hidden" name="lessonId" value="@lessonId" />
                }
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.T("عنوان المناقشة", "Discussion Title")</label>
                        <input type="text" class="form-control" name="title" placeholder="@Html.T("اكتب عنوان واضح لسؤالك أو موضوعك", "Write a clear title for your question or topic")" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.T("المحتوى", "Content")</label>
                        <textarea class="form-control" name="content" rows="5" placeholder="@Html.T("اشرح سؤالك أو موضوعك بالتفصيل...", "Explain your question or topic in detail...")" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="feather-send me-2"></i>
                        @Html.T("نشر المناقشة", "Post Discussion")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
