@model List<StudentLearningPathViewModel>
@{
    ViewData["Title"] = Html.T("مساراتي التعليمية", "My Learning Paths");
}

@section Styles {
<style>
    .path-card {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        transition: all 0.3s ease;
        overflow: hidden;
    }
    
    .path-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        border-color: #667eea;
    }
    
    .path-progress {
        height: 8px;
        border-radius: 10px;
        background: #e5e7eb;
        overflow: hidden;
    }
    
    .path-progress-bar {
        height: 100%;
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        transition: width 0.3s ease;
    }
    
    .path-badge {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .completion-circle {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: bold;
        font-size: 1.25rem;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="card-body py-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="text-white fw-bold mb-2">
                    <i class="feather-map me-2"></i>
                    @Html.T("مساراتي التعليمية", "My Learning Paths")
                </h2>
                <p class="text-white opacity-75 mb-0">@Html.T("تابع تقدمك في المسارات التعليمية المسجل بها", "Track your progress in enrolled learning paths")</p>
            </div>
            <div class="col-lg-4 text-center">
                <div class="bg-white bg-opacity-10 rounded p-3">
                    <h1 class="text-white fw-bold mb-0">@Model.Count</h1>
                    <p class="text-white opacity-75 mb-0">@Html.T("مسار نشط", "Active path")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Learning Paths -->
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var path in Model)
        {
            var progressPercent = path.ProgressPercentage;
            var isCompleted = progressPercent >= 100;
            
            <div class="col-lg-6">
                <div class="path-card">
                    <div class="card-body p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="flex-grow-1">
                                <h4 class="fw-bold mb-2">@path.Name</h4>
                                <p class="text-muted mb-0">@path.Description</p>
                            </div>
                            <div class="completion-circle">
                                @progressPercent.ToString("F0")%
                            </div>
                        </div>
                        
                        <!-- Progress Bar -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">@Html.T("التقدم الإجمالي", "Total progress")</small>
                                <small class="fw-bold">@path.CompletedCourses @Html.T("من", "of") @path.CoursesCount @Html.T("دورة", "courses")</small>
                            </div>
                            <div class="path-progress">
                                <div class="path-progress-bar" style="width: @progressPercent%"></div>
                            </div>
                        </div>
                        
                        <!-- Details -->
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                        <i class="feather-book-open"></i>
                                    </div>
                                    <div>
                                        <div class="fs-12 text-muted">@Html.T("إجمالي الدورات", "Total courses")</div>
                                        <div class="fw-bold">@path.CoursesCount @Html.T("دورة", "courses")</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-text avatar-sm bg-soft-success text-success">
                                        <i class="feather-check-circle"></i>
                                    </div>
                                    <div>
                                        <div class="fs-12 text-muted">@Html.T("دورات مكتملة", "Completed courses")</div>
                                        <div class="fw-bold text-success">@path.CompletedCourses @Html.T("دورة", "courses")</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-text avatar-sm bg-soft-warning text-warning">
                                        <i class="feather-clock"></i>
                                    </div>
                                    <div>
                                        <div class="fs-12 text-muted">@Html.T("مدة تقديرية", "Estimated duration")</div>
                                        <div class="fw-bold">@path.EstimatedDurationHours.ToString("F1") @Html.T("ساعة", "hours")</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-text avatar-sm bg-soft-info text-info">
                                        <i class="feather-bar-chart"></i>
                                    </div>
                                    <div>
                                        <div class="fs-12 text-muted">@Html.T("المستوى", "Level")</div>
                                        <div class="fw-bold">
                                            @if (path.Level == "Beginner")
                                            {
                                                <span>@Html.T("مبتدئ", "Beginner")</span>
                                            }
                                            else if (path.Level == "Intermediate")
                                            {
                                                <span>@Html.T("متوسط", "Intermediate")</span>
                                            }
                                            else if (path.Level == "Advanced")
                                            {
                                                <span>@Html.T("متقدم", "Advanced")</span>
                                            }
                                            else
                                            {
                                                <span>@path.Level</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Status Badges -->
                        <div class="mb-3">
                            @if (isCompleted)
                            {
                                <span class="path-badge bg-soft-success text-success">
                                    <i class="feather-check-circle"></i>
                                    @Html.T("مكتمل", "Completed")
                                </span>
                            }
                            else if (progressPercent > 0)
                            {
                                <span class="path-badge bg-soft-primary text-primary">
                                    <i class="feather-trending-up"></i>
                                    @Html.T("قيد التقدم", "In progress")
                                </span>
                            }
                            else
                            {
                                <span class="path-badge bg-soft-secondary text-secondary">
                                    <i class="feather-play-circle"></i>
                                    @Html.T("لم يبدأ", "Not started")
                                </span>
                            }
                        </div>
                        
                        <!-- Actions -->
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@path.Id" class="btn btn-primary flex-grow-1">
                                <i class="feather-eye me-2"></i>
                                @Html.T("عرض التفاصيل", "View details")
                            </a>
                            @if (!isCompleted && progressPercent > 0)
                            {
                                <a href="#" class="btn btn-success">
                                    <i class="feather-play"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Summary Stats -->
    <div class="row g-4 mt-4">
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                            <i class="feather-map"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">@Model.Count</h3>
                            <p class="text-muted mb-0">@Html.T("مسار نشط", "Active path")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">@Model.Count(p => p.ProgressPercentage >= 100)</h3>
                            <p class="text-muted mb-0">@Html.T("مسار مكتمل", "Completed path")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-warning text-warning">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">@Model.Count(p => p.ProgressPercentage > 0 && p.ProgressPercentage < 100)</h3>
                            <p class="text-muted mb-0">@Html.T("قيد التقدم", "In progress")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-soft-info text-info">
                            <i class="feather-book-open"></i>
                        </div>
                        <div>
                            <h3 class="fw-bold mb-1">@Model.Sum(p => p.CoursesCount)</h3>
                            <p class="text-muted mb-0">@Html.T("إجمالي الدورات", "Total courses")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body">
            @{
                ViewData["Icon"] = "map";
                ViewData["Title"] = Html.T("لا توجد مسارات تعليمية بعد", "No learning paths yet");
                ViewData["Message"] = Html.T("سجل في المسارات التعليمية لتنظيم رحلتك التعليمية بشكل أفضل.", "Enroll in learning paths to better organize your learning journey.");
                ViewData["ActionText"] = Html.T("استكشف المسارات", "Explore paths").ToString();
                ViewData["ActionArea"] = "Student";
                ViewData["ActionController"] = "LearningPaths";
                ViewData["ActionAction"] = "Index";
            }
            @await Html.PartialAsync("_EmptyState")
        </div>
    </div>
}

@section Scripts {
<script>
    // Animation for progress bars on load
    document.addEventListener('DOMContentLoaded', function() {
        const progressBars = document.querySelectorAll('.path-progress-bar');
        progressBars.forEach(bar => {
            const width = bar.style.width;
            bar.style.width = '0%';
            setTimeout(() => {
                bar.style.width = width;
            }, 100);
        });
    });
</script>
}

