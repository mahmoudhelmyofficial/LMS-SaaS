@model List<LMS.Areas.Student.ViewModels.StudentLearningPathViewModel>
@{
    ViewData["Title"] = Html.T("مسارات التعلم", "Learning Paths");
    var level = ViewBag.Level as string;
    var page = ViewBag.Page as int? ?? 1;
    var enrolledPaths = Model.Where(p => p.IsEnrolled).ToList();
    var availablePaths = Model.Where(p => !p.IsEnrolled).ToList();
}

@section Styles {
<style>
    .learning-path-card {
        transition: all 0.3s ease;
        border-right: 4px solid transparent;
    }
    .learning-path-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        border-right-color: var(--bs-primary);
    }
    .path-icon {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 32px;
    }
    .text-truncate-2-line {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        word-break: break-word;
        line-height: 1.5;
        max-height: 3em;
    }
    .learning-path-card .card-body {
        overflow: hidden;
    }
    .learning-path-card .flex-grow-1 {
        min-width: 0;
        overflow: hidden;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="card-body py-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h2 class="text-white fw-bold mb-2">
                    <i class="feather-map me-2"></i>
                    @Html.T("مسارات التعلم", "Learning Paths")
                </h2>
                <p class="text-white opacity-75 mb-0">@Html.T("اكتشف مسارات تعليمية متكاملة لتطوير مهاراتك بشكل منظم", "Discover integrated learning paths to develop your skills in an organized way")</p>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="feather-trending-up" style="font-size: 120px; color: rgba(255,255,255,0.2);"></i>
            </div>
        </div>
    </div>
</div>

<!-- My Enrolled Paths -->
@if (enrolledPaths.Any())
{
    <div class="mb-4">
        <h5 class="fw-bold mb-3">
            <i class="feather-briefcase text-primary me-2"></i>
            @Html.T("مساراتي الحالية", "My Current Paths")
        </h5>
        <div class="row g-4">
            @foreach (var path in enrolledPaths)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card learning-path-card stretch stretch-full">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                @if (!string.IsNullOrEmpty(path.ThumbnailUrl))
                                {
                                    <img src="@path.ThumbnailUrl" alt="@path.Name" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="path-icon me-3">
                                        <i class="feather-map"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-2">@path.Name</h5>
                                    <p class="text-muted fs-12 text-truncate-2-line mb-0">@(string.IsNullOrEmpty(path.Description) ? "" : path.Description)</p>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted fs-12">@Html.T("التقدم الإجمالي", "Overall Progress")</span>
                                    <span class="fw-semibold fs-12">@path.ProgressPercentage.ToString("F0")%</span>
                                </div>
                                <div class="progress ht-8">
                                    <div class="progress-bar bg-primary" style="width: @path.ProgressPercentage%"></div>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <small class="text-muted">
                                    <i class="feather-book-open me-1"></i>
                                    @path.CompletedCourses / @path.CoursesCount @Html.T("دورات", "courses")
                                </small>
                                <small class="text-muted">
                                    <i class="feather-clock me-1"></i>
                                    @path.EstimatedDurationHours.ToString("F1") @Html.T("ساعة", "hours")
                                </small>
                            </div>
                            
                            <a asp-action="Details" asp-route-id="@path.Id" class="btn btn-primary w-100">
                                @Html.T("متابعة المسار", "Continue Path")
                                <i class="feather-arrow-left ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- All Available Paths -->
@if (availablePaths.Any())
{
    <div class="mb-4">
        <h5 class="fw-bold mb-3">
            <i class="feather-compass text-primary me-2"></i>
            @Html.T("مسارات متاحة للالتحاق", "Paths Available to Join")
        </h5>
        <div class="row g-4">
            @foreach (var path in availablePaths)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card learning-path-card stretch stretch-full">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                @if (!string.IsNullOrEmpty(path.ThumbnailUrl))
                                {
                                    <img src="@path.ThumbnailUrl" alt="@path.Name" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="path-icon me-3">
                                        <i class="feather-map"></i>
                                    </div>
                                }
                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-2">@path.Name</h5>
                                    <p class="text-muted fs-12 text-truncate-2-line mb-0">@(string.IsNullOrEmpty(path.Description) ? "" : path.Description)</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center gap-3 mb-3 fs-12 text-muted">
                                <span>
                                    <i class="feather-book-open me-1"></i>
                                    @path.CoursesCount @Html.T("دورات", "courses")
                                </span>
                                <span>
                                    <i class="feather-clock me-1"></i>
                                    @path.EstimatedDurationHours.ToString("F1") @Html.T("ساعة", "hours")
                                </span>
                                <span class="badge bg-soft-primary text-primary">
                                    @path.Level
                                </span>
                            </div>

                            @if (path.Price > 0)
                            {
                                <div class="mb-3">
                                    <span class="fw-bold text-primary fs-5">@path.Price.ToEGP(0)</span>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3">
                                    <span class="badge bg-success">@Html.T("مجاني", "Free")</span>
                                </div>
                            }
                            
                            <a asp-action="Details" asp-route-id="@path.Id" class="btn btn-primary w-100">
                                <i class="feather-plus me-2"></i>
                                @Html.T("عرض المسار", "View Path")
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="card stretch stretch-full">
        <div class="card-body">
            @{
                ViewData["Icon"] = "map";
                ViewData["Title"] = Html.T("لا توجد مسارات متاحة", "No learning paths available");
                ViewData["Message"] = Html.T("لا توجد مسارات تعليمية متاحة حالياً. تحقق مرة أخرى لاحقاً.", "No learning paths available at the moment. Check back later.");
            }
            @await Html.PartialAsync("_EmptyState")
        </div>
    </div>
}
