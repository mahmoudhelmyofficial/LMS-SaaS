@model LMS.Areas.Student.Controllers.StudentProgressDashboardViewModel
@{
    ViewData["Title"] = Html.T("تقدم التعلم", "Learning Progress");
}

@section Styles {
<style>
    .progress-header {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .stat-card {
        transition: all 0.3s ease;
    }
    .stat-card:hover {
        transform: translateY(-5px);
    }
    .weekly-chart {
        height: 200px;
    }
    .table-responsive { -webkit-overflow-scrolling: touch; max-width: 100%; }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="progress-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-2">
                <i class="feather-trending-up me-2"></i>
                @Html.T("تقدم التعلم", "Learning Progress")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("تتبع تقدمك ومستوى أدائك في جميع الدورات", "Track your progress and performance across all courses")</p>
        </div>
    </div>
</div>

<!-- Stats Row -->
<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                        <i class="feather-book"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Stats.TotalCourses</h3>
                        <p class="text-muted fs-12 mb-0">@Html.T("إجمالي الدورات", "Total courses")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-success text-success">
                        <i class="feather-check-circle"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Stats.CompletedCourses</h3>
                        <p class="text-muted fs-12 mb-0">@Html.T("دورات مكتملة", "Completed courses")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-warning text-warning">
                        <i class="feather-clock"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@((Model.Stats.TotalStudyMinutes / 60.0).ToString("F0"))</h3>
                        <p class="text-muted fs-12 mb-0">@Html.T("ساعات دراسة", "Study hours")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-lg bg-soft-info text-info">
                        <i class="feather-award"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.AverageQuizScore.ToString("F0")%</h3>
                        <p class="text-muted fs-12 mb-0">@Html.T("متوسط الاختبارات", "Quiz average")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Weekly Progress -->
    <div class="col-lg-8">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title mb-0">@Html.T("التقدم الأسبوعي", "Weekly progress")</h5>
            </div>
            <div class="card-body">
                <div class="row text-center g-3">
                    @foreach (var day in Model.WeeklyProgress)
                    {
                        <div class="col">
                            <div class="p-2 rounded @(day.LessonsCompleted > 0 ? "bg-soft-success" : "bg-light")">
                                <strong class="d-block mb-1">@day.DayName</strong>
                                <span class="fs-12 text-muted">@day.LessonsCompleted @Html.T("درس", "lessons")</span>
                                <div class="fs-11 text-muted mt-1">@day.StudyMinutes @Html.T("دقيقة", "min")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quiz Stats -->
    <div class="col-lg-4">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title mb-0">@Html.T("إحصائيات الاختبارات", "Quiz statistics")</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">@Html.T("الناجحة", "Passed")</span>
                        <span class="fw-bold text-success">@Model.TotalQuizzesPassed</span>
                    </div>
                    <div class="progress" style="height: 6px;">
                        <div class="progress-bar bg-success" style="width: @(Model.QuizAttempts.Count > 0 ? (decimal)Model.TotalQuizzesPassed / Model.QuizAttempts.Count * 100 : 0)%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">@Html.T("المتوسط", "Average")</span>
                        <span class="fw-bold">@Model.AverageQuizScore.ToString("F0")%</span>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <span class="text-muted">@Html.T("إجمالي المحاولات", "Total attempts")</span>
                        <span class="fw-bold">@Model.QuizAttempts.Count</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enrollments Progress -->
<div class="card stretch stretch-full mt-4">
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
        <h5 class="card-title mb-0">@Html.T("تقدم الدورات", "Course progress")</h5>
        <a asp-controller="Courses" asp-action="Index" class="btn btn-sm btn-primary">
            @Html.T("عرض الكل", "View all")
        </a>
    </div>
    <div class="card-body">
        @if (Model.Enrollments.Any())
        {
            var enrollmentsList = Model.Enrollments.Take(10).ToList();
            <!-- Mobile: card list -->
            <div class="d-md-none">
                @foreach (var enrollment in enrollmentsList)
                {
                    <div class="card mb-3 border">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                @if (!string.IsNullOrEmpty(enrollment.Course.ThumbnailUrl))
                                {
                                    <img src="@enrollment.Course.ThumbnailUrl" class="rounded flex-shrink-0" style="width: 40px; height: 40px; object-fit: cover;" alt="" />
                                }
                                <div class="min-w-0 flex-grow-1">
                                    <strong class="d-block text-break">@enrollment.Course.Title</strong>
                                    <span class="fs-12 text-muted">@enrollment.Course.Instructor.FullName</span>
                                </div>
                            </div>
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fs-12">@enrollment.ProgressPercentage.ToString("F0")%</span>
                                    <span class="fs-12 text-muted">@enrollment.CompletedLessons / @enrollment.TotalLessons</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    <div class="progress-bar @(enrollment.ProgressPercentage == 100 ? "bg-success" : "bg-primary")" style="width: @enrollment.ProgressPercentage%"></div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-12 text-muted">@(enrollment.LastAccessedAt?.ToString("dd/MM/yyyy") ?? "-")</span>
                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="feather-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Desktop: table -->
            <div class="d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.T("الدورة", "Course")</th>
                                <th>@Html.T("التقدم", "Progress")</th>
                                <th>@Html.T("الدروس", "Lessons")</th>
                                <th>@Html.T("آخر وصول", "Last accessed")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in enrollmentsList)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            @if (!string.IsNullOrEmpty(enrollment.Course.ThumbnailUrl))
                                            {
                                                <img src="@enrollment.Course.ThumbnailUrl" class="rounded" style="width: 40px; height: 40px; object-fit: cover;" alt="" />
                                            }
                                            <div>
                                                <strong>@enrollment.Course.Title</strong>
                                                <div class="fs-12 text-muted">@enrollment.Course.Instructor.FullName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="width: 150px;">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span class="fs-12">@enrollment.ProgressPercentage.ToString("F0")%</span>
                                            </div>
                                            <div class="progress" style="height: 6px;">
                                                <div class="progress-bar @(enrollment.ProgressPercentage == 100 ? "bg-success" : "bg-primary")" 
                                                     style="width: @enrollment.ProgressPercentage%"></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@enrollment.CompletedLessons / @enrollment.TotalLessons</td>
                                    <td>@(enrollment.LastAccessedAt?.ToString("dd/MM/yyyy") ?? "-")</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@enrollment.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="feather-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="feather-book-open fs-1 text-muted mb-3 d-block"></i>
                <p class="text-muted">@Html.T("لا توجد دورات مسجلة بعد", "No enrolled courses yet")</p>
            </div>
        }
    </div>
</div>

