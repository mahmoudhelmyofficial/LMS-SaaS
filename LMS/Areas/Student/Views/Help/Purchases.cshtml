@{
    ViewData["Title"] = Html.T("الشراء والفواتير", "Purchases & Invoices");
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<partial name="_HelpStyles" />

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_HelpSidebar" model="@("Purchases")" />
            </div>
            <div class="col-lg-9">
                <!-- Hero Section -->
                <div class="help-content-hero">
                    <div class="help-content-icon pink">
                        <i class="feather-shopping-cart"></i>
                    </div>
                    <div>
                        <h1>الشراء والفواتير</h1>
                        <p>كل ما تحتاج معرفته عن شراء الدورات وإدارة مشترياتك</p>
                    </div>
                </div>

                <!-- Buying a Course -->
                <div class="help-section">
                    <h3><i class="feather-shopping-bag me-2" style="color: #0891b2;"></i>شراء دورة</h3>
                    
                    <p>خطوات بسيطة لشراء أي دورة:</p>
                    
                    <div class="help-steps-flow">
                        <div class="flow-step">
                            <div class="flow-number">1</div>
                            <div class="flow-content">
                                <h6>اختر الدورة</h6>
                                <p>من صفحة التصفح</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">2</div>
                            <div class="flow-content">
                                <h6>أضف للسلة</h6>
                                <p>أو اشترِ مباشرة</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">3</div>
                            <div class="flow-content">
                                <h6>طبق الكوبون</h6>
                                <p>إن وُجد</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">4</div>
                            <div class="flow-content">
                                <h6>أتمم الدفع</h6>
                                <p>بالطريقة المناسبة</p>
                            </div>
                        </div>
                    </div>

                    <div class="help-callout success mt-4">
                        <i class="feather-check-circle"></i>
                        <div>
                            <strong>وصول فوري</strong>
                            <p class="mb-0">بمجرد إتمام الدفع، ستتمكن من الوصول للدورة فوراً!</p>
                        </div>
                    </div>
                </div>

                <!-- Payment Methods -->
                <div class="help-section">
                    <h3><i class="feather-credit-card me-2" style="color: #8b5cf6;"></i>طرق الدفع</h3>
                    
                    <p>نوفر عدة طرق دفع آمنة:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon purple"><i class="feather-credit-card"></i></div>
                                <div>
                                    <h6>البطاقات الائتمانية</h6>
                                    <p>Visa, MasterCard, American Express</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon blue"><i class="feather-smartphone"></i></div>
                                <div>
                                    <h6>المحافظ الإلكترونية</h6>
                                    <p>Apple Pay, Google Pay, وغيرها</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-globe"></i></div>
                                <div>
                                    <h6>PayPal</h6>
                                    <p>دفع آمن عبر PayPal</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon orange"><i class="feather-dollar-sign"></i></div>
                                <div>
                                    <h6>التحويل البنكي</h6>
                                    <p>للمبالغ الكبيرة أو الاشتراكات</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="help-callout info mt-4">
                        <i class="feather-shield"></i>
                        <div>
                            <strong>دفع آمن 100%</strong>
                            <p class="mb-0">جميع معاملاتنا مشفرة ومحمية بأعلى معايير الأمان.</p>
                        </div>
                    </div>
                </div>

                <!-- Coupons & Discounts -->
                <div class="help-section">
                    <h3><i class="feather-tag me-2" style="color: #10b981;"></i>الكوبونات والخصومات</h3>
                    
                    <p>وفر المال باستخدام كوبونات الخصم:</p>
                    
                    <h5>كيف تستخدم الكوبون</h5>
                    <ol>
                        <li>أضف الدورات إلى سلة التسوق</li>
                        <li>في صفحة الدفع، ابحث عن حقل "كوبون الخصم"</li>
                        <li>أدخل رمز الكوبون واضغط "تطبيق"</li>
                        <li>سترى الخصم مطبقاً على المبلغ الإجمالي</li>
                    </ol>

                    <div class="help-callout warning">
                        <i class="feather-alert-triangle"></i>
                        <div>
                            <strong>ملاحظات هامة</strong>
                            <ul class="mb-0" style="margin-top: 0.5rem;">
                                <li>لكل كوبون تاريخ انتهاء - استخدمه قبل فواته</li>
                                <li>بعض الكوبونات لدورات محددة فقط</li>
                                <li>لا يمكن جمع أكثر من كوبون على نفس الطلب</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Gift Courses -->
                <div class="help-section">
                    <h3><i class="feather-gift me-2" style="color: #f59e0b;"></i>إهداء الدورات</h3>
                    
                    <p>أهدِ المعرفة لمن تحب:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon orange"><i class="feather-gift"></i></div>
                                <div>
                                    <h6>إهداء دورة</h6>
                                    <p>اشترِ دورة وأرسلها كهدية لصديق</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon pink"><i class="feather-mail"></i></div>
                                <div>
                                    <h6>رسالة مخصصة</h6>
                                    <p>أضف رسالة شخصية مع الهدية</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoices -->
                <div class="help-section">
                    <h3><i class="feather-file-text me-2" style="color: #ec4899;"></i>الفواتير</h3>
                    
                    <p>إدارة فواتيرك ومشترياتك:</p>
                    
                    <h5>الوصول للفواتير</h5>
                    <ul>
                        <li><strong>المشتريات:</strong> من القائمة الجانبية، اختر "مشترياتي"</li>
                        <li><strong>الفواتير:</strong> اختر "الفواتير" لعرض جميع فواتيرك</li>
                        <li><strong>التحميل:</strong> اضغط على أي فاتورة لتحميلها PDF</li>
                    </ul>

                    <div class="help-callout info">
                        <i class="feather-info"></i>
                        <div>
                            <strong>الفاتورة تتضمن</strong>
                            <p class="mb-0">تفاصيل المنتج، السعر، الخصم (إن وجد)، طريقة الدفع، ورقم الطلب للرجوع إليه.</p>
                        </div>
                    </div>
                </div>

                <!-- Subscriptions -->
                <div class="help-section">
                    <h3><i class="feather-repeat me-2" style="color: #6366f1;"></i>الاشتراكات</h3>
                    
                    <p>بعض الدورات أو الحزم قد تكون باشتراك شهري أو سنوي:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon indigo"><i class="feather-calendar"></i></div>
                                <div>
                                    <h6>تجديد تلقائي</h6>
                                    <p>يتجدد الاشتراك تلقائياً ما لم تلغه</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon red"><i class="feather-x-circle"></i></div>
                                <div>
                                    <h6>إلغاء سهل</h6>
                                    <p>ألغِ في أي وقت من الإعدادات</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4">إدارة اشتراكاتك</h5>
                    <ol>
                        <li>اذهب إلى "الاشتراكات" من القائمة الجانبية</li>
                        <li>شاهد اشتراكاتك النشطة وتواريخ التجديد</li>
                        <li>يمكنك إلغاء أو ترقية أي اشتراك</li>
                    </ol>
                </div>

                <!-- Refunds -->
                <div class="help-section">
                    <h3><i class="feather-rotate-ccw me-2" style="color: #ef4444;"></i>الاسترداد</h3>
                    
                    <p>إذا لم تكن راضياً عن الدورة:</p>
                    
                    <div class="help-callout warning">
                        <i class="feather-clock"></i>
                        <div>
                            <strong>سياسة الاسترداد</strong>
                            <p class="mb-0">يمكنك طلب استرداد خلال المدة المحددة لكل دورة (عادةً 7-30 يوماً) بشرط عدم إكمال نسبة كبيرة من المحتوى.</p>
                        </div>
                    </div>

                    <h5 class="mt-4">كيف تطلب استرداد</h5>
                    <div class="help-steps-flow">
                        <div class="flow-step">
                            <div class="flow-number">1</div>
                            <div class="flow-content">
                                <h6>المشتريات</h6>
                                <p>من القائمة</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">2</div>
                            <div class="flow-content">
                                <h6>اختر الدورة</h6>
                                <p>التي تريد استردادها</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">3</div>
                            <div class="flow-content">
                                <h6>طلب استرداد</h6>
                                <p>واذكر السبب</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">4</div>
                            <div class="flow-content">
                                <h6>انتظر المراجعة</h6>
                                <p>1-3 أيام عمل</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="help-navigation">
                    <a asp-action="Achievements" class="btn btn-outline-secondary">
                        <i class="feather-arrow-right me-2"></i>
                        الشهادات والإنجازات
                    </a>
                    <a asp-action="Communication" class="btn btn-primary">
                        التواصل والمجتمع
                        <i class="feather-arrow-left ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

