@{
    ViewData["Title"] = Html.T("الشهادات والإنجازات", "Certificates & Achievements");
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<partial name="_HelpStyles" />

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_HelpSidebar" model="@("Achievements")" />
            </div>
            <div class="col-lg-9">
                <!-- Hero Section -->
                <div class="help-content-hero">
                    <div class="help-content-icon orange">
                        <i class="feather-award"></i>
                    </div>
                    <div>
                        <h1>الشهادات والإنجازات</h1>
                        <p>احتفل بإنجازاتك واحصل على شهادات معتمدة تعزز مسيرتك</p>
                    </div>
                </div>

                <!-- Certificates -->
                <div class="help-section">
                    <h3><i class="feather-file-text me-2" style="color: #0891b2;"></i>الشهادات</h3>
                    
                    <p>عند إكمال دورة بنجاح، يمكنك الحصول على شهادة إتمام:</p>
                    
                    <h5>متطلبات الحصول على الشهادة</h5>
                    <div class="checklist-card">
                        <ul class="help-checklist">
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>إكمال جميع الدروس</strong>
                                    <span>شاهد 100% من محتوى الدورة</span>
                                </div>
                            </li>
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>اجتياز الاختبارات</strong>
                                    <span>احصل على درجة النجاح المطلوبة</span>
                                </div>
                            </li>
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>تسليم الواجبات (إن وجدت)</strong>
                                    <span>أكمل جميع الواجبات المطلوبة</span>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <h5 class="mt-4">كيف تحصل على شهادتك</h5>
                    <div class="help-steps-flow">
                        <div class="flow-step">
                            <div class="flow-number">1</div>
                            <div class="flow-content">
                                <h6>أكمل الدورة</h6>
                                <p>جميع المتطلبات</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">2</div>
                            <div class="flow-content">
                                <h6>الشهادات</h6>
                                <p>من القائمة الجانبية</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">3</div>
                            <div class="flow-content">
                                <h6>اختر الشهادة</h6>
                                <p>من قائمة شهاداتك</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">4</div>
                            <div class="flow-content">
                                <h6>تحميل/مشاركة</h6>
                                <p>PDF أو رابط</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Certificate Features -->
                <div class="help-section">
                    <h3><i class="feather-star me-2" style="color: #8b5cf6;"></i>مميزات الشهادات</h3>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon purple"><i class="feather-shield"></i></div>
                                <div>
                                    <h6>رقم تحقق فريد</h6>
                                    <p>كل شهادة لها رقم للتحقق من صحتها</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon blue"><i class="feather-download"></i></div>
                                <div>
                                    <h6>تحميل PDF</h6>
                                    <p>احفظ نسخة على جهازك</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-share-2"></i></div>
                                <div>
                                    <h6>مشاركة على LinkedIn</h6>
                                    <p>أضفها لملفك المهني</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon orange"><i class="feather-link"></i></div>
                                <div>
                                    <h6>رابط دائم</h6>
                                    <p>شارك رابط الشهادة مع أي شخص</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gamification -->
                <div class="help-section">
                    <h3><i class="feather-zap me-2" style="color: #10b981;"></i>نظام الإنجازات والنقاط</h3>
                    
                    <p>اكسب نقاطاً وشارات أثناء رحلة تعلمك:</p>
                    
                    <h5>كيف تكسب النقاط</h5>
                    <div class="help-table-wrapper">
                        <table class="help-table">
                            <thead>
                                <tr>
                                    <th>النشاط</th>
                                    <th>النقاط</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td>إكمال درس</td><td>+10 نقاط</td></tr>
                                <tr><td>إكمال وحدة</td><td>+50 نقطة</td></tr>
                                <tr><td>اجتياز اختبار</td><td>+25 نقطة</td></tr>
                                <tr><td>تسليم واجب</td><td>+30 نقطة</td></tr>
                                <tr><td>إكمال دورة</td><td>+100 نقطة</td></tr>
                                <tr><td>كتابة تقييم</td><td>+15 نقطة</td></tr>
                                <tr><td>الدخول يومياً (متتالي)</td><td>+5 نقاط</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Badges -->
                <div class="help-section">
                    <h3><i class="feather-hexagon me-2" style="color: #f59e0b;"></i>الشارات (Badges)</h3>
                    
                    <p>الشارات هي رموز تقدير تحصل عليها عند تحقيق إنجازات معينة:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon orange mx-auto mb-3"><i class="feather-sunrise"></i></div>
                                <h6>المبتدئ النشيط</h6>
                                <p>أكمل أول دورة</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon cyan mx-auto mb-3"><i class="feather-zap"></i></div>
                                <h6>سريع التعلم</h6>
                                <p>أكمل 5 دورات</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon purple mx-auto mb-3"><i class="feather-star"></i></div>
                                <h6>طالب متميز</h6>
                                <p>احصل على 90%+ في 3 اختبارات</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon green mx-auto mb-3"><i class="feather-calendar"></i></div>
                                <h6>المثابر</h6>
                                <p>ادخل 7 أيام متتالية</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon pink mx-auto mb-3"><i class="feather-message-circle"></i></div>
                                <h6>المتفاعل</h6>
                                <p>شارك في 10 نقاشات</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="feature-card text-center">
                                <div class="feature-icon indigo mx-auto mb-3"><i class="feather-award"></i></div>
                                <h6>الخبير</h6>
                                <p>أكمل مسار تعليمي كامل</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Leaderboard -->
                <div class="help-section">
                    <h3><i class="feather-trending-up me-2" style="color: #ec4899;"></i>لوحة المتصدرين</h3>
                    
                    <p>تنافس مع زملائك وشاهد ترتيبك بين المتعلمين:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon pink"><i class="feather-globe"></i></div>
                                <div>
                                    <h6>الترتيب العام</h6>
                                    <p>مقارنة مع جميع المتعلمين</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon indigo"><i class="feather-calendar"></i></div>
                                <div>
                                    <h6>الترتيب الأسبوعي</h6>
                                    <p>تحديث أسبوعي للمراكز</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="help-callout info mt-4">
                        <i class="feather-info"></i>
                        <div>
                            <strong>كيف ترتقي في الترتيب</strong>
                            <p class="mb-0">اكسب المزيد من النقاط من خلال الدراسة المستمرة وإكمال الدورات واجتياز الاختبارات.</p>
                        </div>
                    </div>
                </div>

                <!-- Sharing Achievements -->
                <div class="help-section">
                    <h3><i class="feather-share-2 me-2" style="color: #6366f1;"></i>مشاركة إنجازاتك</h3>
                    
                    <p>شارك إنجازاتك مع العالم:</p>
                    
                    <ul>
                        <li><strong>LinkedIn:</strong> أضف شهاداتك لملفك المهني مباشرة</li>
                        <li><strong>Twitter/X:</strong> شارك إنجازك مع متابعيك</li>
                        <li><strong>Facebook:</strong> احتفل مع أصدقائك</li>
                        <li><strong>رابط مباشر:</strong> أرسل رابط الشهادة لأي جهة</li>
                    </ul>
                </div>

                <!-- Navigation -->
                <div class="help-navigation">
                    <a asp-action="Assessments" class="btn btn-outline-secondary">
                        <i class="feather-arrow-right me-2"></i>
                        الاختبارات والواجبات
                    </a>
                    <a asp-action="Purchases" class="btn btn-primary">
                        الشراء والفواتير
                        <i class="feather-arrow-left ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

