@{
    ViewData["Title"] = Html.T("مركز المساعدة", "Help Center");
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<partial name="_HelpStyles" />

<div class="main-content">
    <div class="container-fluid">
        <!-- Hero Section -->
        <div class="help-hero">
            <h1><i class="feather-book-open me-3"></i>@Html.T("مركز مساعدة الطالب", "Student Help Center")</h1>
            <p>@Html.T("دليلك الشامل لرحلة تعليمية ناجحة ومثمرة", "Your complete guide for a successful learning journey")</p>
            
            <!-- Search Box -->
            <form asp-action="Search" method="get" class="help-search">
                <input type="text" name="query" class="form-control" placeholder="@Html.T("ابحث عن أي موضوع... (مثال: كيف أشاهد الدورة؟)", "Search any topic... (e.g. How do I watch a course?)")">
                <i class="feather-search"></i>
            </form>
            
            <!-- Quick Stats -->
            <div class="help-stats">
                <div class="help-stat">
                    <span class="help-stat-number">8</span>
                    <span class="help-stat-label">@Html.T("أقسام تعليمية", "Learning sections")</span>
                </div>
                <div class="help-stat">
                    <span class="help-stat-number">50+</span>
                    <span class="help-stat-label">@Html.T("دليل ونصيحة", "Guides & tips")</span>
                </div>
                <div class="help-stat">
                    <span class="help-stat-number">24/7</span>
                    <span class="help-stat-label">@Html.T("دعم متاح", "Support available")</span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <a asp-action="GettingStarted" class="action-card primary">
                    <i class="feather-zap"></i>
                    <div>
                        <h6>@Html.T("ابدأ الآن", "Get Started")</h6>
                        <p>@Html.T("دليل البدء السريع للمبتدئين", "Quick start guide for beginners")</p>
                    </div>
                    <i class="feather-arrow-left action-arrow"></i>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-area="Student" asp-controller="Courses" asp-action="Browse" class="action-card secondary">
                    <i class="feather-search"></i>
                    <div>
                        <h6>@Html.T("تصفح الدورات", "Browse Courses")</h6>
                        <p>@Html.T("اكتشف دورات جديدة تناسبك", "Discover new courses that suit you")</p>
                    </div>
                    <i class="feather-arrow-left action-arrow"></i>
                </a>
            </div>
            <div class="col-md-4">
                <a asp-area="Student" asp-controller="Support" asp-action="Index" class="action-card secondary">
                    <i class="feather-headphones"></i>
                    <div>
                        <h6>@Html.T("تواصل مع الدعم", "Contact Support")</h6>
                        <p>@Html.T("فريقنا جاهز لمساعدتك", "Our team is ready to help you")</p>
                    </div>
                    <i class="feather-arrow-left action-arrow"></i>
                </a>
            </div>
        </div>

        <!-- Help Categories -->
        <div class="row g-4">
            <!-- Getting Started -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="GettingStarted" class="help-category-card">
                    <div class="help-category-icon cyan">
                        <i class="feather-play-circle"></i>
                    </div>
                    <h4>@Html.T("دليل البدء السريع", "Getting Started Guide")</h4>
                    <p>@Html.T("كل ما تحتاجه للانطلاق في رحلتك التعليمية", "Everything you need to start your learning journey")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("إعداد حسابك الشخصي", "Set up your account")</li>
                        <li><i class="feather-check"></i>@Html.T("جولة في لوحة التحكم", "Dashboard tour")</li>
                        <li><i class="feather-check"></i>@Html.T("التسجيل في أول دورة", "Enroll in your first course")</li>
                        <li><i class="feather-check"></i>@Html.T("نصائح للنجاح في التعلم", "Tips for learning success")</li>
                    </ul>
                </a>
            </div>

            <!-- My Courses -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="MyCourses" class="help-category-card">
                    <div class="help-category-icon blue">
                        <i class="feather-book-open"></i>
                    </div>
                    <h4>@Html.T("دوراتي", "My Courses")</h4>
                    <p>@Html.T("إدارة دوراتك ومتابعة تقدمك التعليمي", "Manage your courses and track your progress")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("عرض الدورات المسجلة", "View enrolled courses")</li>
                        <li><i class="feather-check"></i>@Html.T("الدورات قيد الدراسة", "Courses in progress")</li>
                        <li><i class="feather-check"></i>@Html.T("تصفح واكتشاف دورات جديدة", "Browse and discover new courses")</li>
                        <li><i class="feather-check"></i>@Html.T("المسارات والحزم التعليمية", "Learning paths and bundles")</li>
                    </ul>
                </a>
            </div>

            <!-- Learning Experience -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="Learning" class="help-category-card">
                    <div class="help-category-icon green">
                        <i class="feather-play"></i>
                    </div>
                    <h4>@Html.T("تجربة التعلم", "Learning Experience")</h4>
                    <p>@Html.T("استفد من أدوات التعلم التفاعلية", "Make the most of interactive learning tools")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("مشاهدة الدروس والفيديوهات", "Watching lessons and videos")</li>
                        <li><i class="feather-check"></i>@Html.T("الحصص المباشرة Live", "Live sessions")</li>
                        <li><i class="feather-check"></i>@Html.T("تدوين الملاحظات", "Taking notes")</li>
                        <li><i class="feather-check"></i>@Html.T("الإشارات المرجعية", "Bookmarks")</li>
                    </ul>
                </a>
            </div>

            <!-- Assessments -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="Assessments" class="help-category-card">
                    <div class="help-category-icon purple">
                        <i class="feather-check-square"></i>
                    </div>
                    <h4>@Html.T("الاختبارات والواجبات", "Quizzes & Assignments")</h4>
                    <p>@Html.T("اختبر معلوماتك وقدم واجباتك", "Test your knowledge and submit assignments")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("حل الاختبارات", "Taking quizzes")</li>
                        <li><i class="feather-check"></i>@Html.T("تقديم الواجبات", "Submitting assignments")</li>
                        <li><i class="feather-check"></i>@Html.T("مراجعة النتائج والدرجات", "Reviewing results and grades")</li>
                        <li><i class="feather-check"></i>@Html.T("إعادة المحاولة", "Retrying")</li>
                    </ul>
                </a>
            </div>

            <!-- Achievements -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="Achievements" class="help-category-card">
                    <div class="help-category-icon orange">
                        <i class="feather-award"></i>
                    </div>
                    <h4>@Html.T("الشهادات والإنجازات", "Certificates & Achievements")</h4>
                    <p>@Html.T("احتفل بإنجازاتك واحصل على شهاداتك", "Celebrate your achievements and earn certificates")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("الحصول على الشهادات", "Earning certificates")</li>
                        <li><i class="feather-check"></i>@Html.T("نظام الإنجازات والشارات", "Achievements and badges")</li>
                        <li><i class="feather-check"></i>@Html.T("لوحة المتصدرين", "Leaderboard")</li>
                        <li><i class="feather-check"></i>@Html.T("مشاركة إنجازاتك", "Sharing your achievements")</li>
                    </ul>
                </a>
            </div>

            <!-- Purchases -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="Purchases" class="help-category-card">
                    <div class="help-category-icon pink">
                        <i class="feather-shopping-cart"></i>
                    </div>
                    <h4>@Html.T("الشراء والفواتير", "Purchases & Invoices")</h4>
                    <p>@Html.T("إدارة مشترياتك والاشتراكات", "Manage your purchases and subscriptions")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("شراء الدورات", "Purchasing courses")</li>
                        <li><i class="feather-check"></i>@Html.T("استخدام كوبونات الخصم", "Using discount coupons")</li>
                        <li><i class="feather-check"></i>@Html.T("طرق الدفع المتاحة", "Payment methods")</li>
                        <li><i class="feather-check"></i>@Html.T("إدارة الفواتير والاشتراكات", "Managing invoices and subscriptions")</li>
                    </ul>
                </a>
            </div>

            <!-- Communication -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="Communication" class="help-category-card">
                    <div class="help-category-icon indigo">
                        <i class="feather-message-circle"></i>
                    </div>
                    <h4>@Html.T("التواصل والمجتمع", "Communication & Community")</h4>
                    <p>@Html.T("تواصل مع المدربين والطلاب الآخرين", "Connect with instructors and other students")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("الرسائل والمحادثات", "Messages and conversations")</li>
                        <li><i class="feather-check"></i>@Html.T("المنتديات والنقاشات", "Forums and discussions")</li>
                        <li><i class="feather-check"></i>@Html.T("مجموعات الدراسة", "Study groups")</li>
                        <li><i class="feather-check"></i>@Html.T("كتابة التقييمات", "Writing reviews")</li>
                    </ul>
                </a>
            </div>

            <!-- FAQ -->
            <div class="col-lg-4 col-md-6">
                <a asp-action="FAQ" class="help-category-card">
                    <div class="help-category-icon red">
                        <i class="feather-help-circle"></i>
                    </div>
                    <h4>@Html.T("الأسئلة الشائعة", "FAQ")</h4>
                    <p>@Html.T("إجابات سريعة لأكثر الأسئلة شيوعاً", "Quick answers to the most common questions")</p>
                    <ul class="help-category-topics">
                        <li><i class="feather-check"></i>@Html.T("مشاكل تسجيل الدخول", "Login issues")</li>
                        <li><i class="feather-check"></i>@Html.T("مشاكل تشغيل الفيديو", "Video playback issues")</li>
                        <li><i class="feather-check"></i>@Html.T("استرداد الأموال", "Refunds")</li>
                        <li><i class="feather-check"></i>@Html.T("الأسئلة التقنية", "Technical questions")</li>
                    </ul>
                </a>
            </div>
        </div>

        <!-- Quick Links Section -->
        <div class="quick-links-section">
            <h4 class="mb-4">
                <i class="feather-zap me-2" style="color: #0891b2;"></i>
                @Html.T("روابط سريعة", "Quick Links")
            </h4>
            <div class="row g-3">
                <div class="col-lg-3 col-md-6">
                    <a asp-area="Student" asp-controller="Courses" asp-action="Index" class="quick-link-card">
                        <i class="feather-book-open"></i>
                        <span>@Html.T("دوراتي", "My Courses")</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <a asp-area="Student" asp-controller="Certificates" asp-action="Index" class="quick-link-card">
                        <i class="feather-award"></i>
                        <span>@Html.T("شهاداتي", "My Certificates")</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <a asp-area="Student" asp-controller="Purchases" asp-action="Index" class="quick-link-card">
                        <i class="feather-shopping-bag"></i>
                        <span>@Html.T("مشترياتي", "My Purchases")</span>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6">
                    <a asp-area="Student" asp-controller="Settings" asp-action="Index" class="quick-link-card">
                        <i class="feather-settings"></i>
                        <span>@Html.T("الإعدادات", "Settings")</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

