@{
    ViewData["Title"] = Html.T("الاختبارات والواجبات", "Quizzes & Assignments");
    Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
}

<partial name="_HelpStyles" />

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3">
                <partial name="_HelpSidebar" model="@("Assessments")" />
            </div>
            <div class="col-lg-9">
                <!-- Hero Section -->
                <div class="help-content-hero">
                    <div class="help-content-icon purple">
                        <i class="feather-check-square"></i>
                    </div>
                    <div>
                        <h1>الاختبارات والواجبات</h1>
                        <p>اختبر معلوماتك وقدم واجباتك لقياس تقدمك</p>
                    </div>
                </div>

                <!-- Quizzes -->
                <div class="help-section">
                    <h3><i class="feather-help-circle me-2" style="color: #0891b2;"></i>الاختبارات (Quizzes)</h3>
                    
                    <p>الاختبارات تساعدك على التأكد من فهمك للمادة:</p>
                    
                    <h5>أنواع الأسئلة</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon cyan"><i class="feather-check-circle"></i></div>
                                <div>
                                    <h6>اختيار من متعدد</h6>
                                    <p>اختر الإجابة الصحيحة من عدة خيارات</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon blue"><i class="feather-toggle-right"></i></div>
                                <div>
                                    <h6>صح أو خطأ</h6>
                                    <p>حدد صحة العبارة المعطاة</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-edit-2"></i></div>
                                <div>
                                    <h6>إجابة قصيرة</h6>
                                    <p>اكتب إجابتك بكلماتك</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon purple"><i class="feather-shuffle"></i></div>
                                <div>
                                    <h6>الترتيب والمطابقة</h6>
                                    <p>رتب أو طابق العناصر بشكل صحيح</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4">كيف تبدأ الاختبار</h5>
                    <div class="help-steps-flow">
                        <div class="flow-step">
                            <div class="flow-number">1</div>
                            <div class="flow-content">
                                <h6>افتح الاختبار</h6>
                                <p>من صفحة الدورة</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">2</div>
                            <div class="flow-content">
                                <h6>اقرأ التعليمات</h6>
                                <p>الوقت وعدد المحاولات</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">3</div>
                            <div class="flow-content">
                                <h6>أجب الأسئلة</h6>
                                <p>بترتيب أو عشوائياً</p>
                            </div>
                        </div>
                        <i class="feather-arrow-left flow-arrow"></i>
                        <div class="flow-step">
                            <div class="flow-number">4</div>
                            <div class="flow-content">
                                <h6>أرسل الإجابات</h6>
                                <p>واستلم نتيجتك</p>
                            </div>
                        </div>
                    </div>

                    <div class="help-callout warning mt-4">
                        <i class="feather-alert-triangle"></i>
                        <div>
                            <strong>انتبه للوقت!</strong>
                            <p class="mb-0">بعض الاختبارات لها وقت محدد. راقب العداد في أعلى الشاشة ووزع وقتك على الأسئلة.</p>
                        </div>
                    </div>
                </div>

                <!-- Quiz Settings -->
                <div class="help-section">
                    <h3><i class="feather-settings me-2" style="color: #8b5cf6;"></i>إعدادات الاختبارات</h3>
                    
                    <div class="help-table-wrapper">
                        <table class="help-table">
                            <thead>
                                <tr>
                                    <th>الإعداد</th>
                                    <th>الوصف</th>
                                    <th>ما يجب معرفته</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><i class="feather-clock text-warning"></i> الوقت المحدد</td>
                                    <td>مدة زمنية للإجابة</td>
                                    <td>يُسلَّم تلقائياً عند انتهاء الوقت</td>
                                </tr>
                                <tr>
                                    <td><i class="feather-refresh-cw text-primary"></i> المحاولات</td>
                                    <td>عدد المرات المسموحة</td>
                                    <td>قد تُحتسب أفضل محاولة أو الأخيرة</td>
                                </tr>
                                <tr>
                                    <td><i class="feather-shuffle text-success"></i> ترتيب عشوائي</td>
                                    <td>الأسئلة بترتيب مختلف</td>
                                    <td>ركز على الفهم وليس الحفظ</td>
                                </tr>
                                <tr>
                                    <td><i class="feather-eye text-info"></i> إظهار النتيجة</td>
                                    <td>متى تظهر الدرجة</td>
                                    <td>فوراً أو بعد مراجعة المدرب</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Assignments -->
                <div class="help-section">
                    <h3><i class="feather-file-text me-2" style="color: #10b981;"></i>الواجبات (Assignments)</h3>
                    
                    <p>الواجبات تتطلب منك تقديم عمل مكتوب أو ملفات للتقييم:</p>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-upload"></i></div>
                                <div>
                                    <h6>رفع الملفات</h6>
                                    <p>ارفع مستنداتك أو صورك أو ملفاتك</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon blue"><i class="feather-edit"></i></div>
                                <div>
                                    <h6>الكتابة مباشرة</h6>
                                    <p>اكتب إجابتك في محرر النصوص</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h5 class="mt-4">خطوات تسليم الواجب</h5>
                    <div class="checklist-card">
                        <ul class="help-checklist">
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>1. اقرأ تعليمات الواجب بعناية</strong>
                                    <span>تأكد من فهم المطلوب والمعايير</span>
                                </div>
                            </li>
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>2. أعد عملك خارج المنصة</strong>
                                    <span>استخدم Word أو أي برنامج مناسب</span>
                                </div>
                            </li>
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>3. ارفع ملفك أو اكتب مباشرة</strong>
                                    <span>تأكد من صيغة الملف المطلوبة</span>
                                </div>
                            </li>
                            <li>
                                <i class="feather-check-circle"></i>
                                <div>
                                    <strong>4. أرسل قبل الموعد النهائي</strong>
                                    <span>التأخير قد يؤثر على درجتك</span>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="help-callout info mt-4">
                        <i class="feather-info"></i>
                        <div>
                            <strong>صيغ الملفات المدعومة</strong>
                            <p class="mb-0">عادةً: PDF, DOC, DOCX, PNG, JPG. تحقق من تعليمات كل واجب للتأكد.</p>
                        </div>
                    </div>
                </div>

                <!-- Results & Grades -->
                <div class="help-section">
                    <h3><i class="feather-award me-2" style="color: #f59e0b;"></i>النتائج والدرجات</h3>
                    
                    <p>متابعة نتائجك ومراجعة أدائك:</p>
                    
                    <h5>أين أجد درجاتي؟</h5>
                    <ul>
                        <li><strong>داخل الدورة:</strong> كل اختبار/واجب يظهر درجتك بجانبه</li>
                        <li><strong>صفحة التقدم:</strong> ملخص شامل لأدائك في الدورة</li>
                        <li><strong>الشهادة:</strong> عند إكمال الدورة بنجاح</li>
                    </ul>

                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon orange"><i class="feather-check-circle"></i></div>
                                <div>
                                    <h6>درجة النجاح</h6>
                                    <p>عادةً 60% أو 70% حسب الدورة</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-refresh-cw"></i></div>
                                <div>
                                    <h6>إعادة المحاولة</h6>
                                    <p>إذا لم تنجح ولديك محاولات متبقية</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tips for Success -->
                <div class="help-section">
                    <h3><i class="feather-star me-2" style="color: #ec4899;"></i>نصائح للنجاح</h3>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon pink"><i class="feather-book-open"></i></div>
                                <div>
                                    <h6>راجع الدروس أولاً</h6>
                                    <p>شاهد الدروس قبل الاختبار</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon indigo"><i class="feather-clock"></i></div>
                                <div>
                                    <h6>نظم وقتك</h6>
                                    <p>لا تترك الواجبات للحظة الأخيرة</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon blue"><i class="feather-eye"></i></div>
                                <div>
                                    <h6>راجع إجاباتك</h6>
                                    <p>تأكد قبل الإرسال النهائي</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="feature-card">
                                <div class="feature-icon green"><i class="feather-message-circle"></i></div>
                                <div>
                                    <h6>اسأل المدرب</h6>
                                    <p>إذا لم تفهم سؤالاً معيناً</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="help-navigation">
                    <a asp-action="Learning" class="btn btn-outline-secondary">
                        <i class="feather-arrow-right me-2"></i>
                        تجربة التعلم
                    </a>
                    <a asp-action="Achievements" class="btn btn-primary">
                        الشهادات والإنجازات
                        <i class="feather-arrow-left ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

