@model DirectMessage
@{
    ViewData["Title"] = Html.T("تفاصيل الرسالة", "Message Details");
}

@section Styles {
<style>
    .message-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px;
        padding: 30px;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Back Button -->
<div class="mb-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="feather-arrow-right me-2"></i>
        @Html.T("العودة للبريد الوارد", "Back to Inbox")
    </a>
</div>

<!-- Message Header -->
<div class="message-header mb-4">
    <h3 class="text-white fw-bold mb-3">@Model.Subject</h3>
    <div class="d-flex align-items-center gap-3">
        <div class="d-flex align-items-center text-white">
            <div class="avatar-text avatar-md bg-white bg-opacity-25 text-white me-2">
                <i class="feather-user"></i>
            </div>
            <div>
                <strong class="d-block">@Model.Sender.FullName</strong>
                <small class="opacity-75">@Model.SentAt.ToString("dd MMMM yyyy, HH:mm", new System.Globalization.CultureInfo(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "ar-SA" : "en-US"))</small>
            </div>
        </div>
        <div class="text-white">
            <span class="badge bg-white bg-opacity-25 text-white">
                @Html.T("إلى:", "To:") @Model.Recipient.FullName
            </span>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Message Content -->
    <div class="col-lg-8">
        <div class="card stretch stretch-full mb-4">
            <div class="card-body">
                <div class="message-content">
                    @Html.Raw(Model.Content)
                </div>

                <!-- Attachments -->
                @if (!string.IsNullOrEmpty(Model.AttachmentUrl))
                {
                    <div class="border-top pt-4 mt-4">
                        <h6 class="fw-bold mb-3">
                            <i class="feather-paperclip me-2"></i>
                            @Html.T("المرفقات", "Attachments")
                        </h6>
                        <div class="list-group">
                            <a href="@Model.AttachmentUrl" class="list-group-item list-group-item-action" download>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <i class="feather-file text-primary fs-4 me-3"></i>
                                        <div>
                                            <strong class="d-block">@Html.T("مرفق", "Attachment")</strong>
                                        </div>
                                    </div>
                                    <i class="feather-download"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Reply Form -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-corner-up-right me-2"></i>
                    @Html.T("الرد", "Reply")
                </h5>
            </div>
            <div class="card-body">
                <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-primary w-100">
                    <i class="feather-send me-2"></i>
                    @Html.T("الرد على الرسالة", "Reply to Message")
                </a>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Actions -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("إجراءات", "Actions")</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('@Html.Raw(Html.T("هل تريد حذف هذه الرسالة؟", "Are you sure you want to delete this message?").Replace("'", "\\'"))')">
                            <i class="feather-trash-2 me-2"></i>
                            @Html.T("حذف", "Delete")
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sender Info -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("معلومات المرسل", "Sender Information")</h6>
            </div>
            <div class="card-body text-center">
                <div class="avatar-text avatar-xl bg-primary text-white mx-auto mb-3">
                    <i class="feather-user fs-3"></i>
                </div>
                <h6 class="fw-bold mb-1">@Model.Sender.FullName</h6>
                <p class="text-muted fs-12 mb-3">@Model.Sender.Email</p>
                <a asp-action="Compose" asp-route-receiverId="@Model.SenderId" class="btn btn-primary btn-sm w-100">
                    <i class="feather-message-circle me-2"></i>
                    @Html.T("إرسال رسالة", "Send Message")
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Auto-dismiss success messages
    setTimeout(function() {
        var alert = document.querySelector('.alert-success');
        if (alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }
    }, 5000);
</script>
}

