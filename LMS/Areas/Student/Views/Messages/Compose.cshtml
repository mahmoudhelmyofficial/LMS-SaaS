@model LMS.Areas.Student.ViewModels.ComposeMessageViewModel
@{
    ViewData["Title"] = Html.T("إرسال رسالة", "Compose Message");
}

@section Styles {
<style>
    .recipient-tag {
        display: inline-block;
        background: #eff6ff;
        padding: 5px 12px;
        border-radius: 20px;
        margin: 3px;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <h3 class="fw-bold mb-2">
            <i class="feather-edit text-primary me-2"></i>
            @Html.T("رسالة جديدة", "New message")
        </h3>
        <p class="text-muted mb-0">@Html.T("أرسل رسالة إلى المدرس أو زملائك", "Send a message to instructor or peers")</p>
    </div>
</div>

<div class="row g-4">
    <!-- Compose Form -->
    <div class="col-lg-8">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <form asp-action="Send" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-4">
                        <label asp-for="ReceiverId" class="form-label">@Html.T("إلى *", "To *")</label>
                        <select asp-for="ReceiverId" class="form-select" required>
                            <option value="">@Html.T("اختر المستلم", "Select recipient")</option>
                            @if (ViewBag.Instructors != null)
                            {
                                foreach (var instructor in ViewBag.Instructors)
                                {
                                    <option value="@instructor.Id">@instructor.FullName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ReceiverId" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Subject" class="form-label">@Html.T("الموضوع *", "Subject *")</label>
                        <input asp-for="Subject" type="text" class="form-control" placeholder="@Html.T("موضوع الرسالة", "Message subject")" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Body" class="form-label">@Html.T("الرسالة *", "Message *")</label>
                        <textarea asp-for="Body" class="form-control" rows="12" placeholder="@Html.T("اكتب رسالتك هنا...", "Write your message here...")" required></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="feather-send me-2"></i>
                            @Html.T("إرسال", "Send")
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="feather-x me-2"></i>
                            @Html.T("إلغاء", "Cancel")
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Templates -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-file-text me-2"></i>
                    @Html.T("قوالب سريعة", "Quick templates")
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button class="btn btn-sm btn-outline-primary text-start" onclick="useTemplate('question')">
                        <i class="feather-help-circle me-2"></i>
                        @Html.T("سؤال عن الدرس", "Question about lesson")
                    </button>
                    <button class="btn btn-sm btn-outline-primary text-start" onclick="useTemplate('help')">
                        <i class="feather-life-buoy me-2"></i>
                        @Html.T("طلب مساعدة", "Request help")
                    </button>
                    <button class="btn btn-sm btn-outline-primary text-start" onclick="useTemplate('feedback')">
                        <i class="feather-message-square me-2"></i>
                        @Html.T("ملاحظات", "Feedback")
                    </button>
                </div>
            </div>
        </div>

        <!-- Tips -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-lightbulb text-warning me-2"></i>
                    @Html.T("نصائح", "Tips")
                </h6>
            </div>
            <div class="card-body">
                <ul class="mb-0 ps-3">
                    <li class="mb-2">@Html.T("اكتب موضوعاً واضحاً", "Write a clear subject")</li>
                    <li class="mb-2">@Html.T("كن مختصراً ومباشراً", "Be concise and direct")</li>
                    <li class="mb-2">@Html.T("راجع رسالتك قبل الإرسال", "Review your message before sending")</li>
                    <li class="mb-0">@Html.T("استخدم لغة مهذبة", "Use polite language")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function() {
            window.__T = window.__T || {};
            window.__T.TplQuestionSubject = '@Html.Raw(Html.T("سؤال عن درس", "Question about lesson").ToString().Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n"))';
            window.__T.TplQuestionContent = '@Html.Raw(Html.T("عزيزي المدرس،\n\nلدي سؤال عن [اسم الدرس]...\n\nشكراً لك", "Dear instructor,\n\nI have a question about [lesson name]...\n\nThank you").ToString().Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n"))';
            window.__T.TplHelpSubject = '@Html.Raw(Html.T("طلب مساعدة", "Request help").ToString().Replace("'", "\\'"))';
            window.__T.TplHelpContent = '@Html.Raw(Html.T("عزيزي المدرس،\n\nأحتاج مساعدة في [الموضوع]...\n\nشكراً لك", "Dear instructor,\n\nI need help with [topic]...\n\nThank you").ToString().Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n"))';
            window.__T.TplFeedbackSubject = '@Html.Raw(Html.T("ملاحظات على الدورة", "Course feedback").ToString().Replace("'", "\\'"))';
            window.__T.TplFeedbackContent = '@Html.Raw(Html.T("عزيزي المدرس،\n\nأود مشاركة ملاحظاتي...\n\nشكراً لك", "Dear instructor,\n\nI would like to share my feedback...\n\nThank you").ToString().Replace("'", "\\'").Replace("\r", "").Replace("\n", "\\n"))';
        })();
    </script>
    <script>
        function useTemplate(type) {
            const templates = {
                question: { subject: window.__T.TplQuestionSubject || 'Question about lesson', content: (window.__T.TplQuestionContent || 'Dear instructor,\n\nI have a question...\n\nThank you').replace(/\\n/g, '\n') },
                help: { subject: window.__T.TplHelpSubject || 'Request help', content: (window.__T.TplHelpContent || 'Dear instructor,\n\nI need help...\n\nThank you').replace(/\\n/g, '\n') },
                feedback: { subject: window.__T.TplFeedbackSubject || 'Course feedback', content: (window.__T.TplFeedbackContent || 'Dear instructor,\n\nI would like to share my feedback...\n\nThank you').replace(/\\n/g, '\n') }
            };
            if (templates[type]) {
                document.getElementById('Subject').value = templates[type].subject;
                document.getElementById('Body').value = templates[type].content;
            }
        }
    </script>
}

