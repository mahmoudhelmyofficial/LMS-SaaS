@model LMS.Domain.Entities.Certifications.Certificate
@{
    ViewData["Title"] = Html.T("تفاصيل الشهادة", "Certificate Details");
}

@section Styles {
<style>
    .certificate-preview {
        background: #fff;
        border: 2px solid var(--bs-border-color, #e5e7eb);
        border-radius: 12px;
        padding: 48px 32px;
        position: relative;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    }
    .certificate-seal {
        position: absolute;
        bottom: 24px;
        right: 24px;
        width: 72px;
        height: 72px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Page Header (modern card-based) -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-award text-primary me-2"></i>
                    @Html.T("شهادة إتمام الدورة", "Course Completion Certificate")
                </h3>
                <p class="text-muted mb-0">@(Model.Course?.Title ?? Model.CourseName)</p>
            </div>
            <div class="d-flex gap-2">
                @if (!Model.IsRevoked)
                {
                    <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="feather-download me-2"></i>
                        @Html.T("تحميل PDF", "Download PDF")
                    </a>
                    <button class="btn btn-outline-primary" onclick="shareCertificate()">
                        <i class="feather-share-2 me-2"></i>
                        @Html.T("مشاركة", "Share")
                    </button>
                    <button class="btn btn-outline-secondary" onclick="printCertificate()">
                        <i class="feather-printer me-2"></i>
                        @Html.T("طباعة", "Print")
                    </button>
                }
                else
                {
                    <span class="btn btn-outline-danger disabled">
                        <i class="feather-slash me-2"></i>
                        @Html.T("الشهادة ملغاة", "Certificate Revoked")
                    </span>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.IsRevoked)
{
<div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
    <i class="feather-alert-triangle me-3 fs-3"></i>
    <div>
        <h6 class="alert-heading fw-bold mb-1">@Html.T("شهادة ملغاة", "Certificate Revoked")</h6>
        <p class="mb-0">@Html.T("تم إلغاء هذه الشهادة ولم تعد صالحة.", "This certificate has been revoked and is no longer valid.")</p>
        @if (!string.IsNullOrEmpty(Model.RevocationReason))
        {
            <small class="d-block mt-1">@Html.T("السبب:", "Reason:") @Model.RevocationReason</small>
        }
    </div>
</div>
}

<!-- Certificate Preview -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="certificate-preview" id="certificatePreview">
            <!-- Border Decoration -->
            <div class="text-center mb-4">
                <i class="feather-award text-primary" style="font-size: 48px;"></i>
            </div>

            <!-- Certificate Header -->
            <div class="text-center mb-5">
                <h1 class="fw-bold mb-2 text-primary" style="font-size: 2rem;">@Html.T("شهادة إتمام", "Certificate of Completion")</h1>
                <p class="text-muted fs-5 mb-0">@Html.T("شهادة إتمام الدورة", "Certificate of Completion")</p>
            </div>

            <!-- Recipient -->
            <div class="text-center mb-5">
                <p class="text-muted mb-2 fs-5">@Html.T("هذا يشهد بأن", "This certifies that")</p>
                <h2 class="fw-bold mb-0" style="font-size: 42px; color: #1f2937;">@(Model.Student?.FullName ?? Model.StudentName)</h2>
            </div>

            <!-- Course Details -->
            <div class="text-center mb-5">
                <p class="text-muted mb-2">@Html.T("قد أتم بنجاح دورة", "has successfully completed the course")</p>
                <h3 class="fw-bold mb-3 text-primary">@(Model.Course?.Title ?? Model.CourseName)</h3>
                <p class="text-muted">@Html.T("بتقدير:", "With a grade of:") <strong class="text-primary">@(Model.Grade?.ToString("F0") ?? "0")%</strong></p>
            </div>

            <!-- Date and Signatures -->
            <div class="row mt-5 pt-5">
                <div class="col-6 text-center">
                    <div class="border-top border-dark d-inline-block px-5 py-2">
                        <strong class="d-block">@(Model.Course?.Instructor?.FullName ?? Model.InstructorName ?? Html.T("المدرب", "Instructor").ToString())</strong>
                        <small class="text-muted">@Html.T("المدرب", "Instructor")</small>
                    </div>
                </div>
                <div class="col-6 text-center">
                    <div class="border-top border-dark d-inline-block px-5 py-2">
                        <strong class="d-block">@(Model.IssuedDate?.ToString("dd MMMM yyyy") ?? "-")</strong>
                        <small class="text-muted">@Html.T("تاريخ الإصدار", "Issue Date")</small>
                    </div>
                </div>
            </div>

            <!-- Verification Code -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    @Html.T("رقم التحقق:", "Verification Number:") <strong>@Model.CertificateNumber</strong>
                </small>
            </div>

            <!-- Seal -->
            <div class="certificate-seal avatar-text bg-soft-warning text-warning">
                <i class="feather-award" style="font-size: 2rem;"></i>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Certificate Info -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-info me-2"></i>
                    @Html.T("معلومات الشهادة", "Certificate Information")
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3 pb-3 border-bottom">
                    <small class="text-muted d-block mb-1">@Html.T("رقم الشهادة", "Certificate Number")</small>
                    <strong>@Model.CertificateNumber</strong>
                </div>
                <div class="mb-3 pb-3 border-bottom">
                    <small class="text-muted d-block mb-1">@Html.T("تاريخ الإصدار", "Issue Date")</small>
                    <strong>@(Model.IssuedDate?.ToString("dd MMMM yyyy") ?? "-")</strong>
                </div>
                <div class="mb-3 pb-3 border-bottom">
                    <small class="text-muted d-block mb-1">@Html.T("الدرجة النهائية", "Final Grade")</small>
                    <strong class="text-success">@(Model.Grade?.ToString("F0") ?? "0")%</strong>
                </div>
                <div class="mb-3 pb-3 border-bottom">
                    <small class="text-muted d-block mb-1">@Html.T("المدرب", "Instructor")</small>
                    <strong>@(Model.Course?.Instructor?.FullName ?? Model.InstructorName ?? "-")</strong>
                </div>
                <div>
                    <small class="text-muted d-block mb-1">@Html.T("حالة الشهادة", "Certificate Status")</small>
                    @if (Model.IsRevoked)
                    {
                        <span class="badge bg-danger">@Html.T("ملغاة", "Revoked")</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@Html.T("معتمدة", "Verified")</span>
                    }
                </div>
            </div>
        </div>

        <!-- Verification -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-shield me-2"></i>
                    @Html.T("التحقق من الشهادة", "Certificate Verification")
                </h6>
            </div>
            <div class="card-body">
                <p class="mb-3">@Html.T("يمكن للآخرين التحقق من صحة شهادتك باستخدام:", "Others can verify your certificate using:")</p>
                <div class="bg-light rounded p-3 mb-3 text-center">
                    <strong class="d-block mb-2">@Model.CertificateNumber</strong>
                    <button class="btn btn-sm btn-primary" onclick="copyVerificationCode()">
                        <i class="feather-copy me-2"></i>
                        @Html.T("نسخ الرقم", "Copy Number")
                    </button>
                </div>
                <p class="text-muted fs-12 mb-0">
                    <i class="feather-info me-1"></i>
                    @Html.T("رابط التحقق:", "Verification Link:") <a href="@Url.Action("Verify", new { code = Model.CertificateNumber })" target="_blank">@Html.T("تحقق هنا", "Verify Here")</a>
                </p>
            </div>
        </div>

        <!-- Share -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-share-2 me-2"></i>
                    @Html.T("شارك شهادتك", "Share Your Certificate")
                </h6>
            </div>
            <div class="card-body">
                <p class="mb-3">@Html.T("شارك إنجازك على:", "Share your achievement on:")</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" onclick="shareToLinkedIn()">
                        <i class="feather-linkedin me-2"></i>
                        @Html.T("لينكد إن", "LinkedIn")
                    </button>
                    <button class="btn btn-info" onclick="shareToTwitter()">
                        <i class="feather-twitter me-2"></i>
                        @Html.T("تويتر", "Twitter")
                    </button>
                    <button class="btn btn-success" onclick="shareToWhatsApp()">
                        <i class="feather-message-circle me-2"></i>
                        @Html.T("واتساب", "WhatsApp")
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var courseTitle = Model.Course?.Title ?? Model.CourseName ?? Html.T("الدورة", "the course").ToString();
}

@section Scripts {
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script>
    var courseTitle = '@Html.Raw(courseTitle.Replace("'", "\\'"))';
    var certLabel = '@Html.Raw(Html.T("شهادتي - ", "My Certificate - "))';
    var completedMsg = '@Html.Raw(Html.T("لقد أتممت دورة ", "I have successfully completed the course "))';
    var successSuffix = '@Html.Raw(Html.T(" بنجاح!", " successfully!"))';
    var shareNotSupported = '@Html.Raw(Html.T("المشاركة غير مدعومة على هذا المتصفح", "Sharing is not supported on this browser"))';
    var codeCopied = '@Html.Raw(Html.T("تم نسخ رقم التحقق", "Verification code copied"))';

    function printCertificate() {
        window.print();
    }

    function shareCertificate() {
        if (navigator.share) {
            navigator.share({
                title: certLabel + courseTitle,
                text: completedMsg + courseTitle + successSuffix,
                url: window.location.href
            });
        } else {
            alert(shareNotSupported);
        }
    }

    function copyVerificationCode() {
        navigator.clipboard.writeText('@Model.CertificateNumber');
        alert(codeCopied);
    }

    function shareToLinkedIn() {
        const url = encodeURIComponent(window.location.href);
        window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
    }

    function shareToTwitter() {
        const text = encodeURIComponent(completedMsg + courseTitle + successSuffix);
        const url = encodeURIComponent(window.location.href);
        window.open(`https://twitter.com/intent/tweet?text=${text}&url=${url}`, '_blank');
    }

    function shareToWhatsApp() {
        const text = encodeURIComponent(completedMsg + courseTitle + successSuffix + ' ' + window.location.href);
        window.open(`https://wa.me/?text=${text}`, '_blank');
    }
</script>
}
