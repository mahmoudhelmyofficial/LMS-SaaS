@model List<LMS.Domain.Entities.Certifications.Certificate>
@{
    ViewData["Title"] = Model?.Any() == true ? Html.T("شهاداتي", "My Certificates") : Html.T("لا توجد شهادات بعد", "No Certificates Yet");
    var certificateCount = Model?.Count ?? 0;
}

@section Styles {
<style>
    .certificate-card {
        position: relative;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    .certificate-card:hover {
        border-color: var(--bs-primary);
        box-shadow: 0 8px 20px rgba(0, 74, 173, 0.12);
        transform: translateY(-3px);
    }
    .certificate-card .certificate-badge {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Page Header (modern card-based) -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-award text-primary me-2"></i>
                    @Html.T("شهاداتي", "My Certificates")
                </h3>
                <p class="text-muted mb-0">@Html.T("شهادات إنجازك في الدورات المكتملة", "Your achievement certificates for completed courses")</p>
            </div>
            <div class="border rounded-3 p-3 bg-soft-primary text-center flex-shrink-0">
                <div class="text-muted small mb-1">@Html.T("شهادات محصلة", "Certificates Earned")</div>
                <h2 class="fw-bold text-primary mb-0">@certificateCount</h2>
            </div>
        </div>
    </div>
</div>

<!-- Certificates Grid -->
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var certificate in Model)
        {
            <div class="col-lg-6">
                <div class="card certificate-card stretch stretch-full">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start gap-3">
                            <div class="certificate-badge avatar-text bg-soft-warning text-warning flex-shrink-0">
                                <i class="feather-award"></i>
                            </div>
                            <div class="min-w-0 flex-grow-1">
                                <span class="badge bg-soft-primary text-primary mb-2">@Html.T("شهادة إتمام دورة", "Course Completion Certificate")</span>
                                <h5 class="fw-bold mb-2">@(certificate.Course?.Title ?? certificate.CourseName)</h5>
                                <p class="text-muted fs-12 mb-3">
                                    <i class="feather-calendar me-1"></i>
                                    @Html.T("تاريخ الإصدار:", "Issue Date:") @certificate.IssuedAt.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "ar-SA" : "en-US"))
                                </p>
                                <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                                    <div>
                                        <small class="text-muted d-block">@Html.T("رقم الشهادة", "Certificate Number")</small>
                                        <strong class="text-primary">@certificate.CertificateNumber</strong>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">@Html.T("الدرجة النهائية", "Final Grade")</small>
                                        <strong class="text-success">@(certificate.Grade?.ToString("F0") ?? "0")%</strong>
                                    </div>
                                </div>
                                <div class="d-flex gap-2 flex-wrap">
                                    <a asp-action="Details" asp-route-id="@certificate.Id" class="btn btn-primary flex-grow-1">
                                        <i class="feather-eye me-2"></i>
                                        @Html.T("عرض الشهادة", "View Certificate")
                                    </a>
                                    <a asp-action="Download" asp-route-id="@certificate.Id" class="btn btn-outline-primary" title="@Html.T("تحميل", "Download")">
                                        <i class="feather-download"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-secondary" onclick="shareOnLinkedIn('@certificate.CertificateNumber')" title="@Html.T("مشاركة على لينكد إن", "Share on LinkedIn")">
                                        <i class="feather-linkedin"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body">
            @{
                ViewData["Icon"] = "award";
                ViewData["Title"] = Html.T("لا توجد شهادات بعد", "No Certificates Yet");
                ViewData["Message"] = Html.T("أكمل الدورات للحصول على شهادات إتمام معتمدة.", "Complete courses to earn accredited completion certificates.");
                ViewData["ActionText"] = Html.T("تصفح الدورات", "Browse Courses");
                ViewData["ActionArea"] = "Student";
                ViewData["ActionController"] = "Courses";
                ViewData["ActionAction"] = "Browse";
            }
            @await Html.PartialAsync("_EmptyState")
        </div>
    </div>
}

@section Scripts {
<script>
    function shareOnLinkedIn(certNumber) {
        var url = '@Url.Action("Verify", "Certificates", new { area = "Student" }, Context.Request.Scheme)?code=' + certNumber;
        var linkedInUrl = 'https://www.linkedin.com/sharing/share-offsite/?url=' + encodeURIComponent(url);
        window.open(linkedInUrl, '_blank', 'width=600,height=600');
    }
</script>
}
