@model LMS.Domain.Entities.Certifications.Certificate
@{
    ViewData["Title"] = Html.T("التحقق من الشهادة", "Certificate Verification");
    Layout = null;
    var isValid = Model != null;
}

<!DOCTYPE html>
<html lang="@Html.Lang()" dir="@Html.Dir()">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LMS</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css" />
    
    <!-- Google Fonts - Cairo for Arabic -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            direction: @Html.Dir();
        }
        
        .verify-container {
            max-width: 800px;
            width: 100%;
            margin: 20px;
        }
        
        .verify-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }
        
        .verify-header {
            padding: 40px;
            text-align: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .verify-icon {
            width: 100px;
            height: 100px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }
        
        .verify-icon.success {
            color: #10b981;
        }
        
        .verify-icon.error {
            color: #ef4444;
        }
        
        .verify-body {
            padding: 40px;
        }
        
        .info-row {
            display: flex;
            padding: 15px 0;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .info-row:last-child {
            border-bottom: none;
        }
        
        .info-label {
            font-weight: 600;
            color: #6b7280;
            min-width: 150px;
        }
        
        .info-value {
            color: #111827;
            font-weight: 500;
        }
        
        .verified-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #10b981;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
        }
        
        .invalid-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: #ef4444;
            color: white;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
        }
        
        .btn-print {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-print:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
            color: white;
        }
    </style>
</head>
<body>
    <div class="verify-container">
        <div class="verify-card">
            <div class="verify-header">
                @if (isValid)
                {
                    <div class="verify-icon success">
                        <svg width="60" height="60" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    </div>
                    <h2 class="text-white mb-2">@Html.T("شهادة موثقة ✓", "Verified Certificate ✓")</h2>
                    <p class="text-white opacity-75 mb-0">@Html.T("هذه الشهادة صالحة ومعتمدة من منصة LMS", "This certificate is valid and verified by LMS platform")</p>
                }
                else
                {
                    <div class="verify-icon error">
                        <svg width="60" height="60" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                        </svg>
                    </div>
                    <h2 class="text-white mb-2">@Html.T("شهادة غير صالحة ✗", "Invalid Certificate ✗")</h2>
                    <p class="text-white opacity-75 mb-0">@ViewBag.Error</p>
                }
            </div>
            
            @if (isValid)
            {
                <div class="verify-body">
                    <div class="text-center mb-4">
                        @if (Model.IsRevoked)
                        {
                            <span class="invalid-badge">
                                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                </svg>
                                @Html.T("شهادة ملغاة", "Certificate Revoked")
                            </span>
                            @if (!string.IsNullOrEmpty(Model.RevocationReason))
                            {
                                <p class="text-danger mt-2 mb-0">@Html.T("السبب:", "Reason:") @Model.RevocationReason</p>
                            }
                            @if (Model.RevokedAt.HasValue)
                            {
                                <small class="text-muted d-block mt-1">@Html.T("تاريخ الإلغاء:", "Revoked on:") @Model.RevokedAt.Value.ToString("dd MMMM yyyy")</small>
                            }
                        }
                        else
                        {
                            <span class="verified-badge">
                                <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M10.067.87a2.89 2.89 0 0 0-4.134 0l-.622.638-.89-.011a2.89 2.89 0 0 0-2.924 2.924l.01.89-.636.622a2.89 2.89 0 0 0 0 4.134l.637.622-.011.89a2.89 2.89 0 0 0 2.924 2.924l.89-.01.622.636a2.89 2.89 0 0 0 4.134 0l.622-.637.89.011a2.89 2.89 0 0 0 2.924-2.924l-.01-.89.636-.622a2.89 2.89 0 0 0 0-4.134l-.637-.622.011-.89a2.89 2.89 0 0 0-2.924-2.924l-.89.01-.622-.636zm.287 5.984-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7 8.793l2.646-2.647a.5.5 0 0 1 .708.708z"/>
                                </svg>
                                @Html.T("موثقة ومعتمدة", "Verified & Certified")
                            </span>
                        }
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("رقم الشهادة:", "Certificate Number:")</div>
                        <div class="info-value">@Model.CertificateNumber</div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("اسم الطالب:", "Student Name:")</div>
                        <div class="info-value">@(Model.Student?.FullName ?? Model.StudentName)</div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("اسم الدورة:", "Course Name:")</div>
                        <div class="info-value">@(Model.Course?.Title ?? Model.CourseName)</div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("تاريخ الإصدار:", "Issue Date:")</div>
                        <div class="info-value">@(Model.IssuedDate?.ToString("dd MMMM yyyy") ?? "-")</div>
                    </div>
                    
                    @if (Model.ExpiryDate.HasValue)
                    {
                        <div class="info-row">
                            <div class="info-label">@Html.T("تاريخ الانتهاء:", "Expiry Date:")</div>
                            <div class="info-value">
                                @Model.ExpiryDate.Value.ToString("dd MMMM yyyy")
                                @if (Model.ExpiryDate.Value < DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger ms-2">@Html.T("منتهية", "Expired")</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="info-row">
                            <div class="info-label">@Html.T("صلاحية الشهادة:", "Certificate Validity:")</div>
                            <div class="info-value">
                                <span class="badge bg-success">@Html.T("دائمة", "Permanent")</span>
                            </div>
                        </div>
                    }
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("الدرجة النهائية:", "Final Grade:")</div>
                        <div class="info-value">
                            <strong class="text-success">@(Model.Grade?.ToString("F1") ?? "0.0")%</strong>
                        </div>
                    </div>
                    
                    <div class="info-row">
                        <div class="info-label">@Html.T("كود التحقق:", "Verification Code:")</div>
                        <div class="info-value">
                            <code class="text-primary">@Model.VerificationCode</code>
                        </div>
                    </div>
                    
                    <div class="mt-4 pt-3 border-top text-center">
                        <button onclick="window.print()" class="btn btn-print me-2">
                            <svg width="18" height="18" fill="currentColor" viewBox="0 0 16 16" class="me-2">
                                <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2H5zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1z"/>
                                <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2V7zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z"/>
                            </svg>
                            @Html.T("طباعة", "Print")
                        </button>
                        <a href="/" class="btn btn-outline-secondary">
                            @Html.T("العودة للصفحة الرئيسية", "Back to Home")
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="verify-body text-center">
                    <p class="text-muted mb-4">@Html.T("لم يتم العثور على شهادة بهذا الرقم. يرجى التحقق من الرقم والمحاولة مرة أخرى.", "No certificate found with this number. Please check the number and try again.")</p>
                    <a href="/" class="btn btn-outline-secondary">
                        @Html.T("العودة للصفحة الرئيسية", "Back to Home")
                    </a>
                </div>
            }
        </div>
        
        @if (isValid)
        {
            <div class="text-center mt-4">
                <p class="text-white small opacity-75">
                    @Html.T("هذه الشهادة صادرة من منصة LMS التعليمية وموثقة إلكترونياً", "This certificate is issued by LMS educational platform and digitally verified")
                </p>
            </div>
        }
    </div>
    
    <script src="~/assets/vendors/js/vendors.min.js"></script>
</body>
</html>
