@model LMS.Areas.Student.ViewModels.BookmarkEditViewModel
@{
    ViewData["Title"] = Html.T("تعديل الملاحظة", "Edit Note");
}

@section Styles {
<style>
    .edit-form-card {
        max-width: 800px;
        margin: 0 auto;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-edit-2 text-primary me-2"></i>
                    @Html.T("تعديل الملاحظة", "Edit note")
                </h3>
                <p class="text-muted mb-0">@Model.Title</p>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للقائمة", "Back to list")
            </a>
        </div>
    </div>
</div>

<!-- Edit Form -->
<div class="card stretch stretch-full edit-form-card">
    <div class="card-body">
        <form asp-action="EditNote" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-4">
                <label asp-for="Note" class="form-label">@Html.T("الملاحظة", "Note")</label>
                <textarea asp-for="Note" class="form-control" rows="6" placeholder="@Html.T("أضف ملاحظاتك هنا...", "Add your notes here...")"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 justify-content-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="feather-x me-2"></i>
                    @Html.T("إلغاء", "Cancel")
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="feather-save me-2"></i>
                    @Html.T("حفظ التعديلات", "Save changes")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
