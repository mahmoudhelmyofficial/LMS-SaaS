@model List<LMS.Domain.Entities.Learning.Bookmark>
@{
    ViewData["Title"] = Html.T("الإشارات المرجعية", "Bookmarks");
    var type = ViewBag.Type as string;
}

@section Styles {
<style>
    .bookmark-card {
        transition: all 0.2s ease;
    }
    .bookmark-card:hover {
        background: #f9fafb;
    }
    .bookmark-card .flex-grow-1 { min-width: 0; }
    .bookmark-card .d-flex { flex-wrap: wrap; }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-bookmark text-primary me-2"></i>
                    @Html.T("الإشارات المرجعية", "Bookmarks")
                </h3>
                <p class="text-muted mb-0">@Html.T("المحتوى الذي قمت بحفظه للعودة إليه لاحقاً", "Content you saved for later") (@(Model?.Count ?? 0) @Html.T("إشارة", "bookmarks"))</p>
            </div>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <ul class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link @(string.IsNullOrEmpty(type) ? "active" : "")" asp-action="Index">
                    <i class="feather-list me-2"></i>
                    @Html.T("الكل", "All")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(type == "Course" ? "active" : "")" asp-action="Index" asp-route-type="Course">
                    <i class="feather-book me-2"></i>
                    @Html.T("الدورات", "Courses")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(type == "Lesson" ? "active" : "")" asp-action="Index" asp-route-type="Lesson">
                    <i class="feather-play-circle me-2"></i>
                    @Html.T("الدروس", "Lessons")
                </a>
            </li>
        </ul>
    </div>
</div>

<!-- Bookmarks List -->
<div class="card stretch stretch-full">
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="list-group list-group-flush">
                @foreach (var bookmark in Model)
                {
                    var isCourse = bookmark.BookmarkType == "Course";
                    var title = isCourse ? bookmark.Course?.Title : bookmark.Lesson?.Title;
                    var subtitle = isCourse ? bookmark.Course?.Instructor?.FullName : $"{bookmark.Lesson?.Module?.Course?.Title} • {bookmark.Lesson?.Module?.Title}";
                    var iconClass = isCourse ? "book" : "play-circle";
                    var iconBgClass = isCourse ? "primary" : "success";
                    
                    <div class="list-group-item bookmark-card">
                        <div class="d-flex align-items-start flex-wrap gap-2">
                            <div class="avatar-text avatar-md bg-soft-@iconBgClass text-@iconBgClass me-2 me-md-3 flex-shrink-0">
                                <i class="feather-@iconClass"></i>
                            </div>
                            <div class="flex-grow-1 min-w-0">
                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-2 mb-2">
                                    <div class="min-w-0">
                                        <h6 class="fw-bold mb-1 text-break">@title</h6>
                                        <p class="text-muted fs-12 mb-0 text-break">@subtitle</p>
                                    </div>
                                    <div class="d-flex gap-2 flex-shrink-0 flex-wrap">
                                        @if (isCourse)
                                        {
                                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@bookmark.CourseId" class="btn btn-sm btn-primary">
                                                <i class="feather-eye me-2"></i>
                                                @Html.T("عرض", "View")
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Learning" asp-action="Watch" asp-route-lessonId="@bookmark.LessonId" class="btn btn-sm btn-primary">
                                                <i class="feather-play me-2"></i>
                                                @Html.T("متابعة", "Continue")
                                            </a>
                                        }
                                        <form asp-action="Delete" asp-route-id="@bookmark.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-icon btn-outline-danger" onclick="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الإشارة؟", "Are you sure you want to delete this bookmark?").Replace("'", "\\'"))')">
                                                <i class="feather-trash-2"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center flex-wrap gap-2 gap-md-3 fs-12 text-muted">
                                    <span>
                                        <i class="feather-clock me-1"></i>
                                        @Html.T("تم الحفظ", "Saved") @bookmark.CreatedAt.ToRelativeTime()
                                    </span>
                                    @if (!string.IsNullOrEmpty(bookmark.Notes))
                                    {
                                        <span>
                                            <i class="feather-message-square me-1"></i>
                                            @bookmark.Notes
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="feather-bookmark fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">@Html.T("لا توجد إشارات مرجعية بعد", "No bookmarks yet")</h5>
                <p class="text-muted">@Html.T("احفظ الدروس والدورات المهمة للعودة إليها لاحقاً", "Save lessons and courses to return to them later")</p>
                <a asp-controller="Courses" asp-action="Browse" class="btn btn-primary">
                    <i class="feather-search me-2"></i>
                    @Html.T("تصفح الدورات", "Browse courses")
                </a>
            </div>
        }
    </div>
</div>
