@model LMS.Areas.Student.Controllers.StudyGroupsIndexViewModel
@{
    ViewData["Title"] = Html.T("مجموعات الدراسة", "Study Groups");
}

@section Styles {
<style>
    .groups-header {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .group-card {
        transition: all 0.3s ease;
    }
    .group-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="groups-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-2">
                <i class="feather-users me-2"></i>
                @Html.T("مجموعات الدراسة", "Study Groups")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("تعلم مع زملائك وتبادل المعرفة", "Learn with peers and share knowledge")</p>
        </div>
        <div class="col-lg-4 text-lg-end">
            <a asp-action="Create" class="btn btn-light">
                <i class="feather-plus me-2"></i>
                @Html.T("إنشاء مجموعة", "Create group")
            </a>
        </div>
    </div>
</div>

<!-- My Groups -->
<div class="card stretch stretch-full mb-4">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="feather-star text-warning me-2"></i>
            @Html.T("مجموعاتي", "My groups") (@Model.MyGroups.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (Model.MyGroups.Any())
        {
            <div class="row g-4">
                @foreach (var group in Model.MyGroups)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card group-card stretch stretch-full border">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-3">
                                    <div class="avatar-text avatar-lg bg-soft-success text-success">
                                        <i class="feather-users"></i>
                                    </div>
                                    <span class="badge bg-success">@Html.T("عضو", "Member")</span>
                                </div>
                                <h5 class="fw-bold mb-2">@group.Name</h5>
                                @if (!string.IsNullOrEmpty(group.Description))
                                {
                                    <p class="text-muted fs-12 mb-3 text-truncate-2-line">@group.Description</p>
                                }
                                <div class="d-flex flex-wrap gap-2 mb-3 fs-12 text-muted">
                                    <span>
                                        <i class="feather-book-open me-1"></i>
                                        @group.Course?.Title
                                    </span>
                                    <span>
                                        <i class="feather-users me-1"></i>
                                        @group.Members.Count @Html.T("عضو", "members")
                                    </span>
                                </div>
                                <a asp-action="Details" asp-route-id="@group.Id" class="btn btn-primary w-100">
                                    <i class="feather-eye me-2"></i>
                                    @Html.T("عرض المجموعة", "View group")
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="feather-users fs-1 text-muted mb-3 d-block"></i>
                <p class="text-muted mb-3">@Html.T("لم تنضم إلى أي مجموعة بعد", "You haven't joined any group yet")</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="feather-plus me-2"></i>
                    @Html.T("إنشاء مجموعة جديدة", "Create new group")
                </a>
            </div>
        }
    </div>
</div>

<!-- Available Groups -->
@if (Model.AvailableGroups.Any())
{
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="feather-compass text-primary me-2"></i>
                @Html.T("مجموعات يمكنك الانضمام إليها", "Groups you can join")
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                @foreach (var group in Model.AvailableGroups)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card group-card stretch stretch-full border">
                            <div class="card-body">
                                <div class="d-flex align-items-start justify-content-between mb-3">
                                    <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                                        <i class="feather-users"></i>
                                    </div>
                                    @if (group.MaxMembers > 0)
                                    {
                                        <span class="badge bg-light text-dark">
                                            @group.Members.Count / @group.MaxMembers
                                        </span>
                                    }
                                </div>
                                <h5 class="fw-bold mb-2">@group.Name</h5>
                                @if (!string.IsNullOrEmpty(group.Description))
                                {
                                    <p class="text-muted fs-12 mb-3 text-truncate-2-line">@group.Description</p>
                                }
                                <div class="d-flex flex-wrap gap-2 mb-3 fs-12 text-muted">
                                    <span>
                                        <i class="feather-book-open me-1"></i>
                                        @group.Course?.Title
                                    </span>
                                    <span>
                                        <i class="feather-users me-1"></i>
                                        @group.Members.Count @Html.T("عضو", "members")
                                    </span>
                                </div>
                                <form asp-action="Join" method="post">
                                    <input type="hidden" name="groupId" value="@group.Id" />
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        <i class="feather-user-plus me-2"></i>
                                        @Html.T("انضمام", "Join")
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

