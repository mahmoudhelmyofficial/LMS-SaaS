@{
    ViewData["Title"] = Html.T("تم إلغاء الدفع", "Payment Cancelled");
    Layout = "_StudentLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <div class="rounded-circle bg-warning text-white d-inline-flex align-items-center justify-content-center" 
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-exclamation fa-3x"></i>
                        </div>
                    </div>
                    
                    <h3 class="mb-3">@Html.T("تم إلغاء عملية الدفع", "Payment cancelled")</h3>
                    
                    <p class="text-muted mb-4">
                        @Html.T("لم يتم خصم أي مبلغ من حسابك.", "No amount was charged from your account.")
                        <br>
                        @Html.T("يمكنك المحاولة مرة أخرى أو اختيار طريقة دفع مختلفة.", "You can try again or choose a different payment method.")
                    </p>
                    
                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index")" class="btn btn-primary btn-lg">
                            <i class="fas fa-redo me-2"></i>
                            @Html.T("إعادة المحاولة", "Try again")
                        </a>
                        <a href="@Url.Action("Cart", "Checkout", new { area = "Student" })" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-cart me-2"></i>
                            @Html.T("العودة للسلة", "Back to cart")
                        </a>
                        <a href="@Url.Action("Browse", "Courses", new { area = "Student" })" class="btn btn-outline-secondary">
                            <i class="fas fa-search me-2"></i>
                            @Html.T("تصفح الدورات", "Browse courses")
                        </a>
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-4 border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">
                        <i class="fas fa-question-circle text-info me-2"></i>
                        @Html.T("هل تواجه مشكلة؟", "Having trouble?")
                    </h5>
                    <p class="text-muted mb-3">
                        @Html.T("إذا كنت تواجه صعوبة في إتمام الدفع، يمكنك:", "If you're having trouble completing payment, you can:")
                    </p>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            @Html.T("تجربة طريقة دفع أخرى (فوري، تحويل بنكي)", "Try another payment method (Fawry, bank transfer)")
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            @Html.T("التأكد من صلاحية بطاقتك الائتمانية", "Ensure your card is valid")
                        </li>
                        <li>
                            <i class="fas fa-check text-success me-2"></i>
                            <a href="/Support/Contact">@Html.T("التواصل مع الدعم الفني", "Contact support")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

