@model List<LMS.Domain.Entities.Learning.StudentReminder>
@{
    ViewData["Title"] = Html.T("التذكيرات", "Reminders");
    var courses = ViewBag.Courses as List<LMS.Domain.Entities.Courses.Course> ?? new List<LMS.Domain.Entities.Courses.Course>();
}

@section Styles {
<style>
    .reminder-card {
        transition: all 0.2s ease;
    }
    .reminder-card:hover {
        background-color: #f9fafb;
    }
    .reminder-type-card {
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }
    .reminder-type-card:hover {
        border-color: #667eea;
        background-color: #f9fafb;
    }
    .reminder-type-card.selected {
        border-color: #667eea;
        background-color: #eef2ff;
    }
    .reminder-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        margin-bottom: 8px;
    }
    .reminder-card .flex-grow-1 { min-width: 0; }
    .reminder-card .d-flex { flex-wrap: wrap; }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-bell text-warning me-2"></i>
                    @Html.T("التذكيرات", "Reminders")
                </h3>
                <p class="text-muted mb-0">@Html.T("لا تفوت مواعيدك الدراسية المهمة", "Don't miss your important study deadlines")</p>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createReminderModal">
                <i class="feather-plus me-2"></i>
                @Html.T("تذكير جديد", "New Reminder")
            </button>
        </div>
    </div>
</div>

<!-- Reminders List -->
<div class="card stretch stretch-full">
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            @if (Model != null && Model.Any())
            {
                @foreach (var reminder in Model)
                {
                    var iconClass = reminder.ReminderType == "Assignment" ? "file-text" : 
                                   reminder.ReminderType == "Quiz" ? "help-circle" : 
                                   reminder.ReminderType == "LiveClass" ? "video" : "clock";
                    var bgClass = reminder.ReminderType == "Assignment" ? "bg-soft-warning text-warning" : 
                                 reminder.ReminderType == "Quiz" ? "bg-soft-info text-info" : 
                                 reminder.ReminderType == "LiveClass" ? "bg-soft-danger text-danger" : "bg-soft-primary text-primary";
                    var isPast = reminder.RemindAt < DateTime.UtcNow;
                    var isUrgent = !reminder.IsCompleted && isPast;
                    
                    <div class="list-group-item reminder-card">
                        <div class="d-flex align-items-start justify-content-between flex-wrap gap-2">
                            <div class="d-flex align-items-start flex-grow-1 min-w-0">
                                <div class="avatar-text avatar-md @bgClass me-2 me-md-3 flex-shrink-0">
                                    <i class="feather-@iconClass"></i>
                                </div>
                                <div class="flex-grow-1 min-w-0">
                                    <h6 class="fw-bold mb-2 text-break">@reminder.Title</h6>
                                    <p class="text-muted fs-12 mb-2 text-break">@(reminder.Description ?? Html.T("لا يوجد وصف", "No description").ToString())</p>
                                    @if (reminder.Course != null)
                                    {
                                        <p class="text-muted fs-12 mb-2 text-break">
                                            <i class="feather-book-open me-1"></i>
                                            @reminder.Course.Title
                                        </p>
                                    }
                                    <div class="d-flex align-items-center flex-wrap gap-2 gap-md-3 fs-12">
                                        <span class="@(isUrgent ? "text-danger" : "text-muted")">
                                            <i class="feather-calendar me-1"></i>
                                            @reminder.RemindAt.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                        @if (reminder.IsCompleted)
                                        {
                                            <span class="badge bg-soft-success text-success">@Html.T("مكتمل", "Completed")</span>
                                        }
                                        else if (isUrgent)
                                        {
                                            <span class="badge bg-danger">@Html.T("عاجل", "Urgent")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-warning text-warning">@Html.T("قادم", "Upcoming")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex gap-2 flex-shrink-0">
                                <a asp-action="Edit" asp-route-id="@reminder.Id" class="btn btn-sm btn-icon btn-outline-secondary">
                                    <i class="feather-edit"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@reminder.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-icon btn-outline-danger"
                                            onclick="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا التذكير؟", "Are you sure you want to delete this reminder?").ToString().Replace("'", "\\'"))');">
                                        <i class="feather-trash-2"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="list-group-item text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                        <i class="feather-bell fs-1"></i>
                    </div>
                    <h5 class="mb-2">@Html.T("لا توجد تذكيرات", "No reminders")</h5>
                    <p class="text-muted mb-0">@Html.T("أنشئ تذكير جديد لتبقى منظمًا", "Create a new reminder to stay organized")</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Reminder Modal -->
<div class="modal fade" id="createReminderModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="createReminderForm" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">@Html.T("تذكير جديد", "New Reminder")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <!-- Reminder Type -->
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-2">@Html.T("نوع التذكير", "Reminder Type") <span class="text-danger">*</span></label>
                        <div class="row g-2">
                            <div class="col-3">
                                <div class="reminder-type-card selected" onclick="selectReminderType(this, 'Study')">
                                    <div class="reminder-icon bg-soft-primary text-primary">
                                        <i class="feather-book-open"></i>
                                    </div>
                                    <div class="fw-semibold small">@Html.T("دراسة", "Study")</div>
                                    <input type="radio" name="ReminderType" value="Study" checked hidden />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="reminder-type-card" onclick="selectReminderType(this, 'Assignment')">
                                    <div class="reminder-icon bg-soft-warning text-warning">
                                        <i class="feather-file-text"></i>
                                    </div>
                                    <div class="fw-semibold small">@Html.T("واجب", "Assignment")</div>
                                    <input type="radio" name="ReminderType" value="Assignment" hidden />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="reminder-type-card" onclick="selectReminderType(this, 'Quiz')">
                                    <div class="reminder-icon bg-soft-info text-info">
                                        <i class="feather-help-circle"></i>
                                    </div>
                                    <div class="fw-semibold small">@Html.T("اختبار", "Quiz")</div>
                                    <input type="radio" name="ReminderType" value="Quiz" hidden />
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="reminder-type-card" onclick="selectReminderType(this, 'LiveClass')">
                                    <div class="reminder-icon bg-soft-danger text-danger">
                                        <i class="feather-video"></i>
                                    </div>
                                    <div class="fw-semibold small">@Html.T("جلسة مباشرة", "Live Class")</div>
                                    <input type="radio" name="ReminderType" value="LiveClass" hidden />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Title -->
                    <div class="mb-3">
                        <label class="form-label">@Html.T("عنوان التذكير", "Reminder Title") <span class="text-danger">*</span></label>
                        <input type="text" name="Title" class="form-control" placeholder="@Html.T("مثال: مراجعة الدرس الثالث", "e.g. Review lesson three")" required />
                        <span class="text-danger field-validation-error" id="TitleError"></span>
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-3">
                        <label class="form-label">@Html.T("الوصف", "Description")</label>
                        <textarea name="Description" class="form-control" rows="3" placeholder="@Html.T("أضف تفاصيل إضافية...", "Add additional details...")"></textarea>
                    </div>
                    
                    <!-- Course -->
                    @if (courses != null && courses.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الدورة المرتبطة", "Related Course")</label>
                            <select name="CourseId" class="form-select">
                                <option value="">@Html.T("-- اختر دورة (اختياري) --", "-- Select a course (optional) --")</option>
                                @foreach (var course in courses)
                                {
                                    <option value="@course.Id">@course.Title</option>
                                }
                            </select>
                        </div>
                    }
                    
                    <!-- Date and Time -->
                    <div class="mb-3">
                        <label class="form-label">@Html.T("التاريخ والوقت", "Date and Time") <span class="text-danger">*</span></label>
                        <input type="datetime-local" name="RemindAt" class="form-control" 
                               min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                        <span class="text-danger field-validation-error" id="RemindAtError"></span>
                    </div>
                    
                    <!-- Notification Methods -->
                    <div class="mb-3">
                        <label class="form-label fw-bold mb-2">@Html.T("طريقة التنبيه", "Notification Method")</label>
                        <div class="form-check mb-2">
                            <input class="form-check-input" type="checkbox" name="SendEmail" value="true" checked />
                            <label class="form-check-label">
                                <i class="feather-mail text-primary me-2"></i>
                                @Html.T("إرسال بريد إلكتروني", "Send Email")
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SendPush" value="true" checked />
                            <label class="form-check-label">
                                <i class="feather-bell text-warning me-2"></i>
                                @Html.T("إشعار داخل المنصة", "In-platform Notification")
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-primary" id="createReminderBtn">
                        <i class="feather-save me-2"></i>
                        @Html.T("حفظ التذكير", "Save Reminder")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function selectReminderType(card, type) {
        document.querySelectorAll('.reminder-type-card').forEach(c => c.classList.remove('selected'));
        card.classList.add('selected');
        card.querySelector('input[type="radio"]').checked = true;
    }
    
    // Auto-select first type
    document.addEventListener('DOMContentLoaded', function() {
        const firstCard = document.querySelector('.reminder-type-card');
        if (firstCard && !document.querySelector('.reminder-type-card.selected')) {
            firstCard.classList.add('selected');
        }
        
        const form = document.getElementById('createReminderForm');
        const modalElement = document.getElementById('createReminderModal');
        const modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
        const submitBtn = document.getElementById('createReminderBtn');
        
        if (!form) return;
        
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const originalHtml = submitBtn.innerHTML;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>@Html.T("جاري الحفظ...", "Saving...")';
            
            // Clear previous errors
            document.querySelectorAll('.field-validation-error').forEach(el => el.textContent = '');
            
            try {
                const formData = new FormData(form);
                const token = document.querySelector('[name="__RequestVerificationToken"]').value;
                
                const response = await fetch('@Url.Action("Create", "Reminders")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });
                
                if (response.ok) {
                    const contentType = response.headers.get('content-type');
                    if (contentType && contentType.includes('application/json')) {
                        const result = await response.json();
                        if (result.success === false) {
                            // Handle validation errors
                            if (result.errors) {
                                Object.keys(result.errors).forEach(key => {
                                    const errorElement = document.getElementById(key + 'Error');
                                    if (errorElement) {
                                        errorElement.textContent = result.errors[key][0];
                                    }
                                });
                            }
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalHtml;
                            return;
                        }
                    }
                    
                    // Success - reload page
                    modal.hide();
                    setTimeout(() => {
                        window.location.reload();
                    }, 300);
                } else {
                    // Handle error response
                    const text = await response.text();
                    console.error('Error:', text);
                    alert('@Html.Raw(Html.T("حدث خطأ أثناء إنشاء التذكير. يرجى المحاولة مرة أخرى.", "An error occurred while creating the reminder. Please try again.").Replace("'", "\\'"))');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = originalHtml;
                }
            } catch (error) {
                console.error('Error:', error);
                alert('@Html.Raw(Html.T("حدث خطأ أثناء إنشاء التذكير. يرجى المحاولة مرة أخرى.", "An error occurred while creating the reminder. Please try again.").Replace("'", "\\'"))');
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalHtml;
            }
        });
        
        // Reset form when modal is closed
        modalElement.addEventListener('hidden.bs.modal', function() {
            form.reset();
            document.querySelectorAll('.field-validation-error').forEach(el => el.textContent = '');
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="feather-save me-2"></i>@Html.T("حفظ التذكير", "Save Reminder")';
            // Reset reminder type selection
            const firstCard = document.querySelector('.reminder-type-card');
            if (firstCard) {
                document.querySelectorAll('.reminder-type-card').forEach(c => c.classList.remove('selected'));
                firstCard.classList.add('selected');
                firstCard.querySelector('input[type="radio"]').checked = true;
            }
        });
    });
</script>
}
