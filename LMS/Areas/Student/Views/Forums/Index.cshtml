@model List<LMS.Areas.Student.Controllers.ForumDiscussionViewModel>
@{
    ViewData["Title"] = Html.T("المنتديات", "Forums");
    var search = ViewBag.Search as string;
    var page = ViewBag.Page as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var courses = ViewBag.Courses as dynamic;
}

@section Styles {
<style>
    .forum-header {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        border-radius: 12px;
        padding: 40px;
        color: white;
        margin-bottom: 30px;
    }
    .discussion-card {
        transition: all 0.3s ease;
        border-right: 4px solid transparent;
    }
    .discussion-card:hover {
        transform: translateX(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        border-right-color: var(--bs-primary);
    }
    .discussion-card.pinned {
        border-right-color: #fbbf24;
        background: rgba(251, 191, 36, 0.05);
    }
    .discussion-card.resolved {
        border-right-color: #22c55e;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="forum-header">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h2 class="fw-bold mb-2">
                <i class="feather-message-circle me-2"></i>
                @Html.T("المنتديات", "Forums")
            </h2>
            <p class="mb-0 opacity-75">@Html.T("تصفح المناقشات والأسئلة من جميع دوراتك", "Browse discussions and questions from all your courses")</p>
        </div>
        <div class="col-lg-4 text-center">
            <div class="d-flex gap-3 justify-content-center">
                <div>
                    <h3 class="fw-bold mb-0">@totalCount</h3>
                    <small class="opacity-75">@Html.T("مناقشة", "discussion")</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filters -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-lg-8">
                <label class="form-label">@Html.T("البحث", "Search")</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="feather-search"></i></span>
                    <input type="text" name="search" value="@search" class="form-control" placeholder="@Html.T("ابحث في المناقشات...", "Search discussions...")">
                </div>
            </div>
            <div class="col-lg-4">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="feather-search me-2"></i>
                    @Html.T("بحث", "Search")
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Discussions List -->
@if (Model.Any())
{
    <div class="row g-4">
        @foreach (var discussion in Model)
        {
            <div class="col-12">
                <div class="card discussion-card stretch stretch-full @(discussion.IsPinned ? "pinned" : "") @(discussion.IsResolved ? "resolved" : "")">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <div class="d-flex align-items-start">
                                    @if (!string.IsNullOrEmpty(discussion.AuthorImageUrl))
                                    {
                                        <img src="@discussion.AuthorImageUrl" alt="@discussion.AuthorName" 
                                             class="rounded-circle me-3" style="width: 48px; height: 48px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="avatar-text avatar-lg bg-soft-primary text-primary me-3">
                                            @discussion.AuthorName.FirstOrDefault()
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            @if (discussion.IsPinned)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="feather-pin me-1"></i>@Html.T("مثبت", "Pinned")
                                                </span>
                                            }
                                            @if (discussion.IsResolved)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="feather-check me-1"></i>@Html.T("تم الحل", "Resolved")
                                                </span>
                                            }
                                        </div>
                                        <h5 class="fw-bold mb-2">
                                            <a asp-controller="Discussions" asp-action="Details" asp-route-id="@discussion.Id" 
                                               class="text-decoration-none text-dark">
                                                @discussion.Title
                                            </a>
                                        </h5>
                                        <p class="text-muted fs-13 mb-2">@discussion.ContentPreview</p>
                                        <div class="d-flex align-items-center gap-3 fs-12 text-muted">
                                            <span>
                                                <i class="feather-user me-1"></i>
                                                @discussion.AuthorName
                                            </span>
                                            <span>
                                                <i class="feather-book-open me-1"></i>
                                                @discussion.CourseName
                                            </span>
                                            @if (!string.IsNullOrEmpty(discussion.LessonName))
                                            {
                                                <span>
                                                    <i class="feather-file me-1"></i>
                                                    @discussion.LessonName
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 text-center">
                                <div class="d-flex justify-content-around">
                                    <div>
                                        <h5 class="fw-bold mb-0">@discussion.RepliesCount</h5>
                                        <small class="text-muted">@Html.T("ردود", "Replies")</small>
                                    </div>
                                    <div>
                                        <h5 class="fw-bold mb-0">@discussion.ViewCount</h5>
                                        <small class="text-muted">@Html.T("مشاهدات", "Views")</small>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-2 text-end">
                                <small class="text-muted d-block mb-2">
                                    @if (discussion.LastReplyAt.HasValue)
                                    {
                                        <span>@Html.T("آخر رد:", "Last reply:") @discussion.LastReplyAt.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span>@discussion.CreatedAt.ToString("dd/MM/yyyy")</span>
                                    }
                                </small>
                                <a asp-controller="Discussions" asp-action="Details" asp-route-id="@discussion.Id" 
                                   class="btn btn-outline-primary btn-sm w-100">
                                    <i class="feather-eye me-1"></i>
                                    @Html.T("عرض", "View")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @if (page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-search="@search">
                            <i class="feather-chevron-right"></i>
                        </a>
                    </li>
                }
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@search">@i</a>
                    </li>
                }
                @if (page < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-search="@search">
                            <i class="feather-chevron-left"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="card stretch stretch-full">
        <div class="card-body text-center py-5">
            <i class="feather-message-circle fs-1 text-muted mb-3 d-block"></i>
            <h5 class="fw-bold mb-2">@Html.T("لا توجد مناقشات", "No discussions")</h5>
            <p class="text-muted mb-4">
                @if (!string.IsNullOrEmpty(search))
                {
                    <span>@Html.T("لم يتم العثور على نتائج لـ", "No results found for") "@search"</span>
                }
                else
                {
                    <span>@Html.T("لا توجد مناقشات متاحة من دوراتك حالياً", "No discussions available from your courses at the moment")</span>
                }
            </p>
            @if (!string.IsNullOrEmpty(search))
            {
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="feather-x me-2"></i>
                    @Html.T("إزالة البحث", "Clear search")
                </a>
            }
        </div>
    </div>
}

