@model LMS.Areas.Student.Controllers.RedeemGiftViewModel
@using LMS.Services.Interfaces
@inject IPlatformSettingsService PlatformSettings
@{
    ViewData["Title"] = Html.T("استرداد هدية", "Redeem Gift");
    ViewData["ActiveMenu"] = "Gifts";
    
    // Gift code settings
    var giftCodeMaxLength = await PlatformSettings.GetIntSettingAsync("Content.GiftCode.MaxLength", 12);
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5 text-center">
                    <!-- Icon -->
                    <div class="mb-4">
                        <div class="bg-gradient bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-gift fa-3x"></i>
                        </div>
                    </div>

                    <h2 class="mb-2">@Html.T("استرداد هدية", "Redeem gift")</h2>
                    <p class="text-muted mb-4">
                        @Html.T("أدخل رمز الهدية الخاص بك للحصول على المنتج", "Enter your gift code to get the product")
                    </p>

                    <form asp-action="Redeem" method="post" class="text-start">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="GiftCode" class="form-label visually-hidden">@Html.T("رمز الهدية", "Gift code")</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-ticket-alt text-primary"></i>
                                </span>
                                <input asp-for="GiftCode" class="form-control text-center" 
                                       placeholder="@Html.T("أدخل رمز الهدية", "Enter gift code")" 
                                       style="letter-spacing: 3px; font-size: 1.2rem; text-transform: uppercase;"
                                       maxlength="@giftCodeMaxLength" />
                            </div>
                            <span asp-validation-for="GiftCode" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-check me-2"></i> @Html.T("استرداد الهدية", "Redeem gift")
                        </button>

                        <a asp-action="Index" class="btn btn-link text-muted">
                            <i class="fas fa-arrow-right me-1"></i> @Html.T("العودة لهداياي", "Back to my gifts")
                        </a>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-body">
                    <h6 class="mb-3">
                        <i class="fas fa-question-circle text-primary me-2"></i>
                        @Html.T("أين أجد رمز الهدية؟", "Where do I find the gift code?")
                    </h6>
                    <ul class="list-unstyled mb-0 small text-muted">
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2"></i>
                            @Html.T("تحقق من بريدك الإلكتروني للعثور على رسالة الهدية", "Check your email for the gift message")
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-user-friends me-2"></i>
                            @Html.T("اطلب الرمز من الشخص الذي أهداك", "Ask the person who gifted you for the code")
                        </li>
                        <li>
                            <i class="fas fa-info-circle me-2"></i>
                            @Html.T("الرمز يتكون من", "The code consists of") @giftCodeMaxLength @Html.T("حرف ورقم", "letters and numbers")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    input[type="text"]::placeholder {
        letter-spacing: normal;
    }
</style>
}

