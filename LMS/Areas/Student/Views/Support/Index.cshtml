@model List<LMS.Domain.Entities.Support.SupportTicket>
@{
    ViewData["Title"] = Html.T("الدعم الفني", "Technical Support");
    var status = ViewBag.Status as LMS.Domain.Enums.TicketStatus?;
}

@section Styles {
<style>
    .ticket-card {
        transition: all 0.2s ease;
    }
    .ticket-card:hover {
        transform: translateX(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-life-buoy text-primary me-2"></i>
                    @Html.T("الدعم الفني", "Technical Support")
                </h3>
                <p class="text-muted mb-0">@Html.T("نحن هنا لمساعدتك", "We are here to help you")</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="feather-plus me-2"></i>
                @Html.T("تذكرة جديدة", "New Ticket")
            </a>
        </div>
    </div>
</div>

<!-- Filter Tabs -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link @(!status.HasValue ? "active" : "")" asp-action="Index">
                    @Html.T("الكل", "All")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(status == LMS.Domain.Enums.TicketStatus.New ? "active" : "")" 
                   asp-action="Index" asp-route-status="@LMS.Domain.Enums.TicketStatus.New">
                    @Html.T("جديدة", "New")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(status == LMS.Domain.Enums.TicketStatus.InProgress ? "active" : "")" 
                   asp-action="Index" asp-route-status="@LMS.Domain.Enums.TicketStatus.InProgress">
                    @Html.T("قيد المعالجة", "In Progress")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(status == LMS.Domain.Enums.TicketStatus.Resolved ? "active" : "")" 
                   asp-action="Index" asp-route-status="@LMS.Domain.Enums.TicketStatus.Resolved">
                    @Html.T("تم الحل", "Resolved")
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(status == LMS.Domain.Enums.TicketStatus.Closed ? "active" : "")" 
                   asp-action="Index" asp-route-status="@LMS.Domain.Enums.TicketStatus.Closed">
                    @Html.T("مغلقة", "Closed")
                </a>
            </li>
        </ul>
    </div>
</div>

<!-- Tickets List -->
<div class="row g-4">
    @if (Model.Any())
    {
        @foreach (var ticket in Model)
        {
            var statusClass = ticket.Status switch
            {
                LMS.Domain.Enums.TicketStatus.New => "info",
                LMS.Domain.Enums.TicketStatus.InProgress => "warning",
                LMS.Domain.Enums.TicketStatus.Resolved => "success",
                LMS.Domain.Enums.TicketStatus.Closed => "secondary",
                _ => "secondary"
            };

            var statusText = ticket.Status switch
            {
                LMS.Domain.Enums.TicketStatus.New => Html.T("جديدة", "New"),
                LMS.Domain.Enums.TicketStatus.InProgress => Html.T("قيد المعالجة", "In Progress"),
                LMS.Domain.Enums.TicketStatus.Resolved => Html.T("تم الحل", "Resolved"),
                LMS.Domain.Enums.TicketStatus.Closed => Html.T("مغلقة", "Closed"),
                _ => Html.T("غير معروف", "Unknown")
            };

            var priorityClass = ticket.Priority switch
            {
                LMS.Domain.Enums.TicketPriority.Low => "success",
                LMS.Domain.Enums.TicketPriority.Medium => "warning",
                LMS.Domain.Enums.TicketPriority.High => "danger",
                LMS.Domain.Enums.TicketPriority.Critical => "danger",
                _ => "secondary"
            };

            var priorityText = ticket.Priority switch
            {
                LMS.Domain.Enums.TicketPriority.Low => Html.T("منخفضة", "Low"),
                LMS.Domain.Enums.TicketPriority.Medium => Html.T("متوسطة", "Medium"),
                LMS.Domain.Enums.TicketPriority.High => Html.T("عالية", "High"),
                LMS.Domain.Enums.TicketPriority.Critical => Html.T("حرجة", "Critical"),
                _ => Html.T("غير محدد", "Not specified")
            };

            <div class="col-12">
                <div class="card ticket-card stretch stretch-full">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-lg-8">
                                <div class="d-flex align-items-start">
                                    <div class="avatar-text avatar-md bg-@statusClass text-white me-3">
                                        <i class="feather-message-square"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <h5 class="fw-bold mb-0">@ticket.Subject</h5>
                                            <span class="badge bg-@statusClass">@ticket.TicketNumber</span>
                                        </div>
                                        <p class="text-muted mb-2">
                                            @(ticket.Description.Length > 100 ? ticket.Description.Substring(0, 100) + "..." : ticket.Description)
                                        </p>
                                        <div class="d-flex align-items-center gap-3 fs-12 text-muted">
                                            <span>
                                                <i class="feather-clock me-1"></i>
                                                @ticket.CreatedAt.ToString("dd/MM/yyyy")
                                            </span>
                                            @if (ticket.CategoryEntity != null)
                                            {
                                                <span>
                                                    <i class="feather-tag me-1"></i>
                                                    @ticket.CategoryEntity.Name
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 text-end">
                                <span class="badge bg-soft-@statusClass text-@statusClass mb-2">@statusText</span>
                                <br />
                                <span class="badge bg-soft-@priorityClass text-@priorityClass">@Html.T("أولوية", "Priority") @priorityText</span>
                                <br />
                                <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-primary mt-2">
                                    <i class="feather-eye me-2"></i>
                                    @Html.T("عرض التفاصيل", "View Details")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-body text-center py-5">
                    <i class="feather-inbox fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">@Html.T("لا توجد تذاكر دعم", "No support tickets")</h5>
                    <p class="text-muted mb-3">@Html.T("لم تقم بإنشاء أي تذاكر دعم بعد", "You haven't created any support tickets yet")</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="feather-plus me-2"></i>
                        @Html.T("إنشاء تذكرة جديدة", "Create New Ticket")
                    </a>
                </div>
            </div>
        </div>
    }
</div>
