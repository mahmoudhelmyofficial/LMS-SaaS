@model LMS.Areas.Student.ViewModels.SupportTicketCreateViewModel
@{
    ViewData["Title"] = Html.T("إنشاء تذكرة دعم", "Create Support Ticket");
}

@section Styles {
<style>
    .priority-option {
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        padding: 15px;
        cursor: pointer;
        transition: all 0.2s;
    }
    .priority-option:hover {
        border-color: #667eea;
        background: #f5f7ff;
    }
    .priority-option input[type="radio"]:checked ~ label {
        border-color: #667eea !important;
        background: #eff6ff !important;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Breadcrumb -->
<nav aria-label="@Html.T("مسار التنقل", "Breadcrumb")">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Student" asp-action="Index" asp-controller="Dashboard">@Html.T("لوحة التحكم", "Dashboard")</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">@Html.T("تذاكر الدعم", "Support Tickets")</a></li>
        <li class="breadcrumb-item active">@Html.T("إنشاء تذكرة جديدة", "Create New Ticket")</li>
    </ol>
</nav>

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <h3 class="fw-bold mb-2">
            <i class="feather-life-buoy text-primary me-2"></i>
            @Html.T("إنشاء تذكرة دعم جديدة", "Create New Support Ticket")
        </h3>
        <p class="text-muted mb-0">@Html.T("سنرد عليك في أقرب وقت ممكن", "We will respond as soon as possible")</p>
    </div>
</div>

<div class="row g-4">
    <!-- Ticket Form -->
    <div class="col-lg-8">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="fw-bold mb-0">@Html.T("معلومات التذكرة", "Ticket Information")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label asp-for="Subject" class="form-label required"></label>
                        <input asp-for="Subject" class="form-control" placeholder="@Html.T("اختر موضوع المشكلة", "Enter the issue subject")" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Category" class="form-label required"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">@Html.T("اختر الفئة", "Select Category")</option>
                            <option value="0">@Html.T("مشكلة تقنية", "Technical Issue")</option>
                            <option value="1">@Html.T("الفواتير والدفع", "Billing & Payment")</option>
                            <option value="2">@Html.T("محتوى الدورة", "Course Content")</option>
                            <option value="3">@Html.T("مشكلة في الحساب", "Account Issue")</option>
                            <option value="4">@Html.T("طلب ميزة جديدة", "Feature Request")</option>
                            <option value="5">@Html.T("أخرى", "Other")</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Priority" class="form-label required"></label>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="priority-option">
                                    <input asp-for="Priority" type="radio" value="0" id="priorityLow" class="d-none" />
                                    <label for="priorityLow" class="mb-0 w-100 cursor-pointer">
                                        <div class="text-center">
                                            <i class="feather-arrow-down text-success fs-3 mb-2 d-block"></i>
                                            <strong class="d-block">@Html.T("منخفضة", "Low")</strong>
                                            <small class="text-muted">@Html.T("رد خلال 48 ساعة", "Response within 48 hours")</small>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="priority-option">
                                    <input asp-for="Priority" type="radio" value="1" id="priorityMedium" class="d-none" checked />
                                    <label for="priorityMedium" class="mb-0 w-100 cursor-pointer">
                                        <div class="text-center">
                                            <i class="feather-minus text-warning fs-3 mb-2 d-block"></i>
                                            <strong class="d-block">@Html.T("متوسطة", "Medium")</strong>
                                            <small class="text-muted">@Html.T("رد خلال 24 ساعة", "Response within 24 hours")</small>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="priority-option">
                                    <input asp-for="Priority" type="radio" value="2" id="priorityHigh" class="d-none" />
                                    <label for="priorityHigh" class="mb-0 w-100 cursor-pointer">
                                        <div class="text-center">
                                            <i class="feather-arrow-up text-danger fs-3 mb-2 d-block"></i>
                                            <strong class="d-block">@Html.T("عالية", "High")</strong>
                                            <small class="text-muted">@Html.T("رد خلال 6 ساعات", "Response within 6 hours")</small>
                                        </div>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label required"></label>
                        <textarea asp-for="Description" class="form-control" rows="8" placeholder="@Html.T("صف المشكلة بالتفصيل...", "Describe the issue in detail...")"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="text-muted">@Html.T("كن واضحاً قدر الإمكان لمساعدتنا في حل مشكلتك بسرعة", "Be as clear as possible to help us resolve your issue quickly")</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="CourseId" class="form-label"></label>
                        <select asp-for="CourseId" class="form-select">
                            <option value="">@Html.T("-- غير مرتبط بدورة محددة --", "-- Not related to a specific course --")</option>
                            @if (ViewBag.Courses != null)
                            {
                                @foreach (var course in ViewBag.Courses as List<LMS.Domain.Entities.Courses.Course>)
                                {
                                    <option value="@course.Id">@course.Title</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                        <small class="text-muted">@Html.T("إذا كانت المشكلة متعلقة بدورة معينة", "If the issue is related to a specific course")</small>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="feather-send me-2"></i>
                            @Html.T("إرسال التذكرة", "Submit Ticket")
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="feather-x me-2"></i>
                            @Html.T("إلغاء", "Cancel")
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- FAQ -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-help-circle me-2"></i>
                    @Html.T("قد يساعدك", "This might help")
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="feather-info me-2"></i>
                    @Html.T("راجع الأسئلة الشائعة أولاً، قد تجد الحل هناك!", "Check the FAQ first, you might find the solution there!")
                </div>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                        <strong class="d-block mb-1">@Html.T("كيف أعيد تعيين كلمة المرور؟", "How do I reset my password?")</strong>
                        <small class="text-muted">@Html.T("دليل سريع", "Quick guide")</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                        <strong class="d-block mb-1">@Html.T("مشاكل تشغيل الفيديو", "Video playback issues")</strong>
                        <small class="text-muted">@Html.T("حلول شائعة", "Common solutions")</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action border-0 px-0">
                        <strong class="d-block mb-1">@Html.T("استرجاع المدفوعات", "Payment refunds")</strong>
                        <small class="text-muted">@Html.T("السياسات", "Policies")</small>
                    </a>
                </div>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("طرق أخرى للتواصل", "Other ways to contact us")</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar-text avatar-sm bg-soft-primary text-primary me-3">
                            <i class="feather-mail"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">@Html.T("البريد الإلكتروني", "Email")</small>
                            <strong>@Html.T("support@example.com", "support@example.com")</strong>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex align-items-center">
                        <div class="avatar-text avatar-sm bg-soft-success text-success me-3">
                            <i class="feather-phone"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">@Html.T("الهاتف", "Phone")</small>
                            <strong>@Html.T("+966 50 123 4567", "+966 50 123 4567")</strong>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="d-flex align-items-center">
                        <div class="avatar-text avatar-sm bg-soft-warning text-warning me-3">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">@Html.T("ساعات العمل", "Working Hours")</small>
                            <strong>@Html.T("9 ص - 5 م (السبت - الخميس)", "9 AM - 5 PM (Sat - Thu)")</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    // Priority selection visual feedback
    document.querySelectorAll('input[name="Priority"]').forEach(radio => {
        radio.addEventListener('change', function() {
            document.querySelectorAll('.priority-option').forEach(opt => {
                opt.style.borderColor = '#e5e7eb';
                opt.style.background = 'white';
            });
            this.closest('.priority-option').style.borderColor = '#667eea';
            this.closest('.priority-option').style.background = '#eff6ff';
        });
    });

    // Set initial selected priority
    const checkedRadio = document.querySelector('input[name="Priority"]:checked');
    if (checkedRadio) {
        checkedRadio.closest('.priority-option').style.borderColor = '#667eea';
        checkedRadio.closest('.priority-option').style.background = '#eff6ff';
    }
</script>
}
