@model LMS.Domain.Entities.Payments.Payment
@using LMS.Domain.Enums
@using LMS.Services.Interfaces
@inject IPlatformSettingsService PlatformSettings
@{
    ViewData["Title"] = Html.T("إعادة محاولة الدفع", "Payment Retry");
    Layout = "_StudentLayout";
    var productName = Model.Course?.Title ?? Model.Book?.Title ?? Html.T("منتج", "Product");
    var productImage = Model.Course?.ThumbnailUrl ?? Model.Book?.CoverImageUrl ?? "/images/placeholder.jpg";
    var availableGateways = ViewBag.AvailableGateways as List<LMS.Services.Interfaces.AvailablePaymentMethod> ?? new();
    
    // Payment retry settings
    var maxRetryCount = await PlatformSettings.GetIntSettingAsync("Payment.MaxRetryCount", 3);
}

@Html.AntiForgeryToken()

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="feather-refresh-cw me-2"></i>
                        @Html.T("إعادة محاولة الدفع", "Payment retry")
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Product Info -->
                    <div class="d-flex align-items-center mb-4 p-3 bg-light rounded">
                        <img src="@productImage" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" alt="@productName">
                        <div>
                            <h6 class="mb-1">@productName</h6>
                            <span class="badge bg-secondary">@Model.ProductType</span>
                        </div>
                        <div class="ms-auto text-end">
                            <div class="fs-4 fw-bold text-primary">
                                @Model.TotalAmount.ToEGP(2)
                            </div>
                        </div>
                    </div>

                    <!-- Error Info -->
                    @if (!string.IsNullOrEmpty(Model.FailureReason))
                    {
                        <div class="alert alert-warning">
                            <h6 class="alert-heading">
                                <i class="feather-alert-triangle me-2"></i>
                                @Html.T("سبب الفشل السابق", "Previous failure reason")
                            </h6>
                            <p class="mb-0">@Model.FailureReason</p>
                        </div>
                    }

                    <!-- Retry Count Warning -->
                    @if (Model.RetryCount >= maxRetryCount)
                    {
                        <div class="alert alert-danger">
                            <i class="feather-alert-circle me-2"></i>
                            @Html.T("لقد قمت بمحاولة الدفع", "You have attempted payment") @Model.RetryCount @Html.T("مرات.", "times.") 
                            @Html.T("إذا استمرت المشكلة، يرجى التواصل مع الدعم الفني.", "If the problem persists, please contact support.")
                        </div>
                    }

                    <!-- Payment Methods -->
                    <h6 class="border-bottom pb-2 mb-3">@Html.T("اختر طريقة الدفع", "Choose payment method")</h6>

                    <div class="row g-3 mb-4" id="paymentMethods">
                        @foreach (var gateway in availableGateways)
                        {
                            <div class="col-md-6">
                                <div class="card payment-method-card h-100" data-gateway="@gateway.GatewayType">
                                    <div class="card-body d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(gateway.IconUrl))
                                        {
                                            <img src="@gateway.IconUrl" class="me-3" style="width: 40px; height: 40px; object-fit: contain;" alt="@gateway.DisplayName">
                                        }
                                        else
                                        {
                                            <div class="me-3 bg-light rounded p-2">
                                                <i class="fas fa-credit-card fa-lg text-primary"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="mb-0">@gateway.DisplayName</h6>
                                            @if (!string.IsNullOrEmpty(gateway.Description))
                                            {
                                                <small class="text-muted">@gateway.Description</small>
                                            }
                                        </div>
                                        <div class="ms-auto">
                                            <i class="fas fa-check-circle text-success d-none selected-icon"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!availableGateways.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            @Html.T("لا توجد طرق دفع متاحة حالياً. يرجى المحاولة لاحقاً.", "No payment methods available at the moment. Please try again later.")
                        </div>
                    }

                    <!-- Stripe Card Element -->
                    <div id="stripeCardSection" class="d-none mb-4">
                        <h6 class="mb-3">@Html.T("معلومات البطاقة", "Card details")</h6>
                        <div id="card-element" class="form-control py-3"></div>
                        <div id="card-errors" class="text-danger small mt-2"></div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex gap-3">
                        <button type="button" id="retryBtn" class="btn btn-primary btn-lg flex-grow-1" disabled>
                            <i class="feather-lock me-2"></i>
                            @Html.T("إعادة الدفع", "Retry payment")
                            <span class="spinner-border spinner-border-sm d-none ms-2" id="loadingSpinner"></span>
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            @Html.T("إلغاء", "Cancel")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .payment-method-card {
            cursor: pointer;
            transition: all 0.2s ease;
            border: 2px solid transparent;
        }
        .payment-method-card:hover {
            border-color: var(--bs-primary);
            transform: translateY(-2px);
        }
        .payment-method-card.selected {
            border-color: var(--bs-primary);
            background-color: rgba(var(--bs-primary-rgb), 0.05);
        }
        .payment-method-card.selected .selected-icon {
            display: block !important;
        }
        #card-element {
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 12px;
        }
    </style>
}

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        Object.assign(window.__T || {}, {
            PaymentError: '@Html.Raw(Html.T("حدث خطأ أثناء معالجة الدفع", "An error occurred while processing the payment").Replace("'", "\\'"))'
        });
        let selectedGateway = null;
        let stripe = null;
        let cardElement = null;

        document.querySelectorAll('.payment-method-card').forEach(card => {
            card.addEventListener('click', function() {
                // Deselect all
                document.querySelectorAll('.payment-method-card').forEach(c => c.classList.remove('selected'));
                // Select this one
                this.classList.add('selected');
                selectedGateway = parseInt(this.dataset.gateway);
                document.getElementById('retryBtn').disabled = false;

                // Show/hide Stripe card element
                if (selectedGateway === 0) { // Stripe
                    document.getElementById('stripeCardSection').classList.remove('d-none');
                    initStripe();
                } else {
                    document.getElementById('stripeCardSection').classList.add('d-none');
                }
            });
        });

        function initStripe() {
            if (stripe) return;
            
            // Get Stripe public key from settings (should be injected from server)
            const stripeKey = '@(ViewBag.StripePublicKey ?? "pk_test_xxx")';
            stripe = Stripe(stripeKey);
            const elements = stripe.elements();
            cardElement = elements.create('card', {
                style: {
                    base: {
                        fontSize: '16px',
                        color: '#333',
                        '::placeholder': { color: '#aab7c4' }
                    }
                }
            });
            cardElement.mount('#card-element');
            cardElement.on('change', event => {
                document.getElementById('card-errors').textContent = event.error ? event.error.message : '';
            });
        }

        document.getElementById('retryBtn').addEventListener('click', async function() {
            if (!selectedGateway && selectedGateway !== 0) return;

            const btn = this;
            const spinner = document.getElementById('loadingSpinner');
            btn.disabled = true;
            spinner.classList.remove('d-none');

            try {
                const response = await fetch('@Url.Action("Retry", new { id = Model.Id })', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({ gateway: selectedGateway })
                });

                const data = await response.json();

                if (data.success) {
                    if (data.redirectUrl) {
                        window.location.href = data.redirectUrl;
                    } else if (data.clientSecret && stripe) {
                        const { error, paymentIntent } = await stripe.confirmCardPayment(data.clientSecret, {
                            payment_method: { card: cardElement }
                        });
                        if (error) {
                            alert(error.message);
                        } else if (paymentIntent.status === 'succeeded') {
                            window.location.href = '/Student/Checkout/Success?paymentId=@Model.Id';
                        }
                    }
                } else {
                    alert(data.message || (window.__T && window.__T.PaymentError));
                }
            } catch (error) {
                console.error('Error:', error);
                alert((window.__T && window.__T.UnexpectedError) || 'An unexpected error occurred. Please try again.');
            } finally {
                btn.disabled = false;
                spinner.classList.add('d-none');
            }
        });
    </script>
}

