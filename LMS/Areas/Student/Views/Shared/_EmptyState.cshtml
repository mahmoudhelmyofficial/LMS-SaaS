@{
    var icon = ViewData["Icon"]?.ToString() ?? "inbox";
    var title = ViewData["Title"]?.ToString() ?? Html.T("لا توجد بيانات", "No data found");
    var message = ViewData["Message"]?.ToString() ?? Html.T("لا توجد عناصر لعرضها حالياً.", "No items to display at the moment.");
    var actionText = ViewData["ActionText"]?.ToString();
    var actionUrl = ViewData["ActionUrl"]?.ToString();
    var actionArea = ViewData["ActionArea"]?.ToString();
    var actionController = ViewData["ActionController"]?.ToString();
    var actionAction = ViewData["ActionAction"]?.ToString();
}

<div class="text-center py-5">
    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-4">
        <i class="feather-@icon fs-3"></i>
    </div>
    <h4 class="fw-bold mb-2">@title</h4>
    <p class="text-muted mb-4">@message</p>
    @if (!string.IsNullOrEmpty(actionText))
    {
        @if (!string.IsNullOrEmpty(actionUrl))
        {
            <a href="@actionUrl" class="btn btn-primary">
                @actionText
                <i class="feather-arrow-left ms-2"></i>
            </a>
        }
        else if (!string.IsNullOrEmpty(actionArea) && !string.IsNullOrEmpty(actionController) && !string.IsNullOrEmpty(actionAction))
        {
            <a asp-area="@actionArea" asp-controller="@actionController" asp-action="@actionAction" class="btn btn-primary">
                @actionText
                <i class="feather-arrow-left ms-2"></i>
            </a>
        }
    }
</div>

