@* Quick Actions Panel - Student Area *@
<div class="quick-actions-panel mb-3">
    <div class="quick-actions-header px-3 py-2">
        <small class="text-muted fw-semibold">@Html.T("إجراءات سريعة", "Quick Actions")</small>
    </div>
    <div class="quick-actions-grid px-3 pb-3">
        <div class="row g-2">
            <div class="col-6">
                <a asp-area="Student" asp-controller="Courses" asp-action="InProgress" 
                   class="quick-action-btn btn btn-soft-primary btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-play-circle mb-1"></i>
                    <small>@Html.T("متابعة التعلم", "Continue Learning")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Student" asp-controller="Assignments" asp-action="Pending" 
                   class="quick-action-btn btn btn-soft-warning btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-edit mb-1"></i>
                    <small>@Html.T("الواجبات المعلقة", "Pending Assignments")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Student" asp-controller="LiveClasses" asp-action="Index" 
                   class="quick-action-btn btn btn-soft-success btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-video mb-1"></i>
                    <small>@Html.T("البث المباشر", "Live Classes")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Student" asp-controller="Courses" asp-action="Browse" 
                   class="quick-action-btn btn btn-soft-info btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-search mb-1"></i>
                    <small>@Html.T("تصفح الدورات", "Browse Courses")</small>
                </a>
            </div>
        </div>
    </div>
</div>
