@model dynamic

@{
    var label = ViewData["Label"]?.ToString() ?? Html.T("التسمية", "Label");
    var value = ViewData["Value"]?.ToString() ?? "0";
    var description = ViewData["Description"]?.ToString() ?? "";
    var icon = ViewData["Icon"]?.ToString() ?? "bar-chart";
    var colorClass = ViewData["ColorClass"]?.ToString() ?? "primary";
    var trend = ViewData["Trend"]?.ToString() ?? "";
    var trendIcon = ViewData["TrendIcon"]?.ToString() ?? "";
}

<div class="card stretch stretch-full">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div class="flex-grow-1">
                <div class="fw-medium text-muted mb-2 text-truncate-1-line">@label</div>
                <h3 class="fw-bold mb-2">@value</h3>
                @if (!string.IsNullOrEmpty(description))
                {
                    <small class="text-muted">@description</small>
                }
                @if (!string.IsNullOrEmpty(trend))
                {
                    <div class="mt-2">
                        <small class="text-@(trend.Contains("+") ? "success" : "danger")">
                            @if (!string.IsNullOrEmpty(trendIcon))
                            {
                                <i class="feather-@trendIcon me-1"></i>
                            }
                            @trend
                        </small>
                    </div>
                }
            </div>
            <div class="avatar-text avatar-lg bg-soft-@colorClass text-@colorClass">
                <i class="feather-@icon"></i>
            </div>
        </div>
    </div>
</div>

