@{
    var label = ViewData["Label"]?.ToString() ?? "";
    var percentage = Convert.ToDouble(ViewData["Percentage"] ?? 0);
    var color = ViewData["Color"]?.ToString() ?? "primary";
    var height = ViewData["Height"]?.ToString() ?? "8";
    var showPercentage = Convert.ToBoolean(ViewData["ShowPercentage"] ?? true);
    var animated = Convert.ToBoolean(ViewData["Animated"] ?? false);
}

<div class="progress-bar-wrapper">
    @if (!string.IsNullOrEmpty(label))
    {
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted fs-12">@label</span>
            @if (showPercentage)
            {
                <span class="fw-semibold fs-12">@percentage.ToString("F0")%</span>
            }
        </div>
    }
    <div class="progress ht-@height">
        <div class="progress-bar bg-@color @(animated ? "progress-bar-animated progress-bar-striped" : "")" 
             role="progressbar" 
             style="width: @percentage%" 
             aria-valuenow="@percentage" 
             aria-valuemin="0" 
             aria-valuemax="100">
        </div>
    </div>
</div>

