@model LMS.Domain.Entities.Learning.Enrollment

<div class="card course-card stretch stretch-full">
    <div class="card-body p-4">
        <div class="d-flex align-items-start mb-3">
            @if (!string.IsNullOrEmpty(Model.Course.ThumbnailUrl))
            {
                <img src="@Model.Course.ThumbnailUrl" alt="@Model.Course.Title" class="img-fluid rounded me-3" style="width: 80px; height: 80px; object-fit: cover;" />
            }
            else
            {
                <div class="avatar-text avatar-xl bg-soft-primary text-primary me-3">
                    <i class="feather-book-open"></i>
                </div>
            }
            <div class="flex-grow-1">
                <a asp-area="Student" asp-controller="Courses" asp-action="Details" asp-route-id="@Model.Id" class="d-block">
                    <h5 class="fw-bold mb-1 text-truncate-2-line">@Model.Course.Title</h5>
                </a>
                <p class="text-muted mb-1 fs-12">
                    <i class="feather-user fs-11 me-1"></i>
                    @Model.Course.Instructor.FullName
                </p>
                <p class="text-muted mb-0 fs-11">
                    <i class="feather-clock fs-11 me-1"></i>
                    @Html.T("آخر وصول:", "Last accessed:") @((Model.LastAccessedAt ?? Model.EnrolledAt).ToString("dd/MM/yyyy"))
                </p>
            </div>
        </div>
        
        <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted fs-12">@Html.T("التقدم", "Progress")</span>
                <span class="fw-semibold fs-12">@Model.ProgressPercentage.ToString("F0")%</span>
            </div>
            <div class="progress ht-8">
                <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.ProgressPercentage%" aria-valuenow="@Model.ProgressPercentage" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
        
        <div class="d-flex align-items-center justify-content-between gap-2">
            <div class="text-muted fs-11">
                <i class="feather-check-circle me-1"></i>
                @Model.LessonProgress.Count(lp => lp.IsCompleted) / @Model.TotalLessons @Html.T("دروس", "lessons")
            </div>
            <a asp-area="Student" asp-controller="Learning" asp-action="Lesson" asp-route-lessonId="@(Model.LastLessonId ?? Model.Course.Modules.FirstOrDefault()?.Lessons.FirstOrDefault()?.Id)" class="btn btn-sm btn-primary">
                @(Model.ProgressPercentage > 0 ? Html.T("متابعة", "Continue") : Html.T("ابدأ الآن", "Start Now"))
                <i class="feather-arrow-left ms-1"></i>
            </a>
        </div>
    </div>
</div>

