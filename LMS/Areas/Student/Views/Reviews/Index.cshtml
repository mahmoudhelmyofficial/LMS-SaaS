@model List<LMS.Areas.Student.ViewModels.ReviewDisplayViewModel>
@{
    ViewData["Title"] = Html.T("مراجعاتي", "My Reviews");
}

@section Styles {
<style>
    .review-card {
        transition: all 0.2s ease;
    }
    .review-card:hover {
        transform: translateX(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-star text-warning me-2"></i>
                    @Html.T("مراجعاتي", "My Reviews")
                </h3>
                <p class="text-muted mb-0">@Html.T("مراجعاتك للدورات", "Your course reviews") (@(Model?.Count ?? 0) @Html.T("مراجعة", "reviews"))</p>
            </div>
        </div>
    </div>
</div>

<!-- Reviews List -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var review in Model)
        {
            <div class="col-12">
                <div class="card review-card stretch stretch-full">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="d-flex align-items-start">
                                    @if (!string.IsNullOrEmpty(review.StudentImageUrl))
                                    {
                                        <img src="@review.StudentImageUrl" alt="@review.StudentName" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="avatar-text avatar-lg bg-soft-primary text-primary me-3">
                                            <i class="feather-user"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <p class="text-primary fw-semibold mb-1">
                                            <i class="feather-book-open me-1"></i>@review.CourseName
                                        </p>
                                        @if (!string.IsNullOrEmpty(review.Title))
                                        {
                                            <h5 class="fw-bold mb-2">@review.Title</h5>
                                        }
                                        <div class="mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="feather-star @(i <= review.Rating ? "text-warning" : "text-muted") fs-18" style="fill: @(i <= review.Rating ? "currentColor" : "none")"></i>
                                            }
                                            <span class="text-muted ms-2">@review.Rating.ToString("F1")</span>
                                        </div>
                                        <p class="text-muted mb-2">@review.Comment</p>
                                        <div class="d-flex align-items-center gap-3">
                                            <small class="text-muted">
                                                <i class="feather-clock me-1"></i>
                                                @review.CreatedAt.ToRelativeTime()
                                            </small>
                                            @if (review.IsVerifiedPurchase)
                                            {
                                                <span class="badge bg-soft-success text-success">
                                                    <i class="feather-check-circle me-1"></i>
                                                    @Html.T("شراء موثق", "Verified purchase")
                                                </span>
                                            }
                                            @if (!review.IsApproved)
                                            {
                                                <span class="badge bg-soft-warning text-warning">@Html.T("قيد المراجعة", "Pending review")</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(review.InstructorResponse))
                                        {
                                            <div class="mt-3 p-3 bg-soft-info rounded">
                                                <small class="fw-bold text-info d-block mb-1">
                                                    <i class="feather-message-circle me-1"></i>
                                                    @Html.T("رد المدرس:", "Instructor response:")
                                                </small>
                                                <small class="text-muted">@review.InstructorResponse</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 text-end">
                                <div class="d-flex gap-2 justify-content-end mb-3">
                                    <span class="text-muted">
                                        <i class="feather-thumbs-up me-1"></i>
                                        @review.HelpfulCount
                                    </span>
                                    <span class="text-muted">
                                        <i class="feather-thumbs-down me-1"></i>
                                        @review.NotHelpfulCount
                                    </span>
                                </div>
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Edit" asp-route-courseId="@review.CourseId" class="btn btn-sm btn-outline-primary">
                                        <i class="feather-edit me-2"></i>
                                        @Html.T("تعديل", "Edit")
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه المراجعة؟", "Are you sure you want to delete this review?").Replace("'", "\\'"))')">
                                            <i class="feather-trash-2 me-2"></i>
                                            @Html.T("حذف", "Delete")
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="feather-star fs-1 text-muted mb-3 d-block"></i>
                <h5 class="text-muted">@Html.T("لا توجد مراجعات بعد", "No reviews yet")</h5>
                <p class="text-muted">@Html.T("أكمل بعض الدورات ثم شاركنا رأيك", "Complete some courses then share your feedback")</p>
                <a asp-controller="Courses" asp-action="Index" class="btn btn-primary">
                    <i class="feather-book-open me-2"></i>
                    @Html.T("عرض دوراتي", "View my courses")
                </a>
            </div>
        </div>
    }
</div>
