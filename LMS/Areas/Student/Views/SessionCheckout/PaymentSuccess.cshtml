@{
    ViewData["Title"] = Html.T("تم الشراء بنجاح", "Purchase Successful");
    var session = ViewBag.Session as LMS.Domain.Entities.LiveSessions.LiveClass;
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card stretch stretch-full">
            <div class="card-body text-center py-5">
                <div class="avatar-text avatar-xl bg-soft-success text-success mx-auto mb-4">
                    <i class="feather-check-circle fs-1"></i>
                </div>

                <h3 class="fw-bold mb-2">@Html.T("تم الشراء بنجاح!", "Purchase Successful!")</h3>
                <p class="text-muted mb-4">@Html.T("تم شراء الجلسة بنجاح. يمكنك الآن الانضمام للجلسة عند بدئها.", "Session purchased successfully. You can now join the session when it starts.")</p>

                @if (session != null)
                {
                    <div class="bg-light rounded p-4 mb-4 text-start">
                        <h5 class="fw-bold mb-3">@session.Title</h5>
                        <div class="d-flex align-items-center gap-3 mb-2 text-muted small">
                            <span>
                                <i class="feather-user me-1"></i>
                                @(session.Instructor?.FullName ?? Html.T("مدرب", "Instructor"))
                            </span>
                            <span>
                                <i class="feather-calendar me-1"></i>
                                @session.ScheduledStartTime.ToString("dd/MM/yyyy")
                            </span>
                            <span>
                                <i class="feather-clock me-1"></i>
                                @session.ScheduledStartTime.ToString("HH:mm")
                            </span>
                        </div>
                    </div>

                    <div class="d-flex gap-3 justify-content-center">
                        @if (session.Status == LMS.Domain.Enums.LiveClassStatus.Live)
                        {
                            <a asp-area="Student" asp-controller="LiveClasses" asp-action="Join" asp-route-id="@session.Id" class="btn btn-danger btn-lg">
                                <i class="feather-video me-2"></i>
                                @Html.T("انضم الآن", "Join Now")
                            </a>
                        }
                        <a asp-area="Student" asp-controller="LiveClasses" asp-action="Details" asp-route-id="@session.Id" class="btn btn-primary btn-lg">
                            <i class="feather-eye me-2"></i>
                            @Html.T("تفاصيل الجلسة", "Session Details")
                        </a>
                    </div>
                }

                <div class="mt-4">
                    <a asp-area="Student" asp-controller="LiveClasses" asp-action="Index" class="text-decoration-none text-muted">
                        <i class="feather-arrow-right me-1"></i>
                        @Html.T("العودة للجلسات المباشرة", "Back to Live Sessions")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
