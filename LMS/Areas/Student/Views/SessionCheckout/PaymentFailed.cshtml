@{
    ViewData["Title"] = Html.T("فشل الدفع", "Payment Failed");
    var liveClassId = ViewBag.LiveClassId as int? ?? 0;
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card stretch stretch-full">
            <div class="card-body text-center py-5">
                <div class="avatar-text avatar-xl bg-soft-danger text-danger mx-auto mb-4">
                    <i class="feather-x-circle fs-1"></i>
                </div>

                <h3 class="fw-bold mb-2">@Html.T("فشل عملية الدفع", "Payment Failed")</h3>
                <p class="text-muted mb-4">@Html.T("عذراً، لم نتمكن من إتمام عملية الدفع. يرجى المحاولة مرة أخرى أو اختيار طريقة دفع مختلفة.", "Sorry, we couldn't complete the payment. Please try again or choose a different payment method.")</p>

                <div class="d-flex gap-3 justify-content-center">
                    @if (liveClassId > 0)
                    {
                        <a asp-action="Checkout" asp-route-id="@liveClassId" class="btn btn-primary btn-lg">
                            <i class="feather-refresh-cw me-2"></i>
                            @Html.T("حاول مرة أخرى", "Try Again")
                        </a>
                    }
                    <a asp-area="Student" asp-controller="LiveClasses" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="feather-arrow-right me-2"></i>
                        @Html.T("العودة للجلسات", "Back to Sessions")
                    </a>
                </div>

                <div class="mt-4">
                    <a asp-area="Student" asp-controller="Support" asp-action="Create" class="text-decoration-none text-muted">
                        <i class="feather-headphones me-1"></i>
                        @Html.T("تواصل مع الدعم الفني", "Contact Technical Support")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
