@model LMS.Areas.Student.ViewModels.CalendarEventViewModel
@{
    ViewData["Title"] = Html.T("تفاصيل الحدث", "Event Details");
    var calendarEvent = ViewBag.Event as LMS.Domain.Entities.Learning.CalendarEvent;
}

@section Styles {
<style>
    .event-detail-card {
        border-right: 4px solid @Model.Color;
    }
    .event-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Breadcrumb -->
<nav aria-label="@Html.T("مسار التنقل", "Breadcrumb")">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">@Html.T("لوحة التحكم", "Dashboard")</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">@Html.T("التقويم", "Calendar")</a></li>
        <li class="breadcrumb-item active">@Model.Title</li>
    </ol>
</nav>

<div class="row g-4">
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Event Details Card -->
        <div class="card stretch stretch-full event-detail-card">
            <div class="card-body">
                <div class="d-flex align-items-start mb-4">
                    <div class="event-icon me-3" style="background-color: @(Model.Color)20; color: @Model.Color;">
                        @switch (Model.EventType)
                        {
                            case "Study":
                                <i class="feather-book"></i>
                                break;
                            case "Assignment":
                                <i class="feather-file-text"></i>
                                break;
                            case "Quiz":
                                <i class="feather-edit"></i>
                                break;
                            case "LiveClass":
                                <i class="feather-video"></i>
                                break;
                            case "Deadline":
                                <i class="feather-alert-circle"></i>
                                break;
                            default:
                                <i class="feather-calendar"></i>
                                break;
                        }
                    </div>
                    <div class="flex-grow-1">
                        <h3 class="fw-bold mb-2">@Model.Title</h3>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge" style="background-color: @Model.Color;">
                                @switch (Model.EventType)
                                {
                                    case "Personal": <text>@Html.T("شخصي", "Personal")</text>; break;
                                    case "Study": <text>@Html.T("جلسة دراسة", "Study session")</text>; break;
                                    case "Assignment": <text>@Html.T("واجب", "Assignment")</text>; break;
                                    case "Quiz": <text>@Html.T("اختبار", "Quiz")</text>; break;
                                    case "LiveClass": <text>@Html.T("جلسة مباشرة", "Live session")</text>; break;
                                    case "Deadline": <text>@Html.T("موعد نهائي", "Deadline")</text>; break;
                                    default: <text>@Html.T("أخرى", "Other")</text>; break;
                                }
                            </span>
                            @if (calendarEvent?.Course != null)
                            {
                                <span class="badge bg-soft-primary text-primary">
                                    <i class="feather-book-open me-1"></i>
                                    @calendarEvent.Course.Title
                                </span>
                            }
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">@Html.T("الوصف", "Description")</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                }

                <!-- Event Info -->
                <div class="row g-3">
                    <!-- Date & Time -->
                    <div class="col-md-6">
                        <div class="d-flex align-items-start">
                            <div class="avatar-text avatar-sm bg-soft-primary text-primary me-3">
                                <i class="feather-clock"></i>
                            </div>
                            <div>
                                <h6 class="fw-semibold mb-1">@Html.T("التاريخ والوقت", "Date & Time")</h6>
                                @{
                                    var dateCulture = new System.Globalization.CultureInfo(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "ar-SA" : "en-US");
                                }
                                @if (Model.IsAllDay)
                                {
                                    <p class="text-muted mb-0">
                                        @Model.StartTime.ToString("dddd, d MMMM yyyy", dateCulture)
                                        <br />
                                        <span class="badge bg-soft-info text-info">@Html.T("طوال اليوم", "All day")</span>
                                    </p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">
                                        @Model.StartTime.ToString("dddd, d MMMM yyyy", dateCulture)
                                        <br />
                                        <strong>@Html.T("من:", "From:")</strong> @Model.StartTime.ToString("hh:mm tt", dateCulture)
                                        @if (Model.EndTime.HasValue)
                                        {
                                            <br />
                                            <strong>@Html.T("إلى:", "To:")</strong> @Model.EndTime.Value.ToString("hh:mm tt", dateCulture)
                                        }
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Location -->
                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="avatar-text avatar-sm bg-soft-success text-success me-3">
                                    <i class="feather-map-pin"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("الموقع", "Location")</h6>
                                    <p class="text-muted mb-0">@Model.Location</p>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Reminder -->
                    @if (Model.SendReminder)
                    {
                        <div class="col-md-6">
                            <div class="d-flex align-items-start">
                                <div class="avatar-text avatar-sm bg-soft-warning text-warning me-3">
                                    <i class="feather-bell"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("التذكير", "Reminder")</h6>
                                    <p class="text-muted mb-0">
                                        @if (Model.ReminderMinutesBefore >= 1440)
                                        {
                                            <text>@((Model.ReminderMinutesBefore / 1440)) @Html.T("يوم قبل الحدث", "day(s) before event")</text>
                                        }
                                        else if (Model.ReminderMinutesBefore >= 60)
                                        {
                                            <text>@((Model.ReminderMinutesBefore / 60)) @Html.T("ساعة قبل الحدث", "hour(s) before event")</text>
                                        }
                                        else
                                        {
                                            <text>@Model.ReminderMinutesBefore @Html.T("دقيقة قبل الحدث", "minute(s) before event")</text>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Actions -->
                <hr class="my-4" />
                <div class="d-flex gap-2 justify-content-between">
                    <a asp-action="Index" class="btn btn-light">
                        <i class="feather-arrow-right me-2"></i>
                        @Html.T("رجوع للتقويم", "Back to Calendar")
                    </a>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل", "Edit")
                        </a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="feather-trash-2 me-2"></i>
                            @Html.T("حذف", "Delete")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quick Stats -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">@Html.T("معلومات إضافية", "Additional Information")</h6>
            </div>
            <div class="card-body">
                @{ var dateCultureCal = new System.Globalization.CultureInfo(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "ar-SA" : "en-US"); }
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-0 d-flex justify-content-between">
                        <span class="text-muted">@Html.T("تاريخ الإنشاء:", "Created:")</span>
                        <span class="fw-semibold">@calendarEvent.CreatedAt.ToString("yyyy/MM/dd", dateCultureCal)</span>
                    </div>
                    @if (calendarEvent.UpdatedAt.HasValue)
                    {
                        <div class="list-group-item px-0 d-flex justify-content-between">
                            <span class="text-muted">@Html.T("آخر تحديث:", "Last Updated:")</span>
                            <span class="fw-semibold">@calendarEvent.UpdatedAt.Value.ToString("yyyy/MM/dd", dateCultureCal)</span>
                        </div>
                    }
                    <div class="list-group-item px-0 d-flex justify-content-between">
                        <span class="text-muted">@Html.T("الحالة:", "Status:")</span>
                        @if (calendarEvent.StartTime > DateTime.UtcNow)
                        {
                            <span class="badge bg-soft-info text-info">@Html.T("قادم", "Upcoming")</span>
                        }
                        else if (calendarEvent.EndTime.HasValue && calendarEvent.EndTime.Value < DateTime.UtcNow)
                        {
                            <span class="badge bg-soft-secondary text-secondary">@Html.T("منتهي", "Ended")</span>
                        }
                        else
                        {
                            <span class="badge bg-soft-success text-success">@Html.T("جاري", "Ongoing")</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Links -->
        @if (calendarEvent?.CourseId != null)
        {
            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h6 class="fw-bold mb-0">@Html.T("روابط ذات صلة", "Related Links")</h6>
                </div>
                <div class="card-body">
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@calendarEvent.CourseId" 
                       class="btn btn-light-brand w-100 mb-2">
                        <i class="feather-book-open me-2"></i>
                        @Html.T("عرض الدورة", "View Course")
                    </a>
                    <a asp-controller="Learning" asp-action="Lesson" asp-route-lessonId="@calendarEvent.LessonId" 
                       class="btn btn-light-brand w-100"
                       style="display: @(calendarEvent.LessonId.HasValue ? "block" : "none")">
                        <i class="feather-play-circle me-2"></i>
                        @Html.T("الذهاب للدرس", "Go to Lesson")
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="feather-alert-triangle text-danger me-2"></i>
                    @Html.T("تأكيد الحذف", "Confirm Delete")
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">@Html.T("هل أنت متأكد من حذف هذا الحدث؟ لا يمكن التراجع عن هذا الإجراء.", "Are you sure you want to delete this event? This action cannot be undone.")</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-trash-2 me-2"></i>
                        @Html.T("نعم، احذف", "Yes, Delete")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Auto dismiss success messages
    setTimeout(function() {
        var alert = document.querySelector('.alert-success');
        if (alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        }
    }, 5000);
</script>
}

