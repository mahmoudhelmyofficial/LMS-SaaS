                    <i class="feather-x me-1"></i>
                    @Html.T("ÙØ§Ø¦ØªØ©", "Missed")
                </span>
            </div>
        </div>

        <!-- Day Headers -->
        <div class="calendar-grid mb-0" style="border-bottom: none;">
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø£Ø­Ø¯", "Sun")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø¥Ø«Ù†ÙŠÙ†", "Mon")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø«Ù„Ø§Ø«Ø§Ø¡", "Tue")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø£Ø±Ø¨Ø¹Ø§Ø¡", "Wed")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø®Ù…ÙŠØ³", "Thu")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø¬Ù…Ø¹Ø©", "Fri")</div>
            <div class="text-center fw-bold p-2 bg-light">@Html.T("Ø§Ù„Ø³Ø¨Øª", "Sat")</div>
        </div>

        <!-- Calendar Days -->
        <div class="calendar-grid">
            @{
                var firstDay = new DateTime(Model.Year, Model.Month, 1);
                var daysInMonth = DateTime.DaysInMonth(Model.Year, Model.Month);
                var startDayOfWeek = (int)firstDay.DayOfWeek;
                var today = DateTime.UtcNow.Date;

                // Previous month days
                var prevMonth = firstDay.AddMonths(-1);
                var daysInPrevMonth = DateTime.DaysInMonth(prevMonth.Year, prevMonth.Month);
                for (int i = daysInPrevMonth - startDayOfWeek + 1; i <= daysInPrevMonth; i++)
                {
                    <div class="calendar-day other-month">
                        <div class="day-number">@i</div>
                    </div>
                }

                // Current month days
                for (int day = 1; day <= daysInMonth; day++)
                {
                    var currentDate = new DateTime(Model.Year, Model.Month, day);
                    var isToday = currentDate == today;
                    var daySessions = Model.Sessions.Where(s => s.Date.Date == currentDate).ToList();

                    <div class="calendar-day @(isToday ? "today" : "")">
                        <div class="day-number">@day</div>
                        @foreach (var session in daySessions)
                        {
                            var statusClass = session.IsCompleted ? "session-completed" : 
                                            session.Date < DateTime.UtcNow && !session.IsCompleted ? "session-missed" : "session-pending";
                            
                            <div class="session-item @statusClass" title="@session.Title - @session.Duration @Html.T("Ø¯Ù‚ÙŠÙ‚Ø©", "min")" 
                                 onclick="viewSession(@session.Id)">
                                <i class="feather-book-open"></i> @session.Title
                            </div>
                        }
                    </div>
                }

                // Next month days
                var totalCells = startDayOfWeek + daysInMonth;
                var remainingCells = 35 - totalCells;
                if (remainingCells < 7 && totalCells > 28) remainingCells += 7;
                
                for (int i = 1; i <= remainingCells; i++)
                {
                    <div class="calendar-day other-month">
                        <div class="day-number">@i</div>
                    </div>
                }
            }
        </div>
    </div>
</div>

