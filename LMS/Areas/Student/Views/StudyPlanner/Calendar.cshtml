<!-- Calendar -->
<div class="card stretch stretch-full">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="fw-bold mb-0">
                @(new DateTime(Model.Year, Model.Month, 1).ToString("MMMM yyyy"))
