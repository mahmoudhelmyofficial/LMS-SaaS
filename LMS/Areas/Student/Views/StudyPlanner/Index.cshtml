    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div class="d-flex align-items-center">
            <div class="banner-icon flex-shrink-0 me-3">
                <i class="feather-calendar text-white"></i>
            </div>
            <div>
                <h4 class="text-white mb-1">@Html.T("مخطط الدراسة", "Study Planner")</h4>
                <p class="mb-0">@Html.T("نظم وقتك الدراسي بفعالية", "Organize your study time effectively")</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="GeneratePlan" class="btn btn-glass">
                <i class="feather-cpu me-2"></i>
                @Html.T("إنشاء خطة ذكية", "Generate Smart Plan")
            </a>
            <button type="button" class="btn btn-glass" data-bs-toggle="modal" data-bs-target="#createSessionModal">
