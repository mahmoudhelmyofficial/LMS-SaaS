@model LMS.Domain.Entities.LiveSessions.LiveClassRecording
@inject LMS.Services.Interfaces.ICurrentUserService CurrentUserService
@inject LMS.Data.ApplicationDbContext DbContext
@{
    ViewData["Title"] = Model?.Title ?? Html.T("مشاهدة التسجيل", "Watch Recording");
    var thumbnailUrl = Model?.LiveClass?.Course?.ThumbnailUrl ?? "/assets/images/general/placeholder.png";
    
    // Get student info for watermark
    var userId = CurrentUserService.UserId;
    var currentUser = await DbContext.Users
        .Where(u => u.Id == userId)
        .Select(u => new { u.FirstName, u.LastName, u.Email, u.PhoneNumber })
        .FirstOrDefaultAsync();
    var studentName = currentUser != null ? $"{currentUser.FirstName} {currentUser.LastName}" : "Student";
    var studentEmail = currentUser?.Email ?? "";
    var studentPhone = currentUser?.PhoneNumber ?? "";
}

@section Styles {
<style>
    .notes-panel {
        max-height: 500px;
        overflow-y: auto;
    }
    .timestamp-note {
        cursor: pointer;
        transition: all 0.2s ease;
    }
    .timestamp-note:hover {
        background: #f9fafb;
    }
    /* Adjust secure video player wrapper in card */
    .card-body .secure-video-wrapper {
        border-radius: 12px 12px 0 0;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Back Button -->
<div class="mb-4">
    <a asp-action="Recordings" class="btn btn-light">
        <i class="feather-arrow-right me-2"></i>
        @Html.T("العودة للتسجيلات", "Back to Recordings")
    </a>
</div>

<!-- Secure Video Player -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card stretch stretch-full mb-4">
            <div class="card-body p-0">
                @{
                    ViewData["VideoUrl"] = Model?.RecordingUrl ?? "";
                    ViewData["VideoProvider"] = Model?.VideoProvider ?? "local";
                    ViewData["VideoId"] = "";
                    ViewData["LessonId"] = 0;
                    ViewData["StudentName"] = studentName;
                    ViewData["StudentEmail"] = studentEmail;
                    ViewData["StudentPhone"] = studentPhone;
                }
                @await Html.PartialAsync("_SecureVideoPlayer")
            </div>
        </div>

        <!-- Recording Info -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <span class="badge bg-soft-primary text-primary mb-2">@(Model?.LiveClass?.Course?.Category?.Name ?? Html.T("دورة", "Course"))</span>
                        <h4 class="fw-bold mb-2">@(Model?.Title ?? Model?.LiveClass?.Title ?? Html.T("تسجيل الجلسة", "Session Recording"))</h4>
                        <p class="text-muted mb-0">
                            <i class="feather-user me-2"></i>
                            @(Model?.LiveClass?.Instructor?.FullName ?? Html.T("المدرس", "Instructor"))
                            <span class="mx-2">•</span>
                            <i class="feather-calendar me-2"></i>
                            @(Model?.RecordedAt?.ToString("dd MMMM yyyy") ?? Html.T("غير محدد", "Not specified"))
                            <span class="mx-2">•</span>
                            <i class="feather-clock me-2"></i>
                            @if (Model?.Duration != null)
                            {
                                @Model.Duration.ToString(@"h\:mm\:ss")
                            }
                            else
                            {
                                <span>@Html.T("غير محدد", "Not specified")</span>
                            }
                        </p>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-light" data-bs-toggle="dropdown">
                            <i class="feather-more-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="feather-share-2 me-2"></i>@Html.T("مشاركة", "Share")</a></li>
                            <li><a class="dropdown-item" href="#"><i class="feather-bookmark me-2"></i>@Html.T("إضافة للمحفوظات", "Add to Bookmarks")</a></li>
                        </ul>
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <h6 class="fw-bold mb-2">@Html.T("الوصف", "Description")</h6>
                    <p class="text-muted mb-0">
                        @(Model?.LiveClass?.Description ?? Html.T("لا يوجد وصف متاح لهذا التسجيل", "No description available for this recording"))
                    </p>
                </div>

                <!-- Course Info -->
                @if (Model?.LiveClass?.Course != null)
                {
                    <div>
                        <h6 class="fw-bold mb-2">@Html.T("معلومات الدورة", "Course Information")</h6>
                        <div class="d-flex flex-wrap gap-2">
                            <span class="badge bg-soft-primary text-primary">@Model.LiveClass.Course.Title</span>
                            @if (Model.LiveClass.Course.Level != null)
                            {
                                <span class="badge bg-soft-info text-info">@Model.LiveClass.Course.Level</span>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Resources -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-paperclip text-primary me-2"></i>
                    @Html.T("الموارد والملفات", "Resources & Files")
                </h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center gap-3 px-0">
                        <div class="avatar-text avatar-md bg-soft-danger text-danger">
                            <i class="feather-file-text"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">@Html.T("شرائح العرض.pdf", "Presentation Slides.pdf")</h6>
                            <small class="text-muted">2.5 MB</small>
                        </div>
                        <i class="feather-download text-primary"></i>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center gap-3 px-0">
                        <div class="avatar-text avatar-md bg-soft-success text-success">
                            <i class="feather-code"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-0">@Html.T("أمثلة الكود.zip", "Code Examples.zip")</h6>
                            <small class="text-muted">1.8 MB</small>
                        </div>
                        <i class="feather-download text-primary"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- My Notes -->
        <div class="card stretch stretch-full mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">
                        <i class="feather-edit-3 text-warning me-2"></i>
                        @Html.T("ملاحظاتي", "My Notes")
                    </h6>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addNoteModal">
                        <i class="feather-plus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body notes-panel">
                <!-- Example Note -->
                <div class="timestamp-note border-bottom pb-3 mb-3" data-time="300">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-soft-primary text-primary">05:00</span>
                        <button class="btn btn-sm btn-icon">
                            <i class="feather-trash-2 text-danger"></i>
                        </button>
                    </div>
                    <p class="mb-0 small">@Html.T("مفهوم الفئة (Class) هو قالب لإنشاء الكائنات", "The concept of a Class is a template for creating objects")</p>
                </div>

                <div class="timestamp-note border-bottom pb-3 mb-3" data-time="900">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-soft-primary text-primary">15:00</span>
                        <button class="btn btn-sm btn-icon">
                            <i class="feather-trash-2 text-danger"></i>
                        </button>
                    </div>
                    <p class="mb-0 small">@Html.T("الوراثة تسمح بإعادة استخدام الكود", "Inheritance allows code reuse")</p>
                </div>

                <div class="text-center text-muted py-3">
                    <i class="feather-file-text fs-3 mb-2"></i>
                    <p class="mb-0 small">@Html.T("أضف ملاحظات أثناء المشاهدة", "Add notes while watching")</p>
                </div>
            </div>
        </div>

        <!-- Related Recordings -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h6 class="fw-bold mb-0">
                    <i class="feather-list text-info me-2"></i>
                    @Html.T("تسجيلات ذات صلة", "Related Recordings")
                </h6>
            </div>
            @{
                var relatedRecordings = ViewBag.RelatedRecordings as IEnumerable<LMS.Domain.Entities.LiveSessions.LiveClassRecording>;
            }
            <div class="card-body">
                @if (relatedRecordings != null && relatedRecordings.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var recording in relatedRecordings.Where(r => r.Id != Model?.Id).Take(3))
                        {
                            <a asp-action="WatchRecording" asp-route-id="@recording.Id" class="list-group-item list-group-item-action px-0">
                                <div class="d-flex gap-3">
                                    @if (!string.IsNullOrEmpty(recording.LiveClass?.Course?.ThumbnailUrl))
                                    {
                                        <img src="@recording.LiveClass.Course.ThumbnailUrl" alt="@Html.T("معاينة", "Thumbnail")" class="rounded" style="width: 80px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-soft-primary rounded d-flex align-items-center justify-content-center" style="width: 80px; height: 60px;">
                                            <i class="feather-video text-primary"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 fs-13">@recording.Title</h6>
                                        <small class="text-muted">@(recording.Duration.ToString(@"h\:mm\:ss"))</small>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-3">
                        <p class="text-muted mb-0 fs-13">@Html.T("لا توجد تسجيلات ذات صلة", "No related recordings")</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Add Note Modal -->
<div class="modal fade" id="addNoteModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Html.T("إضافة ملاحظة", "Add Note")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.T("التوقيت", "Timestamp")</label>
                        <input type="text" class="form-control" id="currentTime" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">@Html.T("الملاحظة", "Note")</label>
                        <textarea class="form-control" rows="4" placeholder="@Html.T("اكتب ملاحظتك هنا...", "Write your note here...")"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                <button type="button" class="btn btn-primary">
                    <i class="feather-save me-2"></i>
                    @Html.T("حفظ", "Save")
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        // Get video player instance (works with new secure player)
        function getVideoPlayer() {
            // Try to get Plyr instance
            var plyrElements = document.querySelectorAll('.plyr');
            if (plyrElements.length > 0 && plyrElements[0].plyr) {
                return plyrElements[0].plyr;
            }
            // Fallback to video element
            return document.querySelector('.secure-video-wrapper video');
        }
        
        // Update current time in modal
        $('#addNoteModal').on('show.bs.modal', function() {
            var player = getVideoPlayer();
            if (player && player.currentTime !== undefined) {
                var currentTime = Math.floor(player.currentTime);
                var minutes = Math.floor(currentTime / 60);
                var seconds = currentTime % 60;
                $('#currentTime').val(minutes.toString().padStart(2, '0') + ':' + seconds.toString().padStart(2, '0'));
            }
        });

        // Jump to timestamp when clicking note
        $('.timestamp-note').click(function() {
            var time = $(this).data('time');
            var player = getVideoPlayer();
            if (player) {
                player.currentTime = time;
                if (player.play) player.play();
            }
        });
    });
</script>
}
