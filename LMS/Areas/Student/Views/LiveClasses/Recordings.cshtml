@model IEnumerable<LMS.Domain.Entities.LiveSessions.LiveClassRecording>
@{
    ViewData["Title"] = Html.T("التسجيلات المحفوظة", "Saved Recordings");
}

@section Styles {
<style>
    .recording-card {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
    }
    .recording-card:hover {
        border-color: #667eea;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
        transform: translateY(-5px);
    }
    .recording-thumbnail {
        position: relative;
        overflow: hidden;
        background: #000;
    }
    .recording-thumbnail img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        opacity: 0.8;
    }
    .play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    .play-overlay:hover {
        background: white;
        transform: translate(-50%, -50%) scale(1.1);
    }
    .duration-badge {
        position: absolute;
        bottom: 10px;
        left: 10px;
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 4px 12px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: bold;
    }
</style>
}

<!-- Alert Messages -->
@await Html.PartialAsync("_AlertMessage")

<!-- Page Header -->
<div class="card stretch stretch-full mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h3 class="fw-bold mb-2">
                    <i class="feather-video text-primary me-2"></i>
                    @Html.T("التسجيلات المحفوظة", "Saved Recordings")
                </h3>
                <p class="text-muted mb-0">@Html.T("شاهد تسجيلات الجلسات المباشرة السابقة", "Watch previous live session recordings")</p>
            </div>
            <div class="d-flex gap-2">
                <select class="form-select" style="width: auto;">
                    <option>@Html.T("جميع الدورات", "All Courses")</option>
                    <option>@Html.T("دورة البرمجة", "Programming Course")</option>
                    <option>@Html.T("دورة قواعد البيانات", "Database Course")</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Stats Row -->
<div class="row g-4 mb-4">
    <div class="col-lg-4">
        <div class="card stretch stretch-full text-center">
            <div class="card-body">
                <div class="avatar-text avatar-lg bg-soft-primary text-primary mx-auto mb-3">
                    <i class="feather-video"></i>
                </div>
                <h3 class="fw-bold mb-1">@(ViewBag.TotalRecordings ?? 0)</h3>
                <p class="text-muted mb-0">@Html.T("تسجيل متاح", "Available Recordings")</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card stretch stretch-full text-center">
            <div class="card-body">
                <div class="avatar-text avatar-lg bg-soft-success text-success mx-auto mb-3">
                    <i class="feather-eye"></i>
                </div>
                <h3 class="fw-bold mb-1">@(ViewBag.WatchedRecordings ?? 0)</h3>
                <p class="text-muted mb-0">@Html.T("تسجيل تمت مشاهدته", "Watched Recordings")</p>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card stretch stretch-full text-center">
            <div class="card-body">
                <div class="avatar-text avatar-lg bg-soft-warning text-warning mx-auto mb-3">
                    <i class="feather-clock"></i>
                </div>
                <h3 class="fw-bold mb-1">@(ViewBag.TotalWatchHours ?? 0)</h3>
                <p class="text-muted mb-0">@Html.T("ساعة مشاهدة", "Watch Hours")</p>
            </div>
        </div>
    </div>
</div>

<!-- Recordings Grid -->
<div class="row g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var recording in Model)
        {
            var hours = recording.DurationMinutes / 60;
            var mins = recording.DurationMinutes % 60;
            var duration = $"{hours}:{mins:D2}:00";
            <div class="col-lg-4 col-md-6">
                <div class="recording-card">
                    <div class="recording-thumbnail">
                        <img src="@(recording.ThumbnailUrl ?? recording.LiveClass?.Course?.ThumbnailUrl ?? "/assets/images/placeholder.png")" alt="@Html.T("تسجيل", "Recording")" />
                        <div class="play-overlay">
                            <i class="feather-play text-primary fs-3"></i>
                        </div>
                        <div class="duration-badge">
                            <i class="feather-clock me-1"></i>
                            @duration
                        </div>
                    </div>
                    <div class="p-3">
                        <div class="mb-2">
                            <span class="badge bg-soft-primary text-primary">@recording.LiveClass?.Course?.Title</span>
                            @if (recording.ViewCount > 0)
                            {
                                <span class="badge bg-soft-success text-success ms-2">
                                    <i class="feather-check me-1"></i>
                                    @Html.T("تمت المشاهدة", "Watched")
                                </span>
                            }
                        </div>
                        <h6 class="fw-bold mb-2">@recording.LiveClass?.Title</h6>
                        <p class="text-muted small mb-3">
                            <i class="feather-user me-1"></i>
                            @recording.LiveClass?.Instructor?.FullName
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="feather-calendar me-1"></i>
                                @(recording.RecordedAt?.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo(System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "ar-SA" : "en-US")) ?? Html.T("غير محدد", "Not specified").ToString())
                            </small>
                            <a asp-area="Student" asp-controller="LiveClasses" asp-action="WatchRecording" asp-route-id="@recording.Id" class="btn btn-sm btn-primary">
                                <i class="feather-play me-1"></i>
                                @Html.T("مشاهدة", "Watch")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card stretch stretch-full text-center py-5">
                <div class="card-body">
                    <i class="feather-video fs-1 text-muted mb-3"></i>
                    <h5>@Html.T("لا توجد تسجيلات متاحة", "No recordings available")</h5>
                    <p class="text-muted">@Html.T("ستظهر التسجيلات هنا عند توفرها", "Recordings will appear here when available")</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Load More -->
<div class="text-center mt-4">
    <button class="btn btn-outline-primary">
        <i class="feather-refresh-cw me-2"></i>
        @Html.T("تحميل المزيد", "Load More")
    </button>
</div>

@section Scripts {
<script>
    // Add any interactive features here
</script>
}
