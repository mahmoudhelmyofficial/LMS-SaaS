@model IEnumerable<LMS.Domain.Entities.Marketing.AffiliateCommission>

@{
    ViewData["Title"] = Html.T("عمولات الأفلييت", "Affiliate Commissions");
    ViewData["Subtitle"] = Html.T("عرض جميع العمولات المحققة من روابط الأفلييت", "View all commissions from affiliate links");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("روابط الأفلييت", "Affiliate links")</a></li>
            <li class="breadcrumb-item active">@Html.T("العمولات", "Commissions")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للروابط", "Back to links")
            </a>
            <a href="@Url.Action("Statistics")" class="btn btn-info">
                <i class="feather-bar-chart-2 me-2"></i>
                @Html.T("الإحصائيات", "Statistics")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي العمولات", "Total commissions") },
                { "Value", Model?.Count() ?? 0 },
                { "Icon", "dollar-sign" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الأرباح", "Total earnings") },
                { "Value", (Model?.Sum(c => c.CommissionAmount) ?? 0).ToEGP() },
                { "Icon", "trending-up" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("معلقة", "Pending") },
                { "Value", (Model?.Where(c => c.Status == "Pending").Sum(c => c.CommissionAmount) ?? 0).ToEGP() },
                { "Icon", "clock" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("مدفوعة", "Paid") },
                { "Value", (Model?.Where(c => c.Status == "Paid").Sum(c => c.CommissionAmount) ?? 0).ToEGP() },
                { "Icon", "check-circle" },
                { "Color", "info" }
            })
        </div>
    </div>

    <!-- Commissions List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة العمولات", "Commissions list")</h5>
                    <div class="card-header-action">
                        <div class="card-header-btn">
                            <div data-bs-toggle="tooltip" title="@Html.T("تحديث", "Refresh")">
                                <a href="@Url.Action("Commissions")" class="avatar-text avatar-xs bg-warning">
                                    <i class="feather-refresh-cw"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body custom-card-action p-0">
                    @if (Model?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("التاريخ", "Date")</th>
                                        <th>@Html.T("رابط الأفلييت", "Affiliate link")</th>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("الطالب", "Student")</th>
                                        <th>@Html.T("مبلغ الشراء", "Purchase amount")</th>
                                        <th>@Html.T("العمولة", "Commission")</th>
                                        <th>@Html.T("الحالة", "Status")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commission in Model)
                                    {
                                        var statusBadgeClass = commission.Status switch
                                        {
                                            "Pending" => "warning",
                                            "Approved" => "info",
                                            "Paid" => "success",
                                            "Rejected" => "danger",
                                            _ => "secondary"
                                        };
                                        
                                        var statusText = commission.Status switch
                                        {
                                            "Pending" => "معلقة",
                                            "Approved" => "معتمدة",
                                            "Paid" => "مدفوعة",
                                            "Rejected" => "مرفوضة",
                                            _ => "غير معروف"
                                        };

                                        <tr>
                                            <td>
                                                <span class="text-muted small">
                                                    @commission.CreatedAt.ToString("dd/MM/yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="badge bg-soft-primary text-primary">
                                                        @commission.AffiliateLink?.AffiliateCode
                                                    </span>
                                                    @if (!string.IsNullOrEmpty(commission.AffiliateLink?.CampaignName))
                                                    {
                                                        <div class="text-muted small mt-1">@commission.AffiliateLink.CampaignName</div>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;">
                                                    @commission.Course?.Title
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-info text-info">
                                                        <i class="feather-user"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-medium">@commission.Payment?.Student?.FullName</div>
                                                        <small class="text-muted">@commission.Payment?.Student?.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold">@commission.SaleAmount.ToEGP()</span>
                                            </td>
                                            <td>
                                                <div>
                                                    <span class="fw-bold text-success">@commission.CommissionAmount.ToEGP()</span>
                                                    <div class="text-muted small">
                                                        @if (commission.CommissionType == LMS.Domain.Enums.CommissionType.Percentage)
                                                        {
                                                            <span>@commission.CommissionRate% من المبيعات</span>
                                                        }
                                                        else
                                                        {
                                                            <span>مبلغ ثابت</span>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-@statusBadgeClass text-@statusBadgeClass">
                                                    @statusText
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", "Affiliates", new { id = commission.AffiliateLinkId })" 
                                                       class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض الرابط", "View link")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (ViewBag.Page != null)
                        {
                            <div class="card-footer">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <span class="text-muted">@Html.T("عرض", "View") @Model.Count() @Html.T("عمولات", "commissions")</span>
                                    </div>
                                    <nav>
                                        <ul class="pagination mb-0">
                                            <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("Commissions", new { linkId = ViewBag.LinkId, page = ViewBag.Page - 1 })">
                                                    <i class="feather-chevron-right"></i>
                                                </a>
                                            </li>
                                            <li class="page-item active">
                                                <a class="page-link">@ViewBag.Page</a>
                                            </li>
                                            <li class="page-item @(Model.Count() < 20 ? "disabled" : "")">
                                                <a class="page-link" href="@Url.Action("Commissions", new { linkId = ViewBag.LinkId, page = ViewBag.Page + 1 })">
                                                    <i class="feather-chevron-left"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-4 mx-auto">
                                @{ ViewBag.CurrencyIconClass = ""; }
                                @await Html.PartialAsync("_CurrencyIcon")
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد عمولات بعد", "No commissions yet")</h5>
                            <p class="text-muted mb-4">
                                لم تحقق أي عمولات من روابط الأفلييت حتى الآن.<br>
                                ابدأ بمشاركة روابط الأفلييت الخاصة بك لجذب الطلاب وتحقيق الأرباح.
                            </p>
                            <a href="@Url.Action("Index")" class="btn btn-primary">
                                <i class="feather-link me-2"></i>
                                عرض روابط الأفلييت
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

