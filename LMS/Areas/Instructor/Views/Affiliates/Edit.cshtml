@model LMS.Areas.Instructor.ViewModels.AffiliateLinkEditViewModel
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("تعديل رابط الأفلييت", "Edit Affiliate Link");
    
    // Load platform settings - used for reference in tips
    var defaultCookieDays = await PlatformSettings.GetIntSettingAsync("Affiliate.Cookie.DurationDays", 30);
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("روابط الأفلييت", "Affiliate links")</a></li>
            <li class="breadcrumb-item active">@Html.T("تعديل", "Edit")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للتفاصيل", "Back to details")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات الرابط الأساسية", "Basic link information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="CampaignName" class="form-label required">@Html.T("اسم الحملة", "Campaign name")</label>
                                <input asp-for="CampaignName" class="form-control" />
                                <span asp-validation-for="CampaignName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CourseId" class="form-label">@Html.T("الدورة (اختياري)", "Course (optional)")</label>
                                <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                                    <option value="">@Html.T("جميع الدورات", "All Courses")</option>
                                </select>
                                <span asp-validation-for="CourseId" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">@Html.T("الوصف", "Description")</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات العمولة", "Commission settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="CommissionType" class="form-label required">@Html.T("نوع العمولة", "Commission type")</label>
                                <select asp-for="CommissionType" class="form-select" id="commissionType">
                                    <option value="@LMS.Domain.Enums.CommissionType.Percentage">@Html.T("نسبة مئوية", "Percentage")</option>
                                    <option value="@LMS.Domain.Enums.CommissionType.Fixed">@Html.T("مبلغ ثابت", "Fixed amount")</option>
                                </select>
                                <span asp-validation-for="CommissionType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6" id="percentageField">
                                <label asp-for="CommissionRate" class="form-label">@Html.T("نسبة العمولة (%)", "Commission rate (%)")</label>
                                <div class="input-group">
                                    <input asp-for="CommissionRate" type="number" step="0.01" min="0" max="100" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="CommissionRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6" id="fixedField">
                                <label asp-for="FixedCommission" class="form-label">@Html.T("المبلغ الثابت", "Fixed amount")</label>
                                <div class="input-group">
                                    <input asp-for="FixedCommission" type="number" step="0.01" min="0" class="form-control" />
                                    <span class="input-group-text">EGP</span>
                                </div>
                                <span asp-validation-for="FixedCommission" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات إضافية", "Additional settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="ValidFrom" class="form-label required">@Html.T("تاريخ البدء", "Start date")</label>
                                <input asp-for="ValidFrom" type="datetime-local" class="form-control" />
                                <span asp-validation-for="ValidFrom" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ValidTo" class="form-label required">@Html.T("تاريخ الانتهاء", "End date")</label>
                                <input asp-for="ValidTo" type="datetime-local" class="form-control" />
                                <span asp-validation-for="ValidTo" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CookieDurationDays" class="form-label required">@Html.T("مدة الكوكيز (بالأيام)", "Cookie duration (days)")</label>
                                <input asp-for="CookieDurationDays" type="number" min="1" max="365" class="form-control" />
                                <span asp-validation-for="CookieDurationDays" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("الحالة", "Status")</label>
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive">
                                    <label class="form-check-label" for="isActive">
                                        @Html.T("رابط نشط", "Link active")
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("حفظ التغييرات", "Save changes")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ التغييرات", "Save changes")
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-light">
                                @Html.T("إلغاء", "Cancel")
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("تحذير", "Warning")</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning mb-0">
                            <i class="feather-alert-triangle me-2"></i>
                            <small>@Html.T("تعديل نوع العمولة أو قيمتها قد يؤثر على الأرباح المستقبلية", "Changing commission type or value may affect future earnings")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Toggle commission type fields
            function toggleCommissionFields() {
                if ($('#commissionType').val() === '@((int)LMS.Domain.Enums.CommissionType.Percentage)') {
                    $('#percentageField').show();
                    $('#fixedField').hide();
                } else {
                    $('#percentageField').hide();
                    $('#fixedField').show();
                }
            }

            toggleCommissionFields();
            $('#commissionType').change(toggleCommissionFields);

            // Format datetime-local inputs
            $('input[type="datetime-local"]').each(function() {
                const val = $(this).val();
                if (val && val.indexOf('T') === -1) {
                    const date = new Date(val);
                    $(this).val(date.toISOString().slice(0, 16));
                }
            });
        });
    </script>
}

