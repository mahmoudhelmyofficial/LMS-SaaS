@model LMS.Domain.Entities.Marketing.AffiliateLink
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("تفاصيل رابط الأفلييت", "Affiliate Link Details");
    ViewData["Subtitle"] = Model.CampaignName;
    
    // Load platform settings
    var recentCommissionsLimit = await PlatformSettings.GetIntSettingAsync("UI.RecentItems.Limit", 10);
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("روابط الأفلييت", "Affiliate links")</a></li>
            <li class="breadcrumb-item active">@Html.T("التفاصيل", "Details")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للقائمة", "Back to list")
            </a>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="feather-edit me-2"></i>
                @Html.T("تعديل", "Edit")
            </a>
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="feather-more-horizontal me-2"></i>
                    @Html.T("المزيد", "More")
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item">
                                <i class="feather-@(Model.IsActive ? "eye-off" : "eye") me-3"></i>
                                <span>@(Model.IsActive ? Html.T("تعطيل", "Disable") : Html.T("تفعيل", "Enable"))</span>
                            </button>
                        </form>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@Url.Action("Delete", new { id = Model.Id })', '@Html.Raw(Html.T("هل أنت متأكد من حذف هذا الرابط؟", "Are you sure you want to delete this link?").Replace("'", "\\'"))')">
                            <i class="feather-trash-2 me-3"></i>
                            <span>@Html.T("حذف", "Delete")</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Status Alert -->
    @if (!Model.IsActive)
    {
        <div class="alert alert-warning mb-4">
            <i class="feather-alert-triangle me-2"></i>
            <strong>@Html.T("تنبيه:", "Warning:")</strong> @Html.T("هذا الرابط غير نشط حالياً", "This link is currently inactive")
        </div>
    }
    else if (Model.ValidFrom > DateTime.UtcNow)
    {
        <div class="alert alert-info mb-4">
            <i class="feather-clock me-2"></i>
            <strong>@Html.T("معلومة:", "Info:")</strong> @Html.T("هذا الرابط سيبدأ العمل في", "This link will become active on") @Model.ValidFrom
        </div>
    }
    else if (Model.ValidTo < DateTime.UtcNow)
    {
        <div class="alert alert-secondary mb-4">
            <i class="feather-info me-2"></i>
            <strong>@Html.T("معلومة:", "Info:")</strong> @Html.T("هذا الرابط انتهت صلاحيته في", "This link expired on") @Model.ValidTo
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي النقرات", "Total clicks") },
                { "Value", Model.ClickCount },
                { "Icon", "mouse-pointer" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("التحويلات", "Conversions") },
                { "Value", Model.ConversionCount },
                { "Icon", "shopping-cart" },
                { "Color", "success" },
                { "Change", Model.ClickCount > 0 ? $"{(Model.ConversionCount * 100m / Model.ClickCount):F1}%" : "0%" },
                { "ChangeText", Html.T("معدل التحويل", "Conversion rate") }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الأرباح", "Total earnings") },
                { "Value", Model.TotalEarnings + " " + Html.T("ر.س", "SAR") },
                { "Icon", "dollar-sign" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الأرباح المعلقة", "Pending earnings") },
                { "Value", Model.PendingEarnings + " " + Html.T("ر.س", "SAR") },
                { "Icon", "clock" },
                { "Color", "info" }
            })
        </div>
    </div>

    <div class="row">
        <!-- Link Information -->
        <div class="col-lg-8">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الرابط", "Link information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("اسم الحملة", "Campaign name")</label>
                            <p class="fw-bold">@Model.CampaignName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("كود الأفلييت", "Affiliate code")</label>
                            <div class="d-flex align-items-center gap-2">
                                <code class="fs-5 text-primary">@Model.AffiliateCode</code>
                                <button class="btn btn-sm btn-light" onclick="copyToClipboard('@Model.AffiliateCode')">
                                    <i class="feather-copy"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">@Html.T("الوصف", "Description")</label>
                            <p>@(Model.Description ?? Html.T("لا يوجد وصف", "No description"))</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("الدورة", "Course")</label>
                            <p class="fw-bold">
                                @if (Model.Course != null)
                                {
                                    <span class="badge bg-soft-primary text-primary">@Model.Course.Title</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("جميع الدورات", "All Courses")</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("نوع العمولة", "Commission type")</label>
                            <p>
                                @if (Model.CommissionType.ToString() == "Percentage")
                                {
                                    <span class="badge bg-soft-info text-info">@Model.CommissionRate% @Html.T("نسبة مئوية", "Percentage")</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-success text-success">@Model.FixedCommission @Html.T("ر.س مبلغ ثابت", "SAR fixed")</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("تاريخ البدء", "Start date")</label>
                            <p class="fw-bold">@Model.ValidFrom</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("تاريخ الانتهاء", "End date")</label>
                            <p class="fw-bold">@Model.ValidTo</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("مدة الكوكيز", "Cookie duration")</label>
                            <p class="fw-bold">@Model.CookieDurationDays @Html.T("يوم", "days")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("الحالة", "Status")</label>
                            <p>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-danger text-danger">@Html.T("معطل", "Inactive")</span>
                                }
                            </p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">@Html.T("رابط الأفلييت الكامل", "Full affiliate link")</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="affiliateUrl" value="@($"{Context.Request.Scheme}://{Context.Request.Host}/affiliate/{Model.AffiliateCode}")" readonly>
                                <button class="btn btn-primary" onclick="copyToClipboard(document.getElementById('affiliateUrl').value)">
                                    <i class="feather-copy me-2"></i>
                                    @Html.T("نسخ الرابط", "Copy link")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Commission History -->
            @if (Model.Commissions != null && Model.Commissions.Any())
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("سجل العمولات", "Commission history")</h5>
                        <div class="card-header-action">
                            <a href="@Url.Action("Commissions", "Affiliates", new { linkId = Model.Id })" class="btn btn-sm btn-primary">
                                @Html.T("عرض الكل", "View all")
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("التاريخ", "Date")</th>
                                        <th>@Html.T("الطالب", "Student")</th>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("المبلغ", "Amount")</th>
                                        <th>@Html.T("الحالة", "Status")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commission in Model.Commissions.OrderByDescending(c => c.CreatedAt).Take(recentCommissionsLimit))
                                    {
                                        <tr>
                                            <td>@commission.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (commission.Payment?.Student != null)
                                                {
                                                    <span>@commission.Payment.Student.FullName</span>
                                                }
                                            </td>
                                            <td>
                                                @if (commission.Course != null)
                                                {
                                                    <span>@commission.Course.Title</span>
                                                }
                                            </td>
                                            <td class="fw-bold text-success">@commission.CommissionAmount @Html.T("ر.س", "SAR")</td>
                                            <td>
                                                @switch (commission.Status.ToString())
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-soft-warning text-warning">@Html.T("معلق", "Pending")</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-soft-success text-success">@Html.T("معتمد", "Approved")</span>
                                                        break;
                                                    case "Paid":
                                                        <span class="badge bg-soft-primary text-primary">@Html.T("مدفوع", "Paid")</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-soft-danger text-danger">@Html.T("ملغى", "Cancelled")</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Performance Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الأداء", "Performance")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">@Html.T("معدل التحويل", "Conversion rate")</span>
                            <span class="fw-bold">@(Model.ClickCount > 0 ? $"{(Model.ConversionCount * 100m / Model.ClickCount):F1}%" : "0%")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @(Model.ClickCount > 0 ? (Model.ConversionCount * 100m / Model.ClickCount) : 0)%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">@Html.T("الأرباح المدفوعة", "Paid earnings")</span>
                            <span class="fw-bold">@Model.PaidEarnings @Html.T("ر.س", "SAR")</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: @(Model.TotalEarnings > 0 ? (Model.PaidEarnings * 100m / Model.TotalEarnings) : 0)%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">@Html.T("متوسط قيمة الطلب", "Average order value")</span>
                            <span class="fw-bold">@(Model.ConversionCount > 0 ? (Model.TotalEarnings / Model.ConversionCount) + " " + Html.T("ر.س", "SAR") : "0")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-light">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل الرابط", "Edit link")
                        </a>
                        <button class="btn btn-light" onclick="copyToClipboard('@Model.AffiliateCode')">
                            <i class="feather-copy me-2"></i>
                            @Html.T("نسخ الكود", "Copy code")
                        </button>
                        <button class="btn btn-light" onclick="shareLink()">
                            <i class="feather-share-2 me-2"></i>
                            @Html.T("مشاركة الرابط", "Share link")
                        </button>
                        <a href="@Url.Action("Commissions", "Affiliates", new { linkId = Model.Id })" class="btn btn-light">
                            <i class="feather-list me-2"></i>
                            @Html.T("عرض جميع العمولات", "View all commissions")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_DeleteModal")

@section Scripts {
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                const toast = `
                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
                        <div class="toast show" role="alert">
                            <div class="toast-body bg-success text-white">
                                <i class="feather-check me-2"></i>
                                @Html.Raw(Html.T("تم نسخ النص بنجاح", "Text copied successfully").Replace("'", "\\'"))
                            </div>
                        </div>
                    </div>
                `;
                $('body').append(toast);
                setTimeout(() => $('.toast').remove(), 2000);
            });
        }

        function shareLink() {
            const url = document.getElementById('affiliateUrl').value;
            if (navigator.share) {
                navigator.share({
                    title: '@Model.CampaignName',
                    url: url
                });
            } else {
                copyToClipboard(url);
            }
        }
    </script>
}

