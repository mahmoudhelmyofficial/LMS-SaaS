@model IEnumerable<LMS.Domain.Entities.Courses.Faq>

@{
    ViewData["Title"] = Html.T("إدارة الأسئلة الشائعة", "FAQ Management");
    ViewData["Subtitle"] = Html.T("عرض وإدارة الأسئلة الشائعة للدورات", "View and manage FAQ for courses");
    var createUrl = Url.Action("Create");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + createUrl + "' class='btn btn-primary'><i class='feather-plus me-2'></i>" + Html.T("إضافة سؤال جديد", "Add new question") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الأسئلة", "Total questions") },
                { "Value", Model.Count() },
                { "Icon", "help-circle" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الأسئلة العامة", "General questions") },
                { "Value", Model.Count(f => string.IsNullOrEmpty(f.Category) || f.Category == "عام") },
                { "Icon", "globe" },
                { "Color", "info" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الأسئلة التقنية", "Technical questions") },
                { "Value", Model.Count(f => f.Category == "تقني") },
                { "Icon", "settings" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المنشورة", "Published") },
                { "Value", Model.Count(f => f.IsPublished) },
                { "Icon", "check-circle" },
                { "Color", "success" }
            })
        </div>
    </div>

    <!-- FAQ List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة الأسئلة الشائعة", "FAQ list")</h5>
                    <div class="card-header-action">
                        <div class="card-header-btn">
                            <div data-bs-toggle="tooltip" title="@Html.T("تحديث", "Refresh")">
                                <a href="@Url.Action("Index")" class="avatar-text avatar-xs bg-warning">
                                    <i class="feather-refresh-cw"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body custom-card-action p-0">
                    <!-- Filter Bar -->
                    <div class="p-4 border-bottom">
                        <form method="get" class="row g-3">
                            <div class="col-md-5">
                                <label class="form-label">@Html.T("الدورة", "Course")</label>
                                <select name="courseId" class="form-select" onchange="this.form.submit()">
                                    <option value="">@Html.T("جميع الدورات", "All Courses")</option>
                                    @if (ViewBag.Courses != null)
                                    {
                                        foreach (var course in ViewBag.Courses as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                                        {
                                            <option value="@course.Value" selected="@course.Selected">@course.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("التصنيف", "Category")</label>
                                <select name="category" class="form-select" onchange="this.form.submit()">
                                    <option value="">@Html.T("جميع التصنيفات", "All categories")</option>
                                    <option value="عام" selected="@(ViewBag.Category == "عام")">@Html.T("عام", "General")</option>
                                    <option value="تقني" selected="@(ViewBag.Category == "تقني")">@Html.T("تقني", "Technical")</option>
                                    <option value="محتوى" selected="@(ViewBag.Category == "محتوى")">@Html.T("محتوى", "Content")</option>
                                    <option value="دفع" selected="@(ViewBag.Category == "دفع")">@Html.T("دفع", "Payment")</option>
                                    <option value="شهادات" selected="@(ViewBag.Category == "شهادات")">@Html.T("شهادات", "Certificates")</option>
                                </select>
                            </div>
                        </form>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="d-md-none p-3">
                            @foreach (var faq in Model)
                            {
                                <div class="card mb-3 border">
                                    <div class="card-body">
                                        <div class="fw-semibold text-body text-break">@faq.Question</div>
                                        <div class="d-flex flex-wrap gap-2 mt-2">
                                            <span class="badge bg-soft-dark text-dark rounded-pill">@faq.DisplayOrder</span>
                                            @if (!string.IsNullOrEmpty(faq.Category))
                                            {
                                                <span class="badge bg-soft-info text-info rounded-pill">@faq.Category</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-secondary text-secondary rounded-pill">@Html.T("عام", "General")</span>
                                            }
                                            @if (faq.IsPublished)
                                            {
                                                <span class="badge bg-soft-success text-success rounded-pill">@Html.T("منشور", "Published")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-warning text-warning rounded-pill">@Html.T("مسودة", "Draft")</span>
                                            }
                                        </div>
                                        <p class="text-muted fs-12 mt-2 mb-2 text-break">@(faq.Course?.Title ?? "—")</p>
                                        <div class="hstack gap-2">
                                            <a href="@Url.Action("Edit", new { id = faq.Id })" class="btn btn-sm btn-outline-primary"><i class="feather-edit"></i></a>
                                            <form asp-action="Delete" asp-route-id="@faq.Id" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا السؤال؟", "Are you sure you want to delete this question?").Replace("'", "\\'"))')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="feather-trash-2"></i></button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-none d-md-block">
                            <div class="table-responsive" style="-webkit-overflow-scrolling: touch; max-width: 100%;">
                                <table class="table table-hover align-middle mb-0 faq-table">
                                    <thead class="table-light">
                                        <tr>
                                            <th width="48" class="border-0 ps-4"></th>
                                            <th width="56" class="border-0">#</th>
                                            <th class="border-0">@Html.T("السؤال", "Question")</th>
                                            <th width="220" class="border-0">@Html.T("الدورة / الدرس", "Course / Lesson")</th>
                                            <th width="120" class="border-0">@Html.T("التصنيف", "Category")</th>
                                            <th width="140" class="border-0">@Html.T("الحالة", "Status")</th>
                                            <th width="100" class="border-0 text-end pe-4">@Html.T("الإجراءات", "Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody id="faqAccordion">
                                        @{
                                            int index = 0;
                                        }
                                        @foreach (var faq in Model)
                                    {
                                        var collapseId = "faq-collapse-" + index;
                                        <tr class="faq-row" data-bs-toggle="collapse" data-bs-target="#@collapseId" data-bs-parent="#faqAccordion" aria-expanded="false">
                                            <td class="ps-4">
                                                <span class="faq-toggle rounded-circle d-inline-flex align-items-center justify-content-center bg-soft-secondary text-secondary">
                                                    <i class="feather-chevron-down faq-chevron"></i>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-dark text-dark rounded-pill">@faq.DisplayOrder</span>
                                            </td>
                                            <td>
                                                <div class="fw-semibold text-body">@faq.Question</div>
                                            </td>
                                            <td class="text-muted fs-13">
                                                <span class="d-block text-truncate" title="@faq.Course?.Title">@faq.Course?.Title</span>
                                                @if (faq.Lesson != null)
                                                {
                                                    <span class="d-block text-truncate fs-12" title="@faq.Lesson.Title">@faq.Lesson.Title</span>
                                                }
                                                else
                                                {
                                                    <span class="fs-12">—</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(faq.Category))
                                                {
                                                    <span class="badge bg-soft-info text-info rounded-pill">@faq.Category</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-secondary text-secondary rounded-pill">@Html.T("عام", "General")</span>
                                                }
                                            </td>
                                            <td>
                                                @if (faq.IsPublished)
                                                {
                                                    <span class="badge bg-soft-success text-success rounded-pill"><i class="feather-check me-1" style="width:12px;height:12px;"></i>@Html.T("منشور", "Published")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-warning text-warning rounded-pill">@Html.T("مسودة", "Draft")</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4" onclick="event.stopPropagation();">
                                                <div class="hstack gap-1 justify-content-end">
                                                    <a href="@Url.Action("Edit", new { id = faq.Id })" class="btn btn-sm btn-soft-primary rounded-circle p-0 d-inline-flex align-items-center justify-content-center" style="width:32px;height:32px;" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                        <i class="feather-edit" style="width:14px;height:14px;"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@faq.Id" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا السؤال؟", "Are you sure you want to delete this question?").Replace("'", "\\'"))')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-soft-danger rounded-circle p-0 d-inline-flex align-items-center justify-content-center border-0" style="width:32px;height:32px;" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                            <i class="feather-trash-2" style="width:14px;height:14px;"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr id="@collapseId" class="collapse accordion-collapse">
                                            <td colspan="7" class="p-0 border-0 bg-soft-light">
                                                <div class="p-4 ps-5 pe-4">
                                                    <div class="d-flex align-items-start gap-3">
                                                        <div class="avatar-text avatar-sm bg-soft-success text-success flex-shrink-0 mt-1">
                                                            <i class="feather-message-circle"></i>
                                                        </div>
                                                        <div class="flex-grow-1 faq-answer-text" style="white-space: pre-wrap; line-height: 1.7;">@faq.Answer</div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                        <style>
                            .faq-table tbody .faq-row { cursor: pointer; }
                            .faq-table tbody .faq-row:hover { background-color: rgba(0,0,0,.02); }
                            .faq-table .faq-toggle { width: 28px; height: 28px; transition: transform 0.2s ease; }
                            .faq-table .faq-row[aria-expanded="true"] .faq-chevron { transform: rotate(180deg); }
                            .faq-answer-text { font-size: 0.9rem; color: var(--bs-body-color); }
                            .btn-soft-danger { background-color: rgba(220, 53, 69, 0.1); color: #dc3545; }
                            .btn-soft-danger:hover { background-color: rgba(220, 53, 69, 0.2); color: #dc3545; }
                        </style>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                                <i class="feather-help-circle"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد أسئلة شائعة بعد", "No FAQs yet")</h5>
                            <p class="text-muted mb-4">@Html.T("ابدأ بإضافة الأسئلة الشائعة لدوراتك لمساعدة الطلاب", "Start by adding FAQs for your courses to help students")</p>
                            <a href="@Url.Action("Create")" class="btn btn-primary">
                                <i class="feather-plus me-2"></i>
                                @Html.T("إضافة سؤال جديد", "Add new question")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

