@model IEnumerable<LMS.Areas.Instructor.ViewModels.LiveClassAttendanceSummaryViewModel>

@{
    ViewData["Title"] = Html.T("إدارة حضور البث المباشر", "Live Session Attendance Management");
    ViewData["Subtitle"] = Html.T("اختر الحصة لعرض وإدارة الحضور", "Select a session to view and manage attendance");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "LiveClasses")">@Html.T("البث المباشر", "Live Sessions")</a></li>
            <li class="breadcrumb-item active">@Html.T("الحضور", "Attendance")</li>
        </ul>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Info Alert -->
    <div class="alert alert-info border-0 mb-4" style="background: linear-gradient(135deg, #dbeafe 0%, #e0f2fe 100%);">
        <div class="d-flex align-items-center">
            <div class="avatar-text avatar-lg bg-white text-info me-3" style="min-width: 50px;">
                <i class="feather-video fs-4"></i>
            </div>
            <div>
                <h6 class="mb-1 text-info fw-bold">@Html.T("إدارة حضور البث المباشر", "Live Session Attendance Management")</h6>
                <p class="mb-0 text-info" style="opacity: 0.85;">@Html.T("يمكنك تتبع حضور الطلاب في حصصك المباشرة وتصدير تقارير الحضور", "You can track student attendance in your live sessions and export attendance reports")</p>
            </div>
        </div>
    </div>

    <!-- Live Classes List -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var liveClass in Model)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card stretch stretch-full h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="fw-bold mb-1">@liveClass.Title</h6>
                                    <p class="text-muted small mb-0">@liveClass.CourseName</p>
                                </div>
                                @if (liveClass.IsCompleted)
                                {
                                    <span class="badge bg-soft-success text-success">@Html.T("منتهية", "Completed")</span>
                                }
                                else if (liveClass.ScheduledAt <= DateTime.UtcNow && liveClass.ScheduledAt.AddMinutes(liveClass.Duration) > DateTime.UtcNow)
                                {
                                    <span class="badge bg-soft-danger text-danger">
                                        <i class="feather-radio me-1"></i>@Html.T("جارية الآن", "In Progress")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-warning text-warning">@Html.T("قادمة", "Upcoming")</span>
                                }
                            </div>

                            <div class="d-flex gap-3 mb-3">
                                <div class="d-flex align-items-center gap-2 text-muted small">
                                    <i class="feather-calendar"></i>
                                    <span>@liveClass.ScheduledAt.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="d-flex align-items-center gap-2 text-muted small">
                                    <i class="feather-clock"></i>
                                    <span>@liveClass.ScheduledAt.ToString("hh:mm tt")</span>
                                </div>
                                <div class="d-flex align-items-center gap-2 text-muted small">
                                    <i class="feather-watch"></i>
                                    <span>@liveClass.Duration @Html.T("دقيقة", "min")</span>
                                </div>
                            </div>

                            <!-- Attendance Stats -->
                            <div class="bg-soft-primary rounded-3 p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-center flex-grow-1">
                                        <h4 class="fw-bold text-primary mb-0">@liveClass.PresentStudents</h4>
                                        <small class="text-muted">@Html.T("حاضر", "Present")</small>
                                    </div>
                                    <div class="vr mx-2" style="height: 40px;"></div>
                                    <div class="text-center flex-grow-1">
                                        <h4 class="fw-bold text-secondary mb-0">@liveClass.TotalStudents</h4>
                                        <small class="text-muted">@Html.T("إجمالي", "Total")</small>
                                    </div>
                                    <div class="vr mx-2" style="height: 40px;"></div>
                                    <div class="text-center flex-grow-1">
                                        <h4 class="fw-bold text-success mb-0">@liveClass.AttendanceRate.ToString("F0")%</h4>
                                        <small class="text-muted">@Html.T("نسبة الحضور", "Attendance Rate")</small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Index", new { liveClassId = liveClass.LiveClassId })" class="btn btn-primary btn-sm flex-grow-1">
                                    <i class="feather-users me-1"></i>
                                    @Html.T("عرض الحضور", "View Attendance")
                                </a>
                                <a href="@Url.Action("Export", new { liveClassId = liveClass.LiveClassId, format = "csv" })" class="btn btn-outline-success btn-sm" title="@Html.T("تصدير CSV", "Export CSV")">
                                    <i class="feather-download"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xxl bg-soft-primary text-primary mb-4 mx-auto" style="width: 100px; height: 100px; font-size: 48px;">
                                <i class="feather-video"></i>
                            </div>
                            <h5 class="fw-bold mb-3">@Html.T("لا توجد حصص مباشرة", "No Live Sessions")</h5>
                            <p class="text-muted mb-4">@Html.T("لم تقم بإنشاء أي حصص مباشرة بعد. أنشئ حصتك الأولى للبدء في تتبع الحضور", "You haven't created any live sessions yet. Create your first session to start tracking attendance")</p>
                            <a href="@Url.Action("Create", "LiveClasses")" class="btn btn-primary">
                                <i class="feather-plus me-2"></i>
                                @Html.T("إنشاء حصة مباشرة", "Create Live Session")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
