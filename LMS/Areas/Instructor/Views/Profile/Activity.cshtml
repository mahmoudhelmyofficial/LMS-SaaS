@model LMS.Services.Interfaces.InstructorPagedResult<LMS.Services.Interfaces.ActivityLogDto>

@{
    ViewData["Title"] = Html.T("سجل النشاط", "Activity Log");
    ViewData["Subtitle"] = Html.T("عرض جميع أنشطتك على المنصة", "View all your platform activity");
}

@{
    var indexUrl = Url.Action("Index");
    var actionButtonsHtml = "<a href='" + indexUrl + "' class='btn btn-light'>" +
        "<i class='feather-arrow-right me-2'></i>" +
        "العودة للملف الشخصي" +
        "</a>";
}
@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw(actionButtonsHtml) }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="card stretch stretch-full mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="feather-activity me-2"></i>
                سجل النشاط
            </h5>
            <div>
                <span class="badge bg-soft-primary text-primary">
                    إجمالي السجلات: @Model.TotalCount
                </span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.T("التاريخ والوقت", "Date & time")</th>
                                <th>@Html.T("الإجراء", "Action")</th>
                                <th>@Html.T("التفاصيل", "Details")</th>
                                <th>@Html.T("عنوان IP", "IP address")</th>
                                <th>@Html.T("الجهاز", "Device")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="feather-clock me-2 text-muted"></i>
                                            <span>@activity.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-soft-primary text-primary">
                                            @activity.ActionAr
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(activity.Details))
                                        {
                                            <span class="text-muted">@activity.Details</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <code class="fs-12">@(activity.IpAddress ?? "غير محدد")</code>
                                    </td>
                                    <td>
                                        <span class="fs-12 text-muted">@(activity.DeviceInfo ?? "غير محدد")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="@Html.T("صفحات سجل النشاط", "Activity log pages")">
                        <ul class="pagination justify-content-center mt-4">
                            @if (Model.HasPrevious)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Activity", new { page = Model.Page - 1 })">
                                        <i class="feather-chevron-right"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="feather-chevron-right"></i>
                                    </span>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Activity", new { page = i })">@i</a>
                                </li>
                            }

                            @if (Model.HasNext)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Activity", new { page = Model.Page + 1 })">
                                        <i class="feather-chevron-left"></i>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">
                                        <i class="feather-chevron-left"></i>
                                    </span>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mb-4 mx-auto">
                        <i class="feather-activity"></i>
                    </div>
                    <h5 class="fw-bold mb-2">@Html.T("لا يوجد نشاط", "No activity")</h5>
                    <p class="text-muted mb-0">لم يتم تسجيل أي نشاط حتى الآن</p>
                </div>
            }
        </div>
    </div>

    <!-- Activity Summary -->
    <div class="row">
        <div class="col-md-4">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-primary text-primary mb-3 mx-auto">
                        <i class="feather-activity"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.TotalCount</h3>
                    <p class="fs-13 text-muted mb-0">إجمالي الأنشطة</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-success text-success mb-3 mx-auto">
                        <i class="feather-file-text"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.Items.Count</h3>
                    <p class="fs-13 text-muted mb-0">في هذه الصفحة</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-info text-info mb-3 mx-auto">
                        <i class="feather-layers"></i>
                    </div>
                    <h3 class="fw-bold mb-1">@Model.TotalPages</h3>
                    <p class="fs-13 text-muted mb-0">إجمالي الصفحات</p>
                </div>
            </div>
        </div>
    </div>
</div>
