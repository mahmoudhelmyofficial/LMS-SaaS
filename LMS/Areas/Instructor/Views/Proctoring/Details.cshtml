@model LMS.Domain.Entities.Assessments.ProctoringSetting

@{
    ViewData["Title"] = Html.T("تفاصيل إعدادات المراقبة", "Proctoring Settings Details");
    ViewData["Subtitle"] = Model.Quiz?.Title;
    var editUrl = Url.Action("Edit", new { id = Model.Id });
    var indexUrl = Url.Action("Index");
}

<div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1">@ViewData["Title"]</h4>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@editUrl" class="btn btn-primary">
            <i class="feather-edit me-2"></i>
            @Html.T("تعديل", "Edit")
        </a>
        <a href="@indexUrl" class="btn btn-light">
            <i class="feather-arrow-right me-2"></i>
            @Html.T("العودة للقائمة", "Back to list")
        </a>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <div class="col-lg-8">
            <!-- Quiz Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الاختبار", "Exam information")</h5>
                    <div class="card-header-action">
                        @if (Model.IsEnabled)
                        {
                            <span class="badge bg-soft-success text-success fs-12">
                                <i class="feather-check-circle me-1"></i>@Html.T("مفعّل", "Enabled")
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-soft-secondary text-secondary fs-12">
                                <i class="feather-x-circle me-1"></i>@Html.T("معطّل", "Disabled")
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <h4 class="fw-bold mb-3">@Model.Quiz?.Title</h4>
                    <div class="mb-3">
                        <span class="badge bg-soft-primary text-primary">@Model.Quiz?.Course?.Title</span>
                    </div>
                    <p class="text-muted">@Model.Quiz?.Description</p>
                </div>
            </div>

            <!-- Camera & Recording Settings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إعدادات الكاميرا والتسجيل", "Camera and recording settings")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 rounded @(Model.RequireWebcam ? "bg-soft-success" : "bg-soft-secondary")">
                                <div class="avatar-text @(Model.RequireWebcam ? "bg-success" : "bg-secondary") text-white">
                                    <i class="feather-video"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">@Html.T("تفعيل الكاميرا", "Webcam required")</div>
                                    <div class="fs-13 text-muted">@(Model.RequireWebcam ? Html.T("مطلوب", "Required") : Html.T("غير مطلوب", "Not required"))</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 rounded @(Model.RecordVideo ? "bg-soft-danger" : "bg-soft-secondary")">
                                <div class="avatar-text @(Model.RecordVideo ? "bg-danger" : "bg-secondary") text-white">
                                    <i class="feather-radio"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">@Html.T("تسجيل الفيديو", "Video recording")</div>
                                    <div class="fs-13 text-muted">@(Model.RecordVideo ? Html.T("مفعّل", "Enabled") : Html.T("معطّل", "Disabled"))</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 rounded @(Model.CaptureScreenshots ? "bg-soft-info" : "bg-soft-secondary")">
                                <div class="avatar-text @(Model.CaptureScreenshots ? "bg-info" : "bg-secondary") text-white">
                                    <i class="feather-camera"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">@Html.T("التقاط صور دورية", "Periodic screenshots")</div>
                                    <div class="fs-13 text-muted">
                                        @if (Model.CaptureScreenshots)
                                        {
                                            <span>@Html.T("كل", "Every") @Model.ScreenshotInterval @Html.T("ثانية", "seconds")</span>
                                        }
                                        else
                                        {
                                            <span>@Html.T("معطّل", "Disabled")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 rounded @(Model.EnableFaceDetection ? "bg-soft-warning" : "bg-soft-secondary")">
                                <div class="avatar-text @(Model.EnableFaceDetection ? "bg-warning" : "bg-secondary") text-white">
                                    <i class="feather-user-check"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">@Html.T("كشف الوجه", "Face detection")</div>
                                    <div class="fs-13 text-muted">@(Model.EnableFaceDetection ? Html.T("مفعّل", "Enabled") : Html.T("معطّل", "Disabled"))</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Security Settings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إعدادات الأمان", "Security settings")</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <td class="fw-medium">@Html.T("منع التبديل بين النوافذ", "Prevent tab switching")</td>
                                    <td class="text-end">
                                        @if (Model.PreventTabSwitch)
                                        {
                                            <span class="badge bg-soft-success text-success">@Html.T("مفعّل", "Enabled")</span>
                                            <span class="text-muted fs-13">(@Model.MaxTabSwitchWarnings @Html.T("تحذيرات", "warnings"))</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">@Html.T("معطّل", "Disabled")</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">منع النسخ واللصق</td>
                                    <td class="text-end">
                                        @if (Model.PreventCopyPaste)
                                        {
                                            <span class="badge bg-soft-success text-success">مفعّل</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">معطّل</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">تعطيل كليك يمين</td>
                                    <td class="text-end">
                                        @if (Model.DisableRightClick)
                                        {
                                            <span class="badge bg-soft-success text-success">مفعّل</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">معطّل</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">وضع ملء الشاشة</td>
                                    <td class="text-end">
                                        @if (Model.RequireFullscreen)
                                        {
                                            <span class="badge bg-soft-success text-success">مطلوب</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">غير مطلوب</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">كشف الأشخاص المتعددين</td>
                                    <td class="text-end">
                                        @if (Model.DetectMultiplePeople)
                                        {
                                            <span class="badge bg-soft-success text-success">مفعّل</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">معطّل</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">قفل المتصفح</td>
                                    <td class="text-end">
                                        @if (Model.LockBrowser)
                                        {
                                            <span class="badge bg-soft-success text-success">مفعّل</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">معطّل</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">التحقق من الهوية</td>
                                    <td class="text-end">
                                        @if (Model.RequireIdVerification)
                                        {
                                            <span class="badge bg-soft-success text-success">مطلوب</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">غير مطلوب</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">الإنهاء التلقائي عند الغش</td>
                                    <td class="text-end">
                                        @if (Model.AutoTerminate)
                                        {
                                            <span class="badge bg-soft-danger text-danger">مفعّل</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">معطّل</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Warning Message & Notes -->
            @if (!string.IsNullOrEmpty(Model.WarningMessage) || !string.IsNullOrEmpty(Model.Notes))
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("رسائل وملاحظات", "Messages and notes")</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.WarningMessage))
                        {
                            <div class="alert alert-warning border-0 mb-3">
                                <h6 class="fw-bold mb-2">
                                    <i class="feather-alert-triangle me-2"></i>
                                    @Html.T("رسالة التحذير", "Warning message")
                                </h6>
                                <p class="mb-0">@Model.WarningMessage</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div>
                                <h6 class="fw-bold mb-2">@Html.T("ملاحظات", "Notes")</h6>
                                <p class="text-muted mb-0">@Model.Notes</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card mb-4">
                <div class="card-body">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary w-100 mb-2">
                        <i class="feather-edit me-2"></i>
                        @Html.T("تعديل الإعدادات", "Edit settings")
                    </a>
                    
                    <form method="post" asp-action="ToggleEnabled" asp-route-id="@Model.Id">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-@(Model.IsEnabled ? "warning" : "success") w-100 mb-2">
                            <i class="feather-power me-2"></i>
                            @(Model.IsEnabled ? Html.T("تعطيل المراقبة", "Disable proctoring") : Html.T("تفعيل المراقبة", "Enable proctoring"))
                        </button>
                    </form>

                    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الإعدادات?", "Are you sure you want to delete these settings?").Replace("'", "\\'"))')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="feather-trash-2 me-2"></i>
                            @Html.T("حذف الإعدادات", "Delete settings")
                        </button>
                    </form>
                </div>
            </div>

            <!-- Metadata -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("معلومات إضافية", "Additional information")</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("تاريخ الإنشاء", "Created at")</span>
                            <span class="fw-medium">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </li>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <li class="d-flex justify-content-between align-items-center py-2">
                                <span class="text-muted">@Html.T("آخر تحديث", "Last updated")</span>
                                <span class="fw-medium">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


                </div>
            </div>
        </div>
    </div>
</div>

