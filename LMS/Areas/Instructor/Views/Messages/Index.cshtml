@model List<LMS.Domain.Entities.Social.DirectMessage>
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("الرسائل", "Messages");
    ViewData["Subtitle"] = Html.T("التواصل مع الطلاب", "Communicate with students");
    var unreadCount = ViewBag.UnreadCount as int? ?? 0;
    var currentPage = ViewBag.Page as int? ?? 1;
    
    // Load platform settings
    var defaultPageSize = await PlatformSettings.GetIntSettingAsync("UI.PageSize.Default", 20);
}

@{
    var composeUrl = Url.Action("Compose");
    var bulkMessageUrl = Url.Action("BulkMessage");
    var actionButtonsHtml = "<a href='" + composeUrl + "' class='btn btn-primary'>" +
        "<i class='feather-edit me-2'></i>" + Html.T("رسالة جديدة", "New message") +
        "</a>" +
        "<a href='" + bulkMessageUrl + "' class='btn btn-light'>" +
        "<i class='feather-users me-2'></i>" + Html.T("رسالة جماعية", "Bulk message") +
        "</a>";
}
@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw(actionButtonsHtml) }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Navigation Tabs -->
    <div class="card stretch stretch-full mb-4">
        <div class="card-body py-2">
            <div class="d-flex align-items-center justify-content-between">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a asp-action="Index" class="nav-link active">
                            <i class="feather-inbox me-2"></i>@Html.T("الوارد", "Inbox")
                            @if (unreadCount > 0)
                            {
                                <span class="badge bg-primary ms-2">@unreadCount</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Sent" class="nav-link">
                            <i class="feather-send me-2"></i>@Html.T("المرسل", "Sent")
                        </a>
                    </li>
                </ul>
                @if (unreadCount > 0)
                {
                    <form asp-action="MarkAllAsRead" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                            <i class="feather-check-circle me-2"></i>@Html.T("تحديد الكل كمقروء", "Mark all as read")
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>

    <!-- Messages List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="d-md-none p-3">
                            @foreach (var message in Model)
                            {
                                var senderName = message.Sender?.FullName ?? (Html.T("مستخدم", "User").ToString());
                                var senderInitial = !string.IsNullOrEmpty(senderName) && senderName.Length > 0 ? senderName.Substring(0, 1) : "?";
                                <a href="@Url.Action("Details", new { id = message.Id })" class="text-decoration-none text-dark">
                                    <div class="card mb-3 border @(!message.IsRead ? "border-primary" : "")">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start gap-2">
                                                <div class="avatar-text avatar-md bg-soft-primary text-primary flex-shrink-0">@senderInitial</div>
                                                <div class="min-w-0 flex-grow-1">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <h6 class="mb-0 @(!message.IsRead ? "fw-bold" : "") text-break">@senderName @if (!message.IsRead) { <span class="badge bg-primary ms-1">@Html.T("جديد", "New")</span> }</h6>
                                                        <span class="fs-12 text-muted flex-shrink-0">@GetTimeAgo(message.SentAt)</span>
                                                    </div>
                                                    <p class="mb-0 fs-12 text-break">@(message.Subject ?? Html.T("بدون موضوع", "No subject").ToString())</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                        <div class="d-none d-md-block">
                            <div class="table-responsive" style="-webkit-overflow-scrolling: touch; max-width: 100%;">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th width="60"></th>
                                            <th>@Html.T("المرسل", "Sender")</th>
                                            <th>@Html.T("الموضوع", "Subject")</th>
                                            <th>@Html.T("التاريخ", "Date")</th>
                                            <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var message in Model)
                                    {
                                        var senderName = message.Sender?.FullName ?? (Html.T("مستخدم", "User").ToString());
                                        var senderInitial = !string.IsNullOrEmpty(senderName) && senderName.Length > 0 
                                            ? senderName.Substring(0, 1) 
                                            : "?";
                                        var messageBody = message.Message ?? message.Body ?? string.Empty;
                                        var messagePreview = !string.IsNullOrEmpty(messageBody) && messageBody.Length > 80 
                                            ? messageBody.Substring(0, 80) + "..." 
                                            : messageBody;
                                        
                                        <tr class="@(!message.IsRead ? "table-active" : "")" style="cursor: pointer;" 
                                            onclick="window.location='@Url.Action("Details", new { id = message.Id })'">
                                            <td>
                                                <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                    @senderInitial
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <h6 class="mb-0 @(!message.IsRead ? "fw-bold" : "")">
                                                        @senderName
                                                        @if (!message.IsRead)
                                                        {
                                                            <span class="badge bg-primary ms-2">@Html.T("جديد", "New")</span>
                                                        }
                                                    </h6>
                                                    @if (!string.IsNullOrEmpty(message.Sender?.Email))
                                                    {
                                                        <small class="text-muted">@message.Sender.Email</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <p class="mb-1 @(!message.IsRead ? "fw-semibold" : "")">@(message.Subject ?? Html.T("بدون موضوع", "No subject").ToString())</p>
                                                <small class="text-muted text-truncate d-block" style="max-width: 300px;">
                                                    @messagePreview
                                                </small>
                                            </td>
                                            <td>
                                                <span class="fs-12 text-muted">@GetTimeAgo(message.SentAt)</span>
                                            </td>
                                            <td class="text-end" onclick="event.stopPropagation();">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", new { id = message.Id })" 
                                                       class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض", "View")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Reply", new { id = message.Id })" 
                                                       class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("رد", "Reply")">
                                                        <i class="feather-corner-up-left"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@message.Id" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md text-danger border-0 bg-transparent" 
                                                                data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")"
                                                                onclick="event.stopPropagation(); return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الرسالة؟", "Are you sure you want to delete this message?").Replace("'", "\\'"))')">
                                                            <i class="feather-trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                        
                        <!-- Pagination -->
                        var totalPages = ViewBag.TotalPages as int? ?? 1;
                        var totalCount = ViewBag.TotalCount as int? ?? 0;
                        @if (totalPages > 1)
                        {
                            <div class="card-footer">
                                @await Html.PartialAsync("_Pagination", ViewDataDictionaryHelper.CreateWith(
                                    ViewData,
                                    ("CurrentPage", currentPage),
                                    ("TotalPages", totalPages),
                                    ("TotalItems", totalCount),
                                    ("PageSize", defaultPageSize),
                                    ("Action", "Index"),
                                    ("Controller", "Messages")
                                ))
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                                <i class="feather-inbox"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد رسائل", "No messages")</h5>
                            <p class="text-muted mb-4">@Html.T("صندوق الوارد فارغ", "Inbox is empty")</p>
                            <a asp-action="Compose" class="btn btn-primary">
                                <i class="feather-edit me-2"></i>
                                @Html.T("إرسال رسالة جديدة", "Send new message")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}

@functions {
    string GetTimeAgo(DateTime dateTime)
    {
        var timeSpan = DateTime.UtcNow - dateTime;
        if (timeSpan.TotalMinutes < 1) return "الآن";
        if (timeSpan.TotalHours < 1) return $"منذ {(int)timeSpan.TotalMinutes} دقيقة";
        if (timeSpan.TotalDays < 1) return $"منذ {(int)timeSpan.TotalHours} ساعة";
        if (timeSpan.TotalDays < 7) return $"منذ {(int)timeSpan.TotalDays} يوم";
        return dateTime.ToString("dd/MM/yyyy");
    }
}
