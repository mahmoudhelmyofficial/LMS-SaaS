@model LMS.Areas.Instructor.ViewModels.DocumentStatsViewModel

@{
    ViewData["Title"] = Html.T("إحصائيات المستندات", "Documents Statistics");
    ViewData["Subtitle"] = Html.T("تقرير شامل عن استخدام المستندات", "Comprehensive report on document usage");
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>" + Html.T("العودة للقائمة", "Back to list") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Main Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي المستندات", "Total documents") },
                { "Value", Model.TotalDocuments },
                { "Icon", "file-text" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المستندات العامة", "Public documents") },
                { "Value", Model.PublicDocuments },
                { "Icon", "globe" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المستندات الخاصة", "Private documents") },
                { "Value", Model.PrivateDocuments },
                { "Icon", "lock" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي التحميلات", "Total downloads") },
                { "Value", Model.TotalDownloads },
                { "Icon", "download" },
                { "Color", "info" }
            })
        </div>
    </div>

    <div class="row">
        <!-- Documents by Type -->
        <div class="col-lg-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التوزيع حسب النوع", "Distribution by type")</h5>
                </div>
                <div class="card-body">
                    @if (Model.DocumentsByType != null && Model.DocumentsByType.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("نوع الملف", "File type")</th>
                                        <th>@Html.T("العدد", "Count")</th>
                                        <th>@Html.T("الحجم الإجمالي", "Total size")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var typestat in Model.DocumentsByType)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-file text-primary"></i>
                                                    <span class="fw-medium">@typestat.Type</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-primary text-primary">@typestat.Count</span>
                                            </td>
                                            <td>
                                                <span class="fs-13">@((typestat.TotalSize / 1024.0 / 1024.0).ToString("F2")) MB</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="feather-file-text fs-1 text-muted mb-3"></i>
                            <p class="text-muted">@Html.T("لا توجد بيانات", "No data")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Documents by Entity -->
        <div class="col-lg-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التوزيع حسب الكيان المرتبط", "Distribution by entity")</h5>
                </div>
                <div class="card-body">
                    @if (Model.DocumentsByEntity != null && Model.DocumentsByEntity.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("نوع الكيان", "Entity type")</th>
                                        <th>@Html.T("العدد", "Count")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entity in Model.DocumentsByEntity)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-bookmark text-info"></i>
                                                    <span class="fw-medium">@entity.EntityType</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-info text-info">@entity.Count</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="feather-link fs-1 text-muted mb-3"></i>
                            <p class="text-muted">@Html.T("لا توجد مستندات مرتبطة", "No linked documents")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Most Downloaded Documents -->
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الأكثر تحميلاً", "Most downloaded")</h5>
                    <div class="card-header-action">
                        <span class="badge bg-soft-primary text-primary">@Html.T("أعلى 10 مستندات", "Top 10 documents")</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.MostDownloaded != null && Model.MostDownloaded.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>@Html.T("المستند", "Document")</th>
                                        <th>@Html.T("عدد التحميلات", "Downloads")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int rank = 1;
                                    }
                                    @foreach (var doc in Model.MostDownloaded)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge @(rank <= 3 ? "bg-warning" : "bg-soft-dark text-dark")">
                                                    #@rank
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = doc.Id })" class="fw-medium text-dark">
                                                    @doc.Title
                                                </a>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-download text-primary"></i>
                                                    <span class="fw-bold">@doc.DownloadCount</span>
                                                </div>
                                            </td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Details", new { id = doc.Id })" class="btn btn-sm btn-light">
                                                    عرض التفاصيل
                                                </a>
                                            </td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="feather-download fs-1 text-muted mb-3"></i>
                            <p class="text-muted">@Html.T("لا توجد تحميلات بعد", "No downloads yet")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Storage Info -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="card border-primary">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h6 class="fw-bold mb-2">
                                <i class="feather-hard-drive text-primary me-2"></i>
                                إجمالي المساحة المستخدمة
                            </h6>
                            <p class="text-muted mb-0">
                                جميع مستنداتك تستهلك حوالي <strong>@((Model.TotalFileSize / 1024.0 / 1024.0).ToString("F2")) MB</strong> من المساحة التخزينية
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="display-4 fw-bold text-primary">
                                @((Model.TotalFileSize / 1024.0 / 1024.0).ToString("F1")) <small class="fs-5">MB</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

