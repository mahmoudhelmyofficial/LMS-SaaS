@model LMS.Areas.Instructor.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = Html.T("تفاصيل المستند", "Document Details");
    ViewData["Subtitle"] = Model.Title;
    var downloadUrl = Url.Action("Download", new { id = Model.Id });
    var editUrl = Url.Action("Edit", new { id = Model.Id });
    var updateVersionUrl = Url.Action("UpdateVersion", new { id = Model.Id });
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + downloadUrl + "' class='btn btn-success'><i class='feather-download me-2'></i>" + Html.T("تحميل", "Download") + "</a><a href='" + editUrl + "' class='btn btn-primary'><i class='feather-edit me-2'></i>" + Html.T("تعديل", "Edit") + "</a><a href='" + updateVersionUrl + "' class='btn btn-info'><i class='feather-upload me-2'></i>" + Html.T("إصدار جديد", "New version") + "</a><a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>" + Html.T("العودة", "Back") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <!-- Document Details -->
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Model.Title</h5>
                </div>
                <div class="card-body">
                    <!-- Document Info -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">اسم الملف</label>
                                <p class="fw-medium mb-0">@Model.OriginalFileName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">حجم الملف</label>
                                <p class="fw-medium mb-0">@((Model.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">نوع الملف</label>
                                <p class="fw-medium mb-0">@Model.MimeType</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">الإصدار</label>
                                <p class="fw-medium mb-0">v@Model.Version</p>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <label class="text-muted fs-12 mb-2">الوصف</label>
                            <div class="p-3 bg-light rounded">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Description</p>
                            </div>
                        </div>
                    }

                    <!-- Additional Info -->
                    @if (Model.PageCount.HasValue || Model.WordCount.HasValue)
                    {
                        <div class="row mb-4">
                            @if (Model.PageCount.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center gap-2 p-3 bg-soft-primary rounded">
                                        <i class="feather-file-text text-primary fs-4"></i>
                                        <div>
                                            <p class="text-muted fs-11 mb-0">عدد الصفحات</p>
                                            <h6 class="fw-bold mb-0">@Model.PageCount</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.WordCount.HasValue)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center gap-2 p-3 bg-soft-success rounded">
                                        <i class="feather-type text-success fs-4"></i>
                                        <div>
                                            <p class="text-muted fs-11 mb-0">عدد الكلمات</p>
                                            <h6 class="fw-bold mb-0">@Model.WordCount</h6>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Related Entity -->
                    @if (!string.IsNullOrEmpty(Model.RelatedEntityType) && Model.RelatedEntityId.HasValue)
                    {
                        <div class="mb-4">
                            <label class="text-muted fs-12 mb-2">مرتبط بـ</label>
                            <div class="p-3 bg-soft-info rounded">
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-info">@Model.RelatedEntityType</span>
                                    @if (!string.IsNullOrEmpty(Model.RelatedEntityName))
                                    {
                                        <span class="fw-medium">@Model.RelatedEntityName</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Timestamps -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">تاريخ الإنشاء</label>
                                <p class="fw-medium mb-0">
                                    <i class="feather-calendar me-2"></i>
                                    @Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="text-muted fs-12 mb-1">آخر تحديث</label>
                                <p class="fw-medium mb-0">
                                    <i class="feather-clock me-2"></i>
                                    @(Model.UpdatedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? "-")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الإجراءات", "Actions")</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Download", new { id = Model.Id })" class="btn btn-success">
                            <i class="feather-download me-2"></i>
                            @Html.T("تحميل المستند", "Download document")
                        </a>
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل المعلومات", "Edit information")
                        </a>
                        <a href="@Url.Action("UpdateVersion", new { id = Model.Id })" class="btn btn-info">
                            <i class="feather-upload me-2"></i>
                            رفع إصدار جديد
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا المستند؟", "Are you sure you want to delete this document?").Replace("'", "\\'"))')">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="feather-trash-2 me-2"></i>
                                @Html.T("حذف المستند", "Delete document")
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الحالة والإعدادات", "Status and settings")</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                        <div class="d-flex align-items-center gap-2">
                            <i class="feather-@(Model.IsPublic ? "globe" : "lock") text-@(Model.IsPublic ? "success" : "warning")"></i>
                            <span class="fs-13">@Html.T("الوصول", "Access")</span>
                        </div>
                        <span class="badge bg-soft-@(Model.IsPublic ? "success" : "warning") text-@(Model.IsPublic ? "success" : "warning")">
                            @(Model.IsPublic ? Html.T("عام", "Public") : Html.T("خاص", "Private"))
                        </span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <i class="feather-download text-@(Model.IsDownloadable ? "info" : "muted")"></i>
                            <span class="fs-13">@Html.T("التحميل", "Download")</span>
                        </div>
                        <span class="badge bg-soft-@(Model.IsDownloadable ? "info" : "secondary") text-@(Model.IsDownloadable ? "info" : "secondary")">
                            @(Model.IsDownloadable ? Html.T("مفعل", "Enabled") : Html.T("معطل", "Disabled"))
                        </span>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الإحصائيات", "Statistics")</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                        <div class="d-flex align-items-center gap-2">
                            <i class="feather-download text-primary"></i>
                            <span class="fs-13">@Html.T("عدد التحميلات", "Download count")</span>
                        </div>
                        <span class="fw-bold fs-5">@Model.DownloadCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <i class="feather-tag text-info"></i>
                            <span class="fs-13">@Html.T("رقم الإصدار", "Version number")</span>
                        </div>
                        <span class="badge bg-soft-dark text-dark">v@Model.Version</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

