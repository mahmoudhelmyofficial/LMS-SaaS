@model IEnumerable<LMS.Areas.Instructor.ViewModels.DocumentListViewModel>

@{
    ViewData["Title"] = Html.T("إدارة المستندات", "Documents Management");
    ViewData["Subtitle"] = Html.T("عرض وإدارة جميع مستنداتك", "View and manage all your documents");
    var totalCount = ViewBag.TotalCount ?? 0;
    var uploadUrl = Url.Action("Upload");
    var statisticsUrl = Url.Action("Statistics");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + uploadUrl + "' class='btn btn-primary'><i class='feather-upload me-2'></i>" + Html.T("رفع مستند جديد", "Upload new document") + "</a><a href='" + statisticsUrl + "' class='btn btn-light'><i class='feather-bar-chart-2 me-2'></i>" + Html.T("الإحصائيات", "Statistics") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي المستندات", "Total documents") },
                { "Value", totalCount },
                { "Icon", "file-text" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المستندات العامة", "Public documents") },
                { "Value", Model.Count(d => d.IsPublic) },
                { "Icon", "globe" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المستندات الخاصة", "Private documents") },
                { "Value", Model.Count(d => !d.IsPublic) },
                { "Icon", "lock" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي التحميلات", "Total downloads") },
                { "Value", Model.Sum(d => d.DownloadCount) },
                { "Icon", "download" },
                { "Color", "info" }
            })
        </div>
    </div>

    <!-- Documents List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة المستندات", "Documents list")</h5>
                    <div class="card-header-action">
                        <div class="card-header-btn">
                            <div data-bs-toggle="tooltip" title="@Html.T("تحديث", "Refresh")">
                                <a href="@Url.Action("Index")" class="avatar-text avatar-xs bg-warning">
                                    <i class="feather-refresh-cw"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body custom-card-action p-0">
                    <!-- Filter Bar -->
                    <div class="p-4 border-bottom">
                        <form method="get" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("نوع الكيان", "Entity type")</label>
                                <select name="type" class="form-select" onchange="this.form.submit()">
                                    <option value="">@Html.T("جميع الأنواع", "All types")</option>
                                    <option value="Course" selected="@(ViewBag.Type == "Course")">@Html.T("دورة", "Course")</option>
                                    <option value="Assignment" selected="@(ViewBag.Type == "Assignment")">@Html.T("واجب", "Assignment")</option>
                                    <option value="Lesson" selected="@(ViewBag.Type == "Lesson")">@Html.T("درس", "Lesson")</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                                <input type="date" name="from" class="form-control" value="@ViewBag.From?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                                <input type="date" name="to" class="form-control" value="@ViewBag.To?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-search me-2"></i>
                                    @Html.T("بحث", "Search")
                                </button>
                            </div>
                        </form>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="d-md-none p-3">
                            @foreach (var doc in Model)
                            {
                                <div class="card mb-3 border">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start gap-2">
                                            <div class="avatar-text avatar-md bg-primary text-white flex-shrink-0">
                                                <i class="feather-file-text"></i>
                                            </div>
                                            <div class="min-w-0 flex-grow-1">
                                                <a href="@Url.Action("Details", new { id = doc.Id })" class="fw-bold text-dark text-break d-block">@doc.Title</a>
                                                <p class="fs-11 text-muted mb-1">@doc.OriginalFileName</p>
                                                <div class="d-flex flex-wrap gap-2 fs-12">
                                                    <span>@((doc.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</span>
                                                    <span class="fw-bold">@doc.DownloadCount @Html.T("تحميل", "downloads")</span>
                                                    <span class="badge bg-soft-dark text-dark">v@doc.Version</span>
                                                </div>
                                                <div class="hstack gap-2 mt-2">
                                                    <a href="@Url.Action("Details", new { id = doc.Id })" class="btn btn-sm btn-outline-primary"><i class="feather-eye"></i></a>
                                                    <a href="@Url.Action("Edit", new { id = doc.Id })" class="btn btn-sm btn-outline-secondary"><i class="feather-edit"></i></a>
                                                    <a href="@Url.Action("Download", new { id = doc.Id })" class="btn btn-sm btn-outline-success"><i class="feather-download"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-none d-md-block">
                            <div class="table-responsive" style="-webkit-overflow-scrolling: touch; max-width: 100%;">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>@Html.T("المستند", "Document")</th>
                                            <th>@Html.T("النوع", "Type")</th>
                                            <th>@Html.T("الحجم", "Size")</th>
                                            <th>@Html.T("النوع المرتبط", "Related type")</th>
                                            <th>@Html.T("التحميلات", "Downloads")</th>
                                            <th>@Html.T("الإصدار", "Version")</th>
                                            <th>@Html.T("الحالة", "Status")</th>
                                            <th>@Html.T("التاريخ", "Date")</th>
                                            <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="avatar-text avatar-md bg-primary text-white">
                                                        <i class="feather-file-text"></i>
                                                    </div>
                                                    <div>
                                                        <a href="@Url.Action("Details", new { id = doc.Id })" class="fw-bold text-dark">@doc.Title</a>
                                                        <p class="fs-11 text-muted mb-0">@doc.OriginalFileName</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var fileExt = System.IO.Path.GetExtension(doc.OriginalFileName).ToLower();
                                                    var iconClass = fileExt switch
                                                    {
                                                        ".pdf" => "text-danger",
                                                        ".doc" or ".docx" => "text-primary",
                                                        ".xls" or ".xlsx" => "text-success",
                                                        ".ppt" or ".pptx" => "text-warning",
                                                        _ => "text-muted"
                                                    };
                                                }
                                                <span class="badge bg-soft-secondary text-secondary">
                                                    <i class="feather-file @iconClass me-1"></i>
                                                    @fileExt.TrimStart('.')
                                                </span>
                                            </td>
                                            <td>
                                                <span class="fs-12 fw-medium">@((doc.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(doc.RelatedEntityType))
                                                {
                                                    <span class="badge bg-soft-info text-info">
                                                        @doc.RelatedEntityType
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fs-11">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-download text-primary"></i>
                                                    <span class="fw-bold">@doc.DownloadCount</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-dark text-dark">v@doc.Version</span>
                                            </td>
                                            <td>
                                                <div class="d-flex flex-column gap-1">
                                                    @if (doc.IsPublic)
                                                    {
                                                        <span class="badge bg-soft-success text-success fs-10">
                                                            <i class="feather-globe"></i> @Html.T("عام", "Public")
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-soft-warning text-warning fs-10">
                                                            <i class="feather-lock"></i> @Html.T("خاص", "Private")
                                                        </span>
                                                    }
                                                    @if (doc.IsDownloadable)
                                                    {
                                                        <span class="badge bg-soft-info text-info fs-10">
                                                            <i class="feather-download-cloud"></i> @Html.T("قابل للتحميل", "Downloadable")
                                                        </span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fs-12">@doc.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            </td>
                                            <td>
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", new { id = doc.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض", "View")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = doc.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                        <i class="feather-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Download", new { id = doc.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تحميل", "Download")">
                                                        <i class="feather-download"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@doc.Id" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا المستند؟", "Are you sure you want to delete this document?").Replace("'", "\\'"))')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md border-0 bg-transparent text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                            <i class="feather-trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                                <i class="feather-file-text"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد مستندات بعد", "No documents yet")</h5>
                            <p class="text-muted mb-4">@Html.T("ابدأ برفع مستنداتك لمشاركتها مع الطلاب", "Start uploading documents to share with students")</p>
                            <a href="@Url.Action("Upload")" class="btn btn-primary">
                                <i class="feather-upload me-2"></i>
                                @Html.T("رفع مستند جديد", "Upload new document")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

