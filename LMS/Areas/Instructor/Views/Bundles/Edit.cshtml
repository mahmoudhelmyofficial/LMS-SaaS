@model LMS.Areas.Instructor.ViewModels.BundleEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل الباقة", "Edit Bundle");
    ViewData["Subtitle"] = Html.T("تعديل", "Edit") + ": " + Model.Name;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" id="bundleForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SalesCount" />
        
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-info me-2 text-primary"></i>
                            @Html.T("المعلومات الأساسية", "Basic information")
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("اسم الباقة", "Bundle name") <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="@Html.T("مثال: باقة تطوير الويب الشاملة", "e.g. Complete web development bundle")">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("نبذة مختصرة", "Short description") <span class="text-danger">*</span></label>
                                <textarea asp-for="ShortDescription" class="form-control" rows="3" placeholder="@Html.T("وصف مختصر عن الباقة", "Brief description of the bundle")"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("الوصف التفصيلي", "Full description")</label>
                                <textarea asp-for="Description" class="form-control" rows="6" id="descriptionEditor"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Courses Selection -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-book me-2 text-primary"></i>
                            @Html.T("الدورات المتضمنة", "Included courses")
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.SalesCount > 0)
                        {
                            <div class="alert alert-warning">
                                <i class="feather-alert-triangle me-2"></i>
                                <strong>@Html.T("تنبيه:", "Warning:")</strong> @Html.T("تم بيع هذه الباقة", "This bundle has been sold") @Model.SalesCount @Html.T("مرة. تغيير الدورات قد يؤثر على المشترين الحاليين.", "time(s). Changing courses may affect current buyers.")
                            </div>
                        }

                        <label class="form-label">@Html.T("اختر الدورات", "Select courses") <span class="text-danger">*</span></label>
                        <select asp-for="CourseIds" class="form-select" asp-items="ViewBag.Courses" multiple size="10">
                        </select>
                        <span asp-validation-for="CourseIds" class="text-danger"></span>
                        <div class="form-text">
                            <i class="feather-info me-1"></i>
                            @Html.T("اختر دورتين على الأقل. استخدم Ctrl/Cmd للاختيار المتعدد", "Select at least 2 courses. Use Ctrl/Cmd for multiple selection")
                        </div>
                    </div>
                </div>

                <!-- Thumbnail -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-image me-2 text-primary"></i>
                            @Html.T("صورة الباقة", "Bundle image")
                        </h5>
                    </div>
                    <div class="card-body">
                        @await Html.PartialAsync("_MediaPicker", new ViewDataDictionary(ViewData) {
                            { "FieldName", "ThumbnailUrl" },
                            { "FieldId", "thumbnailUrl" },
                            { "Label", Html.T("صورة الباقة المصغرة", "Bundle thumbnail") },
                            { "MediaType", "Image" },
                            { "CurrentValue", Model.ThumbnailUrl },
                            { "Required", false },
                            { "HelpText", "الحجم الموصى به: 1280x720 بكسل" },
                            { "AspectRatio", "16/9" }
                        })
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Pricing -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("التسعير", "Pricing")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">@Html.T("سعر الباقة", "Bundle price") <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="Price" type="number" class="form-control" min="0" step="0.01">
                                <span class="input-group-text">@Html.T("ر.س", "SAR")</span>
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        @if (Model.SalesCount > 0)
                        {
                            <div class="alert alert-info">
                                <small>
                                    <i class="feather-info me-1"></i>
                                    تم بيع @Model.SalesCount باقة بإجمالي @((Model.Price * Model.SalesCount).ToEGP())
                                </small>
                            </div>
                        }
                    </div>
                </div>

                <!-- Availability Settings -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات التوفر", "Availability")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">@Html.T("تاريخ البدء", "Start date")</label>
                            <input asp-for="ValidFrom" type="datetime-local" class="form-control">
                            <span asp-validation-for="ValidFrom" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">@Html.T("تاريخ الانتهاء", "End date")</label>
                            <input asp-for="ValidTo" type="datetime-local" class="form-control">
                            <span asp-validation-for="ValidTo" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">@Html.T("الحد الأقصى للمبيعات", "Max sales")</label>
                            <input asp-for="MaxSales" type="number" class="form-control" min="@Model.SalesCount">
                            <span asp-validation-for="MaxSales" class="text-danger"></span>
                            <div class="form-text">@Html.T("الحد الأدنى:", "Minimum:") @Model.SalesCount (@Html.T("المبيعات الحالية", "Current sales"))</div>
                        </div>
                    </div>
                </div>

                <!-- Display Settings -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات العرض", "Display settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="form-label">@Html.T("ترتيب العرض", "Display order")</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" min="0">
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActive">
                            <label class="form-check-label" for="isActive">@Html.T("تفعيل الباقة", "Activate bundle")</label>
                        </div>

                        @if (Model.IsFeatured)
                        {
                            <div class="form-check form-switch">
                                <input asp-for="IsFeatured" class="form-check-input" type="checkbox" id="isFeatured" disabled>
                                <label class="form-check-label" for="isFeatured">@Html.T("باقة مميزة (يتم التحكم بها من قبل الإدارة)", "Featured bundle (controlled by admin)")</label>
                            </div>
                        }
                    </div>
                </div>

                <!-- Current Statistics -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الإحصائيات الحالية", "Current statistics")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">@Html.T("المبيعات:", "Sales:")</span>
                            <span class="fw-bold">@Model.SalesCount</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">@Html.T("الإيرادات:", "Revenue:")</span>
                            <span class="fw-bold text-success">@((Model.Price * Model.SalesCount).ToEGP())</span>
                        </div>
                        <a href="@Url.Action("Statistics", new { id = Model.Id })" class="btn btn-light-brand w-100">
                            <i class="feather-bar-chart-2 me-2"></i>
                            عرض الإحصائيات التفصيلية
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between gap-3">
                            <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                @Html.T("إلغاء", "Cancel")
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-check me-2"></i>
                                @Html.T("حفظ التعديلات", "Save changes")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_TinyMCEScripts")
    <script>
        // Initialize TinyMCE for description editor
        initTinyMCE('#descriptionEditor', { height: 300, plugins: 'lists link code' });

        // Form validation
        document.getElementById('bundleForm').addEventListener('submit', function(e) {
            const courseSelect = document.querySelector('select[name="CourseIds"]');
            const selectedCourses = courseSelect.selectedOptions.length;
            
            if (selectedCourses < 2) {
                e.preventDefault();
                alert('يجب اختيار دورتين على الأقل');
                return false;
            }

            const price = parseFloat(document.querySelector('input[name="Price"]').value);
            if (!price || price <= 0) {
                e.preventDefault();
                alert('يرجى إدخال سعر صحيح للباقة');
                return false;
            }
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

