@model IEnumerable<LMS.Areas.Instructor.ViewModels.CourseInstructorSummaryViewModel>

@{
    ViewData["Title"] = Html.T("إدارة المدرسين المساعدين", "Co-Instructors Management");
    ViewData["Subtitle"] = Html.T("اختر الدورة لإدارة المدرسين المساعدين", "Select course to manage co-instructors");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item active">@Html.T("المدرسين المساعدين", "Co-Instructors")</li>
        </ul>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Info Alert -->
    <div class="alert alert-info border-0 mb-4" style="background: linear-gradient(135deg, #dbeafe 0%, #e0f2fe 100%);">
        <div class="d-flex align-items-center">
            <div class="avatar-text avatar-lg bg-white text-info me-3" style="min-width: 50px;">
                <i class="feather-users fs-4"></i>
            </div>
            <div>
                <h6 class="mb-1 text-info fw-bold">@Html.T("إدارة المدرسين المساعدين", "Manage co-instructors")</h6>
                <p class="mb-0 text-info" style="opacity: 0.85;">يمكنك إضافة مدرسين مساعدين لدوراتك ومنحهم صلاحيات محددة مثل إدارة الطلاب أو تقييم الواجبات</p>
            </div>
        </div>
    </div>

    <!-- Courses Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card stretch stretch-full h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <div class="avatar-image avatar-lg rounded-3" style="width: 80px; height: 80px; min-width: 80px;">
                                    <img src="@(course.ThumbnailUrl ?? "/assets/images/general/placeholder.png")" 
                                         alt="@course.CourseTitle" 
                                         class="img-fluid rounded-3" 
                                         style="width: 100%; height: 100%; object-fit: cover;">
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="fw-bold mb-1">@course.CourseTitle</h6>
                                    <div class="d-flex align-items-center gap-2 flex-wrap">
                                        @if (course.IsPublished)
                                        {
                                            <span class="badge bg-soft-success text-success fs-10">
                                                <i class="feather-check-circle me-1"></i>منشورة
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-warning text-warning fs-10">
                                                <i class="feather-edit-3 me-1"></i>مسودة
                                            </span>
                                        }
                                        <span class="badge bg-soft-primary text-primary fs-10">
                                            <i class="feather-users me-1"></i>@course.CoInstructorCount مدرس مساعد
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Index", new { courseId = course.CourseId })" class="btn btn-primary btn-sm flex-grow-1">
                                    <i class="feather-settings me-1"></i>
                                    إدارة المدرسين
                                </a>
                                <a href="@Url.Action("Add", new { courseId = course.CourseId })" class="btn btn-outline-success btn-sm">
                                    <i class="feather-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xxl bg-soft-primary text-primary mb-4 mx-auto" style="width: 100px; height: 100px; font-size: 48px;">
                                <i class="feather-book-open"></i>
                            </div>
                            <h5 class="fw-bold mb-3">@Html.T("لا توجد دورات", "No courses")</h5>
                            <p class="text-muted mb-4">لم تقم بإنشاء أي دورات بعد. أنشئ دورتك الأولى للبدء في إضافة مدرسين مساعدين</p>
                            <a href="@Url.Action("CreateWizard", "Courses")" class="btn btn-primary">
                                <i class="feather-plus me-2"></i>
                                إنشاء دورة جديدة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

