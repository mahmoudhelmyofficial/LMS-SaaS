                        </div>

                        <!-- Pagination -->
                        @await Html.PartialAsync("_Pagination")
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-4 mx-auto" style="border-radius: 20px;">
                                <i class="feather-edit"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد دورات مسودة", "No draft courses")</h5>
                            <p class="text-muted mb-4">@Html.T("جميع دوراتك منشورة أو قم بإنشاء دورة جديدة", "All your courses are published or create a new course")</p>
                            <a href="@Url.Action("CreateWizard")" class="btn btn-primary" style="border-radius: 10px; padding: 10px 24px;">
                                <i class="feather-plus me-2"></i>
                                @Html.T("إنشاء دورة جديدة", "Create new course")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_DeleteModal")

@functions {
    private int CalculateCourseCompletion(LMS.Domain.Entities.Courses.Course course)
    {
        int completionScore = 0;
        
        // Basic info (30%)
        if (!string.IsNullOrEmpty(course.Title)) completionScore += 5;
        if (!string.IsNullOrEmpty(course.Description)) completionScore += 10;
        if (!string.IsNullOrEmpty(course.ThumbnailUrl)) completionScore += 5;
        if (course.CategoryId > 0) completionScore += 5;
        if (course.Price > 0) completionScore += 5;
        
        // Content (50%)
        var moduleCount = course.Modules?.Count ?? 0;
        var lessonCount = course.Modules?.Sum(m => m.Lessons?.Count ?? 0) ?? 0;
        
        if (moduleCount > 0) completionScore += 15;
        if (lessonCount >= 3) completionScore += 20;
        else if (lessonCount > 0) completionScore += 10;
        if (lessonCount >= 10) completionScore += 15;
        
        // Additional details (20%)
        if (course.WhatYouWillLearn != null && course.WhatYouWillLearn.Any()) completionScore += 10;
        if (course.Requirements != null && course.Requirements.Any()) completionScore += 5;
        if (!string.IsNullOrEmpty(course.TargetAudience)) completionScore += 5;
        
        return Math.Min(completionScore, 100);
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Restore view preference (default is grid/card)
            var savedView = localStorage.getItem('instructor_drafts_view');
            if (savedView === 'table') {
                switchDraftView('table');
            } else {
                switchDraftView('card');
            }

            // Fix dropdown positioning for table dropdowns
            document.querySelectorAll('.courses-table-modern .dropdown').forEach(function (dropdown) {
                dropdown.addEventListener('show.bs.dropdown', function () {
                    var tableResponsive = this.closest('.table-responsive');
                    if (tableResponsive) {
                        tableResponsive.style.overflow = 'visible';
                    }
                });
                dropdown.addEventListener('hidden.bs.dropdown', function () {
                    var tableResponsive = this.closest('.table-responsive');
                    if (tableResponsive) {
                        tableResponsive.style.overflow = 'visible';
                    }
                });
            });
        });

        function switchDraftView(mode) {
            var tableView = document.getElementById('draftTableView');
            var cardView = document.getElementById('draftCardView');
            var tableBtn = document.getElementById('draftTableViewBtn');
            var cardBtn = document.getElementById('draftCardViewBtn');

            if (mode === 'card') {
                tableView.classList.add('d-none');
                tableView.classList.remove('courses-view-active');
                cardView.classList.remove('d-none');
                cardView.classList.add('courses-view-active');
                cardBtn.classList.add('active');
                tableBtn.classList.remove('active');
            } else {
                cardView.classList.add('d-none');
                cardView.classList.remove('courses-view-active');
                tableView.classList.remove('d-none');
                tableView.classList.add('courses-view-active');
                tableBtn.classList.add('active');
                cardBtn.classList.remove('active');
            }

            // Save preference
            localStorage.setItem('instructor_drafts_view', mode);

            // Reinitialize tooltips for new view
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                var existingTooltip = bootstrap.Tooltip.getInstance(tooltipTriggerEl);
                if (!existingTooltip) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                }
                return existingTooltip;
            });
        }
    </script>
}
