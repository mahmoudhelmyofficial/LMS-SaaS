@model IEnumerable<LMS.Domain.Entities.Courses.Course>

@{
    ViewData["Title"] = Html.T("الدورات المنشورة", "Published Courses");
    ViewData["Subtitle"] = Html.T("جميع الدورات المنشورة والمتاحة للطلاب", "All published courses available to students");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + Url.Action("CreateWizard") + "' class='btn btn-primary'><i class='feather-plus me-2'></i>" + Html.T("إنشاء دورة جديدة", "Create New Course") + "</a><a href='" + Url.Action("Index") + "' class='btn btn-light'><i class='feather-list me-2'></i>" + Html.T("جميع الدورات", "All Courses") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("دورات منشورة", "Published Courses") },
                { "Value", ViewBag.TotalCount ?? 0 },
                { "Icon", "check-circle" },
                { "Color", "success" }
            })
        </div>
        <div class="col-md-3">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الطلاب", "Total Students") },
                { "Value", ViewBag.TotalStudents ?? 0 },
                { "Icon", "users" },
                { "Color", "info" }
            })
        </div>
        <div class="col-md-3">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("متوسط التقييم", "Average Rating") },
                { "Value", (ViewBag.AverageRating ?? 0m).ToString("F1") },
                { "Icon", "star" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-md-3">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الإيرادات", "Total Revenue") },
                { "Value", ((decimal)(ViewBag.TotalRevenue ?? 0m)).ToEGP() },
                { "Icon", "dollar-sign" },
                { "Color", "primary" }
            })
        </div>
    </div>

    <!-- Courses List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الدورات المنشورة", "Published Courses")</h5>
                    <div class="card-header-action">
                        <div class="card-header-btn">
                            <div data-bs-toggle="tooltip" title="@Html.T("تحديث", "Refresh")">
                                <a href="@Url.Action("Published")" class="avatar-text avatar-xs bg-success">
                                    <i class="feather-refresh-cw"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body custom-card-action p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("الطلاب", "Students")</th>
                                        <th>@Html.T("التقييم", "Rating")</th>
                                        <th>@Html.T("السعر", "Price")</th>
                                        <th>@Html.T("تاريخ النشر", "Published Date")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="avatar-image avatar-lg">
                                                        <img src="@(course.ThumbnailUrl ?? "/assets/images/general/placeholder.png")" alt="@course.Title" class="img-fluid">
                                                    </div>
                                                    <div>
                                                        <a href="@Url.Action("Details", new { id = course.Id })" class="fw-bold text-dark">@course.Title</a>
                                                        <p class="fs-12 text-muted mb-0">@course.Category?.Name</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-users text-muted"></i>
                                                    <span class="fw-medium">@course.TotalStudents</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-star text-warning"></i>
                                                    <span class="fw-medium">@course.AverageRating.ToString("F1")</span>
                                                    <span class="text-muted fs-11">(@course.TotalReviews)</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">@course.Price.ToEGP()</span>
                                            </td>
                                            <td>
                                                <span class="fs-12 text-muted">@(course.PublishedAt?.ToString("dd/MM/yyyy") ?? "-")</span>
                                            </td>
                                            <td>
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", new { id = course.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض", "View")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("CreateWizard", new { id = course.Id, step = 1 })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                        <i class="feather-edit"></i>
                                                    </a>
                                                    <div class="dropdown">
                                                        <a href="javascript:void(0)" class="avatar-text avatar-md" data-bs-toggle="dropdown">
                                                            <i class="feather-more-horizontal"></i>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <li>
                                                                <a class="dropdown-item" href="@Url.Action("Index", "Students", new { courseId = course.Id })">
                                                                    <i class="feather-users me-3"></i>
                                                                    <span>@Html.T("الطلاب", "Students")</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" href="@Url.Action("CourseDetails", "Analytics", new { courseId = course.Id })">
                                                                    <i class="feather-bar-chart-2 me-3"></i>
                                                                    <span>@Html.T("التحليلات", "Analytics")</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @await Html.PartialAsync("_Pagination")
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-success text-success mb-4 mx-auto">
                                <i class="feather-check-circle"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد دورات منشورة", "No published courses")</h5>
                            <p class="text-muted mb-4">@Html.T("قم بنشر دوراتك لتكون متاحة للطلاب", "Publish your courses to make them available to students")</p>
                            <a href="@Url.Action("Index", new { status = "Draft" })" class="btn btn-primary">
                                <i class="feather-list me-2"></i>
                                @Html.T("عرض المسودات", "View Drafts")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

