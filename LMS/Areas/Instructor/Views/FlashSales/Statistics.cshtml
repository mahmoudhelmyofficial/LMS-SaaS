@{
    ViewData["Title"] = Html.T("إحصائيات العروض السريعة", "Flash Sales Statistics");
    ViewData["Subtitle"] = Html.T("تقرير شامل عن العروض السريعة", "Comprehensive flash sales report");
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw($@"
        <a href='{indexUrl}' class='btn btn-light'>
            <i class='feather-arrow-right me-2'></i>
            العودة
        </a>
    ") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Main Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "إجمالي العروض" },
                { "Value", ViewBag.TotalSales ?? 0 },
                { "Icon", "zap" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "العروض النشطة" },
                { "Value", ViewBag.ActiveSales ?? 0 },
                { "Icon", "trending-up" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "إجمالي المبيعات" },
                { "Value", ViewBag.TotalSoldQuantity ?? 0 },
                { "Icon", "shopping-cart" },
                { "Color", "warning" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "إجمالي الإيرادات" },
                { "Value", ((decimal)(ViewBag.TotalRevenue ?? 0m)).ToEGP() },
                { "Icon", "dollar-sign" },
                { "Color", "info" }
            })
        </div>
    </div>

    <!-- Success Message -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-lg bg-success text-white">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-1">@Html.T("أداء ممتاز!", "Excellent performance!")</h5>
                            <p class="text-muted mb-0">عروضك السريعة تحقق نتائج رائعة. استمر في تقديم عروض جذابة لزيادة المبيعات</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

