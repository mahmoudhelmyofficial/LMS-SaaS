@model IEnumerable<InstructorApplication>

@{
    ViewData["Title"] = Html.T("سجل الطلبات", "Applications History");
    ViewData["Subtitle"] = Html.T("جميع طلبات الانضمام السابقة", "All previous instructor applications");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("طلب الانضمام", "Application")</a></li>
            <li class="breadcrumb-item active">@Html.T("السجل", "History")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للطلب الحالي", "Back to Current Application")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("سجل طلبات الانضمام", "Application history")</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="timeline-wrapper">
                            @foreach (var app in Model)
                            {
                                <div class="timeline-item">
                                    <div class="timeline-marker">
                                        @switch (app.Status)
                                        {
                                            case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                                                <div class="avatar-text avatar-md bg-soft-success text-success">
                                                    <i class="feather-check-circle"></i>
                                                </div>
                                                break;
                                            case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                                                <div class="avatar-text avatar-md bg-soft-danger text-danger">
                                                    <i class="feather-x-circle"></i>
                                                </div>
                                                break;
                                            case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                                                <div class="avatar-text avatar-md bg-soft-info text-info">
                                                    <i class="feather-eye"></i>
                                                </div>
                                                break;
                                            default:
                                                <div class="avatar-text avatar-md bg-soft-warning text-warning">
                                                    <i class="feather-clock"></i>
                                                </div>
                                                break;
                                        }
                                    </div>
                                    <div class="timeline-content">
                                        <div class="card mb-0">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-3">
                                                    <div>
                                                        <h6 class="mb-1">@Html.T("طلب انضمام", "Application")</h6>
                                                        <p class="text-muted fs-12 mb-0">
                                                            @Html.T("تم التقديم في", "Submitted on") @app.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                        </p>
                                                    </div>
                                                    @switch (app.Status)
                                                    {
                                                        case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                                                            <span class="badge bg-soft-warning text-warning">@Html.T("قيد الانتظار", "Pending")</span>
                                                            break;
                                                        case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                                                            <span class="badge bg-soft-info text-info">@Html.T("تحت المراجعة", "Under review")</span>
                                                            break;
                                                        case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                                                            <span class="badge bg-soft-success text-success">@Html.T("مقبول", "Approved")</span>
                                                            break;
                                                        case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                                                            <span class="badge bg-soft-danger text-danger">@Html.T("مرفوض", "Rejected")</span>
                                                            break;
                                                        case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                                                            <span class="badge bg-soft-warning text-warning">@Html.T("يتطلب تعديلات", "Requires changes")</span>
                                                            break;
                                                    }
                                                </div>
                                                <div class="row g-3">
                                                    <div class="col-md-6">
                                                        <small class="text-muted">@Html.T("التخصص", "Expertise")</small>
                                                        <p class="fw-medium mb-0">@app.Expertise</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <small class="text-muted">@Html.T("سنوات الخبرة", "Years of experience")</small>
                                                        <p class="fw-medium mb-0">@app.YearsOfExperience @Html.T("سنوات", "years")</p>
                                                    </div>
                                                </div>
                                                @if (app.ReviewedAt.HasValue)
                                                {
                                                    <div class="border-top mt-3 pt-3">
                                                        <div class="row g-3">
                                                            <div class="col-md-6">
                                                                <small class="text-muted">@Html.T("تاريخ المراجعة", "Review date")</small>
                                                                <p class="fw-medium mb-0">@app.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                                            </div>
                                                            @if (app.ReviewedBy != null)
                                                            {
                                                                <div class="col-md-6">
                                                                    <small class="text-muted">@Html.T("المراجع", "Reviewed by")</small>
                                                                    <p class="fw-medium mb-0">@app.ReviewedBy.FullName</p>
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(app.AdminNotes))
                                                {
                                                    <div class="border-top mt-3 pt-3">
                                                        <small class="text-muted">@Html.T("ملاحظات الإدارة", "Admin notes")</small>
                                                        <p class="mb-0">@app.AdminNotes</p>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(app.RejectionReason))
                                                {
                                                    <div class="border-top mt-3 pt-3">
                                                        <small class="text-muted">@Html.T("سبب الرفض", "Rejection reason")</small>
                                                        <p class="mb-0 text-danger">@app.RejectionReason</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mb-4 mx-auto">
                                <i class="feather-clock"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا يوجد سجل", "No history")</h5>
                            <p class="text-muted">@Html.T("لا توجد طلبات سابقة", "No previous applications")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .timeline-wrapper {
            position: relative;
            padding-right: 50px;
        }
        
        .timeline-item {
            position: relative;
            padding-bottom: 30px;
        }
        
        .timeline-item:not(:last-child):before {
            content: '';
            position: absolute;
            right: 22px;
            top: 50px;
            bottom: -30px;
            width: 2px;
            background: #e5e7eb;
        }
        
        .timeline-marker {
            position: absolute;
            right: 0;
            top: 10px;
        }
        
        .timeline-content {
            margin-right: 70px;
        }
    </style>
}

