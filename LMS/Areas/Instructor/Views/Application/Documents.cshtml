@model IEnumerable<InstructorDocument>

@{
    ViewData["Title"] = Html.T("المستندات المرفقة", "Attached Documents");
    ViewData["Subtitle"] = Html.T("جميع المستندات المرفقة مع طلب الانضمام", "All documents attached to your application");
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>" + Html.T("العودة للطلب", "Back to application") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("المستندات المرفقة", "Attached documents")</h5>
                    <div class="card-header-action">
                        <span class="badge bg-soft-primary text-primary">@Model.Count() @Html.T("مستند", "document")</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row g-4">
                            @foreach (var doc in Model)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start mb-3">
                                                <div class="avatar-text avatar-lg bg-soft-primary text-primary me-3">
                                                    @switch (doc.DocumentType)
                                                    {
                                                        case "CV":
                                                            <i class="feather-file-text"></i>
                                                            break;
                                                        case "Certificate":
                                                            <i class="feather-award"></i>
                                                            break;
                                                        case "ID":
                                                            <i class="feather-credit-card"></i>
                                                            break;
                                                        default:
                                                            <i class="feather-file"></i>
                                                            break;
                                                    }
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@doc.DocumentType</h6>
                                                    <small class="text-muted">@doc.FileName</small>
                                                </div>
                                                @if (doc.IsVerified)
                                                {
                                                    <span class="badge bg-soft-success text-success">
                                                        <i class="feather-check fs-10"></i>
                                                    </span>
                                                }
                                            </div>
                                            @if (!string.IsNullOrEmpty(doc.Description))
                                            {
                                                <p class="fs-12 text-muted mb-3">@doc.Description</p>
                                            }
                                            <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                                <small class="text-muted">
                                                    <i class="feather-clock me-1"></i>
                                                    @doc.UploadedAt.ToString("dd/MM/yyyy")
                                                </small>
                                                <a href="@Url.Action("DownloadDocument", new { id = doc.Id })" class="btn btn-sm btn-primary">
                                                    <i class="feather-download me-1"></i>
                                                    @Html.T("تحميل", "Download")
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mb-4 mx-auto">
                                <i class="feather-file-text"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد مستندات", "No documents")</h5>
                            <p class="text-muted">@Html.T("لم يتم رفع أي مستندات بعد", "No documents have been uploaded yet")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

