@model InstructorApplication

@{
    ViewData["Title"] = Html.T("حالة الطلب", "Application Status");
    ViewData["Subtitle"] = Html.T("تتبع حالة طلب الانضمام الخاص بك", "Track your application status");
    var instructorProfile = ViewBag.InstructorProfile as InstructorProfile;
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("طلب الانضمام", "Application")</a></li>
            <li class="breadcrumb-item active">@Html.T("حالة الطلب", "Status")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للطلب", "Back to application")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Status Progress -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <h5 class="mb-4">@Html.T("مراحل الطلب", "Application stages")</h5>
                            <div class="progress-steps">
                                <div class="progress-step @(Model.Status >= LMS.Domain.Enums.InstructorApplicationStatus.Pending ? "completed" : "")">
                                    <div class="progress-step-icon">
                                        <i class="feather-file-text"></i>
                                    </div>
                                    <div class="progress-step-content">
                                        <h6>@Html.T("تم التقديم", "Submitted")</h6>
                                        <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                                <div class="progress-step @(Model.Status >= LMS.Domain.Enums.InstructorApplicationStatus.UnderReview ? "completed" : "")">
                                    <div class="progress-step-icon">
                                        <i class="feather-eye"></i>
                                    </div>
                                    <div class="progress-step-content">
                                        <h6>@Html.T("تحت المراجعة", "Under review")</h6>
                                        <small class="text-muted">
                                            @if (Model.Status >= LMS.Domain.Enums.InstructorApplicationStatus.UnderReview)
                                            {
                                                <span>@Html.T("جاري المراجعة", "Being reviewed")</span>
                                            }
                                            else
                                            {
                                                <span>@Html.T("في الانتظار", "Waiting")</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                                <div class="progress-step @(Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved ? "completed" : Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Rejected ? "rejected" : "")">
                                    <div class="progress-step-icon">
                                        @if (Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved)
                                        {
                                            <i class="feather-check-circle"></i>
                                        }
                                        else if (Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Rejected)
                                        {
                                            <i class="feather-x-circle"></i>
                                        }
                                        else
                                        {
                                            <i class="feather-check-circle"></i>
                                        }
                                    </div>
                                    <div class="progress-step-content">
                                        <h6>
                                            @if (Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved)
                                            {
                                                <span>@Html.T("تم القبول", "Approved")</span>
                                            }
                                            else if (Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Rejected)
                                            {
                                                <span>@Html.T("تم الرفض", "Rejected")</span>
                                            }
                                            else
                                            {
                                                <span>@Html.T("النتيجة النهائية", "Final result")</span>
                                            }
                                        </h6>
                                        <small class="text-muted">
                                            @if (Model.ReviewedAt.HasValue)
                                            {
                                                <span>@Model.ReviewedAt.Value.ToString("dd/MM/yyyy")</span>
                                            }
                                            else
                                            {
                                                <span>@Html.T("في الانتظار", "Waiting")</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Current Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحالة الحالية", "Current status")</h5>
                </div>
                <div class="card-body">
                    @switch (Model.Status)
                    {
                        case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                            <div class="text-center py-4">
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-clock"></i>
                                </div>
                                <h5 class="mb-2">@Html.T("طلبك قيد الانتظار", "Your application is pending")</h5>
                                <p class="text-muted mb-4">@Html.T("سيتم مراجعة طلبك في أقرب وقت ممكن", "Your application will be reviewed as soon as possible")</p>
                                <div class="alert alert-info">
                                    <strong>@Html.T("ملحوظة:", "Note:")</strong> @Html.T("عادة ما تستغرق مراجعة الطلبات من 2-5 أيام عمل", "Review typically takes 2-5 business days")
                                </div>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                            <div class="text-center py-4">
                                <div class="avatar-text avatar-xl bg-soft-info text-info mb-3 mx-auto">
                                    <i class="feather-eye"></i>
                                </div>
                                <h5 class="mb-2">@Html.T("طلبك تحت المراجعة", "Your application is under review")</h5>
                                <p class="text-muted mb-4">@Html.T("يتم مراجعة طلبك حالياً من قبل فريق الإدارة", "Your application is currently being reviewed by the admin team")</p>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                            <div class="text-center py-4">
                                <div class="avatar-text avatar-xl bg-soft-success text-success mb-3 mx-auto">
                                    <i class="feather-check-circle"></i>
                                </div>
                                <h5 class="mb-2">@Html.T("مبروك! تم قبول طلبك", "Congratulations! Your application was approved")</h5>
                                <p class="text-muted mb-4">@Html.T("أصبحت الآن مدرساً معتمداً في المنصة", "You are now an approved instructor on the platform")</p>
                                @if (instructorProfile != null)
                                {
                                    <div class="alert alert-success">
                                        <strong>@Html.T("الخطوة التالية:", "Next step:")</strong> @Html.T("يمكنك الآن البدء في إنشاء وإدارة دوراتك", "You can now start creating and managing your courses")
                                    </div>
                                    <a href="@Url.Action("CreateWizard", "Courses")" class="btn btn-primary mt-3">
                                        <i class="feather-plus me-2"></i>
                                        @Html.T("إنشاء دورة جديدة", "Create new course")
                                    </a>
                                }
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                            <div class="text-center py-4">
                                <div class="avatar-text avatar-xl bg-soft-danger text-danger mb-3 mx-auto">
                                    <i class="feather-x-circle"></i>
                                </div>
                                <h5 class="mb-2">@Html.T("تم رفض الطلب", "Application rejected")</h5>
                                @if (!string.IsNullOrEmpty(Model.RejectionReason))
                                {
                                    <div class="alert alert-danger mt-4">
                                        <strong>@Html.T("السبب:", "Reason:")</strong> @Model.RejectionReason
                                    </div>
                                }
                                <p class="text-muted mb-4">@Html.T("يمكنك التواصل مع الإدارة لمعرفة المزيد من التفاصيل", "You can contact admin for more details")</p>
                                <a href="mailto:@(ViewBag.SupportEmail ?? "support@lms.com")" class="btn btn-primary mt-3">
                                    <i class="feather-mail me-2"></i>
                                    @Html.T("التواصل مع الإدارة", "Contact admin")
                                </a>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                            <div class="text-center py-4">
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-edit"></i>
                                </div>
                                <h5 class="mb-2">@Html.T("يتطلب تعديلات", "Requires changes")</h5>
                                @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                {
                                    <div class="alert alert-warning mt-4">
                                        <strong>@Html.T("ملاحظات الإدارة:", "Admin notes:")</strong> @Model.AdminNotes
                                    </div>
                                }
                                <p class="text-muted mb-4">@Html.T("يرجى مراجعة الملاحظات وإجراء التعديلات المطلوبة", "Please review the notes and make the required changes")</p>
                            </div>
                            break;
                    }
                </div>
            </div>

            <!-- Admin Notes -->
            @if (!string.IsNullOrEmpty(Model.AdminNotes) && Model.Status != LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges)
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("ملاحظات الإدارة", "Admin notes")</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AdminNotes</p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Timeline Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التسلسل الزمني", "Timeline")</h5>
                </div>
                <div class="card-body">
                    <div class="timeline-simple">
                        <div class="timeline-item">
                            <span class="timeline-icon bg-soft-primary text-primary">
                                <i class="feather-file-text"></i>
                            </span>
                            <div class="timeline-content">
                                <p class="fw-medium mb-1">@Html.T("تم التقديم", "Submitted")</p>
                                <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                        @if (Model.Status >= LMS.Domain.Enums.InstructorApplicationStatus.UnderReview)
                        {
                            <div class="timeline-item">
                                <span class="timeline-icon bg-soft-info text-info">
                                    <i class="feather-eye"></i>
                                </span>
                                <div class="timeline-content">
                                    <p class="fw-medium mb-1">@Html.T("بدأت المراجعة", "Review started")</p>
                                    <small class="text-muted">@Html.T("تحت المراجعة", "Under review")</small>
                                </div>
                            </div>
                        }
                        @if (Model.ReviewedAt.HasValue)
                        {
                            <div class="timeline-item">
                                <span class="timeline-icon bg-soft-@(Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved ? "success" : "danger") text-@(Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved ? "success" : "danger")">
                                    <i class="feather-@(Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved ? "check" : "x")-circle"></i>
                                </span>
                                <div class="timeline-content">
                                    <p class="fw-medium mb-1">
                                        @(Model.Status == LMS.Domain.Enums.InstructorApplicationStatus.Approved ? Html.T("تم القبول", "Approved") : Html.T("تم الرفض", "Rejected"))
                                    </p>
                                    <small class="text-muted">@Model.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    @if (Model.ReviewedBy != null)
                                    {
                                        <small class="d-block text-muted">@Html.T("بواسطة", "By"): @Model.ReviewedBy.FullName</small>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("هل تحتاج مساعدة؟", "Need help?")</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted fs-12 mb-3">@Html.T("إذا كان لديك أي استفسار حول طلبك، يمكنك التواصل معنا", "If you have any questions about your application, you can contact us")</p>
                    <div class="d-grid gap-2">
                        <a href="mailto:@(ViewBag.SupportEmail ?? "support@lms.com")" class="btn btn-light btn-sm">
                            <i class="feather-mail me-2"></i>
                            @Html.T("إرسال بريد إلكتروني", "Send email")
                        </a>
                        <a href="@Url.Action("Documents")" class="btn btn-light btn-sm">
                            <i class="feather-file-text me-2"></i>
                            @Html.T("عرض المستندات", "View documents")
                        </a>
                        <a href="@Url.Action("History")" class="btn btn-light btn-sm">
                            <i class="feather-clock me-2"></i>
                            @Html.T("عرض السجل", "View history")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .progress-steps {
            display: flex;
            justify-content: space-between;
            position: relative;
            padding: 0 20px;
        }
        
        .progress-steps:before {
            content: '';
            position: absolute;
            top: 30px;
            right: 10%;
            left: 10%;
            height: 2px;
            background: #e5e7eb;
            z-index: 0;
        }
        
        .progress-step {
            flex: 1;
            text-align: center;
            position: relative;
        }
        
        .progress-step-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: #f3f4f6;
            color: #9ca3af;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 24px;
            position: relative;
            z-index: 1;
            border: 4px solid #fff;
        }
        
        .progress-step.completed .progress-step-icon {
            background: #22c55e;
            color: #fff;
        }
        
        .progress-step.rejected .progress-step-icon {
            background: #ef4444;
            color: #fff;
        }
        
        .progress-step-content h6 {
            font-size: 14px;
            margin-bottom: 5px;
        }
        
        .timeline-simple .timeline-item {
            display: flex;
            gap: 15px;
            padding-bottom: 20px;
            position: relative;
        }
        
        .timeline-simple .timeline-item:not(:last-child):after {
            content: '';
            position: absolute;
            right: 18px;
            top: 40px;
            bottom: 0;
            width: 2px;
            background: #e5e7eb;
        }
        
        .timeline-icon {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
    </style>
}

