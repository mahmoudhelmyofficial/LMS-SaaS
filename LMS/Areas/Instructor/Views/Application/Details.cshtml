@model InstructorApplication

@{
    ViewData["Title"] = Html.T("تفاصيل الطلب", "Application Details");
    ViewData["Subtitle"] = Html.T("عرض تفاصيل كاملة لطلب الانضمام كمدرس", "View full details of your instructor application");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("طلب الانضمام", "Application")</a></li>
            <li class="breadcrumb-item active">@Html.T("التفاصيل", "Details")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة", "Back")
            </a>
            <a href="@Url.Action("Documents")" class="btn btn-light">
                <i class="feather-file-text me-2"></i>
                @Html.T("المستندات", "Documents")
            </a>
            <a href="@Url.Action("Status")" class="btn btn-primary">
                <i class="feather-info me-2"></i>
                @Html.T("حالة الطلب", "Application status")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Application Status Banner -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-body">
                    @switch (Model.Status)
                    {
                        case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                            <div class="alert alert-warning d-flex align-items-center mb-0" role="alert">
                                <i class="feather-clock fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">@Html.T("طلبك قيد المراجعة", "Your application is under review")</h6>
                                    <small>@Html.T("تم التقديم", "Submitted"): @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                            <div class="alert alert-info d-flex align-items-center mb-0" role="alert">
                                <i class="feather-eye fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">@Html.T("طلبك تحت المراجعة", "Your application is under review")</h6>
                                    <small>@Html.T("يتم مراجعة طلبك حالياً من قبل فريق الإدارة", "Your application is currently being reviewed by the admin team")</small>
                                </div>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                            <div class="alert alert-success d-flex align-items-center mb-0" role="alert">
                                <i class="feather-check-circle fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">@Html.T("تم قبول طلبك!", "Application approved!")</h6>
                                    <small>@Html.T("مبروك! أصبحت الآن مدرساً معتمداً في المنصة", "Congratulations! You are now an approved instructor on the platform")</small>
                                </div>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                            <div class="alert alert-danger d-flex align-items-center mb-0" role="alert">
                                <i class="feather-x-circle fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">@Html.T("تم رفض الطلب", "Application rejected")</h6>
                                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                                    {
                                        <small>@Html.T("السبب", "Reason"): @Model.RejectionReason</small>
                                    }
                                </div>
                            </div>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                            <div class="alert alert-warning d-flex align-items-center mb-0" role="alert">
                                <i class="feather-edit fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">@Html.T("يتطلب تعديلات", "Requires changes")</h6>
                                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                    {
                                        <small>@Html.T("ملاحظات", "Notes"): @Model.AdminNotes</small>
                                    }
                                </div>
                            </div>
                            break;
                    }
                </div>
            </div>

            <!-- Personal Information -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("المعلومات الشخصية", "Personal information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("الاسم الكامل", "Full name")</label>
                            <p class="fw-semibold mb-0">@Model.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("البريد الإلكتروني", "Email")</label>
                            <p class="fw-semibold mb-0">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("رقم الهاتف", "Phone")</label>
                            <p class="fw-semibold mb-0">@(string.IsNullOrEmpty(Model.PhoneNumber) ? Html.T("غير محدد", "Not set") : Model.PhoneNumber)</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("تاريخ التقديم", "Submitted")</label>
                            <p class="fw-semibold mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Information -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("المعلومات المهنية", "Professional information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("التخصص", "Expertise")</label>
                            <p class="fw-semibold mb-0">@(string.IsNullOrEmpty(Model.Expertise) ? Html.T("غير محدد", "Not set") : Model.Expertise)</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("سنوات الخبرة", "Years of experience")</label>
                            <p class="fw-semibold mb-0">@Model.YearsOfExperience @Html.T("سنوات", "years")</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("نبذة مختصرة", "Bio")</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.Bio) ? Html.T("لا يوجد", "None") : Model.Bio)</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("الخبرات السابقة", "Previous experience")</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.PreviousExperience) ? Html.T("لا يوجد", "None") : Model.PreviousExperience)</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted fs-12 fw-medium">@Html.T("سبب الانضمام", "Why join")</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.WhyJoin) ? Html.T("لا يوجد", "None") : Model.WhyJoin)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents -->
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المستندات المرفقة", "Attached documents")</h5>
                        <div class="card-header-action">
                            <span class="badge bg-soft-primary text-primary">@Model.Documents.Count @Html.T("مستند", "document")</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var doc in Model.Documents)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                            <i class="feather-file-text"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@doc.DocumentType</h6>
                                            <small class="text-muted">@Html.T("تم الرفع", "Uploaded"): @doc.UploadedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                            @if (doc.IsVerified)
                                            {
                                                <span class="badge bg-soft-success text-success ms-2">
                                                    <i class="feather-check me-1"></i>@Html.T("موثق", "Verified")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <a href="@Url.Action("DownloadDocument", new { id = doc.Id })" class="btn btn-sm btn-light" target="_blank">
                                        <i class="feather-download me-1"></i>
                                        تحميل
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Admin Notes -->
            @if (!string.IsNullOrEmpty(Model.AdminNotes))
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("ملاحظات الإدارة", "Admin notes")</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-0">
                            <i class="feather-info me-2"></i>
                            @Model.AdminNotes
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("حالة الطلب", "Application status")</h5>
                </div>
                <div class="card-body text-center">
                    @switch (Model.Status)
                    {
                        case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                            <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                <i class="feather-clock"></i>
                            </div>
                            <h6 class="fw-bold mb-2">@Html.T("قيد الانتظار", "Pending")</h6>
                            <p class="text-muted fs-12 mb-0">@Html.T("سيتم مراجعة طلبك قريباً", "Your application will be reviewed soon")</p>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                            <div class="avatar-text avatar-xl bg-soft-info text-info mb-3 mx-auto">
                                <i class="feather-eye"></i>
                            </div>
                            <h6 class="fw-bold mb-2">@Html.T("تحت المراجعة", "Under review")</h6>
                            <p class="text-muted fs-12 mb-0">@Html.T("جاري مراجعة طلبك", "Your application is being reviewed")</p>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                            <div class="avatar-text avatar-xl bg-soft-success text-success mb-3 mx-auto">
                                <i class="feather-check-circle"></i>
                            </div>
                            <h6 class="fw-bold mb-2">@Html.T("مقبول", "Approved")</h6>
                            <p class="text-muted fs-12 mb-0">@Html.T("تم قبول طلبك", "Your application has been approved")</p>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                            <div class="avatar-text avatar-xl bg-soft-danger text-danger mb-3 mx-auto">
                                <i class="feather-x-circle"></i>
                            </div>
                            <h6 class="fw-bold mb-2">@Html.T("مرفوض", "Rejected")</h6>
                            <p class="text-muted fs-12 mb-0">@Html.T("تم رفض طلبك", "Your application has been rejected")</p>
                            break;
                        case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                            <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                <i class="feather-edit"></i>
                            </div>
                            <h6 class="fw-bold mb-2">@Html.T("يتطلب تعديلات", "Requires changes")</h6>
                            <p class="text-muted fs-12 mb-0">@Html.T("يرجى إجراء التعديلات", "Please make the required changes")</p>
                            break;
                    }
                </div>
            </div>

            <!-- Timeline Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات المراجعة", "Review info")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">تاريخ التقديم</small>
                        <p class="fw-medium mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.ReviewedAt.HasValue)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">تاريخ المراجعة</small>
                            <p class="fw-medium mb-0">@Model.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (Model.ReviewedBy != null)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">تم المراجعة بواسطة</small>
                            <p class="fw-medium mb-0">@Model.ReviewedBy.FullName</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Status")" class="btn btn-primary btn-sm">
                            <i class="feather-info me-2"></i>
                            عرض حالة الطلب التفصيلية
                        </a>
                        <a href="@Url.Action("Documents")" class="btn btn-light btn-sm">
                            <i class="feather-file-text me-2"></i>
                            عرض المستندات
                        </a>
                        <a href="@Url.Action("History")" class="btn btn-light btn-sm">
                            <i class="feather-clock me-2"></i>
                            سجل التعديلات
                        </a>
                        <a href="mailto:@(ViewBag.SupportEmail ?? "support@lms.com")" class="btn btn-light btn-sm">
                            <i class="feather-mail me-2"></i>
                            التواصل مع الإدارة
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

