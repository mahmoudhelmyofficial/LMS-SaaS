@model InstructorApplication

@{
    ViewData["Title"] = Html.T("طلب الانضمام كمدرس", "Apply as Instructor");
    ViewData["Subtitle"] = Html.T("عرض تفاصيل طلبك للانضمام كمدرس في المنصة", "View your instructor application details");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item active">@Html.T("طلب الانضمام", "Application")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            <a href="@Url.Action("Documents")" class="btn btn-light">
                <i class="feather-file-text me-2"></i>
                @Html.T("المستندات", "Documents")
            </a>
            <a href="@Url.Action("History")" class="btn btn-light">
                <i class="feather-clock me-2"></i>
                @Html.T("السجل", "History")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Status Banner -->
    <div class="row mb-4">
        <div class="col-12">
            @switch (Model.Status)
            {
                case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="feather-clock fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Html.T("طلبك قيد المراجعة", "Your application is under review")</h5>
                            <p class="mb-0">@Html.T("سيتم مراجعة طلبك في أقرب وقت ممكن. عادة ما تستغرق المراجعة من 2-5 أيام عمل.", "Your application will be reviewed as soon as possible. Review typically takes 2-5 business days.")</p>
                        </div>
                    </div>
                    break;
                case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="feather-eye fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Html.T("طلبك تحت المراجعة", "Your application is being reviewed")</h5>
                            <p class="mb-0">@Html.T("يتم مراجعة طلبك حالياً من قبل فريق الإدارة.", "Your application is currently being reviewed by the admin team.")</p>
                        </div>
                    </div>
                    break;
                case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="feather-check-circle fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Html.T("تم قبول طلبك!", "Application approved!")</h5>
                            <p class="mb-0">@Html.T("مبروك! تم قبولك كمدرس في المنصة. يمكنك الآن البدء في إنشاء الدورات.", "Congratulations! You have been approved as an instructor. You can now start creating courses.")</p>
                        </div>
                    </div>
                    break;
                case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="feather-x-circle fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Html.T("تم رفض الطلب", "Application rejected")</h5>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.RejectionReason))
                                {
                                    <span>@Html.T("السبب", "Reason"): @Model.RejectionReason</span>
                                }
                                else
                                {
                                    <span>@Html.T("للأسف تم رفض طلبك. يمكنك التواصل مع الإدارة لمعرفة التفاصيل.", "Unfortunately your application was rejected. You can contact support for details.")</span>
                                }
                            </p>
                        </div>
                    </div>
                    break;
                case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="feather-edit fs-3 me-3"></i>
                        <div>
                            <h5 class="mb-1">@Html.T("يتطلب تعديلات", "Requires changes")</h5>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.AdminNotes))
                                {
                                    <span>@Html.T("ملاحظات الإدارة", "Admin notes"): @Model.AdminNotes</span>
                                }
                            </p>
                        </div>
                    </div>
                    break;
            }
        </div>
    </div>

    <div class="row">
        <!-- Application Details -->
        <div class="col-lg-8">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الطلب", "Application details")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("الاسم الكامل", "Full name")</label>
                            <p class="fw-bold">@Model.FullName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("البريد الإلكتروني", "Email")</label>
                            <p class="fw-bold">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("رقم الهاتف", "Phone")</label>
                            <p class="fw-bold">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("تاريخ التقديم", "Submitted")</label>
                            <p class="fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("التخصص", "Expertise")</label>
                            <p class="fw-bold">@Model.Expertise</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">@Html.T("سنوات الخبرة", "Years of experience")</label>
                            <p class="fw-bold">@Model.YearsOfExperience @Html.T("سنوات", "years")</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">@Html.T("نبذة مختصرة", "Bio")</label>
                            <p>@Model.Bio</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">@Html.T("الخبرات السابقة", "Previous experience")</label>
                            <p>@Model.PreviousExperience</p>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted">@Html.T("سبب الانضمام", "Why join")</label>
                            <p>@Model.WhyJoin</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Documents -->
            @if (Model.Documents != null && Model.Documents.Any())
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المستندات المرفقة", "Attached documents")</h5>
                        <div class="card-header-action">
                            <a href="@Url.Action("Documents")" class="btn btn-sm btn-primary">
                                @Html.T("عرض جميع المستندات", "View all documents")
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var doc in Model.Documents)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                            <i class="feather-file-text"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@doc.DocumentType</h6>
                                            <small class="text-muted">@Html.T("تم الرفع", "Uploaded"): @doc.UploadedAt.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("DownloadDocument", new { id = doc.Id })" class="btn btn-sm btn-light">
                                        <i class="feather-download me-1"></i>
                                        @Html.T("تحميل", "Download")
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("حالة الطلب", "Application status")</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @switch (Model.Status)
                        {
                            case LMS.Domain.Enums.InstructorApplicationStatus.Pending:
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-clock"></i>
                                </div>
                                <h6 class="fw-bold">@Html.T("قيد الانتظار", "Pending")</h6>
                                break;
                            case LMS.Domain.Enums.InstructorApplicationStatus.UnderReview:
                                <div class="avatar-text avatar-xl bg-soft-info text-info mb-3 mx-auto">
                                    <i class="feather-eye"></i>
                                </div>
                                <h6 class="fw-bold">@Html.T("تحت المراجعة", "Under review")</h6>
                                break;
                            case LMS.Domain.Enums.InstructorApplicationStatus.Approved:
                                <div class="avatar-text avatar-xl bg-soft-success text-success mb-3 mx-auto">
                                    <i class="feather-check-circle"></i>
                                </div>
                                <h6 class="fw-bold">@Html.T("مقبول", "Approved")</h6>
                                break;
                            case LMS.Domain.Enums.InstructorApplicationStatus.Rejected:
                                <div class="avatar-text avatar-xl bg-soft-danger text-danger mb-3 mx-auto">
                                    <i class="feather-x-circle"></i>
                                </div>
                                <h6 class="fw-bold">@Html.T("مرفوض", "Rejected")</h6>
                                break;
                            case LMS.Domain.Enums.InstructorApplicationStatus.RequiresChanges:
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-edit"></i>
                                </div>
                                <h6 class="fw-bold">@Html.T("يتطلب تعديلات", "Requires changes")</h6>
                                break;
                        }
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block mb-1">@Html.T("تاريخ التقديم", "Submitted")</small>
                        <p class="fw-medium mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    @if (Model.ReviewedAt.HasValue)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">@Html.T("تاريخ المراجعة", "Review date")</small>
                            <p class="fw-medium mb-0">@Model.ReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    }
                    @if (Model.ReviewedBy != null)
                    {
                        <div class="mb-3">
                            <small class="text-muted d-block mb-1">@Html.T("تم المراجعة بواسطة", "Reviewed by")</small>
                            <p class="fw-medium mb-0">@Model.ReviewedBy.FullName</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions Card -->
            @if (Model.Status != LMS.Domain.Enums.InstructorApplicationStatus.Approved)
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Documents")" class="btn btn-light">
                                <i class="feather-file-text me-2"></i>
                                @Html.T("عرض المستندات", "View documents")
                            </a>
                            <a href="@Url.Action("History")" class="btn btn-light">
                                <i class="feather-clock me-2"></i>
                                @Html.T("سجل الطلب", "Application history")
                            </a>
                            <a href="mailto:@(ViewBag.SupportEmail ?? "support@lms.com")" class="btn btn-light">
                                <i class="feather-mail me-2"></i>
                                @Html.T("التواصل مع الإدارة", "Contact admin")
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

