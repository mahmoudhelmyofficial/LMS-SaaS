@{
    ViewData["Title"] = Html.T("لا يوجد طلب انضمام", "No Application");
}

<div class="main-content">
    <div class="row">
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="text-center py-5">
                        <div class="avatar-text avatar-xxl bg-soft-warning text-warning mb-4 mx-auto" style="width: 120px; height: 120px; font-size: 60px;">
                            <i class="feather-file-text"></i>
                        </div>
                        <h3 class="fw-bold mb-3">@Html.T("لم يتم العثور على طلب انضمام", "No application found")</h3>
                        <p class="text-muted mb-4 fs-5">@Html.T("لا يوجد لديك طلب انضمام كمدرس في المنصة", "You do not have an instructor application on the platform")</p>
                        <div class="alert alert-info d-inline-block text-start mb-4">
                            <h6 class="mb-2">@Html.T("للانضمام كمدرس، يجب عليك:", "To join as instructor, you must:")</h6>
                            <ul class="mb-0 ps-3">
                                <li>@Html.T("تقديم طلب انضمام من خلال صفحة التقديم", "Submit an application through the application page")</li>
                                <li>@Html.T("رفع المستندات المطلوبة (السيرة الذاتية، الشهادات)", "Upload required documents (CV, certificates)")</li>
                                <li>@Html.T("انتظار موافقة الإدارة على طلبك", "Wait for admin approval of your application")</li>
                            </ul>
                        </div>
                        <br />
                        <a href="/apply-as-instructor" class="btn btn-primary btn-lg">
                            <i class="feather-plus-circle me-2"></i>
                            @Html.T("تقديم طلب انضمام", "Submit application")
                        </a>
                        <a href="/" class="btn btn-light btn-lg">
                            <i class="feather-home me-2"></i>
                            @Html.T("العودة للرئيسية", "Back to home")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

