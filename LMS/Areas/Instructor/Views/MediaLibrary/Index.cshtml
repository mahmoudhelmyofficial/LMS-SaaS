@model LMS.Areas.Instructor.ViewModels.MediaLibraryViewModel

@{
    ViewData["Title"] = Html.T("مكتبة الوسائط", "Media Library");
    ViewData["Subtitle"] = Html.T("إدارة ملفاتك الوسائط المرفوعة", "Manage your uploaded media files");
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex gap-2">
            <a asp-action="Upload" class="btn btn-primary">
                <i class="feather-upload me-2"></i>
                @Html.T("رفع ملف جديد", "Upload new file")
            </a>
            <button class="btn btn-light" onclick="window.location.reload()">
                <i class="feather-refresh-cw me-2"></i>
                @Html.T("تحديث", "Refresh")
            </button>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الملفات", "Total files") },
                { "Value", Model.TotalCount },
                { "Icon", "file" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الصور", "Images") },
                { "Value", Model.ImageCount },
                { "Icon", "image" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الفيديوهات", "Videos") },
                { "Value", Model.VideoCount },
                { "Icon", "video" },
                { "Color", "danger" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("المستندات", "Documents") },
                { "Value", Model.DocumentCount },
                { "Icon", "file-text" },
                { "Color", "warning" }
            })
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="btn-group w-100" role="group">
                        <a href="@Url.Action("Index")" class="btn btn-@(string.IsNullOrEmpty(Model.CurrentMediaType) ? "primary" : "outline-primary")">
                            <i class="feather-grid me-2"></i>
                            @Html.T("الكل", "All") (@Model.TotalCount)
                        </a>
                        <a href="@Url.Action("Index", new { mediaType = "Image" })" class="btn btn-@(Model.CurrentMediaType == "Image" ? "primary" : "outline-primary")">
                            <i class="feather-image me-2"></i>
                            @Html.T("صور", "Images") (@Model.ImageCount)
                        </a>
                        <a href="@Url.Action("Index", new { mediaType = "Video" })" class="btn btn-@(Model.CurrentMediaType == "Video" ? "primary" : "outline-primary")">
                            <i class="feather-video me-2"></i>
                            @Html.T("فيديو", "Video") (@Model.VideoCount)
                        </a>
                        <a href="@Url.Action("Index", new { mediaType = "Document" })" class="btn btn-@(Model.CurrentMediaType == "Document" ? "primary" : "outline-primary")">
                            <i class="feather-file-text me-2"></i>
                            @Html.T("مستندات", "Documents") (@Model.DocumentCount)
                        </a>
                        <a href="@Url.Action("Index", new { mediaType = "Audio" })" class="btn btn-@(Model.CurrentMediaType == "Audio" ? "primary" : "outline-primary")">
                            <i class="feather-music me-2"></i>
                            @Html.T("صوتيات", "Audio") (@Model.AudioCount)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Media Grid -->
    <div class="row">
        @if (Model.Items != null && Model.Items.Any())
        {
            @foreach (var media in Model.Items)
            {
                <div class="col-12 col-md-6 col-xl-4 col-xxl-3 mb-4">
                    <div class="card media-card h-100">
                        <div class="media-preview position-relative">
                            @if (media.MediaType == "Image")
                            {
                                <img src="@(media.FileUrl ?? "/assets/images/general/placeholder.png")" 
                                     class="card-img-top" alt="@media.Title" 
                                     style="height: 200px; object-fit: cover;" 
                                     loading="lazy">
                                <div class="media-type-badge">
                                    <span class="badge bg-success">
                                        <i class="feather-image me-1"></i>@Html.T("صورة", "Image")
                                    </span>
                                </div>
                            }
                            else if (media.MediaType == "Video")
                            {
                                <div class="bg-soft-danger d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="feather-video text-danger" style="font-size: 3rem;"></i>
                                </div>
                                <div class="media-type-badge">
                                    <span class="badge bg-danger">
                                        <i class="feather-video me-1"></i>@Html.T("فيديو", "Video")
                                    </span>
                                </div>
                            }
                            else if (media.MediaType == "Document")
                            {
                                <div class="bg-soft-warning d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="feather-file-text text-warning" style="font-size: 3rem;"></i>
                                </div>
                                <div class="media-type-badge">
                                    <span class="badge bg-warning">
                                        <i class="feather-file-text me-1"></i>@Html.T("مستند", "Document")
                                    </span>
                                </div>
                            }
                            else if (media.MediaType == "Audio")
                            {
                                <div class="bg-soft-info d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="feather-music text-info" style="font-size: 3rem;"></i>
                                </div>
                                <div class="media-type-badge">
                                    <span class="badge bg-info">
                                        <i class="feather-music me-1"></i>@Html.T("صوتي", "Audio")
                                    </span>
                                </div>
                            }
                            else
                            {
                                <div class="bg-soft-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="feather-file text-secondary" style="font-size: 3rem;"></i>
                                </div>
                                <div class="media-type-badge">
                                    <span class="badge bg-secondary">
                                        <i class="feather-file me-1"></i>@Html.T("ملف", "File")
                                    </span>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title mb-2 text-truncate" title="@media.Title">@media.Title</h6>
                            @if (!string.IsNullOrEmpty(media.OriginalFileName))
                            {
                                <p class="small text-muted mb-2 text-truncate" title="@media.OriginalFileName">
                                    <i class="feather-file me-1"></i>@media.OriginalFileName
                                </p>
                            }
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <small class="text-muted">
                                    <i class="feather-calendar me-1"></i>
                                    @media.CreatedAt.ToString("dd/MM/yyyy")
                                </small>
                                <small class="text-muted">
                                    <i class="feather-hard-drive me-1"></i>
                                    @FormatFileSize(media.FileSize)
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                @if (!string.IsNullOrEmpty(media.FileUrl))
                                {
                                    <a href="@media.FileUrl" target="_blank" class="btn btn-sm btn-light flex-fill">
                                        <i class="feather-eye me-1"></i>@Html.T("عرض", "View")
                                    </a>
                                    <button onclick="duplicateMedia(@media.Id)" class="btn btn-sm btn-light flex-fill" title="@Html.T("نسخ الملف", "Copy file")">
                                        <i class="feather-copy me-1"></i>@Html.T("نسخ", "Copy")
                                    </button>
                                }
                                <button class="btn btn-sm btn-danger delete-media-btn" data-media-id="@media.Id" data-media-title="@media.Title" title="@Html.T("حذف الملف", "Delete file")">
                                    <i class="feather-trash-2"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; border-radius: 50%;">
                            <i class="feather-image" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold mb-2">@Html.T("لا توجد ملفات وسائط", "No media files")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ برفع أول ملف وسائط لمكتبتك", "Start by uploading your first media file to your library")</p>
                        <a href="@Url.Action("Upload")" class="btn btn-primary">
                            <i class="feather-upload me-2"></i>
                            @Html.T("رفع ملف جديد", "Upload new file")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
</form>

@section Styles {
    <style>
        .media-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }

        .media-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .media-preview {
            overflow: hidden;
        }

        .media-type-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 1;
        }

        .media-card .card-img-top {
            transition: transform 0.3s ease;
        }

        .media-card:hover .card-img-top {
            transform: scale(1.1);
        }
        
        .bg-soft-success { background-color: rgba(25, 135, 84, 0.1) !important; }
        .bg-soft-danger { background-color: rgba(220, 53, 69, 0.1) !important; }
        .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1) !important; }
        .bg-soft-info { background-color: rgba(13, 202, 240, 0.1) !important; }
        .bg-soft-secondary { background-color: rgba(108, 117, 125, 0.1) !important; }
        .bg-soft-primary { background-color: rgba(13, 110, 253, 0.1) !important; }
    </style>
}

@section Scripts {
    <script>
        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        const copyApiUrl = '@Url.Action("CopyApi", "MediaLibrary", new { area = "Instructor" })';
        const deleteApiUrl = '@Url.Action("DeleteApi", "MediaLibrary", new { area = "Instructor" })';

        function duplicateMedia(id) {
            if (!confirm('هل تريد إنشاء نسخة من هذا الملف؟')) return;

            fetch(copyApiUrl + '/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': antiForgeryToken,
                    'RequestVerificationToken': antiForgeryToken
                }
            })
            .then(function(response) {
                if (!response.ok) {
                    throw new Error('HTTP error ' + response.status);
                }
                return response.json();
            })
            .then(function(data) {
                if (data.success) {
                    alert(data.message || 'تم نسخ الملف بنجاح');
                    window.location.reload();
                } else {
                    alert(data.message || 'حدث خطأ أثناء نسخ الملف');
                }
            })
            .catch(function(error) {
                console.error('Error duplicating media:', error);
                alert('حدث خطأ أثناء نسخ الملف');
            });
        }

        function deleteMedia(id, title) {
            if (!confirm('هل أنت متأكد من حذف الملف: ' + title + '؟')) return;

            fetch(deleteApiUrl + '/' + id, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-CSRF-TOKEN': antiForgeryToken,
                    'RequestVerificationToken': antiForgeryToken
                }
            })
            .then(function(response) {
                if (!response.ok) {
                    throw new Error('HTTP error ' + response.status);
                }
                return response.json();
            })
            .then(function(data) {
                if (data.success) {
                    alert(data.message || 'تم حذف الملف بنجاح');
                    window.location.reload();
                } else {
                    alert(data.message || 'حدث خطأ أثناء حذف الملف');
                }
            })
            .catch(function(error) {
                console.error('Error deleting media:', error);
                alert('حدث خطأ أثناء حذف الملف');
            });
        }

        // Bind delete buttons using event delegation (avoids inline onclick issues)
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.delete-media-btn').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var mediaId = this.getAttribute('data-media-id');
                    var mediaTitle = this.getAttribute('data-media-title');
                    deleteMedia(mediaId, mediaTitle);
                });
            });
        });
    </script>
}

@functions {
    string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        if (bytes < 1024 * 1024 * 1024) return $"{bytes / (1024.0 * 1024.0):F1} MB";
        return $"{bytes / (1024.0 * 1024.0 * 1024.0):F1} GB";
    }
}

