@{
    ViewData["Title"] = "دليل إدارة الطلاب";
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">إدارة الطلاب</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">مركز المساعدة</a></li>
            <li class="breadcrumb-item active">إدارة الطلاب</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        @await Html.PartialAsync("_HelpSidebar", "StudentManagement")
    </div>
    
    <div class="col-lg-9">
        <!-- Hero -->
        <div class="help-content-hero">
            <div class="help-content-icon teal">
                <i class="feather-users"></i>
            </div>
            <div>
                <h1>إدارة الطلاب والتفاعل</h1>
                <p>تعلم كيفية التواصل مع طلابك ومتابعة تقدمهم لتحقيق أفضل النتائج.</p>
            </div>
        </div>
        
        <!-- Student Progress -->
        <div class="help-section" id="progress">
            <h3><i class="feather-trending-up text-primary me-2"></i> متابعة تقدم الطلاب</h3>
            
            <p>تتبع رحلة كل طالب في دوراتك:</p>
            
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-percent"></i></div>
                        <div>
                            <h6>نسبة الإكمال</h6>
                            <p>كم أنجز الطالب من الدورة</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-clock"></i></div>
                        <div>
                            <h6>وقت المشاهدة</h6>
                            <p>إجمالي وقت التعلم</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon orange"><i class="feather-award"></i></div>
                        <div>
                            <h6>درجات الاختبارات</h6>
                            <p>أداء الطالب في التقييمات</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Instructor" asp-controller="Progress" asp-action="Index" class="btn btn-outline-primary">
                <i class="feather-bar-chart-2 me-2"></i>
                تقارير التقدم
            </a>
        </div>
        
        <!-- Grading -->
        <div class="help-section" id="grading">
            <h3><i class="feather-check-square text-primary me-2"></i> تصحيح الواجبات والاختبارات</h3>
            
            <div class="help-callout info">
                <i class="feather-info"></i>
                <div>
                    <strong>نصيحة:</strong> الرد السريع على الواجبات يحفز الطلاب ويزيد تفاعلهم.
                </div>
            </div>
            
            <h5>تصحيح الواجبات:</h5>
            <div class="help-steps-flow">
                <div class="flow-step">
                    <div class="flow-number">1</div>
                    <div class="flow-content">
                        <h6>استلم الإشعار</h6>
                        <p>عند تسليم واجب جديد</p>
                    </div>
                    <div class="flow-arrow"><i class="feather-arrow-left"></i></div>
                </div>
                <div class="flow-step">
                    <div class="flow-number">2</div>
                    <div class="flow-content">
                        <h6>راجع العمل</h6>
                        <p>حمّل الملف واقرأه</p>
                    </div>
                    <div class="flow-arrow"><i class="feather-arrow-left"></i></div>
                </div>
                <div class="flow-step">
                    <div class="flow-number">3</div>
                    <div class="flow-content">
                        <h6>أعطِ درجة وملاحظات</h6>
                        <p>تغذية راجعة بناءة</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-area="Instructor" asp-controller="AssignmentSubmissions" asp-action="Pending" class="btn btn-outline-primary me-2">
                    <i class="feather-inbox me-2"></i>
                    واجبات قيد التصحيح
                </a>
                <a asp-area="Instructor" asp-controller="QuizAttempts" asp-action="Index" class="btn btn-outline-primary">
                    <i class="feather-check-square me-2"></i>
                    محاولات الاختبارات
                </a>
            </div>
        </div>
        
        <!-- Reviews -->
        <div class="help-section" id="reviews">
            <h3><i class="feather-star text-primary me-2"></i> الرد على التقييمات</h3>
            
            <p>التقييمات تؤثر على قرار الطلاب الجدد. تعامل معها باحترافية:</p>
            
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <i class="feather-smile me-2"></i> للتقييمات الإيجابية
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <li>اشكر الطالب</li>
                                <li>أظهر سعادتك بتجربته</li>
                                <li>ادعُه لدورات أخرى</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <i class="feather-message-circle me-2"></i> للتقييمات السلبية
                        </div>
                        <div class="card-body">
                            <ul class="mb-0">
                                <li>استمع لملاحظات الطالب</li>
                                <li>اعتذر إن كان هناك خطأ</li>
                                <li>قدم حلاً أو توضيحاً</li>
                                <li>تجنب الجدال</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Instructor" asp-controller="Reviews" asp-action="Index" class="btn btn-outline-primary">
                <i class="feather-star me-2"></i>
                عرض التقييمات
            </a>
        </div>
        
        <!-- Communication -->
        <div class="help-section" id="communication">
            <h3><i class="feather-mail text-primary me-2"></i> التواصل مع الطلاب</h3>
            
            <h5>أدوات التواصل:</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-mail"></i></div>
                        <div>
                            <h6>الرسائل المباشرة</h6>
                            <p>تواصل فردي مع أي طالب</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon purple"><i class="feather-users"></i></div>
                        <div>
                            <h6>رسائل جماعية</h6>
                            <p>أرسل لجميع طلاب دورة</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-speaker"></i></div>
                        <div>
                            <h6>الإعلانات</h6>
                            <p>إشعارات مهمة للجميع</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-area="Instructor" asp-controller="Messages" asp-action="Compose" class="btn btn-outline-primary me-2">
                    <i class="feather-edit me-2"></i>
                    رسالة جديدة
                </a>
                <a asp-area="Instructor" asp-controller="Announcements" asp-action="Create" class="btn btn-outline-primary">
                    <i class="feather-speaker me-2"></i>
                    إعلان جديد
                </a>
            </div>
        </div>
        
        <!-- Discussions -->
        <div class="help-section" id="discussions">
            <h3><i class="feather-message-circle text-primary me-2"></i> إدارة المناقشات</h3>
            
            <p>منتديات النقاش تساعد في بناء مجتمع تعليمي نشط:</p>
            
            <ul>
                <li>راقب المناقشات بانتظام</li>
                <li>أجب على الأسئلة بسرعة</li>
                <li>شجع الطلاب على مساعدة بعضهم</li>
                <li>أزل المحتوى غير المناسب</li>
            </ul>
            
            <a asp-area="Instructor" asp-controller="Discussions" asp-action="Index" class="btn btn-outline-primary">
                <i class="feather-message-circle me-2"></i>
                عرض المناقشات
            </a>
        </div>
        
        <!-- Navigation -->
        <div class="help-navigation">
            <a asp-action="EarningsMarketing" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                السابق: الأرباح والتسويق
            </a>
            <a asp-action="Analytics" class="btn btn-primary">
                التالي: التحليلات
                <i class="feather-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</div>

