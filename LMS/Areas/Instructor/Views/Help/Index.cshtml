@{
    ViewData["Title"] = "مركز المساعدة";
}

<style>
    /* Help Center Styles */
    .help-hero {
        background: linear-gradient(135deg, #004aad 0%, #0066cc 50%, #3385d6 100%);
        border-radius: 16px;
        padding: 3rem 2rem;
        margin-bottom: 2rem;
        color: white;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .help-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        pointer-events: none;
    }
    
    .help-hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        position: relative;
    }
    
    .help-hero p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 1.5rem;
        position: relative;
    }
    
    .help-search {
        max-width: 600px;
        margin: 0 auto;
        position: relative;
    }
    
    .help-search input {
        width: 100%;
        padding: 1rem 1.5rem;
        padding-right: 3.5rem;
        border-radius: 50px;
        border: none;
        font-size: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    }
    
    .help-search i {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: #666;
    }
    
    .help-category-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        height: 100%;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        border: 2px solid transparent;
        text-decoration: none;
        color: inherit;
        display: block;
    }
    
    .help-category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0,74,173,0.15);
        border-color: var(--primary, #004aad);
        color: inherit;
    }
    
    .help-category-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        margin-bottom: 1.5rem;
        color: white;
    }
    
    .help-category-icon.blue { background: linear-gradient(135deg, #004aad 0%, #0066cc 100%); }
    .help-category-icon.green { background: linear-gradient(135deg, #059669 0%, #10b981 100%); }
    .help-category-icon.purple { background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 100%); }
    .help-category-icon.orange { background: linear-gradient(135deg, #d97706 0%, #f59e0b 100%); }
    .help-category-icon.red { background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%); }
    .help-category-icon.teal { background: linear-gradient(135deg, #0891b2 0%, #06b6d4 100%); }
    .help-category-icon.pink { background: linear-gradient(135deg, #db2777 0%, #ec4899 100%); }
    .help-category-icon.indigo { background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%); }
    
    .help-category-card h4 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: #1f2937;
    }
    
    .help-category-card p {
        color: #6b7280;
        font-size: 0.95rem;
        margin-bottom: 1rem;
        line-height: 1.6;
    }
    
    .help-category-topics {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .help-category-topics li {
        padding: 0.4rem 0;
        font-size: 0.9rem;
        color: #4b5563;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .help-category-topics li i {
        color: #10b981;
        font-size: 0.75rem;
    }
    
    .quick-links-section {
        background: #f8fafc;
        border-radius: 16px;
        padding: 2rem;
        margin-top: 2rem;
    }
    
    .quick-link-card {
        background: white;
        border-radius: 12px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: #333;
        transition: all 0.2s ease;
        border: 1px solid #e5e7eb;
    }
    
    .quick-link-card:hover {
        background: var(--primary, #004aad);
        color: white;
        transform: translateX(-5px);
    }
    
    .quick-link-card:hover i {
        color: white;
    }
    
    .quick-link-card i {
        font-size: 1.5rem;
        color: var(--primary, #004aad);
        width: 40px;
        text-align: center;
    }
    
    .quick-link-card span {
        font-weight: 600;
    }
    
    .video-placeholder {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border-radius: 16px;
        padding: 3rem;
        text-align: center;
        color: white;
    }
    
    .video-placeholder i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.8;
    }
    
    .help-stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }
    
    .help-stat {
        text-align: center;
    }
    
    .help-stat-number {
        font-size: 2rem;
        font-weight: 700;
        display: block;
    }
    
    .help-stat-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">مركز المساعدة</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item active">مركز المساعدة</li>
        </ol>
    </div>
</div>

<!-- Hero Section -->
<div class="help-hero">
    <h1><i class="feather-help-circle me-2"></i> مرحباً بك في مركز المساعدة</h1>
    <p>دليلك الشامل لاستخدام لوحة التحكم وتحقيق أقصى استفادة من منصتنا</p>
    
    <div class="help-search">
        <form asp-action="Search" method="get">
            <input type="text" name="query" placeholder="ابحث عن موضوع... مثال: إنشاء دورة، جلسة مباشرة، سحب الأرباح" />
            <i class="feather-search"></i>
        </form>
    </div>
    
    <div class="help-stats">
        <div class="help-stat">
            <span class="help-stat-number">7</span>
            <span class="help-stat-label">أقسام رئيسية</span>
        </div>
        <div class="help-stat">
            <span class="help-stat-number">50+</span>
            <span class="help-stat-label">موضوع</span>
        </div>
        <div class="help-stat">
            <span class="help-stat-number">∞</span>
            <span class="help-stat-label">دعم متواصل</span>
        </div>
    </div>
</div>

<!-- Main Categories -->
<div class="row g-4">
    <!-- Getting Started -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="GettingStarted" class="help-category-card">
            <div class="help-category-icon blue">
                <i class="feather-play-circle"></i>
            </div>
            <h4>دليل البدء السريع</h4>
            <p>تعرف على لوحة التحكم وأساسيات العمل كمدرس</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> جولة في لوحة التحكم</li>
                <li><i class="feather-check"></i> إعداد ملفك الشخصي</li>
                <li><i class="feather-check"></i> فهم الإحصائيات</li>
                <li><i class="feather-check"></i> أول خطواتك</li>
            </ul>
        </a>
    </div>
    
    <!-- Course Creation -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="CourseCreation" class="help-category-card">
            <div class="help-category-icon green">
                <i class="feather-book-open"></i>
            </div>
            <h4>إنشاء الدورات</h4>
            <p>دليل شامل لإنشاء دورات احترافية من البداية للنهاية</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> معالج الإنشاء (7 خطوات)</li>
                <li><i class="feather-check"></i> إنشاء الباقات والمسارات</li>
                <li><i class="feather-check"></i> التسعير الفعال</li>
                <li><i class="feather-check"></i> نشر وترويج الدورة</li>
            </ul>
        </a>
    </div>
    
    <!-- Content Management -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="ContentManagement" class="help-category-card">
            <div class="help-category-icon purple">
                <i class="feather-layers"></i>
            </div>
            <h4>إدارة المحتوى</h4>
            <p>تعلم كيفية بناء وتنظيم محتوى تعليمي متميز</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> الوحدات والدروس</li>
                <li><i class="feather-check"></i> الاختبارات وبنك الأسئلة</li>
                <li><i class="feather-check"></i> الواجبات والتكليفات</li>
                <li><i class="feather-check"></i> إدارة الملفات والوسائط</li>
            </ul>
        </a>
    </div>
    
    <!-- Live Sessions -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="LiveSessions" class="help-category-card">
            <div class="help-category-icon red">
                <i class="feather-video"></i>
            </div>
            <h4>الجلسات المباشرة والجدولة</h4>
            <p>إدارة البث المباشر وجدولة المحتوى</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> جدولة جلسة مباشرة</li>
                <li><i class="feather-check"></i> ربط Zoom/Meet</li>
                <li><i class="feather-check"></i> تتبع الحضور</li>
                <li><i class="feather-check"></i> جدولة إتاحة المحتوى</li>
            </ul>
        </a>
    </div>
    
    <!-- Earnings & Marketing -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="EarningsMarketing" class="help-category-card">
            <div class="help-category-icon orange">
                <i class="feather-dollar-sign"></i>
            </div>
            <h4>الأرباح والتسويق</h4>
            <p>كل ما تحتاج معرفته عن الأرباح والترويج</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> فهم نظام العمولات</li>
                <li><i class="feather-check"></i> سحب الأرباح</li>
                <li><i class="feather-check"></i> إنشاء كوبونات</li>
                <li><i class="feather-check"></i> التسويق بالعمولة</li>
            </ul>
        </a>
    </div>
    
    <!-- Student Management -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="StudentManagement" class="help-category-card">
            <div class="help-category-icon teal">
                <i class="feather-users"></i>
            </div>
            <h4>إدارة الطلاب</h4>
            <p>التفاعل مع طلابك وتتبع تقدمهم</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> متابعة تقدم الطلاب</li>
                <li><i class="feather-check"></i> تصحيح الواجبات</li>
                <li><i class="feather-check"></i> الرد على التقييمات</li>
                <li><i class="feather-check"></i> التواصل الفعال</li>
            </ul>
        </a>
    </div>
    
    <!-- Analytics -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="Analytics" class="help-category-card">
            <div class="help-category-icon indigo">
                <i class="feather-bar-chart-2"></i>
            </div>
            <h4>التحليلات والتقارير</h4>
            <p>فهم البيانات واتخاذ قرارات مبنية على الإحصائيات</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> قراءة لوحة التحليلات</li>
                <li><i class="feather-check"></i> تحليل أداء الدورات</li>
                <li><i class="feather-check"></i> تفاعل الطلاب</li>
                <li><i class="feather-check"></i> تصدير التقارير</li>
            </ul>
        </a>
    </div>
    
    <!-- FAQ -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="FAQ" class="help-category-card">
            <div class="help-category-icon pink">
                <i class="feather-message-circle"></i>
            </div>
            <h4>الأسئلة الشائعة</h4>
            <p>إجابات سريعة على الأسئلة المتكررة</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> مشاكل الرفع والفيديو</li>
                <li><i class="feather-check"></i> أسئلة المدفوعات</li>
                <li><i class="feather-check"></i> الحساب والأمان</li>
                <li><i class="feather-check"></i> حل المشكلات</li>
            </ul>
        </a>
    </div>
</div>

<!-- Quick Links Section -->
<div class="quick-links-section mt-5">
    <h4 class="mb-4"><i class="feather-zap text-warning me-2"></i> روابط سريعة</h4>
    <div class="row g-3">
        <div class="col-lg-3 col-md-6">
            <a asp-area="Instructor" asp-controller="Courses" asp-action="CreateWizard" class="quick-link-card">
                <i class="feather-plus-circle"></i>
                <span>إنشاء دورة جديدة</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Instructor" asp-controller="LiveClasses" asp-action="Create" class="quick-link-card">
                <i class="feather-video"></i>
                <span>جدولة جلسة مباشرة</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Instructor" asp-controller="WithdrawalRequests" asp-action="Create" class="quick-link-card">
                <i class="feather-credit-card"></i>
                <span>طلب سحب أرباح</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Instructor" asp-controller="Profile" asp-action="Edit" class="quick-link-card">
                <i class="feather-user"></i>
                <span>تعديل الملف الشخصي</span>
            </a>
        </div>
    </div>
</div>

<!-- Need More Help -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="feather-headphones text-primary" style="font-size: 3rem;"></i>
                <h4 class="mt-3">هل تحتاج مساعدة إضافية؟</h4>
                <p class="text-muted mb-4">فريق الدعم متاح لمساعدتك على مدار الساعة</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-area="Instructor" asp-controller="Messages" asp-action="Compose" class="btn btn-primary">
                        <i class="feather-mail me-2"></i>
                        راسل الدعم الفني
                    </a>
                    <a href="mailto:support@webuilder.com" class="btn btn-outline-primary">
                        <i class="feather-send me-2"></i>
                        support@webuilder.com
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.querySelector('.help-search input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                var query = this.value.trim();
                if (query) {
                    window.location.href = '@Url.Action("Search", "Help")' + '?query=' + encodeURIComponent(query);
                }
            }
        });
    </script>
}

