@{
    ViewData["Title"] = "دليل التحليلات";
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">التحليلات والتقارير</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">مركز المساعدة</a></li>
            <li class="breadcrumb-item active">التحليلات</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        @await Html.PartialAsync("_HelpSidebar", "Analytics")
    </div>
    
    <div class="col-lg-9">
        <!-- Hero -->
        <div class="help-content-hero">
            <div class="help-content-icon" style="background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);">
                <i class="feather-bar-chart-2"></i>
            </div>
            <div>
                <h1>التحليلات والتقارير</h1>
                <p>فهم البيانات واتخاذ قرارات مبنية على الإحصائيات لتحسين دوراتك.</p>
            </div>
        </div>
        
        <!-- Key Metrics -->
        <div class="help-section" id="key-metrics">
            <h3><i class="feather-activity text-primary me-2"></i> المقاييس الأساسية</h3>
            
            <p>فهم هذه المقاييس يساعدك على تحسين أداء دوراتك:</p>
            
            <div class="help-table-wrapper">
                <table class="help-table">
                    <thead>
                        <tr>
                            <th>المقياس</th>
                            <th>ما يعنيه</th>
                            <th>القيمة المثالية</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>معدل الإكمال</strong></td>
                            <td>نسبة الطلاب الذين أنهوا الدورة</td>
                            <td>أكثر من 30%</td>
                        </tr>
                        <tr>
                            <td><strong>متوسط التقييم</strong></td>
                            <td>تقييم الطلاب للدورة</td>
                            <td>4.0+ من 5</td>
                        </tr>
                        <tr>
                            <td><strong>معدل التسجيل</strong></td>
                            <td>عدد التسجيلات الجديدة</td>
                            <td>يعتمد على تسويقك</td>
                        </tr>
                        <tr>
                            <td><strong>معدل الاستمرار</strong></td>
                            <td>الطلاب النشطون بعد 30 يوم</td>
                            <td>أكثر من 50%</td>
                        </tr>
                        <tr>
                            <td><strong>وقت المشاهدة</strong></td>
                            <td>إجمالي وقت مشاهدة المحتوى</td>
                            <td>كلما زاد كان أفضل</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Analytics Sections -->
        <div class="help-section" id="analytics-sections">
            <h3><i class="feather-pie-chart text-primary me-2"></i> أقسام التحليلات</h3>
            
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-eye"></i></div>
                        <div>
                            <h6>نظرة عامة</h6>
                            <p>ملخص سريع لكل إحصائياتك</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-trending-up"></i></div>
                        <div>
                            <h6>أداء الدورات</h6>
                            <p>مقارنة أداء كل دورة</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon purple"><i class="feather-users"></i></div>
                        <div>
                            <h6>تفاعل الطلاب</h6>
                            <p>كيف يتفاعل الطلاب مع المحتوى</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Instructor" asp-controller="Analytics" asp-action="Overview" class="btn btn-primary mt-4">
                <i class="feather-bar-chart-2 me-2"></i>
                عرض التحليلات
            </a>
        </div>
        
        <!-- Understanding Charts -->
        <div class="help-section" id="charts">
            <h3><i class="feather-trending-up text-primary me-2"></i> قراءة الرسوم البيانية</h3>
            
            <h5>رسم التسجيلات:</h5>
            <p>يوضح عدد التسجيلات الجديدة عبر الزمن. ابحث عن:</p>
            <ul>
                <li><strong>الذروات:</strong> متى يكون الإقبال أكثر؟</li>
                <li><strong>الانخفاضات:</strong> هل هناك مشكلة تحتاج حل؟</li>
                <li><strong>الاتجاه العام:</strong> هل تنمو أم تتراجع؟</li>
            </ul>
            
            <h5 class="mt-4">رسم الإيرادات:</h5>
            <p>يتتبع أرباحك الشهرية. لاحظ:</p>
            <ul>
                <li><strong>النمو:</strong> هل الإيرادات تزداد؟</li>
                <li><strong>الموسمية:</strong> أشهر أفضل من أخرى؟</li>
            </ul>
        </div>
        
        <!-- Actionable Insights -->
        <div class="help-section" id="insights">
            <h3><i class="feather-lightbulb text-primary me-2"></i> رؤى قابلة للتنفيذ</h3>
            
            <div class="help-callout success">
                <i class="feather-check-circle"></i>
                <div>
                    <strong>استخدم البيانات لتحسين دوراتك:</strong>
                </div>
            </div>
            
            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h6 class="text-danger"><i class="feather-alert-circle me-2"></i> إذا كان معدل الإكمال منخفضاً:</h6>
                            <ul class="mb-0 small">
                                <li>راجع طول الدروس (قد تكون طويلة جداً)</li>
                                <li>تأكد من وضوح المحتوى</li>
                                <li>أضف اختبارات وتفاعلات</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h6 class="text-warning"><i class="feather-star me-2"></i> إذا كانت التقييمات منخفضة:</h6>
                            <ul class="mb-0 small">
                                <li>اقرأ الملاحظات بعناية</li>
                                <li>حسّن المحتوى المنتقد</li>
                                <li>تواصل مع الطلاب المستائين</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Export Reports -->
        <div class="help-section" id="export">
            <h3><i class="feather-download text-primary me-2"></i> تصدير التقارير</h3>
            
            <p>يمكنك تصدير بياناتك بعدة صيغ:</p>
            
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-file-text"></i></div>
                        <div>
                            <h6>CSV</h6>
                            <p>للتحليل في Excel</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-grid"></i></div>
                        <div>
                            <h6>Excel</h6>
                            <p>تنسيق جاهز للاستخدام</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon red"><i class="feather-file"></i></div>
                        <div>
                            <h6>PDF</h6>
                            <p>تقرير مرئي للطباعة</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Navigation -->
        <div class="help-navigation">
            <a asp-action="StudentManagement" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                السابق: إدارة الطلاب
            </a>
            <a asp-action="FAQ" class="btn btn-primary">
                التالي: الأسئلة الشائعة
                <i class="feather-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</div>

