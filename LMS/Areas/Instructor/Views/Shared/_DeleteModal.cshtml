<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="false" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@Html.T("تأكيد الحذف", "Confirm Delete")</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Html.T("إغلاق", "Close")"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <div class="avatar-text avatar-xl bg-soft-danger text-danger mb-3">
                        <i class="feather-trash-2"></i>
                    </div>
                    <h5 class="fw-bold mb-2">@Html.T("هل أنت متأكد؟", "Are you sure?")</h5>
                    <p class="text-muted mb-0" id="deleteMessage" data-default-msg="@Html.T("هذا الإجراء لا يمكن التراجع عنه. هل تريد المتابعة؟", "This action cannot be undone. Do you want to continue?")">
                        @Html.T("هذا الإجراء لا يمكن التراجع عنه. هل تريد المتابعة؟", "This action cannot be undone. Do you want to continue?")
                    </p>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    <i class="feather-x me-2"></i>
                    @Html.T("إلغاء", "Cancel")
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-trash-2 me-2"></i>
                        @Html.T("حذف نهائياً", "Delete permanently")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(url, message) {
        var msgEl = document.getElementById('deleteMessage');
        var defaultMsg = msgEl.getAttribute('data-default-msg') || msgEl.textContent;
        msgEl.textContent = message || defaultMsg;
        document.getElementById('deleteForm').setAttribute('action', url);
        var modalEl = document.getElementById('deleteModal');
        var modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
        modal.show();
    }
</script>

