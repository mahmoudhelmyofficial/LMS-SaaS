@* Quick Actions Panel - Instructor Area *@
<div class="quick-actions-panel mb-3">
    <div class="quick-actions-header px-3 py-2">
        <small class="text-muted fw-semibold">@Html.T("إجراءات سريعة", "Quick Actions")</small>
    </div>
    <div class="quick-actions-grid px-3 pb-3">
        <div class="row g-2">
            <div class="col-6">
                <a asp-area="Instructor" asp-controller="Courses" asp-action="CreateWizard" 
                   class="quick-action-btn btn btn-soft-primary btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-plus-circle mb-1"></i>
                    <small>@Html.T("دورة جديدة", "New Course")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Instructor" asp-controller="LiveClasses" asp-action="Create" 
                   class="quick-action-btn btn btn-soft-success btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-video mb-1"></i>
                    <small>@Html.T("جلسة مباشرة", "Live Session")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Instructor" asp-controller="Assignments" asp-action="Submissions" 
                   class="quick-action-btn btn btn-soft-warning btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-inbox mb-1"></i>
                    <small>@Html.T("مراجعة الإجابات", "Review Submissions")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Instructor" asp-controller="Earnings" asp-action="Index" 
                   class="quick-action-btn btn btn-soft-info btn-sm w-100 d-flex flex-column align-items-center py-2">
                    @{ ViewBag.CurrencyIconClass = "mb-1"; ViewBag.CurrencyIconStyle = "font-weight: bold; margin-bottom: 4px;"; }
                    @await Html.PartialAsync("_CurrencyIcon")
                    <small>@Html.T("الأرباح", "Earnings")</small>
                </a>
            </div>
        </div>
    </div>
</div>
