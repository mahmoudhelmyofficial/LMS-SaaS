@* Currency Icon Partial View - Displays dynamic currency symbol *@
@* Enhanced with better flexibility and accessibility *@
@{
    var currencySymbol = ViewBag.DefaultCurrencySymbol as string;
    var currencyCode = ViewBag.DefaultCurrencyCode as string;
    var iconStyle = ViewBag.CurrencyIconStyle as string ?? "";
    var iconClass = ViewBag.CurrencyIconClass as string ?? "";
    var showCode = ViewBag.ShowCurrencyCode as bool? ?? false;
    var ariaLabel = ViewBag.CurrencyAriaLabel as string ?? Html.T("رمز العملة", "Currency symbol");
}

@if (!string.IsNullOrEmpty(currencySymbol))
{
    <span class="currency-symbol" 
          style="font-weight: bold; @iconStyle" 
          data-currency-code="@currencyCode"
          aria-label="@ariaLabel"
          title="@(showCode && !string.IsNullOrEmpty(currencyCode) ? $"{currencySymbol} ({currencyCode})" : currencySymbol)">
        @currencySymbol
        @if (showCode && !string.IsNullOrEmpty(currencyCode))
        {
            <small class="currency-code ms-1" style="font-size: 0.7em; opacity: 0.7;">(@currencyCode)</small>
        }
    </span>
}
else
{
    <i class="feather-dollar-sign @iconClass" aria-label="@ariaLabel" title="@Html.T("العملة", "Currency")"></i>
}

