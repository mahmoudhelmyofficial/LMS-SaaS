@model dynamic

@{
    var title = ViewData["Title"]?.ToString() ?? Html.T("لوحة التحكم", "Dashboard");
    var subtitle = ViewData["Subtitle"]?.ToString();
    var showBreadcrumb = ViewData["ShowBreadcrumb"] == null || (bool)ViewData["ShowBreadcrumb"];
    var actionButtons = ViewData["ActionButtons"];
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@title</h5>
            @if (!string.IsNullOrEmpty(subtitle))
            {
                <p class="fs-12 fw-medium text-muted mb-0">@subtitle</p>
            }
        </div>
        @if (showBreadcrumb)
        {
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
                @if (ViewData["BreadcrumbItems"] != null)
                {
                    var items = ViewData["BreadcrumbItems"] as List<dynamic>;
                    if (items != null)
                    {
                        foreach (var item in items)
                        {
                            if (item.IsActive)
                            {
                                <li class="breadcrumb-item active">@item.Text</li>
                            }
                            else
                            {
                                <li class="breadcrumb-item"><a href="@item.Url">@item.Text</a></li>
                            }
                        }
                    }
                }
            </ul>
        }
    </div>
    <div class="page-header-right ms-auto">
        <div class="page-header-right-items">
            <div class="d-flex align-items-center gap-2 page-header-right-items-wrapper">
                @if (actionButtons != null)
                {
                    @actionButtons
                }
            </div>
        </div>
    </div>
</div>

