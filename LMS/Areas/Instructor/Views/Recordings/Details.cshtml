@model LMS.Areas.Instructor.ViewModels.RecordingDisplayViewModel

@{
    ViewData["Title"] = Html.T("تفاصيل التسجيل", "Recording Details");
    ViewData["Subtitle"] = Model.Title;
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>" + Html.T("العودة للقائمة", "Back to List") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <!-- Main -->
        <div class="col-lg-8">
            <!-- Video Preview -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معاينة التسجيل", "Recording Preview")</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        @if (Model.StorageType == LMS.Domain.Enums.RecordingStorageType.ExternalUrl)
                        {
                            <div class="ratio ratio-16x9 mb-3">
                                <iframe src="@Model.VideoUrl" allowfullscreen></iframe>
                            </div>
                        }
                        else
                        {
                            <div class="ratio ratio-16x9 mb-3">
                                <video controls>
                                    <source src="@Model.VideoUrl" type="video/mp4">
                                    @Html.T("متصفحك لا يدعم عنصر الفيديو.", "Your browser does not support the video element.")
                                </video>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center p-5 bg-soft-secondary rounded">
                            <i class="feather-film" style="font-size: 3rem;"></i>
                            <p class="mt-3 text-muted">@Html.T("التسجيل غير متاح للمعاينة حالياً", "Recording is not available for preview currently")</p>
                        </div>
                    }

                    <h5 class="fw-bold mb-2">@Model.Title</h5>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted">@Model.Description</p>
                    }
                </div>
            </div>

            <!-- Recording Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفاصيل التسجيل", "Recording Details")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-primary rounded">
                                <div class="avatar-text bg-primary text-white"><i class="feather-video"></i></div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("الجلسة", "Session")</div>
                                    <div class="fw-bold">
                                        <a href="@Url.Action("Details", "LiveClasses", new { id = Model.LiveClassId })" class="text-dark">@Model.LiveClassTitle</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-info rounded">
                                <div class="avatar-text bg-info text-white"><i class="feather-clock"></i></div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("المدة", "Duration")</div>
                                    <div class="fw-bold">
                                        @if (Model.DurationSeconds > 0)
                                        {
                                            @TimeSpan.FromSeconds(Model.DurationSeconds).ToString(@"hh\:mm\:ss")
                                        }
                                        else
                                        {
                                            <span>@Html.T("غير محدد", "Not specified")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-success rounded">
                                <div class="avatar-text bg-success text-white"><i class="feather-hard-drive"></i></div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("حجم الملف", "File Size")</div>
                                    <div class="fw-bold">
                                        @if (Model.FileSize > 0)
                                        {
                                            @((Model.FileSize / (1024.0 * 1024.0)).ToString("F1")) <span>MB</span>
                                        }
                                        else
                                        {
                                            <span>@Html.T("غير محدد", "Not specified")</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-warning rounded">
                                <div class="avatar-text bg-warning text-white"><i class="feather-monitor"></i></div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("الدقة", "Resolution")</div>
                                    <div class="fw-bold">@(Model.Resolution ?? Html.T("غير محدد", "Not specified"))</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الإجراءات", "Actions")</h6>
                </div>
                <div class="card-body">
                    @if (Model.IsPublished)
                    {
                        <form method="post" asp-action="Unpublish" asp-route-id="@Model.Id" class="mb-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="feather-eye-off me-2"></i>@Html.T("إلغاء النشر", "Unpublish")
                            </button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="Publish" asp-route-id="@Model.Id" class="mb-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="feather-globe me-2"></i>@Html.T("نشر التسجيل", "Publish Recording")
                            </button>
                        </form>
                    }

                    <form method="post" asp-action="Delete" asp-route-id="@Model.Id" onsubmit="return confirm('@Html.T("هل أنت متأكد من حذف هذا التسجيل؟", "Are you sure you want to delete this recording?")')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100">
                            <i class="feather-trash-2 me-2"></i>@Html.T("حذف التسجيل", "Delete Recording")
                        </button>
                    </form>
                </div>
            </div>

            <!-- Stats -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الإحصائيات", "Statistics")</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("حالة النشر", "Publish Status")</span>
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("منشور", "Published")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-secondary text-secondary">@Html.T("غير منشور", "Unpublished")</span>
                            }
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("حالة المعالجة", "Processing Status")</span>
                            <span>
                                @switch (Model.ProcessingStatus)
                                {
                                    case "Completed":
                                        <span class="badge bg-soft-success text-success">@Html.T("مكتمل", "Completed")</span>
                                        break;
                                    case "Processing":
                                        <span class="badge bg-soft-warning text-warning">@Html.T("قيد المعالجة", "Processing")</span>
                                        break;
                                    default:
                                        <span class="badge bg-soft-info text-info">@Model.ProcessingStatus</span>
                                        break;
                                }
                            </span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("المشاهدات", "Views")</span>
                            <span class="fw-bold">@Model.ViewCount</span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("التحميلات", "Downloads")</span>
                            <span class="fw-bold">@Model.DownloadCount</span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("نوع التخزين", "Storage Type")</span>
                            <span>
                                @switch (Model.StorageType)
                                {
                                    case LMS.Domain.Enums.RecordingStorageType.ExternalUrl:
                                        <span>@Html.T("رابط خارجي", "External Link")</span>
                                        break;
                                    case LMS.Domain.Enums.RecordingStorageType.Local:
                                        <span>@Html.T("تخزين محلي", "Local Storage")</span>
                                        break;
                                    case LMS.Domain.Enums.RecordingStorageType.AzureBlob:
                                        <span>@Html.T("Azure Blob", "Azure Blob")</span>
                                        break;
                                }
                            </span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2">
                            <span class="text-muted">@Html.T("تاريخ الإضافة", "Date Added")</span>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
