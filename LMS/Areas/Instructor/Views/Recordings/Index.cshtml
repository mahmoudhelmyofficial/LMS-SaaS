@model IEnumerable<LMS.Areas.Instructor.ViewModels.RecordingDisplayViewModel>

@{
    ViewData["Title"] = Html.T("إدارة التسجيلات", "Recordings Management");
    ViewData["Subtitle"] = Html.T("عرض وإدارة تسجيلات الجلسات المباشرة", "View and manage live session recordings");
}

@{
    var uploadUrl = Url.Action("Upload");
    var actionButtonsHtml = "<a href='" + uploadUrl + "' class='btn btn-primary'>" +
        "<i class='feather-upload me-2'></i>" +
        Html.T("رفع تسجيل جديد", "Upload New Recording") +
        "</a>";
}
@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw(actionButtonsHtml) }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي التسجيلات", "Total Recordings") },
                { "Value", Model.Count() },
                { "Icon", "film" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("تسجيلات منشورة", "Published Recordings") },
                { "Value", Model.Count(r => r.IsPublished) },
                { "Icon", "check-circle" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي المشاهدات", "Total Views") },
                { "Value", Model.Sum(r => r.ViewCount) },
                { "Icon", "eye" },
                { "Color", "info" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي التحميلات", "Total Downloads") },
                { "Value", Model.Sum(r => r.DownloadCount) },
                { "Icon", "download" },
                { "Color", "warning" }
            })
        </div>
    </div>

    <!-- Recordings Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var recording in Model)
            {
                <div class="col-12 col-md-6 col-xl-4 mb-4">
                    <div class="card stretch stretch-full h-100">
                        <div class="card-img-top bg-soft-primary d-flex align-items-center justify-content-center position-relative" style="height: 160px;">
                            @if (!string.IsNullOrEmpty(recording.ThumbnailUrl))
                            {
                                <img src="@recording.ThumbnailUrl" alt="@recording.Title" class="w-100 h-100" style="object-fit: cover;">
                            }
                            else
                            {
                                <i class="feather-film" style="font-size: 3rem; color: var(--bs-primary);"></i>
                            }
                            @if (recording.DurationSeconds > 0)
                            {
                                <span class="position-absolute bottom-0 end-0 m-2 badge bg-dark">
                                    @TimeSpan.FromSeconds(recording.DurationSeconds).ToString(@"hh\:mm\:ss")
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h6 class="card-title fw-bold mb-0">
                                    <a href="@Url.Action("Details", new { id = recording.Id })" class="text-dark">@recording.Title</a>
                                </h6>
                                @if (recording.IsPublished)
                                {
                                    <span class="badge bg-soft-success text-success">@Html.T("منشور", "Published")</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("غير منشور", "Unpublished")</span>
                                }
                            </div>

                            <p class="fs-12 text-muted mb-2">
                                <i class="feather-video me-1"></i>@recording.LiveClassTitle
                            </p>

                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="fs-11 text-muted">
                                    <i class="feather-eye me-1"></i>@recording.ViewCount @Html.T("مشاهدة", "views")
                                </span>
                                <span class="fs-11 text-muted">
                                    <i class="feather-download me-1"></i>@recording.DownloadCount @Html.T("تحميل", "downloads")
                                </span>
                                @if (recording.FileSize > 0)
                                {
                                    <span class="fs-11 text-muted">
                                        <i class="feather-hard-drive me-1"></i>@((recording.FileSize / (1024.0 * 1024.0)).ToString("F1")) MB
                                    </span>
                                }
                            </div>

                            <div class="fs-12 text-muted">
                                @switch (recording.ProcessingStatus)
                                {
                                    case "Completed":
                                        <span class="badge bg-soft-success text-success"><i class="feather-check me-1"></i>@Html.T("جاهز", "Ready")</span>
                                        break;
                                    case "Processing":
                                        <span class="badge bg-soft-warning text-warning"><i class="feather-loader me-1"></i>@Html.T("قيد المعالجة", "Processing")</span>
                                        break;
                                    case "Failed":
                                        <span class="badge bg-soft-danger text-danger"><i class="feather-x me-1"></i>@Html.T("فشل", "Failed")</span>
                                        break;
                                    default:
                                        <span class="badge bg-soft-info text-info"><i class="feather-clock me-1"></i>@Html.T("بانتظار المعالجة", "Pending Processing")</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                            <span class="fs-12 text-muted">@recording.CreatedAt.ToString("dd/MM/yyyy")</span>
                            <div class="hstack gap-2">
                                @if (recording.IsPublished)
                                {
                                    <form method="post" asp-action="Unpublish" asp-route-id="@recording.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="avatar-text avatar-md bg-soft-warning text-warning" data-bs-toggle="tooltip" title="@Html.T("إلغاء النشر", "Unpublish")">
                                            <i class="feather-eye-off"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Publish" asp-route-id="@recording.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="avatar-text avatar-md bg-soft-success text-success" data-bs-toggle="tooltip" title="@Html.T("نشر", "Publish")">
                                            <i class="feather-globe"></i>
                                        </button>
                                    </form>
                                }
                                <a href="@Url.Action("Details", new { id = recording.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                    <i class="feather-eye"></i>
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@recording.Id" class="d-inline" onsubmit="return confirm('@Html.T("هل أنت متأكد من حذف هذا التسجيل؟", "Are you sure you want to delete this recording?")')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="avatar-text avatar-md bg-soft-danger text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                        <i class="feather-trash-2"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body p-5 text-center">
                <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                    <i class="feather-film"></i>
                </div>
                <h5 class="fw-bold mb-2">@Html.T("لا توجد تسجيلات", "No Recordings")</h5>
                <p class="text-muted mb-4">@Html.T("ابدأ برفع تسجيل لإحدى جلساتك المكتملة", "Start by uploading a recording for one of your completed sessions")</p>
                <a href="@Url.Action("Upload")" class="btn btn-primary">
                    <i class="feather-upload me-2"></i>
                    @Html.T("رفع تسجيل جديد", "Upload New Recording")
                </a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) { return new bootstrap.Tooltip(el); });
        });
    </script>
}
