@model LMS.Domain.Entities.LiveSessions.LiveClass

@{
    ViewData["Title"] = Html.T("تفاصيل البث المباشر", "Live Session Details");
    ViewData["Subtitle"] = Model.Title;
    var attendance = ViewBag.Attendance as List<LMS.Domain.Entities.LiveSessions.LiveClassAttendance> ?? new List<LMS.Domain.Entities.LiveSessions.LiveClassAttendance>();
}

<div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1">@ViewData["Title"]</h4>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div class="d-flex gap-2">
        @if (Model.Status == LMS.Domain.Enums.LiveClassStatus.Scheduled)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">
                <i class="feather-edit me-2"></i>
                @Html.T("تعديل", "Edit")
            </a>
        }
        <a asp-action="Index" class="btn btn-light">
            <i class="feather-arrow-right me-2"></i>
            @Html.T("العودة للقائمة", "Back to List")
        </a>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <!-- Main Details -->
        <div class="col-lg-8">
            <!-- Session Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الجلسة", "Session Information")</h5>
                    <div class="card-header-action">
                        @switch (Model.Status)
                        {
                            case LMS.Domain.Enums.LiveClassStatus.Scheduled:
                                <span class="badge bg-soft-warning text-warning fs-12">
                                    <i class="feather-clock me-1"></i>@Html.T("مجدولة", "Scheduled")
                                </span>
                                break;
                            case LMS.Domain.Enums.LiveClassStatus.Live:
                                <span class="badge bg-soft-danger text-danger fs-12">
                                    <i class="feather-radio me-1"></i>@Html.T("مباشرة الآن", "Live Now")
                                </span>
                                break;
                            case LMS.Domain.Enums.LiveClassStatus.Completed:
                                <span class="badge bg-soft-success text-success fs-12">
                                    <i class="feather-check-circle me-1"></i>@Html.T("مكتملة", "Completed")
                                </span>
                                break;
                            case LMS.Domain.Enums.LiveClassStatus.Cancelled:
                                <span class="badge bg-soft-secondary text-secondary fs-12">
                                    <i class="feather-x-circle me-1"></i>@Html.T("ملغية", "Cancelled")
                                </span>
                                break;
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <h4 class="fw-bold mb-3">@Model.Title</h4>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted">@Model.Description</p>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Agenda))
                        {
                            <div class="col-12">
                                <div class="alert alert-info border-0">
                                    <h6 class="fw-bold mb-2">
                                        <i class="feather-list me-2"></i>@Html.T("جدول الأعمال", "Agenda")
                                    </h6>
                                    <div class="text-muted">@Html.Raw(Model.Agenda.Replace("\n", "<br/>"))</div>
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-primary rounded">
                                <div class="avatar-text bg-primary text-white">
                                    <i class="feather-calendar"></i>
                                </div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("تاريخ البدء", "Start Date")</div>
                                    <div class="fw-bold">@Model.ScheduledStartTime.ToLocalTime().ToString("dd MMMM yyyy")</div>
                                    <div class="fs-13 text-muted">@Model.ScheduledStartTime.ToLocalTime().ToString("hh:mm tt")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-success rounded">
                                <div class="avatar-text bg-success text-white">
                                    <i class="feather-clock"></i>
                                </div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("تاريخ الانتهاء", "End Date")</div>
                                    <div class="fw-bold">@Model.ScheduledEndTime.ToLocalTime().ToString("dd MMMM yyyy")</div>
                                    <div class="fs-13 text-muted">@Model.ScheduledEndTime.ToLocalTime().ToString("hh:mm tt")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-info rounded">
                                <div class="avatar-text bg-info text-white">
                                    <i class="feather-monitor"></i>
                                </div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("المنصة", "Platform")</div>
                                    <div class="fw-bold">@Model.Platform</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex align-items-center gap-3 p-3 bg-soft-warning rounded">
                                <div class="avatar-text bg-warning text-white">
                                    <i class="feather-users"></i>
                                </div>
                                <div>
                                    <div class="text-muted fs-12">@Html.T("الحد الأقصى للمشاركين", "Max Participants")</div>
                                    <div class="fw-bold">@(Model.MaxParticipants?.ToString() ?? Html.T("غير محدود", "Unlimited"))</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Meeting Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الاجتماع", "Meeting Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">@Html.T("رابط الاجتماع", "Meeting URL")</label>
                            <div class="input-group">
                                <input type="text" class="form-control" value="@Model.MeetingUrl" id="meetingUrl" readonly>
                                <button class="btn btn-primary" type="button" onclick="copyMeetingUrl()">
                                    <i class="feather-copy"></i>
                                </button>
                                <a href="@Model.MeetingUrl" target="_blank" class="btn btn-success">
                                    <i class="feather-external-link me-2"></i>@Html.T("فتح", "Open")
                                </a>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.MeetingId))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.T("معرف الاجتماع", "Meeting ID")</label>
                                <input type="text" class="form-control" value="@Model.MeetingId" readonly>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Password))
                        {
                            <div class="col-md-6">
                                <label class="form-label fw-bold">@Html.T("كلمة المرور", "Password")</label>
                                <div class="input-group">
                                    <input type="password" class="form-control" value="@Model.Password" id="password" readonly>
                                    <button class="btn btn-light" type="button" onclick="togglePassword()">
                                        <i class="feather-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Attendance -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحضور", "Attendance") (@attendance.Count)</h5>
                </div>
                <div class="card-body p-0">
                    @if (attendance.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("الطالب", "Student")</th>
                                        <th>@Html.T("وقت الانضمام", "Join Time")</th>
                                        <th>@Html.T("وقت المغادرة", "Leave Time")</th>
                                        <th>@Html.T("المدة", "Duration")</th>
                                        <th>@Html.T("الحالة", "Status")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var att in attendance)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="avatar-text">@att.Student?.FirstName?.Substring(0, 1)</div>
                                                    <div>
                                                        <div class="fw-medium">@att.Student?.FullName</div>
                                                        <div class="fs-12 text-muted">@att.Student?.Email</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(att.JoinedAt?.ToLocalTime().ToString("hh:mm tt") ?? "-")</td>
                                            <td>@(att.LeftAt?.ToLocalTime().ToString("hh:mm tt") ?? "-")</td>
                                            <td>
                                                <span class="badge bg-soft-info text-info">@att.DurationMinutes @Html.T("دقيقة", "min")</span>
                                            </td>
                                            <td>
                                                @if (att.IsPresent)
                                                {
                                                    <span class="badge bg-soft-success text-success">@Html.T("حاضر", "Present")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("غائب", "Absent")</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <i class="feather-users text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3">@Html.T("لا يوجد حضور مسجل حتى الآن", "No attendance recorded yet")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions -->
            @if (Model.Status == LMS.Domain.Enums.LiveClassStatus.Scheduled)
            {
                var canStart = Math.Abs((Model.ScheduledStartTime - DateTime.UtcNow).TotalMinutes) <= 15;
                
                <div class="card mb-4">
                    <div class="card-body">
                        @if (canStart)
                        {
                            <form method="post" asp-action="Start" asp-route-id="@Model.Id">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100 mb-3">
                                    <i class="feather-play-circle me-2"></i>
                                    @Html.T("بدء البث المباشر", "Start Live Session")
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info border-0 mb-3">
                                <i class="feather-info me-2"></i>
                                @Html.T("يمكنك بدء البث قبل 15 دقيقة من الموعد المجدول", "You can start the stream 15 minutes before the scheduled time")
                            </div>
                        }
                        
                        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary w-100 mb-3">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل الجلسة", "Edit Session")
                        </a>
                    </div>
                </div>
            }
            else if (Model.Status == LMS.Domain.Enums.LiveClassStatus.Live)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <a href="@Model.MeetingUrl" target="_blank" class="btn btn-danger w-100 mb-3">
                            <i class="feather-radio me-1"></i>
                            @Html.T("الانضمام للبث المباشر", "Join Live Session")
                        </a>
                        
                        <form method="post" asp-action="End" asp-route-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="feather-stop-circle me-2"></i>
                                @Html.T("إنهاء البث", "End Session")
                            </button>
                        </form>
                    </div>
                </div>
            }

            <!-- Pricing Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title">
                        <i class="feather-dollar-sign me-2 text-success"></i>
                        @Html.T("التسعير", "Pricing")
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("نوع التسعير", "Pricing Type")</span>
                            <span>
                                @switch (Model.PricingType)
                                {
                                    case LMS.Domain.Enums.LiveSessionPricingType.Free:
                                        <span class="badge bg-soft-success text-success">@Html.T("مجانية", "Free")</span>
                                        break;
                                    case LMS.Domain.Enums.LiveSessionPricingType.Paid:
                                        <span class="badge bg-soft-primary text-primary">@Html.T("مدفوعة", "Paid")</span>
                                        break;
                                    case LMS.Domain.Enums.LiveSessionPricingType.SubscriptionOnly:
                                        <span class="badge bg-soft-info text-info">@Html.T("اشتراك فقط", "Subscription Only")</span>
                                        break;
                                }
                            </span>
                        </li>
                        @if (Model.PricingType == LMS.Domain.Enums.LiveSessionPricingType.Paid)
                        {
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span class="text-muted">@Html.T("السعر", "Price")</span>
                                <span class="fw-bold text-success">@Model.Price.ToString("N0") @Model.PriceCurrency</span>
                            </li>
                        }
                        <li class="d-flex justify-content-between align-items-center py-2">
                            <span class="text-muted">@Html.T("عدد المشتريات", "Purchases")</span>
                            <span class="fw-bold">@(ViewBag.PurchaseCount ?? 0)</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("إحصائيات سريعة", "Quick Stats")</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("المدة المجدولة", "Scheduled Duration")</span>
                            <span class="fw-bold">@Model.DurationMinutes @Html.T("دقيقة", "min")</span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("إعادة المشاهدة", "Replay")</span>
                            <span class="fw-bold">@(Model.AllowReplay ? Html.T("متاحة", "Available") : Html.T("غير متاحة", "Not Available"))</span>
                        </li>
                        <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <span class="text-muted">@Html.T("إرسال تذكير", "Send Reminder")</span>
                            <span class="fw-bold">@(Model.SendReminder ? Html.T("نعم", "Yes") : Html.T("لا", "No"))</span>
                        </li>
                        @if (Model.SendReminder)
                        {
                            <li class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <span class="text-muted">@Html.T("التذكير قبل", "Reminder Before")</span>
                                <span class="fw-bold">@Model.ReminderMinutesBefore @Html.T("دقيقة", "min")</span>
                            </li>
                        }
                        <li class="d-flex justify-content-between align-items-center py-2">
                            <span class="text-muted">@Html.T("مجاني للجميع", "Free for All")</span>
                            <span class="fw-bold">@(Model.IsFreeForAll ? Html.T("نعم", "Yes") : Html.T("لا", "No"))</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Course Info -->
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("معلومات الدورة", "Course Information")</h6>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mb-2">@Model.Course?.Title</h6>
                    <div class="text-muted fs-13">@Model.Course?.Description</div>
                    <a href="@Url.Action("Details", "Courses", new { id = Model.CourseId })" class="btn btn-sm btn-light w-100 mt-3">
                        <i class="feather-book me-2"></i>
                        @Html.T("عرض الدورة", "View Course")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyMeetingUrl() {
            var copyText = document.getElementById("meetingUrl");
            copyText.select();
            copyText.setSelectionRange(0, 99999);
            navigator.clipboard.writeText(copyText.value);
            alert('@Html.T("تم نسخ رابط الاجتماع!", "Meeting link copied!")');
        }

        function togglePassword() {
            var passwordInput = document.getElementById("password");
            var toggleIcon = document.getElementById("toggleIcon");
            
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("feather-eye");
                toggleIcon.classList.add("feather-eye-off");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("feather-eye-off");
                toggleIcon.classList.add("feather-eye");
            }
        }
    </script>
}
