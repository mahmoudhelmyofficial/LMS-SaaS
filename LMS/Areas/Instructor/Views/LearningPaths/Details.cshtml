@model LMS.Domain.Entities.Learning.LearningPath

@{
    ViewData["Title"] = Html.T("تفاصيل مسار التعلم", "Learning Path Details");
    ViewData["Subtitle"] = Model.Name;
    var editUrl = Url.Action("Edit", new { id = Model.Id });
    var statisticsUrl = Url.Action("Statistics", new { id = Model.Id });
    var indexUrl = Url.Action("Index");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw($@"
        <a href='{editUrl}' class='btn btn-primary'>
            <i class='feather-edit me-2'></i>
            تعديل
        </a>
        <a href='{statisticsUrl}' class='btn btn-light'>
            <i class='feather-bar-chart-2 me-2'></i>
            الإحصائيات
        </a>
        <a href='{indexUrl}' class='btn btn-light'>
            <i class='feather-arrow-right me-2'></i>
            العودة
        </a>
    ") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-start gap-3 mb-4">
                        @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                        {
                            <div class="avatar-image avatar-xxl">
                                <img src="@Model.ThumbnailUrl" alt="@Model.Name" class="img-fluid rounded">
                            </div>
                        }
                        <div>
                            <h3 class="fw-bold mb-2">@Model.Name</h3>
                            <p class="text-muted mb-3">@Model.ShortDescription</p>
                            <div class="d-flex flex-wrap gap-2">
                                @if (Model.IsPublished)
                                {
                                    <span class="badge bg-soft-success text-success">منشور</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-warning text-warning">مسودة</span>
                                }
                                <span class="badge bg-soft-primary text-primary">@Model.CoursesCount دورة</span>
                                <span class="badge bg-soft-info text-info">@Model.EstimatedHours ساعة</span>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3">الوصف</h6>
                            <p style="white-space: pre-wrap;">@Model.Description</p>
                        </div>
                    }

                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">الدورات المضمنة (@Model.CoursesCount)</h6>
                        @if (Model.Courses != null && Model.Courses.Any())
                        {
                            <div class="list-group">
                                @foreach (var pathCourse in Model.Courses.OrderBy(c => c.OrderIndex))
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex align-items-center gap-3">
                                            <span class="badge bg-dark">@(pathCourse.OrderIndex + 1)</span>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">@pathCourse.Course?.Title</h6>
                                                <p class="text-muted fs-12 mb-0">@pathCourse.Course?.ShortDescription</p>
                                            </div>
                                            <a href="@Url.Action("Details", "Courses", new { id = pathCourse.CourseId })" class="btn btn-sm btn-light">
                                                عرض
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("معلومات عامة", "General information")</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="fs-13">السعر</span>
                        <span class="fw-bold">@(Model.IsFree ? "مجاني" : (Model.DiscountedPrice.HasValue ? string.Format("{0:C}", Model.DiscountedPrice.Value) : string.Format("{0:C}", Model.Price)))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="fs-13">المسجلين</span>
                        <span class="fw-bold">@Model.EnrollmentsCount</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                        <span class="fs-13">المستوى</span>
                        <span class="badge bg-soft-info text-info">@Model.Level</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="fs-13">الترتيب</span>
                        <span class="badge bg-soft-dark text-dark">@Model.DisplayOrder</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

