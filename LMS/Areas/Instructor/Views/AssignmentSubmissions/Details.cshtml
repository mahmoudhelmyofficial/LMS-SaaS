@model LMS.Domain.Entities.Assessments.AssignmentSubmission

@{
    ViewData["Title"] = Html.T("تفاصيل التسليم", "Submission Details");
    ViewData["Subtitle"] = $"مراجعة تسليم الطالب: {Model.Enrollment?.Student?.FullName}";
    
    var gradePercent = Model.Grade.HasValue && Model.Assignment.MaxPoints > 0
        ? (double)Model.Grade.Value / Model.Assignment.MaxPoints * 100
        : 0;
    var isPassing = gradePercent >= Model.Assignment.PassingScore;
}

<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
        </div>
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">@Html.T("التسليمات", "Submissions")</a></li>
            <li class="breadcrumb-item active">@Html.T("التفاصيل", "Details")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <div class="d-flex align-items-center gap-2">
            @if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Submitted || Model.Status == LMS.Domain.Enums.AssignmentStatus.Late)
            {
                <a href="@Url.Action("Grade", new { id = Model.Id })" class="btn btn-primary">
                    <i class="feather-edit-3 me-2"></i>تقييم
                </a>
            }
            <a href="@Url.Action("Index")" class="btn btn-light">
                <i class="feather-arrow-right me-2"></i>
                @Html.T("العودة للقائمة", "Back to list")
            </a>
        </div>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Status Alert -->
    @if (Model.IsLate)
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center">
                <i class="feather-alert-triangle fs-4 me-3"></i>
                <div>
                    <h6 class="mb-1">@Html.T("تسليم متأخر", "Late submission")</h6>
                    <p class="mb-0">@Html.T("تم تسليم هذا التكليف بعد الموعد النهائي بـ", "This assignment was submitted") @((Model.SubmittedAt - Model.Assignment.DueDate.Value).Days) @Html.T("يوم.", "day(s) after the deadline.")</p>
                </div>
            </div>
        </div>
    }

    @if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Resubmit)
    {
        <div class="alert alert-info mb-4">
            <div class="d-flex align-items-center">
                <i class="feather-repeat fs-4 me-3"></i>
                <div>
                    <h6 class="mb-1">@Html.T("طلب إعادة تسليم", "Resubmission requested")</h6>
                    <p class="mb-0">@Html.T("تم طلب إعادة تسليم هذا التكليف من الطالب.", "The student has been asked to resubmit this assignment.")</p>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Student Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-user me-2 text-primary"></i>
                        @Html.T("معلومات الطالب", "Student information")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                    <i class="feather-user"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-1">@Model.Enrollment?.Student?.FullName</h5>
                                    <p class="text-muted mb-1">
                                        <i class="feather-mail me-2"></i>
                                        @Model.Enrollment?.Student?.Email
                                    </p>
                                    <p class="text-muted mb-0">
                                        <i class="feather-phone me-2"></i>
                                        @(Model.Enrollment?.Student?.PhoneNumber ?? Html.T("غير متوفر", "Not available"))
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assignment Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-book me-2 text-primary"></i>
                        @Html.T("معلومات التكليف", "Assignment information")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <label class="text-muted small mb-2">@Html.T("عنوان التكليف", "Assignment title")</label>
                            <h5 class="fw-bold">@Model.Assignment?.Title</h5>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-2">@Html.T("الدورة", "Course")</label>
                            <p class="mb-0">@Model.Assignment?.Lesson?.Module?.Course?.Title</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-2">@Html.T("الدرس", "Lesson")</label>
                            <p class="mb-0">@Model.Assignment?.Lesson?.Title</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Assignment?.Instructions))
                        {
                            <div class="col-md-12">
                                <label class="text-muted small mb-2">@Html.T("التعليمات", "Instructions")</label>
                                <div class="alert alert-light">
                                    @Html.Raw(Model.Assignment.Instructions)
                                </div>
                            </div>
                        }

                        <div class="col-md-4">
                            <label class="text-muted small mb-2">@Html.T("الدرجة القصوى", "Max score")</label>
                            <p class="mb-0 fw-bold text-primary">@Model.Assignment.MaxPoints @Html.T("نقطة", "points")</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted small mb-2">@Html.T("درجة النجاح", "Passing score")</label>
                            <p class="mb-0 fw-bold">@Model.Assignment.PassingScore%</p>
                        </div>

                        @if (Model.Assignment?.DueDate.HasValue == true)
                        {
                            <div class="col-md-4">
                                <label class="text-muted small mb-2">@Html.T("الموعد النهائي", "Due date")</label>
                                <p class="mb-0">
                                    <i class="feather-calendar text-muted me-2"></i>
                                    @Model.Assignment.DueDate.Value.ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Submission Content -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-file-text me-2 text-primary"></i>
                        @Html.T("محتوى التسليم", "Submission content")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="text-muted small mb-2">@Html.T("تاريخ التسليم", "Submission date")</label>
                        <p class="mb-0">
                            <i class="feather-calendar text-muted me-2"></i>
                            @Model.SubmittedAt.ToString("dd/MM/yyyy hh:mm tt")
                            @if (Model.IsLate)
                            {
                                <span class="badge bg-soft-danger text-danger ms-2">@Html.T("متأخر", "Late")</span>
                            }
                        </p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TextSubmission))
                    {
                        <div class="mb-4">
                            <label class="text-muted small mb-2">@Html.T("النص المرسل", "Submitted text")</label>
                            <div class="bg-light rounded p-4">
                                <div style="white-space: pre-wrap;">@Model.TextSubmission</div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.AttachmentUrls))
                    {
                        <div class="mb-4">
                            <label class="text-muted small mb-2">@Html.T("المرفقات", "Attachments")</label>
                            <div class="list-group">
                                @foreach (var url in Model.AttachmentUrls.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <a href="@url.Trim()" target="_blank" class="list-group-item list-group-item-action">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-info text-info">
                                                <i class="feather-file"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@System.IO.Path.GetFileName(url.Trim())</h6>
                                                <small class="text-muted">@Html.T("انقر للتحميل", "Click to download")</small>
                                            </div>
                                            <i class="feather-download text-primary"></i>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    }

                    @if (string.IsNullOrEmpty(Model.TextSubmission) && string.IsNullOrEmpty(Model.AttachmentUrls))
                    {
                        <div class="alert alert-warning">
                            <i class="feather-alert-triangle me-2"></i>
                            @Html.T("لا يوجد محتوى مرسل", "No content submitted")
                        </div>
                    }
                </div>
            </div>

            <!-- Grading Section -->
            @if (Model.Grade.HasValue || !string.IsNullOrEmpty(Model.Feedback))
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-award me-2 text-primary"></i>
                            @Html.T("التقييم والملاحظات", "Grading and feedback")
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Grade.HasValue)
                        {
                            <div class="mb-4">
                                <label class="text-muted small mb-2">@Html.T("الدرجة", "Score")</label>
                                <div class="d-flex align-items-center gap-3">
                                    <h2 class="fw-bold mb-0 @(isPassing ? "text-success" : "text-danger")">
                                        @Model.Grade.Value / @Model.Assignment.MaxPoints
                                    </h2>
                                    <span class="badge bg-soft-@(isPassing ? "success" : "danger") text-@(isPassing ? "success" : "danger") fs-5">
                                        @gradePercent.ToString("F1")%
                                    </span>
                                    @if (isPassing)
                                    {
                                        <span class="badge bg-soft-success text-success">
                                            <i class="feather-check-circle"></i> @Html.T("ناجح", "Passed")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-danger text-danger">
                                            <i class="feather-x-circle"></i> @Html.T("راسب", "Failed")
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Feedback))
                        {
                            <div class="mb-4">
                                <label class="text-muted small mb-2">@Html.T("ملاحظات المدرس", "Instructor feedback")</label>
                                <div class="alert alert-info">
                                    <div style="white-space: pre-wrap;">@Model.Feedback</div>
                                </div>
                            </div>
                        }

                        @if (Model.GradedAt.HasValue)
                        {
                            <div class="mb-0">
                                <label class="text-muted small mb-2">@Html.T("تاريخ التقييم", "Graded at")</label>
                                <p class="mb-0">
                                    <i class="feather-calendar text-muted me-2"></i>
                                    @Model.GradedAt.Value.ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("حالة التسليم", "Submission status")</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @switch (Model.Status)
                        {
                            case LMS.Domain.Enums.AssignmentStatus.Submitted:
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-clock"></i>
                                </div>
                                <h5 class="fw-bold text-warning">@Html.T("قيد الانتظار", "Pending")</h5>
                                <p class="text-muted mb-0">@Html.T("في انتظار التقييم", "Awaiting grading")</p>
                                break;
                            case LMS.Domain.Enums.AssignmentStatus.Graded:
                                <div class="avatar-text avatar-xl bg-soft-success text-success mb-3 mx-auto">
                                    <i class="feather-check-circle"></i>
                                </div>
                                <h5 class="fw-bold text-success">@Html.T("مُقيّم", "Graded")</h5>
                                <p class="text-muted mb-0">@Html.T("تم التقييم بنجاح", "Successfully graded")</p>
                                break;
                            case LMS.Domain.Enums.AssignmentStatus.Resubmit:
                                <div class="avatar-text avatar-xl bg-soft-info text-info mb-3 mx-auto">
                                    <i class="feather-repeat"></i>
                                </div>
                                <h5 class="fw-bold text-info">@Html.T("إعادة تسليم", "Resubmit")</h5>
                                <p class="text-muted mb-0">@Html.T("مطلوب إعادة التسليم", "Resubmission required")</p>
                                break;
                            case LMS.Domain.Enums.AssignmentStatus.Late:
                                <div class="avatar-text avatar-xl bg-soft-danger text-danger mb-3 mx-auto">
                                    <i class="feather-alert-triangle"></i>
                                </div>
                                <h5 class="fw-bold text-danger">@Html.T("متأخر", "Late")</h5>
                                <p class="text-muted mb-0">@Html.T("تسليم بعد الموعد", "Submitted after deadline")</p>
                                break;
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات سريعة", "Quick info")</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">@Html.T("تاريخ التسليم:", "Submission date:")</span>
                        <span class="fw-medium">@Model.SubmittedAt.ToString("dd/MM/yyyy")</span>
                    </div>

                    @if (Model.Assignment?.DueDate.HasValue == true)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Html.T("الموعد النهائي:", "Due date:")</span>
                            <span class="fw-medium">@Model.Assignment.DueDate.Value.ToString("dd/MM/yyyy")</span>
                        </div>
                    }

                    @if (Model.Grade.HasValue)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Html.T("الدرجة:", "Score:")</span>
                            <span class="fw-bold @(isPassing ? "text-success" : "text-danger")">
                                @Model.Grade.Value / @Model.Assignment.MaxPoints
                            </span>
                        </div>
                    }

                    @if (Model.GradedAt.HasValue)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">@Html.T("تاريخ التقييم:", "Graded at:")</span>
                            <span class="fw-medium">@Model.GradedAt.Value.ToString("dd/MM/yyyy")</span>
                        </div>

                        var gradingTime = (Model.GradedAt.Value - Model.SubmittedAt).TotalHours;
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">@Html.T("وقت التقييم:", "Grading time:")</span>
                            <span class="fw-medium">@gradingTime.ToString("F1") @Html.T("ساعة", "hr(s)")</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإجراءات", "Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Submitted || Model.Status == LMS.Domain.Enums.AssignmentStatus.Late)
                        {
                            <a href="@Url.Action("Grade", new { id = Model.Id })" class="btn btn-primary">
                                <i class="feather-edit-3 me-2"></i>
                                @Html.T("تقييم التسليم", "Grade submission")
                            </a>
                        }
                        else if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Graded)
                        {
                            <a href="@Url.Action("Grade", new { id = Model.Id })" class="btn btn-warning">
                                <i class="feather-edit me-2"></i>
                                @Html.T("تعديل التقييم", "Edit grade")
                            </a>
                        }

                        <button class="btn btn-info" onclick="allowResubmit()">
                            <i class="feather-repeat me-2"></i>
                            @Html.T("السماح بإعادة التسليم", "Allow resubmission")
                        </button>

                        @if (!string.IsNullOrEmpty(Model.AttachmentUrls))
                        {
                            <a href="@Model.AttachmentUrls.Split(',')[0]" target="_blank" class="btn btn-light">
                                <i class="feather-download me-2"></i>
                                @Html.T("تحميل المرفق", "Download attachment")
                            </a>
                        }

                        <button class="btn btn-light" onclick="printSubmission()">
                            <i class="feather-printer me-2"></i>
                            @Html.T("طباعة", "Print")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resubmit Modal -->
<div class="modal fade" id="resubmitModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AllowResubmission" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">@Html.T("السماح بإعادة التسليم", "Allow resubmission")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">@Html.T("سبب طلب إعادة التسليم", "Reason for resubmission request") <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="4" required placeholder="@Html.T("اشرح للطالب سبب طلب إعادة التسليم...", "Explain to the student why you are requesting resubmission...")"></textarea>
                    </div>
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        @Html.T("سيتم إرسال إشعار للطالب بطلب إعادة التسليم", "The student will be notified of the resubmission request")
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-info">إرسال الطلب</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function allowResubmit() {
            new bootstrap.Modal(document.getElementById('resubmitModal')).show();
        }

        function printSubmission() {
            window.print();
        }
    </script>
}

