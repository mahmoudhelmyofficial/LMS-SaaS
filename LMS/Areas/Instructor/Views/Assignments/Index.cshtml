@model IEnumerable<LMS.Domain.Entities.Assessments.Assignment>
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("إدارة الواجبات", "Assignment Management");
    ViewData["Subtitle"] = Html.T("عرض وإدارة واجبات دوراتك", "View and manage your course assignments");
    var createUrl = Url.Action("Create");
    
    // Load platform settings
    var defaultPageSize = await PlatformSettings.GetIntSettingAsync("UI.PageSize.Default", 10);
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + createUrl + "' class='btn btn-primary'><i class='feather-plus me-2'></i>" + Html.T("إنشاء واجب جديد", "Create New Assignment") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("إجمالي الواجبات", "Total Assignments") },
                { "Value", ViewBag.TotalAssignments ?? 0 },
                { "Icon", "file-text" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("الإجابات المعلقة", "Pending Submissions") },
                { "Value", ViewBag.PendingSubmissions ?? 0 },
                { "Icon", "clock" },
                { "Color", "warning" },
                { "Link", Url.Action("Submissions", new { status = "Pending" }) }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("تم التقييم", "Graded") },
                { "Value", ViewBag.GradedSubmissions ?? 0 },
                { "Icon", "check-circle" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", Html.T("متوسط الدرجة", "Average Grade") },
                { "Value", $"{ViewBag.AverageGrade ?? 0}%" },
                { "Icon", "trending-up" },
                { "Color", "info" }
            })
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <select class="form-select" name="courseId" onchange="this.form.submit()">
                                <option value="">@Html.T("جميع الدورات", "All Courses")</option>
                                @if (ViewBag.Courses != null)
                                {
                                    foreach (var course in ViewBag.Courses)
                                    {
                                        var isSelected = ViewBag.CourseId != null && (int)ViewBag.CourseId == (int)course.Id;
                                        <option value="@course.Id" selected="@(isSelected ? "selected" : null)">@course.Title</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="status" onchange="this.form.submit()">
                                <option value="">@Html.T("جميع الحالات", "All Statuses")</option>
                                <option value="Active" selected="@(ViewBag.Status == "Active" ? "selected" : null)">@Html.T("نشط", "Active")</option>
                                <option value="Closed" selected="@(ViewBag.Status == "Closed" ? "selected" : null)">@Html.T("مغلق", "Closed")</option>
                                <option value="Draft" selected="@(ViewBag.Status == "Draft" ? "selected" : null)">@Html.T("مسودة", "Draft")</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" name="sortBy" onchange="this.form.submit()">
                                <option value="newest" selected="@(ViewBag.SortBy == "newest" || ViewBag.SortBy == null ? "selected" : null)">@Html.T("الأحدث", "Newest")</option>
                                <option value="deadline" selected="@(ViewBag.SortBy == "deadline" ? "selected" : null)">@Html.T("حسب الموعد", "By Deadline")</option>
                                <option value="submissions" selected="@(ViewBag.SortBy == "submissions" ? "selected" : null)">@Html.T("الإجابات", "Submissions")</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control" name="search" placeholder="@Html.T("بحث...", "Search...")" value="@ViewBag.Search">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Assignments List -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var assignment in Model)
            {
                var isOverdue = assignment.DueDate.HasValue && assignment.DueDate.Value < DateTime.Now;
                var daysLeft = assignment.DueDate.HasValue ? (assignment.DueDate.Value - DateTime.Now).Days : 0;

                <div class="col-lg-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-start gap-3">
                                <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                                    <i class="feather-file-text"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-start justify-content-between mb-2">
                                        <div>
                                            <h5 class="mb-1">
                                                <a href="@Url.Action("Details", new { id = assignment.Id })" class="text-dark">
                                                    @assignment.Title
                                                </a>
                                            </h5>
                                            <div class="d-flex align-items-center gap-3 fs-13 text-muted">
                                                <span>
                                                    <i class="feather-book me-1"></i>
                                                    @assignment.Lesson?.Module?.Course?.Title
                                                </span>
                                                <span>
                                                    <i class="feather-calendar me-1"></i>
                                                    @Html.T("آخر موعد:", "Deadline:") @(assignment.DueDate?.ToString("dd/MM/yyyy") ?? Html.T("غير محدد", "Not set"))
                                                </span>
                                                @if (isOverdue)
                                                {
                                                    <span class="badge bg-danger">@Html.T("منتهي", "Expired")</span>
                                                }
                                                else if (daysLeft <= 3)
                                                {
                                                    <span class="badge bg-warning">@Html.T("ينتهي قريباً", "Expiring Soon")</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                                                <i class="feather-more-vertical"></i>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = assignment.Id })">
                                                        <i class="feather-edit me-2"></i>
                                                        @Html.T("تعديل", "Edit")
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Submissions", new { assignmentId = assignment.Id })">
                                                        <i class="feather-users me-2"></i>
                                                        @Html.T("عرض الإجابات", "View Submissions")
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Analytics", new { assignmentId = assignment.Id })">
                                                        <i class="feather-bar-chart-2 me-2"></i>
                                                        @Html.T("التحليلات", "Analytics")
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form asp-action="Duplicate" asp-route-id="@assignment.Id" method="post" style="display:inline;" onsubmit="return confirm('@Html.T("هل أنت متأكد من نسخ هذا التكليف؟", "Are you sure you want to duplicate this assignment?")');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="feather-copy me-2"></i>
                                                            @Html.T("نسخ الواجب", "Duplicate Assignment")
                                                        </button>
                                                    </form>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@Url.Action("Delete", new { id = assignment.Id })', '@Html.T("هل أنت متأكد من حذف هذا الواجب؟", "Are you sure you want to delete this assignment?")')">
                                                        <i class="feather-trash-2 me-2"></i>
                                                        @Html.T("حذف", "Delete")
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>

                                    <p class="text-muted mb-3">@assignment.Description</p>

                                    <div class="row g-3">
                                        <div class="col-md-3">
                                            <div class="p-3 bg-soft-primary rounded">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="fs-12 text-muted">@Html.T("الإجابات الكلية", "Total Submissions")</span>
                                                    <h5 class="mb-0">@(ViewBag.SubmissionCounts?.ContainsKey(assignment.Id) == true ? ViewBag.SubmissionCounts[assignment.Id] : 0)</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="p-3 bg-soft-warning rounded">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="fs-12 text-muted">@Html.T("قيد المراجعة", "Under Review")</span>
                                                    <h5 class="mb-0">@(ViewBag.PendingCounts?.ContainsKey(assignment.Id) == true ? ViewBag.PendingCounts[assignment.Id] : 0)</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="p-3 bg-soft-success rounded">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="fs-12 text-muted">@Html.T("تم التقييم", "Graded")</span>
                                                    <h5 class="mb-0">@(ViewBag.GradedCounts?.ContainsKey(assignment.Id) == true ? ViewBag.GradedCounts[assignment.Id] : 0)</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="p-3 bg-soft-info rounded">
                                                <div class="d-flex align-items-center justify-content-between">
                                                    <span class="fs-12 text-muted">@Html.T("متوسط الدرجة", "Average Grade")</span>
                                                    <h5 class="mb-0">@(ViewBag.AverageGrades?.ContainsKey(assignment.Id) == true ? ViewBag.AverageGrades[assignment.Id] : 0)%</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-3">
                                        <a href="@Url.Action("Submissions", new { assignmentId = assignment.Id, status = "Pending" })" class="btn btn-sm btn-primary">
                                            <i class="feather-eye me-2"></i>
                                            @Html.T("عرض الإجابات المعلقة", "View Pending Submissions")
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Pagination -->
            @await Html.PartialAsync("_Pagination", ViewDataDictionaryHelper.CreateWith(
                ViewData,
                ("CurrentPage", ViewBag.CurrentPage ?? ViewBag.Page ?? 1),
                ("TotalPages", ViewBag.TotalPages ?? 1),
                ("TotalItems", ViewBag.TotalItems ?? 0),
                ("PageSize", ViewBag.PageSize ?? defaultPageSize),
                ("Action", "Index"),
                ("Controller", "Assignments")
            ))
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                            <i class="feather-file-text"></i>
                        </div>
                        <h5 class="fw-bold mb-2">@Html.T("لا توجد واجبات بعد", "No Assignments Yet")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء أول واجب لطلابك", "Start by creating the first assignment for your students")</p>
                        <a href="@Url.Action("Create")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إنشاء واجب جديد", "Create New Assignment")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("_DeleteModal")
