@model LMS.Domain.Entities.Assessments.AssignmentSubmission

@{
    ViewData["Title"] = Html.T("تفاصيل التسليم", "Submission Details");
    ViewData["Subtitle"] = $"مراجعة تسليم الطالب: {Model.Student?.FullName}";
    
    var gradePercent = Model.Grade.HasValue && Model.Assignment.MaxGrade > 0
        ? (decimal)Model.Grade.Value / Model.Assignment.MaxGrade * 100
        : 0;
    var isPassing = gradePercent >= (Model.Assignment.PassingScore ?? 60);
    var gradeUrl = Url.Action("Grade", new { id = Model.Id });
    var indexUrl = Url.Action("Submissions");
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + gradeUrl + "' class='btn btn-primary'><i class='feather-edit-3 me-2'></i>تقييم</a><a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>العودة للقائمة</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Status Alert -->
    @if (Model.IsLate)
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center">
                <i class="feather-alert-triangle fs-4 me-3"></i>
                <div>
                    <h6 class="mb-1">تسليم متأخر</h6>
                    <p class="mb-0">تم تسليم هذا التكليف بعد الموعد النهائي @(Model.Assignment.DueDate.HasValue ? $"بـ {(Model.SubmittedAt - Model.Assignment.DueDate.Value).Days} يوم" : "").</p>
                </div>
            </div>
        </div>
    }

    @if (Model.Status == LMS.Domain.Enums.AssignmentStatus.NeedsRevision)
    {
        <div class="alert alert-info mb-4">
            <div class="d-flex align-items-center">
                <i class="feather-repeat fs-4 me-3"></i>
                <div>
                    <h6 class="mb-1">طلب إعادة تسليم</h6>
                    <p class="mb-0">تم طلب إعادة تسليم هذا التكليف من الطالب.</p>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Student Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-user me-2 text-primary"></i>
                        معلومات الطالب
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                    @(Model.Student?.FirstName?.Substring(0, 1) ?? "S")
                                </div>
                                <div>
                                    <h5 class="fw-bold mb-1">@Model.Student?.FullName</h5>
                                    <p class="text-muted mb-1">
                                        <i class="feather-mail me-2"></i>
                                        @Model.Student?.Email
                                    </p>
                                    <p class="text-muted mb-0">
                                        <i class="feather-phone me-2"></i>
                                        @(Model.Student?.PhoneNumber ?? "غير متوفر")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assignment Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-book me-2 text-primary"></i>
                        معلومات التكليف
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-12">
                            <label class="text-muted small mb-2">عنوان التكليف</label>
                            <h5 class="fw-bold">@Model.Assignment?.Title</h5>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-2">الدورة</label>
                            <p class="mb-0">@Model.Assignment?.Lesson?.Module?.Course?.Title</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-2">الدرس</label>
                            <p class="mb-0">@Model.Assignment?.Lesson?.Title</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Assignment?.Instructions))
                        {
                            <div class="col-md-12">
                                <label class="text-muted small mb-2">التعليمات</label>
                                <div class="alert alert-light">
                                    @Html.Raw(Model.Assignment.Instructions)
                                </div>
                            </div>
                        }

                        <div class="col-md-4">
                            <label class="text-muted small mb-2">الدرجة القصوى</label>
                            <p class="mb-0 fw-bold text-primary">@Model.Assignment.MaxGrade نقطة</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted small mb-2">درجة النجاح</label>
                            <p class="mb-0 fw-bold">@(Model.Assignment.PassingScore ?? 60)%</p>
                        </div>

                        @if (Model.Assignment?.DueDate.HasValue == true)
                        {
                            <div class="col-md-4">
                                <label class="text-muted small mb-2">الموعد النهائي</label>
                                <p class="mb-0">
                                    <i class="feather-calendar text-muted me-2"></i>
                                    @Model.Assignment.DueDate.Value.ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Submission Content -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-file-text me-2 text-primary"></i>
                        محتوى التسليم
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="text-muted small mb-2">تاريخ التسليم</label>
                        <p class="mb-0">
                            <i class="feather-calendar text-muted me-2"></i>
                            @Model.SubmittedAt.ToString("dd/MM/yyyy hh:mm tt")
                            @if (Model.IsLate)
                            {
                                <span class="badge bg-soft-danger text-danger ms-2">متأخر</span>
                            }
                        </p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TextSubmission))
                    {
                        <div class="mb-4">
                            <label class="text-muted small mb-2">النص المرسل</label>
                            <div class="bg-light rounded p-4" style="max-height: 500px; overflow-y: auto;">
                                <div style="white-space: pre-wrap;">@Model.TextSubmission</div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.AttachmentUrls))
                    {
                        <div class="mb-4">
                            <label class="text-muted small mb-2">المرفقات</label>
                            <div class="list-group">
                                @foreach (var url in Model.AttachmentUrls.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <a href="@url.Trim()" target="_blank" class="list-group-item list-group-item-action">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-info text-info">
                                                <i class="feather-file"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@System.IO.Path.GetFileName(url.Trim())</h6>
                                                <small class="text-muted">انقر لعرض/تحميل الملف</small>
                                            </div>
                                            <i class="feather-download text-primary"></i>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    }

                    @if (string.IsNullOrEmpty(Model.TextSubmission) && string.IsNullOrEmpty(Model.AttachmentUrls))
                    {
                        <div class="alert alert-warning">
                            <i class="feather-alert-triangle me-2"></i>
                            لا يوجد محتوى مرسل
                        </div>
                    }
                </div>
            </div>

            <!-- Grading Section -->
            @if (Model.Grade.HasValue || !string.IsNullOrEmpty(Model.Feedback))
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header bg-soft-success">
                        <h5 class="card-title mb-0">
                            <i class="feather-award me-2 text-success"></i>
                            التقييم والملاحظات
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Grade.HasValue)
                        {
                            <div class="mb-4">
                                <label class="text-muted small mb-2">الدرجة</label>
                                <div class="d-flex align-items-center gap-3">
                                    <h2 class="fw-bold mb-0 @(isPassing ? "text-success" : "text-danger")">
                                        @Model.Grade.Value / @Model.Assignment.MaxGrade
                                    </h2>
                                    <span class="badge bg-soft-@(isPassing ? "success" : "danger") text-@(isPassing ? "success" : "danger") fs-5">
                                        @gradePercent.ToString("F1")%
                                    </span>
                                    @if (isPassing)
                                    {
                                        <span class="badge bg-soft-success text-success">
                                            <i class="feather-check-circle"></i> ناجح
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-danger text-danger">
                                            <i class="feather-x-circle"></i> راسب
                                        </span>
                                    }
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Feedback))
                        {
                            <div class="mb-4">
                                <label class="text-muted small mb-2">ملاحظات المدرس</label>
                                <div class="alert alert-info">
                                    <div style="white-space: pre-wrap;">@Model.Feedback</div>
                                </div>
                            </div>
                        }

                        @if (Model.GradedAt.HasValue)
                        {
                            <div class="mb-0">
                                <label class="text-muted small mb-2">تاريخ التقييم</label>
                                <p class="mb-0">
                                    <i class="feather-calendar text-muted me-2"></i>
                                    @Model.GradedAt.Value.ToString("dd/MM/yyyy hh:mm tt")
                                    @if (!string.IsNullOrEmpty(Model.GradedById))
                                    {
                                        <span class="text-muted">بواسطة المدرس</span>
                                    }
                                </p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Status Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">حالة التسليم</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @switch (Model.Status)
                        {
                            case LMS.Domain.Enums.AssignmentStatus.Submitted:
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-clock"></i>
                                </div>
                                <h5 class="fw-bold text-warning">قيد الانتظار</h5>
                                <p class="text-muted mb-0">في انتظار التقييم</p>
                                break;
                            case LMS.Domain.Enums.AssignmentStatus.Graded:
                                <div class="avatar-text avatar-xl bg-soft-success text-success mb-3 mx-auto">
                                    <i class="feather-check-circle"></i>
                                </div>
                                <h5 class="fw-bold text-success">مُقيّم</h5>
                                <p class="text-muted mb-0">تم التقييم بنجاح</p>
                                break;
                            case LMS.Domain.Enums.AssignmentStatus.NeedsRevision:
                                <div class="avatar-text avatar-xl bg-soft-info text-info mb-3 mx-auto">
                                    <i class="feather-repeat"></i>
                                </div>
                                <h5 class="fw-bold text-info">إعادة تسليم</h5>
                                <p class="text-muted mb-0">مطلوب إعادة التسليم</p>
                                break;
                            default:
                                <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mb-3 mx-auto">
                                    <i class="feather-file-text"></i>
                                </div>
                                <h5 class="fw-bold text-secondary">@Model.Status</h5>
                                break;
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">معلومات سريعة</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">تاريخ التسليم:</span>
                        <span class="fw-medium">@Model.SubmittedAt.ToString("dd/MM/yyyy")</span>
                    </div>

                    @if (Model.Assignment?.DueDate.HasValue == true)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">الموعد النهائي:</span>
                            <span class="fw-medium">@Model.Assignment.DueDate.Value.ToString("dd/MM/yyyy")</span>
                        </div>
                    }

                    @if (Model.Grade.HasValue)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">الدرجة:</span>
                            <span class="fw-bold @(isPassing ? "text-success" : "text-danger")">
                                @Model.Grade.Value / @Model.Assignment.MaxGrade
                            </span>
                        </div>
                    }

                    @if (Model.GradedAt.HasValue)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">تاريخ التقييم:</span>
                            <span class="fw-medium">@Model.GradedAt.Value.ToString("dd/MM/yyyy")</span>
                        </div>

                        var gradingTime = (Model.GradedAt.Value - Model.SubmittedAt).TotalHours;
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">وقت التقييم:</span>
                            <span class="fw-medium">@gradingTime.ToString("F1") ساعة</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">الإجراءات</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Submitted || Model.Status == LMS.Domain.Enums.AssignmentStatus.NotSubmitted)
                        {
                            <a href="@Url.Action("Grade", new { id = Model.Id })" class="btn btn-primary">
                                <i class="feather-edit-3 me-2"></i>
                                تقييم التسليم
                            </a>
                        }
                        else if (Model.Status == LMS.Domain.Enums.AssignmentStatus.Graded)
                        {
                            <a href="@Url.Action("Grade", new { id = Model.Id })" class="btn btn-warning">
                                <i class="feather-edit me-2"></i>
                                تعديل التقييم
                            </a>
                        }

                        <button class="btn btn-info" onclick="allowResubmit()">
                            <i class="feather-repeat me-2"></i>
                            السماح بإعادة التسليم
                        </button>

                        @if (!string.IsNullOrEmpty(Model.AttachmentUrls))
                        {
                            <a href="@Model.AttachmentUrls.Split(',')[0]" target="_blank" class="btn btn-light" download>
                                <i class="feather-download me-2"></i>
                                تحميل المرفق
                            </a>
                        }

                        <button class="btn btn-light" onclick="window.print()">
                            <i class="feather-printer me-2"></i>
                            طباعة
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Resubmit Modal -->
<div class="modal fade" id="resubmitModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="RequestResubmission" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">السماح بإعادة التسليم</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">سبب طلب إعادة التسليم <span class="text-danger">*</span></label>
                        <textarea name="feedback" class="form-control" rows="4" required placeholder="اشرح للطالب سبب طلب إعادة التسليم..."></textarea>
                    </div>
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        سيتم إرسال إشعار للطالب بطلب إعادة التسليم
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-info">إرسال الطلب</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function allowResubmit() {
            new bootstrap.Modal(document.getElementById('resubmitModal')).show();
        }
    </script>
}
