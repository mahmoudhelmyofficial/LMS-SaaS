@model LMS.Areas.Instructor.ViewModels.QuizEditViewModel
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("تعديل الاختبار", "Edit Quiz");
    ViewData["Subtitle"] = Model.Title;
    var lesson = ViewBag.Lesson as LMS.Domain.Entities.Courses.Lesson;
    var questions = ViewBag.Questions as List<LMS.Domain.Entities.Assessments.Question>;
    var indexUrl = Url.Action("Index", new { courseId = lesson?.Module?.CourseId });
    
    // Load platform settings
    var maxAttempts = await PlatformSettings.GetIntSettingAsync("Quiz.MaxAttempts.Limit", 10);
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw("<a href='" + indexUrl + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>" + Html.T("العودة للقائمة", "Back to list") + "</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    @if (lesson != null)
    {
        <!-- Lesson Info -->
        <div class="alert alert-info mb-4">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-md bg-primary text-white">
                        <i class="feather-book"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">@Html.T("الدرس:", "Lesson:") @lesson.Title</h6>
                        <p class="mb-0 fs-13">@lesson.Module?.Title - @lesson.Module?.Course?.Title</p>
                    </div>
                </div>
                <div class="text-end">
                    <div class="badge bg-soft-primary text-primary fs-13">
                        @questions?.Count() @Html.T("سؤال", "questions")
                    </div>
                </div>
            </div>
        </div>
    }

    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" id="quizForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="LessonId" />
        
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-info me-2 text-primary"></i>
                            @Html.T("المعلومات الأساسية", "Basic information")
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("عنوان الاختبار", "Quiz title") <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control" placeholder="@Html.T("مثال: اختبار الوحدة الأولى", "e.g. Unit 1 Quiz")">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("الوصف", "Description")</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="@Html.T("وصف مختصر عن الاختبار", "Brief quiz description")"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <label class="form-label">@Html.T("تعليمات الاختبار", "Quiz instructions")</label>
                                <textarea asp-for="Instructions" class="form-control" rows="4" placeholder="@Html.T("التعليمات والملاحظات المهمة", "Instructions and important notes")"></textarea>
                                <span asp-validation-for="Instructions" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quiz Settings -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-settings me-2 text-primary"></i>
                            @Html.T("إعدادات الاختبار", "Quiz settings")
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-lg-4">
                                <label class="form-label">@Html.T("درجة النجاح (%)", "Passing score (%)") <span class="text-danger">*</span></label>
                                <input asp-for="PassingScore" type="number" min="0" max="100" class="form-control">
                                <span asp-validation-for="PassingScore" class="text-danger"></span>
                            </div>

                            <div class="col-lg-4">
                                <label class="form-label">@Html.T("الوقت المحدد (دقيقة)", "Time limit (minutes)")</label>
                                <input asp-for="TimeLimitMinutes" type="number" min="0" class="form-control">
                                <span asp-validation-for="TimeLimitMinutes" class="text-danger"></span>
                            </div>

                            <div class="col-lg-4">
                                <label class="form-label">@Html.T("عدد المحاولات", "Max attempts")</label>
                                <input asp-for="MaxAttempts" type="number" min="0" max="@maxAttempts" class="form-control">
                                <span asp-validation-for="MaxAttempts" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h6 class="fw-bold mb-3">@Html.T("خيارات متقدمة", "Advanced options")</h6>
                        
                        <div class="row g-3">
                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ShuffleQuestions" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="ShuffleQuestions">
                                        @Html.T("ترتيب عشوائي للأسئلة", "Shuffle questions")
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ShuffleOptions" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="ShuffleOptions">
                                        @Html.T("ترتيب عشوائي للخيارات", "Shuffle options")
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ShowCorrectAnswers" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="ShowCorrectAnswers">
                                        @Html.T("إظهار الإجابات الصحيحة", "Show correct answers")
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ShowScoreImmediately" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="ShowScoreImmediately">
                                        @Html.T("إظهار النتيجة فوراً", "Show score immediately")
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="AllowBackNavigation" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="AllowBackNavigation">
                                        @Html.T("السماح بالرجوع للأسئلة", "Allow back navigation")
                                    </label>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-check form-switch">
                                    <input asp-for="OneQuestionPerPage" class="form-check-input" type="checkbox">
                                    <label class="form-check-label" asp-for="OneQuestionPerPage">
                                        @Html.T("سؤال واحد في الصفحة", "One question per page")
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <h6 class="fw-bold mb-3">@Html.T("فترة الإتاحة", "Availability period")</h6>
                        
                        <div class="row g-3">
                            <div class="col-lg-6">
                                <label class="form-label">@Html.T("متاح من", "Available from")</label>
                                <input asp-for="AvailableFrom" type="datetime-local" class="form-control">
                                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
                                <div class="form-text">@Html.T("اتركه فارغاً للإتاحة الفورية", "Leave empty for immediate availability")</div>
                            </div>

                            <div class="col-lg-6">
                                <label class="form-label">@Html.T("متاح حتى", "Available until")</label>
                                <input asp-for="AvailableUntil" type="datetime-local" class="form-control">
                                <span asp-validation-for="AvailableUntil" class="text-danger"></span>
                                <div class="form-text">@Html.T("اتركه فارغاً بدون تاريخ انتهاء", "Leave empty for no end date")</div>
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3">
                            <label class="form-label">@Html.T("إظهار الإجابات بعد", "Show answers after")</label>
                            <select asp-for="ShowAnswersAfter" class="form-select">
                                <option value="Immediately" selected="@(Model.ShowAnswersAfter == "Immediately")">@Html.T("فوراً بعد الإنهاء", "Immediately after submit")</option>
                                <option value="AfterGrading" selected="@(Model.ShowAnswersAfter == "AfterGrading")">@Html.T("بعد التقييم", "After grading")</option>
                                <option value="AfterDueDate" selected="@(Model.ShowAnswersAfter == "AfterDueDate")">@Html.T("بعد انتهاء الموعد", "After due date")</option>
                                <option value="Never" selected="@(Model.ShowAnswersAfter == "Never")">@Html.T("لا تظهر أبداً", "Never")</option>
                            </select>
                            <span asp-validation-for="ShowAnswersAfter" class="text-danger"></span>
                            <div class="form-text">@Html.T("متى يمكن للطلاب رؤية الإجابات الصحيحة", "When students can see correct answers")</div>
                        </div>
                    </div>
                </div>

                <!-- Questions Management -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-help-circle me-2 text-primary"></i>
                            @Html.T("إدارة الأسئلة", "Questions management")
                        </h5>
                        <div class="card-header-action">
                            <a href="@Url.Action("Questions", "Quizzes", new { quizId = Model.Id })" class="btn btn-sm btn-primary">
                                <i class="feather-plus me-2"></i>
                                @Html.T("إدارة الأسئلة", "Manage questions")
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (questions != null && questions.Any())
                        {
                            <div class="alert alert-success mb-3">
                                <i class="feather-check-circle me-2"></i>
                                الاختبار يحتوي على <strong>@questions.Count()</strong> سؤال
                            </div>

                            <div class="list-group" id="questionsList">
                                @foreach (var question in questions)
                                {
                                    <div class="list-group-item" data-question-id="@question.Id">
                                        <div class="d-flex align-items-start gap-3">
                                            <div class="drag-handle" style="cursor: move;">
                                                <i class="feather-menu text-muted"></i>
                                            </div>
                                            <div class="badge bg-dark">@question.OrderIndex</div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-2">@question.QuestionText</h6>
                                                <div class="d-flex flex-wrap gap-2">
                                                    <span class="badge bg-soft-primary text-primary">
                                                        @question.Type
                                                    </span>
                                                    <span class="badge bg-soft-info text-info">
                                                        @question.Points نقطة
                                                    </span>
                                                    @if (question.IsRequired)
                                                    {
                                                        <span class="badge bg-soft-danger text-danger">إجباري</span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="d-flex gap-2">
                                                <form asp-action="DeleteQuestion" asp-route-questionId="@question.Id" asp-route-quizId="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('هل تريد حذف هذا السؤال؟')">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-light text-danger">
                                                        <i class="feather-trash-2"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="avatar-text avatar-xl bg-soft-warning text-warning mb-3 mx-auto">
                                    <i class="feather-alert-triangle"></i>
                                </div>
                                <h6 class="fw-bold mb-2">@Html.T("لا توجد أسئلة بعد", "No questions yet")</h6>
                                <p class="text-muted mb-4">@Html.T("ابدأ بإضافة الأسئلة للاختبار", "Start by adding questions to the quiz")</p>
                                <a href="@Url.Action("Questions", "Quizzes", new { quizId = Model.Id })" class="btn btn-primary">
                                    <i class="feather-plus me-2"></i>
                                    @Html.T("إضافة السؤال الأول", "Add first question")
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Quick Stats -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h6 class="card-title">@Html.T("إحصائيات سريعة", "Quick stats")</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="fs-13">عدد الأسئلة:</span>
                            <span class="fw-bold">@questions?.Count()</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="fs-13">إجمالي النقاط:</span>
                            <span class="fw-bold">@questions?.Sum(q => q.Points)</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 pb-3 border-bottom">
                            <span class="fs-13">درجة النجاح:</span>
                            <span class="fw-bold text-primary">@Model.PassingScore%</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fs-13">الوقت المحدد:</span>
                            <span class="fw-bold">@(Model.TimeLimitMinutes > 0 ? Model.TimeLimitMinutes + " دقيقة" : "غير محدود")</span>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="feather-save me-2"></i>
                            حفظ التغييرات
                        </button>
                        <a href="@Url.Action("Index", new { courseId = lesson?.Module?.CourseId })" class="btn btn-light w-100 mb-2">
                            <i class="feather-x me-2"></i>
                            إلغاء
                        </a>
                        <a href="@Url.Action("Results", new { id = Model.Id })" class="btn btn-light w-100">
                            <i class="feather-bar-chart-2 me-2"></i>
                            عرض النتائج
                        </a>
                    </div>
                </div>

                <!-- Warning if has attempts -->
                <div class="alert alert-warning mb-4">
                    <i class="feather-alert-triangle me-2"></i>
                    <strong>تحذير:</strong> تغيير إعدادات الاختبار قد يؤثر على الطلاب الذين أكملوا الاختبار بالفعل
                </div>

                <!-- Danger Zone -->
                <div class="card stretch stretch-full border-danger">
                    <div class="card-header bg-soft-danger">
                        <h6 class="card-title text-danger">
                            <i class="feather-alert-octagon me-2"></i>
                            منطقة الخطر
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="fs-13 text-muted mb-3">حذف الاختبار سيؤدي إلى حذف جميع الأسئلة والمحاولات المرتبطة به.</p>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('هل أنت متأكد من حذف هذا الاختبار؟ سيتم حذف جميع الأسئلة والمحاولات المرتبطة به.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="feather-trash-2 me-2"></i>
                                حذف الاختبار
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Form validation
            $('#quizForm').on('submit', function(e) {
                const title = $('#Title').val().trim();
                const passingScore = parseInt($('#PassingScore').val());

                if (!title || title.length < 3) {
                    e.preventDefault();
                    alert('يرجى إدخال عنوان للاختبار (3 أحرف على الأقل)');
                    $('#Title').focus();
                    return false;
                }

                if (isNaN(passingScore) || passingScore < 0 || passingScore > 100) {
                    e.preventDefault();
                    alert('يرجى إدخال درجة نجاح صحيحة (0-100)');
                    $('#PassingScore').focus();
                    return false;
                }

                // Validate date ranges
                const availableFrom = $('#AvailableFrom').val();
                const availableUntil = $('#AvailableUntil').val();

                if (availableFrom && availableUntil) {
                    const fromDate = new Date(availableFrom);
                    const untilDate = new Date(availableUntil);

                    if (fromDate >= untilDate) {
                        e.preventDefault();
                        alert('تاريخ الانتهاء يجب أن يكون بعد تاريخ البداية');
                        return false;
                    }
                }

                return true;
            });

            // TODO: Implement drag & drop for questions reordering
            // This would require a sortable library like Sortable.js
        });
    </script>
}

