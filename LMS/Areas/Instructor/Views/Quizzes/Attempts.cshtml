@model List<LMS.Domain.Entities.Assessments.QuizAttempt>

@{
    ViewData["Title"] = Html.T("محاولات الاختبار", "Quiz Attempts");
    ViewData["Subtitle"] = Html.T("عرض جميع محاولات الطلاب", "View all student attempts");
    var quiz = ViewBag.Quiz as LMS.Domain.Entities.Assessments.Quiz;
    var stats = ViewBag.Stats;
    var page = ViewBag.Page;
    var totalPages = ViewBag.TotalPages;
    var totalCount = ViewBag.TotalCount;
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw(
        "<a href='" + Url.Action("Questions", new { quizId = quiz?.Id }) + "' class='btn btn-light me-2'><i class='feather-help-circle me-2'></i>إدارة الأسئلة</a>" +
        "<a href='" + Url.Action("Analytics", new { quizId = quiz?.Id }) + "' class='btn btn-light me-2'><i class='feather-trending-up me-2'></i>التحليلات</a>" +
        "<a href='" + Url.Action("Index", new { courseId = quiz?.Lesson?.Module?.CourseId }) + "' class='btn btn-light'><i class='feather-arrow-right me-2'></i>العودة</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    @if (quiz != null)
    {
        <!-- Quiz Info -->
        <div class="alert alert-info mb-4">
            <div class="d-flex align-items-center gap-3">
                <div class="avatar-text avatar-md bg-primary text-white">
                    <i class="feather-help-circle"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1">@quiz.Title</h6>
                    <p class="mb-0 fs-13">@quiz.Lesson?.Module?.Title - @quiz.Lesson?.Module?.Course?.Title</p>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1">إجمالي المحاولات</p>
                                <h3 class="fw-bold mb-0">@stats.TotalAttempts</h3>
                            </div>
                            <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                                <i class="feather-users"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1">المحاولات المكتملة</p>
                                <h3 class="fw-bold mb-0">@stats.CompletedAttempts</h3>
                            </div>
                            <div class="avatar-text avatar-lg bg-soft-success text-success">
                                <i class="feather-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1">متوسط الدرجات</p>
                                <h3 class="fw-bold mb-0">@stats.AverageScore.ToString("F1")%</h3>
                            </div>
                            <div class="avatar-text avatar-lg bg-soft-warning text-warning">
                                <i class="feather-bar-chart-2"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="text-muted mb-1">معدل النجاح</p>
                                <h3 class="fw-bold mb-0">@stats.PassRate.ToString("F1")%</h3>
                            </div>
                            <div class="avatar-text avatar-lg bg-soft-info text-info">
                                <i class="feather-trending-up"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attempts Table -->
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="card-title">
                    <i class="feather-list me-2 text-primary"></i>
                    قائمة المحاولات
                </h5>
                <div class="card-header-action">
                    <span class="badge bg-soft-primary text-primary">@totalCount محاولة</span>
                </div>
            </div>
            <div class="card-body p-0">
                @if (!Model.Any())
                {
                    <div class="p-4">
                        <div class="alert alert-warning mb-0">
                            <i class="feather-alert-triangle me-2"></i>
                            لا توجد محاولات لهذا الاختبار حتى الآن.
                        </div>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>@Html.T("الطالب", "Student")</th>
                                    <th>@Html.T("البريد الإلكتروني", "Email")</th>
                                    <th>@Html.T("تاريخ البدء", "Start date")</th>
                                    <th>@Html.T("تاريخ الإنهاء", "End date")</th>
                                    <th>@Html.T("الدرجة", "Score")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attempt in Model)
                                {
                                    var isPassed = attempt.Score >= quiz.PassingScore;
                                    var isCompleted = attempt.CompletedAt != null;
                                    
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                    @attempt.Student?.FirstName?.Substring(0, 1)@attempt.Student?.LastName?.Substring(0, 1)
                                                </div>
                                                <span class="fw-semibold">@attempt.Student?.FirstName @attempt.Student?.LastName</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted">@attempt.Student?.Email</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@attempt.StartedAt.ToString("dd/MM/yyyy")</span>
                                            <br />
                                            <small class="text-muted">@attempt.StartedAt.ToString("hh:mm tt")</small>
                                        </td>
                                        <td>
                                            @if (isCompleted)
                                            {
                                                <span class="text-muted">@attempt.CompletedAt?.ToString("dd/MM/yyyy")</span>
                                                <br />
                                                <small class="text-muted">@attempt.CompletedAt?.ToString("hh:mm tt")</small>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-warning text-warning">قيد التنفيذ</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isCompleted)
                                            {
                                                <span class="fw-bold @(isPassed ? "text-success" : "text-danger")">
                                                    @attempt.Score.ToString("F1")%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">--</span>
                                            }
                                        </td>
                                        <td>
                                            @if (isCompleted)
                                            {
                                                @if (isPassed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="feather-check me-1"></i>
                                                        ناجح
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="feather-x me-1"></i>
                                                        راسب
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="feather-clock me-1"></i>
                                                    جاري التنفيذ
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a href="@Url.Action("Details", "QuizAttempts", new { id = attempt.Id })" 
                                               class="btn btn-sm btn-icon btn-light" 
                                               title="عرض التفاصيل">
                                                <i class="feather-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (totalPages > 1)
                    {
                        <div class="card-footer">
                            <nav>
                                <ul class="pagination justify-content-center mb-0">
                                    @if (page > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Attempts", new { quizId = quiz.Id, page = page - 1 })">السابق</a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                                    {
                                        <li class="page-item @(i == page ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Attempts", new { quizId = quiz.Id, page = i })">@i</a>
                                        </li>
                                    }

                                    @if (page < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="@Url.Action("Attempts", new { quizId = quiz.Id, page = page + 1 })">التالي</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any custom JavaScript here
        });
    </script>
}

