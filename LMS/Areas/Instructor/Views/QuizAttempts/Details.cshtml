@model LMS.Domain.Entities.Assessments.QuizAttempt

@{
    ViewData["Title"] = Html.T("تفاصيل المحاولة", "Attempt Details");
    ViewData["Subtitle"] = Model.Quiz?.Title;
    var gradeUrl = Url.Action("Grade", new { id = Model.Id });
    var indexUrl = Url.Action("Index");
}

<div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1">@ViewData["Title"]</h4>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@gradeUrl" class="btn btn-primary">
            <i class="feather-edit-3 me-2"></i>
            تقييم
        </a>
        <a href="@indexUrl" class="btn btn-light">
            <i class="feather-arrow-right me-2"></i>
            العودة
        </a>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات المحاولة", "Attempt information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-soft-primary rounded">
                                <div class="text-muted fs-12 mb-1">الطالب</div>
                                <div class="fw-bold">@Model.Enrollment?.Student?.FullName</div>
                                <div class="fs-13 text-muted">@Model.Enrollment?.Student?.Email</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-soft-success rounded">
                                <div class="text-muted fs-12 mb-1">الاختبار</div>
                                <div class="fw-bold">@Model.Quiz?.Title</div>
                                <div class="fs-13 text-muted">@Model.Quiz?.Lesson?.Module?.Course?.Title</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-soft-info rounded">
                                <div class="text-muted fs-12 mb-1">تاريخ البدء</div>
                                <div class="fw-bold">@Model.StartedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-soft-warning rounded">
                                <div class="text-muted fs-12 mb-1">تاريخ الانتهاء</div>
                                <div class="fw-bold">@(Model.CompletedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("النتيجة", "Result")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6 text-center">
                            <div class="fs-48 fw-bold text-@(Model.IsPassed ? "success" : "danger")">@Model.Percentage.ToString("F1")%</div>
                            <div class="text-muted mb-3">النسبة المئوية</div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-@(Model.IsPassed ? "success" : "danger")" style="width: @Model.Percentage%"></div>
                            </div>
                        </div>
                        <div class="col-md-6 text-center">
                            <div class="fs-48 fw-bold text-primary">@Model.Score / @Model.TotalPoints</div>
                            <div class="text-muted">الدرجة</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإجابات", "Answers")</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Answers != null && Model.Answers.Any())
                    {
                        <div class="list-group list-group-flush">
                            @{int questionNumber = 1;}
                            @foreach (var answer in Model.Answers)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h6 class="fw-bold">@Html.T("السؤال", "Question") @questionNumber</h6>
                                            <p class="mb-2">@answer.Question?.QuestionText</p>
                                        </div>
                                        @if (answer.IsCorrect.HasValue)
                                        {
                                            <span class="badge bg-soft-@(answer.IsCorrect.Value ? "success" : "danger") text-@(answer.IsCorrect.Value ? "success" : "danger")">
                                                @(answer.IsCorrect.Value ? Html.T("صحيحة", "Correct") : Html.T("خاطئة", "Incorrect"))
                                            </span>
                                        }
                                    </div>
                                    <div class="mb-2">
                                        <strong>@Html.T("إجابة الطالب:", "Student answer:")</strong>
                                        <div class="text-muted">@answer.AnswerText</div>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span>@Html.T("النقاط الممنوحة:", "Points awarded:")</span>
                                        <strong>@answer.PointsAwarded / @(answer.Question?.Points ?? 0)</strong>
                                    </div>
                                </div>
                                questionNumber++;
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("الحالة", "Status")</h6>
                </div>
                <div class="card-body">
                    @if (Model.IsPassed)
                    {
                        <div class="alert alert-success border-0 mb-0">
                            <i class="feather-check-circle me-2"></i>
                            <strong>@Html.T("نجح الطالب", "Student passed")</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger border-0 mb-0">
                            <i class="feather-x-circle me-2"></i>
                            <strong>@Html.T("لم ينجح الطالب", "Student did not pass")</strong>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">@Html.T("معلومات إضافية", "Additional information")</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="py-2 border-bottom">
                            <small class="text-muted">@Html.T("الوقت المستغرق", "Time taken")</small>
                            <div class="fw-medium">
                                @if (Model.CompletedAt.HasValue)
                                {
                                    var duration = Model.CompletedAt.Value - Model.StartedAt;
                                    @($"{(int)duration.TotalMinutes} دقيقة")
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </div>
                        </li>
                        <li class="py-2">
                            <small class="text-muted">الحد الأدنى للنجاح</small>
                            <div class="fw-medium">@Model.Quiz?.PassingScore%</div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


                </div>
            </div>
        </div>
    </div>
</div>

