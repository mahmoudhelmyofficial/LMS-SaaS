@model LMS.Areas.Instructor.ViewModels.QuizAttemptGradeViewModel

@{
    ViewData["Title"] = Html.T("تقييم المحاولة", "Grade Attempt");
    ViewData["Subtitle"] = Model.QuizTitle;
}

@await Html.PartialAsync("_PageHeader", new ViewDataDictionary(ViewData)
{
    { "ActionButtons", Html.Raw($@"<a href='{Url.Action("Details", new { id = Model.AttemptId })}' class='btn btn-light'><i class='feather-arrow-right me-2'></i>العودة</a>") }
})

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <form asp-action="Grade" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AttemptId" />
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات الاختبار", "Quiz info")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-2"><strong>الطالب:</strong> @Model.StudentName</div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-2"><strong>الاختبار:</strong> @Model.QuizTitle</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.ManualAnswers != null && Model.ManualAnswers.Any())
                {
                    @for (int i = 0; i < Model.ManualAnswers.Count; i++)
                    {
                        var answer = Model.ManualAnswers[i];
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="card-title">@Html.T("السؤال", "Question") @(i + 1)</h6>
                            </div>
                            <div class="card-body">
                                <input type="hidden" asp-for="@Model.ManualAnswers[i].AnswerId" />
                                <input type="hidden" asp-for="@Model.ManualAnswers[i].QuestionId" />
                                <input type="hidden" asp-for="@Model.ManualAnswers[i].QuestionPoints" />
                                
                                <div class="mb-3">
                                    <strong>نص السؤال:</strong>
                                    <p class="text-muted">@answer.QuestionText</p>
                                </div>

                                <div class="mb-3">
                                    <strong>إجابة الطالب:</strong>
                                    <div class="p-3 bg-soft-secondary rounded">@answer.StudentAnswer</div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">@Html.T("النقاط الممنوحة", "Points awarded") <span class="text-danger">*</span></label>
                                        <input type="number" class="form-control" asp-for="@Model.ManualAnswers[i].PointsAwarded" 
                                               min="0" max="@answer.QuestionPoints" step="0.5" required />
                                        <div class="form-text">من 0 إلى @answer.QuestionPoints</div>
                                        <span asp-validation-for="@Model.ManualAnswers[i].PointsAwarded" class="text-danger"></span>
                                    </div>
                                    <div class="col-12">
                                        <label class="form-label">@Html.T("التغذية الراجعة", "Feedback")</label>
                                        <textarea class="form-control" asp-for="@Model.ManualAnswers[i].Feedback" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="feather-check-circle text-success" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">@Html.T("لا توجد أسئلة تحتاج تقييم يدوي", "No questions require manual grading")</h5>
                            <p class="text-muted">تم تقييم جميع الأسئلة تلقائياً</p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="card-title">@Html.T("الدرجة الحالية", "Current grade")</h6>
                    </div>
                    <div class="card-body text-center">
                        <div class="fs-32 fw-bold text-primary mb-2">@Model.CurrentScore / @Model.TotalPoints</div>
                        <div class="text-muted">النقاط</div>
                    </div>
                </div>

                @if (Model.ManualAnswers != null && Model.ManualAnswers.Any())
                {
                    <div class="card">
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="feather-check me-2"></i>
                                حفظ التقييم
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.AttemptId })" class="btn btn-light w-100">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

