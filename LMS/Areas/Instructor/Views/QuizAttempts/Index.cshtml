@model IEnumerable<LMS.Domain.Entities.Assessments.QuizAttempt>

@{
    ViewData["Title"] = Html.T("محاولات الاختبارات", "Quiz Attempts");
    ViewData["Subtitle"] = Html.T("إدارة ومراجعة محاولات الطلاب", "Manage and review student attempts");
    var statisticsUrl = Url.Action("Statistics");
}

<div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-4">
    <div>
        <h4 class="mb-1">@ViewData["Title"]</h4>
        <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
    </div>
    <div class="d-flex gap-2">
        <a href="@statisticsUrl" class="btn btn-primary">
            <i class="feather-bar-chart-2 me-2"></i>
            الإحصائيات
        </a>
        <button class="btn btn-light" onclick="window.location.reload()">
            <i class="feather-refresh-cw me-2"></i>
            تحديث
        </button>
    </div>
</div>

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "إجمالي المحاولات" },
                { "Value", Model.Count() },
                { "Icon", "file-text" },
                { "Color", "primary" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "محاولات ناجحة" },
                { "Value", Model.Count(a => a.IsPassed) },
                { "Icon", "check-circle" },
                { "Color", "success" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "محاولات راسبة" },
                { "Value", Model.Count(a => !a.IsPassed) },
                { "Icon", "x-circle" },
                { "Color", "danger" }
            })
        </div>
        <div class="col-xxl-3 col-md-6">
            @await Html.PartialAsync("_StatCard", new ViewDataDictionary(ViewData)
            {
                { "Label", "متوسط الدرجات" },
                { "Value", Model.Any() ? Model.Average(a => a.Percentage).ToString("F1") + "%" : "0%" },
                { "Icon", "trending-up" },
                { "Color", "info" }
            })
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("الدورة", "Course")</label>
                            <select name="courseId" class="form-select" onchange="this.form.submit()">
                                <option value="">@Html.T("جميع الدورات", "All Courses")</option>
                                @if (ViewBag.Courses != null)
                                {
                                    foreach (var course in ViewBag.Courses as IEnumerable<LMS.Domain.Entities.Courses.Course>)
                                    {
                                        var isSelected = ViewBag.CourseId != null && (int)ViewBag.CourseId == course.Id;
                                        <option value="@course.Id" selected="@(isSelected ? "selected" : null)">@course.Title</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("الاختبار", "Quiz")</label>
                            <select name="quizId" class="form-select" onchange="this.form.submit()">
                                <option value="">جميع الاختبارات</option>
                                @if (ViewBag.Quizzes != null)
                                {
                                    foreach (var quiz in ViewBag.Quizzes as IEnumerable<LMS.Domain.Entities.Assessments.Quiz>)
                                    {
                                        var isSelected = ViewBag.QuizId != null && (int)ViewBag.QuizId == quiz.Id;
                                        <option value="@quiz.Id" selected="@(isSelected ? "selected" : null)">@quiz.Title</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("الحالة", "Status")</label>
                            <select name="status" class="form-select" onchange="this.form.submit()">
                                <option value="">جميع الحالات</option>
                                <option value="InProgress">قيد التقدم</option>
                                <option value="Completed">مكتملة</option>
                                <option value="Graded">تم التقييم</option>
                                <option value="Abandoned">متروكة</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Attempts List -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("محاولات الاختبارات", "Quiz attempts")</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="d-md-none p-3">
                            @foreach (var attempt in Model)
                            {
                                <div class="card mb-3 border">
                                    <div class="card-body">
                                        <div class="fw-semibold text-break">@attempt.Enrollment?.Student?.FullName</div>
                                        <div class="text-muted fs-12">@attempt.Quiz?.Title</div>
                                        <div class="d-flex flex-wrap gap-2 mt-2 align-items-center">
                                            <span class="badge bg-soft-@(attempt.Percentage >= 50 ? "success" : "danger") text-@(attempt.Percentage >= 50 ? "success" : "danger")">@attempt.Percentage.ToString("F1")%</span>
                                            @if (attempt.IsPassed)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("ناجح", "Passed")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-danger text-danger">@Html.T("راسب", "Failed")</span>
                                            }
                                            <span class="fs-12 text-muted">@attempt.StartedAt.ToString("dd/MM/yyyy")</span>
                                        </div>
                                        <div class="hstack gap-2 mt-2 flex-wrap">
                                            <a href="@Url.Action("Details", new { id = attempt.Id })" class="btn btn-sm btn-outline-primary"><i class="feather-eye"></i></a>
                                            @if (attempt.Status != LMS.Domain.Enums.QuizAttemptStatus.Graded)
                                            {
                                                <a href="@Url.Action("Grade", new { id = attempt.Id })" class="btn btn-sm btn-outline-secondary"><i class="feather-edit-3"></i></a>
                                            }
                                            <form method="post" asp-action="Delete" asp-route-id="@attempt.Id" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه المحاولة?", "Are you sure you want to delete this attempt?").Replace("'", "\\'"))')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="feather-trash-2"></i></button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="d-none d-md-block">
                            <div class="table-responsive" style="-webkit-overflow-scrolling: touch; max-width: 100%;">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>@Html.T("الطالب", "Student")</th>
                                            <th>@Html.T("الاختبار", "Quiz")</th>
                                            <th>@Html.T("التاريخ", "Date")</th>
                                            <th>@Html.T("الدرجة", "Score")</th>
                                            <th>@Html.T("النسبة", "Percentage")</th>
                                            <th>@Html.T("الحالة", "Status")</th>
                                            <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var attempt in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm">@attempt.Enrollment?.Student?.FirstName?.Substring(0, 1)</div>
                                                    <span>@attempt.Enrollment?.Student?.FullName</span>
                                                </div>
                                            </td>
                                            <td>@attempt.Quiz?.Title</td>
                                            <td>@attempt.StartedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@attempt.Score / @attempt.TotalPoints</td>
                                            <td>
                                                <span class="badge bg-soft-@(attempt.Percentage >= 50 ? "success" : "danger") text-@(attempt.Percentage >= 50 ? "success" : "danger")">
                                                    @attempt.Percentage.ToString("F1")%
                                                </span>
                                            </td>
                                            <td>
                                                @if (attempt.IsPassed)
                                                {
                                                    <span class="badge bg-soft-success text-success">@Html.T("ناجح", "Passed")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("راسب", "Failed")</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", new { id = attempt.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    @if (attempt.Status != LMS.Domain.Enums.QuizAttemptStatus.Graded)
                                                    {
                                                        <a href="@Url.Action("Grade", new { id = attempt.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تقييم", "Grade")">
                                                            <i class="feather-edit-3"></i>
                                                        </a>
                                                    }
                                                    <form method="post" asp-action="Delete" asp-route-id="@attempt.Id" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه المحاولة?", "Are you sure you want to delete this attempt?").Replace("'", "\\'"))')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                            <i class="feather-trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-4 mx-auto">
                                <i class="feather-file-text"></i>
                            </div>
                            <h5 class="fw-bold mb-2">@Html.T("لا توجد محاولات", "No attempts yet")</h5>
                            <p class="text-muted">@Html.T("لم يقم الطلاب بأي محاولات للاختبارات بعد", "Students have not made any quiz attempts yet")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}

