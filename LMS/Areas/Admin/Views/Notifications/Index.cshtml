@model IEnumerable<LMS.Domain.Entities.Notifications.Notification>

@{
    ViewData["Title"] = Html.T("الإشعارات", "Notifications");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التواصل", "Communication"), null),
        (Html.T("الإشعارات", "Notifications"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إرسال إشعار", "Send Notification"), "feather-plus", Url.Action("Create", "Notifications"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-bell"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الإشعارات", "Total notifications")</span>
                            <h3 class="fw-bolder d-block">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">تم إرسالها</span>
                            <h3 class="fw-bolder d-block">@Model.Count(n => n.IsRead).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("بانتظار القراءة", "Pending read")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(n => !n.IsRead).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("المستلمون", "Recipients")</span>
                            <h3 class="fw-bolder d-block">0</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="notificationsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("العنوان", "Title")</th>
                                    <th>@Html.T("الرسالة", "Message")</th>
                                    <th>@Html.T("النوع", "Type")</th>
                                    <th>@Html.T("المستلم", "Recipient")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var notification in Model.OrderByDescending(n => n.CreatedAt))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                @switch (notification.Type)
                                                {
                                                    case LMS.Domain.Enums.NotificationType.System:
                                                        <i class="feather-info text-info"></i>
                                                        break;
                                                    case LMS.Domain.Enums.NotificationType.Achievement:
                                                        <i class="feather-check-circle text-success"></i>
                                                        break;
                                                    case LMS.Domain.Enums.NotificationType.Reminder:
                                                        <i class="feather-alert-triangle text-warning"></i>
                                                        break;
                                                    case LMS.Domain.Enums.NotificationType.Payment:
                                                        <i class="feather-x-circle text-danger"></i>
                                                        break;
                                                    default:
                                                        <i class="feather-bell text-primary"></i>
                                                        break;
                                                }
                                                <span class="fw-semibold">@notification.Title</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">
                                                @notification.Message
                                            </div>
                                        </td>
                                        <td>
                                            @switch (notification.Type)
                                            {
                                                case LMS.Domain.Enums.NotificationType.System:
                                                    <span class="badge bg-soft-info text-info">@Html.T("نظام", "System")</span>
                                                    break;
                                                case LMS.Domain.Enums.NotificationType.Achievement:
                                                    <span class="badge bg-soft-success text-success">@Html.T("إنجاز", "Achievement")</span>
                                                    break;
                                                case LMS.Domain.Enums.NotificationType.Reminder:
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("تذكير", "Reminder")</span>
                                                    break;
                                                case LMS.Domain.Enums.NotificationType.Payment:
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("دفع", "Payment")</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("عام", "General")</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (notification.User != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @notification.User.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <span>@notification.User.FirstName @notification.User.LastName</span>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="small">@notification.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <span class="text-muted smaller">@notification.CreatedAt.ToString("hh:mm tt")</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (notification.IsRead)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("مقروءة", "Read")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-warning text-warning">@Html.T("غير مقروءة", "Unread")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "Notifications", new { id = notification.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                @if (!notification.IsRead)
                                                {
                                                    <a href="@Url.Action("MarkAsRead", "Notifications", new { id = notification.Id })" class="avatar-text avatar-md text-success" data-bs-toggle="tooltip" title="@Html.T("تعليم كمقروءة", "Mark as read")">
                                                        <i class="feather-check"></i>
                                                    </a>
                                                }
                                                <a href="javascript:void(0)" class="avatar-text avatar-md text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")" onclick="confirmDelete('@notification.Id')">
                                                    <i class="feather-trash-2"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#notificationsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[4, "desc"]],
                "pageLength": 25
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function confirmDelete(notificationId) {
            if (confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا الإشعار؟", "Are you sure you want to delete this notification?").ToString().Replace("'", "\\'"))')) {
                window.location.href = '@Url.Action("Delete", "Notifications")?id=' + notificationId;
            }
        }
    </script>
}

