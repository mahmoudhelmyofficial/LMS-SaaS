@model LMS.Domain.Entities.Marketing.CourseBundle

@{
    ViewData["Title"] = Html.T("تفاصيل الباقة", "Bundle details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التسويق", "Marketing"), null),
        (Html.T("الباقات", "Bundles"), Url.Action("Index", "Bundles")),
        (Html.T("تفاصيل الباقة", "Bundle details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تعديل", "Edit"), "feather-edit", Url.Action("Edit", "Bundles", new { id = Model.Id }), "btn-primary"),
        (Html.T("حذف", "Delete"), "feather-trash-2", "javascript:void(0)", "btn-danger delete-btn")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .bundle-header {
            background: var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%));
            color: white;
            padding: 40px;
            border-radius: 15px;
            margin-bottom: 30px;
        }
        .price-tag {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }
        .savings-badge {
            background: rgba(255,255,255,0.2);
            padding: 10px 20px;
            border-radius: 30px;
            backdrop-filter: blur(10px);
        }
        .course-item {
            padding: 15px;
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            margin-bottom: 10px;
            transition: all 0.3s;
        }
        .course-item:hover {
            background: #f9fafb;
            transform: translateX(-5px);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Bundle Header -->
    <div class="bundle-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="text-white mb-3">@Model.Name</h1>
                <p class="lead mb-3">@Model.ShortDescription</p>
                <div class="d-flex gap-2 flex-wrap">
                    <span class="badge bg-white text-dark">
                        <i class="feather-layers me-1"></i>
                        @Model.CoursesCount دورة
                    </span>
                    <span class="badge bg-white text-dark">
                        <i class="feather-clock me-1"></i>
                        @Model.TotalDurationHours ساعة
                    </span>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">
                            <i class="feather-check-circle me-1"></i>نشطة
                        </span>
                    }
                    @if (Model.IsFeatured)
                    {
                        <span class="badge bg-warning">
                            <i class="feather-star me-1"></i>مميزة
                        </span>
                    }
                </div>
            </div>
            <div class="col-md-4 text-end">
                <div class="price-tag">@Model.Price.ToString("N0") جنيه</div>
                @if (Model.OriginalPrice > Model.Price)
                {
                    <div class="text-white-50 text-decoration-line-through mb-2">
                        @Model.OriginalPrice.ToString("N0") جنيه
                    </div>
                    <div class="savings-badge">
                        وفر @Model.SavingsPercentage.ToString("N0")%
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-primary text-primary avatar-xl mb-3 mx-auto">
                        <i class="feather-shopping-cart"></i>
                    </div>
                    <h3 class="fw-bold">@Model.SalesCount</h3>
                    <small class="text-muted">إجمالي المبيعات</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-success text-success avatar-xl mb-3 mx-auto">
                        <i class="feather-layers"></i>
                    </div>
                    <h3 class="fw-bold">@Model.CoursesCount</h3>
                    <small class="text-muted">عدد الدورات</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-warning text-warning avatar-xl mb-3 mx-auto">
                        <i class="feather-dollar-sign"></i>
                    </div>
                    <h3 class="fw-bold">@((Model.SalesCount * Model.Price).ToString("N0"))</h3>
                    <small class="text-muted">إجمالي الإيرادات</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-info text-info avatar-xl mb-3 mx-auto">
                        <i class="feather-trending-up"></i>
                    </div>
                    <h3 class="fw-bold">@Model.SavingsPercentage.ToString("N0")%</h3>
                    <small class="text-muted">نسبة التوفير</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Description -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-file-text me-2"></i>الوصف
                    </h5>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Description)
                </div>
            </div>

            <!-- Courses List -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-list me-2"></i>
                        الدورات المضمنة (@Model.BundleCourses.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var bundleCourse in Model.BundleCourses.OrderBy(bc => bc.DisplayOrder))
                    {
                        <div class="course-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar-text bg-soft-primary text-primary">
                                        <i class="feather-book-open"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@bundleCourse.Course.Title</h6>
                                        <small class="text-muted">@bundleCourse.Course.Level</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <h6 class="mb-0 text-primary">@(bundleCourse.Course.DiscountPrice ?? bundleCourse.Course.Price) جنيه</h6>
                                    <a href="@Url.Action("Details", "Courses", new { area = "Admin", id = bundleCourse.CourseId })" class="btn btn-sm btn-light">
                                        <i class="feather-eye"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Info Card -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>معلومات الباقة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="vstack gap-3">
                        @if (Model.ValidFrom.HasValue)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">متاحة من:</span>
                                <span class="fw-semibold">@Model.ValidFrom.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                        }
                        @if (Model.ValidTo.HasValue)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">متاحة حتى:</span>
                                <span class="fw-semibold">@Model.ValidTo.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                        }
                        @if (Model.MaxSales.HasValue)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">الحد الأقصى:</span>
                                <span class="fw-semibold">@Model.MaxSales</span>
                            </div>
                        }
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">تاريخ الإنشاء:</span>
                            <span class="fw-semibold">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-zap me-2"></i>@Html.T("إجراءات سريعة", "Quick actions")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light-brand">
                            <i class="feather-edit me-2"></i>تعديل الباقة
                        </a>
                        <button type="button" class="btn btn-light-brand" onclick="window.print()">
                            <i class="feather-printer me-2"></i>طباعة
                        </button>
                        <hr>
                        <button type="button" class="btn btn-danger delete-btn">
                            <i class="feather-trash-2 me-2"></i>حذف الباقة
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post" id="deleteForm">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        window.__BundleDetailsT = {
            cannotDeleteSold: '@Html.Raw(Html.T("لا يمكن حذف الباقة لأنه تم بيعها بالفعل!", "Cannot delete bundle because it has already been sold!").Replace("'", "\\'"))',
            confirmDelete: '@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الباقة؟", "Are you sure you want to delete this bundle?").Replace("'", "\\'"))'
        };
        $('.delete-btn').click(function() {
            if (@Model.SalesCount > 0) {
                alert(window.__BundleDetailsT.cannotDeleteSold);
                return;
            }
            if (confirm(window.__BundleDetailsT.confirmDelete)) {
                $('#deleteForm').submit();
            }
        });
    </script>
}

