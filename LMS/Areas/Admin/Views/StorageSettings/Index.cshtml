@model List<LMS.Domain.Entities.Settings.PlatformSetting>
@{
    ViewData["Title"] = Html.T("إعدادات التخزين", "Storage settings");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("التخزين", "Storage"), "")
    };
}

<div class="main-content">
    <!-- Storage Usage Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="avatar avatar-lg bg-soft-primary rounded">
                            <i class="feather-hard-drive fs-4 text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@Html.T("التخزين المستخدم", "Storage used")</h6>
                            <h3 class="mb-0">@ViewBag.LocalStorageUsed</h3>
                        </div>
                    </div>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-primary" style="width: @ViewBag.UsedPercentage%"></div>
                    </div>
                    <small class="text-muted">@ViewBag.UsedPercentage% @Html.T("من", "of") @ViewBag.TotalDiskSpace</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-lg bg-soft-success rounded">
                            <i class="feather-database fs-4 text-success"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@Html.T("المساحة المتاحة", "Free space")</h6>
                            <h3 class="mb-0">@ViewBag.FreeDiskSpace</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-lg bg-soft-info rounded">
                            <i class="feather-pie-chart fs-4 text-info"></i>
                        </div>
                        <div class="ms-3">
                            <h6 class="mb-0">@Html.T("إجمالي المساحة", "Total space")</h6>
                            <h3 class="mb-0">@ViewBag.TotalDiskSpace</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="feather-settings me-2"></i>@Html.T("إعدادات التخزين", "Storage settings")</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Save" method="post">
                        @Html.AntiForgeryToken()
                        
                        <!-- Storage Provider -->
                        <div class="mb-4">
                            <h6 class="text-primary mb-3"><i class="feather-cloud me-2"></i>@Html.T("مزود التخزين", "Storage provider")</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("نوع التخزين", "Storage type")</label>
                                    @{
                                        var storageProvider = Model?.FirstOrDefault(s => s.Key == "StorageProvider")?.Value;
                                    }
                                    <select name="Provider" class="form-select" id="storageProvider">
                                        <option value="Local" selected="@(storageProvider == "Local" || storageProvider == null)">@Html.T("تخزين محلي", "Local storage")</option>
                                        <option value="AWS_S3" selected="@(storageProvider == "AWS_S3")">Amazon S3</option>
                                        <option value="Azure_Blob" selected="@(storageProvider == "Azure_Blob")">Azure Blob Storage</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("مسار التخزين المحلي", "Local storage path")</label>
                                    <input type="text" name="LocalPath" class="form-control" 
                                           value="@(Model?.FirstOrDefault(s => s.Key == "StorageLocalPath")?.Value ?? "uploads")">
                                </div>
                            </div>
                        </div>

                        <!-- AWS S3 Settings -->
                        <div class="mb-4 storage-section" id="awsSection" style="display: none;">
                            <h6 class="text-primary mb-3"><i class="feather-cloud me-2"></i>Amazon S3</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("اسم الحاوية", "Bucket Name")</label>
                                    <input type="text" name="S3BucketName" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "S3BucketName")?.Value">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("المنطقة", "Region")</label>
                                    <input type="text" name="S3Region" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "S3Region")?.Value"
                                           placeholder="@Html.T("مثال: us-east-1", "e.g. us-east-1")">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("مفتاح الوصول", "Access Key")</label>
                                    <input type="text" name="S3AccessKey" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "S3AccessKey")?.Value">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("المفتاح السري", "Secret Key")</label>
                                    <input type="password" name="S3SecretKey" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "S3SecretKey")?.Value">
                                </div>
                            </div>
                        </div>

                        <!-- Azure Blob Settings -->
                        <div class="mb-4 storage-section" id="azureSection" style="display: none;">
                            <h6 class="text-primary mb-3"><i class="feather-cloud me-2"></i>Azure Blob Storage</h6>
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label class="form-label">@Html.T("سلسلة الاتصال", "Connection String")</label>
                                    <input type="text" name="AzureConnectionString" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "AzureConnectionString")?.Value">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("اسم الحاوية", "Container Name")</label>
                                    <input type="text" name="AzureContainerName" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "AzureContainerName")?.Value">
                                </div>
                            </div>
                        </div>

                        <!-- CDN Settings -->
                        <div class="mb-4">
                            <h6 class="text-primary mb-3"><i class="feather-globe me-2"></i>CDN</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">@Html.T("رابط CDN الأساسي", "CDN Base URL")</label>
                                    <input type="url" name="CdnBaseUrl" class="form-control" 
                                           value="@Model?.FirstOrDefault(s => s.Key == "CdnBaseUrl")?.Value"
                                           placeholder="https://cdn.example.com">
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check form-switch mt-4">
                                        <input type="hidden" name="CdnEnabled" value="false" />
                                        <input type="checkbox" name="CdnEnabled" value="true" class="form-check-input" 
                                               @(Model?.FirstOrDefault(s => s.Key == "CdnEnabled")?.Value == "true" ? "checked" : "")>
                                        <label class="form-check-label">@Html.T("تفعيل CDN", "Enable CDN")</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quota & Cleanup -->
                        <div class="mb-4">
                            <h6 class="text-primary mb-3"><i class="feather-trash-2 me-2"></i>@Html.T("الحصص والتنظيف", "Quota & cleanup")</h6>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="form-label">@Html.T("الحد الأقصى للتخزين (GB)", "Max storage (GB)")</label>
                                    <input type="number" name="MaxQuotaGB" class="form-control" 
                                           value="@(Model?.FirstOrDefault(s => s.Key == "StorageMaxQuota")?.Value ?? "50")">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">@Html.T("تنبيه عند الوصول إلى %", "Alert when usage reaches %")</label>
                                    <input type="number" name="WarningThresholdPercent" class="form-control" min="1" max="100"
                                           value="@(Model?.FirstOrDefault(s => s.Key == "StorageWarningThreshold")?.Value ?? "80")">
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">@Html.T("حذف الملفات بعد (أيام)", "Delete files after (days)")</label>
                                    <input type="number" name="CleanupAfterDays" class="form-control" 
                                           value="@(Model?.FirstOrDefault(s => s.Key == "StorageCleanupDays")?.Value ?? "365")">
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check form-switch mt-2">
                                        <input type="hidden" name="AutoCleanupEnabled" value="false" />
                                        <input type="checkbox" name="AutoCleanupEnabled" value="true" class="form-check-input" 
                                               @(Model?.FirstOrDefault(s => s.Key == "StorageAutoCleanup")?.Value == "true" ? "checked" : "")>
                                        <label class="form-check-label">@Html.T("تنظيف تلقائي", "Auto cleanup")</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>@Html.T("حفظ الإعدادات", "Save settings")
                            </button>
                            <a asp-action="Analysis" class="btn btn-outline-info">
                                <i class="feather-pie-chart me-2"></i>@Html.T("تحليل التخزين", "Storage analysis")
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="feather-cloud me-2"></i>@Html.T("مزودي التخزين", "Storage providers")</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.StorageProviders != null)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var provider in (List<dynamic>)ViewBag.StorageProviders)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center">
                                        <i class="@provider.Icon me-2 text-muted"></i>
                                        <span>@provider.DisplayName</span>
                                    </div>
                                    @if (provider.IsActive)
                                    {
                                        <span class="badge bg-success">@Html.T("نشط", "Active")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@Html.T("غير مفعّل", "Inactive")</span>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="feather-zap me-2"></i>@Html.T("اختبار الاتصال", "Test connection")</h5>
                </div>
                <div class="card-body">
                    <form asp-action="TestConnection" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="provider" value="@(Model?.FirstOrDefault(s => s.Key == "StorageProvider")?.Value ?? "Local")">
                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="feather-check-circle me-2"></i>@Html.T("اختبار الاتصال", "Test connection")
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('storageProvider').addEventListener('change', function() {
            document.querySelectorAll('.storage-section').forEach(el => el.style.display = 'none');
            if (this.value === 'AWS_S3') {
                document.getElementById('awsSection').style.display = 'block';
            } else if (this.value === 'Azure_Blob') {
                document.getElementById('azureSection').style.display = 'block';
            }
        });
        // Trigger on load
        document.getElementById('storageProvider').dispatchEvent(new Event('change'));
    </script>
}

