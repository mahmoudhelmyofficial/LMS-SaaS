@model LMS.Areas.Admin.ViewModels.CoursePerformanceReportViewModel

@{
    ViewData["Title"] = Html.T("تقرير أداء الدورات", "Course performance report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("التقارير", "Reports"), Url.Action("Index", "Reports")),
        (Html.T("أداء الدورات", "Course performance"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <style>
        .course-performance-card {
            transition: all 0.3s ease;
            border-right: 4px solid transparent;
        }
        .course-performance-card:hover {
            border-right-color: #3454d1;
            background-color: #f8f9fa;
        }
        .metric-badge {
            padding: 8px 12px;
            border-radius: 6px;
            font-weight: 600;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("التصنيف", "Category")</label>
                            <select class="form-select">
                                <option value="">@Html.T("جميع التصنيفات", "All categories")</option>
                                <option>@Html.T("برمجة", "Programming")</option>
                                <option>@Html.T("تصميم", "Design")</option>
                                <option>@Html.T("تسويق", "Marketing")</option>
                                <option>@Html.T("أعمال", "Business")</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("الحالة", "Status")</label>
                            <select class="form-select">
                                <option value="">@Html.T("الكل", "All")</option>
                                <option>@Html.T("منشور", "Published")</option>
                                <option>@Html.T("مسودة", "Draft")</option>
                                <option>@Html.T("قيد المراجعة", "Pending review")</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("ترتيب حسب", "Sort by")</label>
                            <select class="form-select" id="sortBy">
                                <option value="enrollments">@Html.T("عدد التسجيلات", "Enrollments count")</option>
                                <option value="revenue">@Html.T("الإيرادات", "Revenue")</option>
                                <option value="rating">@Html.T("التقييم", "Rating")</option>
                                <option value="completion">@Html.T("معدل الإكمال", "Completion rate")</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-primary w-100">
                                <i class="feather-search me-2"></i>
                                @Html.T("بحث", "Search")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-primary text-primary">
                            <i class="feather-book"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">@Html.T("إجمالي الدورات", "Total courses")</span>
                            <h4 class="mb-0">@Model.TotalCourses.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">@Html.T("دورات منشورة", "Published courses")</span>
                            <h4 class="mb-0">@Model.PublishedCourses.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-warning text-warning">
                            <i class="feather-star"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">@Html.T("متوسط التقييم", "Average rating")</span>
                            <h4 class="mb-0">@Model.AverageRating.ToString("F1")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-info text-info">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">@Html.T("معدل الإكمال", "Completion rate")</span>
                            <h4 class="mb-0">@Model.CompletionRate.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أفضل الدورات حسب التسجيلات", "Top courses by enrollments")</h5>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                        <canvas id="topCoursesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أفضل الدورات حسب الإيرادات", "Top courses by revenue")</h5>
                </div>
                <div class="card-body">
                    <div style="height: 300px;">
                        <canvas id="topRevenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أداء الدورات التدريبية", "Training courses performance")</h5>
                    <div class="card-header-action">
                        <div class="d-flex gap-2">
                            <input type="text" class="form-control form-control-sm" id="searchCourse" placeholder="@Html.T("بحث...", "Search...")">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="feather-download"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/api/export/courses?format=csv"><i class="feather-file-text me-2"></i>@Html.T("CSV", "CSV")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/courses?format=excel"><i class="feather-file me-2"></i>@Html.T("إكسل", "Excel")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/courses?format=pdf"><i class="feather-file-text me-2"></i>@Html.T("PDF", "PDF")</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="window.print()"><i class="feather-printer me-2"></i>@Html.T("طباعة", "Print")</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="coursesTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("المدرس", "Instructor")</th>
                                    <th>@Html.T("التسجيلات", "Enrollments")</th>
                                    <th>@Html.T("المكتملة", "Completed")</th>
                                    <th>@Html.T("معدل الإكمال", "Completion rate")</th>
                                    <th>@Html.T("الإيرادات", "Revenue")</th>
                                    <th>@Html.T("التقييم", "Rating")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Courses.Any())
                                {
                                    foreach (var course in Model.Courses)
                                    {
                                        <tr class="course-performance-card">
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        <i class="feather-book"></i>
                                                    </div>
                                                    <div>
                                                        <span class="fw-semibold d-block">@course.Title</span>
                                                        <small class="text-muted">@Html.T("منذ", "Since") @((DateTime.UtcNow - course.CreatedAt).Days) @Html.T("يوم", "days")</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@course.InstructorName</td>
                                            <td>
                                                <span class="metric-badge bg-soft-primary text-primary">@course.Enrollments.ToString("N0")</span>
                                            </td>
                                            <td>
                                                <span class="metric-badge bg-soft-success text-success">@course.Completed.ToString("N0")</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress flex-grow-1" style="width: 80px; height: 8px;">
                                                        <div class="progress-bar @(course.CompletionRate >= 75 ? "bg-success" : course.CompletionRate >= 50 ? "bg-primary" : "bg-warning")" 
                                                             style="width: @course.CompletionRate%"></div>
                                                    </div>
                                                    <span class="fw-semibold">@course.CompletionRate.ToString("F1")%</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="fw-bold text-success">@course.Revenue.ToEGP()</span>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-1">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= Math.Floor(course.Rating))
                                                        {
                                                            <i class="feather-star text-warning" style="font-size: 12px;"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="feather-star text-muted" style="font-size: 12px;"></i>
                                                        }
                                                    }
                                                    <span class="fw-semibold ms-1">@course.Rating.ToString("F1")</span>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var statusClass = course.Status == "Published" ? "success" : 
                                                        course.Status == "Draft" ? "warning" : "secondary";
                                                    var statusText = course.Status == "Published" ? Html.T("منشور", "Published") : 
                                                        course.Status == "Draft" ? Html.T("مسودة", "Draft") : course.Status;
                                                }
                                                <span class="badge bg-soft-@statusClass text-@statusClass">@statusText</span>
                                            </td>
                                            <td class="text-end">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a asp-controller="CourseAnalytics" asp-action="Details" asp-route-id="@course.CourseId" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض التفاصيل", "View details")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <a asp-controller="CourseAnalytics" asp-action="Compare" asp-route-id="@course.CourseId" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التحليلات", "Analytics")">
                                                        <i class="feather-bar-chart-2"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <i class="feather-info fs-1 text-muted d-block mb-2"></i>
                                            @Html.T("لا توجد دورات", "No courses")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportData() {
            window.location.href = '@Url.Action("ExportCoursePerformance", "ReportExports")';
        }

        $(document).ready(function() {
            // Search functionality
            $('#searchCourse').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#coursesTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Top Courses Chart
            var topEnrollLabels = @Html.Raw(Json.Serialize(Model.TopCoursesByEnrollment.Select(x => x.Title.Length > 20 ? x.Title.Substring(0, 20) + "..." : x.Title)));
            var topEnrollData = @Html.Raw(Json.Serialize(Model.TopCoursesByEnrollment.Select(x => x.Enrollments)));
            
            const topCtx = document.getElementById('topCoursesChart').getContext('2d');
            new Chart(topCtx, {
                type: 'bar',
                data: {
                    labels: topEnrollLabels,
                    datasets: [{
                        label: 'التسجيلات',
                        data: topEnrollData,
                        backgroundColor: '#3454d1',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Top Revenue Chart
            var topRevLabels = @Html.Raw(Json.Serialize(Model.TopCoursesByRevenue.Select(x => x.Title.Length > 20 ? x.Title.Substring(0, 20) + "..." : x.Title)));
            var topRevData = @Html.Raw(Json.Serialize(Model.TopCoursesByRevenue.Select(x => x.Revenue)));
            
            const revenueCtx = document.getElementById('topRevenueChart').getContext('2d');
            new Chart(revenueCtx, {
                type: 'bar',
                data: {
                    labels: topRevLabels,
                    datasets: [{
                        label: 'الإيرادات (ر.س)',
                        data: topRevData,
                        backgroundColor: '#0ab39c',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    indexAxis: 'y',
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString() + ' ر.س';
                                }
                            }
                        }
                    }
                }
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
