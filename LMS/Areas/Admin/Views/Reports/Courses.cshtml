@{
    ViewData["Title"] = Html.T("تقرير الدورات", "Courses report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير", "Reports"), Url.Action("Index", "Reports")),
        (Html.T("تقرير الدورات", "Courses report"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-book"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الدورات", "Total Courses")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalCourses.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دورات منشورة", "Published Courses")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.PublishedCourses.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي التسجيلات", "Total Enrollments")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalEnrollments.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-dollar-sign"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الإيرادات", "Total Revenue")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalRevenue.ToString("N0") @Html.T("ر.س", "SAR")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أداء الدورات", "Course performance")</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="coursesReportTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("التصنيف", "Category")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th>@Html.T("التسجيلات", "Enrollments")</th>
                                    <th>@Html.T("المكتملة", "Completed")</th>
                                    <th>@Html.T("التقييم", "Rating")</th>
                                    <th>@Html.T("الإيرادات", "Revenue")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in (IEnumerable<dynamic>)Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-semibold">@course.Title</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-primary text-primary">@course.CategoryName</span>
                                        </td>
                                        <td>
                                            @switch ((LMS.Domain.Enums.CourseStatus)course.Status)
                                            {
                                                case LMS.Domain.Enums.CourseStatus.Published:
                                                    <span class="badge bg-soft-success text-success">@Html.T("منشور", "Published")</span>
                                                    break;
                                                case LMS.Domain.Enums.CourseStatus.Draft:
                                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("مسودة", "Draft")</span>
                                                    break;
                                                case LMS.Domain.Enums.CourseStatus.PendingReview:
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("قيد المراجعة", "Pending Review")</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-soft-secondary text-secondary">@course.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <span class="fw-bold">@course.EnrollmentCount</span>
                                        </td>
                                        <td>
                                            <span class="text-success">@course.CompletedCount</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-1">
                                                <i class="feather-star text-warning"></i>
                                                <span>@course.AverageRating.ToString("F1")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">@course.Revenue.ToString("N0") @Html.T("ر.س", "SAR")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            $('#coursesReportTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[3, "desc"]],
                "pageLength": 25
            });
        });
    </script>
}

