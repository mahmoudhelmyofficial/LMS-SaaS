@model LMS.Areas.Admin.ViewModels.UsersReportViewModel

@{
    ViewData["Title"] = Html.T("تقرير المستخدمين", "Users report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("التقارير", "Reports"), Url.Action("Index", "Reports")),
        (Html.T("المستخدمين", "Users"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/daterangepicker.min.css" />
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("الفترة الزمنية", "Date range")</label>
                                <input type="text" class="form-control" id="daterange" value="@Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy")" />
                                <input type="hidden" name="from" id="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="to" id="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("نوع المستخدم", "User type")</label>
                                <select class="form-select" id="userType">
                                    <option value="">@Html.T("الكل", "All")</option>
                                    <option value="students">@Html.T("طلاب", "Students")</option>
                                    <option value="instructors">@Html.T("مدرسون", "Instructors")</option>
                                    <option value="admins">@Html.T("مدراء", "Admins")</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("الحالة", "Status")</label>
                                <select class="form-select" id="statusFilter">
                                    <option value="">@Html.T("الكل", "All")</option>
                                    <option value="active">@Html.T("نشط", "Active")</option>
                                    <option value="inactive">@Html.T("غير نشط", "Inactive")</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-search me-2"></i>
                                    @Html.T("بحث", "Search")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-primary text-primary">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">إجمالي المستخدمين</span>
                            <h4 class="mb-0">@Model.TotalUsers.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-success text-success">
                            <i class="feather-user-plus"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">مستخدمون جدد</span>
                            <h4 class="mb-0">@Model.NewUsers.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-warning text-warning">
                            <i class="feather-activity"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">مستخدمون نشطون</span>
                            <h4 class="mb-0">@Model.ActiveUsers.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-info text-info">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">معدل النمو</span>
                            <h4 class="mb-0">@(Model.GrowthRate >= 0 ? "+" : "")@Model.GrowthRate.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("نمو المستخدمين", "User growth")</h5>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="usersGrowthChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("توزيع المستخدمين", "User distribution")</h5>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="usersDistributionChart"></canvas>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center gap-2">
                                <div style="width: 12px; height: 12px; background: #3454d1; border-radius: 50%;"></div>
                                <span>طلاب</span>
                            </div>
                            <span class="fw-bold">@Model.TotalStudents.ToString("N0")</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <div class="d-flex align-items-center gap-2">
                                <div style="width: 12px; height: 12px; background: #0ab39c; border-radius: 50%;"></div>
                                <span>مدرسون</span>
                            </div>
                            <span class="fw-bold">@Model.TotalInstructors.ToString("N0")</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <div style="width: 12px; height: 12px; background: #f7b84b; border-radius: 50%;"></div>
                                <span>مدراء</span>
                            </div>
                            <span class="fw-bold">@Model.TotalAdmins.ToString("N0")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفاصيل المستخدمين", "User details")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="feather-download me-2"></i>تصدير
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/api/export/users?format=csv"><i class="feather-file-text me-2"></i>@Html.T("CSV", "CSV")</a></li>
                                <li><a class="dropdown-item" href="/api/export/users?format=excel"><i class="feather-file me-2"></i>@Html.T("إكسل", "Excel")</a></li>
                                <li><a class="dropdown-item" href="/api/export/users?format=pdf"><i class="feather-file-text me-2"></i>@Html.T("PDF", "PDF")</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("مستخدمون جدد", "New users")</th>
                                    <th>@Html.T("إجمالي نشط", "Total active")</th>
                                    <th>@Html.T("معدل النشاط", "Activity rate")</th>
                                    <th>@Html.T("طلاب", "Students")</th>
                                    <th>@Html.T("مدرسون", "Instructors")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DailyStats.Any())
                                {
                                    foreach (var stat in Model.DailyStats.OrderByDescending(s => s.Date).Take(10))
                                    {
                                        <tr>
                                            <td>@stat.Date.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-soft-success text-success">@stat.NewUsers</span></td>
                                            <td><span class="badge bg-soft-primary text-primary">@stat.ActiveUsers</span></td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress flex-grow-1" style="width: 80px; height: 8px;">
                                                        <div class="progress-bar bg-success" style="width: @stat.ActivityRate%"></div>
                                                    </div>
                                                    <span class="fw-semibold">@stat.ActivityRate.ToString("F1")%</span>
                                                </div>
                                            </td>
                                            <td>@stat.Students</td>
                                            <td>@stat.Instructors</td>
                                            <td class="text-end">
                                                <a href="javascript:void(0);" class="avatar-text avatar-md">
                                                    <i class="feather-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <i class="feather-info fs-1 text-muted d-block mb-2"></i>
                                            لا توجد بيانات للفترة المحددة
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Date range picker
            $('#daterange').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY',
                    applyLabel: 'تطبيق',
                    cancelLabel: 'إلغاء'
                }
            }, function(start, end) {
                $('#fromDate').val(start.format('YYYY-MM-DD'));
                $('#toDate').val(end.format('YYYY-MM-DD'));
            });

            // Users Growth Chart
            var growthLabels = @Html.Raw(Json.Serialize(Model.UserGrowthChart.Select(x => x.Label)));
            var newUsersData = @Html.Raw(Json.Serialize(Model.UserGrowthChart.Select(x => x.Value)));
            var cumulativeData = @Html.Raw(Json.Serialize(Model.UserGrowthChart.Select(x => x.SecondaryValue)));
            
            const growthCtx = document.getElementById('usersGrowthChart').getContext('2d');
            new Chart(growthCtx, {
                type: 'line',
                data: {
                    labels: growthLabels,
                    datasets: [{
                        label: 'مستخدمون جدد',
                        data: newUsersData,
                        borderColor: '#3454d1',
                        backgroundColor: 'rgba(52, 84, 209, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'إجمالي المستخدمين',
                        data: cumulativeData,
                        borderColor: '#0ab39c',
                        backgroundColor: 'rgba(10, 179, 156, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Users Distribution Chart
            const distCtx = document.getElementById('usersDistributionChart').getContext('2d');
            new Chart(distCtx, {
                type: 'doughnut',
                data: {
                    labels: ['طلاب', 'مدرسون', 'مدراء'],
                    datasets: [{
                        data: [@Model.TotalStudents, @Model.TotalInstructors, @Model.TotalAdmins],
                        backgroundColor: ['#3454d1', '#0ab39c', '#f7b84b']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
        });
    </script>
}
