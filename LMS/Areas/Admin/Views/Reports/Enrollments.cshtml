@model LMS.Areas.Admin.ViewModels.EnrollmentsReportViewModel

@{
    ViewData["Title"] = Html.T("تقرير التسجيلات", "Enrollments report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("التقارير", "Reports"), Url.Action("Index", "Reports")),
        (Html.T("التسجيلات", "Enrollments"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/daterangepicker.min.css" />
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("الفترة الزمنية", "Date range")</label>
                                <input type="text" class="form-control" id="daterange" value="@Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy")" />
                                <input type="hidden" name="from" id="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="to" id="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("التصنيف", "Category")</label>
                                <select class="form-select" name="category">
                                    <option value="">@Html.T("جميع التصنيفات", "All categories")</option>
                                    <option>برمجة</option>
                                    <option>تصميم</option>
                                    <option>تسويق</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("نوع التسجيل", "Enrollment type")</label>
                                <select class="form-select" id="enrollmentType" name="type">
                                    <option value="">@Html.T("الكل", "All")</option>
                                    <option value="paid">@Html.T("مدفوع", "Paid")</option>
                                    <option value="free">@Html.T("مجاني", "Free")</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-search me-2"></i>
                                    @Html.T("بحث", "Search")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("اتجاه التسجيلات", "Enrollments trend")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-light-brand active">يومي</button>
                            <button class="btn btn-sm btn-light-brand">أسبوعي</button>
                            <button class="btn btn-sm btn-light-brand">شهري</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="enrollmentsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-primary text-primary">
                            <i class="feather-user-plus"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">إجمالي التسجيلات</span>
                            <h4 class="mb-0">@Model.TotalEnrollments.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-success text-success">
                            <i class="feather-dollar-sign"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">تسجيلات مدفوعة</span>
                            <h4 class="mb-0">@Model.PaidEnrollments.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-warning text-warning">
                            <i class="feather-gift"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">تسجيلات مجانية</span>
                            <h4 class="mb-0">@Model.FreeEnrollments.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text bg-soft-info text-info">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block">معدل النمو</span>
                            <h4 class="mb-0">@(Model.GrowthRate >= 0 ? "+" : "")@Model.GrowthRate.ToString("F1")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفاصيل التسجيلات", "Enrollment details")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="feather-download me-2"></i>تصدير
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/api/export/enrollments?format=csv"><i class="feather-file-text me-2"></i>@Html.T("CSV", "CSV")</a></li>
                                <li><a class="dropdown-item" href="/api/export/enrollments?format=excel"><i class="feather-file me-2"></i>@Html.T("إكسل", "Excel")</a></li>
                                <li><a class="dropdown-item" href="/api/export/enrollments?format=pdf"><i class="feather-file-text me-2"></i>@Html.T("PDF", "PDF")</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="window.print()"><i class="feather-printer me-2"></i>طباعة</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("عدد التسجيلات", "Enrollments")</th>
                                    <th>@Html.T("نسبة المدفوع", "Paid %")</th>
                                    <th>@Html.T("نسبة المجاني", "Free %")</th>
                                    <th>@Html.T("معدل الإكمال", "Completion rate")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DailyStats.Any())
                                {
                                    foreach (var stat in Model.DailyStats.OrderByDescending(s => s.Date).Take(10))
                                    {
                                        <tr>
                                            <td>@stat.Date.ToString("dd/MM/yyyy")</td>
                                            <td><span class="badge bg-soft-primary text-primary">@stat.TotalEnrollments</span></td>
                                            <td>
                                                <div class="progress" style="width: 100px; height: 8px;">
                                                    <div class="progress-bar bg-success" style="width: @stat.PaidPercentage%"></div>
                                                </div>
                                                <small>@stat.PaidPercentage.ToString("F1")%</small>
                                            </td>
                                            <td>
                                                <div class="progress" style="width: 100px; height: 8px;">
                                                    <div class="progress-bar bg-warning" style="width: @stat.FreePercentage%"></div>
                                                </div>
                                                <small>@stat.FreePercentage.ToString("F1")%</small>
                                            </td>
                                            <td>
                                                <span class="fw-semibold">@stat.CompletionRate.ToString("F1")%</span>
                                            </td>
                                            <td class="text-end">
                                                <a href="javascript:void(0);" class="avatar-text avatar-md">
                                                    <i class="feather-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <i class="feather-info fs-1 text-muted d-block mb-2"></i>
                                            لا توجد بيانات للفترة المحددة
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Date range picker
            $('#daterange').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY',
                    applyLabel: 'تطبيق',
                    cancelLabel: 'إلغاء'
                }
            }, function(start, end) {
                $('#fromDate').val(start.format('YYYY-MM-DD'));
                $('#toDate').val(end.format('YYYY-MM-DD'));
            });

            // Enrollments Chart
            var labels = @Html.Raw(Json.Serialize(Model.EnrollmentTrend.Select(x => x.Label)));
            var totalData = @Html.Raw(Json.Serialize(Model.EnrollmentTrend.Select(x => x.Value)));
            var paidData = @Html.Raw(Json.Serialize(Model.PaidEnrollmentTrend.Select(x => x.Value)));
            
            const ctx = document.getElementById('enrollmentsChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'إجمالي التسجيلات',
                        data: totalData,
                        borderColor: '#3454d1',
                        backgroundColor: 'rgba(52, 84, 209, 0.1)',
                        tension: 0.4,
                        fill: true
                    }, {
                        label: 'تسجيلات مدفوعة',
                        data: paidData,
                        borderColor: '#0ab39c',
                        backgroundColor: 'rgba(10, 179, 156, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
