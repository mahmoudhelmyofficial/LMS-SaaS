@using LMS.Services.Interfaces
@inject ISystemConfigurationService SystemConfigService
@model LMS.Areas.Admin.ViewModels.SalesReportViewModel

@{
    ViewData["Title"] = Html.T("تقرير المبيعات", "Sales report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير", "Reports"), null),
        (Html.T("تقرير المبيعات", "Sales report"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/daterangepicker.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-dollar-sign"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي المبيعات", "Total Sales")</span>
                            <h3 class="fw-bolder d-block">@Model.TotalSales.ToString("N0") @Html.T("ر.س", "SAR")</h3>
                        </div>
                    </div>
                    <div class="badge @(Model.TotalSalesGrowth >= 0 ? "bg-soft-success text-success" : "bg-soft-danger text-danger")">
                        <i class="feather-arrow-@(Model.TotalSalesGrowth >= 0 ? "up" : "down") fs-10 me-1"></i>
                        <span>@(Model.TotalSalesGrowth >= 0 ? "+" : "")@Model.TotalSalesGrowth.ToString("N1")%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-shopping-cart"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("عدد المبيعات", "Transaction Count")</span>
                            <h3 class="fw-bolder d-block">@Model.TransactionCount.ToString("N0")</h3>
                        </div>
                    </div>
                    <div class="badge bg-soft-primary text-primary">
                        <span>@Html.T("معاملة", "transaction(s)")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("متوسط قيمة المعاملة", "Average Transaction")</span>
                            <h3 class="fw-bolder d-block">@Model.AverageTransaction.ToString("N0") @Html.T("ر.س", "SAR")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-arrow-down-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("المبالغ المستردة", "Refunded Amount")</span>
                            <h3 class="fw-bolder d-block">@Model.RefundedAmount.ToString("N0") @Html.T("ر.س", "SAR")</h3>
                        </div>
                    </div>
                    <div class="badge bg-soft-danger text-danger">
                        <span>@Model.RefundRate.ToString("N1")%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" asp-action="Sales">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("الفترة الزمنية", "Date range")</label>
                                <input type="text" class="form-control" id="daterange" name="daterange" 
                                       value="@Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy")" />
                                <input type="hidden" name="from" id="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" />
                                <input type="hidden" name="to" id="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("نوع الدورة", "Course type")</label>
                                <select class="form-select" name="courseType">
                                    <option value="">@Html.T("الكل", "All")</option>
                                    @{
                                        var courseTypes = await SystemConfigService.GetConfigurationsByCategoryAsync("CourseTypes", "ar");
                                        foreach (var courseType in courseTypes)
                                        {
                                            <option value="@courseType.Key">@courseType.DisplayText</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("التصنيف", "Category")</label>
                                <select class="form-select" name="categoryId">
                                    <option value="">@Html.T("الكل", "All")</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-search me-2"></i>
                                    @Html.T("بحث", "Search")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تحليل المبيعات", "Sales analysis")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button class="btn btn-sm btn-light-brand active" data-view="daily">@Html.T("يومي", "Daily")</button>
                            <button class="btn btn-sm btn-light-brand" data-view="weekly">@Html.T("أسبوعي", "Weekly")</button>
                            <button class="btn btn-sm btn-light-brand" data-view="monthly">@Html.T("شهري", "Monthly")</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أفضل الدورات مبيعاً", "Top selling courses")</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (Model.TopCourses.Any())
                        {
                            @foreach (var course in Model.TopCourses)
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between px-0">
                                    <div>
                                        <h6 class="mb-0">@course.Title</h6>
                                        <small class="text-muted">@course.SalesCount @Html.T("مبيعة", "sold")</small>
                                    </div>
                                    <span class="fw-bold text-success">@course.TotalRevenue.ToString("N0") @Html.T("ر.س", "SAR")</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="feather-inbox fs-24 mb-2"></i>
                                <p class="mb-0">@Html.T("لا توجد مبيعات في هذه الفترة", "No sales in this period")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفاصيل المبيعات", "Sales details")</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("الطالب", "Student")</th>
                                    <th>@Html.T("المبلغ", "Amount")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentSales.Any())
                                {
                                    @foreach (var sale in Model.RecentSales)
                                    {
                                        <tr>
                                            <td>@sale.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@sale.CourseName</td>
                                            <td>@sale.StudentName</td>
                                            <td><span class="fw-bold text-success">@sale.Amount.ToString("N0") @Html.T("ر.س", "SAR")</span></td>
                                            <td><span class="badge bg-soft-success text-success">@sale.Status</span></td>
                                            <td class="text-end">
                                                <a href="@Url.Action("Details", "Payments", new { id = sale.PaymentId })" class="avatar-text avatar-md">
                                                    <i class="feather-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            <i class="feather-inbox fs-24 mb-2 d-block"></i>
                                            @Html.T("لا توجد مبيعات في هذه الفترة", "No sales in this period")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/daterangepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Date range picker
            $('#daterange').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY',
                    applyLabel: '@Html.Raw(Html.T("تطبيق", "Apply"))',
                    cancelLabel: '@Html.Raw(Html.T("إلغاء", "Cancel"))'
                }
            }, function(start, end) {
                $('#fromDate').val(start.format('YYYY-MM-DD'));
                $('#toDate').val(end.format('YYYY-MM-DD'));
            });

            // Sales Chart
            var chartLabels = @Html.Raw(Json.Serialize(Model.DailySales.Select(x => x.Label)));
            var chartData = @Html.Raw(Json.Serialize(Model.DailySales.Select(x => x.Value)));

            const ctx = document.getElementById('salesChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: '@Html.Raw(Html.T("المبيعات", "Sales"))',
                        data: chartData,
                        borderColor: '#3454d1',
                        backgroundColor: 'rgba(52, 84, 209, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString() + ' @Html.Raw(Html.T("ر.س", "SAR"))';
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}
