@{
    ViewData["Title"] = Html.T("تقرير المدرسين", "Instructors report");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("التقارير", "Reports"), Url.Action("Index")),
        (Html.T("المدرسين", "Instructors"), "")
    };
}

<div class="main-content">
    <!-- Date Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                    <input type="date" name="from" class="form-control" value="@(((DateTime)ViewBag.FromDate).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                    <input type="date" name="to" class="form-control" value="@(((DateTime)ViewBag.ToDate).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="feather-filter me-2"></i>تصفية
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-primary rounded">
                                <i class="feather-user-check fs-4 text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.TotalInstructors</h3>
                            <span class="text-muted fs-12">إجمالي المدرسين</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-success rounded">
                                <i class="feather-check-circle fs-4 text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.ApprovedInstructors</h3>
                            <span class="text-muted fs-12">مدرسين معتمدين</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-warning rounded">
                                <i class="feather-clock fs-4 text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.PendingInstructors</h3>
                            <span class="text-muted fs-12">طلبات معلقة</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-info rounded">
                                <i class="feather-dollar-sign fs-4 text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.TotalPayouts.ToString("N0") ج.م</h3>
                            <span class="text-muted fs-12">إجمالي المدفوعات</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Top Instructors -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="feather-award me-2"></i>أفضل المدرسين</h5>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.TopInstructors != null && ((List<dynamic>)ViewBag.TopInstructors).Any())
                    {
                        <div class="list-group list-group-flush">
                            @{int rank = 1;}
                            @foreach (var instructor in (List<dynamic>)ViewBag.TopInstructors)
                            {
                                <div class="list-group-item d-flex align-items-center">
                                    <div class="avatar avatar-sm bg-@(rank <= 3 ? "warning" : "light") rounded-circle me-3">
                                        <span class="fw-bold @(rank <= 3 ? "text-white" : "text-muted")">@rank</span>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0">@instructor.Name</h6>
                                        <small class="text-muted">@instructor.PublishedCourses دورة • @instructor.TotalStudents طالب</small>
                                    </div>
                                    <div class="text-end">
                                        <strong class="text-success">@instructor.TotalEarnings.ToString("N0") ج.م</strong>
                                        @if (instructor.AverageRating > 0)
                                        {
                                            <small class="d-block text-warning">
                                                <i class="feather-star"></i> @instructor.AverageRating.ToString("N1")
                                            </small>
                                        }
                                    </div>
                                </div>
                                rank++;
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">لا توجد بيانات</p>
                    }
                </div>
            </div>
        </div>

        <!-- Instructor Details Table -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="feather-list me-2"></i>تفاصيل المدرسين</h5>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="feather-download me-1"></i>تصدير
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="feather-file me-2"></i>@Html.T("إكسل", "Excel")</a></li>
                            <li><a class="dropdown-item" href="#"><i class="feather-file-text me-2"></i>@Html.T("CSV", "CSV")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.T("المدرس", "Instructor")</th>
                                    <th>@Html.T("الدورات", "Courses")</th>
                                    <th>@Html.T("الطلاب", "Students")</th>
                                    <th>@Html.T("الأرباح", "Earnings")</th>
                                    <th>@Html.T("التقييم", "Rating")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.InstructorStats != null)
                                {
                                    foreach (var instructor in (List<dynamic>)ViewBag.InstructorStats)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar avatar-sm bg-light-primary rounded-circle me-2">
                                                        <span class="fw-semibold text-primary">@instructor.Name.ToString().Substring(0, 1)</span>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@instructor.Name</h6>
                                                        <small class="text-muted">@instructor.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@instructor.TotalCourses إجمالي</span>
                                                <span class="badge bg-success">@instructor.PublishedCourses منشورة</span>
                                            </td>
                                            <td><strong>@instructor.TotalStudents</strong></td>
                                            <td><strong class="text-success">@instructor.TotalEarnings.ToString("N0") ج.م</strong></td>
                                            <td>
                                                @if (instructor.AverageRating > 0)
                                                {
                                                    <span class="text-warning">
                                                        <i class="feather-star"></i> @instructor.AverageRating.ToString("N1")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

