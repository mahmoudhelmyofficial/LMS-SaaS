@model (string Icon, string Title, string Value, string? Change, bool IsPositive, string? Subtitle)

<div class="col-xxl-3 col-md-6">
    <div class="card stretch stretch-full">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded">
                        <i class="@Model.Icon"></i>
                    </div>
                    <a href="javascript:void(0);" class="fw-bold d-block">
                        <span class="text-truncate-1-line">@Model.Title</span>
                        <span class="fs-24 fw-bolder d-block">@Model.Value</span>
                        @if (!string.IsNullOrEmpty(Model.Subtitle))
                        {
                            <span class="fs-11 text-muted">@Model.Subtitle</span>
                        }
                    </a>
                </div>
                @if (!string.IsNullOrEmpty(Model.Change))
                {
                    <div class="badge @(Model.IsPositive ? "bg-soft-success text-success" : "bg-soft-danger text-danger")">
                        <i class="feather-arrow-@(Model.IsPositive ? "up" : "down") fs-10 me-1"></i>
                        <span>@Model.Change</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

