@* Quick Actions Panel - Admin Area *@
<div class="quick-actions-panel mb-3">
    <div class="quick-actions-header px-3 py-2">
        <small class="text-muted fw-semibold">@Html.T("إجراءات سريعة", "Quick Actions")</small>
    </div>
    <div class="quick-actions-grid px-3 pb-3">
        <div class="row g-2">
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Courses" asp-action="Pending" 
                   class="quick-action-btn btn btn-soft-warning btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-book mb-1"></i>
                    <small>@Html.T("مراجعة الدورات", "Review Courses")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Instructors" asp-action="Applications" 
                   class="quick-action-btn btn btn-soft-info btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-user-check mb-1"></i>
                    <small>@Html.T("طلبات المدرسين", "Instructor Applications")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Support" asp-action="Index" asp-route-status="Open"
                   class="quick-action-btn btn btn-soft-danger btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-headphones mb-1"></i>
                    <small>@Html.T("تذاكر الدعم", "Support Tickets")</small>
                </a>
            </div>
            <div class="col-6">
                <a asp-area="Admin" asp-controller="Analytics" asp-action="Index" 
                   class="quick-action-btn btn btn-soft-success btn-sm w-100 d-flex flex-column align-items-center py-2">
                    <i class="feather-bar-chart-2 mb-1"></i>
                    <small>@Html.T("التحليلات", "Analytics")</small>
                </a>
            </div>
        </div>
    </div>
</div>
