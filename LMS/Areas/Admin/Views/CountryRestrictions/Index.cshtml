@model IEnumerable<LMS.Domain.Entities.Security.CountryRestriction>

@{
    ViewData["Title"] = Html.T("القيود الجغرافية", "Country restrictions");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الأمان", "Security"), null),
        (Html.T("القيود الجغرافية", "Country Restrictions"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة قيد جديد", "Add Restriction"), "feather-plus", Url.Action("Create", "CountryRestrictions"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                        <i class="feather-globe"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("إجمالي الدول", "Total Countries")</span>
                        <h3 class="fw-bolder">@Model.Count().ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                        <i class="feather-x-circle"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("دول محظورة", "Blocked Countries")</span>
                        <h3 class="fw-bolder">@Model.Count(c => c.IsBlocked).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                        <i class="feather-check-circle"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("دول مسموحة", "Allowed Countries")</span>
                        <h3 class="fw-bolder">@Model.Count(c => !c.IsBlocked).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.T("الدولة", "Country")</th>
                                    <th>@Html.T("كود الدولة", "Country Code")</th>
                                    <th>@Html.T("السبب", "Reason")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th>@Html.T("تاريخ الإضافة", "Date Added")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var restriction in Model.OrderBy(r => r.CountryName))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <i class="feather-map-pin"></i>
                                                <span class="fw-bold">@restriction.CountryName</span>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-soft-secondary text-secondary">@restriction.CountryCode</span></td>
                                        <td>@(restriction.Reason ?? "-")</td>
                                        <td>
                                            @if (restriction.IsBlocked)
                                            {
                                                <span class="badge bg-soft-danger text-danger">
                                                    <i class="feather-x-circle fs-12 me-1"></i>
                                                    @Html.T("محظورة", "Blocked")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-success text-success">
                                                    <i class="feather-check-circle fs-12 me-1"></i>
                                                    @Html.T("مسموحة", "Allowed")
                                                </span>
                                            }
                                        </td>
                                        <td>@restriction.CreatedAt.ToString("dd/MM/yyyy")</td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Edit", "CountryRestrictions", new { id = restriction.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                    <i class="feather-edit"></i>
                                                </a>
                                                <form method="post" action="@Url.Action("Delete", "CountryRestrictions", new { id = restriction.Id })" style="display:inline;" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد؟", "Are you sure?"))')">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="avatar-text avatar-md border-0 bg-transparent text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                        <i class="feather-trash-2"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

