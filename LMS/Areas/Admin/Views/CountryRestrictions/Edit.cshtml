@model LMS.Areas.Admin.ViewModels.CountryRestrictionEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل قيد جغرافي", "Edit country restriction");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الأمان", "Security"), null),
        (Html.T("القيود الجغرافية", "Country Restrictions"), Url.Action("Index", "CountryRestrictions")),
        (Html.T("تعديل", "Edit"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <div class="card mb-4">
            <div class="card-header"><h5 class="card-title">@Html.T("معلومات القيد", "Restriction Details")</h5></div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CountryName" class="form-label required">@Html.T("اسم الدولة", "Country Name")</label>
                        <input asp-for="CountryName" class="form-control" required />
                        <span asp-validation-for="CountryName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CountryCode" class="form-label required">@Html.T("كود الدولة (ISO)", "Country Code (ISO)")</label>
                        <input asp-for="CountryCode" class="form-control" required />
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Reason" class="form-label">@Html.T("السبب", "Reason")</label>
                        <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input asp-for="IsBlocked" class="form-check-input" type="checkbox" />
                            <label asp-for="IsBlocked" class="form-check-label">@Html.T("حظر الدولة", "Block Country")</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex gap-2 justify-content-end">
                    <a href="@Url.Action("Index")" class="btn btn-light"><i class="feather-x me-2"></i>@Html.T("إلغاء", "Cancel")</a>
                    <button type="submit" class="btn btn-primary"><i class="feather-save me-2"></i>@Html.T("حفظ التغييرات", "Save Changes")</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

