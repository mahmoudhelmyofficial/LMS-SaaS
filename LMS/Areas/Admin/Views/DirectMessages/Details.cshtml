@model LMS.Domain.Entities.Social.DirectMessage

@{
    ViewData["Title"] = Html.T("تفاصيل الرسالة", "Message details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التواصل الاجتماعي", "Social"), null),
        (Html.T("الرسائل المباشرة", "Direct messages"), Url.Action("Index", "DirectMessages")),
        (Html.T("تفاصيل الرسالة", "Message details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .message-header {
            background: var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%));
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
        }
        .message-content {
            background: #f9fafb;
            padding: 30px;
            border-radius: 12px;
            border-right: 4px solid #3b82f6;
            line-height: 1.8;
            font-size: 1.05rem;
        }
        .user-card {
            background: white;
            border: 1px solid #e5e7eb;
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s;
        }
        .user-card:hover {
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            transform: translateY(-2px);
        }
        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.5rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Message Header -->
    <div class="message-header">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h3 class="text-white mb-0">
                <i class="feather-mail me-2"></i>
                @(!string.IsNullOrEmpty(Model.Subject) ? Model.Subject : "رسالة مباشرة")
            </h3>
            @if (Model.IsRead)
            {
                <span class="badge bg-white text-success">
                    <i class="feather-check-circle me-1"></i>
                    مقروءة
                </span>
            }
            else
            {
                <span class="badge bg-white text-warning">
                    <i class="feather-circle me-1"></i>
                    غير مقروءة
                </span>
            }
        </div>
        <div class="d-flex align-items-center gap-3 text-white-50">
            <span>
                <i class="feather-clock me-1"></i>
                @Model.SentAt.ToString("dd/MM/yyyy - HH:mm")
            </span>
            @if (Model.ReadAt.HasValue)
            {
                <span>
                    <i class="feather-check-double me-1"></i>
                    قُرئت في @Model.ReadAt.Value.ToString("dd/MM/yyyy - HH:mm")
                </span>
            }
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Sender & Recipient -->
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="user-card">
                        <div class="d-flex align-items-center gap-3">
                            <div class="user-avatar bg-soft-primary text-primary">
                                @if (Model.Sender != null)
                                {
                                    @Model.Sender.FirstName?.Substring(0, 1)
                                }
                                else
                                {
                                    <i class="feather-user"></i>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block">المرسل</small>
                                @if (Model.Sender != null)
                                {
                                    <h6 class="fw-bold mb-1">@Model.Sender.FirstName @Model.Sender.LastName</h6>
                                    <small class="text-muted">@Model.Sender.Email</small>
                                }
                                else
                                {
                                    <h6 class="fw-bold mb-0 text-muted">مستخدم محذوف</h6>
                                }
                            </div>
                            @if (Model.Sender != null)
                            {
                                <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.SenderId" class="btn btn-sm btn-light">
                                    <i class="feather-external-link"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="user-card">
                        <div class="d-flex align-items-center gap-3">
                            <div class="user-avatar bg-soft-success text-success">
                                @if (Model.Recipient != null)
                                {
                                    @Model.Recipient.FirstName?.Substring(0, 1)
                                }
                                else
                                {
                                    <i class="feather-user"></i>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <small class="text-muted d-block">المستلم</small>
                                @if (Model.Recipient != null)
                                {
                                    <h6 class="fw-bold mb-1">@Model.Recipient.FirstName @Model.Recipient.LastName</h6>
                                    <small class="text-muted">@Model.Recipient.Email</small>
                                }
                                else
                                {
                                    <h6 class="fw-bold mb-0 text-muted">مستخدم محذوف</h6>
                                }
                            </div>
                            @if (Model.Recipient != null)
                            {
                                <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.RecipientId" class="btn btn-sm btn-light">
                                    <i class="feather-external-link"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Message Content -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-message-square me-2"></i>
                        محتوى الرسالة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="message-content">
                        @Html.Raw(Model.MessageBody)
                    </div>
                </div>
            </div>

            <!-- Conversation Thread -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-message-circle me-2"></i>
                        سلسلة المحادثة
                    </h5>
                    <div class="card-header-action">
                        <button type="button" class="btn btn-light btn-sm" onclick="loadConversation()">
                            <i class="feather-refresh-cw me-2"></i>
                            تحديث
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        عرض الرسائل السابقة والتالية في هذه المحادثة
                    </div>
                    <div id="conversationThread">
                        <p class="text-center text-muted">اضغط على "تحديث" لعرض سلسلة المحادثة</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Message Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>
                        معلومات الرسالة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="vstack gap-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">المعرف:</span>
                            <span class="fw-semibold">#@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">الحالة:</span>
                            @if (Model.IsRead)
                            {
                                <span class="badge bg-soft-success text-success">مقروءة</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">غير مقروءة</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">تاريخ الإرسال:</span>
                            <span class="fw-semibold">@Model.SentAt.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">وقت الإرسال:</span>
                            <span class="fw-semibold">@Model.SentAt.ToString("HH:mm")</span>
                        </div>
                        @if (Model.ReadAt.HasValue)
                        {
                            <hr class="my-2">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">تاريخ القراءة:</span>
                                <span class="fw-semibold">@Model.ReadAt.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">وقت القراءة:</span>
                                <span class="fw-semibold">@Model.ReadAt.Value.ToString("HH:mm")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">مدة الاستجابة:</span>
                                <span class="fw-semibold text-primary">
                                    @{
                                        var responseTime = Model.ReadAt.Value - Model.SentAt;
                                        if (responseTime.TotalMinutes < 60)
                                        {
                                            @responseTime.TotalMinutes.ToString("0") <text> دقيقة</text>
                                        }
                                        else if (responseTime.TotalHours < 24)
                                        {
                                            @responseTime.TotalHours.ToString("0") <text> ساعة</text>
                                        }
                                        else
                                        {
                                            @responseTime.Days <text> يوم</text>
                                        }
                                    }
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-zap me-2"></i>
                        إجراءات سريعة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-light-brand" onclick="viewConversation()">
                            <i class="feather-message-circle me-2"></i>
                            عرض المحادثة الكاملة
                        </button>
                        <button type="button" class="btn btn-light-brand" onclick="exportMessage()">
                            <i class="feather-download me-2"></i>
                            تصدير الرسالة
                        </button>
                        <button type="button" class="btn btn-light-brand" onclick="window.print()">
                            <i class="feather-printer me-2"></i>
                            طباعة
                        </button>
                        <hr class="my-2">
                        <button type="button" class="btn btn-danger" onclick="deleteMessage()">
                            <i class="feather-trash-2 me-2"></i>
                            حذف الرسالة
                        </button>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-bar-chart me-2"></i>
                        إحصائيات
                    </h5>
                </div>
                <div class="card-body">
                    <div class="vstack gap-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">عدد الأحرف:</span>
                            <span class="fw-bold text-primary">@Model.MessageBody.Length</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">عدد الكلمات:</span>
                            <span class="fw-bold text-info">@Model.MessageBody.Split(' ', StringSplitOptions.RemoveEmptyEntries).Length</span>
                        </div>
                        <hr class="my-2">
                        <div class="alert alert-light mb-0">
                            <i class="feather-info me-2"></i>
                            <small>إحصائيات إضافية قيد التطوير</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        window.__DirectMessagesDetailsT = { deleteConfirm: '@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الرسالة؟", "Are you sure you want to delete this message?").Replace("'", "\\'"))' };
        function deleteMessage() {
            if (confirm(window.__DirectMessagesDetailsT.deleteConfirm)) {
                document.getElementById('deleteForm').submit();
            }
        }

        function viewConversation() {
            // Navigate to conversation between these two users
            const senderId = '@Model.SenderId';
            const recipientId = '@Model.RecipientId';
            window.location.href = '@Url.Action("Index", "DirectMessages")' + 
                '?senderId=' + senderId + '&recipientId=' + recipientId;
        }

        function loadConversation() {
            $('#conversationThread').html('<div class="text-center py-4"><div class="spinner-border text-primary" role="status"></div></div>');
            
            setTimeout(() => {
                $('#conversationThread').html(`
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        ميزة عرض سلسلة المحادثة قيد التطوير
                    </div>
                `);
            }, 1000);
        }

        function exportMessage() {
            const content = {
                subject: '@Model.Subject',
                sender: '@Model.Sender?.FirstName @Model.Sender?.LastName',
                recipient: '@Model.Recipient?.FirstName @Model.Recipient?.LastName',
                sentAt: '@Model.SentAt.ToString("dd/MM/yyyy HH:mm")',
                message: '@Html.Raw(Model.MessageBody.Replace("\n", "\\n").Replace("\"", "\\\""))'
            };

            const dataStr = JSON.stringify(content, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
            
            const exportFileDefaultName = 'message_' + @Model.Id + '.json';
            
            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
        }
    </script>
}

