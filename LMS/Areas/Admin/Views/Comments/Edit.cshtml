@model LMS.Domain.Entities.Social.Comment

@{
    ViewData["Title"] = Html.T("تعديل التعليق", "Edit comment");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التواصل", "Communications"), null),
        (Html.T("التعليقات", "Comments"), Url.Action("Index", "Comments")),
        (Html.T("تعديل التعليق", "Edit comment"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .edit-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .original-content {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border-right: 4px solid #667eea;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Edit Header -->
    <div class="edit-header">
        <div class="d-flex align-items-center gap-3">
            <div class="avatar-text avatar-xl bg-white bg-opacity-25 text-white">
                <i class="feather-edit-3 fs-1"></i>
            </div>
            <div>
                <h3 class="text-white mb-2">تعديل التعليق</h3>
                <p class="text-white opacity-75 mb-0">
                    @if (Model.Author != null)
                    {
                        @Model.Author.FirstName @Model.Author.LastName
                    }
                    - @Model.EntityType
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Edit Form -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-edit me-2"></i>
                        تعديل المحتوى
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-4">
                            <label class="form-label">@Html.T("محتوى التعليق", "Comment content") <span class="text-danger">*</span></label>
                            <textarea name="content" class="form-control" rows="6" 
                                      placeholder="@Html.T("أدخل محتوى التعليق...", "Enter comment content...")" required>@Model.Content</textarea>
                            <small class="text-muted">
                                <i class="feather-info me-1"></i>
                                @Html.T("سيتم تحديث التعليق وتسجيل أنه تم تعديله", "The comment will be updated and marked as edited")
                            </small>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                حفظ التعديلات
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Comment Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>
                        معلومات التعليق
                    </h5>
                </div>
                <div class="card-body">
                    <div class="vstack gap-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">المعرف:</span>
                            <span class="fw-semibold">#@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">النوع:</span>
                            <span class="fw-semibold">@Model.EntityType</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">الحالة:</span>
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-soft-success text-success">معتمد</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">بانتظار المراجعة</span>
                            }
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">تاريخ الإنشاء:</span>
                            <span class="fw-semibold">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                        @if (Model.IsEdited && Model.EditedAt.HasValue)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">آخر تعديل:</span>
                                <span class="fw-semibold">@Model.EditedAt.Value.ToString("dd/MM/yyyy")</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Author Info -->
            @if (Model.Author != null)
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-user me-2"></i>
                            كاتب التعليق
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                            @Model.Author.FirstName?.Substring(0, 1)
                        </div>
                        <h6 class="mb-1">@Model.Author.FirstName @Model.Author.LastName</h6>
                        <p class="text-muted fs-12 mb-0">@Model.Author.Email</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
