@model LMS.Areas.Admin.ViewModels.LandingPageSettingsViewModel
@{
    ViewData["Title"] = Html.T("إعدادات الصفحة الرئيسية", "Landing Page Settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings", new { area = "Admin" })),
        (Html.T("إعدادات الصفحة الرئيسية", "Landing Page Settings"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-area="Admin" asp-controller="LandingPageSettings" asp-action="Index" method="post">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("تفعيل الصفحة الرئيسية", "Enable landing page")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="Enabled" class="form-check-input" type="checkbox" id="enabled" />
                            <label class="form-check-label" for="enabled">
                                @Html.T("عرض الصفحة الرئيسية للزوار غير المسجلين بدلاً من صفحة تسجيل الدخول", "Show landing page to anonymous visitors instead of login")
                            </label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المظهر", "Appearance")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="LogoUrl" class="form-label">@Html.T("رابط الشعار (اختياري)", "Logo URL (optional)")</label>
                            <input asp-for="LogoUrl" class="form-control" placeholder="/assets/images/logo.png" />
                            <small class="text-muted">@Html.T("اتركه فارغاً لاستخدام شعار المنصة الافتراضي", "Leave empty to use default platform logo")</small>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="PrimaryColor" class="form-label">@Html.T("اللون الأساسي", "Primary color")</label>
                                <input asp-for="PrimaryColor" type="text" class="form-control" placeholder="#0d6efd" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SecondaryColor" class="form-label">@Html.T("اللون الثانوي", "Secondary color")</label>
                                <input asp-for="SecondaryColor" type="text" class="form-control" placeholder="#6c757d" />
                            </div>
                        </div>
                        <div class="mt-3">
                            <label asp-for="FontFamily" class="form-label">@Html.T("خط الواجهة", "Font family")</label>
                            <select asp-for="FontFamily" class="form-select">
                                <option value="">@Html.T("افتراضي (حسب اللغة)", "Default (by language)")</option>
                                <option value="Cairo">Cairo</option>
                                <option value="Segoe UI">Segoe UI</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("قسم عنّا", "About section")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="AboutTitleAr" class="form-label">@Html.T("العنوان (عربي)", "Title (Arabic)")</label>
                                <input asp-for="AboutTitleAr" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AboutTitleEn" class="form-label">@Html.T("العنوان (إنجليزي)", "Title (English)")</label>
                                <input asp-for="AboutTitleEn" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="AboutTextAr" class="form-label">@Html.T("النص (عربي)", "Text (Arabic)")</label>
                                <textarea asp-for="AboutTextAr" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="col-12">
                                <label asp-for="AboutTextEn" class="form-label">@Html.T("النص (إنجليزي)", "Text (English)")</label>
                                <textarea asp-for="AboutTextEn" class="form-control" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("اللغة الافتراضية للصفحة الرئيسية", "Default landing language")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-0">
                            <label asp-for="DefaultLanguage" class="form-label">@Html.T("اختر اللغة التي يراها الزائر لأول مرة", "Choose the language for first-time visitors")</label>
                            <select asp-for="DefaultLanguage" class="form-select">
                                <option value="browser">@Html.T("حسب المتصفح", "Use browser")</option>
                                <option value="ar">@Html.T("العربية", "Arabic")</option>
                                <option value="en">@Html.T("English", "English")</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ الإعدادات", "Save settings")
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
