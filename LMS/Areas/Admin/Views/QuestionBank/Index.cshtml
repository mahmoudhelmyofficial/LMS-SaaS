@model IEnumerable<LMS.Domain.Entities.Assessments.QuestionBank>

@{
    ViewData["Title"] = Html.T("بنك الأسئلة", "Question Bank");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقييم والاختبارات", "Assessments & Quizzes"), null),
        (Html.T("بنك الأسئلة", "Question Bank"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة بنك أسئلة", "Add Question Bank"), "feather-plus", Url.Action("Create", "QuestionBank"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
    
    var totalBanks = Model.Count();
    var totalQuestions = Model.Sum(b => b.Items?.Count ?? 0);
    var publicBanks = Model.Count(b => b.IsPublic);
    var activeBanks = Model.Count(b => b.IsActive);
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .bank-card {
            transition: all 0.3s ease;
            border: 1px solid #e5e7eb;
        }
        .bank-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transform: translateY(-3px);
            border-color: #3b82f6;
        }
        .bank-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.5rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-database"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي البنوك", "Total Banks")</span>
                            <h3 class="fw-bolder d-block">@totalBanks.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-help-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الأسئلة", "Total Questions")</span>
                            <h3 class="fw-bolder d-block">@totalQuestions.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-globe"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("بنوك عامة", "Public Banks")</span>
                            <h3 class="fw-bolder d-block">@publicBanks.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("بنوك نشطة", "Active Banks")</span>
                            <h3 class="fw-bolder d-block">@activeBanks.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-item" data-filter="all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <div class="dropdown-divider"></div>
    <a href="javascript:void(0);" class="dropdown-item filter-item" data-filter="active">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("نشط", "Active")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-item" data-filter="inactive">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("غير نشط", "Inactive")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-item" data-filter="public">
        <i class="feather-globe me-3"></i>
        <span>@Html.T("عام", "Public")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-item" data-filter="private">
        <i class="feather-lock me-3"></i>
        <span>@Html.T("خاص", "Private")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var bank in Model.OrderByDescending(b => b.CreatedAt))
            {
                <div class="col-xl-4 col-lg-6 mb-4 bank-item" 
                     data-active="@bank.IsActive.ToString().ToLower()" 
                     data-public="@bank.IsPublic.ToString().ToLower()">
                    <div class="card bank-card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <div class="bank-icon @(bank.IsActive ? "bg-soft-primary text-primary" : "bg-soft-secondary text-secondary")">
                                    <i class="feather-database"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-1">
                                        @if (bank.IsActive)
                                        {
                                            <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-secondary text-secondary">@Html.T("غير نشط", "Inactive")</span>
                                        }
                                        @if (bank.IsPublic)
                                        {
                                            <span class="badge bg-soft-info text-info">@Html.T("عام", "Public")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-warning text-warning">@Html.T("خاص", "Private")</span>
                                        }
                                    </div>
                                    <h5 class="fw-bold mb-1">@bank.Name</h5>
                                    @if (!string.IsNullOrEmpty(bank.Description))
                                    {
                                        <p class="text-muted small mb-0 text-truncate-2-line">@bank.Description</p>
                                    }
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="d-flex gap-3">
                                    <div class="text-center">
                                        <h5 class="fw-bold text-primary mb-0">@(bank.Items?.Count ?? 0)</h5>
                                        <small class="text-muted">@Html.T("أسئلة", "Questions")</small>
                                    </div>
                                    <div class="text-center">
                                        <h5 class="fw-bold text-success mb-0">@bank.UsageCount</h5>
                                        <small class="text-muted">@Html.T("استخدام", "Usage")</small>
                                    </div>
                                </div>
                                @if (bank.QuestionCategory != null)
                                {
                                    <span class="badge bg-soft-secondary text-secondary">
                                        <i class="feather-folder me-1"></i>
                                        @bank.QuestionCategory.Name
                                    </span>
                                }
                            </div>

                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Details", "QuestionBank", new { id = bank.Id })" class="btn btn-sm btn-primary flex-grow-1">
                                    <i class="feather-eye me-1"></i>
                                    @Html.T("عرض", "View")
                                </a>
                                <a href="@Url.Action("Edit", "QuestionBank", new { id = bank.Id })" class="btn btn-sm btn-light-brand">
                                    <i class="feather-edit"></i>
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                        <i class="feather-more-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("AddQuestion", "QuestionBank", new { bankId = bank.Id })">
                                                <i class="feather-plus me-3"></i>
                                                @Html.T("إضافة سؤال", "Add Question")
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-action="Duplicate" asp-route-id="@bank.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="feather-copy me-3"></i>
                                                    @Html.T("نسخ البنك", "Duplicate Bank")
                                                </button>
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@bank.Id" method="post" class="d-inline" 
                                                  onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا البنك؟ سيتم حذف جميع الأسئلة المرتبطة به.", "Are you sure you want to delete this bank? All associated questions will be deleted.").Replace("'", "\\'"))');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="feather-trash-2 me-3"></i>
                                                    @Html.T("حذف", "Delete")
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">
                                <i class="feather-calendar me-1"></i>
                                @Html.T("تم الإنشاء", "Created"): @bank.CreatedAt.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                            <i class="feather-database" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold mb-2">@Html.T("لا توجد بنوك أسئلة", "No question banks")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء بنك أسئلة لتنظيم أسئلتك", "Start by creating a question bank to organize your questions")</p>
                        <a href="@Url.Action("Create", "QuestionBank")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إنشاء بنك أسئلة", "Create Question Bank")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Filter functionality
            $('.filter-item').on('click', function() {
                var filter = $(this).data('filter');
                
                if (filter === 'all') {
                    $('.bank-item').show();
                } else if (filter === 'active') {
                    $('.bank-item').hide();
                    $('.bank-item[data-active="true"]').show();
                } else if (filter === 'inactive') {
                    $('.bank-item').hide();
                    $('.bank-item[data-active="false"]').show();
                } else if (filter === 'public') {
                    $('.bank-item').hide();
                    $('.bank-item[data-public="true"]').show();
                } else if (filter === 'private') {
                    $('.bank-item').hide();
                    $('.bank-item[data-public="false"]').show();
                }
            });
        });
    </script>
}
