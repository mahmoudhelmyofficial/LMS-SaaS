@model IEnumerable<LMS.Domain.Entities.Security.LoginLog>

@{
    ViewData["Title"] = Html.T("سجل تسجيلات الدخول", "Login logs");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الأمان", "Security"), null),
        (Html.T("سجل الدخول", "Login Logs"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-log-in"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("محاولات اليوم", "Today's Attempts")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(l => l.CreatedAt.Date == DateTime.Today).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("ناجحة", "Successful")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(l => l.IsSuccessful).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-x-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("فاشلة", "Failed")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(l => !l.IsSuccessful).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-alert-triangle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("مشبوهة", "Suspicious")</span>
                            <h3 class="fw-bolder d-block">0</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-successful">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("ناجحة", "Successful")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-failed">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("فاشلة", "Failed")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-today">
        <i class="feather-calendar me-3"></i>
        <span>@Html.T("اليوم", "Today")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="loginLogsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("المستخدم", "User")</th>
                                    <th>@Html.T("عنوان IP", "IP Address")</th>
                                    <th>@Html.T("الموقع", "Location")</th>
                                    <th>@Html.T("المتصفح / الجهاز", "Browser / Device")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.OrderByDescending(l => l.CreatedAt))
                                {
                                    <tr>
                                        <td>
                                            @if (log.User != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @log.User.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <span class="fw-semibold d-block">@log.User.FirstName @log.User.LastName</span>
                                                        <small class="text-muted">@log.User.Email</small>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Html.T("محاولة فاشلة", "Failed attempt")</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="font-monospace">@log.IpAddress</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.Country))
                                            {
                                                <div>
                                                    <span class="d-block">@log.Country</span>
                                                    @if (!string.IsNullOrEmpty(log.City))
                                                    {
                                                        <small class="text-muted">@log.City</small>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Html.T("غير محدد", "Not specified")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.UserAgent))
                                            {
                                                <div>
                                                    <span class="d-block small">@(log.Browser ?? "Unknown")</span>
                                                    <small class="text-muted">@(log.Device ?? "Desktop")</small>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="small">@log.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <span class="text-muted smaller">@log.CreatedAt.ToString("hh:mm:ss tt")</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (log.IsSuccessful)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("ناجح", "Successful")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-danger text-danger">@Html.T("فاشل", "Failed")</span>
                                            }
                                            @if (!string.IsNullOrEmpty(log.FailureReason))
                                            {
                                                <span class="badge bg-soft-warning text-warning ms-1">@log.FailureReason</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "LoginLogs", new { id = log.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                @if (!log.IsSuccessful)
                                                {
                                                    <button class="avatar-text avatar-md text-danger" data-bs-toggle="tooltip" title="@Html.T("حظر IP", "Block IP")" onclick="blockIp('@log.IpAddress')">
                                                        <i class="feather-shield-off"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#loginLogsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[4, "desc"]],
                "pageLength": 50
            });

            $('.filter-all').on('click', function() {
                table.search('').columns().search('').draw();
            });

            $('.filter-successful').on('click', function() {
                table.column(5).search('ناجح').draw();
            });

            $('.filter-failed').on('click', function() {
                table.column(5).search('فاشل').draw();
            });

            $('.filter-today').on('click', function() {
                var today = new Date().toLocaleDateString('ar-SA');
                table.column(4).search(today).draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function blockIp(ipAddress) {
            if (confirm('@(Html.T("هل تريد حظر عنوان IP: ", "Do you want to block IP address: "))' + ipAddress + '@Html.T("؟", "?")')) {
                // Block IP logic
                alert('@Html.Raw(Html.T("تم حظر عنوان IP بنجاح", "IP address blocked successfully").Replace("'", "\\'"))');
            }
        }
    </script>
}

