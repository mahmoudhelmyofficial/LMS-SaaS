@model LMS.Domain.Entities.Security.LoginLog

@{
    ViewData["Title"] = Html.T("تفاصيل سجل الدخول", "Login log details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("الأمان", "Security"), Url.Action("Dashboard", "Security")),
        (Html.T("سجلات الدخول", "Login logs"), Url.Action("Index", "LoginLogs")),
        (Html.T("التفاصيل", "Details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .info-card {
            border-right: 4px solid #3454d1;
            transition: all 0.3s ease;
        }
        .info-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .detail-label {
            font-weight: 600;
            color: #6c757d;
            min-width: 150px;
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            animation: pulse 2s infinite;
        }
        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Status Card -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card @(Model.IsSuccessful ? "border-success" : "border-danger")">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-text avatar-xl @(Model.IsSuccessful ? "bg-soft-success text-success" : "bg-soft-danger text-danger")">
                                    <i class="feather-@(Model.IsSuccessful ? "check-circle" : "x-circle")"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1">
                                        محاولة تسجيل دخول @(Model.IsSuccessful ? "ناجحة" : "فاشلة")
                                    </h4>
                                    <p class="text-muted mb-0">
                                        <i class="feather-calendar me-2"></i>
                                        @Model.LoginAt.ToString("dd MMMM yyyy - hh:mm tt")
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 text-end">
                            <a asp-controller="LoginLogs" asp-action="Index" class="btn btn-light-brand">
                                <i class="feather-arrow-right me-2"></i>
                                العودة للقائمة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Information -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card info-card h-100">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-user me-2"></i>
                        معلومات المستخدم
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.User != null)
                    {
                        <div class="text-center mb-4">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                                @Model.User.FirstName?.Substring(0, 1)
                            </div>
                            <h5 class="mb-1">@Model.User.FirstName @Model.User.LastName</h5>
                            <p class="text-muted mb-0">@Model.User.Email</p>
                        </div>

                        <div class="border-top pt-3">
                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <span class="detail-label">رقم المستخدم:</span>
                                        <span class="fw-semibold">@Model.UserId</span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <span class="detail-label">رقم الهاتف:</span>
                                        <span>@(Model.User.PhoneNumber ?? "غير محدد")</span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <span class="detail-label">تاريخ التسجيل:</span>
                                        <span>@Model.User.CreatedAt.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <span class="detail-label">حالة الحساب:</span>
                                        @if (Model.User.IsDeleted)
                                        {
                                            <span class="badge bg-soft-danger text-danger">محذوف</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-soft-success text-success">نشط</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="avatar-text avatar-xl bg-soft-warning text-warning mx-auto mb-3">
                                <i class="feather-user-x"></i>
                            </div>
                            <p class="text-muted">المستخدم غير موجود أو محذوف</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card info-card h-100">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-map-pin me-2"></i>
                        معلومات الاتصال
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">عنوان IP:</span>
                                <code class="text-primary">@Model.IpAddress</code>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">المتصفح:</span>
                                <span>@Model.Browser</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">نظام التشغيل:</span>
                                <span>@Model.OperatingSystem</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">الجهاز:</span>
                                <span>@Model.Device</span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">الموقع:</span>
                                <span>
                                    <i class="feather-map-pin text-danger me-1"></i>
                                    @(Model.Country ?? "غير محدد") @(Model.City != null ? $"- {Model.City}" : "")
                                </span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-between">
                                <span class="detail-label">@Html.T("وكيل المستخدم:", "User Agent:")</span>
                                <span class="text-muted small">@(Model.UserAgent ?? "غير محدد")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Details -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card info-card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>
                        تفاصيل محاولة الدخول
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="p-3 bg-soft-primary rounded">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted">الحالة</span>
                                    @if (Model.IsSuccessful)
                                    {
                                        <span class="status-indicator bg-success"></span>
                                    }
                                    else
                                    {
                                        <span class="status-indicator bg-danger"></span>
                                    }
                                </div>
                                <h5 class="mb-0 @(Model.IsSuccessful ? "text-success" : "text-danger")">
                                    @(Model.IsSuccessful ? "ناجح" : "فاشل")
                                </h5>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="p-3 bg-soft-info rounded">
                                <div class="text-muted mb-2">التاريخ والوقت</div>
                                <h6 class="mb-0">@Model.LoginAt.ToString("dd MMMM yyyy")</h6>
                                <small class="text-muted">@Model.LoginAt.ToString("hh:mm:ss tt")</small>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="p-3 bg-soft-warning rounded">
                                <div class="text-muted mb-2">رقم السجل</div>
                                <h5 class="mb-0">#@Model.Id</h5>
                            </div>
                        </div>
                    </div>

                    @if (!Model.IsSuccessful && !string.IsNullOrEmpty(Model.FailureReason))
                    {
                        <div class="alert alert-danger mt-4">
                            <h6 class="alert-heading">
                                <i class="feather-alert-triangle me-2"></i>
                                سبب الفشل
                            </h6>
                            <p class="mb-0">@Model.FailureReason</p>
                        </div>
                    }

                    @if (Model.IsSuspicious)
                    {
                        <div class="alert alert-warning mt-4">
                            <h6 class="alert-heading">
                                <i class="feather-alert-circle me-2"></i>
                                نشاط مشبوه
                            </h6>
                            <p class="mb-0">تم وسم هذه المحاولة كنشاط مشبوه. يُرجى مراجعة التفاصيل بعناية.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-settings me-2"></i>
                        الإجراءات
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        @if (Model.User != null)
                        {
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-primary">
                                <i class="feather-user me-2"></i>
                                عرض ملف المستخدم
                            </a>
                            <a asp-controller="LoginLogs" asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-info">
                                <i class="feather-list me-2"></i>
                                سجل تسجيل الدخول للمستخدم
                            </a>
                            <a asp-controller="UserSessions" asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-success">
                                <i class="feather-monitor me-2"></i>
                                جلسات المستخدم
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.IpAddress))
                        {
                            <button class="btn btn-warning" onclick="blockIp('@Model.IpAddress')">
                                <i class="feather-shield me-2"></i>
                                حظر عنوان IP
                            </button>
                        }
                        <button class="btn btn-light-brand" onclick="window.print()">
                            <i class="feather-printer me-2"></i>
                            طباعة
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.__LoginLogDetailsT = {
            confirmBlock: '@Html.Raw(Html.T("هل أنت متأكد من حظر عنوان IP:", "Are you sure you want to block IP address:").Replace("'", "\\'"))',
            blockUnderDev: '@Html.Raw(Html.T("وظيفة الحظر قيد التطوير", "Block feature is under development").Replace("'", "\\'"))'
        };
        function blockIp(ip) {
            if (confirm(window.__LoginLogDetailsT.confirmBlock + ' ' + ip + '?')) {
                // Implement IP blocking
                alert(window.__LoginLogDetailsT.blockUnderDev);
            }
        }
    </script>
}

