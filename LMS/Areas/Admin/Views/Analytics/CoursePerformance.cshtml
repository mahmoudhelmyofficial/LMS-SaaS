@model IEnumerable<LMS.Areas.Admin.ViewModels.CoursePerformanceViewModel>

@{
    ViewData["Title"] = Html.T("تقرير أداء الدورات", "Course performance report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("التحليلات", "Analytics"), Url.Action("Index", "Analytics")),
        (Html.T("أداء الدورات", "Course performance"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    
    var page = (int)(ViewBag.Page ?? 1);
    var sortBy = (string)(ViewBag.SortBy ?? "enrollments");
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    
    // Default sort options (no database lookup to avoid runtime errors)
    var sortOptions = new List<(string Key, string DisplayText)>
    {
        ("enrollments", Html.T("عدد التسجيلات", "Enrollments").ToString()),
        ("revenue", Html.T("الإيرادات", "Revenue").ToString()),
        ("rating", Html.T("التقييم", "Rating").ToString()),
        ("completion", Html.T("معدل الإكمال", "Completion rate").ToString()),
        ("reviews", Html.T("عدد التقييمات", "Reviews count").ToString())
    };
    
    // Safe model list initialization
    var courseList = Model ?? new List<LMS.Areas.Admin.ViewModels.CoursePerformanceViewModel>();
}

@section Styles {
    <style>
        .course-card {
            transition: all 0.3s ease;
        }
        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .rating-stars {
            color: #f7b84b;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("ترتيب حسب", "Sort by")</label>
                            <select class="form-select" id="sortBy" onchange="changeSortBy(this.value)">
                                @foreach (var option in sortOptions)
                                {
                                    var isSelected = sortBy.ToString() == option.Key;
                                    if (isSelected)
                                    {
                                        <option value="@option.Key" selected>@option.DisplayText</option>
                                    }
                                    else
                                    {
                                        <option value="@option.Key">@option.DisplayText</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("نوع العرض", "View type")</label>
                            <div class="btn-group w-100" role="group">
                                <button type="button" class="btn btn-light active" onclick="changeView('table')">
                                    <i class="feather-list"></i>
                                </button>
                                <button type="button" class="btn btn-light" onclick="changeView('grid')">
                                    <i class="feather-grid"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">@Html.T("البحث", "Search")</label>
                            <input type="text" class="form-control" id="searchCourse" placeholder="@Html.T("ابحث عن دورة...", "Search for course...")">
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-success dropdown-toggle w-100" data-bs-toggle="dropdown">
                                    <i class="feather-download me-2"></i>@Html.T("تصدير البيانات", "Export data")
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="Courses"><i class="feather-bar-chart-2 me-2"></i>@Html.T("تقرير الدورات", "Course report")</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reports" asp-action="CoursePerformance"><i class="feather-trending-up me-2"></i>@Html.T("تقرير الأداء", "Performance report")</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="javascript:void(0)" onclick="window.print()"><i class="feather-printer me-2"></i>@Html.T("طباعة", "Print")</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Table View -->
    <div class="row" id="tableView">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أداء الدورات التدريبية", "Course performance")</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="coursesTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("المدرس", "Instructor")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th>@Html.T("التسجيلات", "Enrollments")</th>
                                    <th>@Html.T("المكتملة", "Completed")</th>
                                    <th>@Html.T("معدل الإكمال", "Completion rate")</th>
                                    <th>@Html.T("متوسط التقدم", "Avg. progress")</th>
                                    <th>@Html.T("الإيرادات", "Revenue")</th>
                                    <th>@Html.T("التقييمات", "Reviews")</th>
                                    <th>@Html.T("متوسط التقييم", "Avg. rating")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in courseList)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                    <i class="feather-book"></i>
                                                </div>
                                                <div>
                                                    <span class="fw-semibold">@course.CourseTitle</span>
                                                    <small class="d-block text-muted">@Html.T("منذ", "Since") @course.CreatedAt.ToString("dd/MM/yyyy")</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@course.InstructorName</td>
                                        <td>
                                            @switch (course.Status)
                                            {
                                                case "Published":
                                                    <span class="badge bg-soft-success text-success">@Html.T("منشور", "Published")</span>
                                                    break;
                                                case "Draft":
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("مسودة", "Draft")</span>
                                                    break;
                                                case "PendingReview":
                                                    <span class="badge bg-soft-info text-info">@Html.T("قيد المراجعة", "Under review")</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-soft-secondary text-secondary">@course.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-primary text-primary">@course.EnrollmentsCount</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-success text-success">@course.CompletedCount</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="progress flex-grow-1" style="width: 80px; height: 8px;">
                                                    <div class="progress-bar @(course.CompletionRate >= 75 ? "bg-success" : course.CompletionRate >= 50 ? "bg-primary" : "bg-warning")" 
                                                         style="width: @course.CompletionRate%"></div>
                                                </div>
                                                <span class="fw-semibold">@course.CompletionRate.ToString("F1")%</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="progress" style="width: 80px; height: 8px;">
                                                <div class="progress-bar bg-info" style="width: @course.AverageProgress%"></div>
                                            </div>
                                            <small class="text-muted">@course.AverageProgress.ToString("F1")%</small>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">@course.Revenue.ToEGP()</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-warning text-warning">@course.ReviewsCount</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Floor(course.AverageRating))
                                                    {
                                                        <i class="feather-star rating-stars" style="font-size: 12px;"></i>
                                                    }
                                                    else if (i <= Math.Ceiling(course.AverageRating))
                                                    {
                                                        <i class="feather-star rating-stars" style="font-size: 12px; opacity: 0.5;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="feather-star text-muted" style="font-size: 12px;"></i>
                                                    }
                                                }
                                                <span class="fw-semibold ms-1">@course.AverageRating.ToString("F1")</span>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId" 
                                                   class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض التفاصيل", "View details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                <a asp-controller="CourseAnalytics" asp-action="Index" asp-route-courseId="@course.CourseId"
                                                   class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التحليلات", "Analytics")">
                                                    <i class="feather-bar-chart-2"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (!courseList.Any())
                {
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-warning text-warning mx-auto mb-3">
                            <i class="feather-inbox"></i>
                        </div>
                        <h5>@Html.T("لا توجد دورات", "No courses")</h5>
                        <p class="text-muted">@Html.T("لم يتم العثور على أي دورات", "No courses found")</p>
                    </div>
                }
                else
                {
                    <!-- Pagination -->
                    <div class="card-footer">
                        <nav>
                            <ul class="pagination justify-content-center mb-0">
                                @if (page > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="CoursePerformance" asp-route-page="@(page - 1)" asp-route-sortBy="@sortBy">
                                            <i class="feather-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                                @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                                {
                                    <li class="page-item @(i == page ? "active" : "")">
                                        <a class="page-link" asp-action="CoursePerformance" asp-route-page="@i" asp-route-sortBy="@sortBy">@i</a>
                                    </li>
                                }
                                @if (page < totalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="CoursePerformance" asp-route-page="@(page + 1)" asp-route-sortBy="@sortBy">
                                            <i class="feather-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Grid View (Hidden by default) -->
    <div class="row d-none" id="gridView">
        @foreach (var course in courseList)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card stretch stretch-full course-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="avatar-text bg-soft-primary text-primary">
                                <i class="feather-book"></i>
                            </div>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Math.Floor(course.AverageRating))
                                    {
                                        <i class="feather-star rating-stars" style="font-size: 12px;"></i>
                                    }
                                    else
                                    {
                                        <i class="feather-star text-muted" style="font-size: 12px;"></i>
                                    }
                                }
                            </div>
                        </div>
                        <h5 class="mb-2">@course.CourseTitle</h5>
                        <p class="text-muted mb-3">
                            <i class="feather-user me-1"></i>
                            @course.InstructorName
                        </p>
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="p-2 bg-soft-primary rounded text-center">
                                    <h6 class="mb-0">@course.EnrollmentsCount</h6>
                                    <small class="text-muted">تسجيل</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="p-2 bg-soft-success rounded text-center">
                                    <h6 class="mb-0">@course.Revenue.ToEGP()</h6>
                                    <small class="text-muted">إيرادات</small>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="text-muted">معدل الإكمال</span>
                                <span class="fw-bold">@course.CompletionRate.ToString("F1")%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: @course.CompletionRate%"></div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.CourseId" 
                               class="btn btn-sm btn-light-brand flex-grow-1">
                                <i class="feather-eye me-1"></i>
                                عرض
                            </a>
                            <a asp-controller="CourseAnalytics" asp-action="Index" asp-route-courseId="@course.CourseId"
                               class="btn btn-sm btn-primary flex-grow-1">
                                <i class="feather-bar-chart-2 me-1"></i>
                                تحليلات
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function changeSortBy(value) {
            window.location.href = '@Url.Action("CoursePerformance")?sortBy=' + value + '&page=1';
        }

        function changeView(view) {
            if (view === 'grid') {
                $('#tableView').addClass('d-none');
                $('#gridView').removeClass('d-none');
            } else {
                $('#tableView').removeClass('d-none');
                $('#gridView').addClass('d-none');
            }
        }

        function exportData() {
            alert('@Html.Raw(Html.T("وظيفة التصدير قيد التطوير", "Export feature is under development").Replace("'", "\\'"))');
        }

        $(document).ready(function() {
            // Search functionality
            $('#searchCourse').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#coursesTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

