@model IEnumerable<LMS.Domain.Entities.Payments.Payment>

@{
    ViewData["Title"] = Html.T("تقرير المبيعات المفصل", "Detailed sales report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("التحليلات", "Analytics"), Url.Action("Index", "Analytics")),
        (Html.T("تقرير المبيعات", "Sales report"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    
    var totalRevenue = ViewBag.TotalRevenue ?? 0m;
    var totalOrders = ViewBag.TotalOrders ?? 0;
    var averageOrderValue = ViewBag.AverageOrderValue ?? 0m;
    var fromDate = ViewBag.From as DateTime? ?? DateTime.UtcNow.AddMonths(-1);
    var toDate = ViewBag.To as DateTime? ?? DateTime.UtcNow;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/daterangepicker.min.css" />
    <style>
        .payment-card {
            transition: all 0.3s ease;
        }
        .payment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-dollar-sign"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("إجمالي الإيرادات", "Total revenue")</span>
                            <h3 class="fw-bold mb-0">@totalRevenue.ToEGP()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-shopping-cart"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">عدد الطلبات</span>
                            <h3 class="fw-bold mb-0">@totalOrders.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">متوسط قيمة الطلب</span>
                            <h3 class="fw-bold mb-0">@averageOrderValue.ToEGP()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-calendar"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">الفترة الزمنية</span>
                            <h6 class="fw-bold mb-0">@((toDate - fromDate).Days) يوم</h6>
                            <small class="text-muted">@fromDate.ToString("dd/MM/yyyy") - @toDate.ToString("dd/MM/yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                                <input type="date" name="from" class="form-control" value="@fromDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                                <input type="date" name="to" class="form-control" value="@toDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-search me-2"></i>
                                    @Html.T("بحث", "Search")
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="mt-3">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="feather-download me-2"></i>@Html.T("تصدير", "Export")
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/api/export/payments?format=csv&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")"><i class="feather-file-text me-2"></i>@Html.T("CSV", "CSV")</a></li>
                                <li><a class="dropdown-item" href="/api/export/payments?format=excel&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")"><i class="feather-file me-2"></i>@Html.T("إكسل", "Excel")</a></li>
                                <li><a class="dropdown-item" href="/api/export/payments?format=pdf&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")"><i class="feather-file-text me-2"></i>@Html.T("PDF", "PDF")</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="window.print()"><i class="feather-printer me-2"></i>طباعة</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales Chart -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تحليل المبيعات", "Sales analysis")</h5>
                    <div class="card-header-action">
                        <div class="dropdown">
                            <a href="javascript:void(0);" class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                <i class="feather-more-vertical"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="javascript:void(0);" class="dropdown-item">
                                    <i class="feather-download me-2"></i>
                                    تحميل الرسم البياني
                                </a>
                                <a href="javascript:void(0);" class="dropdown-item">
                                    <i class="feather-printer me-2"></i>
                                    طباعة
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div style="height: 350px;">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفاصيل المبيعات", "Sales details")</h5>
                    <div class="card-header-action">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" id="searchTable" placeholder="@Html.T("بحث في الجدول...", "Search table...")">
                            <span class="input-group-text">
                                <i class="feather-search"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="paymentsTable">
                            <thead class="bg-light">
                                <tr>
                                    <th>@Html.T("رقم الطلب", "Order #")</th>
                                    <th>@Html.T("رقم المعاملة", "Transaction #")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الطالب", "Student")</th>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("المبلغ الأصلي", "Original amount")</th>
                                    <th>@Html.T("الخصم", "Discount")</th>
                                    <th>@Html.T("الضريبة", "Tax")</th>
                                    <th>@Html.T("المبلغ الإجمالي", "Total amount")</th>
                                    <th>@Html.T("طريقة الدفع", "Payment method")</th>
                                    <th>@Html.T("العملة", "Currency")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-soft-primary text-primary">#@payment.Id</span>
                                        </td>
                                        <td>
                                            <code class="text-muted">@payment.TransactionId</code>
                                        </td>
                                        <td>
                                            <div>
                                                <span class="d-block">@payment.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <small class="text-muted">@payment.CreatedAt.ToString("hh:mm tt")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                    @payment.Student?.FirstName?.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <span class="d-block fw-semibold">@payment.Student?.FirstName @payment.Student?.LastName</span>
                                                    <small class="text-muted">@payment.Student?.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-semibold">@(payment.Course?.Title ?? "غير محدد")</span>
                                        </td>
                                        <td>@payment.OriginalAmount.ToEGP()</td>
                                        <td>
                                            @if (payment.DiscountAmount > 0)
                                            {
                                                <span class="text-danger">-@payment.DiscountAmount.ToEGP()</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@payment.TaxAmount.ToEGP()</td>
                                        <td>
                                            <span class="fw-bold text-success">@payment.TotalAmount.ToEGP()</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-info text-info">@payment.PaymentMethod</span>
                                        </td>
                                        <td>@payment.Currency</td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a asp-controller="Payments" asp-action="Details" asp-route-id="@payment.Id" 
                                                   class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض التفاصيل", "View details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                <a href="javascript:void(0);" class="avatar-text avatar-md" 
                                                   data-bs-toggle="tooltip" title="@Html.T("طباعة الفاتورة", "Print invoice")">
                                                    <i class="feather-printer"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                @if (!Model.Any())
                {
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-warning text-warning mx-auto mb-3">
                            <i class="feather-inbox"></i>
                        </div>
                        <h5>@Html.T("لا توجد مبيعات", "No sales")</h5>
                        <p class="text-muted">لم يتم العثور على أي مبيعات في الفترة المحددة</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search functionality
            $('#searchTable').on('keyup', function() {
                var value = $(this).val().toLowerCase();
                $('#paymentsTable tbody tr').filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Sales Chart
            const payments = @Html.Raw(Json.Serialize(Model.Select(p => new { 
                Date = p.CreatedAt.ToString("yyyy-MM-dd"),
                Amount = p.TotalAmount 
            })));

            // Group by date and sum
            const salesByDate = {};
            payments.forEach(p => {
                if (!salesByDate[p.Date]) {
                    salesByDate[p.Date] = 0;
                }
                salesByDate[p.Date] += p.Amount;
            });

            const dates = Object.keys(salesByDate).sort();
            const amounts = dates.map(d => salesByDate[d]);

            const ctx = document.getElementById('salesChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: dates.map(d => new Date(d).toLocaleDateString('ar-SA')),
                    datasets: [{
                        label: 'المبيعات اليومية',
                        data: amounts,
                        borderColor: '#3454d1',
                        backgroundColor: 'rgba(52, 84, 209, 0.1)',
                        tension: 0.4,
                        fill: true,
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y.toLocaleString() + ' ر.س';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value.toLocaleString() + ' ر.س';
                                }
                            }
                        }
                    }
                }
            });

            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

