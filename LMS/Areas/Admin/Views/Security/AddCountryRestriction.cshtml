@model LMS.Areas.Admin.ViewModels.CountryRestrictionViewModel

@{
    ViewData["Title"] = Html.T("إضافة قيد جغرافي", "Add country restriction");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("الأمان", "Security"), Url.Action("Dashboard", "Security")),
        (Html.T("القيود الجغرافية", "Country restrictions"), Url.Action("CountryRestrictions", "Security")),
        (Html.T("إضافة جديد", "Add new"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-globe me-2"></i>@Html.T("إضافة قيد جغرافي جديد", "Add new country restriction")
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="AddCountryRestriction" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="CountryCode" class="form-label">
                                كود الدولة (ISO) <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CountryCode" class="form-select">
                                <option value="">-- اختر الدولة --</option>
                                <option value="SA">السعودية (SA)</option>
                                <option value="AE">الإمارات (AE)</option>
                                <option value="KW">الكويت (KW)</option>
                                <option value="QA">قطر (QA)</option>
                                <option value="BH">البحرين (BH)</option>
                                <option value="OM">عمان (OM)</option>
                                <option value="EG">مصر (EG)</option>
                                <option value="JO">الأردن (JO)</option>
                                <option value="LB">لبنان (LB)</option>
                                <option value="SY">سوريا (SY)</option>
                                <option value="IQ">العراق (IQ)</option>
                                <option value="PS">فلسطين (PS)</option>
                                <option value="YE">اليمن (YE)</option>
                                <option value="LY">ليبيا (LY)</option>
                                <option value="SD">السودان (SD)</option>
                                <option value="TN">تونس (TN)</option>
                                <option value="DZ">الجزائر (DZ)</option>
                                <option value="MA">المغرب (MA)</option>
                                <option value="MR">موريتانيا (MR)</option>
                                <option value="SO">الصومال (SO)</option>
                                <option value="DJ">جيبوتي (DJ)</option>
                                <option value="KM">جزر القمر (KM)</option>
                            </select>
                            <span asp-validation-for="CountryCode" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CountryName" class="form-label">
                                اسم الدولة <span class="text-danger">*</span>
                            </label>
                            <input asp-for="CountryName" class="form-control" placeholder="@Html.T("السعودية", "e.g. Saudi Arabia")" />
                            <span asp-validation-for="CountryName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RestrictionType" class="form-label">
                                نوع القيد <span class="text-danger">*</span>
                            </label>
                            <select asp-for="RestrictionType" class="form-select">
                                <option value="">-- اختر نوع القيد --</option>
                                <option value="Block">@Html.T("حظر كامل (Block)", "Block all")</option>
                                <option value="Allow">@Html.T("سماح فقط (Allow)", "Allow only")</option>
                                <option value="Monitor">@Html.T("مراقبة (Monitor)", "Monitor")</option>
                            </select>
                            <span asp-validation-for="RestrictionType" class="text-danger"></span>
                            <small class="text-muted">
                                • حظر كامل: منع الوصول من هذه الدولة<br>
                                • سماح فقط: السماح فقط لهذه الدولة<br>
                                • مراقبة: السماح مع تسجيل النشاط
                            </small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Reason" class="form-label">
                                سبب القيد <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Reason" class="form-control" rows="3" placeholder="@Html.T("اذكر سبب إضافة هذا القيد...", "State the reason for adding this restriction...")"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label" asp-for="IsActive">
                                    <strong>@Html.T("تفعيل القيد", "Enable restriction")</strong>
                                    <br>
                                    <small class="text-muted">@Html.T("سيتم تطبيق القيد فوراً عند التفعيل", "Restriction will apply immediately when enabled")</small>
                                </label>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="feather-alert-triangle me-2"></i>
                            <strong>@Html.T("تحذير:", "Warning:")</strong> @Html.T("تأكد من صحة المعلومات قبل الحفظ. القيود الجغرافية قد تؤثر على وصول المستخدمين للمنصة.", "Verify the information before saving. Geographic restrictions may affect user access to the platform.")
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="CountryRestrictions" class="btn btn-light">
                                <i class="feather-x me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>حفظ القيد
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Auto-fill country name based on country code
            $('select[name="CountryCode"]').on('change', function() {
                const selectedText = $(this).find('option:selected').text();
                const countryName = selectedText.split('(')[0].trim();
                $('input[name="CountryName"]').val(countryName);
            });
        });
    </script>
}

