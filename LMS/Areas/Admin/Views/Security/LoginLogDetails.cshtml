@model LMS.Domain.Entities.Security.LoginLog

@{
    ViewData["Title"] = Html.T("تفاصيل سجل الدخول", "Login log details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("الأمان", "Security"), Url.Action("Dashboard", "Security")),
        (Html.T("سجلات الدخول", "Login logs"), Url.Action("LoginLogs", "Security")),
        (Html.T("التفاصيل", "Details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .status-badge-large {
            font-size: 1.2rem;
            padding: 0.75rem 1.5rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <!-- Status Overview -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-body text-center py-5">
                    @if (Model.IsSuccessful)
                    {
                        <div class="avatar-text avatar-xl bg-soft-success text-success mx-auto mb-3">
                            <i class="feather-check-circle" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="fw-bold text-success mb-2">تسجيل دخول ناجح</h3>
                    }
                    else
                    {
                        <div class="avatar-text avatar-xl bg-soft-danger text-danger mx-auto mb-3">
                            <i class="feather-x-circle" style="font-size: 3rem;"></i>
                        </div>
                        <h3 class="fw-bold text-danger mb-2">محاولة تسجيل دخول فاشلة</h3>
                        @if (!string.IsNullOrEmpty(Model.FailureReason))
                        {
                            <p class="text-muted mb-0">@Model.FailureReason</p>
                        }
                    }
                    <p class="text-muted mt-2">@Model.LoginAt.ToString("dddd, dd MMMM yyyy - hh:mm:ss tt")</p>
                </div>
            </div>

            <!-- Login Details -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>تفاصيل الدخول
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="text-muted" style="width: 200px;">
                                        <i class="feather-calendar me-2"></i>التاريخ
                                    </td>
                                    <td class="fw-semibold">@Model.LoginAt.ToString("yyyy/MM/dd")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        <i class="feather-clock me-2"></i>الوقت
                                    </td>
                                    <td class="fw-semibold">@Model.LoginAt.ToString("hh:mm:ss tt")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        <i class="feather-globe me-2"></i>عنوان IP
                                    </td>
                                    <td>
                                        <span class="badge bg-soft-info text-info">@Model.IpAddress</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        <i class="feather-map-pin me-2"></i>الموقع الجغرافي
                                    </td>
                                    <td class="fw-semibold">@(Model.Location ?? "غير متوفر")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        <i class="feather-check-circle me-2"></i>الحالة
                                    </td>
                                    <td>
                                        @if (Model.IsSuccessful)
                                        {
                                            <span class="badge bg-success">ناجح</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">فاشل</span>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- User Agent -->
            @if (!string.IsNullOrEmpty(Model.UserAgent))
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-monitor me-2"></i>معلومات المتصفح والجهاز
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="font-monospace small text-break mb-0">@Model.UserAgent</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card stretch stretch-full mb-4" style="position: sticky; top: 20px;">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-settings me-2"></i>إجراءات
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="LoginLogs" class="btn btn-light">
                            <i class="feather-arrow-right me-2"></i>العودة للقائمة
                        </a>
                        @if (Model.User != null)
                        {
                            <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-outline-primary">
                                <i class="feather-user me-2"></i>عرض المستخدم
                            </a>
                            @if (!Model.IsSuccessful)
                            {
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-outline-warning">
                                    <i class="feather-shield me-2"></i>إدارة المستخدم
                                </a>
                            }
                        }
                        <a asp-action="AddBlockedIp" asp-route-ip="@Model.IpAddress" asp-route-reason="محاولة دخول مشبوهة من سجل الدخول #@Model.Id" class="btn btn-outline-danger">
                            <i class="feather-slash me-2"></i>حظر عنوان IP
                        </a>
                    </div>
                </div>
            </div>

            <!-- User Info -->
            @if (Model.User != null)
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-user me-2"></i>المستخدم
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                            <span class="fs-4">@(Model.User.FirstName?.Length > 0 ? Model.User.FirstName.Substring(0, 1).ToUpper() : "")@(Model.User.LastName?.Length > 0 ? Model.User.LastName.Substring(0, 1).ToUpper() : "")</span>
                        </div>
                        <h6 class="fw-bold mb-1">@Model.User.FirstName @Model.User.LastName</h6>
                        <p class="text-muted small mb-3">@Model.User.Email</p>
                        <a asp-controller="Users" asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-sm btn-primary">
                            عرض الملف الشخصي
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@* No additional scripts needed - actions are now direct links *@

