@model IEnumerable<LMS.Domain.Entities.Security.UserSession>

@{
    ViewData["Title"] = Html.T("جميع الجلسات", "All sessions");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("الأمان", "Security"), Url.Action("Dashboard", "Security")),
        (Html.T("جميع الجلسات", "All sessions"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="AllSessions" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">@Html.T("المستخدم (ID)", "User (ID)")</label>
                    <input type="text" name="userId" class="form-control" value="@ViewBag.UserId" placeholder="@Html.T("معرف المستخدم", "User ID")" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.T("الحالة", "Status")</label>
                    <select name="active" class="form-select">
                        <option value="">@Html.T("الكل", "All")</option>
                        <option value="true" selected="@(ViewBag.Active == true)">@Html.T("نشطة", "Active")</option>
                        <option value="false" selected="@(ViewBag.Active == false)">@Html.T("منتهية", "Ended")</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">
                        <i class="feather-filter me-2"></i>@Html.T("تصفية", "Filter")
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Sessions Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.T("المستخدم", "User")</th>
                            <th>@Html.T("عنوان IP", "IP address")</th>
                            <th>@Html.T("الموقع", "Location")</th>
                            <th>@Html.T("بدأت في", "Started at")</th>
                            <th>@Html.T("آخر نشاط", "Last activity")</th>
                            <th>@Html.T("الحالة", "Status")</th>
                            <th>@Html.T("الإجراءات", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model)
                        {
                            <tr>
                                <td>
                                    @if (session.User != null)
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="avatar-text avatar-sm @(session.IsActive ? "bg-soft-success text-success" : "bg-soft-secondary text-secondary")">
                                                @(session.User.FirstName?.Length > 0 ? session.User.FirstName.Substring(0, 1).ToUpper() : "")@(session.User.LastName?.Length > 0 ? session.User.LastName.Substring(0, 1).ToUpper() : "")
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@(session.User.FirstName ?? "") @(session.User.LastName ?? "")</div>
                                                <small class="text-muted">@session.User.Email</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Html.T("مستخدم محذوف", "Deleted user")</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-soft-info text-info">
                                        <i class="feather-globe me-1"></i>@session.IpAddress
                                    </span>
                                </td>
                                <td>@(session.Location ?? "-")</td>
                                <td>
                                    <div>@session.CreatedAt.ToString("yyyy/MM/dd")</div>
                                    <small class="text-muted">@session.CreatedAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <div>@session.LastActivityAt.ToString("yyyy/MM/dd")</div>
                                    <small class="text-muted">@session.LastActivityAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    @if (session.IsActive)
                                    {
                                        <span class="badge bg-soft-success text-success">
                                            <i class="feather-circle me-1" style="font-size: 8px;"></i>@Html.T("نشطة", "Active")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-secondary text-secondary">
                                            <i class="feather-x-circle me-1"></i>@Html.T("منتهية", "Ended")
                                        </span>
                                        @if (!string.IsNullOrEmpty(session.TerminationReason))
                                        {
                                            <br><small class="text-muted">@session.TerminationReason</small>
                                        }
                                    }
                                </td>
                                <td>
                                    @if (session.IsActive)
                                    {
                                        <form asp-action="TerminateSession" asp-route-id="@session.Id" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من إنهاء هذه الجلسة؟", "Are you sure you want to end this session?").ToString().Replace("'", "\\'"))')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" title="@Html.T("إنهاء", "End")">
                                                <i class="feather-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-3">
                        <i class="feather-inbox" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="fw-bold mb-2">@Html.T("لا توجد جلسات", "No sessions")</h5>
                    <p class="text-muted">@Html.T("لم يتم العثور على جلسات", "No sessions found")</p>
                </div>
            }
            else
            {
                @* Pagination *@
                var currentPage = (int)(ViewBag.Page ?? 1);
                var hasMore = Model.Count() == 20;
                
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted small">
                        عرض @Model.Count() جلسة - صفحة @currentPage
                    </div>
                    <nav>
                        <ul class="pagination pagination-sm mb-0">
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="AllSessions" 
                                       asp-route-page="@(currentPage - 1)" 
                                       asp-route-userId="@ViewBag.UserId"
                                       asp-route-active="@ViewBag.Active">
                                        <i class="feather-chevron-right"></i> السابق
                                    </a>
                                </li>
                            }
                            <li class="page-item active"><span class="page-link">@currentPage</span></li>
                            @if (hasMore)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="AllSessions" 
                                       asp-route-page="@(currentPage + 1)" 
                                       asp-route-userId="@ViewBag.UserId"
                                       asp-route-active="@ViewBag.Active">
                                        التالي <i class="feather-chevron-left"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>

