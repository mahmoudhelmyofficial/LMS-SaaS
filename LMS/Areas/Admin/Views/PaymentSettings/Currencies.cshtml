@model List<LMS.Domain.Entities.Settings.Currency>
@{
    ViewData["Title"] = Html.T("إدارة العملات", "Currencies management");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("الدفع", "Payment"), Url.Action("Index")),
        (Html.T("العملات", "Currencies"), "")
    };
}

<div class="main-content">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="feather-globe me-2"></i>@Html.T("العملات المتاحة", "Available currencies")</h5>
            <a asp-area="Admin" asp-controller="Currencies" asp-action="Create" class="btn btn-primary btn-sm">
                <i class="feather-plus me-2"></i>@Html.T("إضافة عملة", "Add currency")
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("الكود", "Code")</th>
                            <th>@Html.T("الاسم", "Name")</th>
                            <th>@Html.T("الرمز", "Symbol")</th>
                            <th>@Html.T("سعر الصرف", "Exchange rate")</th>
                            <th>@Html.T("الحالة", "Status")</th>
                            <th>@Html.T("الإجراءات", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            foreach (var currency in Model)
                            {
                                <tr>
                                    <td><strong>@currency.Code</strong></td>
                                    <td>@currency.Name</td>
                                    <td>@currency.Symbol</td>
                                    <td>@currency.ExchangeRate</td>
                                    <td>
                                        @if (currency.IsActive)
                                        {
                                            <span class="badge bg-success">@Html.T("مفعّل", "Active")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Html.T("معطّل", "Inactive")</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Currencies" asp-action="Edit" asp-route-id="@currency.Id" class="btn btn-sm btn-outline-primary me-1" title="@Html.T("تعديل", "Edit")">
                                            <i class="feather-edit"></i>
                                        </a>
                                        <form asp-action="ToggleCurrency" asp-route-id="@currency.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-@(currency.IsActive ? "warning" : "success")" title="@(currency.IsActive ? Html.T("تعطيل", "Disable") : Html.T("تفعيل", "Enable"))">
                                                <i class="feather-@(currency.IsActive ? "x" : "check")"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    <i class="feather-dollar-sign fs-1 mb-3 d-block opacity-50"></i>
                                    @Html.T("لا توجد عملات", "No currencies")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

