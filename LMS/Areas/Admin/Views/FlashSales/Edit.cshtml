@model LMS.Areas.Admin.ViewModels.FlashSaleEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل عرض سريع", "Edit flash sale");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التسويق", "Marketing"), null),
        (Html.T("العروض السريعة", "Flash sales"), Url.Action("Index", "FlashSales")),
        (Html.T("تعديل", "Edit"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title">@Html.T("معلومات العرض", "Sale info")</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label required">اسم العرض</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DiscountPercentage" class="form-label required">نسبة الخصم</label>
                        <div class="input-group">
                            <input asp-for="DiscountPercentage" type="number" step="0.01" class="form-control" required />
                            <span class="input-group-text">%</span>
                        </div>
                        <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">الوصف</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label required">تاريخ البداية</label>
                        <input asp-for="StartDate" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label required">تاريخ النهاية</label>
                        <input asp-for="EndDate" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaxSales" class="form-label">الحد الأقصى للمبيعات</label>
                        <input asp-for="MaxSales" type="number" class="form-control" />
                        <span asp-validation-for="MaxSales" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">المبيعات الحالية</label>
                        <input asp-for="CurrentSales" class="form-control" readonly />
                    </div>
                    <div class="col-12">
                        <label class="form-label">اختر الدورات</label>
                        <select asp-for="SelectedCourses" asp-items="ViewBag.Courses" class="form-select" multiple size="6">
                        </select>
                    </div>
                    <div class="col-12">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">تفعيل العرض</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex gap-2 justify-content-end">
                    <a href="@Url.Action("Index")" class="btn btn-light">
                        <i class="feather-x me-2"></i>إلغاء
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="feather-save me-2"></i>حفظ التغييرات
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Date validation: EndDate must be after StartDate
            $('form').on('submit', function(e) {
                var startDate = new Date($('[name="StartDate"]').val());
                var endDate = new Date($('[name="EndDate"]').val());
                
                if (isNaN(startDate.getTime()) || isNaN(endDate.getTime())) {
                    return true; // Let server-side validation handle empty dates
                }
                
                if (endDate <= startDate) {
                    e.preventDefault();
                    toastr.error('تاريخ النهاية يجب أن يكون بعد تاريخ البداية');
                    $('[name="EndDate"]').focus();
                    return false;
                }
                return true;
            });

            // Real-time validation feedback
            $('[name="EndDate"]').on('change', function() {
                var startDate = new Date($('[name="StartDate"]').val());
                var endDate = new Date($(this).val());
                
                if (!isNaN(startDate.getTime()) && !isNaN(endDate.getTime()) && endDate <= startDate) {
                    $(this).addClass('is-invalid');
                    if (!$(this).next('.invalid-feedback').length) {
                        $(this).after('<div class="invalid-feedback">تاريخ النهاية يجب أن يكون بعد تاريخ البداية</div>');
                    }
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.invalid-feedback').remove();
                }
            });

            $('[name="StartDate"]').on('change', function() {
                $('[name="EndDate"]').trigger('change');
            });
        });
    </script>
}

