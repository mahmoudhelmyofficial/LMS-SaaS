@model IEnumerable<LMS.Domain.Entities.Analytics.ScheduledReport>

@{
    ViewData["Title"] = Html.T("إدارة التقارير المجدولة", "Scheduled reports management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير المجدولة", "Scheduled Reports"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة تقرير", "Add Report"), "feather-plus", Url.Action("Create", "ScheduledReports"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-calendar"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("إجمالي التقارير", "Total reports")</span>
                            <h3 class="fw-bold mb-0">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("تقارير نشطة", "Active reports")</span>
                            <h3 class="fw-bold mb-0">@Model.Count(r => r.IsActive).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("قيد التشغيل", "Running")</span>
                            <h3 class="fw-bold mb-0">@Model.Count(r => r.IsActive && r.NextRunDate <= DateTime.UtcNow.AddDays(1))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-send"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">تم تشغيله</span>
                            <h3 class="fw-bold mb-0">@Model.Count(r => r.LastRunDate != null)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-active">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("نشط", "Active")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-inactive">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("غير نشط", "Inactive")</span>
    </a>
}

<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="scheduledReportsTable">
                            <thead>
                                <tr>
                                    <th class="wd-30">
                                        <div class="custom-control custom-checkbox ms-1">
                                            <input type="checkbox" class="custom-control-input" id="checkAll">
                                            <label class="custom-control-label" for="checkAll"></label>
                                        </div>
                                    </th>
                                    <th>@Html.T("اسم التقرير", "Report name")</th>
                                    <th>@Html.T("القالب", "Template")</th>
                                    <th>@Html.T("الجدول", "Schedule")</th>
                                    <th>@Html.T("المستلمون", "Recipients")</th>
                                    <th>@Html.T("آخر تشغيل", "Last run")</th>
                                    <th>@Html.T("التشغيل القادم", "Next run")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="item-checkbox ms-1">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input checkbox" id="checkBox_@report.Id">
                                                    <label class="custom-control-label" for="checkBox_@report.Id"></label>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                    <i class="feather-file-text"></i>
                                                </div>
                                                <div>
                                                    <span class="d-block fw-semibold">@report.Name</span>
                                                    @if (!string.IsNullOrEmpty(report.Description))
                                                    {
                                                        <small class="text-muted">@report.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (report.Template != null)
                                            {
                                                <span class="badge bg-soft-info text-info">@report.Template.Name</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-warning text-warning">@report.Schedule</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @if (!string.IsNullOrEmpty(report.RecipientEmails))
                                                {
                                                    var emails = report.RecipientEmails.Split(',');
                                                    <span>@emails.Length مستلم</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </small>
                                        </td>
                                        <td>
                                            @if (report.LastRunDate.HasValue)
                                            {
                                                <span class="text-muted">@report.LastRunDate.Value.ToString("dd/MM/yyyy hh:mm tt")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">لم يتم التشغيل بعد</span>
                                            }
                                        </td>
                                        <td>
                                            @if (report.NextRunDate.HasValue)
                                            {
                                                var isUpcoming = report.NextRunDate.Value <= DateTime.UtcNow.AddDays(1);
                                                <span class="@(isUpcoming ? "text-warning fw-semibold" : "text-muted")">
                                                    @report.NextRunDate.Value.ToString("dd/MM/yyyy hh:mm tt")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@Html.T("غير محدد", "Not set")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (report.IsActive)
                                            {
<span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("غير نشط", "Inactive")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                @if (report.IsActive)
                                                {
                                                    <form asp-action="RunNow" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@report.Id" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="@Html.T("تشغيل الآن", "Run now")">
                                                            <i class="feather-play"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <a href="@Url.Action("Edit", "ScheduledReports", new { id = report.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                    <i class="feather-edit"></i>
                                                </a>
                                                <div class="dropdown">
                                                    <a href="javascript:void(0)" class="avatar-text avatar-md" data-bs-toggle="dropdown" data-bs-offset="0,21">
                                                        <i class="feather-more-horizontal"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="javascript:void(0)">
                                                                <i class="feather-eye me-3"></i>
                                                                <span>@Html.T("عرض السجل", "View log")</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="javascript:void(0)" onclick="toggleStatus('@report.Id')">
                                                                <i class="feather-power me-3"></i>
                                                                <span>@(report.IsActive ? Html.T("تعطيل", "Disable") : Html.T("تفعيل", "Enable"))</span>
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا التقرير؟", "Are you sure you want to delete this report?").ToString().Replace("'", "\\'"))')">
                                                                <input type="hidden" name="id" value="@report.Id" />
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="feather-trash-2 me-3"></i>
                                                                    <span>@Html.T("حذف", "Delete")</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#scheduledReportsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[6, "asc"]],
                "pageLength": 25
            });

            $('#checkAll').on('change', function() {
                $('.checkbox').prop('checked', $(this).prop('checked'));
            });

            $('.filter-all').on('click', function() {
                table.column(7).search('').draw();
            });

            $('.filter-active').on('click', function() {
                table.column(7).search('نشط').draw();
            });

            $('.filter-inactive').on('click', function() {
                table.column(7).search('غير نشط').draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function toggleStatus(reportId) {
            if (confirm('@Html.Raw(Html.T("هل تريد تغيير حالة هذا التقرير؟", "Do you want to change the status of this report?").ToString().Replace("'", "\\'"))')) {
                console.log('Toggling status for:', reportId);
                // Implement toggle
            }
        }
    </script>
}

