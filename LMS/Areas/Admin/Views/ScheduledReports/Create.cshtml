@model LMS.Areas.Admin.ViewModels.ScheduledReportCreateViewModel

@{
    ViewData["Title"] = Html.T("إنشاء تقرير مجدول", "Create scheduled report");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير المجدولة", "Scheduled reports"), Url.Action("Index", "ScheduledReports")),
        (Html.T("إنشاء تقرير", "Create report"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات التقرير", "Report information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12">
                                <label class="form-label" asp-for="Name">@Html.T("اسم التقرير", "Report name") <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="@Html.T("مثال: تقرير المبيعات الأسبوعي", "e.g. Weekly sales report")" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label" asp-for="Description">@Html.T("الوصف", "Description")</label>
                                <textarea class="form-control" asp-for="Description" rows="3" placeholder="@Html.T("وصف التقرير...", "Report description...")"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label" asp-for="TemplateId">@Html.T("القالب", "Template") <span class="text-danger">*</span></label>
                                <select class="form-select" asp-for="TemplateId" required>
                                    <option value="">@Html.T("اختر القالب", "Select template")</option>
                                    @foreach (var template in ViewBag.Templates ?? new List<dynamic>())
                                    {
                                        <option value="@template.Id">@template.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="TemplateId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="Schedule">@Html.T("الجدول", "Schedule") <span class="text-danger">*</span></label>
                                <select class="form-select" asp-for="Schedule" required>
                                    <option value="">اختر الجدول</option>
                                    <option value="daily">يومي</option>
                                    <option value="weekly">أسبوعي</option>
                                    <option value="monthly">شهري</option>
                                    <option value="quarterly">ربع سنوي</option>
                                </select>
                                <span asp-validation-for="Schedule" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check form-switch mt-4">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActive" checked />
                                    <label class="form-check-label" for="isActive">@Html.T("تقرير نشط", "Active report")</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <label class="form-label" asp-for="RecipientEmails">@Html.T("المستلمون (البريد الإلكتروني)", "Recipients (email)") <span class="text-danger">*</span></label>
                                <textarea class="form-control" asp-for="RecipientEmails" rows="3" placeholder="@Html.T("email1@example.com, email2@example.com", "email1@example.com, email2@example.com")" required></textarea>
                                <span asp-validation-for="RecipientEmails" class="text-danger"></span>
                                <small class="text-muted">@Html.T("افصل البريد الإلكتروني بفاصلة", "Separate emails with a comma")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إرشادات", "Guidelines")</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h6 class="alert-heading">الجدول الزمني</h6>
                            <ul class="fs-12 mb-0 pe-3">
                                <li>يومي: يتم إرسال التقرير كل يوم</li>
                                <li>أسبوعي: يتم إرسال التقرير كل أسبوع</li>
                                <li>شهري: يتم إرسال التقرير كل شهر</li>
                                <li>ربع سنوي: يتم إرسال التقرير كل 3 أشهر</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                حفظ التقرير
                            </button>
                            <a href="@Url.Action("Index", "ScheduledReports")" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

