@model IEnumerable<LMS.Domain.Entities.Gamification.Achievement>

@{
    ViewData["Title"] = Html.T("إدارة الإنجازات", "Achievements Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التحفيز", "Gamification"), null),
        (Html.T("الإنجازات", "Achievements"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة إنجاز", "Add Achievement"), "feather-plus", Url.Action("Create", "Achievements"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .achievement-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .achievement-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .achievement-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 15px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-award"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الإنجازات", "Total Achievements")</span>
                            <h3 class="fw-bolder d-block">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تم فتحها", "Unlocked")</span>
                            <h3 class="fw-bolder d-block">0</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-star"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("نقاط الإنجاز", "Achievement points")</span>
                            <h3 class="fw-bolder d-block">@Model.Sum(a => a.Points).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-zap"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إنجازات نادرة", "Rare achievements")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.Rarity == "Legendary").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var achievement in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card achievement-card text-center" onclick="window.location='@Url.Action("Details", "Achievements", new { id = achievement.Id })'">
                        <div class="card-body">
                            <div class="achievement-icon @(achievement.IsActive ? "bg-soft-primary text-primary" : "bg-soft-secondary text-secondary")">
                                @if (!string.IsNullOrEmpty(achievement.IconUrl))
                                {
                                    <img src="@achievement.IconUrl" alt="@achievement.Title" style="width: 50px; height: 50px;" />
                                }
                                else
                                {
                                    <i class="feather-award"></i>
                                }
                            </div>
                            
                            <h6 class="mb-2">@achievement.Title</h6>
                            <p class="text-muted small mb-3">@achievement.Description</p>
                            
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <div class="d-flex gap-1">
                                    @switch (achievement.Rarity)
                                    {
                                        case "Common":
                                            <span class="badge bg-soft-secondary text-secondary">@Html.T("عادي", "Common")</span>
                                            break;
                                        case "Rare":
                                            <span class="badge bg-soft-primary text-primary">@Html.T("نادر", "Rare")</span>
                                            break;
                                        case "Epic":
                                            <span class="badge bg-soft-warning text-warning">@Html.T("ملحمي", "Epic")</span>
                                            break;
                                        case "Legendary":
                                            <span class="badge bg-soft-danger text-danger">@Html.T("أسطوري", "Legendary")</span>
                                            break;
                                    }
                                </div>
                                <span class="badge bg-soft-success text-success">
                                    <i class="feather-star"></i>
                                    @achievement.Points @Html.T("نقطة", "point(s)")
                                </span>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="feather-users me-1"></i>
                                    @achievement.UnlockedCount @Html.T("مستخدم حصل عليه", "user(s) unlocked")
                                </small>
                            </div>

                            <div class="d-flex gap-2" onclick="event.stopPropagation()">
                                <a href="@Url.Action("Edit", "Achievements", new { id = achievement.Id })" class="btn btn-sm btn-light flex-grow-1">
                                    <i class="feather-edit"></i>
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                        <i class="feather-more-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Duplicate", "Achievements", new { id = achievement.Id })">
                                                <i class="feather-copy me-3"></i>
                                                @Html.T("نسخ", "Duplicate")
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Analytics", "Achievements", new { id = achievement.Id })">
                                                <i class="feather-bar-chart-2 me-3"></i>
                                                @Html.T("إحصائيات", "Statistics")
                                            </a>
                                        </li>
                                        @if (achievement.IsActive)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="javascript:void(0)" onclick="deactivateAchievement('@achievement.Id'); event.stopPropagation()">
                                                    <i class="feather-eye-off me-3"></i>
                                                    @Html.T("تعطيل", "Deactivate")
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a class="dropdown-item" href="javascript:void(0)" onclick="activateAchievement('@achievement.Id'); event.stopPropagation()">
                                                    <i class="feather-eye me-3"></i>
                                                    @Html.T("تفعيل", "Activate")
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@achievement.Id'); event.stopPropagation()">
                                                <i class="feather-trash-2 me-3"></i>
                                                @Html.T("حذف", "Delete")
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-award fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد إنجازات بعد", "No achievements yet")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء إنجازات لتحفيز الطلاب", "Start by creating achievements to motivate students")</p>
                        <a href="@Url.Action("Create", "Achievements")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إضافة إنجاز جديد", "Add new achievement")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

<!-- Activate/Deactivate Form (Hidden) -->
<form id="toggleForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        (function() {
            var deleteUrl = '@Url.Action("Delete", "Achievements", new { area = "Admin", id = "__id__" })';
            var activateUrl = '@Url.Action("Activate", "Achievements", new { area = "Admin", id = "__id__" })';
            var deactivateUrl = '@Url.Action("Deactivate", "Achievements", new { area = "Admin", id = "__id__" })';

            window.confirmDelete = function(achievementId) {
                if (confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا الإنجاز؟", "Are you sure you want to delete this achievement?").ToString().Replace("'", "\\'"))')) {
                    var form = document.getElementById('deleteForm');
                    form.action = deleteUrl.replace('__id__', achievementId);
                    form.submit();
                }
            };

            window.activateAchievement = function(achievementId) {
                var form = document.getElementById('toggleForm');
                form.action = activateUrl.replace('__id__', achievementId);
                form.submit();
            };

            window.deactivateAchievement = function(achievementId) {
                if (confirm('@Html.Raw(Html.T("هل تريد تعطيل هذا الإنجاز؟", "Do you want to deactivate this achievement?").ToString().Replace("'", "\\'"))')) {
                    var form = document.getElementById('toggleForm');
                    form.action = deactivateUrl.replace('__id__', achievementId);
                    form.submit();
                }
            };
        })();
    </script>
}

