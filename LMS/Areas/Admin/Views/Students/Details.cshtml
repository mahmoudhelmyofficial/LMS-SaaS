@model LMS.Domain.Entities.Users.ApplicationUser

@{
    ViewData["Title"] = Html.T("تفاصيل الطالب", "Student Details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الطلاب", "Student Management"), Url.Action("Index", "Students")),
        ($"{Model.FirstName} {Model.LastName}", null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <!-- Student Info -->
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الطالب", "Student Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3 mb-4">
                                <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                    @if (!string.IsNullOrEmpty(Model.FirstName))
                                    {
                                        @Model.FirstName.Substring(0, 1)@(Model.LastName?.Substring(0, 1) ?? "")
                                    }
                                    else
                                    {
                                        <i class="feather-user"></i>
                                    }
                                </div>
                                <div>
                                    <h4 class="mb-1">@Model.FirstName @Model.LastName</h4>
                                    <p class="text-muted mb-0">@Model.Email</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("اسم المستخدم", "Username")</label>
                            <p class="fw-semibold mb-0">@Model.UserName</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("رقم الهاتف", "Phone Number")</label>
                            <p class="fw-semibold mb-0">@(Model.PhoneNumber ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ الميلاد", "Date of Birth")</label>
                            <p class="fw-semibold mb-0">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("الدولة", "Country")</label>
                            <p class="fw-semibold mb-0">@(Model.Country ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Bio))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("نبذة", "Bio")</label>
                                <p class="mb-0">@Model.Bio</p>
                            </div>
                        }

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ التسجيل", "Registration Date")</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("آخر تسجيل دخول", "Last Login")</label>
                            <p class="mb-0">@(Model.LastLoginAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لا يوجد", "None"))</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Enrolled Courses -->
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="card stretch stretch-full mt-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الدورات المسجلة", "Enrolled Courses") (@Model.Enrollments.Count)</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("التقدم", "Progress")</th>
                                        <th>@Html.T("الحالة", "Status")</th>
                                        <th>@Html.T("تاريخ التسجيل", "Enrollment Date")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in Model.Enrollments.OrderByDescending(e => e.EnrolledAt))
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", "Courses", new { id = enrollment.CourseId })" class="fw-semibold">
                                                    @(enrollment.Course?.Title ?? Html.T("دورة محذوفة", "Deleted course"))
                                                </a>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="progress" style="width: 100px; height: 6px;">
                                                        <div class="progress-bar bg-primary" role="progressbar" 
                                                             style="width: @enrollment.ProgressPercentage%"></div>
                                                    </div>
                                                    <span class="small">@enrollment.ProgressPercentage%</span>
                                                </div>
                                            </td>
                                            <td>
                                                @switch (enrollment.Status)
                                                {
                                                    case LMS.Domain.Enums.EnrollmentStatus.Active:
                                                        <span class="badge bg-soft-primary text-primary">@Html.T("نشط", "Active")</span>
                                                        break;
                                                    case LMS.Domain.Enums.EnrollmentStatus.Completed:
                                                        <span class="badge bg-soft-success text-success">@Html.T("مكتمل", "Completed")</span>
                                                        break;
                                                    case LMS.Domain.Enums.EnrollmentStatus.Cancelled:
                                                        <span class="badge bg-soft-danger text-danger">@Html.T("ملغي", "Cancelled")</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-soft-secondary text-secondary">@enrollment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@enrollment.EnrolledAt.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            <!-- Certificates -->
            @if (Model.Certificates != null && Model.Certificates.Any())
            {
                <div class="card stretch stretch-full mt-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الشهادات", "Certificates") (@Model.Certificates.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var certificate in Model.Certificates.OrderByDescending(c => c.IssuedAt))
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between px-0">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-md bg-soft-success text-success">
                                            <i class="feather-award"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@(certificate.Course?.Title ?? Html.T("شهادة", "Certificate"))</h6>
                                            <small class="text-muted">@certificate.IssuedAt.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(certificate.CertificateUrl))
                                    {
                                        <a href="@certificate.CertificateUrl" target="_blank" class="btn btn-sm btn-light-brand">
                                            <i class="feather-download me-1"></i>@Html.T("تحميل", "Download")
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="btn btn-sm btn-light disabled">
                                            <i class="feather-alert-circle me-1"></i>@Html.T("غير متاح", "Not available")
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحالة", "Status")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("حالة الحساب", "Account Status")</label>
                        <p class="mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-danger text-danger">@Html.T("غير نشط", "Inactive")</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("البريد الإلكتروني", "Email")</label>
                        <p class="mb-0">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("موثق", "Verified")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">@Html.T("غير موثق", "Unverified")</span>
                            }
                        </p>
                    </div>
                    <div>
                        <label class="text-muted fs-12">@Html.T("رقم الهاتف", "Phone Number")</label>
                        <p class="mb-0">
                            @if (Model.PhoneNumberConfirmed)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("موثق", "Verified")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-secondary text-secondary">@Html.T("غير موثق", "Unverified")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإحصائيات", "Statistics")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("الدورات المسجلة", "Enrolled Courses")</label>
                        <h5 class="fw-bold mb-0">@(Model.Enrollments?.Count ?? 0)</h5>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("الدورات المكتملة", "Completed Courses")</label>
                        <h5 class="fw-bold mb-0">@(Model.Enrollments?.Count(e => e.Status == LMS.Domain.Enums.EnrollmentStatus.Completed) ?? 0)</h5>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("الشهادات", "Certificates")</label>
                        <h5 class="fw-bold mb-0">@(Model.Certificates?.Count ?? 0)</h5>
                    </div>
                    <div>
                        <label class="text-muted fs-12">@Html.T("النقاط", "Points")</label>
                        <h5 class="fw-bold text-primary mb-0">@Model.Points.ToString("N0")</h5>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Users", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل المعلومات", "Edit Information")
                        </a>
                        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-grid">
                            @Html.AntiForgeryToken()
                            @if (Model.IsActive)
                            {
                                <button type="submit" class="btn btn-danger" onclick="return confirm('@(Html.T("هل تريد تعطيل هذا الحساب؟", "Do you want to disable this account?"))');">
                                    <i class="feather-x-circle me-2"></i>
                                    @Html.T("تعطيل الحساب", "Disable Account")
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success" onclick="return confirm('@(Html.T("هل تريد تفعيل هذا الحساب؟", "Do you want to enable this account?"))');">
                                    <i class="feather-check-circle me-2"></i>
                                    @Html.T("تفعيل الحساب", "Enable Account")
                                </button>
                            }
                        </form>
                        <a href="@Url.Action("Index", "Students")" class="btn btn-light">
                            <i class="feather-arrow-right me-2"></i>
                            @Html.T("العودة للقائمة", "Back to List")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

