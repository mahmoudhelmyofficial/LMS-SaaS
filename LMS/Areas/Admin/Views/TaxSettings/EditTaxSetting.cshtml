@model LMS.Areas.Admin.ViewModels.TaxSettingEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل إعدادات الضريبة", "Edit tax settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("إعدادات الضرائب", "Tax settings"), Url.Action("Index", "TaxSettings")),
        (Html.T("تعديل الضريبة", "Edit tax"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .tax-preview {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            padding: 30px;
            color: white;
            position: sticky;
            top: 20px;
        }
        .tax-rate-display {
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            margin: 20px 0;
        }
        .info-badge {
            background: rgba(255,255,255,0.2);
            padding: 8px 15px;
            border-radius: 20px;
            display: inline-block;
            margin: 5px;
        }
        .changes-indicator {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            display: none;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-edit-2 me-2"></i>تعديل معلومات الضريبة
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" id="taxForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TaxName" class="form-label">
                                    اسم الضريبة <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TaxName" class="form-control" id="taxName" />
                                <span asp-validation-for="TaxName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TaxIdNumber" class="form-label">
                                    رقم التسجيل الضريبي
                                </label>
                                <input asp-for="TaxIdNumber" class="form-control" />
                                <span asp-validation-for="TaxIdNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TaxRate" class="form-label">
                                    نسبة الضريبة (%) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <input asp-for="TaxRate" type="number" step="0.01" min="0" max="100" class="form-control" id="taxRate" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="TaxRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TaxType" class="form-label">
                                    نوع الضريبة <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TaxType" class="form-select">
                                    <option value="">-- اختر نوع الضريبة --</option>
                                    <option value="VAT">@Html.T("ضريبة القيمة المضافة (VAT)", "VAT")</option>
                                    <option value="GST">@Html.T("ضريبة السلع والخدمات (GST)", "GST")</option>
                                    <option value="Sales Tax">@Html.T("ضريبة المبيعات", "Sales Tax")</option>
                                    <option value="Income Tax">@Html.T("ضريبة الدخل", "Income Tax")</option>
                                    <option value="Custom">@Html.T("ضريبة مخصصة", "Custom tax")</option>
                                </select>
                                <span asp-validation-for="TaxType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Country" class="form-label">
                                    الدولة <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Country" class="form-select" id="countrySelect">
                                    <option value="">-- اختر الدولة --</option>
                                    <option value="EG">مصر</option>
                                    <option value="SA">السعودية</option>
                                    <option value="AE">الإمارات</option>
                                    <option value="KW">الكويت</option>
                                    <option value="QA">قطر</option>
                                    <option value="BH">البحرين</option>
                                    <option value="OM">عمان</option>
                                    <option value="JO">الأردن</option>
                                    <option value="LB">لبنان</option>
                                    <option value="IQ">العراق</option>
                                    <option value="SY">سوريا</option>
                                    <option value="YE">اليمن</option>
                                    <option value="PS">فلسطين</option>
                                    <option value="MA">المغرب</option>
                                    <option value="DZ">الجزائر</option>
                                    <option value="TN">تونس</option>
                                    <option value="LY">ليبيا</option>
                                    <option value="SD">السودان</option>
                                    <option value="SO">الصومال</option>
                                    <option value="DJ">جيبوتي</option>
                                    <option value="KM">جزر القمر</option>
                                    <option value="MR">موريتانيا</option>
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="State" class="form-label">
                                    المنطقة / الولاية
                                </label>
                                <input asp-for="State" class="form-control" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">@Html.T("الوصف", "Description")</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ApplyToDigitalProducts" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="ApplyToDigitalProducts">
                                        تطبيق على المنتجات الرقمية
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsEnabled" class="form-check-input" type="checkbox" id="isEnabled" />
                                    <label class="form-check-label" asp-for="IsEnabled">
                                        مفعّل
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-warning">
                            <i class="feather-alert-triangle me-2"></i>
                            <strong>@Html.T("تحذير:", "Warning:")</strong> @Html.T("تعديل إعدادات الضريبة سيؤثر على جميع المعاملات الجديدة. المعاملات السابقة لن تتأثر.", "Editing tax settings will affect all new transactions. Previous transactions will not be affected.")
                        </div>

                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>حفظ التغييرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="tax-preview">
                <h5 class="text-white mb-3">
                    <i class="feather-eye me-2"></i>معاينة الضريبة
                </h5>
                
                <div class="tax-rate-display" id="previewRate">
                    @Model.TaxRate.ToString("0.00")%
                </div>
                
                <h6 class="text-white text-center mb-3" id="previewName">@Model.TaxName</h6>
                
                <div class="text-center mb-4">
                    <span class="info-badge" id="previewCountry">@Model.Country</span>
                    <span class="info-badge" id="previewType">@Model.TaxType</span>
                </div>

                <div class="bg-white bg-opacity-10 rounded p-3 mb-3">
                    <h6 class="text-white mb-3">@Html.T("مثال على التطبيق", "Application example")</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span>@Html.T("سعر الدورة:", "Course price:")</span>
                        <span class="fw-bold">1000 جنيه</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>@Html.T("الضريبة", "Tax") (<span id="exampleRate">@Model.TaxRate.ToString("0")</span>%):</span>
                        <span class="fw-bold" id="taxAmount">@((1000 * Model.TaxRate / 100).ToString("0")) جنيه</span>
                    </div>
                    <hr class="border-white border-opacity-25">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">@Html.T("الإجمالي:", "Total:")</span>
                        <span class="fw-bold fs-5" id="totalAmount">@((1000 + (1000 * Model.TaxRate / 100)).ToString("0")) جنيه</span>
                    </div>
                </div>

                <div class="text-center">
                    <span class="badge @(Model.IsEnabled ? "bg-success" : "bg-secondary")" id="statusBadge">
                        @(Model.IsEnabled ? "مفعّل" : "معطّل")
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="changes-indicator" id="changesIndicator">
    <div class="alert alert-warning shadow-lg mb-0">
        <i class="feather-alert-circle me-2"></i>
        لديك تغييرات غير محفوظة
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            let hasChanges = false;

            // Track changes
            $('#taxForm input, #taxForm select, #taxForm textarea').on('change input', function() {
                hasChanges = true;
                $('#changesIndicator').fadeIn();
            });

            // Update preview
            $('#taxName').on('input', function() {
                $('#previewName').text($(this).val() || '@Model.TaxName');
            });

            $('#taxRate').on('input', function() {
                const rate = parseFloat($(this).val()) || @Model.TaxRate;
                $('#previewRate').text(rate.toFixed(2) + '%');
                $('#exampleRate').text(rate.toFixed(0));
                
                const basePrice = 1000;
                const taxAmount = (basePrice * rate / 100);
                const total = basePrice + taxAmount;
                
                $('#taxAmount').text(taxAmount.toFixed(0) + ' جنيه');
                $('#totalAmount').text(total.toFixed(0) + ' جنيه');
            });

            $('#countrySelect').on('change', function() {
                const selectedText = $(this).find('option:selected').text();
                $('#previewCountry').text(selectedText || '@Model.Country');
            });

            $('select[name="TaxType"]').on('change', function() {
                $('#previewType').text($(this).val() || '@Model.TaxType');
            });

            $('#isEnabled').on('change', function() {
                if ($(this).is(':checked')) {
                    $('#statusBadge').removeClass('bg-secondary').addClass('bg-success').text('مفعّل');
                } else {
                    $('#statusBadge').removeClass('bg-success').addClass('bg-secondary').text('معطّل');
                }
            });

            // Warn before leaving
            $('#taxForm').on('submit', function() {
                hasChanges = false;
            });

            $(window).on('beforeunload', function() {
                if (hasChanges) {
                    return 'لديك تغييرات غير محفوظة. هل تريد المغادرة؟';
                }
            });
        });
    </script>
}

