@model LMS.Areas.Admin.ViewModels.TaxSettingCreateViewModel

@{
    ViewData["Title"] = Html.T("إضافة إعدادات ضريبة جديدة", "Add new tax settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings", new { area = "Admin" })),
        (Html.T("إعدادات الضرائب", "Tax settings"), Url.Action("Index", "TaxSettings", new { area = "Admin" })),
        (Html.T("إضافة ضريبة جديدة", "Add new tax"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .tax-preview {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 15px;
            padding: 30px;
            color: white;
            position: sticky;
            top: 20px;
        }
        .tax-rate-display {
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            margin: 20px 0;
        }
        .info-badge {
            background: rgba(255,255,255,0.2);
            padding: 8px 15px;
            border-radius: 20px;
            display: inline-block;
            margin: 5px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-percent me-2"></i>معلومات الضريبة
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TaxName" class="form-label">
                                    اسم الضريبة <span class="text-danger">*</span>
                                </label>
                                <input asp-for="TaxName" class="form-control" placeholder="@Html.T("مثال: ضريبة القيمة المضافة", "e.g. VAT")" id="taxName" />
                                <span asp-validation-for="TaxName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TaxIdNumber" class="form-label">
                                    رقم التسجيل الضريبي
                                </label>
                                <input asp-for="TaxIdNumber" class="form-control" placeholder="@Html.T("مثال: 123456789", "e.g. 123456789")" />
                                <span asp-validation-for="TaxIdNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="TaxRate" class="form-label">
                                    نسبة الضريبة (%) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <input asp-for="TaxRate" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="14.00" id="taxRate" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="TaxRate" class="text-danger"></span>
                                <small class="text-muted">@Html.T("أدخل النسبة المئوية للضريبة", "Enter the tax percentage")</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TaxType" class="form-label">
                                    نوع الضريبة <span class="text-danger">*</span>
                                </label>
                                <select asp-for="TaxType" class="form-select">
                                    <option value="">-- اختر نوع الضريبة --</option>
                                    <option value="VAT">ضريبة القيمة المضافة (VAT)</option>
                                    <option value="GST">ضريبة السلع والخدمات (GST)</option>
                                    <option value="Sales Tax">@Html.T("ضريبة المبيعات", "Sales Tax")</option>
                                    <option value="Income Tax">@Html.T("ضريبة الدخل", "Income Tax")</option>
                                    <option value="Custom">@Html.T("ضريبة مخصصة", "Custom Tax")</option>
                                </select>
                                <span asp-validation-for="TaxType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Country" class="form-label">
                                    الدولة
                                </label>
                                <select asp-for="Country" class="form-select" id="countrySelect">
                                    <option value="">-- اختر الدولة --</option>
                                    <option value="EG">مصر</option>
                                    <option value="SA">السعودية</option>
                                    <option value="AE">الإمارات</option>
                                    <option value="KW">الكويت</option>
                                    <option value="QA">قطر</option>
                                    <option value="BH">البحرين</option>
                                    <option value="OM">عمان</option>
                                    <option value="JO">الأردن</option>
                                    <option value="LB">لبنان</option>
                                    <option value="IQ">العراق</option>
                                    <option value="SY">سوريا</option>
                                    <option value="YE">اليمن</option>
                                    <option value="PS">فلسطين</option>
                                    <option value="MA">المغرب</option>
                                    <option value="DZ">الجزائر</option>
                                    <option value="TN">تونس</option>
                                    <option value="LY">ليبيا</option>
                                    <option value="SD">السودان</option>
                                    <option value="SO">الصومال</option>
                                    <option value="DJ">جيبوتي</option>
                                    <option value="KM">جزر القمر</option>
                                    <option value="MR">موريتانيا</option>
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="State" class="form-label">
                                    المنطقة / الولاية
                                </label>
                                <input asp-for="State" class="form-control" placeholder="@Html.T("مثال: القاهرة", "e.g. Cairo")" />
                                <span asp-validation-for="State" class="text-danger"></span>
                                <small class="text-muted">اتركه فارغاً للتطبيق على كل المناطق</small>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ZipCode" class="form-label">
                                    الرمز البريدي
                                </label>
                                <input asp-for="ZipCode" class="form-control" placeholder="@Html.T("مثال: 12345", "e.g. 12345")" />
                                <span asp-validation-for="ZipCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DisplayOrder" class="form-label">
                                    ترتيب العرض
                                </label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" />
                                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">@Html.T("الوصف", "Description")</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="@Html.T("وصف تفصيلي عن الضريبة وكيفية تطبيقها...", "Detailed description of the tax and how it is applied...")"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ApplyToDigitalProducts" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="ApplyToDigitalProducts">
                                        تطبيق على المنتجات الرقمية
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-2">إذا تم التفعيل، ستطبق الضريبة على المنتجات الرقمية</small>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ApplyToPhysicalProducts" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="ApplyToPhysicalProducts">
                                        تطبيق على المنتجات المادية
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-2">إذا تم التفعيل، ستطبق الضريبة على المنتجات المادية</small>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="ApplyToSubscriptions" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="ApplyToSubscriptions">
                                        تطبيق على الاشتراكات
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-2">إذا تم التفعيل، ستطبق الضريبة على الاشتراكات</small>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" asp-for="IsDefault">
                                        ضريبة افتراضية
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-2">@Html.T("تعيين هذه الضريبة كافتراضية", "Set this tax as default")</small>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsEnabled" class="form-check-input" type="checkbox" id="isEnabled" />
                                    <label class="form-check-label" asp-for="IsEnabled">
                                        مفعّل
                                    </label>
                                </div>
                                <small class="text-muted d-block mt-2">@Html.T("تفعيل أو تعطيل الضريبة", "Enable or disable the tax")</small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="feather-info me-2"></i>
                            <strong>ملاحظة:</strong> سيتم تطبيق هذه الضريبة تلقائياً على جميع المعاملات للدولة والمنطقة المحددة.
                        </div>

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>حفظ إعدادات الضريبة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="tax-preview">
                <h5 class="text-white mb-3">
                    <i class="feather-eye me-2"></i>معاينة الضريبة
                </h5>
                
                <div class="tax-rate-display" id="previewRate">
                    14.00%
                </div>
                
                <h6 class="text-white text-center mb-3" id="previewName">ضريبة القيمة المضافة</h6>
                
                <div class="text-center mb-4">
                    <span class="info-badge" id="previewCountry">مصر</span>
                    <span class="info-badge" id="previewType">VAT</span>
                </div>

                <div class="bg-white bg-opacity-10 rounded p-3 mb-3">
                    <h6 class="text-white mb-3">مثال على التطبيق</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span>سعر الدورة:</span>
                        <span class="fw-bold">1000 جنيه</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>الضريبة (<span id="exampleRate">14</span>%):</span>
                        <span class="fw-bold" id="taxAmount">140 جنيه</span>
                    </div>
                    <hr class="border-white border-opacity-25">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">الإجمالي:</span>
                        <span class="fw-bold fs-5" id="totalAmount">1140 جنيه</span>
                    </div>
                </div>

                <div class="text-center">
                    <span class="badge bg-success" id="statusBadge">مفعّل</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Update preview on input
            $('#taxName').on('input', function() {
                $('#previewName').text($(this).val() || 'ضريبة القيمة المضافة');
            });

            $('#taxRate').on('input', function() {
                const rate = parseFloat($(this).val()) || 14;
                $('#previewRate').text(rate.toFixed(2) + '%');
                $('#exampleRate').text(rate.toFixed(0));
                
                // Calculate tax amount
                const basePrice = 1000;
                const taxAmount = (basePrice * rate / 100);
                const total = basePrice + taxAmount;
                
                $('#taxAmount').text(taxAmount.toFixed(0) + ' جنيه');
                $('#totalAmount').text(total.toFixed(0) + ' جنيه');
            });

            $('#countrySelect').on('change', function() {
                const selectedText = $(this).find('option:selected').text();
                $('#previewCountry').text(selectedText || 'مصر');
            });

            $('select[name="TaxType"]').on('change', function() {
                const type = $(this).val();
                let displayType = type;
                if (type === 'VAT') displayType = 'VAT';
                else if (type === 'GST') displayType = 'GST';
                else if (type === 'Sales Tax') displayType = 'Sales Tax';
                $('#previewType').text(displayType || 'VAT');
            });

            $('#isEnabled').on('change', function() {
                if ($(this).is(':checked')) {
                    $('#statusBadge').removeClass('bg-secondary').addClass('bg-success').text('مفعّل');
                } else {
                    $('#statusBadge').removeClass('bg-success').addClass('bg-secondary').text('معطّل');
                }
            });
        });
    </script>
}

