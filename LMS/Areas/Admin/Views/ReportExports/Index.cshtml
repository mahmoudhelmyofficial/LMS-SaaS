@model IEnumerable<LMS.Domain.Entities.Analytics.ReportExport>

@{
    ViewData["Title"] = Html.T("تصدير التقارير", "Report exports");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير", "Reports"), null),
        (Html.T("التصديرات", "Exports"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                        <i class="feather-download"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("إجمالي التصديرات", "Total Exports")</span>
                        <h3 class="fw-bolder">@Model.Count().ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                        <i class="feather-check-circle"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("مكتملة", "Completed")</span>
                        <h3 class="fw-bolder">@Model.Count(e => e.Status == "Completed").ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                        <i class="feather-clock"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("قيد المعالجة", "Processing")</span>
                        <h3 class="fw-bolder">@Model.Count(e => e.Status == "Processing").ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                        <i class="feather-x-circle"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("فاشلة", "Failed")</span>
                        <h3 class="fw-bolder">@Model.Count(e => e.Status == "Failed").ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="main-content">
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تصدير بيانات جديدة", "Export New Data")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-outline-primary dropdown-toggle w-100" data-bs-toggle="dropdown">
                                    <i class="feather-users me-2"></i>@Html.T("تصدير المستخدمين", "Export Users")
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><a class="dropdown-item" href="/api/export/users?format=csv">@Html.T("CSV", "CSV")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/users?format=excel">@Html.T("إكسل", "Excel")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/users?format=pdf">@Html.T("PDF", "PDF")</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-outline-success dropdown-toggle w-100" data-bs-toggle="dropdown">
                                    <i class="feather-book-open me-2"></i>@Html.T("تصدير الدورات", "Export Courses")
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><a class="dropdown-item" href="/api/export/courses?format=csv">@Html.T("CSV", "CSV")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/courses?format=excel">@Html.T("إكسل", "Excel")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/courses?format=pdf">@Html.T("PDF", "PDF")</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-outline-warning dropdown-toggle w-100" data-bs-toggle="dropdown">
                                    <i class="feather-clipboard me-2"></i>@Html.T("تصدير التسجيلات", "Export Enrollments")
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><a class="dropdown-item" href="/api/export/enrollments?format=csv">@Html.T("CSV", "CSV")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/enrollments?format=excel">@Html.T("إكسل", "Excel")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/enrollments?format=pdf">@Html.T("PDF", "PDF")</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="btn-group w-100">
                                <button type="button" class="btn btn-outline-info dropdown-toggle w-100" data-bs-toggle="dropdown">
                                    <i class="feather-dollar-sign me-2"></i>@Html.T("تصدير المدفوعات", "Export Payments")
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><a class="dropdown-item" href="/api/export/payments?format=csv">@Html.T("CSV", "CSV")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/payments?format=excel">@Html.T("إكسل", "Excel")</a></li>
                                    <li><a class="dropdown-item" href="/api/export/payments?format=pdf">@Html.T("PDF", "PDF")</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("سجل التصديرات", "Export History")</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.T("اسم الملف", "File Name")</th>
                                    <th>@Html.T("النوع", "Type")</th>
                                    <th>@Html.T("التنسيق", "Format")</th>
                                    <th>@Html.T("الحجم", "Size")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th>@Html.T("بواسطة", "By")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var export in Model.OrderByDescending(e => e.ExportDate))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <i class="feather-file"></i>
                                                <span class="fw-bold">@export.FileName</span>
                                            </div>
                                        </td>
                                        <td><span class="badge bg-soft-info text-info">@export.ExportType</span></td>
                                        <td><span class="badge bg-soft-secondary text-secondary">@export.Format</span></td>
                                        <td>@((export.FileSize / 1024).ToString("N0")) KB</td>
                                        <td>
                                            @switch (export.Status)
                                            {
                                                case "Completed":
                                                    <span class="badge bg-soft-success text-success">@Html.T("مكتمل", "Completed")</span>
                                                    break;
                                                case "Processing":
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("قيد المعالجة", "Processing")</span>
                                                    break;
                                                case "Failed":
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("فاشل", "Failed")</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-soft-secondary text-secondary">@export.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@export.GeneratedBy</td>
                                        <td>@export.ExportDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                                        <td class="text-end">
                                            @if (export.Status == "Completed")
                                            {
                                                <a href="@Url.Action("Download", "ReportExports", new { id = export.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تحميل", "Download")">
                                                    <i class="feather-download"></i>
                                                </a>
                                            }
                                            <form asp-action="Delete" asp-controller="ReportExports" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل تريد حذف هذا التصدير؟", "Do you want to delete this export?"))');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@export.Id" />
                                                <button type="submit" class="avatar-text avatar-md btn-link text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                    <i class="feather-trash-2"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

