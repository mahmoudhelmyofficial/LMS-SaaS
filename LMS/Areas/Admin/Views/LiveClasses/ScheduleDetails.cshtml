@model LMS.Domain.Entities.LiveSessions.LiveSessionSchedule
@{
    ViewData["Title"] = Html.T("تفاصيل جدول الحصص", "Schedule Details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("البث المباشر", "Live Sessions"), Url.Action("Index", "LiveClasses")),
        (Html.T("جداول الحصص", "Session Schedules"), Url.Action("Schedules", "LiveClasses")),
        (Html.T("تفاصيل الجدول", "Schedule Details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var totalRevenue = (decimal)(ViewBag.TotalRevenue ?? 0m);
}

@await Html.PartialAsync("_PageHeader")

<!-- Schedule Header -->
<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="fw-bold mb-2">@(Model.TitleAr ?? Model.Title)</h4>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <p class="text-muted">@Model.Description</p>
                        }
                    </div>
                    @{
                        var statusBadge = Model.Status switch
                        {
                            LMS.Domain.Enums.LiveScheduleStatus.Draft => ("bg-secondary", Html.T("مسودة", "Draft")),
                            LMS.Domain.Enums.LiveScheduleStatus.Published => ("bg-primary", Html.T("منشور", "Published")),
                            LMS.Domain.Enums.LiveScheduleStatus.Active => ("bg-success", Html.T("نشط", "Active")),
                            LMS.Domain.Enums.LiveScheduleStatus.Completed => ("bg-info", Html.T("مكتمل", "Completed")),
                            LMS.Domain.Enums.LiveScheduleStatus.Cancelled => ("bg-danger", Html.T("ملغي", "Cancelled")),
                            _ => ("bg-secondary", Model.Status.ToString())
                        };
                    }
                    <span class="badge @statusBadge.Item1 px-3 py-2">@statusBadge.Item2</span>
                </div>

                <div class="d-flex align-items-center gap-4 flex-wrap mt-3">
                    <span class="text-muted">
                        <i class="feather-user me-1"></i>
                        @(Model.Instructor?.FullName ?? Html.T("غير محدد", "Not specified"))
                    </span>
                    <span class="text-muted">
                        <i class="feather-calendar me-1"></i>
                        @Model.StartDate.ToString("dd/MM/yyyy") - @Model.EndDate.ToString("dd/MM/yyyy")
                    </span>
                    <span class="text-muted">
                        <i class="feather-tag me-1"></i>
                        @if (Model.Price == 0)
                        {
                            <text>@Html.T("مجاني", "Free")</text>
                        }
                        else
                        {
                            <text>@Model.Price.ToString("N0") @Model.Currency</text>
                        }
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="row g-4">
            <div class="col-6">
                <div class="card stretch stretch-full text-center">
                    <div class="card-body">
                        <h3 class="fw-bolder text-primary mb-1">@Model.EnrolledCount</h3>
                        <small class="text-muted">@Html.T("مشترك", "subscribers")</small>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card stretch stretch-full text-center">
                    <div class="card-body">
                        <h3 class="fw-bolder text-success mb-1">@totalRevenue.ToString("N0")</h3>
                        <small class="text-muted">@Html.T("إيرادات (ج.م)", "revenue (EGP)")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Sessions -->
    <div class="col-lg-7">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-list me-2"></i>
                    @Html.T("الجلسات", "Sessions") (@(Model.Sessions?.Count() ?? 0))
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.T("العنوان", "Title")</th>
                                <th>@Html.T("التاريخ", "Date")</th>
                                <th>@Html.T("الحالة", "Status")</th>
                                <th>@Html.T("الحضور", "Attendance")</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Sessions != null)
                            {
                                @foreach (var session in Model.Sessions)
                                {
                                    var sessStatusBadge = session.Status switch
                                    {
                                        LMS.Domain.Enums.LiveClassStatus.Live => ("bg-danger", Html.T("مباشر", "Live")),
                                        LMS.Domain.Enums.LiveClassStatus.Scheduled => ("bg-warning", Html.T("مجدولة", "Scheduled")),
                                        LMS.Domain.Enums.LiveClassStatus.Completed => ("bg-success", Html.T("مكتملة", "Completed")),
                                        _ => ("bg-secondary", session.Status.ToString())
                                    };

                                    <tr>
                                        <td>@session.ScheduleOrder</td>
                                        <td>
                                            <strong>@session.Title</strong>
                                            @if (!string.IsNullOrEmpty(session.Subject))
                                            {
                                                <small class="text-muted d-block">@session.Subject</small>
                                            }
                                        </td>
                                        <td>
                                            <small>@session.ScheduledStartTime.ToString("dd/MM HH:mm")</small>
                                        </td>
                                        <td><span class="badge @sessStatusBadge.Item1">@sessStatusBadge.Item2</span></td>
                                        <td>@(session.Attendances?.Count(a => a.IsPresent) ?? 0)</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-sm btn-light">
                                                <i class="feather-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Enrollments -->
    <div class="col-lg-5">
        <div class="card stretch stretch-full">
            <div class="card-header">
                <h5 class="fw-bold mb-0">
                    <i class="feather-users me-2"></i>
                    @Html.T("المشتركون", "Subscribers") (@(Model.Enrollments?.Count() ?? 0))
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>@Html.T("الطالب", "Student")</th>
                                <th>@Html.T("المبلغ", "Amount")</th>
                                <th>@Html.T("التاريخ", "Date")</th>
                                <th>@Html.T("الحالة", "Status")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Enrollments != null)
                            {
                                @foreach (var enrollment in Model.Enrollments)
                                {
                                    var enrStatusBadge = enrollment.Status switch
                                    {
                                        LMS.Domain.Enums.ScheduleEnrollmentStatus.Active => ("bg-success", Html.T("نشط", "Active")),
                                        LMS.Domain.Enums.ScheduleEnrollmentStatus.Cancelled => ("bg-danger", Html.T("ملغي", "Cancelled")),
                                        LMS.Domain.Enums.ScheduleEnrollmentStatus.Expired => ("bg-warning", Html.T("منتهي", "Expired")),
                                        LMS.Domain.Enums.ScheduleEnrollmentStatus.Refunded => ("bg-info", Html.T("مسترد", "Refunded")),
                                        _ => ("bg-secondary", enrollment.Status.ToString())
                                    };

                                    <tr>
                                        <td>@(enrollment.Student?.FullName ?? Html.T("طالب", "Student"))</td>
                                        <td>@enrollment.PaidAmount.ToString("N0") @enrollment.Currency</td>
                                        <td><small>@enrollment.EnrolledAt.ToString("dd/MM/yy")</small></td>
                                        <td><span class="badge @enrStatusBadge.Item1">@enrStatusBadge.Item2</span></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
