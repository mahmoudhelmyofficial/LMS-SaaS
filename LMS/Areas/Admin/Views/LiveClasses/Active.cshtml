@model IEnumerable<LMS.Domain.Entities.LiveSessions.LiveClass>

@{
    ViewData["Title"] = Html.T("البث المباشر النشط", "Active live stream");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("البث المباشر", "Live classes"), Url.Action("Index", "LiveClasses")),
        (Html.T("البث النشط", "Active"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-4 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger pulse-animation">
                            <i class="feather-radio"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("جلسات نشطة الآن", "Active sessions now")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalActive</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title">
                        <i class="feather-radio text-danger me-2 pulse-animation"></i>
                        @Html.T("البث المباشر النشط", "Active live stream")
                    </h5>
                    <div class="hstack gap-2">
                        <a asp-action="Schedule" class="btn btn-outline-primary btn-sm">
                            <i class="feather-calendar me-1"></i>
                            @Html.T("الجدول", "Schedule")
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="feather-list me-1"></i>
                            @Html.T("جميع الجلسات", "All sessions")
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl rounded-circle bg-soft-secondary text-secondary mx-auto mb-3">
                                <i class="feather-video-off"></i>
                            </div>
                            <h5>@Html.T("لا توجد جلسات نشطة حالياً", "No active sessions at the moment")</h5>
                            <p class="text-muted">@Html.T("عندما تبدأ جلسة بث مباشر ستظهر هنا", "When a live session starts it will appear here")</p>
                            <a asp-action="Schedule" class="btn btn-primary mt-3">
                                <i class="feather-calendar me-1"></i>
                                @Html.T("عرض الجدول", "View schedule")
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row g-4">
                            @foreach (var liveClass in Model)
                            {
                                <div class="col-xl-4 col-md-6">
                                    <div class="card border border-danger">
                                        <div class="card-header bg-danger bg-opacity-10">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="badge bg-danger pulse-animation">
                                                    <i class="feather-radio me-1"></i>
                                                    @Html.T("بث مباشر", "Live")
                                                </span>
                                                <small class="text-muted">
                                                    @Html.T("بدأ منذ", "Started") @((DateTime.UtcNow - (liveClass.ActualStartTime ?? liveClass.ScheduledStartTime)).TotalMinutes.ToString("F0")) @Html.T("دقيقة", "min ago")
                                                </small>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="fw-bold mb-2">@liveClass.Title</h6>
                                            <p class="text-muted small mb-3">@liveClass.Description</p>
                                            
                                            <div class="d-flex align-items-center gap-3 mb-3">
                                                @if (liveClass.Course?.Instructor != null)
                                                {
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="avatar-image avatar-sm rounded-circle" style="background-image: url('@(liveClass.Course.Instructor.ProfileImageUrl ?? "/assets/images/avatar.png")'); background-size: cover;"></div>
                                                        <span class="small">@liveClass.Course.Instructor.FirstName @liveClass.Course.Instructor.LastName</span>
                                                    </div>
                                                }
                                            </div>
                                            
                                            @if (liveClass.Course != null)
                                            {
                                                <div class="mb-3">
                                                    <small class="text-muted">@Html.T("الدورة", "Course"):</small>
                                                    <a href="@Url.Action("Details", "Courses", new { id = liveClass.CourseId })" class="text-primary small">
                                                        @liveClass.Course.Title
                                                    </a>
                                                </div>
                                            }
                                            
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex align-items-center gap-2">
                                                    <i class="feather-users text-primary"></i>
                                                    <span class="small">@liveClass.AttendedCount @Html.T("حاضر", "attending")</span>
                                                </div>
                                                <a asp-action="Details" asp-route-id="@liveClass.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="feather-eye me-1"></i>
                                                    @Html.T("التفاصيل", "Details")
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .pulse-animation {
            animation: pulse 2s infinite;
        }
        
        @@keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
    </style>
}

