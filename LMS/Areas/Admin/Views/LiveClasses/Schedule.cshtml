@model IEnumerable<LMS.Domain.Entities.LiveSessions.LiveClass>

@{
    ViewData["Title"] = Html.T("جدول البث المباشر", "Live class schedule");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("البث المباشر", "Live classes"), Url.Action("Index", "LiveClasses")),
        (Html.T("الجدول", "Schedule"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/daterangepicker.min.css" />
    <style>
        .schedule-card {
            border-right: 4px solid #3454d1;
        }
        .schedule-time {
            font-size: 1.5rem;
            font-weight: bold;
            color: #3454d1;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-4 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-calendar"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">جلسات مجدولة</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalScheduled</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                            <input type="date" class="form-control" name="fromDate" value="@(((DateTime)ViewBag.FromDate).ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                            <input type="date" class="form-control" name="toDate" value="@(((DateTime)ViewBag.ToDate).ToString("yyyy-MM-dd"))" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="feather-search me-2"></i>
                                @Html.T("بحث", "Search")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الجلسات المجدولة", "Scheduled sessions")</h5>
                    <div class="card-header-action">
                        <a href="@Url.Action("Index")" class="btn btn-sm btn-light-brand">
                            <i class="feather-list me-1"></i>
                            عرض القائمة
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl rounded-circle bg-soft-warning text-warning mx-auto mb-3">
                                <i class="feather-calendar"></i>
                            </div>
                            <h5>لا توجد جلسات مجدولة</h5>
                            <p class="text-muted">لا توجد جلسات بث مباشر مجدولة في هذه الفترة</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var dateGroup in ((Dictionary<DateTime, List<LMS.Domain.Entities.LiveSessions.LiveClass>>)ViewBag.ClassesByDate))
                        {
                            <div class="mb-4">
                                <h6 class="text-muted mb-3">
                                    <i class="feather-calendar me-2"></i>
                                    @dateGroup.Key.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("ar-SA"))
                                </h6>
                                <div class="row">
                                    @foreach (var liveClass in dateGroup.Value)
                                    {
                                        <div class="col-lg-6 col-xl-4 mb-3">
                                            <div class="card schedule-card h-100">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                                        <div class="schedule-time">
                                                            @liveClass.ScheduledStartTime.ToString("hh:mm tt")
                                                        </div>
                                                        <span class="badge bg-soft-primary text-primary">
                                                            @liveClass.Duration دقيقة
                                                        </span>
                                                    </div>
                                                    <h6 class="fw-semibold mb-2">@liveClass.Title</h6>
                                                    <p class="text-muted small mb-2">
                                                        <i class="feather-book me-1"></i>
                                                        @liveClass.Course?.Title
                                                    </p>
                                                    <p class="text-muted small mb-3">
                                                        <i class="feather-user me-1"></i>
                                                        @liveClass.Course?.Instructor?.FirstName @liveClass.Course?.Instructor?.LastName
                                                    </p>
                                                    <div class="d-flex gap-2">
                                                        <a href="@Url.Action("Details", new { id = liveClass.Id })" class="btn btn-sm btn-light-brand">
                                                            <i class="feather-eye me-1"></i>
                                                            التفاصيل
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

