@model IEnumerable<LMS.Domain.Entities.Analytics.ReportExport>

@{
    ViewData["Title"] = Html.T("التقارير المُصدَّرة", "Exported reports");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير المتقدمة", "Advanced Reports"), null),
        (Html.T("التقارير المُصدَّرة", "Exported Reports"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var from = ViewBag.From as DateTime?;
    var to = ViewBag.To as DateTime?;
    var page = ViewBag.Page ?? 1;
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/assets/vendors/css/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="~/assets/vendors/css/daterangepicker.min.css" />
    <style>
        .export-card {
            transition: all 0.3s;
            border-left: 4px solid #e5e7eb;
        }
        .export-card:hover {
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            transform: translateX(-3px);
        }
        .file-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 2rem;
        }
        .file-size-badge {
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.75rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted mb-1">إجمالي التصديرات</div>
                            <h3 class="fw-bold mb-0">@Model.Count()</h3>
                        </div>
                        <div class="avatar-text bg-soft-primary text-primary avatar-lg">
                            <i class="feather-download"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted mb-1">@Html.T("PDF", "PDF")</div>
                            <h3 class="fw-bold mb-0 text-danger">@Model.Count(e => e.Format == "PDF")</h3>
                        </div>
                        <div class="avatar-text bg-soft-danger text-danger avatar-lg">
                            <i class="feather-file-text"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted mb-1">@Html.T("إكسل", "Excel")</div>
                            <h3 class="fw-bold mb-0 text-success">@Model.Count(e => e.Format == "Excel")</h3>
                        </div>
                        <div class="avatar-text bg-soft-success text-success avatar-lg">
                            <i class="feather-file"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <div class="text-muted mb-1">@Html.T("CSV", "CSV")</div>
                            <h3 class="fw-bold mb-0 text-info">@Model.Count(e => e.Format == "CSV")</h3>
                        </div>
                        <div class="avatar-text bg-soft-info text-info avatar-lg">
                            <i class="feather-database"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters and Export List -->
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title">
                <i class="feather-archive me-2"></i>
                التقارير المُصدَّرة
            </h5>
            <div class="card-header-action">
                <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#filterModal">
                    <i class="feather-filter me-2"></i>
                    تصفية حسب التاريخ
                </button>
            </div>
        </div>
        <div class="card-body">
            @if (from.HasValue || to.HasValue)
            {
                <div class="alert alert-info mb-4">
                    <i class="feather-info me-2"></i>
                    <strong>الفترة المحددة:</strong>
                    @if (from.HasValue)
                    {
                        <span>من @from.Value.ToString("dd/MM/yyyy")</span>
                    }
                    @if (to.HasValue)
                    {
                        <span>إلى @to.Value.ToString("dd/MM/yyyy")</span>
                    }
                    <a asp-action="Exports" class="btn btn-sm btn-light ms-3">
                        <i class="feather-x me-1"></i>
                        إلغاء التصفية
                    </a>
                </div>
            }

            @if (Model.Any())
            {
                <div class="vstack gap-3">
                    @foreach (var export in Model)
                    {
                        <div class="export-card card border-start-4 @(export.Format switch
                        {
                            "PDF" => "border-danger",
                            "Excel" => "border-success",
                            "CSV" => "border-info",
                            _ => "border-secondary"
                        })">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="file-icon @(export.Format switch
                                            {
                                                "PDF" => "bg-soft-danger text-danger",
                                                "Excel" => "bg-soft-success text-success",
                                                "CSV" => "bg-soft-info text-info",
                                                _ => "bg-soft-secondary text-secondary"
                                            })">
                                                <i class="@(export.Format switch
                                                {
                                                    "PDF" => "feather-file-text",
                                                    "Excel" => "feather-file",
                                                    "CSV" => "feather-database",
                                                    _ => "feather-file"
                                                })"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                @if (export.ScheduledReport != null)
                                                {
                                                    <h6 class="fw-bold mb-1">@export.ScheduledReport.Name</h6>
                                                    <p class="text-muted small mb-2">@export.ScheduledReport.Description</p>
                                                }
                                                else
                                                {
                                                    <h6 class="fw-bold mb-1">تقرير مُصدَّر</h6>
                                                }
                                                <div class="d-flex gap-2 flex-wrap">
                                                    <span class="badge @(export.Format switch
                                                    {
                                                        "PDF" => "bg-soft-danger text-danger",
                                                        "Excel" => "bg-soft-success text-success",
                                                        "CSV" => "bg-soft-info text-info",
                                                        _ => "bg-soft-secondary text-secondary"
                                                    })">
                                                        @export.Format
                                                    </span>
                                                    @if (export.FileSize > 0)
                                                    {
                                                        <span class="file-size-badge bg-soft-secondary text-secondary">
                                                            <i class="feather-hard-drive me-1"></i>
                                                            @FormatFileSize(export.FileSize)
                                                        </span>
                                                    }
                                                    @if (export.GeneratedByUser != null)
                                                    {
                                                        <span class="badge bg-soft-primary text-primary">
                                                            <i class="feather-user me-1"></i>
                                                            @export.GeneratedByUser.FirstName
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="vstack gap-2 small">
                                            <div class="d-flex justify-content-between">
                                                <span class="text-muted">تاريخ الإنشاء:</span>
                                                <span class="fw-semibold">@export.GeneratedAt.ToString("dd/MM/yyyy")</span>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <span class="text-muted">الوقت:</span>
                                                <span class="fw-semibold">@export.GeneratedAt.ToString("HH:mm")</span>
                                            </div>
                                            @if (!string.IsNullOrEmpty(export.FileUrl))
                                            {
                                                <div class="d-flex justify-content-between">
                                                    <span class="text-muted">الحالة:</span>
                                                    <span class="badge bg-soft-success text-success">
                                                        <i class="feather-check-circle me-1"></i>
                                                        متاح
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        <div class="d-flex flex-column gap-2">
                                            @if (!string.IsNullOrEmpty(export.FileUrl))
                                            {
                                                <a asp-action="Download" asp-route-id="@export.Id" class="btn btn-primary btn-sm">
                                                    <i class="feather-download me-1"></i>
                                                    تحميل
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-light btn-sm" disabled>
                                                    <i class="feather-alert-circle me-1"></i>
                                                    غير متاح
                                                </button>
                                            }
                                            <button type="button" class="btn btn-light btn-sm" onclick="shareExport(@export.Id)">
                                                <i class="feather-share-2 me-1"></i>
                                                مشاركة
                                            </button>
                                            <button type="button" class="btn btn-light btn-sm text-danger" onclick="deleteExport(@export.Id)">
                                                <i class="feather-trash-2 me-1"></i>
                                                حذف
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.Count() >= 20)
                {
                    <div class="mt-4">
                        <nav aria-label="@Html.T("تنقل الصفحة", "Page navigation")">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(page == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Exports", new { from, to, page = page - 1 })">
                                        <i class="feather-chevron-right"></i>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <span class="page-link">@(page)</span>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Exports", new { from, to, page = page + 1 })">
                                        <i class="feather-chevron-left"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text bg-soft-primary text-primary avatar-xl mx-auto mb-3">
                        <i class="feather-archive" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="fw-bold mb-2">لا توجد تقارير مُصدَّرة</h5>
                    <p class="text-muted mb-4">التقارير المُصدَّرة ستظهر هنا بمجرد إنشائها</p>
                    <a asp-action="ScheduledReports" class="btn btn-primary">
                        <i class="feather-clock me-2"></i>
                        عرض التقارير المجدولة
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="feather-filter me-2"></i>
                    تصفية حسب التاريخ
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Exports" method="get">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                        <input type="date" name="from" class="form-control" value="@from?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                        <input type="date" name="to" class="form-control" value="@to?.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="feather-search me-2"></i>
                        بحث
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="~/assets/vendors/js/datatables.min.js"></script>
    <script src="~/assets/vendors/js/daterangepicker.min.js"></script>
    
    <script>
        function deleteExport(id) {
            if (confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا التقرير المُصدَّر؟ سيتم حذف الملف نهائياً.", "Are you sure you want to delete this export? The file will be permanently removed.").ToString().Replace("'", "\\'"))')) {
                const form = document.getElementById('deleteForm');
                form.action = '@Url.Action("DeleteExport")/' + id;
                form.submit();
            }
        }

        function shareExport(id) {
            const url = window.location.origin + '@Url.Action("Download")/' + id;
            navigator.clipboard.writeText(url).then(() => {
                alert('@Html.Raw(Html.T("تم نسخ الرابط إلى الحافظة!", "Link copied to clipboard!").Replace("'", "\\'"))' + '\n\n' + url);
            }).catch(() => {
                prompt('@Html.Raw(Html.T("رابط التحميل:", "Download link:").Replace("'", "\\'"))', url);
            });
        }
    </script>
}

@functions {
    string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

