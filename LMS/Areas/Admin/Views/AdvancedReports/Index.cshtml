@{
    ViewData["Title"] = Html.T("التقارير المتقدمة", "Advanced Reports");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير المتقدمة", "Advanced Reports"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;

    var totalTemplates = ViewBag.TotalTemplates ?? 0;
    var activeTemplates = ViewBag.ActiveTemplates ?? 0;
    var totalScheduled = ViewBag.TotalScheduled ?? 0;
    var activeScheduled = ViewBag.ActiveScheduled ?? 0;
    var totalExports = ViewBag.TotalExports ?? 0;
    var recentExports = ViewBag.RecentExports ?? 0;
    var recentScheduledReports = ViewBag.RecentScheduledReports as IEnumerable<dynamic> ?? new List<dynamic>();
    var recentExportsList = ViewBag.RecentExportsList as IEnumerable<dynamic> ?? new List<dynamic>();
    var noTemplateLabel = Html.T("بدون قالب", "No template");
}

@section Styles {
    <style>
        .stat-card {
            transition: all 0.3s ease;
            border-radius: 12px;
            border: none;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        }
        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }
        .quick-action-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            cursor: pointer;
        }
        .quick-action-card:hover {
            border-color: var(--bs-primary);
            background-color: rgba(var(--bs-primary-rgb), 0.05);
        }
        .action-icon {
            width: 64px;
            height: 64px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.75rem;
        }
        .recent-item {
            padding: 1rem;
            border-radius: 8px;
            transition: background-color 0.2s;
        }
        .recent-item:hover {
            background-color: rgba(0,0,0,0.02);
        }
        .empty-state {
            padding: 3rem 1rem;
            text-align: center;
        }
        .empty-state i {
            font-size: 3rem;
            color: #ddd;
            margin-bottom: 1rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Statistics Overview -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">@Html.T("قوالب التقارير", "Report templates")</p>
                            <h3 class="fw-bold mb-0">@totalTemplates</h3>
                            <small class="text-success">
                                <i class="feather-check-circle me-1"></i>
                                @activeTemplates @Html.T("نشط", "Active")
                            </small>
                        </div>
                        <div class="action-icon bg-soft-primary text-primary">
                            <i class="feather-layout"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">@Html.T("تقارير مجدولة", "Scheduled reports")</p>
                            <h3 class="fw-bold mb-0">@totalScheduled</h3>
                            <small class="text-primary">
                                <i class="feather-clock me-1"></i>
                                @activeScheduled @Html.T("فعّال", "Active")
                            </small>
                        </div>
                        <div class="action-icon bg-soft-warning text-warning">
                            <i class="feather-calendar"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card stat-card h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">@Html.T("التقارير المُصدَّرة", "Exported reports")</p>
                            <h3 class="fw-bold mb-0">@totalExports</h3>
                            <small class="text-info">
                                <i class="feather-download me-1"></i>
                                @recentExports @Html.T("آخر 7 أيام", "Last 7 days")
                            </small>
                        </div>
                        <div class="action-icon bg-soft-success text-success">
                            <i class="feather-file-text"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <h5 class="fw-bold mb-3">
                <i class="feather-zap text-warning me-2"></i>
                @Html.T("إجراءات سريعة", "Quick actions")
            </h5>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="@Url.Action("CreateTemplate", "AdvancedReports")" class="text-decoration-none">
                <div class="card quick-action-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="action-icon bg-soft-primary text-primary mx-auto mb-3">
                            <i class="feather-plus"></i>
                        </div>
                        <h6 class="fw-semibold text-dark mb-1">@Html.T("إنشاء قالب جديد", "Create new template")</h6>
                        <p class="text-muted small mb-0">@Html.T("تصميم قالب تقرير مخصص", "Design a custom report template")</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="@Url.Action("CreateScheduledReport", "AdvancedReports")" class="text-decoration-none">
                <div class="card quick-action-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="action-icon bg-soft-warning text-warning mx-auto mb-3">
                            <i class="feather-clock"></i>
                        </div>
                        <h6 class="fw-semibold text-dark mb-1">@Html.T("جدولة تقرير", "Schedule report")</h6>
                        <p class="text-muted small mb-0">@Html.T("إنشاء تقرير تلقائي", "Create automatic report")</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="@Url.Action("Templates", "AdvancedReports")" class="text-decoration-none">
                <div class="card quick-action-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="action-icon bg-soft-info text-info mx-auto mb-3">
                            <i class="feather-layout"></i>
                        </div>
                        <h6 class="fw-semibold text-dark mb-1">@Html.T("إدارة القوالب", "Manage templates")</h6>
                        <p class="text-muted small mb-0">@Html.T("عرض وتعديل قوالب التقارير", "View and edit report templates")</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a href="@Url.Action("Exports", "AdvancedReports")" class="text-decoration-none">
                <div class="card quick-action-card h-100">
                    <div class="card-body text-center p-4">
                        <div class="action-icon bg-soft-success text-success mx-auto mb-3">
                            <i class="feather-download"></i>
                        </div>
                        <h6 class="fw-semibold text-dark mb-1">@Html.T("التقارير المُصدَّرة", "Exported reports")</h6>
                        <p class="text-muted small mb-0">@Html.T("تحميل التقارير السابقة", "Download previous reports")</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row g-4">
        <!-- Recent Scheduled Reports -->
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="feather-clock text-warning me-2"></i>
                        @Html.T("التقارير المجدولة الأخيرة", "Recent scheduled reports")
                    </h5>
                    <a href="@Url.Action("ScheduledReports", "AdvancedReports")" class="btn btn-sm btn-soft-primary">
                        @Html.T("عرض الكل", "View all")
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (recentScheduledReports.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var report in recentScheduledReports)
                            {
                                <div class="list-group-item recent-item">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md @(report.IsActive ? "bg-soft-success text-success" : "bg-soft-secondary text-secondary") rounded">
                                                <i class="feather-@(report.IsActive ? "play-circle" : "pause-circle")"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@report.Name</h6>
                                                <small class="text-muted">
                                                    @(report.ReportTemplate?.Name ?? noTemplateLabel)
                                                    •
                                                    @report.Frequency
                                                </small>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            @if (report.IsActive)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-secondary text-secondary">@Html.T("معطل", "Inactive")</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="feather-calendar d-block"></i>
                            <p class="text-muted mb-3">@Html.T("لا توجد تقارير مجدولة", "No scheduled reports")</p>
                            <a href="@Url.Action("CreateScheduledReport", "AdvancedReports")" class="btn btn-sm btn-primary">
                                <i class="feather-plus me-1"></i>
                                @Html.T("إنشاء تقرير مجدول", "Create scheduled report")
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Exports -->
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="feather-download text-success me-2"></i>
                        @Html.T("آخر التقارير المُصدَّرة", "Recent exported reports")
                    </h5>
                    <a href="@Url.Action("Exports", "AdvancedReports")" class="btn btn-sm btn-soft-primary">
                        @Html.T("عرض الكل", "View all")
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (recentExportsList.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var export in recentExportsList)
                            {
                                <div class="list-group-item recent-item">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-info text-info rounded">
                                                <i class="feather-file-text"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@(export.ScheduledReport?.Name ?? export.ReportTemplate?.Name ?? export.FileName ?? Html.T("تقرير مُصدَّر", "Exported report"))</h6>
                                                <small class="text-muted">
                                                    @export.Format
                                                    •
                                                    @(export.RequestedAt.ToString("dd/MM/yyyy hh:mm tt"))
                                                </small>
                                            </div>
                                        </div>
                                        <a href="@Url.Action("Download", "AdvancedReports", new { id = export.Id })" class="btn btn-sm btn-soft-primary">
                                            <i class="feather-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="feather-file-text d-block"></i>
                            <p class="text-muted mb-0">@Html.T("لا توجد تقارير مُصدَّرة بعد", "No exported reports yet")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Report Types Guide -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="feather-info text-primary me-2"></i>
                        @Html.T("أنواع التقارير المتاحة", "Available report types")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-primary text-primary rounded flex-shrink-0">
                                    <i class="feather-dollar-sign"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير مالية", "Financial reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("تتبع الإيرادات والمدفوعات والمبالغ المستردة", "Track revenue, payments and refunds")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-success text-success rounded flex-shrink-0">
                                    <i class="feather-users"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير المستخدمين", "User reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("إحصائيات الطلاب والمدربين والتسجيلات", "Student, instructor and enrollment stats")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-info text-info rounded flex-shrink-0">
                                    <i class="feather-book-open"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير الدورات", "Course reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("أداء الدورات ومعدلات الإكمال", "Course performance and completion rates")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-warning text-warning rounded flex-shrink-0">
                                    <i class="feather-trending-up"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير المبيعات", "Sales reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("تحليل المبيعات والاتجاهات", "Sales analysis and trends")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-danger text-danger rounded flex-shrink-0">
                                    <i class="feather-activity"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير النشاط", "Activity reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("سجلات تسجيل الدخول ونشاط المستخدمين", "Login logs and user activity")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-flex gap-3">
                                <div class="avatar-text avatar-md bg-soft-secondary text-secondary rounded flex-shrink-0">
                                    <i class="feather-settings"></i>
                                </div>
                                <div>
                                    <h6 class="fw-semibold mb-1">@Html.T("تقارير مخصصة", "Custom reports")</h6>
                                    <p class="text-muted small mb-0">@Html.T("إنشاء تقارير حسب احتياجاتك", "Create reports to fit your needs")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

