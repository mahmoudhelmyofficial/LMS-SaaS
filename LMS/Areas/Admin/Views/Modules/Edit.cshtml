@model LMS.Domain.Entities.Courses.Module

@{
    ViewData["Title"] = Html.T("تعديل الوحدة", "Edit module");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الوحدات", "Modules"), Url.Action("Index", "Modules")),
        (Html.T("تعديل وحدة", "Edit module"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CourseId" />
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات الوحدة", "Module information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12">
                                <label class="form-label" asp-for="Title">@Html.T("عنوان الوحدة", "Module title") <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" asp-for="Title" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label" asp-for="Description">@Html.T("الوصف", "Description")</label>
                                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="OrderIndex">@Html.T("الترتيب", "Order")</label>
                                <input type="number" class="form-control" asp-for="OrderIndex" min="0" />
                                <span asp-validation-for="OrderIndex" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label" asp-for="DurationMinutes">@Html.T("المدة الإجمالية (دقيقة)", "Total duration (min)")</label>
                                <input type="number" class="form-control" asp-for="DurationMinutes" min="0" readonly />
                                <small class="text-muted">@Html.T("يتم حسابها تلقائياً من الدروس", "Calculated automatically from lessons")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الإعدادات", "Settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="IsPublished" id="isPublished" />
                            <label class="form-check-label" for="isPublished">@Html.T("وحدة منشورة", "Published module")</label>
                        </div>
                    </div>
                </div>

                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ التعديلات", "Save changes")
                            </button>
                            <a href="@Url.Action("Index", "Modules", new { courseId = Model.CourseId })" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                @Html.T("إلغاء", "Cancel")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

