@model LMS.Areas.Admin.Controllers.ModuleStatisticsViewModel

@{
    ViewData["Title"] = Html.T("إحصائيات الوحدات", "Modules statistics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الوحدات", "Modules"), Url.Action("Index", "Modules")),
        (Html.T("الإحصائيات", "Statistics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <style>
        .stats-card {
            border-radius: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .stat-icon {
            font-size: 3rem;
            opacity: 0.2;
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
        }
        .progress-custom {
            height: 8px;
            border-radius: 10px;
        }
        .chart-container {
            position: relative;
            height: 350px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <!-- Total Modules -->
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full stats-card">
            <div class="card-body position-relative">
                <i class="feather-folder stat-icon text-primary"></i>
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted d-block mb-1">إجمالي الوحدات</span>
                        <h2 class="fw-bold mb-0 text-primary">@Model.TotalModules.ToString("N0")</h2>
                        <small class="text-muted">في جميع الدورات</small>
                    </div>
                    <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                        <i class="feather-folder"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Lessons -->
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full stats-card">
            <div class="card-body position-relative">
                <i class="feather-book-open stat-icon text-success"></i>
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted d-block mb-1">إجمالي الدروس</span>
                        <h2 class="fw-bold mb-0 text-success">@Model.TotalLessons.ToString("N0")</h2>
                        <small class="text-muted">في جميع الوحدات</small>
                    </div>
                    <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                        <i class="feather-book-open"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Average Lessons Per Module -->
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full stats-card">
            <div class="card-body position-relative">
                <i class="feather-bar-chart-2 stat-icon text-warning"></i>
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted d-block mb-1">متوسط الدروس لكل وحدة</span>
                        <h2 class="fw-bold mb-0 text-warning">@Model.AvgLessonsPerModule.ToString("F1")</h2>
                        <small class="text-muted">درس / وحدة</small>
                    </div>
                    <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                        <i class="feather-bar-chart-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Empty Modules -->
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full stats-card">
            <div class="card-body position-relative">
                <i class="feather-alert-circle stat-icon text-danger"></i>
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <span class="text-muted d-block mb-1">وحدات فارغة</span>
                        <h2 class="fw-bold mb-0 text-danger">@Model.EmptyModules.ToString("N0")</h2>
                        <small class="text-muted">بدون دروس</small>
                    </div>
                    <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                        <i class="feather-alert-circle"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <!-- Duration Statistics -->
        <div class="col-lg-6 col-md-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إحصائيات المدة الزمنية", "Duration statistics")</h5>
                    <div class="card-header-action">
                        <a href="javascript:void(0)" class="btn btn-sm btn-light-brand">
                            <i class="feather-clock me-2"></i>
                            المدة
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="p-4 border rounded bg-soft-primary">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div>
                                        <span class="text-muted d-block mb-2">متوسط مدة الوحدة</span>
                                        <h3 class="fw-bold mb-0">@((int)Model.AvgDurationMinutes) دقيقة</h3>
                                        <small class="text-muted">@TimeSpan.FromMinutes(Model.AvgDurationMinutes).ToString(@"hh\:mm")</small>
                                    </div>
                                    <div class="avatar-text avatar-xl bg-primary text-white">
                                        <i class="feather-clock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <div class="avatar-text avatar-lg bg-soft-success text-success mx-auto mb-3">
                                    <i class="feather-zap"></i>
                                </div>
                                <h5 class="fw-bold mb-1">@((Model.TotalModules > 0 ? (Model.TotalLessons / (double)Model.TotalModules) : 0).ToString("F0"))</h5>
                                <small class="text-muted">دروس في المتوسط</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <div class="avatar-text avatar-lg bg-soft-warning text-warning mx-auto mb-3">
                                    <i class="feather-activity"></i>
                                </div>
                                <h5 class="fw-bold mb-1">@((Model.EmptyModules > 0 ? ((Model.EmptyModules / (double)Model.TotalModules) * 100) : 0).ToString("F1"))%</h5>
                                <small class="text-muted">وحدات فارغة</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Distribution -->
        <div class="col-lg-6 col-md-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("توزيع المحتوى", "Content distribution")</h5>
                    <div class="card-header-action">
                        <a href="javascript:void(0)" class="btn btn-sm btn-light-brand">
                            <i class="feather-pie-chart me-2"></i>
                            التوزيع
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="contentDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Modules Quality Report -->
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تقرير جودة الوحدات", "Module quality report")</h5>
                    <div class="card-header-action">
                        <a asp-action="Index" asp-controller="Modules" class="btn btn-sm btn-light-brand">
                            <i class="feather-arrow-right me-2"></i>
                            عرض جميع الوحدات
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="border rounded p-4">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <h6 class="fw-bold mb-0">الوحدات المكتملة</h6>
                                    <span class="badge bg-soft-success text-success">@((Model.TotalModules - Model.EmptyModules).ToString("N0"))</span>
                                </div>
                                <div class="progress progress-custom">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @((Model.TotalModules > 0 ? ((Model.TotalModules - Model.EmptyModules) / (double)Model.TotalModules * 100) : 0).ToString("F0"))%" 
                                         aria-valuenow="@((Model.TotalModules - Model.EmptyModules))" 
                                         aria-valuemin="0" 
                                         aria-valuemax="@Model.TotalModules">
                                    </div>
                                </div>
                                <small class="text-muted mt-2 d-block">
                                    @((Model.TotalModules > 0 ? ((Model.TotalModules - Model.EmptyModules) / (double)Model.TotalModules * 100) : 0).ToString("F1"))% من إجمالي الوحدات
                                </small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-4">
                                <div class="d-flex align-items-center justify-content-between mb-3">
                                    <h6 class="fw-bold mb-0">الوحدات الفارغة</h6>
                                    <span class="badge bg-soft-danger text-danger">@Model.EmptyModules.ToString("N0")</span>
                                </div>
                                <div class="progress progress-custom">
                                    <div class="progress-bar bg-danger" role="progressbar" 
                                         style="width: @((Model.TotalModules > 0 ? (Model.EmptyModules / (double)Model.TotalModules * 100) : 0).ToString("F0"))%" 
                                         aria-valuenow="@Model.EmptyModules" 
                                         aria-valuemin="0" 
                                         aria-valuemax="@Model.TotalModules">
                                    </div>
                                </div>
                                <small class="text-muted mt-2 d-block">
                                    @((Model.TotalModules > 0 ? (Model.EmptyModules / (double)Model.TotalModules * 100) : 0).ToString("F1"))% من إجمالي الوحدات
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommendations -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التوصيات والملاحظات", "Recommendations and notes")</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-dismissible mb-4 p-4 d-flex alert-soft-warning-message" role="alert">
                        <div class="me-4 d-none d-md-block">
                            <i class="feather feather-alert-triangle fs-1"></i>
                        </div>
                        <div>
                            <h4 class="alert-heading fw-bold mb-2">@Html.T("تحسينات مطلوبة", "Improvements needed")</h4>
                            @if (Model.EmptyModules > 0)
                            {
                                <p class="mb-2">
                                    <i class="feather-chevron-left me-2"></i>
                                    @Html.T("يوجد", "There are") <strong>@Model.EmptyModules</strong> @Html.T("وحدة فارغة بدون محتوى. يُنصح بإضافة دروس أو حذف هذه الوحدات.", "empty module(s) with no content. Consider adding lessons or removing them.")
                                </p>
                            }
                            @if (Model.AvgLessonsPerModule < 3)
                            {
                                <p class="mb-2">
                                    <i class="feather-chevron-left me-2"></i>
                                    @Html.T("متوسط الدروس لكل وحدة منخفض", "Average lessons per module is low") (<strong>@Model.AvgLessonsPerModule.ToString("F1")</strong>). @Html.T("يُنصح بإضافة المزيد من المحتوى.", "Consider adding more content.")
                                </p>
                            }
                            @if (Model.AvgDurationMinutes < 30)
                            {
                                <p class="mb-0">
                                    <i class="feather-chevron-left me-2"></i>
                                    @Html.T("متوسط مدة الوحدة قصيرة", "Average module duration is short") (<strong>@((int)Model.AvgDurationMinutes) @Html.T("دقيقة", "min")</strong>). @Html.T("قد تحتاج إلى محتوى أكثر تفصيلاً.", "You may need more detailed content.")
                                </p>
                            }
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Html.T("إغلاق", "Close")"></button>
                    </div>

                    <div class="alert alert-dismissible p-4 d-flex alert-soft-success-message" role="alert">
                        <div class="me-4 d-none d-md-block">
                            <i class="feather feather-check-circle fs-1"></i>
                        </div>
                        <div>
                            <h4 class="alert-heading fw-bold mb-2">@Html.T("نقاط القوة", "Strengths")</h4>
                            <p class="mb-2">
                                <i class="feather-chevron-left me-2"></i>
                                @Html.T("لديك", "You have") <strong>@Model.TotalLessons.ToString("N0")</strong> @Html.T("درس منظم في", "lesson(s) organized in") <strong>@Model.TotalModules.ToString("N0")</strong> @Html.T("وحدة.", "module(s).")
                            </p>
                            @if (Model.AvgLessonsPerModule >= 5)
                            {
                                <p class="mb-0">
                                    <i class="feather-chevron-left me-2"></i>
                                    @Html.T("محتوى غني! متوسط", "Rich content! Average") <strong>@Model.AvgLessonsPerModule.ToString("F1")</strong> @Html.T("درس لكل وحدة يعتبر ممتازاً.", "lesson(s) per module is excellent.")
                                </p>
                            }
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Html.T("إغلاق", "Close")"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Content Distribution Chart
        const ctx = document.getElementById('contentDistributionChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['وحدات مكتملة', 'وحدات فارغة'],
                datasets: [{
                    data: [@(Model.TotalModules - Model.EmptyModules), @Model.EmptyModules],
                    backgroundColor: ['#0ab39c', '#f06548'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        rtl: true,
                        labels: {
                            font: {
                                family: 'Cairo',
                                size: 14
                            },
                            padding: 20,
                            usePointStyle: true
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += context.parsed + ' وحدة';
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
}

