@model IEnumerable<LMS.Domain.Entities.Courses.Module>

@{
    ViewData["Title"] = Html.T("إدارة الوحدات التعليمية", "Learning modules management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("المحتوى التعليمي", "Content"), null),
        (Html.T("الوحدات", "Modules"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var courseId = ViewBag.CourseId as string;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة وحدة", "Add module"), "feather-plus", Url.Action("Create", "Modules", new { courseId }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .module-card {
            border-left: 4px solid #3454d1;
            transition: all 0.3s ease;
        }
        .module-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateX(-5px);
        }
        .lesson-count {
            font-size: 2rem;
            font-weight: 700;
        }
        .sortable-handle {
            cursor: move;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            @if (Model != null && Model.Any())
            {
                <div id="modulesList">
                    @foreach (var module in Model.OrderBy(m => m.OrderIndex))
                    {
                        <div class="card module-card mb-3" data-module-id="@module.Id">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <div class="sortable-handle avatar-text avatar-lg bg-soft-primary text-primary">
                                            <i class="feather-menu"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex align-items-center gap-3 mb-2">
                                            <h5 class="mb-0">@module.Title</h5>
                                            <span class="badge bg-soft-info text-info">الوحدة @module.OrderIndex</span>
                                            @if (module.IsPublished)
                                            {
                                                <span class="badge bg-soft-success text-success">منشورة</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-secondary text-secondary">مسودة</span>
                                            }
                                        </div>
                                        <p class="text-muted mb-2">@module.Description</p>
                                        <div class="d-flex gap-3">
                                            <small class="text-muted">
                                                <i class="feather-file-text me-1"></i>
                                                @module.Lessons.Count() دروس
                                            </small>
                                            <small class="text-muted">
                                                <i class="feather-clock me-1"></i>
                                                @module.Lessons.Sum(l => l.DurationMinutes) دقيقة
                                            </small>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <div class="hstack gap-2">
                                            <a href="@Url.Action("Details", "Modules", new { id = module.Id })" class="btn btn-sm btn-light-brand" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                <i class="feather-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Modules", new { id = module.Id })" class="btn btn-sm btn-light-brand" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                <i class="feather-edit"></i>
                                            </a>
                                            <a href="@Url.Action("ManageLessons", "Lessons", new { moduleId = module.Id })" class="btn btn-sm btn-success" data-bs-toggle="tooltip" title="@Html.T("إدارة الدروس", "Manage lessons")">
                                                <i class="feather-layers"></i>
                                                الدروس
                                            </a>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                                    <i class="feather-more-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Duplicate", "Modules", new { id = module.Id })">
                                                            <i class="feather-copy me-3"></i>
                                                            نسخ الوحدة
                                                        </a>
                                                    </li>
                                                    @if (module.IsPublished)
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("Unpublish", "Modules", new { id = module.Id })">
                                                                <i class="feather-eye-off me-3"></i>
                                                                إلغاء النشر
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("Publish", "Modules", new { id = module.Id })">
                                                                <i class="feather-eye me-3"></i>
                                                                نشر الوحدة
                                                            </a>
                                                        </li>
                                                    }
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <form asp-action="Delete" asp-route-id="@module.Id" method="post" class="d-inline"
                                                              onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الوحدة؟ سيتم حذف جميع الدروس المرتبطة بها.", "Are you sure you want to delete this module? All related lessons will be deleted.").ToString().Replace("'", "\\'"))');">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item text-danger border-0 bg-transparent w-100 text-start">
                                                                <i class="feather-trash-2 me-3"></i>
                                                                حذف
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Module Lessons -->
                                @if (module.Lessons != null && module.Lessons.Any())
                                {
                                    <div class="mt-3 pt-3 border-top">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <h6 class="mb-0">@Html.T("الدروس", "Lessons") (@module.Lessons.Count())</h6>
                                            <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse" data-bs-target="#lessons-@module.Id">
                                                <i class="feather-chevron-down"></i>
                                            </button>
                                        </div>
                                        <div class="collapse" id="lessons-@module.Id">
                                            <div class="list-group list-group-flush">
                                                @foreach (var lesson in module.Lessons.OrderBy(l => l.OrderIndex).Take(5))
                                                {
                                                    <div class="list-group-item d-flex align-items-center justify-content-between px-0">
                                                        <div class="d-flex align-items-center gap-3">
                                                            <i class="feather-@(lesson.Type == LMS.Domain.Enums.LessonType.Video ? "video" : "file-text") text-primary"></i>
                                                            <span>@lesson.Title</span>
                                                        </div>
                                                        <div class="d-flex align-items-center gap-3">
                                                            <span class="badge bg-soft-primary text-primary">@lesson.Duration دقيقة</span>
                                                            @if (lesson.IsFree)
                                                            {
                                                                <span class="badge bg-soft-success text-success">مجاني</span>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                                @if (module.Lessons.Count() > 5)
                                                {
                                                    <a href="@Url.Action("ManageLessons", "Lessons", new { moduleId = module.Id })" class="list-group-item list-group-item-action text-center text-primary">
                                                        عرض جميع الدروس (@module.Lessons.Count())
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-folder fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد وحدات تعليمية بعد", "No modules yet")</h5>
                        <p class="text-muted mb-4">ابدأ بإنشاء وحدات تعليمية لتنظيم محتوى الدورة</p>
                        <a href="@Url.Action("Create", "Modules", new { courseId })" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            إضافة وحدة جديدة
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Sortable for drag and drop
            var el = document.getElementById('modulesList');
            if (el) {
                var sortable = Sortable.create(el, {
                    handle: '.sortable-handle',
                    animation: 150,
                    onEnd: function(evt) {
                        updateModuleOrder();
                    }
                });
            }

            // Tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function updateModuleOrder() {
            var order = [];
            $('#modulesList .module-card').each(function(index) {
                order.push({
                    id: $(this).data('module-id'),
                    order: index + 1
                });
            });
            
            // Send AJAX request to update order
            $.ajax({
                url: '@Url.Action("UpdateOrder", "Modules")',
                method: 'POST',
                data: JSON.stringify(order),
                contentType: 'application/json',
                success: function(response) {
                    console.log('Order updated successfully');
                }
            });
        }

    </script>
}

