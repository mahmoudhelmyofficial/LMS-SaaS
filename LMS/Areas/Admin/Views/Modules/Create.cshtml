@model LMS.Domain.Entities.Courses.Module

@{
    ViewData["Title"] = Html.T("إضافة وحدة تعليمية", "Add learning module");
    var courseId = ViewBag.CourseId as string;
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("المحتوى التعليمي", "Content"), null),
        (Html.T("الوحدات", "Modules"), Url.Action("Index", "Modules", new { courseId })),
        (Html.T("إضافة وحدة", "Add Module"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form asp-action="Create" method="post">
        <input type="hidden" name="CourseId" value="@courseId" />
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات الوحدة", "Module Information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@Html.T("عنوان الوحدة", "Module title") <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="@Html.T("مثال: مقدمة في البرمجة", "e.g. Introduction to Programming")" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Html.T("وصف الوحدة", "Module description")</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="@Html.T("وصف مختصر عن محتوى الوحدة", "Brief description of the module content")"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="OrderIndex" class="form-label">@Html.T("ترتيب الوحدة", "Module order") <span class="text-danger">*</span></label>
                                <input asp-for="OrderIndex" type="number" class="form-control" min="1" value="1" required />
                                <small class="text-muted">@Html.T("يحدد ترتيب الوحدة في الدورة", "Determines the order of the module in the course")</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Html.T("مدة الوحدة (دقيقة)", "Module duration (min)")</label>
                                <input type="number" class="form-control" placeholder="@Html.T("سيتم حسابها تلقائياً", "Calculated automatically")" readonly />
                                <small class="text-muted">@Html.T("مجموع مدة جميع الدروس", "Sum of all lessons duration")</small>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="feather-info me-2"></i>
                            @Html.T("بعد إنشاء الوحدة، يمكنك إضافة الدروس إليها", "After creating the module, you can add lessons to it")
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Actions -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="publish" class="btn btn-primary">
                                <i class="feather-check me-2"></i>
                                @Html.T("حفظ ونشر", "Save & Publish")
                            </button>
                            <button type="submit" name="action" value="draft" class="btn btn-secondary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ كمسودة", "Save as Draft")
                            </button>
                            <a asp-action="Index" asp-route-courseId="@courseId" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                @Html.T("إلغاء", "Cancel")
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Settings -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات", "Settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="isPublishedSwitch" asp-for="IsPublished">
                            <label class="form-check-label" for="isPublishedSwitch">
                                @Html.T("نشر الوحدة", "Publish Module")
                            </label>
                        </div>

                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isFreeSwitch">
                            <label class="form-check-label" for="isFreeSwitch">
                                محتوى مجاني (معاينة)
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

