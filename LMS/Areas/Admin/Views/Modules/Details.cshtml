@model LMS.Domain.Entities.Courses.Module

@{
    ViewData["Title"] = Html.T("تفاصيل الوحدة", "Module details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        ("إدارة الوحدات", Url.Action("Index", "Modules")),
        (Model.Title, null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        ("تعديل", "feather-edit", Url.Action("Edit", "Modules", new { id = Model.Id }), "btn-primary"),
        ("إدارة الدروس", "feather-list", Url.Action("Index", "Lessons", new { moduleId = Model.Id }), "btn-success")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الوحدة", "Module information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="text-muted fs-12 mb-1">@Html.T("عنوان الوحدة", "Module title")</label>
                            <h5 class="fw-bold">@Model.Title</h5>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("الوصف", "Description")</label>
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        }

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("الترتيب", "Order")</label>
                            <p class="fw-semibold mb-0">#@Model.OrderIndex</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("المدة الإجمالية", "Total duration")</label>
                            <p class="fw-semibold mb-0">@Model.DurationMinutes @Html.T("دقيقة", "min")</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("عدد الدروس", "Lessons count")</label>
                            <p class="fw-semibold mb-0">@Model.Lessons.Count @Html.T("درس", "lessons")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ الإنشاء", "Created")</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("آخر تحديث", "Last updated")</label>
                            <p class="mb-0">@(Model.UpdatedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لم يتم التحديث", "Not updated"))</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Lessons.Any())
            {
                <div class="card stretch stretch-full mt-4">
                    <div class="card-header">
                        <h5 class="card-title">دروس الوحدة (@Model.Lessons.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var lesson in Model.Lessons.OrderBy(l => l.OrderIndex))
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                            <i class="feather-file-text"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@lesson.Title</h6>
                                            <small class="text-muted">@lesson.DurationMinutes @Html.T("دقيقة", "min") • @lesson.LessonType</small>
                                        </div>
                                    </div>
                                    <div>
                                        <a href="@Url.Action("Edit", "Lessons", new { id = lesson.Id })" class="btn btn-sm btn-light-brand">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحالة", "Status")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("منشورة", "Published")</label>
                        <p class="mb-0">
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نعم", "Yes")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">@Html.T("لا", "No")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Modules", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            تعديل الوحدة
                        </a>
                        <a href="@Url.Action("Index", "Lessons", new { moduleId = Model.Id })" class="btn btn-light-brand">
                            <i class="feather-list me-2"></i>
                            @Html.T("إدارة الدروس", "Manage lessons")
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-grid"
                              onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الوحدة؟ سيتم حذف جميع الدروس المرتبطة بها.", "Are you sure you want to delete this module? All related lessons will be deleted.").Replace("'", "\\'"))');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="feather-trash-2 me-2"></i>
                                @Html.T("حذف الوحدة", "Delete module")
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


