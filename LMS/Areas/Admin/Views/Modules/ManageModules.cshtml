@model IEnumerable<LMS.Domain.Entities.Courses.Module>

@{
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
    ViewData["Title"] = Html.T("إدارة الوحدات", "Manage Modules") + " - " + (course?.Title ?? "");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (course?.Title ?? Html.T("الدورة", "Course"), Url.Action("Details", "Courses", new { id = course?.Id })),
        (Html.T("إدارة الوحدات", "Manage Modules"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(course?.ThumbnailUrl))
                    {
                        <img src="@course.ThumbnailUrl" alt="@course.Title" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                            <i class="feather-book"></i>
                        </div>
                    }
                    <div>
                        <h4 class="mb-1">@course?.Title</h4>
                        <p class="text-muted mb-0">@ViewBag.TotalModules @Html.T("وحدة", "module") • @ViewBag.TotalLessons @Html.T("درس", "lesson")</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModuleModal">
                        <i class="feather-plus me-2"></i>@Html.T("إضافة وحدة", "Add module")
                    </button>
                    <a href="@Url.Action("Details", "Courses", new { id = course?.Id })" class="btn btn-light-brand">
                        <i class="feather-arrow-right me-2"></i>@Html.T("عودة للدورة", "Back to course")
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modules List -->
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title">@Html.T("الوحدات", "Modules")</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="accordion" id="modulesAccordion">
                    @foreach (var module in Model.OrderBy(m => m.OrderIndex))
                    {
                        <div class="accordion-item mb-3 border rounded">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#module_@module.Id">
                                    <div class="d-flex align-items-center gap-3 w-100 me-3">
                                        <span class="badge bg-primary">@module.OrderIndex</span>
                                        <div class="flex-grow-1">
                                            <span class="fw-semibold">@module.Title</span>
                                            <small class="text-muted d-block">@module.Lessons.Count @Html.T("درس", "lesson")</small>
                                        </div>
                                        <div class="d-flex gap-2" onclick="event.stopPropagation();">
                                            <a href="@Url.Action("Details", "Modules", new { id = module.Id })" class="btn btn-sm btn-light-brand" data-bs-toggle="tooltip" title="@Html.T("تفاصيل", "Details")">
                                                <i class="feather-eye"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@module.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-light-danger" onclick="return confirm('@Html.Raw(Html.T("هل تريد حذف هذه الوحدة؟", "Do you want to delete this module?"))')" data-bs-toggle="tooltip" title="@Html.T("حذف", "Delete")">
                                                    <i class="feather-trash-2"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                            <div id="module_@module.Id" class="accordion-collapse collapse" data-bs-parent="#modulesAccordion">
                                <div class="accordion-body">
                                    @if (!string.IsNullOrEmpty(module.Description))
                                    {
                                        <p class="text-muted mb-3">@module.Description</p>
                                    }

                                    @if (module.Lessons.Any())
                                    {
                                        <div class="list-group list-group-flush">
                                            @foreach (var lesson in module.Lessons.OrderBy(l => l.OrderIndex))
                                            {
                                                <div class="list-group-item d-flex align-items-center justify-content-between px-0">
                                                    <div class="d-flex align-items-center gap-3">
                                                        <span class="badge bg-soft-secondary text-secondary">@lesson.OrderIndex</span>
                                                        <div>
                                                            <span class="fw-semibold">@lesson.Title</span>
                                                            @if (lesson.DurationMinutes > 0)
                                                            {
                                                                <small class="text-muted d-block">@lesson.DurationMinutes @Html.T("دقيقة", "min")</small>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="d-flex gap-2">
                                                        @if (lesson.IsFree)
                                                        {
                                                            <span class="badge bg-soft-success text-success">@Html.T("مجاني", "Free")</span>
                                                        }
                                                        <a href="@Url.Action("Details", "Lessons", new { id = lesson.Id })" class="btn btn-sm btn-light">
                                                            <i class="feather-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0 text-center py-3">@Html.T("لا توجد دروس في هذه الوحدة", "No lessons in this module")</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-3">
                        <i class="feather-folder"></i>
                    </div>
                    <h5>@Html.T("لا توجد وحدات", "No modules")</h5>
                    <p class="text-muted mb-3">@Html.T("ابدأ بإضافة وحدة لهذه الدورة", "Start by adding a module to this course")</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModuleModal">
                        <i class="feather-plus me-2"></i>@Html.T("إضافة وحدة", "Add module")
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Module Modal -->
<div class="modal fade" id="addModuleModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateModule" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="courseId" value="@course?.Id" />
                <div class="modal-header">
                    <h5 class="modal-title">@Html.T("إضافة وحدة جديدة", "Add new module")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">@Html.T("عنوان الوحدة", "Module title") <span class="text-danger">*</span></label>
                        <input type="text" name="title" class="form-control" required placeholder="@Html.T("مثال: المقدمة والأساسيات", "e.g. Introduction and basics")" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.T("الوصف", "Description")</label>
                        <textarea name="description" class="form-control" rows="3" placeholder="@Html.T("وصف اختياري للوحدة", "Optional module description")"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-primary">@Html.T("إضافة", "Add")</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

