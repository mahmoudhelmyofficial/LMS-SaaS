@model IEnumerable<LMS.Domain.Entities.Settings.Currency>
@{
    ViewData["Title"] = Html.T("إدارة العملات", "Currencies management");
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("الإعدادات", "Settings"), "#"),
        (Html.T("العملات", "Currencies"), "")
    };
    var exchangeRates = ViewBag.ExchangeRates as Dictionary<string, decimal> ?? new Dictionary<string, decimal>();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">
                <i class="fas fa-coins text-warning me-2"></i>
                @Html.T("إدارة العملات", "Currencies Management")
            </h4>
            <p class="text-muted mb-0">@Html.T("إدارة العملات المدعومة وأسعار الصرف", "Manage supported currencies and exchange rates")</p>
        </div>
        <div class="d-flex gap-2">
            <form asp-action="UpdateExchangeRates" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-sync-alt me-1"></i>
                    @Html.T("تحديث الأسعار", "Update Rates")
                </button>
            </form>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>
                @Html.T("إضافة عملة", "Add Currency")
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Currencies Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th>@Html.T("العملة", "Currency")</th>
                            <th>@Html.T("الرمز", "Symbol")</th>
                            <th>@Html.T("الدولة", "Country")</th>
                            <th>@Html.T("سعر الصرف", "Exchange rate")</th>
                            <th>@Html.T("آخر تحديث", "Last updated")</th>
                            <th>@Html.T("الحالة", "Status")</th>
                            <th style="width: 150px;">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var currency in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">@currency.DisplayOrder</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="currency-icon me-3">
                                            <span class="fs-4">@currency.Symbol</span>
                                        </div>
                                        <div>
                                            <strong>@currency.Code</strong>
                                            @if (currency.IsBaseCurrency)
                                            {
                                                <span class="badge bg-success ms-1">أساسية</span>
                                            }
                                            <br>
                                            <small class="text-muted">@currency.Name</small>
                                            @if (!string.IsNullOrEmpty(currency.NameAr))
                                            {
                                                <small class="text-muted"> - @currency.NameAr</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark fs-6">@currency.Symbol</span>
                                    @if (!string.IsNullOrEmpty(currency.SymbolAr))
                                    {
                                        <span class="badge bg-light text-dark fs-6 ms-1">@currency.SymbolAr</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(currency.CountryCode))
                                    {
                                        <span class="fi fi-@currency.CountryCode.ToLower() me-1"></span>
                                    }
                                    @(currency.Country ?? "-")
                                </td>
                                <td>
                                    @if (currency.IsBaseCurrency)
                                    {
                                        <span class="text-success fw-bold">1.0000</span>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <input type="number" 
                                                   class="form-control form-control-sm rate-input" 
                                                   style="width: 100px;"
                                                   value="@currency.ExchangeRate.ToString("F4")"
                                                   data-currency-id="@currency.Id"
                                                   step="0.0001"
                                                   min="0.0001">
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-primary ms-1 update-rate-btn"
                                                    data-currency-id="@currency.Id"
                                                    title="@Html.T("حفظ", "Save")">
                                                <i class="fas fa-save"></i>
                                            </button>
                                        </div>
                                    }
                                </td>
                                <td>
                                    @if (currency.ExchangeRateUpdatedAt.HasValue)
                                    {
                                        <small class="text-muted">
                                            @currency.ExchangeRateUpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">-</small>
                                    }
                                </td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input toggle-active" 
                                               type="checkbox" 
                                               data-currency-id="@currency.Id"
                                               @(currency.IsActive ? "checked" : "")
                                               @(currency.IsBaseCurrency ? "disabled" : "")>
                                    </div>
                                    @if (currency.IsPaymentSupported)
                                    {
                                        <small class="text-success">
                                            <i class="fas fa-credit-card"></i> @Html.T("دفع", "Payment")
                                        </small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@currency.Id" 
                                           class="btn btn-outline-info" title="@Html.T("تفاصيل", "Details")">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@currency.Id" 
                                           class="btn btn-outline-primary" title="@Html.T("تعديل", "Edit")">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!currency.IsBaseCurrency)
                                        {
                                            <form asp-action="SetBaseCurrency" asp-route-id="@currency.Id" 
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success" 
                                                        title="@Html.T("تعيين كأساسية", "Set as default")"
                                                        onclick="return confirm('@(Html.T("هل تريد تعيين", "Do you want to set")) @currency.Name @(Html.T("كعملة أساسية؟", "as default currency?"))')">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            </form>
                                            <button type="button" 
                                                    class="btn btn-outline-danger delete-btn"
                                                    data-currency-id="@currency.Id"
                                                    data-currency-name="@currency.Name"
                                                    title="@Html.T("حذف", "Delete")">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="fas fa-coins fa-3x text-muted mb-3 d-block"></i>
                                    <p class="text-muted">@Html.T("لا توجد عملات مسجلة", "No currencies registered")</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>
                                        إضافة أول عملة
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Exchange Rate Info Card -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-info-circle text-info me-2"></i>
                        معلومات عن أسعار الصرف
                    </h6>
                    <ul class="mb-0 small text-muted">
                        <li>أسعار الصرف نسبة للعملة الأساسية</li>
                        <li>يتم تحديث الأسعار تلقائياً كل 6 ساعات</li>
                        <li>يمكنك تحديث سعر عملة محددة يدوياً</li>
                        <li>العملة الأساسية دائماً سعر صرفها 1.0</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-globe text-primary me-2"></i>
                        الأسواق المدعومة
                    </h6>
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-primary">مصر (EGP)</span>
                        <span class="badge bg-success">السعودية (SAR)</span>
                        <span class="badge bg-info">الإمارات (AED)</span>
                        <span class="badge bg-warning text-dark">الكويت (KWD)</span>
                        <span class="badge bg-danger">البحرين (BHD)</span>
                        <span class="badge bg-secondary">قطر (QAR)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف العملة <strong id="deleteCurrencyName"></strong>؟</p>
                <p class="text-danger small">هذا الإجراء لا يمكن التراجع عنه.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">@Html.T("حذف", "Delete")</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle active status
            document.querySelectorAll('.toggle-active').forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    const currencyId = this.dataset.currencyId;
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    
                    fetch(`/Admin/Currencies/ToggleActive/${currencyId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token,
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (!data.success) {
                            alert(data.message);
                            this.checked = !this.checked;
                        }
                    });
                });
            });

            // Update exchange rate
            document.querySelectorAll('.update-rate-btn').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    const currencyId = this.dataset.currencyId;
                    const input = document.querySelector(`.rate-input[data-currency-id="${currencyId}"]`);
                    const rate = parseFloat(input.value);
                    const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                    
                    fetch(`/Admin/Currencies/UpdateRate/${currencyId}?rate=${rate}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': token
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            this.innerHTML = '<i class="fas fa-check text-success"></i>';
                            setTimeout(() => {
                                this.innerHTML = '<i class="fas fa-save"></i>';
                            }, 2000);
                        } else {
                            alert(data.message);
                        }
                    });
                });
            });

            // Delete modal
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            document.querySelectorAll('.delete-btn').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    const currencyId = this.dataset.currencyId;
                    const currencyName = this.dataset.currencyName;
                    
                    document.getElementById('deleteCurrencyName').textContent = currencyName;
                    document.getElementById('deleteForm').action = `/Admin/Currencies/Delete/${currencyId}`;
                    deleteModal.show();
                });
            });
        });
    </script>
}

