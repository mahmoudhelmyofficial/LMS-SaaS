@model LMS.Areas.Admin.Controllers.CurrencyCreateViewModel
@{
    ViewData["Title"] = Html.T("إضافة عملة جديدة", "Add new currency");
    ViewData["Breadcrumb"] = new List<(string Text, string Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("العملات", "Currencies"), Url.Action("Index", "Currencies")),
        (Html.T("إضافة عملة", "Add currency"), "")
    };
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        @Html.T("إضافة عملة جديدة", "Add new currency")
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information -->
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            المعلومات الأساسية
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label"></label>
                                <input asp-for="Code" class="form-control text-uppercase" 
                                       placeholder="@Html.T("مثال: USD", "e.g. USD")" maxlength="3" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                                <small class="text-muted">رمز ISO 4217 (3 أحرف)</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="@Html.T("دولار أمريكي", "US Dollar")" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="NameAr" class="form-label"></label>
                                <input asp-for="NameAr" class="form-control" placeholder="@Html.T("دولار أمريكي", "US Dollar")" dir="rtl" />
                                <span asp-validation-for="NameAr" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label asp-for="Symbol" class="form-label"></label>
                                <input asp-for="Symbol" class="form-control text-center fs-4" placeholder="$" />
                                <span asp-validation-for="Symbol" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SymbolAr" class="form-label"></label>
                                <input asp-for="SymbolAr" class="form-control text-center fs-4" placeholder="$" dir="rtl" />
                                <span asp-validation-for="SymbolAr" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="DecimalPlaces" class="form-label"></label>
                                <select asp-for="DecimalPlaces" class="form-select">
                                    <option value="0">0</option>
                                    <option value="2" selected>2</option>
                                    <option value="3">3</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="DisplayOrder" class="form-label"></label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" />
                            </div>
                        </div>

                        <!-- Country Information -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-globe text-primary me-2"></i>
                            معلومات الدولة
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="CountryCode" class="form-label"></label>
                                <input asp-for="CountryCode" class="form-control text-uppercase" 
                                       placeholder="@Html.T("مثال: US", "e.g. US")" maxlength="2" />
                                <small class="text-muted">رمز ISO 3166-1 (حرفين)</small>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Country" class="form-label"></label>
                                <input asp-for="Country" class="form-control" placeholder="@Html.T("الولايات المتحدة", "United States")" />
                            </div>
                        </div>

                        <!-- Exchange Rate -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-exchange-alt text-primary me-2"></i>
                            سعر الصرف
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ExchangeRate" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">1 EGP =</span>
                                    <input asp-for="ExchangeRate" type="number" step="0.0001" 
                                           class="form-control" />
                                    <span class="input-group-text" id="currencyCodeDisplay">???</span>
                                </div>
                                <span asp-validation-for="ExchangeRate" class="text-danger"></span>
                                <small class="text-muted">سعر الصرف مقابل العملة الأساسية (EGP)</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input asp-for="IsBaseCurrency" class="form-check-input" />
                                    <label asp-for="IsBaseCurrency" class="form-check-label">
                                        تعيين كعملة أساسية
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Limits -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-sliders-h text-primary me-2"></i>
                            حدود المعاملات
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MinimumAmount" class="form-label"></label>
                                <input asp-for="MinimumAmount" type="number" step="0.01" class="form-control" />
                                <small class="text-muted">اتركه فارغاً لعدم وجود حد أدنى</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaximumAmount" class="form-label"></label>
                                <input asp-for="MaximumAmount" type="number" step="0.01" class="form-control" />
                                <small class="text-muted">اتركه فارغاً لعدم وجود حد أقصى</small>
                            </div>
                        </div>

                        <!-- Display Options -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-cog text-primary me-2"></i>
                            خيارات العرض
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NumberFormat" class="form-label"></label>
                                <input asp-for="NumberFormat" class="form-control" 
                                       placeholder="@Html.T("مثال: #,##0.00", "e.g. #,##0.00")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input asp-for="SymbolAfterAmount" class="form-check-input" />
                                    <label asp-for="SymbolAfterAmount" class="form-check-label">
                                        عرض الرمز بعد المبلغ (100 ج.م بدلاً من ج.م 100)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-toggle-on text-primary me-2"></i>
                            الحالة
                        </h6>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" checked />
                                    <label asp-for="IsActive" class="form-check-label">
                                        العملة مفعّلة
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsPaymentSupported" class="form-check-input" checked />
                                    <label asp-for="IsPaymentSupported" class="form-check-label">
                                        مدعومة لعمليات الدفع
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right me-1"></i>
                                رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                حفظ العملة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('Code').addEventListener('input', function() {
            document.getElementById('currencyCodeDisplay').textContent = this.value.toUpperCase() || '???';
        });
    </script>
}

