@model LMS.Areas.Admin.Controllers.CurrencyEditViewModel
@{
    ViewData["Title"] = Html.T("تعديل العملة", "Edit currency") + $" - {Model.Code}";
    ViewData["Breadcrumbs"] = new List<(string Name, string? Url)>
    {
        (Html.T("العملات", "Currencies"), Url.Action("Index", "Currencies")),
        (Html.T("تعديل", "Edit") + " " + Model.Code, null)
    };
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        @Html.T("تعديل العملة", "Edit currency"): @Model.Code
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Information -->
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-info-circle text-primary me-2"></i>
                            @Html.T("المعلومات الأساسية", "Basic information")
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Code" class="form-label"></label>
                                <input asp-for="Code" class="form-control text-uppercase" maxlength="3" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="NameAr" class="form-label"></label>
                                <input asp-for="NameAr" class="form-control" dir="rtl" />
                                <span asp-validation-for="NameAr" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <label asp-for="Symbol" class="form-label"></label>
                                <input asp-for="Symbol" class="form-control text-center fs-4" />
                                <span asp-validation-for="Symbol" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="SymbolAr" class="form-label"></label>
                                <input asp-for="SymbolAr" class="form-control text-center fs-4" dir="rtl" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="DecimalPlaces" class="form-label"></label>
                                <select asp-for="DecimalPlaces" class="form-select">
                                    <option value="0">0</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="DisplayOrder" class="form-label"></label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" />
                            </div>
                        </div>

                        <!-- Country Information -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-globe text-primary me-2"></i>
                            @Html.T("معلومات الدولة", "Country information")
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="CountryCode" class="form-label"></label>
                                <input asp-for="CountryCode" class="form-control text-uppercase" maxlength="2" />
                            </div>
                            <div class="col-md-8">
                                <label asp-for="Country" class="form-label"></label>
                                <input asp-for="Country" class="form-control" />
                            </div>
                        </div>

                        <!-- Exchange Rate -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-exchange-alt text-primary me-2"></i>
                            @Html.T("سعر الصرف", "Exchange rate")
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ExchangeRate" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">1 EGP =</span>
                                    <input asp-for="ExchangeRate" type="number" step="0.0001" 
                                           class="form-control" readonly="@Model.IsBaseCurrency" />
                                    <span class="input-group-text">@Model.Code</span>
                                </div>
                                <span asp-validation-for="ExchangeRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input asp-for="IsBaseCurrency" class="form-check-input" 
                                           disabled="@Model.IsBaseCurrency" />
                                    <label asp-for="IsBaseCurrency" class="form-check-label">
                                        @Html.T("تعيين كعملة أساسية", "Set as base currency")
                                        @if (Model.IsBaseCurrency)
                                        {
                                            <span class="badge bg-success ms-1">@Html.T("حالية", "Current")</span>
                                        }
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Limits -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-sliders-h text-primary me-2"></i>
                            @Html.T("حدود المعاملات", "Transaction limits")
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="MinimumAmount" class="form-label"></label>
                                <input asp-for="MinimumAmount" type="number" step="0.01" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaximumAmount" class="form-label"></label>
                                <input asp-for="MaximumAmount" type="number" step="0.01" class="form-control" />
                            </div>
                        </div>

                        <!-- Display Options -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-cog text-primary me-2"></i>
                            @Html.T("خيارات العرض", "Display options")
                        </h6>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NumberFormat" class="form-label"></label>
                                <input asp-for="NumberFormat" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input asp-for="SymbolAfterAmount" class="form-check-input" />
                                    <label asp-for="SymbolAfterAmount" class="form-check-label">
                                        @Html.T("عرض الرمز بعد المبلغ", "Show symbol after amount")
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-toggle-on text-primary me-2"></i>
                            @Html.T("الحالة", "Status")
                        </h6>
                        
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" 
                                           disabled="@Model.IsBaseCurrency" checked="@(Model.IsBaseCurrency || Model.IsActive)" />
                                    <label asp-for="IsActive" class="form-check-label">
                                        @Html.T("العملة مفعّلة", "Currency is active")
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsPaymentSupported" class="form-check-input" />
                                    <label asp-for="IsPaymentSupported" class="form-check-label">
                                        @Html.T("مدعومة لعمليات الدفع", "Supported for payments")
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-right me-1"></i>
                                @Html.T("رجوع", "Back")
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                @Html.T("حفظ التغييرات", "Save changes")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

