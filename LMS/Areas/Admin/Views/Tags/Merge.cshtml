@model LMS.Areas.Admin.ViewModels.MergeTagsViewModel

@{
    ViewData["Title"] = Html.T("دمج الوسوم", "Merge tags");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الوسوم", "Tags"), Url.Action("Index", "Tags")),
        (Html.T("دمج الوسوم", "Merge tags"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-git-merge me-2"></i>
                        دمج الوسوم
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="feather-alert-triangle me-2"></i>
                        <strong>تنبيه:</strong> سيتم حذف الوسم المصدر بعد نقل جميع الدورات إلى الوسم الهدف. هذا الإجراء لا يمكن التراجع عنه.
                    </div>

                    <form asp-action="Merge" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SourceTagId" class="form-label">
                                        الوسم المصدر (سيتم حذفه) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="SourceTagId" class="form-select" required>
                                        <option value="">-- اختر الوسم المصدر --</option>
                                        @if (ViewBag.Tags != null)
                                        {
                                            @foreach (var tag in ViewBag.Tags as IEnumerable<dynamic>)
                                            {
                                                if (Model.SourceTagId == tag.Id)
                                                {
                                                    <option value="@tag.Id" selected>@tag.Name</option>
                                                }
                                                else
                                                {
                                                    <option value="@tag.Id">@tag.Name</option>
                                                }
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="SourceTagId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TargetTagId" class="form-label">
                                        الوسم الهدف (سيتم الدمج إليه) <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="TargetTagId" class="form-select" required>
                                        <option value="">-- اختر الوسم الهدف --</option>
                                        @if (ViewBag.Tags != null)
                                        {
                                            @foreach (var tag in ViewBag.Tags as IEnumerable<dynamic>)
                                            {
                                                <option value="@tag.Id">@tag.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="TargetTagId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @if (Model.CoursesAffected > 0)
                        {
                            <div class="alert alert-info mt-4">
                                <i class="feather-info me-2"></i>
                                <strong>@Model.CoursesAffected</strong> دورة سيتم نقلها من الوسم المصدر إلى الوسم الهدف.
                            </div>
                        }

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="feather-git-merge me-2"></i>
                                تنفيذ الدمج
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Prevent selecting the same tag for both source and target
            $('#SourceTagId, #TargetTagId').on('change', function() {
                var sourceId = $('#SourceTagId').val();
                var targetId = $('#TargetTagId').val();
                
                if (sourceId && targetId && sourceId === targetId) {
                    alert('@Html.Raw(Html.T("لا يمكن اختيار نفس الوسم كمصدر وهدف", "Cannot select the same tag as both source and target").Replace("'", "\\'"))');
                    $(this).val('');
                }
            });
        });
    </script>
}

