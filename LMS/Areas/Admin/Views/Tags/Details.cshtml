@model LMS.Domain.Entities.Courses.Tag

@{
    ViewData["Title"] = Html.T("تفاصيل الوسم", "Tag details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الوسوم", "Tags Management"), Url.Action("Index", "Tags")),
        (Model.Name, null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تعديل", "Edit"), "feather-edit", Url.Action("Edit", "Tags", new { id = Model.Id }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الوسم", "Tag Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="text-muted fs-12 mb-2">@Html.T("اسم الوسم", "Tag Name")</label>
                            <h4 class="mb-0">
                                <span class="badge" style="background-color: @Model.Color; color: white; font-size: 1.2rem;">
                                    #@Model.Name
                                </span>
                            </h4>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("الوصف", "Description")</label>
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        }

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("الرابط (Slug)", "Slug")</label>
                            <p class="fw-semibold mb-0"><code>@Model.Slug</code></p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("اللون", "Color")</label>
                            <p class="mb-0">
                                <span class="badge" style="background-color: @Model.Color; color: white;">
                                    @Model.Color
                                </span>
                            </p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("عدد الاستخدامات", "Usage Count")</label>
                            <h5 class="fw-bold mb-0">@Model.UsageCount</h5>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("الحالة", "Status")</label>
                            <p class="mb-0">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-danger text-danger">@Html.T("غير نشط", "Inactive")</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ الإنشاء", "Created At")</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.CourseTags?.Any() == true)
            {
                <div class="card stretch stretch-full mt-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الدورات المرتبطة", "Related Courses") (@Model.CourseTags.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var courseTag in Model.CourseTags.Take(10))
                            {
                                @if (courseTag.Course != null)
                                {
                                    <div class="list-group-item d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                <i class="feather-book"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0">@courseTag.Course.Title</h6>
                                                <small class="text-muted">
                                                    @courseTag.Course.TotalStudents @Html.T("طالب", "student(s)")
                                                </small>
                                            </div>
                                        </div>
                                        <a href="@Url.Action("Details", "Courses", new { id = courseTag.CourseId })" class="btn btn-sm btn-light-brand" title="@Html.T("عرض", "View")" aria-label="@Html.T("عرض", "View")">
                                            <i class="feather-eye"></i>
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                        @if (Model.CourseTags.Count > 10)
                        {
                            <div class="text-center mt-3">
                                <small class="text-muted">@Html.T("وهناك", "And") @(Model.CourseTags.Count - 10) @Html.T("دورة أخرى", "more course(s)")</small>
                            </div>
                        }
                    </div>
                </div>
            }

            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Edit", "Tags", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل الوسم", "Edit Tag")
                        </a>
                        @if (Model.UsageCount == 0)
                        {
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                                <i class="feather-trash-2 me-2"></i>
                                @Html.T("حذف الوسم", "Delete Tag")
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            if (confirm('@(Html.T("هل أنت متأكد من حذف هذا الوسم؟", "Are you sure you want to delete this tag?"))')) {
                console.log('Deleting tag:', '@Model.Id');
                // Implement delete
            }
        }
    </script>
}

