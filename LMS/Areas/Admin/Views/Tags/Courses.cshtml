@model IEnumerable<LMS.Domain.Entities.Courses.Course>

@{
    var tag = ViewBag.Tag as LMS.Domain.Entities.Courses.Tag;
    ViewData["Title"] = Html.T("دورات الوسم", "Tag courses") + ": " + (tag?.Name ?? "");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الوسوم", "Tags"), Url.Action("Index", "Tags")),
        (tag?.Name ?? Html.T("الوسم", "Tag"), Url.Action("Details", "Tags", new { id = tag?.Id })),
        (Html.T("الدورات", "Courses"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="card stretch stretch-full">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="feather-tag me-2"></i>
                دورات الوسم: 
                <span class="badge" style="background-color: @(tag?.Color ?? "#3454d1")">@tag?.Name</span>
                <span class="badge bg-secondary ms-2">@ViewBag.TotalCourses دورة</span>
            </h5>
            <a asp-action="Details" asp-route-id="@tag?.Id" class="btn btn-light btn-sm">
                <i class="feather-arrow-right me-2"></i>
                العودة للوسم
            </a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="feather-info me-2"></i>
                    لا توجد دورات مرتبطة بهذا الوسم
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.T("عنوان الدورة", "Course title")</th>
                                <th>@Html.T("المدرس", "Instructor")</th>
                                <th>@Html.T("الحالة", "Status")</th>
                                <th>@Html.T("السعر", "Price")</th>
                                <th>@Html.T("تاريخ الإنشاء", "Created date")</th>
                                <th>@Html.T("إجراءات", "Actions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>@course.Id</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="text-dark fw-semibold">
                                            @course.Title
                                        </a>
                                    </td>
                                    <td>@course.Instructor?.FirstName @course.Instructor?.LastName</td>
                                    <td>
                                        @switch (course.Status)
                                        {
                                            case LMS.Domain.Enums.CourseStatus.Draft:
                                                <span class="badge bg-secondary">@Html.T("مسودة", "Draft")</span>
                                                break;
                                            case LMS.Domain.Enums.CourseStatus.Published:
                                                <span class="badge bg-success">@Html.T("منشور", "Published")</span>
                                                break;
                                            case LMS.Domain.Enums.CourseStatus.PendingReview:
                                                <span class="badge bg-warning">@Html.T("قيد المراجعة", "Pending review")</span>
                                                break;
                                            case LMS.Domain.Enums.CourseStatus.Suspended:
                                                <span class="badge bg-danger">@Html.T("معلق", "Suspended")</span>
                                                break;
                                            default:
                                                <span class="badge bg-info">@course.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (course.IsFree)
                                        {
                                            <span class="text-success">@Html.T("مجاني", "Free")</span>
                                        }
                                        else
                                        {
                                            <span>@course.Price.ToString("N2") @Html.T("جنيه", "EGP")</span>
                                        }
                                    </td>
                                    <td>@course.CreatedAt.ToString("yyyy/MM/dd")</td>
                                    <td>
                                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-light">
                                            <i class="feather-eye"></i>
                                        </a>
                                        <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                            <i class="feather-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (ViewBag.TotalPages > 1)
                {
                    <nav aria-label="@Html.T("تنقل الصفحة", "Page navigation")">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" asp-action="Courses" asp-route-id="@tag?.Id" asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

