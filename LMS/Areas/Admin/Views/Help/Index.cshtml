@{
    ViewData["Title"] = Html.T("مركز المساعدة", "Help Center");
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">@Html.T("مركز المساعدة", "Help Center")</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item active">@Html.T("مركز المساعدة", "Help Center")</li>
        </ol>
    </div>
</div>

<!-- Hero Section -->
<div class="help-hero">
    <h1><i class="feather-shield me-2"></i> @Html.T("مركز مساعدة مدير النظام", "Admin Help Center")</h1>
    <p>@Html.T("دليلك الشامل لإدارة المنصة التعليمية بكفاءة واحترافية", "Your comprehensive guide to managing the learning platform efficiently and professionally")</p>
    
    <div class="help-search">
        <form asp-action="Search" method="get">
            <input type="text" name="query" placeholder="@Html.T("ابحث عن موضوع... مثال: إضافة مستخدم، إعدادات الدفع، التقارير", "Search for a topic... e.g. Add user, Payment settings, Reports")" />
            <i class="feather-search"></i>
        </form>
    </div>
    
    <div class="help-stats">
        <div class="help-stat">
            <span class="help-stat-number">10</span>
            <span class="help-stat-label">@Html.T("أقسام رئيسية", "Main sections")</span>
        </div>
        <div class="help-stat">
            <span class="help-stat-number">75+</span>
            <span class="help-stat-label">@Html.T("موضوع", "Topics")</span>
        </div>
        <div class="help-stat">
            <span class="help-stat-number">24/7</span>
            <span class="help-stat-label">@Html.T("دعم متواصل", "24/7 Support")</span>
        </div>
    </div>
</div>

<!-- Main Categories -->
<div class="row g-4">
    <!-- Getting Started -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="GettingStarted" class="help-category-card">
            <div class="help-category-icon blue">
                <i class="feather-play-circle"></i>
            </div>
            <h4>@Html.T("دليل البدء السريع", "Getting Started Guide")</h4>
            <p>@Html.T("تعرف على لوحة التحكم وأساسيات إدارة المنصة", "Learn the dashboard and platform management basics")</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> @Html.T("جولة في لوحة التحكم", "Dashboard tour")</li>
                <li><i class="feather-check"></i> @Html.T("فهم الإحصائيات الرئيسية", "Understanding key statistics")</li>
                <li><i class="feather-check"></i> @Html.T("الإعدادات الأساسية", "Basic settings")</li>
                <li><i class="feather-check"></i> @Html.T("صلاحيات المدير", "Admin permissions")</li>
            </ul>
        </a>
    </div>
    
    <!-- User Management -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="UserManagement" class="help-category-card">
            <div class="help-category-icon green">
                <i class="feather-users"></i>
            </div>
            <h4>@Html.T("إدارة المستخدمين", "User Management")</h4>
            <p>@Html.T("إدارة الطلاب والمدرسين وجميع المستخدمين", "Manage students, instructors and all users")</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> @Html.T("إضافة وتعديل المستخدمين", "Add and edit users")</li>
                <li><i class="feather-check"></i> @Html.T("إدارة طلبات المدرسين", "Manage instructor applications")</li>
                <li><i class="feather-check"></i> @Html.T("تتبع نشاط المستخدمين", "Track user activity")</li>
                <li><i class="feather-check"></i> @Html.T("إدارة الجلسات النشطة", "Manage active sessions")</li>
            </ul>
        </a>
    </div>
    
    <!-- Course Management -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="CourseManagement" class="help-category-card">
            <div class="help-category-icon purple">
                <i class="feather-book"></i>
            </div>
            <h4>إدارة الدورات</h4>
            <p>الإشراف على المحتوى التعليمي والموافقة عليه</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> مراجعة الدورات الجديدة</li>
                <li><i class="feather-check"></i> إدارة التصنيفات</li>
                <li><i class="feather-check"></i> الباقات ومسارات التعلم</li>
                <li><i class="feather-check"></i> بنك الأسئلة</li>
            </ul>
        </a>
    </div>
    
    <!-- Financial Management -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="FinancialManagement" class="help-category-card">
            <div class="help-category-icon orange">
                <i class="feather-dollar-sign"></i>
            </div>
            <h4>الإدارة المالية</h4>
            <p>المدفوعات والسحوبات والعمولات</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> معالجة المدفوعات</li>
                <li><i class="feather-check"></i> طلبات السحب</li>
                <li><i class="feather-check"></i> إعدادات العمولات</li>
                <li><i class="feather-check"></i> المبالغ المستردة</li>
            </ul>
        </a>
    </div>
    
    <!-- Marketing Tools -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="MarketingTools" class="help-category-card">
            <div class="help-category-icon red">
                <i class="feather-trending-up"></i>
            </div>
            <h4>أدوات التسويق</h4>
            <p>الكوبونات والعروض والتسويق بالعمولة</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> إدارة الكوبونات</li>
                <li><i class="feather-check"></i> العروض السريعة</li>
                <li><i class="feather-check"></i> برنامج الإحالة</li>
                <li><i class="feather-check"></i> الإعلانات</li>
            </ul>
        </a>
    </div>
    
    <!-- Reports & Analytics -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="ReportsAnalytics" class="help-category-card">
            <div class="help-category-icon teal">
                <i class="feather-bar-chart-2"></i>
            </div>
            <h4>التقارير والتحليلات</h4>
            <p>فهم البيانات واتخاذ قرارات مدروسة</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> تقارير المبيعات</li>
                <li><i class="feather-check"></i> التقارير المالية</li>
                <li><i class="feather-check"></i> تحليلات الدورات</li>
                <li><i class="feather-check"></i> تصدير التقارير</li>
            </ul>
        </a>
    </div>
    
    <!-- Communications -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="Communications" class="help-category-card">
            <div class="help-category-icon indigo">
                <i class="feather-mail"></i>
            </div>
            <h4>الاتصالات</h4>
            <p>البريد الإلكتروني والرسائل والإشعارات</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> إعدادات البريد</li>
                <li><i class="feather-check"></i> قوالب الرسائل</li>
                <li><i class="feather-check"></i> إشعارات النظام</li>
                <li><i class="feather-check"></i> الرسائل المباشرة</li>
            </ul>
        </a>
    </div>
    
    <!-- Platform Settings -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="PlatformSettings" class="help-category-card">
            <div class="help-category-icon slate">
                <i class="feather-settings"></i>
            </div>
            <h4>إعدادات المنصة</h4>
            <p>تخصيص المنصة حسب احتياجاتك</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> الإعدادات العامة</li>
                <li><i class="feather-check"></i> بوابات الدفع</li>
                <li><i class="feather-check"></i> إعدادات الوسائط</li>
                <li><i class="feather-check"></i> إعدادات SEO</li>
            </ul>
        </a>
    </div>
    
    <!-- Security & Monitoring -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="SecurityMonitoring" class="help-category-card">
            <div class="help-category-icon amber">
                <i class="feather-shield"></i>
            </div>
            <h4>الأمان والمراقبة</h4>
            <p>حماية المنصة ومراقبة النشاط</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> إعدادات الأمان</li>
                <li><i class="feather-check"></i> سجلات الدخول</li>
                <li><i class="feather-check"></i> سجلات الأخطاء</li>
                <li><i class="feather-check"></i> مراقبة الاختبارات</li>
            </ul>
        </a>
    </div>
    
    <!-- FAQ -->
    <div class="col-lg-4 col-md-6">
        <a asp-action="FAQ" class="help-category-card">
            <div class="help-category-icon pink">
                <i class="feather-help-circle"></i>
            </div>
            <h4>الأسئلة الشائعة</h4>
            <p>إجابات سريعة على الأسئلة المتكررة</p>
            <ul class="help-category-topics">
                <li><i class="feather-check"></i> مشاكل تقنية</li>
                <li><i class="feather-check"></i> أسئلة المدفوعات</li>
                <li><i class="feather-check"></i> إدارة المستخدمين</li>
                <li><i class="feather-check"></i> حل المشكلات</li>
            </ul>
        </a>
    </div>
</div>

<!-- Quick Links Section -->
<div class="quick-links-section mt-5">
    <h4 class="mb-4"><i class="feather-zap text-warning me-2"></i> وصول سريع للإجراءات الشائعة</h4>
    <div class="row g-3">
        <div class="col-lg-3 col-md-6">
            <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="quick-link-card">
                <i class="feather-user-plus"></i>
                <span>إضافة مستخدم جديد</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Admin" asp-controller="Courses" asp-action="Pending" class="quick-link-card">
                <i class="feather-clock"></i>
                <span>دورات قيد المراجعة</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Admin" asp-controller="WithdrawalMethods" asp-action="Pending" class="quick-link-card">
                <i class="feather-credit-card"></i>
                <span>طلبات السحب المعلقة</span>
            </a>
        </div>
        <div class="col-lg-3 col-md-6">
            <a asp-area="Admin" asp-controller="Reports" asp-action="Sales" class="quick-link-card">
                <i class="feather-file-text"></i>
                <span>تقرير المبيعات</span>
            </a>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="row mt-5">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="feather-headphones" style="font-size: 3rem; color: #1e3a5f;"></i>
                <h4 class="mt-3">هل تحتاج مساعدة إضافية؟</h4>
                <p class="text-muted mb-4">فريق الدعم الفني متاح لمساعدتك على مدار الساعة</p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-area="Admin" asp-controller="Support" asp-action="Index" class="btn btn-primary" style="background: #1e3a5f; border-color: #1e3a5f;">
                        <i class="feather-headphones me-2"></i>
                        تذاكر الدعم الفني
                    </a>
                    <a asp-area="Admin" asp-controller="ErrorLogs" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                        <i class="feather-alert-triangle me-2"></i>
                        سجل الأخطاء
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Search functionality
        document.querySelector('.help-search input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                var query = this.value.trim();
                if (query) {
                    window.location.href = '@Url.Action("Search", "Help")' + '?query=' + encodeURIComponent(query);
                }
            }
        });
    </script>
}

