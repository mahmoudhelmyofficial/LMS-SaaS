@{
    ViewData["Title"] = "دليل إعدادات المنصة";
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">إعدادات المنصة</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">مركز المساعدة</a></li>
            <li class="breadcrumb-item active">إعدادات المنصة</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        @await Html.PartialAsync("_HelpSidebar", "PlatformSettings")
    </div>
    
    <div class="col-lg-9">
        <!-- Hero -->
        <div class="help-content-hero">
            <div class="help-content-icon slate">
                <i class="feather-settings"></i>
            </div>
            <div>
                <h1>إعدادات المنصة</h1>
                <p>تخصيص جميع جوانب المنصة حسب احتياجاتك.</p>
            </div>
        </div>
        
        <!-- General Settings -->
        <div class="help-section" id="general">
            <h3><i class="feather-globe text-primary me-2"></i> الإعدادات العامة</h3>
            
            <p>الإعدادات الأساسية للمنصة:</p>
            
            <div class="checklist-card">
                <ul class="help-checklist">
                    <li>
                        <i class="feather-check-circle text-success"></i>
                        <div>
                            <strong>اسم المنصة</strong>
                            <span>الاسم الذي يظهر في العنوان والرسائل</span>
                        </div>
                    </li>
                    <li>
                        <i class="feather-check-circle text-success"></i>
                        <div>
                            <strong>الشعار</strong>
                            <span>شعار المنصة (يظهر في الهيدر والفوتر)</span>
                        </div>
                    </li>
                    <li>
                        <i class="feather-check-circle text-success"></i>
                        <div>
                            <strong>العملة الافتراضية</strong>
                            <span>العملة المستخدمة في الأسعار</span>
                        </div>
                    </li>
                    <li>
                        <i class="feather-check-circle text-success"></i>
                        <div>
                            <strong>معلومات التواصل</strong>
                            <span>البريد والهاتف والعنوان</span>
                        </div>
                    </li>
                </ul>
            </div>
            
            <a asp-area="Admin" asp-controller="PlatformSettings" asp-action="Index" class="btn btn-outline-primary mt-3" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-settings me-2"></i>
                الإعدادات العامة
            </a>
        </div>
        
        <!-- Payment Gateways -->
        <div class="help-section" id="payment-gateways">
            <h3><i class="feather-credit-card text-primary me-2"></i> بوابات الدفع</h3>
            
            <div class="help-callout info">
                <i class="feather-info"></i>
                <div>
                    <strong>نصيحة:</strong> فعّل بوابات دفع متعددة لتوفير خيارات أكثر للطلاب وزيادة المبيعات.
                </div>
            </div>
            
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-credit-card"></i></div>
                        <div>
                            <h6>Stripe</h6>
                            <p>بطاقات ائتمان دولية</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon indigo"><i class="feather-credit-card"></i></div>
                        <div>
                            <h6>PayPal</h6>
                            <p>مدفوعات دولية</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-smartphone"></i></div>
                        <div>
                            <h6>محافظ إلكترونية</h6>
                            <p>فودافون كاش، اتصالات كاش</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Admin" asp-controller="PaymentGatewaySettings" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-credit-card me-2"></i>
                إعدادات بوابات الدفع
            </a>
        </div>
        
        <!-- Media Settings -->
        <div class="help-section" id="media">
            <h3><i class="feather-image text-primary me-2"></i> إعدادات الوسائط</h3>
            
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon orange"><i class="feather-image"></i></div>
                        <div>
                            <h6>الصور</h6>
                            <p>أحجام وجودة الصور</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon red"><i class="feather-video"></i></div>
                        <div>
                            <h6>الفيديو</h6>
                            <p>خوادم الفيديو والتشفير</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon purple"><i class="feather-hard-drive"></i></div>
                        <div>
                            <h6>التخزين</h6>
                            <p>خوادم التخزين السحابي</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <a asp-area="Admin" asp-controller="MediaSettings" asp-action="Index" class="btn btn-outline-primary me-2" style="color: #1e3a5f; border-color: #1e3a5f;">
                    <i class="feather-image me-2"></i>
                    الصور والملفات
                </a>
                <a asp-area="Admin" asp-controller="VideoSettings" asp-action="Index" class="btn btn-outline-primary me-2" style="color: #1e3a5f; border-color: #1e3a5f;">
                    <i class="feather-video me-2"></i>
                    الفيديو
                </a>
                <a asp-area="Admin" asp-controller="StorageSettings" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                    <i class="feather-hard-drive me-2"></i>
                    التخزين
                </a>
            </div>
        </div>
        
        <!-- SEO -->
        <div class="help-section" id="seo">
            <h3><i class="feather-search text-primary me-2"></i> إعدادات SEO</h3>
            
            <p>تحسين ظهور المنصة في محركات البحث:</p>
            <ul>
                <li>عنوان ووصف الموقع</li>
                <li>الكلمات المفتاحية</li>
                <li>خريطة الموقع</li>
                <li>إعدادات Open Graph</li>
            </ul>
            
            <a asp-area="Admin" asp-controller="SeoSettings" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-search me-2"></i>
                إعدادات SEO
            </a>
        </div>
        
        <!-- Navigation -->
        <div class="help-navigation">
            <a asp-action="Communications" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                السابق: الاتصالات
            </a>
            <a asp-action="SecurityMonitoring" class="btn btn-primary" style="background: #1e3a5f; border-color: #1e3a5f;">
                التالي: الأمان والمراقبة
                <i class="feather-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</div>

