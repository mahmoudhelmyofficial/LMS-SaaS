@{
    ViewData["Title"] = "دليل الاتصالات";
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">الاتصالات</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">مركز المساعدة</a></li>
            <li class="breadcrumb-item active">الاتصالات</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        @await Html.PartialAsync("_HelpSidebar", "Communications")
    </div>
    
    <div class="col-lg-9">
        <!-- Hero -->
        <div class="help-content-hero">
            <div class="help-content-icon indigo">
                <i class="feather-mail"></i>
            </div>
            <div>
                <h1>الاتصالات والإشعارات</h1>
                <p>إعدادات البريد الإلكتروني والرسائل القصيرة والإشعارات.</p>
            </div>
        </div>
        
        <!-- Email Settings -->
        <div class="help-section" id="email">
            <h3><i class="feather-mail text-primary me-2"></i> إعدادات البريد الإلكتروني</h3>
            
            <div class="help-callout warning">
                <i class="feather-alert-triangle"></i>
                <div>
                    <strong>مهم:</strong> تأكد من إعداد البريد الإلكتروني بشكل صحيح لضمان وصول الإشعارات للمستخدمين.
                </div>
            </div>
            
            <h5>الإعدادات المطلوبة:</h5>
            <div class="help-table-wrapper">
                <table class="help-table">
                    <thead>
                        <tr>
                            <th>الإعداد</th>
                            <th>الوصف</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><strong>خادم SMTP</strong></td>
                            <td>عنوان خادم البريد (مثال: smtp.gmail.com)</td>
                        </tr>
                        <tr>
                            <td><strong>المنفذ</strong></td>
                            <td>رقم المنفذ (عادة 587 أو 465)</td>
                        </tr>
                        <tr>
                            <td><strong>اسم المستخدم</strong></td>
                            <td>البريد الإلكتروني للإرسال</td>
                        </tr>
                        <tr>
                            <td><strong>كلمة المرور</strong></td>
                            <td>كلمة مرور التطبيق</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <a asp-area="Admin" asp-controller="EmailSettings" asp-action="Index" class="btn btn-outline-primary mt-3" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-settings me-2"></i>
                إعدادات البريد
            </a>
        </div>
        
        <!-- Email Templates -->
        <div class="help-section" id="templates">
            <h3><i class="feather-layout text-primary me-2"></i> قوالب البريد</h3>
            
            <p>خصص رسائل البريد المرسلة للمستخدمين:</p>
            
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-user-plus"></i></div>
                        <div>
                            <h6>ترحيب المستخدم</h6>
                            <p>رسالة عند التسجيل</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-shopping-cart"></i></div>
                        <div>
                            <h6>تأكيد الشراء</h6>
                            <p>إيصال عند الشراء</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon orange"><i class="feather-key"></i></div>
                        <div>
                            <h6>إعادة كلمة المرور</h6>
                            <p>رابط إعادة التعيين</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon purple"><i class="feather-award"></i></div>
                        <div>
                            <h6>إكمال الدورة</h6>
                            <p>تهنئة وشهادة</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Admin" asp-controller="EmailTemplates" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-layout me-2"></i>
                قوالب البريد
            </a>
        </div>
        
        <!-- SMS -->
        <div class="help-section" id="sms">
            <h3><i class="feather-smartphone text-primary me-2"></i> الرسائل القصيرة SMS</h3>
            
            <p>أرسل رسائل نصية للمستخدمين (اختياري):</p>
            <ul>
                <li>إشعارات الشراء</li>
                <li>تذكير بالجلسات المباشرة</li>
                <li>رموز التحقق</li>
            </ul>
            
            <a asp-area="Admin" asp-controller="SmsSettings" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-smartphone me-2"></i>
                إعدادات SMS
            </a>
        </div>
        
        <!-- Push Notifications -->
        <div class="help-section" id="push">
            <h3><i class="feather-bell text-primary me-2"></i> الإشعارات الفورية</h3>
            
            <p>إشعارات تظهر في المتصفح أو التطبيق:</p>
            <ul>
                <li>إشعارات في الوقت الحقيقي</li>
                <li>تنبيهات الرسائل الجديدة</li>
                <li>تذكير بالمواعيد</li>
            </ul>
            
            <a asp-area="Admin" asp-controller="PushNotificationSettings" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-bell me-2"></i>
                إعدادات الإشعارات
            </a>
        </div>
        
        <!-- Navigation -->
        <div class="help-navigation">
            <a asp-action="ReportsAnalytics" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                السابق: التقارير
            </a>
            <a asp-action="PlatformSettings" class="btn btn-primary" style="background: #1e3a5f; border-color: #1e3a5f;">
                التالي: إعدادات المنصة
                <i class="feather-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</div>

