@{
    ViewData["Title"] = "دليل إدارة الدورات";
}

@await Html.PartialAsync("_HelpStyles")

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-0">إدارة الدورات</h5>
        </div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">الرئيسية</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">مركز المساعدة</a></li>
            <li class="breadcrumb-item active">إدارة الدورات</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 mb-4">
        @await Html.PartialAsync("_HelpSidebar", "CourseManagement")
    </div>
    
    <div class="col-lg-9">
        <!-- Hero -->
        <div class="help-content-hero">
            <div class="help-content-icon purple">
                <i class="feather-book"></i>
            </div>
            <div>
                <h1>إدارة الدورات والمحتوى</h1>
                <p>الإشراف على المحتوى التعليمي والموافقة عليه وتنظيمه.</p>
            </div>
        </div>
        
        <!-- Course Review -->
        <div class="help-section" id="course-review">
            <h3><i class="feather-check-circle text-primary me-2"></i> مراجعة الدورات</h3>
            
            <div class="help-callout warning">
                <i class="feather-alert-triangle"></i>
                <div>
                    <strong>مهم:</strong> كل دورة جديدة يتم إرسالها للنشر تحتاج موافقتك أولاً. راجعها للتأكد من جودة المحتوى.
                </div>
            </div>
            
            <h5>خطوات مراجعة دورة:</h5>
            <div class="help-steps-flow">
                <div class="flow-step">
                    <div class="flow-number">1</div>
                    <div class="flow-content">
                        <h6>افتح الدورة</h6>
                        <p>من قائمة الدورات قيد المراجعة</p>
                    </div>
                    <div class="flow-arrow"><i class="feather-arrow-left"></i></div>
                </div>
                <div class="flow-step">
                    <div class="flow-number">2</div>
                    <div class="flow-content">
                        <h6>راجع المحتوى</h6>
                        <p>العنوان، الوصف، الوحدات، الدروس</p>
                    </div>
                    <div class="flow-arrow"><i class="feather-arrow-left"></i></div>
                </div>
                <div class="flow-step">
                    <div class="flow-number">3</div>
                    <div class="flow-content">
                        <h6>اتخذ القرار</h6>
                        <p>موافقة، رفض مع ملاحظات، أو طلب تعديلات</p>
                    </div>
                </div>
            </div>
            
            <div class="row g-3 mt-4">
                <div class="col-md-4">
                    <a asp-area="Admin" asp-controller="Courses" asp-action="Pending" class="d-block p-3 bg-warning bg-opacity-10 rounded text-center text-decoration-none">
                        <i class="feather-clock text-warning fs-24 mb-2 d-block"></i>
                        <span class="fw-semibold text-dark">قيد المراجعة</span>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-area="Admin" asp-controller="Courses" asp-action="Index" class="d-block p-3 bg-success bg-opacity-10 rounded text-center text-decoration-none">
                        <i class="feather-check-circle text-success fs-24 mb-2 d-block"></i>
                        <span class="fw-semibold text-dark">منشورة</span>
                    </a>
                </div>
                <div class="col-md-4">
                    <a asp-area="Admin" asp-controller="Courses" asp-action="Drafts" class="d-block p-3 bg-secondary bg-opacity-10 rounded text-center text-decoration-none">
                        <i class="feather-file text-secondary fs-24 mb-2 d-block"></i>
                        <span class="fw-semibold text-dark">مسودات</span>
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Categories -->
        <div class="help-section" id="categories">
            <h3><i class="feather-folder text-primary me-2"></i> إدارة التصنيفات</h3>
            
            <p>التصنيفات تنظم الدورات وتسهل على الطلاب البحث:</p>
            
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon blue"><i class="feather-folder-plus"></i></div>
                        <div>
                            <h6>إضافة تصنيف</h6>
                            <p>تصنيف رئيسي أو فرعي</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon green"><i class="feather-image"></i></div>
                        <div>
                            <h6>صورة التصنيف</h6>
                            <p>أيقونة أو صورة للعرض</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-folder me-2"></i>
                إدارة التصنيفات
            </a>
        </div>
        
        <!-- Bundles & Learning Paths -->
        <div class="help-section" id="bundles">
            <h3><i class="feather-package text-primary me-2"></i> الباقات ومسارات التعلم</h3>
            
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="card border h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="feather-package me-2"></i> الباقات</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">مجموعة دورات بسعر مخفض</p>
                            <a asp-area="Admin" asp-controller="Bundles" asp-action="Index" class="btn btn-sm btn-outline-primary">إدارة الباقات</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border h-100">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="feather-git-branch me-2"></i> مسارات التعلم</h6>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">رحلة تعليمية متسلسلة</p>
                            <a asp-area="Admin" asp-controller="LearningPaths" asp-action="Index" class="btn btn-sm btn-outline-primary">إدارة المسارات</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Question Bank -->
        <div class="help-section" id="questions">
            <h3><i class="feather-help-circle text-primary me-2"></i> بنك الأسئلة</h3>
            
            <p>إدارة الأسئلة المستخدمة في الاختبارات:</p>
            <ul>
                <li>عرض جميع الأسئلة</li>
                <li>تصفية حسب النوع والمستوى</li>
                <li>مراجعة جودة الأسئلة</li>
            </ul>
            
            <a asp-area="Admin" asp-controller="QuestionBank" asp-action="Index" class="btn btn-outline-primary" style="color: #1e3a5f; border-color: #1e3a5f;">
                <i class="feather-database me-2"></i>
                بنك الأسئلة
            </a>
        </div>
        
        <!-- Navigation -->
        <div class="help-navigation">
            <a asp-action="UserManagement" class="btn btn-outline-secondary">
                <i class="feather-arrow-right me-2"></i>
                السابق: إدارة المستخدمين
            </a>
            <a asp-action="FinancialManagement" class="btn btn-primary" style="background: #1e3a5f; border-color: #1e3a5f;">
                التالي: الإدارة المالية
                <i class="feather-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</div>

