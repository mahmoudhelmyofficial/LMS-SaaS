@model LMS.Areas.Admin.Controllers.PaymentAnalyticsDashboard
@{
    ViewData["Title"] = Html.T("تحليلات المدفوعات", "Payment analytics");
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Styles {
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<style>
    .analytics-card {
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .analytics-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    }
    
    .metric-card {
        padding: 1.5rem;
        text-align: center;
    }
    
    .metric-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-size: 1.5rem;
    }
    
    .metric-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.25rem;
    }
    
    .metric-label {
        color: #64748b;
        font-size: 0.9rem;
    }
    
    .metric-change {
        font-size: 0.85rem;
        margin-top: 0.5rem;
    }
    
    .metric-change.positive { color: #10b981; }
    .metric-change.negative { color: #ef4444; }
    
    .chart-container {
        height: 300px;
        position: relative;
    }
    
    .table-recent {
        font-size: 0.9rem;
    }
    
    .status-badge {
        padding: 0.35rem 0.75rem;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
    }
    
    .status-completed { background: #d1fae5; color: #065f46; }
    .status-pending { background: #fef3c7; color: #92400e; }
    .status-failed { background: #fee2e2; color: #991b1b; }
    .status-refunded { background: #e0e7ff; color: #3730a3; }
    
    .progress-bar-thin {
        height: 8px;
        border-radius: 4px;
    }
</style>
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="fw-bold mb-1"><i class="fas fa-chart-pie me-2"></i>@Html.T("تحليلات المدفوعات", "Payment analytics")</h4>
        <p class="text-muted mb-0">@Html.T("نظرة شاملة على أداء المدفوعات والإيرادات", "Overview of payment and revenue performance")</p>
    </div>
    <div class="d-flex gap-2">
        <form method="get" class="d-flex gap-2">
            <input type="date" name="from" value="@Model.FromDate.ToString("yyyy-MM-dd")" class="form-control" />
            <input type="date" name="to" value="@Model.ToDate.ToString("yyyy-MM-dd")" class="form-control" />
            <button type="submit" class="btn btn-primary">@Html.T("تطبيق", "Apply")</button>
        </form>
        <a href="@Url.Action("Export", new { from = Model.FromDate, to = Model.ToDate })" class="btn btn-outline-secondary">
            <i class="fas fa-download me-1"></i> @Html.T("تصدير", "Export")
        </a>
    </div>
</div>

<!-- Main Metrics -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card analytics-card">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #10b981, #059669); color: white;">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="metric-value">@Model.TotalRevenue.ToString("N0") @Html.T("ج.م", "EGP")</div>
                <div class="metric-label">@Html.T("إجمالي الإيرادات", "Total revenue")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #6366f1, #4f46e5); color: white;">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="metric-value">@Model.TotalTransactions</div>
                <div class="metric-label">@Html.T("عدد المعاملات", "Transaction count")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706); color: white;">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="metric-value">@Model.AverageOrderValue.ToString("N2") @Html.T("ج.م", "EGP")</div>
                <div class="metric-label">@Html.T("متوسط قيمة الطلب", "Average order value")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card">
            <div class="metric-card">
                <div class="metric-icon" style="background: linear-gradient(135deg, #22c55e, #16a34a); color: white;">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="metric-value">@Model.SuccessRate.ToString("N1")%</div>
                <div class="metric-label">@Html.T("نسبة النجاح", "Success rate")</div>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Metrics -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card analytics-card bg-danger bg-opacity-10 border-danger border-opacity-25">
            <div class="card-body text-center py-3">
                <div class="fs-4 fw-bold text-danger">@Model.FailedTransactions</div>
                <div class="text-muted small">@Html.T("معاملات فاشلة", "Failed transactions")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card bg-warning bg-opacity-10 border-warning border-opacity-25">
            <div class="card-body text-center py-3">
                <div class="fs-4 fw-bold text-warning">@Model.PendingTransactions</div>
                <div class="text-muted small">@Html.T("معاملات معلقة", "Pending transactions")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card bg-info bg-opacity-10 border-info border-opacity-25">
            <div class="card-body text-center py-3">
                <div class="fs-4 fw-bold text-info">@Model.RefundedTransactions</div>
                <div class="text-muted small">@Html.T("معاملات مستردة", "Refunded transactions")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card analytics-card bg-secondary bg-opacity-10 border-secondary border-opacity-25">
            <div class="card-body text-center py-3">
                <div class="fs-4 fw-bold text-secondary">@Model.RefundedAmount.ToString("N0") @Html.T("ج.م", "EGP")</div>
                <div class="text-muted small">@Html.T("إجمالي المبالغ المستردة", "Total refunded amount")</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Revenue Chart -->
    <div class="col-lg-8">
        <div class="card analytics-card">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-chart-line me-2"></i>@Html.T("الإيرادات اليومية", "Daily revenue")</h5>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Methods -->
    <div class="col-lg-4">
        <div class="card analytics-card h-100">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-credit-card me-2"></i>@Html.T("طرق الدفع", "Payment methods")</h5>
            </div>
            <div class="card-body">
                @foreach (var method in Model.RevenueByPaymentMethod)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="fw-semibold">@method.Method</span>
                            <span class="text-muted">@method.Amount.ToString("N0") ج.م</span>
                        </div>
                        <div class="progress progress-bar-thin">
                            <div class="progress-bar bg-primary" style="width: @method.Percentage%"></div>
                        </div>
                        <small class="text-muted">@method.TransactionCount معاملة (@method.Percentage.ToString("N1")%)</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <!-- Top Courses -->
    <div class="col-lg-6">
        <div class="card analytics-card">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-trophy me-2"></i>@Html.T("أعلى الدورات مبيعاً", "Top selling courses")</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.T("الدورة", "Course")</th>
                                <th class="text-center">@Html.T("المبيعات", "Sales")</th>
                                <th class="text-end">@Html.T("الإيرادات", "Revenue")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model.TopCoursesByRevenue)
                            {
                                <tr>
                                    <td>
                                        <a href="/Admin/Courses/Details/@course.CourseId" class="text-decoration-none">
                                            @course.CourseTitle
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary rounded-pill">@course.SalesCount</span>
                                    </td>
                                    <td class="text-end fw-semibold">@course.Revenue.ToString("N0") @Html.T("ج.م", "EGP")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Type Breakdown -->
    <div class="col-lg-6">
        <div class="card analytics-card">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-box me-2"></i>توزيع المنتجات</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    @foreach (var product in Model.RevenueByProductType)
                    {
                        <div class="col-6">
                            <div class="border rounded-3 p-3 text-center">
                                <div class="fs-3 mb-2">
                                    @if (product.ProductType.ToString() == "Course") { <i class="fas fa-book text-primary"></i> }
                                    else if (product.ProductType.ToString() == "Book") { <i class="fas fa-book-open text-info"></i> }
                                    else if (product.ProductType.ToString() == "Subscription") { <i class="fas fa-sync-alt text-success"></i> }
                                    else { <i class="fas fa-box text-secondary"></i> }
                                </div>
                                <div class="fw-bold">@product.ProductTypeName</div>
                                <div class="text-primary fw-bold">@product.Amount.ToString("N0") ج.م</div>
                                <small class="text-muted">@product.TransactionCount معاملة</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Coupon & Retry Stats -->
<div class="row g-4 mb-4">
    <div class="col-lg-6">
        <div class="card analytics-card">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-ticket-alt me-2"></i>إحصائيات الكوبونات</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6 col-md-3">
                        <div class="fs-3 fw-bold text-primary">@Model.CouponStats.TotalCouponUsage</div>
                        <small class="text-muted">استخدامات الكوبونات</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="fs-3 fw-bold text-success">@Model.CouponStats.TotalDiscountGiven.ToString("N0")</div>
                        <small class="text-muted">إجمالي الخصومات</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="fs-3 fw-bold text-info">@Model.CouponStats.UniqueCodesUsed</div>
                        <small class="text-muted">كوبونات مختلفة</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <div class="fs-6 fw-bold text-warning">@(Model.CouponStats.MostUsedCoupon ?? "N/A")</div>
                        <small class="text-muted">الأكثر استخداماً</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card analytics-card">
            <div class="card-header bg-transparent border-0">
                <h5 class="fw-bold mb-0"><i class="fas fa-redo me-2"></i>إحصائيات إعادة المحاولة</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-primary">@Model.RetryStats.TotalRetries</div>
                        <small class="text-muted">إجمالي المحاولات</small>
                    </div>
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-success">@Model.RetryStats.SuccessfulRetries</div>
                        <small class="text-muted">محاولات ناجحة</small>
                    </div>
                    <div class="col-4">
                        <div class="fs-3 fw-bold text-info">@Model.RetryStats.RecoveredRevenue.ToString("N0")</div>
                        <small class="text-muted">@Html.T("إيرادات مستردة", "Refunded revenue")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Transactions -->
<div class="card analytics-card">
    <div class="card-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <h5 class="fw-bold mb-0"><i class="fas fa-receipt me-2"></i>@Html.T("أحدث المعاملات", "Latest transactions")</h5>
        <a href="/Admin/Payments" class="btn btn-sm btn-outline-primary">@Html.T("عرض الكل", "View all")</a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-recent mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.T("رقم المعاملة", "Transaction #")</th>
                        <th>@Html.T("العميل", "Customer")</th>
                        <th>@Html.T("المنتج", "Product")</th>
                        <th>@Html.T("المبلغ", "Amount")</th>
                        <th>@Html.T("طريقة الدفع", "Payment method")</th>
                        <th>@Html.T("الحالة", "Status")</th>
                        <th>@Html.T("التاريخ", "Date")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in Model.RecentTransactions)
                    {
                        var statusClass = tx.Status.ToString().ToLower();
                        <tr>
                            <td>
                                <code class="text-muted">@tx.TransactionId.Substring(0, Math.Min(12, tx.TransactionId.Length))...</code>
                            </td>
                            <td>
                                <div class="fw-semibold">@tx.CustomerName</div>
                                <small class="text-muted">@tx.CustomerEmail</small>
                            </td>
                            <td>@tx.ProductName</td>
                            <td class="fw-semibold">@tx.Amount.ToString("N2") @tx.Currency</td>
                            <td>@tx.PaymentMethod</td>
                            <td>
                                <span class="status-badge status-@statusClass">
                                    @(tx.Status.ToString() switch {
                                        "Completed" => "مكتمل",
                                        "Pending" => "معلق",
                                        "Failed" => "فاشل",
                                        "Refunded" => "مسترد",
                                        _ => tx.Status.ToString()
                                    })
                                </span>
                            </td>
                            <td>
                                <small>@tx.CreatedAt.ToString("yyyy-MM-dd HH:mm")</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Revenue Chart
    const revenueData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.RevenueByDay.Select(d => new { 
        date = d.Date.ToString("MM/dd"), 
        amount = d.Amount,
        count = d.TransactionCount
    })));
    
    const ctx = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: revenueData.map(d => d.date),
            datasets: [{
                label: 'الإيرادات (ج.م)',
                data: revenueData.map(d => d.amount),
                borderColor: '#6366f1',
                backgroundColor: 'rgba(99, 102, 241, 0.1)',
                fill: true,
                tension: 0.4,
                pointRadius: 4,
                pointHoverRadius: 6
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0,0,0,0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>
}

