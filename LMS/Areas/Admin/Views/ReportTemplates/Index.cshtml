@model IEnumerable<LMS.Domain.Entities.Analytics.ReportTemplate>

@{
    ViewData["Title"] = Html.T("إدارة قوالب التقارير", "Report templates management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("قوالب التقارير", "Report Templates"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة قالب", "Add Template"), "feather-plus", Url.Action("Create", "ReportTemplates"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-file-text"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("إجمالي القوالب", "Total templates")</span>
                            <h3 class="fw-bold mb-0">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("قوالب نشطة", "Active templates")</span>
                            <h3 class="fw-bold mb-0">@Model.Count(t => t.IsActive).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-bar-chart-2"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("أنواع التقارير", "Report types")</span>
                            <h3 class="fw-bold mb-0">@Model.Select(t => t.ReportType).Distinct().Count()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">تم إنشاؤها</span>
                            <h3 class="fw-bold mb-0">@Model.Count(t => t.CreatedAt >= DateTime.UtcNow.AddDays(-30))</h3>
                            <small class="text-muted">@Html.T("آخر 30 يوم", "Last 30 days")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-active">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("نشط", "Active")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-inactive">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("غير نشط", "Inactive")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="reportTemplatesTable">
                            <thead>
                                <tr>
                                    <th class="wd-30">
                                        <div class="custom-control custom-checkbox ms-1">
                                            <input type="checkbox" class="custom-control-input" id="checkAll">
                                            <label class="custom-control-label" for="checkAll"></label>
                                        </div>
                                    </th>
                                    <th>@Html.T("اسم القالب", "Template name")</th>
                                    <th>@Html.T("الوصف", "Description")</th>
                                    <th>@Html.T("نوع التقرير", "Report type")</th>
                                    <th>@Html.T("تاريخ الإنشاء", "Created date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var template in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="item-checkbox ms-1">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input checkbox" id="checkBox_@template.Id">
                                                    <label class="custom-control-label" for="checkBox_@template.Id"></label>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                    <i class="feather-file-text"></i>
                                                </div>
                                                <div>
                                                    <span class="d-block fw-semibold">@template.Name</span>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(template.Description))
                                            {
                                                <span class="text-muted text-truncate-1-line d-block" style="max-width: 300px;">@template.Description</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-info text-info">@template.ReportType</span>
                                        </td>
                                        <td>
                                            <span class="text-muted">@template.CreatedAt.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>
                                            @if (template.IsActive)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-danger text-danger">@Html.T("غير نشط", "Inactive")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Edit", "ReportTemplates", new { id = template.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("تعديل", "Edit")">
                                                    <i class="feather-edit"></i>
                                                </a>
                                                <div class="dropdown">
                                                    <a href="javascript:void(0)" class="avatar-text avatar-md" data-bs-toggle="dropdown" data-bs-offset="0,21">
                                                        <i class="feather-more-horizontal"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="javascript:void(0)" onclick="duplicateTemplate('@template.Id')">
                                                                <i class="feather-copy me-3"></i>
                                                                <span>@Html.T("نسخ القالب", "Copy template")</span>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="javascript:void(0)" onclick="toggleStatus('@template.Id')">
                                                                <i class="feather-power me-3"></i>
                                                                <span>@(template.IsActive ? Html.T("تعطيل", "Disable") : Html.T("تفعيل", "Enable"))</span>
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا القالب؟", "Are you sure you want to delete this template?").Replace("'", "\\'"))')">
                                                                <input type="hidden" name="id" value="@template.Id" />
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="feather-trash-2 me-3"></i>
                                                                    <span>@Html.T("حذف", "Delete")</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#reportTemplatesTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[4, "desc"]],
                "pageLength": 25
            });

            $('#checkAll').on('change', function() {
                $('.checkbox').prop('checked', $(this).prop('checked'));
            });

            $('.filter-all').on('click', function() {
                table.column(5).search('').draw();
            });

            $('.filter-active').on('click', function() {
                table.column(5).search('نشط').draw();
            });

            $('.filter-inactive').on('click', function() {
                table.column(5).search('غير نشط').draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function duplicateTemplate(templateId) {
            if (confirm('@Html.Raw(Html.T("هل تريد نسخ هذا القالب؟", "Do you want to copy this template?").Replace("'", "\\'"))')) {
                console.log('Duplicating template:', templateId);
                // Implement duplication
            }
        }

        function toggleStatus(templateId) {
            if (confirm('@Html.Raw(Html.T("هل تريد تغيير حالة هذا القالب؟", "Do you want to change the status of this template?").ToString().Replace("'", "\\'"))')) {
                console.log('Toggling status for:', templateId);
                // Implement toggle
            }
        }
    </script>
}

