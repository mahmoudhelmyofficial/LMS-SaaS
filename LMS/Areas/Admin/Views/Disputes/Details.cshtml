@model LMS.Domain.Entities.Payments.PaymentDispute
@using LMS.Domain.Enums
@{
    ViewData["Title"] = Html.T("نزاع", "Dispute") + $" #{Model.Id}";
    ViewData["Breadcrumbs"] = new List<(string Name, string? Url)>
    {
        (Html.T("النزاعات", "Disputes"), Url.Action("Index")),
        ($"#{Model.Id}", null)
    };
    var enrollment = ViewBag.Enrollment as LMS.Domain.Entities.Learning.Enrollment;
    var relatedPayments = ViewBag.RelatedPayments as List<LMS.Domain.Entities.Payments.Payment> ?? new();

    var statusClass = Model.Status switch
    {
        DisputeStatus.Open => "warning",
        DisputeStatus.NeedsResponse => "danger",
        DisputeStatus.ResponseSubmitted => "info",
        DisputeStatus.Won => "success",
        DisputeStatus.Lost => "secondary",
        _ => "light"
    };
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Html.T("إغلاق", "Close")"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="@Html.T("إغلاق", "Close")"></button>
        </div>
    }

    <!-- Urgent Alert -->
    @if (Model.IsOverdue)
    {
        <div class="alert alert-danger d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            <div>
                <strong>@Html.T("تحذير: انتهت مهلة الرد!", "Warning: Response deadline passed!")</strong>
                <p class="mb-0">@Html.T("كان يجب الرد على هذا النزاع بتاريخ", "Response was due on") @Model.ResponseDueDate?.ToString("dd/MM/yyyy"). @Html.T("الرجاء التصرف فوراً.", "Please act immediately.")</p>
            </div>
        </div>
    }
    else if (Model.DaysToRespond.HasValue && Model.DaysToRespond.Value <= 3 && Model.IsActive)
    {
        <div class="alert alert-warning d-flex align-items-center">
            <i class="fas fa-clock fa-2x me-3"></i>
            <div>
                <strong>@Html.T("تنبيه: متبقي", "Alert: Only") @Model.DaysToRespond.Value @Html.T("أيام فقط للرد!", "days left to respond!")</strong>
                <p class="mb-0">@Html.T("الرجاء إرسال الدليل قبل", "Please submit evidence before") @Model.ResponseDueDate?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    }

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Dispute Details Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-gavel me-2"></i>
                        @Html.T("تفاصيل النزاع", "Dispute details") #@Model.Id
                    </h5>
                    <span class="badge bg-@statusClass fs-6">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="border-bottom pb-2 mb-3">@Html.T("معلومات النزاع", "Dispute information")</h6>
                            <dl class="row">
                                <dt class="col-sm-5">@Html.T("معرف خارجي", "External ID"):</dt>
                                <dd class="col-sm-7">@(Model.ExternalDisputeId ?? "-")</dd>

                                <dt class="col-sm-5">@Html.T("النوع", "Type"):</dt>
                                <dd class="col-sm-7"><span class="badge bg-secondary">@Model.Type</span></dd>

                                <dt class="col-sm-5">@Html.T("كود السبب", "Reason code"):</dt>
                                <dd class="col-sm-7">@(Model.ReasonCode ?? "-")</dd>

                                <dt class="col-sm-5">@Html.T("بوابة الدفع", "Payment gateway"):</dt>
                                <dd class="col-sm-7">@Model.Provider</dd>

                                <dt class="col-sm-5">@Html.T("تاريخ الفتح", "Opened at"):</dt>
                                <dd class="col-sm-7">@Model.OpenedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                                <dt class="col-sm-5">@Html.T("موعد الرد", "Response due"):</dt>
                                <dd class="col-sm-7">
                                    @if (Model.ResponseDueDate.HasValue)
                                    {
                                        <span class="@(Model.IsOverdue ? "text-danger fw-bold" : "")">
                                            @Model.ResponseDueDate.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="border-bottom pb-2 mb-3">@Html.T("المبالغ", "Amounts")</h6>
                            <dl class="row">
                                <dt class="col-sm-5">@Html.T("المبلغ المتنازع", "Disputed amount"):</dt>
                                <dd class="col-sm-7">
                                    <strong class="text-danger fs-5">@Model.DisputedAmount.ToString("N2") @Model.Currency</strong>
                                </dd>

                                <dt class="col-sm-5">@Html.T("رسوم النزاع", "Dispute fee"):</dt>
                                <dd class="col-sm-7">@Model.DisputeFee.ToString("N2") @Model.Currency</dd>

                                @if (Model.RefundedAmount.HasValue)
                                {
                                    <dt class="col-sm-5">@Html.T("المبلغ المسترد", "Refunded amount"):</dt>
                                    <dd class="col-sm-7">@Model.RefundedAmount.Value.ToString("N2") @Model.Currency</dd>
                                }
                            </dl>

                            <h6 class="border-bottom pb-2 mb-3 mt-4">@Html.T("العميل", "Customer")</h6>
                            <dl class="row">
                                <dt class="col-sm-4">@Html.T("الاسم", "Name"):</dt>
                                <dd class="col-sm-8">@Model.CustomerName</dd>

                                <dt class="col-sm-4">@Html.T("البريد", "Email"):</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.CustomerEmail">@Model.CustomerEmail</a>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ReasonDescription))
                    {
                        <div class="mt-4">
                            <h6>@Html.T("سبب النزاع", "Dispute reason"):</h6>
                            <div class="alert alert-light">@Model.ReasonDescription</div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.CustomerMessage))
                    {
                        <div class="mt-3">
                            <h6>@Html.T("رسالة العميل", "Customer message"):</h6>
                            <div class="alert alert-warning">@Model.CustomerMessage</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Payment Details -->
            @if (Model.Payment != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-credit-card me-2"></i>@Html.T("تفاصيل الدفعة الأصلية", "Original payment details")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">@Html.T("معرف الدفعة", "Payment ID"):</dt>
                                    <dd class="col-sm-7">
                                        <a asp-area="Admin" asp-controller="Payments" asp-action="Details" asp-route-id="@Model.PaymentId">
                                            #@Model.PaymentId
                                        </a>
                                    </dd>

                                    <dt class="col-sm-5">@Html.T("رقم المعاملة", "Transaction ID"):</dt>
                                    <dd class="col-sm-7">@Model.Payment.TransactionId</dd>

                                    <dt class="col-sm-5">@Html.T("المبلغ", "Amount"):</dt>
                                    <dd class="col-sm-7">@Model.Payment.TotalAmount.ToString("N2") @Model.Payment.Currency</dd>

                                    <dt class="col-sm-5">@Html.T("تاريخ الدفع", "Payment date"):</dt>
                                    <dd class="col-sm-7">@Model.Payment.CompletedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">@Html.T("نوع المنتج", "Product type"):</dt>
                                    <dd class="col-sm-7">@Model.Payment.ProductType</dd>

                                    @if (Model.Payment.Course != null)
                                    {
                                        <dt class="col-sm-5">@Html.T("الدورة", "Course"):</dt>
                                        <dd class="col-sm-7">@Model.Payment.Course.Title</dd>
                                    }

                                    <dt class="col-sm-5">@Html.T("حالة الدفع", "Payment status"):</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-@(Model.Payment.Status == PaymentStatus.Completed ? "success" : "secondary")">
                                            @Model.Payment.Status
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Evidence Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>@Html.T("الدليل والرد", "Evidence & response")</h5>
                </div>
                <div class="card-body">
                    @if (Model.HasEvidence)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            @Html.T("تم إرسال الدليل بتاريخ", "Evidence submitted on") @Model.ResponseSubmittedAt?.ToString("dd/MM/yyyy HH:mm")
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">@Html.T("نوع الدليل", "Evidence type"):</dt>
                            <dd class="col-sm-9">@Model.EvidenceType</dd>

                            <dt class="col-sm-3">@Html.T("الوصف", "Description"):</dt>
                            <dd class="col-sm-9">@Model.ResponseNotes</dd>

                            @if (!string.IsNullOrEmpty(Model.ServiceDocumentUrl))
                            {
                                <dt class="col-sm-3">@Html.T("إثبات الخدمة", "Service proof"):</dt>
                                <dd class="col-sm-9">
                                    <a href="@Model.ServiceDocumentUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-external-link-alt me-1"></i>@Html.T("عرض", "View")
                                    </a>
                                </dd>
                            }
                        </dl>
                    }
                    else if (Model.IsActive)
                    {
                        <form asp-action="SubmitEvidence" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="DisputeId" value="@Model.Id" />

                            <div class="mb-3">
                                <label class="form-label">@Html.T("نوع الدليل", "Evidence type")</label>
                                <select name="EvidenceType" class="form-select" required>
                                    <option value="">@Html.T("اختر نوع الدليل...", "Select evidence type...")</option>
                                    <option value="access_activity">@Html.T("سجل نشاط الوصول للمحتوى", "Content access activity log")</option>
                                    <option value="service_delivered">@Html.T("إثبات تقديم الخدمة", "Service delivery proof")</option>
                                    <option value="customer_communication">@Html.T("مراسلات مع العميل", "Customer communication")</option>
                                    <option value="refund_policy">@Html.T("سياسة الاسترداد المعلنة", "Published refund policy")</option>
                                    <option value="terms_acceptance">@Html.T("موافقة على الشروط", "Terms acceptance")</option>
                                    <option value="other">@Html.T("أخرى", "Other")</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@Html.T("وصف الدليل", "Evidence description")</label>
                                <textarea name="Description" class="form-control" rows="4" required
                                          placeholder="@Html.T("اشرح كيف تثبت أن الخدمة تم تقديمها بشكل صحيح...", "Explain how you prove the service was delivered correctly...")"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@Html.T("رابط إثبات الخدمة (اختياري)", "Service proof link (optional)")</label>
                                <input type="url" name="ServiceDocumentUrl" class="form-control" 
                                       placeholder="@Html.T("رابط لملف PDF أو صورة...", "Link to PDF or image...")" />
                            </div>

                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i>
                                @Html.T("إرسال الدليل", "Submit evidence")
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-muted">@Html.T("النزاع مغلق - لا يمكن إضافة دليل", "Dispute is closed - cannot add evidence")</div>
                    }
                </div>
            </div>

            <!-- Student Activity (if course) -->
            @if (enrollment != null)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-user-graduate me-2"></i>@Html.T("نشاط الطالب في الدورة", "Student activity in course")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <h4 class="text-primary">@enrollment.ProgressPercentage%</h4>
                                <small>@Html.T("نسبة الإنجاز", "Completion rate")</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h4>@enrollment.CompletedLessons / @enrollment.TotalLessons</h4>
                                <small>@Html.T("الدروس المكتملة", "Completed lessons")</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h4>@enrollment.LastAccessedAt?.ToString("dd/MM")</h4>
                                <small>@Html.T("آخر دخول", "Last access")</small>
                            </div>
                        </div>
                        <p class="mt-3 text-muted small">
                            @Html.T("هذه البيانات يمكن استخدامها كدليل على أن الطالب استخدم الخدمة فعلياً.", "This data can be used as evidence that the student actually used the service.")
                        </p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Actions Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>@Html.T("الإجراءات", "Actions")</h5>
                </div>
                <div class="card-body">
                    @if (Model.IsActive)
                    {
                        <form asp-action="UpdateStatus" method="post" class="mb-3">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="mb-2">
                                <label class="form-label">@Html.T("تحديث الحالة", "Update status")</label>
                                <select name="newStatus" class="form-select">
                                    <option value="@((int)DisputeStatus.UnderReview)">@Html.T("قيد المراجعة", "Under review")</option>
                                    <option value="@((int)DisputeStatus.NeedsResponse)">@Html.T("بانتظار الرد", "Awaiting response")</option>
                                    <option value="@((int)DisputeStatus.ResponseSubmitted)">@Html.T("تم الرد", "Response submitted")</option>
                                </select>
                            </div>
                            <div class="mb-2">
                                <textarea name="notes" class="form-control" rows="2" placeholder="@Html.T("ملاحظات...", "Notes...")"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save me-1"></i>@Html.T("حفظ", "Save")
                            </button>
                        </form>

                        <hr />

                        <form asp-action="ChallengeDispute" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-shield-alt me-1"></i>
                                @Html.T("الطعن في النزاع", "Challenge dispute")
                            </button>
                        </form>

                        <form asp-action="AcceptDispute" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger w-100"
                                    onclick="return confirm('@(Html.T("هل أنت متأكد من قبول النزاع؟ سيتم استرداد المبلغ للعميل وسحب الوصول.", "Are you sure you want to accept the dispute? The amount will be refunded and access revoked."))');">
                                <i class="fas fa-times-circle me-1"></i>
                                @Html.T("قبول النزاع (استرداد)", "Accept dispute (refund)")
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-secondary mb-0">
                            <i class="fas fa-lock me-2"></i>
                            @Html.T("هذا النزاع مغلق", "This dispute is closed") (@Model.Status)
                            @if (Model.ResolvedAt.HasValue)
                            {
                                <br><small>@Html.T("تم الحل", "Resolved"): @Model.ResolvedAt.Value.ToString("dd/MM/yyyy")</small>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Timeline -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>@Html.T("الجدول الزمني", "Timeline")</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled timeline">
                        <li class="mb-3">
                            <i class="fas fa-circle text-primary me-2"></i>
                            <strong>@Html.T("فتح النزاع", "Dispute opened")</strong>
                            <br><small class="text-muted">@Model.OpenedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </li>
                        @if (Model.ResponseSubmittedAt.HasValue)
                        {
                            <li class="mb-3">
                                <i class="fas fa-circle text-info me-2"></i>
                                <strong>@Html.T("إرسال الدليل", "Evidence submitted")</strong>
                                <br><small class="text-muted">@Model.ResponseSubmittedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                            </li>
                        }
                        @if (Model.ResolvedAt.HasValue)
                        {
                            <li class="mb-3">
                                <i class="fas fa-circle text-@(Model.MerchantWon ? "success" : "danger") me-2"></i>
                                <strong>@Html.T("تم الحل", "Resolved") - @(Model.MerchantWon ? Html.T("رابح", "Won") : Html.T("خاسر", "Lost"))</strong>
                                <br><small class="text-muted">@Model.ResolvedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Internal Notes -->
            @if (!string.IsNullOrEmpty(Model.InternalNotes))
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-sticky-note me-2"></i>@Html.T("ملاحظات داخلية", "Internal notes")</h5>
                    </div>
                    <div class="card-body">
                        <pre class="mb-0" style="white-space: pre-wrap;">@Model.InternalNotes</pre>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

