@model LMS.Areas.Admin.ViewModels.BookStatsAdminViewModel
@using LMS.Areas.Admin.ViewModels
@{
    ViewData["Title"] = Html.T("إحصائيات الكتب", "Book Statistics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المحتوى", "Content Management"), null),
        (Html.T("الكتب", "Books"), Url.Action("Index", "Books")),
        (Html.T("الإحصائيات", "Statistics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تحديث", "Refresh"), "feather-refresh-cw", Url.Action("Statistics", "Books"), "btn-primary"),
        (Html.T("قائمة الكتب", "Books List"), "feather-list", Url.Action("Index", "Books"), "btn-outline-primary")
    };
    ViewData["HeaderActions"] = actions;

    var topSelling = Model?.TopSellingBooks ?? new List<TopBookViewModel>();
    var topRated = Model?.TopRatedBooks ?? new List<TopBookViewModel>();
    var monthLabels = Model?.MonthLabels ?? new List<string>();
    var monthlySales = Model?.MonthlySales ?? new List<int>();
    var monthlyRevenue = Model?.MonthlyRevenue ?? new List<decimal>();
    var chartLabelsJson = monthLabels.Count > 0 ? string.Join(",", monthLabels.Select(l => "\"" + l.Replace("\\", "\\\\").Replace("\"", "\\\"") + "\"")) : "";
    var chartSalesJson = monthlySales.Count > 0 ? string.Join(",", monthlySales) : "";
    var chartRevenueJson = monthlyRevenue.Count > 0 ? string.Join(",", monthlyRevenue) : "";
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Overview Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 bg-primary bg-opacity-10 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-primary mb-1">@(Model?.TotalBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("إجمالي الكتب", "Total books")</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 bg-success bg-opacity-10 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-success mb-1">@(Model?.PublishedBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("منشورة", "Published")</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 bg-warning bg-opacity-10 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-warning mb-1">@(Model?.PendingReviewBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("قيد المراجعة", "Pending Review")</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 bg-secondary bg-opacity-10 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-secondary mb-1">@(Model?.DraftBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("مسودة", "Draft")</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 bg-danger bg-opacity-10 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-danger mb-1">@(Model?.RejectedBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("مرفوضة", "Rejected")</small>
                </div>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 col-6">
            <div class="card border-0 shadow-sm h-100 stats-card">
                <div class="card-body text-center">
                    <h4 class="text-dark mb-1">@(Model?.SuspendedBooks ?? 0)</h4>
                    <small class="text-muted">@Html.T("معلقة", "Suspended")</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales & Revenue Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xxl-3 col-md-6">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="avatar-text avatar-lg bg-soft-info text-info">
                            <i class="feather-shopping-cart"></i>
                        </div>
                        <div class="text-end">
                            <h2 class="fw-bold mb-1">@(Model?.TotalSales ?? 0)</h2>
                            <p class="text-muted mb-0">@Html.T("إجمالي المبيعات", "Total sales")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="avatar-text avatar-lg bg-soft-primary text-primary">
                            <i class="feather-dollar-sign"></i>
                        </div>
                        <div class="text-end">
                            <h2 class="fw-bold mb-1">@((Model?.TotalRevenue ?? 0).ToString("N0"))</h2>
                            <p class="text-muted mb-0">@Html.T("إجمالي الإيرادات", "Total revenue") (EGP)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="avatar-text avatar-lg bg-soft-success text-success">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div class="text-end">
                            <h2 class="fw-bold mb-1">@((Model?.PlatformEarnings ?? 0).ToString("N0"))</h2>
                            <p class="text-muted mb-0">@Html.T("أرباح المنصة", "Platform earnings") (EGP)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="avatar-text avatar-lg bg-soft-warning text-warning">
                            <i class="feather-calendar"></i>
                        </div>
                        <div class="text-end">
                            <p class="mb-1 fw-bold">@Html.T("اليوم", "Today"): @(Model?.SalesToday ?? 0) / @((Model?.RevenueToday ?? 0).ToString("N0"))</p>
                            <p class="mb-0 small text-muted">@Html.T("هذا الأسبوع", "This week"): @(Model?.SalesThisWeek ?? 0) / @((Model?.RevenueThisWeek ?? 0).ToString("N0"))</p>
                            <p class="mb-0 small text-muted">@Html.T("هذا الشهر", "This month"): @(Model?.SalesThisMonth ?? 0) / @((Model?.RevenueThisMonth ?? 0).ToString("N0"))</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Sales & Revenue Chart -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("المبيعات والإيرادات الشهرية (آخر 6 أشهر)", "Monthly sales & revenue (last 6 months)")</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyChart" height="80"
                            data-sales-label="@Html.Raw(System.Net.WebUtility.HtmlEncode(Html.T("المبيعات", "Sales").ToString() ?? "Sales"))"
                            data-revenue-label="@Html.Raw(System.Net.WebUtility.HtmlEncode(Html.T("الإيرادات (EGP)", "Revenue (EGP)").ToString() ?? "Revenue (EGP)"))"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling & Top Rated -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الأكثر مبيعاً", "Top selling books")</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Html.T("الكتاب", "Book")</th>
                                    <th class="text-center">@Html.T("المدرس", "Instructor")</th>
                                    <th class="text-center">@Html.T("المبيعات", "Sales")</th>
                                    <th class="text-end">@Html.T("الإيراد", "Revenue")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (topSelling.Any())
                                {
                                    var rank = 1;
                                    foreach (var book in topSelling)
                                    {
                                        <tr>
                                            <td>
                                                <div class="avatar-text avatar-sm @(rank == 1 ? "bg-warning text-white" : rank == 2 ? "bg-soft-warning text-warning" : "bg-soft-secondary text-secondary")">
                                                    @rank
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id" class="fw-semibold">
                                                    @book.Title
                                                </a>
                                            </td>
                                            <td class="text-center text-muted small">@book.InstructorName</td>
                                            <td class="text-center">
                                                <span class="fw-bold">@book.Sales</span>
                                            </td>
                                            <td class="text-end">@book.Revenue.ToString("N0") EGP</td>
                                        </tr>
                                        rank++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="feather-info me-2"></i>
                                            @Html.T("لا توجد بيانات", "No data available")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الأعلى تقييماً", "Top rated books")</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>@Html.T("الكتاب", "Book")</th>
                                    <th class="text-center">@Html.T("المدرس", "Instructor")</th>
                                    <th class="text-center">@Html.T("التقييم", "Rating")</th>
                                    <th class="text-center">@Html.T("المبيعات", "Sales")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (topRated.Any())
                                {
                                    var rank = 1;
                                    foreach (var book in topRated)
                                    {
                                        <tr>
                                            <td>
                                                <div class="avatar-text avatar-sm @(rank == 1 ? "bg-warning text-white" : rank == 2 ? "bg-soft-warning text-warning" : "bg-soft-secondary text-secondary")">
                                                    @rank
                                                </div>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-controller="Books" asp-route-id="@book.Id" class="fw-semibold">
                                                    @book.Title
                                                </a>
                                            </td>
                                            <td class="text-center text-muted small">@book.InstructorName</td>
                                            <td class="text-center">
                                                <span class="fw-bold">@book.Rating.ToString("F1")</span>
                                                <i class="feather-star text-warning small" style="fill: currentColor;"></i>
                                            </td>
                                            <td class="text-center">@book.Sales</td>
                                        </tr>
                                        rank++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">
                                            <i class="feather-info me-2"></i>
                                            @Html.T("لا توجد بيانات", "No data available")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            var labels = [@Html.Raw(chartLabelsJson)];
            var salesData = [@Html.Raw(chartSalesJson)];
            var revenueData = [@Html.Raw(chartRevenueJson)];
            var salesLabel = document.getElementById('monthlyChart')?.getAttribute('data-sales-label') || 'Sales';
            var revenueLabel = document.getElementById('monthlyChart')?.getAttribute('data-revenue-label') || 'Revenue (EGP)';

            var ctx = document.getElementById('monthlyChart');
            if (ctx) {
                new Chart(ctx.getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: salesLabel,
                                data: salesData,
                                backgroundColor: 'rgba(59, 130, 246, 0.8)',
                                borderRadius: 4,
                                yAxisID: 'y'
                            },
                            {
                                label: revenueLabel,
                                data: revenueData,
                                backgroundColor: 'rgba(34, 197, 94, 0.8)',
                                borderRadius: 4,
                                yAxisID: 'y1'
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        interaction: { intersect: false, mode: 'index' },
                        plugins: {
                            legend: { display: true }
                        },
                        scales: {
                            y: {
                                type: 'linear',
                                display: true,
                                position: 'left',
                                beginAtZero: true,
                                ticks: { precision: 0 }
                            },
                            y1: {
                                type: 'linear',
                                display: true,
                                position: 'right',
                                beginAtZero: true,
                                grid: { drawOnChartArea: false },
                                ticks: { precision: 0 }
                            }
                        }
                    }
                });
            }
        })();
    </script>
}
