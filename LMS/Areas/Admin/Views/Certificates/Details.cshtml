@model LMS.Domain.Entities.Certifications.Certificate
@inject LMS.Services.Interfaces.IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("تفاصيل الشهادة", "Certificate details");
    var platformLogo = await PlatformSettings.GetPlatformLogoAsync();
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الشهادات", "Certificates"), Url.Action("Index", "Certificates")),
        (Html.T("تفاصيل الشهادة", "Certificate details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        ("تحميل الشهادة", "feather-download", $"#", "btn-success"),
        ("طباعة", "feather-printer", "javascript:window.print()", "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <!-- Certificate Info Card -->
        <div class="col-lg-8">
            <!-- Certificate Preview -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معاينة الشهادة", "Certificate preview")</h5>
                    @if (Model.IsRevoked)
                    {
                        <span class="badge bg-danger ms-auto">ملغاة</span>
                    }
                    else
                    {
                        <span class="badge bg-success ms-auto">صالحة</span>
                    }
                </div>
                <div class="card-body">
                    <div class="certificate-preview bg-light p-5 rounded text-center border">
                        <div class="mb-4">
                            <img src="@Url.Content(string.IsNullOrEmpty(platformLogo) ? "~/assets/images/logo.png" : "~" + platformLogo)" alt="Logo" style="max-height: 60px;" onerror="this.src='@Url.Content("~/assets/images/logo.png")'" />
                        </div>
                        
                        <h2 class="fw-bold text-primary mb-4">شهادة إتمام الدورة</h2>
                        
                        <p class="text-muted mb-4">نشهد بأن</p>
                        
                        <h3 class="fw-bold mb-4">@Model.StudentName</h3>
                        
                        <p class="text-muted mb-3">قد أتم بنجاح دورة</p>
                        
                        <h4 class="fw-bold text-dark mb-4">@Model.CourseName</h4>
                        
                        <div class="row justify-content-center my-4">
                            <div class="col-md-8">
                                <hr class="my-4" />
                            </div>
                        </div>
                        
                        <div class="row justify-content-center">
                            <div class="col-md-4">
                                <p class="text-muted mb-1">تاريخ الإصدار</p>
                                <p class="fw-bold">@Model.IssuedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">رقم الشهادة</p>
                                <p class="fw-bold">@Model.CertificateNumber</p>
                            </div>
                            <div class="col-md-4">
                                <p class="text-muted mb-1">التقدير</p>
                                <p class="fw-bold">@(Model.Grade.HasValue ? Model.Grade.Value.ToString("F1") + "%" : "غير محدد")</p>
                            </div>
                        </div>
                        
                        <div class="row justify-content-center mt-4">
                            <div class="col-md-6">
                                <p class="text-muted mb-2">المدرس</p>
                                <p class="fw-semibold">@Model.InstructorName</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.QrCodeUrl))
                        {
                            <div class="mt-4">
                                <img src="@Model.QrCodeUrl" alt="QR Code" style="max-width: 100px;" />
                                <p class="text-muted small mt-2">رمز التحقق: @Model.VerificationCode</p>
                            </div>
                        }
                    </div>

                    @if (Model.IsRevoked)
                    {
                        <div class="alert alert-danger mt-4">
                            <div class="d-flex align-items-start">
                                <i class="feather-alert-circle fs-4 me-3"></i>
                                <div>
                                    <h6 class="mb-2">تم إلغاء هذه الشهادة</h6>
                                    <p class="mb-1"><strong>السبب:</strong> @Model.RevocationReason</p>
                                    <p class="mb-1"><strong>تاريخ الإلغاء:</strong> @Model.RevokedAt?.ToString("dd/MM/yyyy hh:mm tt")</p>
                                    <p class="mb-0"><strong>تم الإلغاء بواسطة:</strong> @Model.RevokedBy</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Certificate Details -->
            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات تفصيلية", "Detailed information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("رقم الشهادة", "Certificate number")</label>
                                <p class="fw-semibold">@Model.CertificateNumber</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("رمز التحقق", "Verification code")</label>
                                <p class="fw-semibold">@Model.VerificationCode</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("اسم الطالب", "Student name")</label>
                                <p class="fw-semibold">
                                    <a href="@Url.Action("Details", "Users", new { id = Model.StudentId })">
                                        @Model.StudentName
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("اسم الدورة", "Course name")</label>
                                <p class="fw-semibold">
                                    <a href="@Url.Action("Details", "Courses", new { id = Model.CourseId })">
                                        @Model.CourseName
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("المدرس", "Instructor")</label>
                                <p class="fw-semibold">@Model.InstructorName</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("التقدير النهائي", "Final grade")</label>
                                <p class="fw-semibold">
                                    @if (Model.Grade.HasValue)
                                    {
                                        <span class="badge @(Model.Grade >= 90 ? "bg-success" : Model.Grade >= 75 ? "bg-primary" : Model.Grade >= 60 ? "bg-warning" : "bg-danger")">
                                            @Model.Grade.Value.ToString("F1")%
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@Html.T("غير محدد", "Not set")</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("تاريخ الإصدار", "Issue date")</label>
                                <p class="fw-semibold">@Model.IssuedAt.ToString("dd/MM/yyyy hh:mm tt")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("تاريخ الإكمال", "Completion date")</label>
                                <p class="fw-semibold">@Model.CompletionDate.ToString("dd/MM/yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("عدد مرات التحقق", "Verification count")</label>
                                <p class="fw-semibold">@Model.VerificationCount @Html.T("مرة", "time(s)")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label text-muted mb-2">@Html.T("آخر تحقق", "Last verified")</label>
                                <p class="fw-semibold">@(Model.LastVerifiedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لم يتم التحقق بعد", "Not verified yet"))</p>
                            </div>
                        </div>
                        @if (Model.RegeneratedAt.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label text-muted mb-2">@Html.T("آخر إعادة إصدار", "Last regenerated")</label>
                                    <p class="fw-semibold">@Model.RegeneratedAt.Value.ToString("dd/MM/yyyy hh:mm tt")</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label text-muted mb-2">@Html.T("تم إعادة الإصدار بواسطة", "Regenerated by")</label>
                                    <p class="fw-semibold">@(Model.RegeneratedBy ?? Html.T("غير محدد", "Not set"))</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Info -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات سريعة", "Quick information")</h5>
                </div>
                <div class="card-body">
                    <div class="vstack gap-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">الحالة</span>
                            @if (Model.IsRevoked)
                            {
                                <span class="badge bg-danger">ملغاة</span>
                            }
                            else
                            {
                                <span class="badge bg-success">صالحة</span>
                            }
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">عدد التحقق</span>
                            <span class="fw-bold">@Model.VerificationCount</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">القالب</span>
                            <span class="fw-bold">@(Model.Template?.Name ?? "الافتراضي")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card stretch stretch-full mt-3">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإجراءات", "Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (!Model.IsRevoked)
                        {
                            <form asp-action="Regenerate" asp-controller="Certificates" method="post" 
                                  onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من إعادة إصدار هذه الشهادة؟", "Are you sure you want to reissue this certificate?").Replace("'", "\\'"))');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="feather-refresh-cw me-2"></i>
                                    إعادة الإصدار
                                </button>
                            </form>

                            <a href="@Url.Action("Revoke", "Certificates", new { id = Model.Id })" class="btn btn-warning">
                                <i class="feather-x-circle me-2"></i>
                                إلغاء الشهادة
                            </a>
                        }
                        else
                        {
                            <form asp-action="Restore" asp-controller="Certificates" method="post" 
                                  onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من استعادة هذه الشهادة؟", "Are you sure you want to restore this certificate?").Replace("'", "\\'"))');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="feather-check-circle me-2"></i>
                                    استعادة الشهادة
                                </button>
                            </form>
                        }

                        <a href="@Url.Action("Verify", "Certificates", new { code = Model.VerificationCode })" 
                           class="btn btn-light-brand" target="_blank">
                            <i class="feather-shield me-2"></i>
                            التحقق من الشهادة
                        </a>

                        <button type="button" class="btn btn-light-brand" onclick="copyVerificationLink()">
                            <i class="feather-copy me-2"></i>
                            نسخ رابط التحقق
                        </button>

                        <hr class="my-2" />

                        <form asp-action="Delete" asp-controller="Certificates" method="post" 
                              onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الشهادة؟ لا يمكن التراجع عن هذا الإجراء.", "Are you sure you want to delete this certificate? This action cannot be undone.").Replace("'", "\\'"))');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="feather-trash-2 me-2"></i>
                                حذف الشهادة
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Verification Link -->
            <div class="card stretch stretch-full mt-3">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("رابط التحقق", "Verification link")</h5>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control" id="verificationLink" 
                               value="@Url.Action("Verify", "Certificates", new { code = Model.VerificationCode }, Context.Request.Scheme)" 
                               readonly />
                        <button class="btn btn-primary" type="button" onclick="copyVerificationLink()">
                            <i class="feather-copy"></i>
                        </button>
                    </div>
                    <p class="text-muted small mt-2 mb-0">
                        <i class="feather-info me-1"></i>
                        يمكن مشاركة هذا الرابط للتحقق من صحة الشهادة
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyVerificationLink() {
            var linkInput = document.getElementById('verificationLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999);
            document.execCommand('copy');
            
            // Show toast notification
            var toast = `
                <div class="toast align-items-center text-white bg-success border-0" role="alert" style="position: fixed; top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999;">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="feather-check me-2"></i>
                            تم نسخ رابط التحقق بنجاح
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            var toastEl = $(toast).appendTo('body');
            var bsToast = new bootstrap.Toast(toastEl[0]);
            bsToast.show();
            
            setTimeout(function() {
                toastEl.remove();
            }, 3000);
        }

        // Print functionality
        window.onbeforeprint = function() {
            document.body.classList.add('printing');
        };
        
        window.onafterprint = function() {
            document.body.classList.remove('printing');
        };
    </script>
}

@section Styles {
    <style>
        .certificate-preview {
            min-height: 500px;
            background-image: 
                linear-gradient(45deg, rgba(59, 130, 246, 0.03) 25%, transparent 25%),
                linear-gradient(-45deg, rgba(59, 130, 246, 0.03) 25%, transparent 25%),
                linear-gradient(45deg, transparent 75%, rgba(59, 130, 246, 0.03) 75%),
                linear-gradient(-45deg, transparent 75%, rgba(59, 130, 246, 0.03) 75%);
            background-size: 20px 20px;
            background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
        }

        @@media print {
            body * {
                visibility: hidden;
            }
            .certificate-preview, .certificate-preview * {
                visibility: visible;
            }
            .certificate-preview {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
            }
        }
    </style>
}

