@model IEnumerable<LMS.Domain.Entities.Certifications.Certificate>

@{
    ViewData["Title"] = Html.T("إدارة الشهادات", "Certificates Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقييم والاختبارات", "Assessments & Quizzes"), null),
        (Html.T("الشهادات الصادرة", "Issued Certificates"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("قوالب الشهادات", "Certificate Templates"), "feather-layout", Url.Action("Index", "CertificateTemplates"), "btn-secondary"),
        (Html.T("إحصائيات", "Statistics"), "feather-bar-chart-2", Url.Action("Statistics", "Certificates"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
    
    var totalCertificates = Model.Count();
    var activeCertificates = Model.Count(c => !c.IsRevoked);
    var revokedCertificates = Model.Count(c => c.IsRevoked);
    var downloadedCount = Model.Count(c => c.DownloadCount > 0);
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .certificate-card {
            transition: all 0.3s ease;
        }
        .certificate-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transform: translateY(-3px);
        }
        .certificate-badge {
            position: absolute;
            top: 15px;
            right: 15px;
        }
        .student-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-award"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الشهادات", "Total Certificates")</span>
                            <h3 class="fw-bolder d-block">@totalCertificates.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("شهادات صالحة", "Valid Certificates")</span>
                            <h3 class="fw-bolder d-block">@activeCertificates.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-x-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("شهادات ملغاة", "Revoked Certificates")</span>
                            <h3 class="fw-bolder d-block">@revokedCertificates.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-download"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تم تحميلها", "Downloaded")</span>
                            <h3 class="fw-bolder d-block">@downloadedCount.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
