@model LMS.Areas.Admin.ViewModels.CouponEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل الكوبون", "Edit coupon");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإدارة المالية", "Financial"), null),
        (Html.T("الكوبونات", "Coupons"), Url.Action("Index", "Coupons")),
        (Html.T("تعديل الكوبون", "Edit coupon"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .usage-indicator {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 10px;
            background: var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%));
            color: white;
        }
    </style>
}

<!-- Page Header is rendered by layout -->

<div class="main-content">
    @if (Model.UsedCount > 0)
    {
        <div class="alert alert-warning mb-4">
            <i class="feather-alert-triangle me-2"></i>
            <strong>@Html.T("تحذير:", "Warning:")</strong> @Html.T("تم استخدام هذا الكوبون", "This coupon has been used") @Model.UsedCount @Html.T("مرة. بعض الحقول لا يمكن تعديلها!", "time(s). Some fields cannot be edited!")
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-edit-2 me-2"></i>تعديل معلومات الكوبون
                    </h5>
                    <div class="card-header-action">
                        <span class="usage-indicator">
                            <i class="feather-shopping-cart me-2"></i>
                            @Model.UsedCount استخدام
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UsedCount" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Code" class="form-label">@Html.T("كود الكوبون", "Coupon code") <span class="text-danger">*</span></label>
                            @if (Model.UsedCount > 0)
                            {
                                <input asp-for="Code" class="form-control form-control-lg font-monospace" style="text-transform: uppercase;" readonly />
                            }
                            else
                            {
                                <input asp-for="Code" class="form-control form-control-lg font-monospace" style="text-transform: uppercase;" />
                            }
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">@Html.T("الوصف", "Description")</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="DiscountType" class="form-label">@Html.T("نوع الخصم", "Discount type") <span class="text-danger">*</span></label>
                                @if (Model.UsedCount > 0)
                                {
                                    <select asp-for="DiscountType" class="form-select" disabled>
                                        <option value="@DiscountType.Percentage">@Html.T("نسبة مئوية (%)", "Percentage (%)")</option>
                                        <option value="@DiscountType.FixedAmount">@Html.T("مبلغ ثابت (جنيه)", "Fixed amount")</option>
                                    </select>
                                    <input type="hidden" asp-for="DiscountType" />
                                    <small class="text-warning">لا يمكن تغيير نوع الخصم بعد الاستخدام</small>
                                }
                                else
                                {
                                    <select asp-for="DiscountType" class="form-select">
                                        <option value="@DiscountType.Percentage">@Html.T("نسبة مئوية (%)", "Percentage (%)")</option>
                                        <option value="@DiscountType.FixedAmount">@Html.T("مبلغ ثابت (جنيه)", "Fixed amount")</option>
                                    </select>
                                }
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DiscountValue" class="form-label">@Html.T("قيمة الخصم", "Discount value") <span class="text-danger">*</span></label>
                                <input asp-for="DiscountValue" type="number" class="form-control" step="0.01" min="0" />
                                @if (Model.UsedCount > 0)
                                {
                                    <small class="text-warning">@Html.T("لا يمكن زيادة القيمة بعد الاستخدام", "Cannot increase value after use")</small>
                                }
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MaxDiscountAmount" class="form-label">@Html.T("الحد الأقصى للخصم", "Max discount amount")</label>
                                <input asp-for="MaxDiscountAmount" type="number" class="form-control" step="0.01" min="0" />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ValidFrom" class="form-label">@Html.T("ساري من", "Valid from")</label>
                                <input asp-for="ValidFrom" type="datetime-local" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ValidTo" class="form-label">@Html.T("ساري حتى", "Valid to") <span class="text-danger">*</span></label>
                                <input asp-for="ValidTo" type="datetime-local" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="MaxUses" class="form-label">@Html.T("الحد الأقصى للاستخدام", "Max uses")</label>
                                <input asp-for="MaxUses" type="number" class="form-control" min="@Model.UsedCount" />
                                @if (Model.UsedCount > 0)
                                {
                                    <small class="text-warning">@Html.T("لا يمكن تقليله أقل من", "Cannot reduce below") @Model.UsedCount</small>
                                }
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MaxUsesPerUser" class="form-label">@Html.T("الحد الأقصى لكل مستخدم", "Max uses per user")</label>
                                <input asp-for="MaxUsesPerUser" type="number" class="form-control" min="1" />
                            </div>
                        </div>

                        <div class="card border mb-4">
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="FirstPurchaseOnly" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" asp-for="FirstPurchaseOnly">@Html.T("للمشتريات الأولى فقط", "First purchase only")</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-check form-switch">
                                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                            <label class="form-check-label" asp-for="IsActive">@Html.T("نشط", "Active")</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>إلغاء
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                    <i class="feather-eye me-2"></i>@Html.T("عرض التفاصيل", "View details")
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="feather-save me-2"></i>حفظ التغييرات
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-bar-chart me-2"></i>إحصائيات الاستخدام
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-around mb-4">
                        <div class="text-center">
                            <h3 class="text-primary">@Model.UsedCount</h3>
                            <small class="text-muted">مرات الاستخدام</small>
                        </div>
                        <div class="text-center">
                            <h3 class="text-success">@(Model.MaxUses?.ToString() ?? "∞")</h3>
                            <small class="text-muted">الحد الأقصى</small>
                        </div>
                    </div>
                    
                    @if (Model.MaxUses.HasValue && Model.MaxUses.Value > 0)
                    {
                        var usagePercentage = (double)Model.UsedCount / Model.MaxUses.Value * 100;
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>التقدم</span>
                                <span>@usagePercentage.ToString("N0")%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar @(Model.UsedCount >= Model.MaxUses ? "bg-danger" : "bg-success")" style="width: @usagePercentage%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            let hasChanges = false;
            $('input, textarea, select').on('change', function() { hasChanges = true; });
            $('form').on('submit', function() { hasChanges = false; });
            $(window).on('beforeunload', function() {
                if (hasChanges) return 'لديك تغييرات غير محفوظة';
            });
        });
    </script>
}

