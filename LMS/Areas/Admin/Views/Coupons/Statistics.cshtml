@model dynamic

@{
    ViewData["Title"] = Html.T("إحصائيات الكوبونات", "Coupon statistics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإدارة المالية", "Financial"), null),
        (Html.T("الكوبونات", "Coupons"), Url.Action("Index", "Coupons")),
        (Html.T("الإحصائيات", "Statistics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-primary text-primary avatar-xl mb-3 mx-auto">
                        <i class="feather-tag"></i>
                    </div>
                    <h3 class="fw-bold">@Model.TotalCoupons</h3>
                    <small class="text-muted">@Html.T("إجمالي الكوبونات", "Total coupons")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-success text-success avatar-xl mb-3 mx-auto">
                        <i class="feather-check-circle"></i>
                    </div>
                    <h3 class="fw-bold">@Model.ActiveCoupons</h3>
                    <small class="text-muted">@Html.T("نشطة", "Active")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-warning text-warning avatar-xl mb-3 mx-auto">
                        <i class="feather-shopping-cart"></i>
                    </div>
                    <h3 class="fw-bold">@Model.TotalUsageCount</h3>
                    <small class="text-muted">@Html.T("مرات الاستخدام", "Times used")</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-danger text-danger avatar-xl mb-3 mx-auto">
                        <i class="feather-dollar-sign"></i>
                    </div>
                    <h3 class="fw-bold">@Model.TotalDiscountGiven.ToString("N0")</h3>
                    <small class="text-muted">إجمالي الخصومات</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-trending-up me-2"></i>أهم الكوبونات
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>@Html.T("الكود", "Code")</th>
                                    <th>@Html.T("الاستخدام", "Usage")</th>
                                    <th>@Html.T("الخصم", "Discount")</th>
                                    <th>@Html.T("النوع", "Type")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var coupon in Model.TopCoupons)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@coupon.Id" class="font-monospace fw-bold">
                                                @coupon.Code
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-primary text-primary">
                                                @coupon.UsedCount
                                            </span>
                                        </td>
                                        <td>
                                            @if (coupon.DiscountType == 0)
                                            {
                                                <span>@coupon.DiscountValue%</span>
                                            }
                                            else
                                            {
                                                <span>@coupon.DiscountValue جنيه</span>
                                            }
                                        </td>
                                        <td>
                                            @if (coupon.DiscountType == 0)
                                            {
                                                <span class="badge bg-soft-success text-success">نسبة</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-info text-info">ثابت</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-pie-chart me-2"></i>توزيع الكوبونات
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var totalCoupons = (int)Model.TotalCoupons;
                        var expiredPercent = totalCoupons > 0 ? ((double)Model.ExpiredCoupons / totalCoupons) * 100 : 0;
                        var activePercent = totalCoupons > 0 ? ((double)Model.ActiveCoupons / totalCoupons) * 100 : 0;
                        var usedPercent = totalCoupons > 0 ? ((double)Model.UsedCoupons / totalCoupons) * 100 : 0;
                    }
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>كوبونات منتهية</span>
                            <span class="fw-bold">@Model.ExpiredCoupons</span>
                        </div>
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-danger" style="width: @expiredPercent%">
                                @expiredPercent.ToString("N0")%
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>كوبونات نشطة</span>
                            <span class="fw-bold">@Model.ActiveCoupons</span>
                        </div>
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-success" style="width: @activePercent%">
                                @activePercent.ToString("N0")%
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>كوبونات مستخدمة</span>
                            <span class="fw-bold">@Model.UsedCoupons</span>
                        </div>
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar bg-warning" style="width: @usedPercent%">
                                @usedPercent.ToString("N0")%
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

