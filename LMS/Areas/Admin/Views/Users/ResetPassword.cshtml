@{
    ViewData["Title"] = Html.T("إعادة تعيين كلمة المرور", "Reset Password");
    var user = ViewBag.User as LMS.Domain.Entities.Users.ApplicationUser;
    
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المستخدمين", "User Management"), Url.Action("Index", "Users")),
        (Html.T("تفاصيل المستخدم", "User Details"), Url.Action("Details", "Users", new { id = user.Id })),
        (Html.T("إعادة تعيين كلمة المرور", "Reset Password"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- User Info -->
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar-text avatar-lg bg-soft-primary text-primary me-3">
                            @if (!string.IsNullOrEmpty(user.FirstName))
                            {
                                <span class="fs-4">@user.FirstName.Substring(0, 1)@(user.LastName?.Substring(0, 1) ?? "")</span>
                            }
                            else
                            {
                                <i class="feather-user fs-4"></i>
                            }
                        </div>
                        <div>
                            <h5 class="fw-bold mb-1">@user.FirstName @user.LastName</h5>
                            <p class="text-muted mb-0">@user.Email</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reset Password Options -->
            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("خيارات إعادة تعيين كلمة المرور", "Password Reset Options")</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-start mb-4">
                        <i class="feather-info fs-4 me-3 mt-1"></i>
                        <div>
                            <h6 class="mb-2">@Html.T("معلومات مهمة", "Important Information")</h6>
                            <p class="mb-0">
                                @Html.T("يمكنك إرسال رابط إعادة تعيين كلمة المرور إلى البريد الإلكتروني للمستخدم. سيتمكن المستخدم من إنشاء كلمة مرور جديدة بأمان عبر الرابط المرسل.", "You can send a password reset link to the user's email. The user will be able to create a new password securely via the sent link.")
                            </p>
                        </div>
                    </div>

                    <!-- Option 1: Send Reset Link -->
                    <div class="border rounded p-4 mb-4">
                        <div class="d-flex align-items-start">
                            <div class="avatar-text avatar-md bg-soft-primary text-primary me-3">
                                <i class="feather-mail"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-2">@Html.T("إرسال رابط إعادة التعيين عبر البريد الإلكتروني", "Send Reset Link via Email")</h6>
                                <p class="text-muted mb-3">
                                    @Html.T("سيتم إرسال رابط آمن إلى بريد المستخدم", "A secure link will be sent to the user's email") (@user.Email) @Html.T("يسمح له بإنشاء كلمة مرور جديدة. الرابط صالح لمدة 24 ساعة فقط.", "allowing them to create a new password. The link is valid for 24 hours only.")
                                </p>
                                
                                <form asp-action="SendPasswordReset" asp-controller="Users" method="post" 
                                      onsubmit="return confirm('@(Html.T("هل أنت متأكد من إرسال رابط إعادة التعيين؟", "Are you sure you want to send the reset link?"))');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    
                                    <button type="submit" class="btn btn-primary">
                                        <i class="feather-send me-2"></i>
                                        @Html.T("إرسال رابط إعادة التعيين", "Send Reset Link")
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Security Notice -->
                    <div class="border rounded p-4 bg-soft-warning">
                        <div class="d-flex align-items-start">
                            <div class="avatar-text avatar-md bg-warning text-white me-3">
                                <i class="feather-shield"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-2 text-warning">@Html.T("ملاحظات أمنية", "Security Notes")</h6>
                                <ul class="mb-0 text-muted">
                                    <li>@Html.T("سيتم تسجيل هذا الإجراء في سجل النشاط", "This action will be logged in the activity log")</li>
                                    <li>@Html.T("سيتلقى المستخدم إشعاراً بالبريد الإلكتروني", "The user will receive an email notification")</li>
                                    <li>@Html.T("الرابط يعمل لمرة واحدة فقط", "The link works only once")</li>
                                    <li>@Html.T("تأكد من صحة عنوان البريد الإلكتروني قبل الإرسال", "Verify the email address before sending")</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Password Requirements -->
            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("متطلبات كلمة المرور", "Password Requirements")</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">@Html.T("كلمة المرور الجديدة يجب أن تحتوي على:", "The new password must contain:")</p>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("حد أدنى 8 أحرف", "At least 8 characters")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("حرف كبير واحد على الأقل", "At least one uppercase letter")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("حرف صغير واحد على الأقل", "At least one lowercase letter")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("رقم واحد على الأقل", "At least one number")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("رمز خاص واحد على الأقل (@#$%)", "At least one special character (@#$%)")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="feather-check-circle text-success me-2"></i>
                                <span>@Html.T("عدم تكرار كلمات المرور السابقة", "No reuse of previous passwords")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Password Activity -->
            <div class="card stretch stretch-full mt-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("سجل نشاط كلمة المرور", "Password Activity Log")</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.T("النشاط", "Activity")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("عنوان IP", "IP Address")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <i class="feather-key text-primary me-2"></i>
                                        @Html.T("آخر تغيير لكلمة المرور", "Last Password Change")
                                    </td>
                                    <td>@(user.PasswordChangedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لم يتم التغيير", "Not changed"))</td>
                                    <td>---.---.---.---</td>
                                    <td>
                                        <span class="badge bg-soft-success text-success">@Html.T("نجح", "Success")</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="feather-log-in text-success me-2"></i>
                                        @Html.T("آخر تسجيل دخول", "Last Login")
                                    </td>
                                    <td>@(user.LastLoginAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لم يسجل دخول", "Never logged in"))</td>
                                    <td>---.---.---.---</td>
                                    <td>
                                        <span class="badge bg-soft-success text-success">@Html.T("نجح", "Success")</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4">
                <a href="@Url.Action("Details", "Users", new { id = user.Id })" class="btn btn-light">
                    <i class="feather-arrow-right me-2"></i>
                    @Html.T("العودة للملف الشخصي", "Back to Profile")
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .border-dashed {
            border-style: dashed !important;
        }
    </style>
}

