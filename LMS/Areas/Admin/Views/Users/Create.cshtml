@model LMS.Areas.Admin.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = Html.T("إضافة مستخدم جديد", "Add New User");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المستخدمين", "User Management"), Url.Action("Index", "Users")),
        (Html.T("إضافة مستخدم جديد", "Add New User"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <!-- Form -->
            <div class="col-lg-8">
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المعلومات الأساسية", "Basic Information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">@Html.T("الاسم الأول", "First Name") <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" placeholder="@Html.T("أدخل الاسم الأول", "Enter first name")" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">@Html.T("الاسم الأخير", "Last Name") <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" placeholder="@Html.T("أدخل الاسم الأخير", "Enter last name")" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label">@Html.T("اسم المستخدم", "Username") <span class="text-danger">*</span></label>
                                <input asp-for="UserName" class="form-control" placeholder="@Html.T("أدخل اسم المستخدم", "Enter username")" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">@Html.T("البريد الإلكتروني", "Email") <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="@Html.T("مثال: example@domain.com", "e.g. example@domain.com")" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">@Html.T("رقم الهاتف", "Phone")</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="@Html.T("مثال: +966 5X XXX XXXX", "e.g. +966 5X XXX XXXX")" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label">@Html.T("تاريخ الميلاد", "Date of Birth")</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Password" class="form-label">@Html.T("كلمة المرور", "Password") <span class="text-danger">*</span></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="@Html.T("أدخل كلمة المرور", "Enter password")" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label">@Html.T("تأكيد كلمة المرور", "Confirm Password") <span class="text-danger">*</span></label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="@Html.T("أعد إدخال كلمة المرور", "Re-enter password")" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Bio" class="form-label">@Html.T("السيرة الذاتية", "Bio")</label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="@Html.T("نبذة مختصرة عن المستخدم", "Brief user bio")"></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Actions Card -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ المستخدم", "Save User")
                            </button>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                @Html.T("إلغاء", "Cancel")
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Settings Card -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الإعدادات", "Settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label class="form-label">@Html.T("الدور", "Role")</label>
                            <select asp-for="Role" class="form-select">
                                <option value="">@Html.T("اختر الدور", "Select Role")</option>
                                <option value="Admin">@Html.T("مدير النظام", "Admin")</option>
                                <option value="Instructor">@Html.T("مدرس", "Instructor")</option>
                                <option value="Student" selected>@Html.T("طالب", "Student")</option>
                            </select>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
                            <label asp-for="EmailConfirmed" class="form-check-label">
                                @Html.T("تفعيل البريد تلقائياً", "Auto-confirm Email")
                            </label>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="PhoneNumberConfirmed" class="form-check-input" type="checkbox" />
                            <label asp-for="PhoneNumberConfirmed" class="form-check-label">
                                @Html.T("تفعيل الهاتف تلقائياً", "Auto-confirm Phone")
                            </label>
                        </div>

                        <div class="form-check form-switch">
                            <input asp-for="SendWelcomeEmail" class="form-check-input" type="checkbox" />
                            <label asp-for="SendWelcomeEmail" class="form-check-label">
                                @Html.T("إرسال بريد ترحيبي", "Send Welcome Email")
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Tips Card -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("نصائح", "Tips")</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                @Html.T("استخدم كلمة مرور قوية", "Use a strong password")
                            </li>
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                @Html.T("تأكد من صحة البريد الإلكتروني", "Verify the email is correct")
                            </li>
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                @Html.T("اختر الدور المناسب للمستخدم", "Select the appropriate role for the user")
                            </li>
                            <li>
                                <i class="feather-check-circle text-success me-2"></i>
                                @Html.T("يمكنك تعديل البيانات لاحقاً", "You can edit the data later")
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

