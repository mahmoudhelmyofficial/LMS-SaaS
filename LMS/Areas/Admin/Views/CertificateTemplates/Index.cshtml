@model IEnumerable<LMS.Domain.Entities.Certifications.CertificateTemplate>

@{
    ViewData["Title"] = Html.T("إدارة قوالب الشهادات", "Certificate Templates Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("قوالب الشهادات", "Certificate Templates"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة قالب", "Add Template"), "feather-plus", Url.Action("Create", "CertificateTemplates"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .template-preview {
            width: 100%;
            height: 150px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%));
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
            position: relative;
            overflow: hidden;
        }
        .template-preview::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient(
                45deg,
                transparent,
                transparent 10px,
                rgba(255,255,255,.05) 10px,
                rgba(255,255,255,.05) 20px
            );
        }
        .default-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-file-text"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("إجمالي القوالب", "Total templates")</span>
                            <h3 class="fw-bold mb-0">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("قوالب نشطة", "Active templates")</span>
                            <h3 class="fw-bold mb-0">@Model.Count(t => t.IsActive).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-star"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("القالب الافتراضي", "Default template")</span>
                            <h3 class="fw-bold mb-0">@(Model.Any(t => t.IsDefault) ? "1" : "0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-layout"></i>
                        </div>
                        <div>
                            <span class="text-muted d-block mb-1">@Html.T("تخطيطات مختلفة", "Different layouts")</span>
                            <h3 class="fw-bold mb-0">@Model.Select(t => t.Orientation).Distinct().Count()</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-active">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("نشط", "Active")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-inactive">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("غير نشط", "Inactive")</span>
    </a>
    <div class="dropdown-divider"></div>
    <a href="javascript:void(0);" class="dropdown-item filter-landscape">
        <i class="feather-layout me-3"></i>
        <span>@Html.T("أفقي", "Landscape")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-portrait">
        <i class="feather-layout me-3"></i>
        <span>@Html.T("عمودي", "Portrait")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @foreach (var template in Model.OrderByDescending(t => t.IsDefault).ThenBy(t => t.Name))
        {
            <div class="col-xl-4 col-lg-6">
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="template-preview mb-3">
                            @if (template.IsDefault)
                            {
                                <span class="badge bg-warning default-badge">
                                    <i class="feather-star me-1"></i>
                                    @Html.T("افتراضي", "Default")
                                </span>
                            }
                            <div style="position: relative; z-index: 1; text-align: center;">
                                <i class="feather-award" style="font-size: 3rem;"></i>
                                <div class="mt-2">@template.Name</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <h6 class="fw-bold mb-0">@template.Name</h6>
                            @if (template.IsActive)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-secondary text-secondary">@Html.T("غير نشط", "Inactive")</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(template.Description))
                        {
                            <p class="text-muted fs-12 mb-3">@template.Description</p>
                        }
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="feather-maximize-2 text-muted"></i>
                                    <span class="text-muted fs-12">@template.Width × @template.Height</span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center gap-2">
                                    <i class="feather-layout text-muted"></i>
                                    <span class="text-muted fs-12">@template.Orientation</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Details", "CertificateTemplates", new { id = template.Id })" class="btn btn-sm btn-light-brand flex-fill">
                                <i class="feather-eye me-1"></i>
                                @Html.T("عرض", "View")
                            </a>
                            <a href="@Url.Action("Edit", "CertificateTemplates", new { id = template.Id })" class="btn btn-sm btn-light-brand flex-fill">
                                <i class="feather-edit me-1"></i>
                                @Html.T("تعديل", "Edit")
                            </a>
                            <a href="@Url.Action("Preview", "CertificateTemplates", new { id = template.Id })" 
                               class="btn btn-sm btn-light-brand" 
                               target="_blank"
                               data-bs-toggle="tooltip" 
                               title="@Html.T("معاينة", "Preview")">
                                <i class="feather-external-link"></i>
                            </a>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                    <i class="feather-more-horizontal"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-action="Duplicate" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@template.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="feather-copy me-3"></i>
                                                <span>@Html.T("نسخ القالب", "Duplicate template")</span>
                                            </button>
                                        </form>
                                    </li>
                                    @if (!template.IsDefault)
                                    {
                                        <li>
                                            <form asp-action="SetDefault" asp-route-id="@template.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('@(Html.T("هل تريد تعيين هذا القالب كافتراضي؟", "Do you want to set this template as default?"))');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="feather-star me-3"></i>
                                                    <span>@Html.T("تعيين كافتراضي", "Set as default")</span>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    @if (!template.IsDefault)
                                    {
                                        <li>
                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('@(Html.T("هل أنت متأكد من حذف هذا القالب؟", "Are you sure you want to delete this template?"))')">
                                                <input type="hidden" name="id" value="@template.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="feather-trash-2 me-3"></i>
                                                    <span>@Html.T("حذف", "Delete")</span>
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary mb-3 mx-auto">
                            <i class="feather-file-text" style="font-size: 2rem;"></i>
                        </div>
                        <h5 class="fw-bold mb-2">@Html.T("لا توجد قوالب شهادات", "No certificate templates")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء قالب شهادة جديد لطلابك", "Start by creating a new certificate template for your students")</p>
                        <a href="@Url.Action("Create", "CertificateTemplates")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إنشاء قالب جديد", "Create new template")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
