@model IEnumerable<LMS.Domain.Entities.Payments.PendingManualPayment>
@using LMS.Domain.Enums
@{
    ViewData["Title"] = Html.T("إدارة الدفعات اليدوية", "Manual payments management");
    ViewData["ActiveMenu"] = "ManualPayments";
    var statusCounts = ViewBag.StatusCounts as Dictionary<string, int> ?? new Dictionary<string, int>();
    var currentStatus = ViewBag.CurrentStatus as string;
    var search = ViewBag.Search as string;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">
                <i class="feather-credit-card text-primary me-2"></i>
                @Html.T("الدفعات اليدوية", "Manual payments")
            </h2>
            <p class="text-muted mb-0">@Html.T("إدارة التحويلات البنكية والمدفوعات النقدية", "Manage bank transfers and cash payments")</p>
        </div>
    </div>

    <!-- Status Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <span class="text-muted me-2">@Html.T("تصفية حسب الحالة", "Filter by status"):</span>
                        
                        <a href="@Url.Action("Index")" 
                           class="btn btn-sm @(string.IsNullOrEmpty(currentStatus) ? "btn-primary" : "btn-outline-primary")">
                            @Html.T("الجميع", "All")
                        </a>
                        
                        <a href="@Url.Action("Index", new { status = "ProofSubmitted" })" 
                           class="btn btn-sm @(currentStatus == "ProofSubmitted" ? "btn-warning" : "btn-outline-warning")">
                            <i class="feather-clock me-1"></i>
                            @Html.T("بانتظار المراجعة", "Pending review")
                            @if (statusCounts.TryGetValue("ProofSubmitted", out var proofCount) && proofCount > 0)
                            {
                                <span class="badge bg-danger ms-1">@proofCount</span>
                            }
                        </a>
                        
                        <a href="@Url.Action("Index", new { status = "AwaitingProof" })" 
                           class="btn btn-sm @(currentStatus == "AwaitingProof" ? "btn-info" : "btn-outline-info")">
                            <i class="feather-loader me-1"></i>
                            @Html.T("بانتظار الإثبات", "Awaiting proof")
                            @if (statusCounts.TryGetValue("AwaitingProof", out var awaitingCount) && awaitingCount > 0)
                            {
                                <span class="badge bg-secondary ms-1">@awaitingCount</span>
                            }
                        </a>
                        
                        <a href="@Url.Action("Index", new { status = "Approved" })" 
                           class="btn btn-sm @(currentStatus == "Approved" ? "btn-success" : "btn-outline-success")">
                            <i class="feather-check me-1"></i>
                            @Html.T("معتمدة", "Approved")
                        </a>
                        
                        <a href="@Url.Action("Index", new { status = "Rejected" })" 
                           class="btn btn-sm @(currentStatus == "Rejected" ? "btn-danger" : "btn-outline-danger")">
                            <i class="feather-x me-1"></i>
                            @Html.T("مرفوضة", "Rejected")
                        </a>
                        
                        <!-- Search -->
                        <form asp-action="Index" method="get" class="ms-auto d-flex gap-2">
                            @if (!string.IsNullOrEmpty(currentStatus))
                            {
                                <input type="hidden" name="status" value="@currentStatus" />
                            }
                            <input type="text" name="search" value="@search" 
                                   class="form-control form-control-sm" 
                                   placeholder="@Html.T("بحث برقم المرجع أو الإيميل...", "Search by reference or email...")" 
                                   style="width: 250px;">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                <i class="feather-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payments Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.T("رقم المرجع", "Reference")</th>
                                <th>@Html.T("الطالب", "Student")</th>
                                <th>@Html.T("المبلغ", "Amount")</th>
                                <th>@Html.T("الحالة", "Status")</th>
                                <th>@Html.T("تاريخ الطلب", "Request date")</th>
                                <th>@Html.T("تاريخ الانتهاء", "Expiry date")</th>
                                <th>@Html.T("الإثبات", "Proof")</th>
                                <th>@Html.T("إجراءات", "Actions")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model)
                            {
                                <tr>
                                    <td>
                                        <code class="text-primary">@payment.ReferenceNumber</code>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar avatar-sm me-2">
                                                <span class="avatar-initial rounded-circle bg-primary">
                                                    @payment.Student?.FirstName?.Substring(0, 1)
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@payment.Student?.FullName</div>
                                                <small class="text-muted">@payment.Student?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">@payment.Amount.ToString("N2")</span>
                                        <span class="text-muted">@payment.Currency</span>
                                    </td>
                                    <td>
                                        @{
                                            var (statusClass, statusText) = payment.Status switch
                                            {
                                                ManualPaymentStatus.AwaitingProof => ("bg-info", Html.T("بانتظار الإثبات", "Awaiting proof").ToString()),
                                                ManualPaymentStatus.ProofSubmitted => ("bg-warning", Html.T("بانتظار المراجعة", "Pending review").ToString()),
                                                ManualPaymentStatus.UnderReview => ("bg-secondary", Html.T("قيد المراجعة", "Under review").ToString()),
                                                ManualPaymentStatus.Approved => ("bg-success", Html.T("معتمدة", "Approved").ToString()),
                                                ManualPaymentStatus.Rejected => ("bg-danger", Html.T("مرفوضة", "Rejected").ToString()),
                                                ManualPaymentStatus.Expired => ("bg-dark", Html.T("منتهية", "Expired").ToString()),
                                                _ => ("bg-secondary", Html.T("غير معروف", "Unknown").ToString())
                                            };
                                        }
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        <small>@payment.CreatedAt.ToString("yyyy/MM/dd")</small><br/>
                                        <small class="text-muted">@payment.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                                        @if (payment.ExpiresAt < DateTime.UtcNow && payment.Status == ManualPaymentStatus.AwaitingProof)
                                        {
                                            <span class="text-danger">
                                                <i class="feather-alert-circle me-1"></i>
                                                @Html.T("منتهي", "Expired")
                                            </span>
                                        }
                                        else
                                        {
                                            <small>@payment.ExpiresAt.ToString("yyyy/MM/dd HH:mm")</small>
                                        }
                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(payment.ProofImageUrl))
                                                        {
                                                            <a href="@payment.ProofImageUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                                <i class="feather-image me-1"></i>
                                                                @Html.T("عرض", "View")
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">-</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Details", new { id = payment.Id })" 
                                                           class="btn btn-sm btn-outline-primary" title="@Html.T("مراجعة وتأكيد", "Review and confirm")">
                                                            <i class="feather-eye"></i>
                                                            @if (payment.Status == ManualPaymentStatus.ProofSubmitted)
                                                            {
                                                                <span class="ms-1">@Html.T("مراجعة", "Review")</span>
                                                            }
                                                        </a>
                                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                        <i class="feather-inbox"></i>
                    </div>
                    <h5 class="text-muted">@Html.T("لا توجد دفعات في هذا التصنيف", "No payments in this category")</h5>
                    <p class="text-muted">@Html.T("ستظهر الدفعات اليدوية هنا عند تقديمها من قبل الطلاب", "Manual payments will appear here when submitted by students")</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-initial {
        width: 32px;
        height: 32px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        color: white;
    }
</style>

