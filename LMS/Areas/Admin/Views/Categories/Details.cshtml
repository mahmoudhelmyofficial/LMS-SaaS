@model LMS.Domain.Entities.Courses.Category

@{
    ViewData["Title"] = Html.T("تفاصيل التصنيف", "Category details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        ("إدارة التصنيفات", Url.Action("Index", "Categories")),
        (Model.Name, null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        ("تعديل", "feather-edit", Url.Action("Edit", "Categories", new { id = Model.Id }), "btn-primary"),
        ("الإحصائيات", "feather-bar-chart-2", Url.Action("Statistics", "Categories"), "btn-info")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .category-icon-preview {
            width: 100px;
            height: 100px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 48px;
        }
        .category-image-preview {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 12px;
        }
        .category-badge {
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
        }
        .course-item {
            border-radius: 8px;
            padding: 15px;
            transition: all 0.3s ease;
        }
        .course-item:hover {
            background-color: #f8f9fa;
            transform: translateX(-5px);
        }
        .subcategory-card {
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 15px;
            transition: all 0.3s ease;
        }
        .subcategory-card:hover {
            border-color: #3454d1;
            box-shadow: 0 2px 8px rgba(52, 84, 209, 0.1);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Category Overview -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">معلومات التصنيف</h5>
                    <div class="card-header-action">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success category-badge">نشط</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary category-badge">غير نشط</span>
                        }
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-warning text-white category-badge ms-2">مميز</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <!-- Category Image -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-12">
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="category-image-preview mb-3">
                            </div>
                        }

                        <!-- Category Icon and Name -->
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3 mb-4">
                                @if (!string.IsNullOrEmpty(Model.IconUrl))
                                {
                                    <div class="category-icon-preview" style="background-color: @(Model.Color ?? "#3454d1")15;">
                                        <img src="@Model.IconUrl" alt="@Model.Name" style="width: 50px; height: 50px;">
                                    </div>
                                }
                                else if (!string.IsNullOrEmpty(Model.Color))
                                {
                                    <div class="category-icon-preview" style="background-color: @Model.Color;">
                                        <i class="feather-folder text-white"></i>
                                    </div>
                                }
                                <div>
                                    <h3 class="mb-1">@Model.Name</h3>
                                    <p class="text-muted mb-0">@Model.Slug</p>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-2">الوصف</label>
                                <div class="p-3 bg-light rounded">
                                    <p class="mb-0">@Model.Description</p>
                                </div>
                            </div>
                        }

                        <!-- Parent Category -->
                        @if (Model.ParentCategoryId.HasValue && Model.ParentCategory != null)
                        {
                            <div class="col-md-6">
                                <label class="text-muted fs-12 mb-1">التصنيف الأب</label>
                                <p class="mb-0">
                                    <a href="@Url.Action("Details", "Categories", new { id = Model.ParentCategoryId })" 
                                       class="text-primary fw-semibold">
                                        <i class="feather-folder me-2"></i>@Model.ParentCategory.Name
                                    </a>
                                </p>
                            </div>
                        }

                        <!-- Display Order -->
                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">ترتيب العرض</label>
                            <p class="fw-semibold mb-0">@Model.DisplayOrder</p>
                        </div>

                        <!-- Color -->
                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="col-md-6">
                                <label class="text-muted fs-12 mb-1">اللون</label>
                                <div class="d-flex align-items-center gap-2">
                                    <div style="width: 30px; height: 30px; background-color: @Model.Color; border-radius: 6px;"></div>
                                    <span class="fw-semibold">@Model.Color</span>
                                </div>
                            </div>
                        }

                        <!-- Created Date -->
                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">تاريخ الإنشاء</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>

                        <!-- Last Updated -->
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="col-md-6">
                                <label class="text-muted fs-12 mb-1">آخر تحديث</label>
                                <p class="mb-0">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Subcategories -->
            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">التصنيفات الفرعية</h5>
                        <div class="card-header-action">
                            <span class="badge bg-soft-primary text-primary">@Model.SubCategories.Count() تصنيف</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var subCategory in Model.SubCategories.OrderBy(c => c.DisplayOrder))
                            {
                                <div class="col-md-6">
                                    <div class="subcategory-card">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center gap-3">
                                                @if (!string.IsNullOrEmpty(subCategory.IconUrl))
                                                {
                                                    <div class="avatar-text avatar-md" style="background-color: @(subCategory.Color ?? "#3454d1")15;">
                                                        <img src="@subCategory.IconUrl" alt="@subCategory.Name" style="width: 24px; height: 24px;">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                        <i class="feather-folder"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <h6 class="mb-1">
                                                        <a href="@Url.Action("Details", "Categories", new { id = subCategory.Id })" class="text-dark">
                                                            @subCategory.Name
                                                        </a>
                                                    </h6>
                                                    <p class="text-muted fs-12 mb-0">@subCategory.Courses.Count دورة</p>
                                                </div>
                                            </div>
                                            <div>
                                                @if (subCategory.IsActive)
                                                {
                                                    <span class="badge bg-soft-success text-success">نشط</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-secondary text-secondary">غير نشط</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Courses in Category -->
            @if (Model.Courses != null && Model.Courses.Any())
            {
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">الدورات في هذا التصنيف</h5>
                        <div class="card-header-action">
                            <span class="badge bg-soft-primary text-primary">@Model.Courses.Count() دورة</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var course in Model.Courses.OrderByDescending(c => c.CreatedAt).Take(10))
                            {
                                <div class="list-group-item course-item border-0 px-0">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3 flex-grow-1">
                                            @if (!string.IsNullOrEmpty(course.ThumbnailUrl))
                                            {
                                                <img src="@course.ThumbnailUrl" alt="@course.Title" 
                                                     style="width: 80px; height: 60px; object-fit: cover; border-radius: 8px;">
                                            }
                                            else
                                            {
                                                <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                                    <i class="feather-book"></i>
                                                </div>
                                            }
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">
                                                    <a href="@Url.Action("Details", "Courses", new { id = course.Id })" class="text-dark">
                                                        @course.Title
                                                    </a>
                                                </h6>
                                                <div class="d-flex align-items-center gap-3">
                                                    <span class="text-muted fs-12">
                                                        <i class="feather-user me-1"></i>@course.Instructor?.FullName
                                                    </span>
                                                    <span class="text-muted fs-12">
                                                        <i class="feather-users me-1"></i>@course.TotalStudents طالب
                                                    </span>
                                                    @if (course.Rating > 0)
                                                    {
                                                        <span class="text-muted fs-12">
                                                            <i class="feather-star me-1"></i>@course.Rating.ToString("F1")
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            @if (course.IsFree)
                                            {
                                                <span class="badge bg-soft-success text-success">مجاني</span>
                                            }
                                            else
                                            {
                                                <h6 class="mb-0 text-primary">@course.Price.ToEGP()</h6>
                                            }
                                            <small class="text-muted d-block mt-1">@course.Status</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.Courses.Count() > 10)
                        {
                            <div class="text-center mt-3">
                                <a href="@Url.Action("Index", "Courses", new { categoryId = Model.Id })" class="btn btn-sm btn-light">
                                    <i class="feather-eye me-2"></i>
                                    عرض جميع الدورات (@Model.Courses.Count())
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Statistics -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">الإحصائيات</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">إجمالي الدورات</span>
                        <span class="fw-bold fs-5">@Model.Courses.Count()</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">دورات نشطة</span>
                        <span class="fw-bold fs-5 text-success">@Model.Courses.Count(c => c.Status == LMS.Domain.Enums.CourseStatus.Published)</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">التصنيفات الفرعية</span>
                        <span class="fw-bold fs-5">@Model.SubCategories.Count()</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">إجمالي الطلاب</span>
                        <span class="fw-bold fs-5 text-primary">@Model.Courses.Sum(c => c.TotalStudents)</span>
                    </div>
                    @if (Model.Courses.Any(c => !c.IsFree))
                    {
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">متوسط السعر</span>
                            <span class="fw-bold fs-5 text-info">@Model.Courses.Where(c => !c.IsFree).Average(c => c.Price).ToEGP()</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">الإجراءات</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Categories", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل التصنيف", "Edit category")
                        </a>
                        @if (Model.IsActive)
                        {
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning w-100" onclick="return confirm(window.__CategoriesDetailsT.deactivateConfirm);">
                                    <i class="feather-pause me-2"></i>
                                    @Html.T("إلغاء التفعيل", "Deactivate")
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="feather-play me-2"></i>
                                    @Html.T("تفعيل", "Activate")
                                </button>
                            </form>
                        }
                        @if (!Model.Courses.Any() && !Model.SubCategories.Any())
                        {
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger w-100" onclick="return confirm(window.__CategoriesDetailsT.deleteConfirm);">
                                    <i class="feather-trash-2 me-2"></i>
                                    @Html.T("حذف التصنيف", "Delete category")
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <!-- Category Info -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات إضافية", "Additional information")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12 mb-1">رقم التصنيف</label>
                        <p class="fw-semibold mb-0">#@Model.Id.ToString().PadLeft(5, '0')</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12 mb-1">الحالة</label>
                        <p class="mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">نشط</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشط</span>
                            }
                            @if (Model.IsFeatured)
                            {
                                <span class="badge bg-warning text-white ms-1">مميز</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12 mb-1">تاريخ الإنشاء</label>
                        <p class="mb-0">@Model.CreatedAt.ToString("dd MMMM yyyy")</p>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div>
                            <label class="text-muted fs-12 mb-1">آخر تحديث</label>
                            <p class="mb-0">@Model.UpdatedAt.Value.ToString("dd MMMM yyyy")</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
window.__CategoriesDetailsT = {
    deactivateConfirm: '@Html.Raw(Html.T("هل تريد إلغاء تفعيل هذا التصنيف؟", "Do you want to deactivate this category?").Replace("'", "\\'"))',
    deleteConfirm: '@Html.Raw(Html.T("هل أنت متأكد من حذف هذا التصنيف؟ لا يمكن التراجع عن هذا الإجراء.", "Are you sure you want to delete this category? This action cannot be undone.").Replace("'", "\\'"))'
};
</script>
}
