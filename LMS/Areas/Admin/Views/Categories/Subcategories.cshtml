@model IEnumerable<LMS.Domain.Entities.Courses.Category>

@{
    ViewData["Title"] = Html.T("التصنيفات الفرعية", "Subcategories");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التصنيفات", "Categories"), Url.Action("Index", "Categories")),
        (Html.T("التصنيفات الفرعية", "Subcategories"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة تصنيف فرعي", "Add subcategory"), "feather-plus", Url.Action("Create", "Categories"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
    var parentCategories = ViewBag.ParentCategories as IEnumerable<LMS.Domain.Entities.Courses.Category> ?? Enumerable.Empty<LMS.Domain.Entities.Courses.Category>();
    var selectedParentId = ViewBag.SelectedParentId as int?;
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-4 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-folder-plus"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي التصنيفات الفرعية", "Total subcategories")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalSubcategories</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Filter -->
<div class="main-content">
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label class="form-label">@Html.T("التصنيف الرئيسي", "Parent category")</label>
                            <select name="parentId" class="form-select" onchange="this.form.submit()">
                                <option value="">-- @Html.T("جميع التصنيفات", "All categories") --</option>
                                @foreach (var parent in parentCategories)
                                {
                                    <option value="@parent.Id" selected="@(selectedParentId == parent.Id)">@parent.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <a asp-action="Subcategories" class="btn btn-outline-secondary">
                                <i class="feather-refresh-cw me-1"></i>
                                @Html.T("إعادة تعيين", "Reset")
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Subcategories List -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التصنيفات الفرعية", "Subcategories")</h5>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl rounded-circle bg-soft-warning text-warning mx-auto mb-3">
                                <i class="feather-folder-plus"></i>
                            </div>
                            <h5>@Html.T("لا توجد تصنيفات فرعية", "No subcategories")</h5>
                            <p class="text-muted">@Html.T("يمكنك إضافة تصنيف فرعي جديد", "You can add a new subcategory")</p>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="feather-plus me-1"></i>
                                @Html.T("إضافة تصنيف فرعي", "Add subcategory")
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>@Html.T("التصنيف الفرعي", "Subcategory")</th>
                                        <th>@Html.T("التصنيف الرئيسي", "Parent category")</th>
                                        <th>@Html.T("عدد الدورات", "Courses count")</th>
                                        <th>@Html.T("الحالة", "Status")</th>
                                        <th>@Html.T("الترتيب", "Order")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subcategory in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center gap-3">
                                                    <div class="avatar-text avatar-md rounded bg-soft-primary text-primary">
                                                        @if (!string.IsNullOrEmpty(subcategory.IconClass))
                                                        {
                                                            <i class="@subcategory.IconClass"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="feather-folder"></i>
                                                        }
                                                    </div>
                                                    <div>
                                                        <a asp-action="Details" asp-route-id="@subcategory.Id" class="fw-semibold">@subcategory.Name</a>
                                                        @if (!string.IsNullOrEmpty(subcategory.Description))
                                                        {
                                                            <small class="text-muted d-block text-truncate" style="max-width: 200px;">@subcategory.Description</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (subcategory.ParentCategory != null)
                                                {
                                                    <a asp-action="Details" asp-route-id="@subcategory.ParentCategoryId" class="badge bg-soft-info text-info">
                                                        @subcategory.ParentCategory.Name
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-soft-primary text-primary">@(subcategory.Courses?.Count ?? 0) @Html.T("دورة", "course(s)")</span>
                                            </td>
                                            <td>
                                                @if (subcategory.IsActive)
                                                {
                                                    <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("غير نشط", "Inactive")</span>
                                                }
                                            </td>
                                            <td>@subcategory.DisplayOrder</td>
                                            <td class="text-end">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a asp-action="Edit" asp-route-id="@subcategory.Id" class="btn btn-sm btn-outline-primary" title="@Html.T("تعديل", "Edit")">
                                                        <i class="feather-edit"></i>
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@subcategory.Id" class="btn btn-sm btn-outline-info" title="@Html.T("التفاصيل", "Details")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

