@model LMS.Areas.Admin.ViewModels.CategoryEditViewModel

@{
    ViewData["Title"] = Html.T("تعديل التصنيف", "Edit category");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المحتوى", "Content management"), null),
        (Html.T("التصنيفات", "Categories"), Url.Action("Index", "Categories")),
        (Html.T("تعديل التصنيف", "Edit category"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .icon-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            margin: 0 auto;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-edit-2 me-2"></i>تعديل معلومات التصنيف
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label">@Html.T("اسم التصنيف", "Category name") <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control form-control-lg" id="categoryName" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">@Html.T("الوصف", "Description")</label>
                            <textarea asp-for="Description" class="form-control" rows="3" id="categoryDesc"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="IconUrl" class="form-label">@Html.T("أيقونة التصنيف", "Category icon")</label>
                                <input asp-for="IconUrl" class="form-control" />
                                <span asp-validation-for="IconUrl" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ImageUrl" class="form-label">@Html.T("صورة الغلاف", "Cover image")</label>
                                <input asp-for="ImageUrl" class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Color" class="form-label">@Html.T("لون التصنيف", "Category color")</label>
                            <input asp-for="Color" type="color" class="form-control" id="categoryColor" />
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ParentCategoryId" class="form-label">@Html.T("التصنيف الأب", "Parent category")</label>
                            <select asp-for="ParentCategoryId" class="form-select">
                                <option value="">-- بدون تصنيف أب --</option>
                                @if (ViewBag.ParentCategories != null)
                                {
                                    @foreach (var cat in ViewBag.ParentCategories)
                                    {
                                        <option value="@cat.Id" selected="@(Model.ParentCategoryId == cat.Id)">@cat.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="DisplayOrder" class="form-label">@Html.T("ترتيب العرض", "Display order")</label>
                                <input asp-for="DisplayOrder" type="number" class="form-control" min="0" />
                            </div>
                            <div class="col-md-6">
                                <div class="mt-4 pt-2">
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" asp-for="IsActive">@Html.T("نشط", "Active")</label>
                                    </div>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                                        <label class="form-check-label" asp-for="IsFeatured">@Html.T("مميز", "Featured")</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>حفظ التغييرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-eye me-2"></i>معاينة
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="icon-preview bg-soft-primary text-primary mb-3" id="iconPreview" style="background-color: @(Model.Color ?? "#3b82f6")20; color: @(Model.Color ?? "#3b82f6");">
                        <i class="feather-folder"></i>
                    </div>
                    <h5 class="fw-bold" id="previewName">@Model.Name</h5>
                    <p class="text-muted" id="previewDesc">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#categoryName').on('input', function() {
                $('#previewName').text($(this).val() || 'اسم التصنيف');
            });

            $('#categoryDesc').on('input', function() {
                $('#previewDesc').text($(this).val() || 'وصف التصنيف');
            });

            $('#categoryColor').on('change', function() {
                const color = $(this).val();
                $('#iconPreview').css('background-color', color + '20');
                $('#iconPreview').css('color', color);
            });

            let hasChanges = false;
            $('input, textarea, select').on('change', function() { hasChanges = true; });
            $('form').on('submit', function() { hasChanges = false; });
            $(window).on('beforeunload', function() {
                if (hasChanges) return 'لديك تغييرات غير محفوظة';
            });
        });
    </script>
}

