@model IEnumerable<LMS.Domain.Entities.Courses.ContentDripRule>

@{
    ViewData["Title"] = Html.T("جدولة المحتوى", "Content Scheduling");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المحتوى", "Content Management"), null),
        (Html.T("جدولة المحتوى", "Content Scheduling"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة قاعدة", "Add Rule"), "feather-plus", Url.Action("Create", "ContentDrip"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .drip-card {
            transition: all 0.3s ease;
        }
        .drip-card:hover {
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }
        .drip-type-badge {
            font-size: 0.75rem;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("قواعد نشطة", "Active Rules")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(d => d.IsActive).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-book"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دورات مرتبطة", "Linked Courses")</span>
                            <h3 class="fw-bolder d-block">@Model.Select(d => d.CourseId).Distinct().Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-layers"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("وحدات مجدولة", "Scheduled Modules")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(d => d.ModuleId.HasValue).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-file-text"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دروس مجدولة", "Scheduled Lessons")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(d => d.LessonId.HasValue).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var rule in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card drip-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <i class="feather-clock text-primary"></i>
                                <h6 class="mb-0">@(rule.Course?.Title ?? (Html.T("دورة", "Course") + " #" + rule.CourseId))</h6>
                            </div>
                            <div class="d-flex gap-2">
                                @if (rule.IsActive)
                                {
                                    <span class="badge bg-soft-success text-success">@Html.T("نشط", "Active")</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("معطل", "Disabled")</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <!-- Rule Target -->
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">@Html.T("المحتوى المستهدف", "Target content"):</small>
                                @if (rule.LessonId.HasValue && rule.Lesson != null)
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="feather-file-text text-info"></i>
                                        <span>@Html.T("درس", "Lesson"): @rule.Lesson.Title</span>
                                    </div>
                                }
                                else if (rule.ModuleId.HasValue && rule.Module != null)
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="feather-folder text-warning"></i>
                                        <span>@Html.T("وحدة", "Module"): @rule.Module.Title</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="feather-book text-primary"></i>
                                        <span>@Html.T("كل محتوى الدورة", "All course content")</span>
                                    </div>
                                }
                            </div>

                            <!-- Drip Type -->
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">@Html.T("نوع الجدولة", "Schedule type"):</small>
                                @switch (rule.DripType)
                                {
                                    case LMS.Domain.Enums.ContentDripType.AllAtOnce:
                                        <span class="badge bg-soft-info text-info drip-type-badge">
                                            <i class="feather-zap me-1"></i>
                                            @Html.T("إتاحة كل المحتوى مباشرة", "Release all content at once")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.DaysAfterEnrollment:
                                        <span class="badge bg-soft-primary text-primary drip-type-badge">
                                            <i class="feather-calendar me-1"></i>
                                            @Html.T("بعد", "After") @rule.DaysAfterEnrollment @Html.T("يوم من التسجيل", "days after enrollment")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.SpecificDate:
                                        <span class="badge bg-soft-warning text-warning drip-type-badge">
                                            <i class="feather-calendar me-1"></i>
                                            @Html.T("في تاريخ", "On date"): @(rule.SpecificDate?.ToString("dd/MM/yyyy") ?? "-")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.Weekly:
                                        <span class="badge bg-soft-success text-success drip-type-badge">
                                            <i class="feather-repeat me-1"></i>
                                            @Html.T("أسبوعياً", "Weekly") - @Html.T("يوم", "Day") @(rule.DayOfWeek ?? 0)
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.ByWeekDay:
                                        <span class="badge bg-soft-success text-success drip-type-badge">
                                            <i class="feather-calendar me-1"></i>
                                            @Html.T("حسب يوم الأسبوع", "By week day"): @(rule.DayOfWeek ?? 0)
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.AfterPreviousCompletion:
                                        <span class="badge bg-soft-primary text-primary drip-type-badge">
                                            <i class="feather-check-circle me-1"></i>
                                            @Html.T("بعد إكمال الدرس السابق", "After previous lesson completion")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.ContentDripType.Sequential:
                                        <span class="badge bg-soft-info text-info drip-type-badge">
                                            <i class="feather-git-branch me-1"></i>
                                            @Html.T("متسلسل", "Sequential")
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-soft-secondary text-secondary drip-type-badge">
                                            @Html.T("غير محدد", "Not specified")
                                        </span>
                                        break;
                                }
                            </div>

                            <!-- Release Time -->
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">@Html.T("وقت الإتاحة", "Release time"):</small>
                                <span>@rule.ReleaseHour:00 (@rule.TimeZone)</span>
                            </div>

                            <!-- Notification -->
                            @if (rule.SendNotification)
                            {
                                <div class="alert alert-info mb-0 py-2">
                                    <i class="feather-bell me-2"></i>
                                    <small>@Html.T("سيتم إرسال إشعار عند إتاحة المحتوى", "A notification will be sent when content is released")</small>
                                </div>
                            }

                            <div class="d-flex gap-2 mt-3">
                                <a href="@Url.Action("Edit", "ContentDrip", new { id = rule.Id })" class="btn btn-light flex-grow-1">
                                    <i class="feather-edit me-2"></i>
                                    @Html.T("تعديل", "Edit")
                                </a>
                                <a href="@Url.Action("Details", "ContentDrip", new { id = rule.Id })" class="btn btn-light">
                                    <i class="feather-eye"></i>
                                </a>
                                <div class="dropdown">
                                    <button class="btn btn-light" data-bs-toggle="dropdown">
                                        <i class="feather-more-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <form asp-action="ToggleStatus" asp-controller="ContentDrip" asp-route-id="@rule.Id" method="post" class="d-inline w-100">
                                                @Html.AntiForgeryToken()
                                                @if (rule.IsActive)
                                                {
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="feather-pause me-3"></i>
                                                        @Html.T("تعطيل", "Disable")
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="feather-play me-3"></i>
                                                        @Html.T("تفعيل", "Enable")
                                                    </button>
                                                }
                                            </form>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@rule.Id')">
                                                <i class="feather-trash-2 me-3"></i>
                                                @Html.T("حذف", "Delete")
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-clock fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد قواعد محتوى تدريجي بعد", "No content drip rules yet")</h5>
                        <p class="text-muted mb-4">@Html.T("المحتوى التدريجي يسمح بإطلاق دروس الدورة بشكل تدريجي حسب جدول زمني", "Content drip allows releasing course lessons gradually according to a schedule")</p>
                        <a href="@Url.Action("Create", "ContentDrip")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إنشاء قاعدة جديدة", "Create new rule")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Hidden form for delete operations -->
<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" value="" />
</form>

@section Scripts {
    <script>
        function confirmDelete(ruleId) {
            if (confirm('@(Html.T("هل أنت متأكد من حذف هذه القاعدة؟", "Are you sure you want to delete this rule?"))')) {
                var form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "ContentDrip")';
                document.getElementById('deleteId').value = ruleId;
                form.submit();
            }
        }
    </script>
}
