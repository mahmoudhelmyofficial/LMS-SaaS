@model LMS.Areas.Admin.ViewModels.ContentDripStatisticsViewModel

@{
    ViewData["Title"] = Html.T("إحصائيات جدولة المحتوى", "Content drip statistics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المحتوى", "Content management"), null),
        (Html.T("جدولة المحتوى", "Content drip"), Url.Action("Index", "ContentDrip")),
        (Html.T("الإحصائيات", "Statistics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-primary text-primary avatar-xl mb-3 mx-auto">
                        <i class="feather-clock"></i>
                    </div>
                    <h3 class="fw-bold">@Model.TotalRules</h3>
                    <small class="text-muted">إجمالي القواعد</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-success text-success avatar-xl mb-3 mx-auto">
                        <i class="feather-check-circle"></i>
                    </div>
                    <h3 class="fw-bold">@Model.ActiveRules</h3>
                    <small class="text-muted">قواعد نشطة</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="avatar-text bg-soft-secondary text-secondary avatar-xl mb-3 mx-auto">
                        <i class="feather-x-circle"></i>
                    </div>
                    <h3 class="fw-bold">@Model.InactiveRules</h3>
                    <small class="text-muted">غير نشطة</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-pie-chart me-2"></i>توزيع أنواع الجدولة
                    </h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.RulesByType)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>
                                    @(item.Key switch
                                    {
                                        "ByDays" => "بعد عدد أيام",
                                        "ByDate" => "في تاريخ محدد",
                                        "ByWeekDay" => "في يوم من الأسبوع",
                                        _ => item.Key
                                    })
                                </span>
                                <span class="fw-bold">@item.Value</span>
                            </div>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar @(item.Key == "ByDays" ? "bg-primary" : item.Key == "ByDate" ? "bg-success" : "bg-warning")" 
                                     style="width: @(((double)item.Value / Model.TotalRules) * 100)%">
                                    @(((double)item.Value / Model.TotalRules) * 100).ToString("N0")%
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-info me-2"></i>معلومات إضافية
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="feather-info me-2"></i>
                        <strong>نصيحة:</strong> جدولة المحتوى تساعد في تحسين تجربة التعلم وإبقاء الطلاب متفاعلين.
                    </div>
                    
                    <div class="vstack gap-3">
                        <div class="border rounded p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">معدل التفعيل</span>
                                <span class="fw-bold text-success">
                                    @(Model.TotalRules > 0 ? ((double)Model.ActiveRules / Model.TotalRules * 100).ToString("N0") : 0)%
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

