@model LMS.Domain.Entities.Courses.Lesson

@{
    ViewData["Title"] = Html.T("تفاصيل الدرس", "Lesson details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدروس", "Lessons Management"), Url.Action("Index", "Lessons")),
        (Model.Title, null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تعديل", "Edit"), "feather-edit", Url.Action("Edit", "Lessons", new { id = Model.Id }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات الدرس", "Lesson Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <label class="text-muted fs-12 mb-1">@Html.T("عنوان الدرس", "Lesson Title")</label>
                            <h5 class="fw-bold">@Model.Title</h5>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("الوصف", "Description")</label>
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        }

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("نوع الدرس", "Lesson Type")</label>
                            <p class="fw-semibold mb-0">
                                @switch (Model.Type)
                                {
                                    case LMS.Domain.Enums.LessonType.Video:
                                        <span class="badge bg-soft-primary text-primary">
                                            <i class="feather-video me-1"></i>
                                            @Html.T("فيديو", "Video")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.LessonType.Article:
                                        <span class="badge bg-soft-success text-success">
                                            <i class="feather-file-text me-1"></i>
                                            @Html.T("مقال", "Article")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.LessonType.Quiz:
                                        <span class="badge bg-soft-warning text-warning">
                                            <i class="feather-help-circle me-1"></i>
                                            @Html.T("اختبار", "Quiz")
                                        </span>
                                        break;
                                    case LMS.Domain.Enums.LessonType.Assignment:
                                        <span class="badge bg-soft-info text-info">
                                            <i class="feather-edit me-1"></i>
                                            @Html.T("واجب", "Assignment")
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-soft-secondary text-secondary">@Model.Type</span>
                                        break;
                                }
                            </p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("المدة", "Duration")</label>
                            <p class="fw-semibold mb-0">@Model.DurationMinutes @Html.T("دقيقة", "min")</p>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("الترتيب", "Order")</label>
                            <p class="fw-semibold mb-0">#@Model.OrderIndex</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("رابط الفيديو", "Video URL")</label>
                                <p class="mb-0">
                                    <a href="@Model.VideoUrl" target="_blank" class="text-primary">
                                        <i class="feather-external-link me-1"></i>
                                        @Html.T("فتح الفيديو", "Open Video")
                                    </a>
                                </p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Content))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("المحتوى", "Content")</label>
                                <div class="border rounded p-3">
                                    @Html.Raw(Model.Content)
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ الإنشاء", "Created At")</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("آخر تحديث", "Last Updated")</label>
                            <p class="mb-0">@(Model.UpdatedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لم يتم التحديث", "Not updated"))</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحالة", "Status")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("منشور", "Published")</label>
                        <p class="mb-0">
                            @if (Model.IsPublished)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نعم", "Yes")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">@Html.T("لا", "No")</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("مجاني", "Free")</label>
                        <p class="mb-0">
                            @if (Model.IsFree)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نعم", "Yes")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-secondary text-secondary">@Html.T("لا", "No")</span>
                            }
                        </p>
                    </div>
                    <div>
                        <label class="text-muted fs-12">@Html.T("السماح بالتحميل", "Allow Download")</label>
                        <p class="mb-0">
                            @if (Model.AllowDownload)
                            {
                                <span class="badge bg-soft-info text-info">@Html.T("مسموح", "Allowed")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-secondary text-secondary">@Html.T("غير مسموح", "Not Allowed")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Lessons", new { id = Model.Id })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل الدرس", "Edit Lesson")
                        </a>
                        <button type="button" class="btn btn-light-brand" onclick="previewLesson()">
                            <i class="feather-eye me-2"></i>
                            @Html.T("معاينة", "Preview")
                        </button>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                            <i class="feather-trash-2 me-2"></i>
                            @Html.T("حذف الدرس", "Delete Lesson")
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function previewLesson() {
            window.open('@Url.Action("Preview", "Lessons", new { id = Model.Id })', '_blank');
        }

        function confirmDelete() {
            if (confirm('@(Html.T("هل أنت متأكد من حذف هذا الدرس؟", "Are you sure you want to delete this lesson?"))')) {
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}

