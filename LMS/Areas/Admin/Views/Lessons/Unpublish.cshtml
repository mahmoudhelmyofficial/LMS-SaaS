@model LMS.Domain.Entities.Courses.Lesson
@{
    ViewData["Title"] = Html.T("إلغاء نشر الدرس", "Unpublish lesson");
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
    var lessonTitle = Model?.Title ?? "درس";
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدروس", "Lessons"), Url.Action("Index", "Lessons")),
        (lessonTitle, Url.Action("Details", "Lessons", new { id = Model?.Id ?? 0 })),
        (Html.T("إلغاء النشر", "Unpublish"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .warning-header {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .warning-card {
            border: 2px solid #ffc107;
            border-radius: 10px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Warning Header -->
    <div class="warning-header">
        <div class="d-flex align-items-center gap-3">
            <div class="avatar-text avatar-xl bg-white bg-opacity-25 text-white">
                <i class="feather-alert-triangle fs-1"></i>
            </div>
            <div>
                <h3 class="text-white mb-2">إلغاء نشر الدرس</h3>
                <p class="text-white opacity-75 mb-0">هل أنت متأكد من إلغاء نشر هذا الدرس؟</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Lesson Info -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-file-text me-2"></i>
                        معلومات الدرس
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small">عنوان الدرس</label>
                            <h5 class="mb-0">@(Model?.Title ?? "بدون عنوان")</h5>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">الدورة</label>
                            <h5 class="mb-0">@(course?.Title ?? "دورة غير معروفة")</h5>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">الوحدة</label>
                            <p class="mb-0">@(Model?.Module?.Title ?? "وحدة غير معروفة")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">نوع الدرس</label>
                            <p class="mb-0">@(Model?.Type.ToString() ?? "")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">المدة</label>
                            <p class="mb-0">@(Model?.DurationMinutes ?? 0) دقيقة</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">الحالة الحالية</label>
                            @if (Model?.IsPublished == true)
                            {
                                <p class="mb-0"><span class="badge bg-success">منشور</span></p>
                            }
                            else
                            {
                                <p class="mb-0"><span class="badge bg-warning">غير منشور</span></p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warning Message -->
            <div class="card warning-card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-start gap-3">
                        <i class="feather-alert-triangle text-warning fs-3"></i>
                        <div>
                            <h5 class="text-warning mb-2">تنبيه مهم</h5>
                            <ul class="mb-0">
                                <li>إلغاء نشر الدرس سيجعله غير مرئي للطلاب</li>
                                <li>الطلاب الذين بدأوا الدرس سيفقدون الوصول إليه مؤقتاً</li>
                                <li>يمكنك إعادة نشر الدرس في أي وقت</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Action Card -->
            <div class="card stretch stretch-full">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title text-white mb-0">
                        <i class="feather-eye-off me-2"></i>
                        تأكيد إلغاء النشر
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">بالضغط على الزر أدناه، سيتم إلغاء نشر الدرس ولن يكون مرئياً للطلاب.</p>
                    
                    <form asp-action="UnpublishConfirm" asp-route-id="@(Model?.Id ?? 0)" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger w-100 mb-3">
                            <i class="feather-eye-off me-2"></i>
                            إلغاء النشر
                        </button>
                    </form>
                    
                    <a asp-action="Details" asp-route-id="@(Model?.Id ?? 0)" class="btn btn-light w-100">
                        <i class="feather-arrow-left me-2"></i>
                        إلغاء
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

