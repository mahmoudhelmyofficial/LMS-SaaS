@model IEnumerable<LMS.Domain.Entities.Courses.Lesson>

@{
    ViewData["Title"] = Html.T("إدارة الدروس", "Lessons Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("المحتوى التعليمي", "Learning Content"), null),
        (Html.T("الدروس", "Lessons"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var moduleId = ViewBag.ModuleId as string;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة درس", "Add Lesson"), "feather-plus", Url.Action("Create", "Lessons", new { moduleId }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .lesson-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .lesson-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-3px);
        }
        .lesson-type-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            font-size: 1.5rem;
        }
        .video-icon { background: var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%)); }
        .article-icon { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
        .quiz-icon { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
        .document-icon { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var lesson in Model.OrderBy(l => l.OrderIndex))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card lesson-card h-100" onclick="window.location='@Url.Action("Details", "Lessons", new { id = lesson.Id })'">
                        <div class="card-body">
                            <div class="d-flex align-items-start gap-3 mb-3">
                                <div class="lesson-type-icon @(lesson.Type == LMS.Domain.Enums.LessonType.Video ? "video-icon" : lesson.Type == LMS.Domain.Enums.LessonType.Article ? "article-icon" : lesson.Type == LMS.Domain.Enums.LessonType.Quiz ? "quiz-icon" : "document-icon") text-white">
                                    <i class="feather-@(lesson.Type == LMS.Domain.Enums.LessonType.Video ? "video" : lesson.Type == LMS.Domain.Enums.LessonType.Article ? "file-text" : lesson.Type == LMS.Domain.Enums.LessonType.Quiz ? "help-circle" : "file")"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <span class="badge bg-soft-primary text-primary">@Html.T("الدرس", "Lesson") @lesson.OrderIndex</span>
                                        @if (lesson.IsFree)
                                        {
                                            <span class="badge bg-soft-success text-success">@Html.T("مجاني", "Free")</span>
                                        }
                                        @if (lesson.IsPublished)
                                        {
                                            <span class="badge bg-soft-info text-info">@Html.T("منشور", "Published")</span>
                                        }
                                    </div>
                                    <h5 class="mb-2">@lesson.Title</h5>
                                    <p class="text-muted small mb-3">@lesson.Description</p>
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="d-flex gap-3">
                                    <small class="text-muted">
                                        <i class="feather-clock me-1"></i>
                                        @lesson.DurationMinutes @Html.T("دقيقة", "min")
                                    </small>
                                    @if (lesson.Type == LMS.Domain.Enums.LessonType.Video && !string.IsNullOrEmpty(lesson.VideoUrl))
                                    {
                                        <small class="text-muted">
                                            <i class="feather-play-circle me-1"></i>
                                            @Html.T("فيديو", "Video")
                                        </small>
                                    }
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Edit", "Lessons", new { id = lesson.Id })" class="btn btn-sm btn-light-brand flex-grow-1" onclick="event.stopPropagation()">
                                    <i class="feather-edit me-1"></i>
                                    @Html.T("تعديل", "Edit")
                                </a>
                                <div class="dropdown" onclick="event.stopPropagation()">
                                    <button class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                        <i class="feather-more-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Duplicate", "Lessons", new { id = lesson.Id })">
                                                <i class="feather-copy me-3"></i>
                                                @Html.T("نسخ الدرس", "Duplicate Lesson")
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Preview", "Lessons", new { id = lesson.Id })" target="_blank">
                                                <i class="feather-eye me-3"></i>
                                                @Html.T("معاينة", "Preview")
                                            </a>
                                        </li>
                                        @if (lesson.IsPublished)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Unpublish", "Lessons", new { id = lesson.Id })">
                                                    <i class="feather-eye-off me-3"></i>
                                                    @Html.T("إلغاء النشر", "Unpublish")
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <form asp-action="Publish" asp-route-id="@lesson.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="dropdown-item" onclick="event.stopPropagation()">
                                                        <i class="feather-check me-3"></i>
                                                        @Html.T("نشر الدرس", "Publish Lesson")
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@lesson.Id" method="post" class="d-inline"
                                                  onsubmit="event.stopPropagation(); return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا الدرس؟", "Are you sure you want to delete this lesson?").Replace("'", "\\'"))');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="feather-trash-2 me-3"></i>
                                                    @Html.T("حذف", "Delete")
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-file-text fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد دروس في هذه الوحدة بعد", "No lessons in this module yet")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء دروس لبناء محتوى الدورة", "Start by creating lessons to build the course content")</p>
                        <a href="@Url.Action("Create", "Lessons", new { moduleId })" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إضافة درس جديد", "Add New Lesson")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bulk Actions -->
    @if (Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h6 class="mb-0">@Html.T("إجراءات جماعية", "Bulk Actions")</h6>
                            <div class="btn-group">
                                <form asp-action="PublishAll" asp-route-moduleId="@moduleId" method="post" class="d-inline" 
                                      onsubmit="return confirm('@Html.Raw(Html.T("هل تريد نشر جميع الدروس؟", "Do you want to publish all lessons?").Replace("'", "\\'"))');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-light">
                                        <i class="feather-eye me-2"></i>
                                        @Html.T("نشر الكل", "Publish All")
                                    </button>
                                </form>
                                <form asp-action="UnpublishAll" asp-route-moduleId="@moduleId" method="post" class="d-inline"
                                      onsubmit="return confirm('@Html.Raw(Html.T("هل تريد إلغاء نشر جميع الدروس؟", "Do you want to unpublish all lessons?").Replace("'", "\\'"))');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-light">
                                        <i class="feather-eye-off me-2"></i>
                                        @Html.T("إلغاء نشر الكل", "Unpublish All")
                                    </button>
                                </form>
                                <a href="@Url.Action("Reorder", "Lessons", new { moduleId })" class="btn btn-light">
                                    <i class="feather-list me-2"></i>
                                    @Html.T("إعادة ترتيب", "Reorder")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

