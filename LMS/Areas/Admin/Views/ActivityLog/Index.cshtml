@model IEnumerable<LMS.Domain.Entities.Analytics.ActivityLog>

@{
    ViewData["Title"] = Html.T("سجل الأنشطة", "Activity log");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الأمان", "Security"), null),
        (Html.T("سجل الأنشطة", "Activity Log"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .activity-create { background-color: #d1fae5; color: #10b981; }
        .activity-update { background-color: #dbeafe; color: #3b82f6; }
        .activity-delete { background-color: #fee2e2; color: #ef4444; }
        .activity-login { background-color: #fef3c7; color: #f59e0b; }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-activity"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الأنشطة", "Total activities")</span>
                            <h3 class="fw-bolder d-block">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-plus-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("عمليات الإضافة", "Create operations")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.Action == "Create").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-edit"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("عمليات التعديل", "Update operations")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.Action == "Update").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-trash-2"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("عمليات الحذف", "Delete operations")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.Action == "Delete").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("جميع الأنشطة", "All activities")</span>
    </a>
    <div class="dropdown-divider"></div>
    <a href="javascript:void(0);" class="dropdown-item filter-create">
        <i class="feather-plus-circle me-3"></i>
        <span>@Html.T("إضافة", "Create")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-update">
        <i class="feather-edit me-3"></i>
        <span>@Html.T("تعديل", "Edit")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-delete">
        <i class="feather-trash-2 me-3"></i>
        <span>@Html.T("حذف", "Delete")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-login">
        <i class="feather-log-in me-3"></i>
        <span>@Html.T("تسجيل دخول", "Login")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="activityTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("النشاط", "Activity")</th>
                                    <th>@Html.T("المستخدم", "User")</th>
                                    <th>@Html.T("الوحدة", "Module")</th>
                                    <th>@Html.T("التفاصيل", "Details")</th>
                                    <th>@Html.T("عنوان IP", "IP address")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model.OrderByDescending(a => a.CreatedAt))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="activity-icon activity-@activity.Action.ToLower()">
                                                    @switch (activity.Action)
                                                    {
                                                        case "Create":
                                                            <i class="feather-plus"></i>
                                                            break;
                                                        case "Update":
                                                            <i class="feather-edit"></i>
                                                            break;
                                                        case "Delete":
                                                            <i class="feather-trash-2"></i>
                                                            break;
                                                        case "Login":
                                                            <i class="feather-log-in"></i>
                                                            break;
                                                        default:
                                                            <i class="feather-activity"></i>
                                                            break;
                                                    }
                                                </div>
                                                <span class="fw-semibold">
                                                    @switch (activity.Action)
                                                    {
                                                        case "Create": <span>@Html.T("إضافة", "Create")</span> break;
                                                        case "Update": <span>@Html.T("تعديل", "Edit")</span> break;
                                                        case "Delete": <span>@Html.T("حذف", "Delete")</span> break;
                                                        case "Login": <span>@Html.T("تسجيل دخول", "Login")</span> break;
                                                        default: <span>@activity.Action</span> break;
                                                    }
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (activity.User != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @activity.User.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <span>@activity.User.FirstName @activity.User.LastName</span>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-soft-secondary text-secondary">@activity.Module</span>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">
                                                @activity.Description
                                            </div>
                                        </td>
                                        <td>
                                            <span class="font-monospace text-muted small">@activity.IpAddress</span>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="small">@activity.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <span class="text-muted smaller">@activity.CreatedAt.ToString("hh:mm tt")</span>
                                            </div>
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "ActivityLogs", new { id = activity.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                <form asp-action="DeleteOldLogs" asp-controller="ActivityLogs" method="post" class="d-inline" onsubmit="return confirm('@Html.Raw(Html.T("هل تريد حذف السجلات القديمة (أكثر من 90 يوم)؟", "Do you want to delete old logs (older than 90 days)?").ToString().Replace("'", "\\'"))');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="avatar-text avatar-md btn-link text-danger" data-bs-toggle="tooltip" title="@Html.T("حذف القديم", "Delete old")">
                                                        <i class="feather-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#activityTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[5, "desc"]],
                "pageLength": 50
            });

            $('.filter-all').on('click', function() {
                table.column(0).search('').draw();
            });

            $('.filter-create').on('click', function() {
                table.column(0).search('إضافة').draw();
            });

            $('.filter-update').on('click', function() {
                table.column(0).search('تعديل').draw();
            });

            $('.filter-delete').on('click', function() {
                table.column(0).search('حذف').draw();
            });

            $('.filter-login').on('click', function() {
                table.column(0).search('تسجيل دخول').draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

