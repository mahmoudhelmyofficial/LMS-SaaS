@model List<LMS.Domain.Entities.Notifications.EmailLog>
@{
    ViewData["Title"] = Html.T("سجل البريد الإلكتروني", "Email log");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("البريد الإلكتروني", "Email"), Url.Action("Index")),
        (Html.T("السجلات", "Logs"), "")
    };
}

<div class="main-content">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="feather-list me-2"></i>سجل البريد المرسل</h5>
            <div class="d-flex gap-2">
                <a asp-action="Logs" asp-route-sent="true" class="btn btn-sm @(ViewBag.Sent == true ? "btn-success" : "btn-outline-success")">
                    <i class="feather-check me-1"></i>تم الإرسال
                </a>
                <a asp-action="Logs" asp-route-sent="false" class="btn btn-sm @(ViewBag.Sent == false ? "btn-danger" : "btn-outline-danger")">
                    <i class="feather-x me-1"></i>فشل الإرسال
                </a>
                <a asp-action="Logs" class="btn btn-sm @(ViewBag.Sent == null ? "btn-primary" : "btn-outline-primary")">
                    <i class="feather-list me-1"></i>الكل
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("المستلم", "Recipient")</th>
                            <th>@Html.T("الموضوع", "Subject")</th>
                            <th>@Html.T("التاريخ", "Date")</th>
                            <th>@Html.T("الحالة", "Status")</th>
                            <th>@Html.T("المحاولات", "Attempts")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.ToEmail</td>
                                    <td>@log.Subject</td>
                                    <td>@log.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        @if (log.IsSent)
                                        {
                                            <span class="badge bg-success">تم الإرسال</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">فشل</span>
                                        }
                                    </td>
                                    <td>@log.Attempts</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    <i class="feather-inbox fs-1 mb-3 d-block opacity-50"></i>
                                    لا توجد سجلات
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @if (ViewBag.TotalPages > 1)
        {
            <div class="card-footer bg-transparent d-flex justify-content-center">
                <nav>
                    <ul class="pagination mb-0">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                                <a class="page-link" asp-action="Logs" asp-route-page="@i" asp-route-sent="@ViewBag.Sent">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

