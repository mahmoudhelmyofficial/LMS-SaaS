@model IEnumerable<LMS.Domain.Entities.Analytics.CourseAnalytics>

@{
    ViewData["Title"] = Html.T("تحليلات الدورات", "Course analytics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التحليلات", "Analytics"), null),
        (Html.T("تحليلات الدورات", "Course analytics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                        <i class="feather-eye"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("إجمالي المشاهدات", "Total views")</span>
                        <h3 class="fw-bolder">@Model.Sum(a => a.TotalViews).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                        <i class="feather-users"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("إجمالي التسجيلات", "Total enrollments")</span>
                        <h3 class="fw-bolder">@Model.Sum(a => a.TotalEnrollments).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                        <i class="feather-check-circle"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("إجمالي الإكمال", "Total completions")</span>
                        <h3 class="fw-bolder">@Model.Sum(a => a.TotalCompletions).ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                        <i class="feather-star"></i>
                    </div>
                    <div>
                        <span class="text-truncate-1-line">@Html.T("متوسط التقييم", "Average rating")</span>
                        <h3 class="fw-bolder">@(Model.Any() ? Model.Average(a => a.AverageRating).ToString("F1") : "0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تحليلات الدورات حسب التاريخ", "Course analytics by date")</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="analyticsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("المشاهدات", "Views")</th>
                                    <th>@Html.T("التسجيلات", "Enrollments")</th>
                                    <th>@Html.T("الإكمال", "Completions")</th>
                                    <th>@Html.T("معدل الإكمال", "Completion rate")</th>
                                    <th>@Html.T("التقييم", "Rating")</th>
                                    <th>@Html.T("الإيرادات", "Revenue")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var analytic in Model.OrderByDescending(a => a.AnalyticsDate))
                                {
                                    var completionRate = analytic.TotalEnrollments > 0 
                                        ? (analytic.TotalCompletions * 100.0 / analytic.TotalEnrollments) 
                                        : 0;
                                    <tr>
                                        <td>
                                            <div class="fw-bold">@analytic.Course.Title</div>
                                        </td>
                                        <td>@analytic.AnalyticsDate.ToString("dd/MM/yyyy")</td>
                                        <td><span class="badge bg-soft-primary text-primary">@analytic.TotalViews.ToString("N0")</span></td>
                                        <td><span class="badge bg-soft-success text-success">@analytic.TotalEnrollments.ToString("N0")</span></td>
                                        <td><span class="badge bg-soft-warning text-warning">@analytic.TotalCompletions.ToString("N0")</span></td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="progress flex-grow-1" style="height: 20px; width: 100px;">
                                                    <div class="progress-bar @(completionRate >= 75 ? "bg-success" : completionRate >= 50 ? "bg-warning" : "bg-danger")" 
                                                         style="width: @completionRate%">
                                                    </div>
                                                </div>
                                                <span class="text-muted fs-12">@completionRate.ToString("F0")%</span>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= analytic.AverageRating)
                                                    {
                                                        <i class="feather-star" style="fill: currentColor;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="feather-star"></i>
                                                    }
                                                }
                                                (@analytic.AverageRating.ToString("F1"))
                                            </span>
                                        </td>
                                        <td class="fw-bold text-success">@analytic.TotalRevenue.ToEGP()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            $('#analyticsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[1, "desc"]],
                "pageLength": 25
            });
        });
    </script>
}

