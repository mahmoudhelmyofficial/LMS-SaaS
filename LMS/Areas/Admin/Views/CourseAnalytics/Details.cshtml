@model LMS.Domain.Entities.Analytics.CourseAnalytics

@{
    ViewData["Title"] = Html.T("تفاصيل تحليلات الدورة", "Course analytics details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("لوحة التحكم", "Dashboard"), Url.Action("Index", "Dashboard")),
        (Html.T("تحليلات الدورات", "Course analytics"), Url.Action("Index", "CourseAnalytics")),
        (Html.T("التفاصيل", "Details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <style>
        .metric-box {
            padding: 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }
        .metric-box:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                        <i class="feather-eye"></i>
                    </div>
                    <div>
                        <span class="text-muted d-block mb-1">إجمالي المشاهدات</span>
                        <h3 class="fw-bold mb-0">@Model.TotalViews.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                        <i class="feather-user-plus"></i>
                    </div>
                    <div>
                        <span class="text-muted d-block mb-1">تسجيلات جديدة</span>
                        <h3 class="fw-bold mb-0">@Model.NewEnrollments.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                        <i class="feather-trending-up"></i>
                    </div>
                    <div>
                        <span class="text-muted d-block mb-1">معدل الإكمال</span>
                        <h3 class="fw-bold mb-0">@Model.CompletionRate.ToString("F1")%</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                        <i class="feather-clock"></i>
                    </div>
                    <div>
                        <span class="text-muted d-block mb-1">متوسط وقت المشاهدة</span>
                        <h3 class="fw-bold mb-0">@Model.AverageWatchTime.ToString("N0") د</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <!-- Course Info -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h4 class="mb-2">@Model.Course?.Title</h4>
                            <p class="text-muted mb-2">
                                <i class="feather-calendar me-2"></i>
                                تاريخ التحليل: @Model.AnalyticsDate.ToString("dd/MM/yyyy")
                            </p>
                            <div class="d-flex gap-3">
                                <span class="badge bg-soft-primary text-primary">
                                    <i class="feather-book me-1"></i>
                                    @Model.Course?.Category?.Name
                                </span>
                                <span class="badge bg-soft-success text-success">
                                    <i class="feather-user me-1"></i>
                                    مدرس: @Model.Course?.Instructor?.FirstName @Model.Course?.Instructor?.LastName
                                </span>
                            </div>
                        </div>
                        <div class="col-lg-4 text-end">
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" 
                               class="btn btn-primary">
                                <i class="feather-eye me-2"></i>
                                عرض الدورة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Metrics -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="metric-box bg-soft-primary">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">المشاهدات</h6>
                    <i class="feather-eye text-primary"></i>
                </div>
                <h3 class="mb-0">@Model.TotalViews.ToString("N0")</h3>
                <small class="text-muted">إجمالي المشاهدات</small>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="metric-box bg-soft-success">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">التسجيلات</h6>
                    <i class="feather-user-plus text-success"></i>
                </div>
                <h3 class="mb-0">@Model.NewEnrollments.ToString("N0")</h3>
                <small class="text-muted">تسجيلات جديدة</small>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="metric-box bg-soft-warning">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">الإكمال</h6>
                    <i class="feather-check-circle text-warning"></i>
                </div>
                <h3 class="mb-0">@Model.CompletedCount</h3>
                <small class="text-muted">دورات مكتملة</small>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="metric-box bg-soft-danger">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h6 class="mb-0">التسرب</h6>
                    <i class="feather-user-x text-danger"></i>
                </div>
                <h3 class="mb-0">@Model.DropoutCount</h3>
                <small class="text-muted">متسربون</small>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">معدلات التفاعل</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>معدل الإكمال</span>
                                    <span class="fw-bold">@Model.CompletionRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-success" style="width: @Model.CompletionRate%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>معدل التفاعل</span>
                                    <span class="fw-bold">@Model.EngagementRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-primary" style="width: @Model.EngagementRate%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>معدل الحضور</span>
                                    <span class="fw-bold">@Model.AttendanceRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-info" style="width: @Model.AttendanceRate%"></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>معدل التسرب</span>
                                    <span class="fw-bold">@Model.DropoutRate.ToString("F1")%</span>
                                </div>
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-danger" style="width: @Model.DropoutRate%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">التقييمات</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <h1 class="display-4 fw-bold mb-0">@Model.AverageRating.ToString("F1")</h1>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Floor(Model.AverageRating))
                                {
                                    <i class="feather-star text-warning" style="font-size: 1.5rem;"></i>
                                }
                                else
                                {
                                    <i class="feather-star text-muted" style="font-size: 1.5rem;"></i>
                                }
                            }
                        </div>
                        <p class="text-muted mb-0">من @Model.TotalReviews تقييم</p>
                    </div>
                    <div class="p-3 bg-soft-success rounded">
                        <h6 class="mb-0">@Model.FiveStarCount تقييم 5 نجوم</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Statistics -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">إحصائيات مفصلة</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="border-start border-primary border-4 ps-3">
                                <h6 class="text-muted mb-1">متوسط وقت المشاهدة</h6>
                                <h4 class="mb-0">@Model.AverageWatchTime.ToString("N0") دقيقة</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-start border-success border-4 ps-3">
                                <h6 class="text-muted mb-1">إجمالي وقت المشاهدة</h6>
                                <h4 class="mb-0">@Model.TotalWatchTime.ToString("N0") دقيقة</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-start border-warning border-4 ps-3">
                                <h6 class="text-muted mb-1">متوسط التقدم</h6>
                                <h4 class="mb-0">@Model.AverageProgress.ToString("F1")%</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-start border-info border-4 ps-3">
                                <h6 class="text-muted mb-1">التفاعلات الإجمالية</h6>
                                <h4 class="mb-0">@Model.TotalInteractions.ToString("N0")</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-start border-danger border-4 ps-3">
                                <h6 class="text-muted mb-1">عدد التعليقات</h6>
                                <h4 class="mb-0">@Model.CommentsCount.ToString("N0")</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="border-start border-secondary border-4 ps-3">
                                <h6 class="text-muted mb-1">عدد المشاركات</h6>
                                <h4 class="mb-0">@Model.SharesCount.ToString("N0")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

