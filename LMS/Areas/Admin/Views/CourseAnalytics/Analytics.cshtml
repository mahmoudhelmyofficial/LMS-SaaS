@{
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
    ViewData["Title"] = Html.T("تحليلات", "Analytics") + $" - {course?.Title}";
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (course?.Title ?? Html.T("الدورة", "Course"), Url.Action("Details", "Courses", new { id = course?.Id })),
        (Html.T("التحليلات", "Analytics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(course?.ThumbnailUrl))
                    {
                        <img src="@course.ThumbnailUrl" alt="@course.Title" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                            <i class="feather-book"></i>
                        </div>
                    }
                    <div>
                        <h4 class="mb-1">@course?.Title</h4>
                        <p class="text-muted mb-0">@(course?.Instructor?.FirstName ?? "") @(course?.Instructor?.LastName ?? "")</p>
                    </div>
                </div>
                <a href="@Url.Action("Details", "Courses", new { id = course?.Id })" class="btn btn-light-brand">
                    <i class="feather-arrow-right me-2"></i>@Html.T("عودة للدورة", "Back to course")
                </a>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <input type="hidden" name="id" value="@course?.Id" />
                <div class="col-md-4">
                    <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                    <input type="date" name="from" class="form-control" value="@(((DateTime?)ViewBag.From)?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                    <input type="date" name="to" class="form-control" value="@(((DateTime?)ViewBag.To)?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="feather-filter me-2"></i>@Html.T("تصفية", "Filter")
                    </button>
                    <a href="@Url.Action("Analytics", new { id = course?.Id })" class="btn btn-light">@Html.T("إعادة تعيين", "Reset")</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats -->
    <div class="row">
        <div class="col-xxl-3 col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-muted">@Html.T("إجمالي التسجيلات", "Total enrollments")</span>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalEnrollments</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted">@Html.T("مكتمل", "Completed")</span>
                            <h3 class="fw-bold mb-0">@ViewBag.CompletedEnrollments</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-activity"></i>
                        </div>
                        <div>
                            <span class="text-muted">@Html.T("نشط", "Active")</span>
                            <h3 class="fw-bold mb-0">@ViewBag.ActiveEnrollments</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted">@Html.T("متوسط التقدم", "Average progress")</span>
                            <h3 class="fw-bold mb-0">@(((double?)ViewBag.AverageProgress ?? 0).ToString("F0"))%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue & Rating -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإيرادات", "Revenue")</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <span class="text-muted d-block mb-1">@Html.T("إجمالي الإيرادات", "Total revenue")</span>
                            <h3 class="fw-bold text-success">$@(((decimal?)ViewBag.TotalRevenue ?? 0).ToString("N2"))</h3>
                        </div>
                        <div class="col-6">
                            <span class="text-muted d-block mb-1">@Html.T("إيرادات الفترة", "Period revenue")</span>
                            <h3 class="fw-bold">$@(((decimal?)ViewBag.RevenueInPeriod ?? 0).ToString("N2"))</h3>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <span class="text-muted d-block mb-1">@Html.T("تسجيلات الفترة", "Period enrollments")</span>
                            <h4 class="fw-bold">@ViewBag.EnrollmentsInPeriod</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التقييمات", "Ratings")</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h1 class="display-4 fw-bold text-warning mb-0">@(((double?)ViewBag.AverageRating ?? 0).ToString("F1"))</h1>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= (int)Math.Round((double)(ViewBag.AverageRating ?? 0)))
                                {
                                    <i class="feather-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="feather-star text-muted"></i>
                                }
                            }
                        </div>
                        <span class="text-muted">@ViewBag.TotalReviews @Html.T("تقييم", "review(s)")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Students & Recent Reviews -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أفضل الطلاب", "Top students")</h5>
                </div>
                <div class="card-body p-0">
                    @{
                        var topStudents = ViewBag.TopStudents as IEnumerable<dynamic>;
                    }
                    @if (topStudents != null && topStudents.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var item in topStudents)
                            {
                                var student = item.Student as LMS.Domain.Entities.Users.ApplicationUser;
                                <div class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                            @(student?.FirstName?.Substring(0, 1) ?? "")@(student?.LastName?.Substring(0, 1) ?? "")
                                        </div>
                                        <div>
                                            <span class="fw-semibold d-block">@student?.FirstName @student?.LastName</span>
                                            <small class="text-muted">@item.Status</small>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="progress" style="width: 60px; height: 6px;">
                                            <div class="progress-bar bg-success" style="width: @item.Progress%"></div>
                                        </div>
                                        <span class="small">@item.Progress%</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">@Html.T("لا يوجد طلاب", "No students")</div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("آخر التقييمات", "Recent reviews")</h5>
                </div>
                <div class="card-body p-0">
                    @{
                        var recentReviews = ViewBag.RecentReviews as IEnumerable<LMS.Domain.Entities.Social.Review>;
                    }
                    @if (recentReviews != null && recentReviews.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var review in recentReviews)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="fw-semibold">@review.Student?.FirstName @review.Student?.LastName</span>
                                        <div>
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="feather-star @(i <= review.Rating ? "text-warning" : "text-muted")" style="font-size: 12px;"></i>
                                            }
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(review.Comment))
                                    {
                                        <p class="text-muted small mb-0">@review.Comment.Substring(0, Math.Min(100, review.Comment.Length))@(review.Comment.Length > 100 ? "..." : "")</p>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">@Html.T("لا توجد تقييمات", "No reviews")</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

