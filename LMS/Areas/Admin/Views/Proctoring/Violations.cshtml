@model List<LMS.Areas.Admin.Controllers.ProctoringViolationViewModel>
@{
    ViewData["Title"] = Html.T("سجل المخالفات", "Violations log");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("مراقبة الاختبارات", "Proctoring"), Url.Action("Index")),
        (Html.T("المخالفات", "Violations"), "")
    };
}

<div class="main-content">
    <!-- Date Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                    <input type="date" name="from" class="form-control" value="@(((DateTime)ViewBag.From).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                    <input type="date" name="to" class="form-control" value="@(((DateTime)ViewBag.To).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="feather-filter me-2"></i>تصفية
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="feather-alert-triangle me-2 text-danger"></i>سجل المخالفات</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("الطالب", "Student")</th>
                            <th>@Html.T("الاختبار", "Exam")</th>
                            <th>@Html.T("نوع المخالفة", "Violation type")</th>
                            <th>@Html.T("التاريخ", "Date")</th>
                            <th>@Html.T("الخطورة", "Severity")</th>
                            <th>@Html.T("الحالة", "Status")</th>
                            <th>@Html.T("الإجراءات", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            foreach (var violation in Model)
                            {
                                <tr>
                                    <td>@violation.StudentName</td>
                                    <td>@violation.QuizName</td>
                                    <td>@violation.ViolationType</td>
                                    <td>@violation.OccurredAt.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        @if (violation.Severity == "High")
                                        {
                                            <span class="badge bg-danger">عالية</span>
                                        }
                                        else if (violation.Severity == "Medium")
                                        {
                                            <span class="badge bg-warning">متوسطة</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">منخفضة</span>
                                        }
                                    </td>
                                    <td>
                                        @if (violation.IsReviewed)
                                        {
                                            <span class="badge bg-success">تمت المراجعة</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Html.T("قيد المراجعة", "Under review")</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" title="@Html.T("عرض التفاصيل", "View details")">
                                            <i class="feather-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="feather-check-circle fs-1 mb-3 d-block opacity-50 text-success"></i>
                                    @Html.T("لا توجد مخالفات مسجلة", "No violations recorded")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

