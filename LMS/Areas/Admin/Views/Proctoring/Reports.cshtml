@{
    ViewData["Title"] = Html.T("تقارير المراقبة", "Proctoring reports");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("مراقبة الاختبارات", "Proctoring"), Url.Action("Index")),
        (Html.T("التقارير", "Reports"), "")
    };
}

<div class="main-content">
    <!-- Date Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">@Html.T("من تاريخ", "From date")</label>
                    <input type="date" name="from" class="form-control" value="@(((DateTime)ViewBag.From).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <label class="form-label">@Html.T("إلى تاريخ", "To date")</label>
                    <input type="date" name="to" class="form-control" value="@(((DateTime)ViewBag.To).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="feather-filter me-2"></i>تصفية
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-lg bg-soft-primary rounded">
                            <i class="feather-file-text fs-4 text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.TotalAttempts</h3>
                            <span class="text-muted fs-12">إجمالي المحاولات</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-lg bg-soft-success rounded">
                            <i class="feather-check-circle fs-4 text-success"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.CompletedAttempts</h3>
                            <span class="text-muted fs-12">محاولات مكتملة</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="avatar avatar-lg bg-soft-info rounded">
                            <i class="feather-percent fs-4 text-info"></i>
                        </div>
                        <div class="ms-3">
                            <h3 class="mb-0">@ViewBag.AverageScore.ToString("N1")%</h3>
                            <span class="text-muted fs-12">متوسط الدرجات</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Exams Chart -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="feather-bar-chart-2 me-2"></i>محاولات الاختبارات</h5>
        </div>
        <div class="card-body">
            <canvas id="examsChart" height="300"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const examData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.ExamAttempts ?? new List<object>()));
        
        if (examData.length > 0) {
            const ctx = document.getElementById('examsChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: examData.map(d => new Date(d.Date).toLocaleDateString('ar-EG', { day: 'numeric', month: 'short' })),
                    datasets: [
                        {
                            label: 'إجمالي المحاولات',
                            data: examData.map(d => d.TotalAttempts),
                            backgroundColor: 'rgba(54, 162, 235, 0.6)'
                        },
                        {
                            label: 'المحاولات المكتملة',
                            data: examData.map(d => d.CompletedAttempts),
                            backgroundColor: 'rgba(75, 192, 192, 0.6)'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }
    </script>
}

