@model List<LMS.Domain.Entities.Assessments.QuizAttempt>
@{
    ViewData["Title"] = Html.T("الاختبارات النشطة", "Active exams");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("مراقبة الاختبارات", "Proctoring"), Url.Action("Index")),
        (Html.T("الاختبارات النشطة", "Active exams"), "")
    };
}

<div class="main-content">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="feather-radio me-2 text-success"></i>الاختبارات النشطة الآن</h5>
            <button class="btn btn-sm btn-outline-primary" onclick="location.reload()">
                <i class="feather-refresh-cw me-1"></i>تحديث
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("الطالب", "Student")</th>
                            <th>@Html.T("الاختبار", "Exam")</th>
                            <th>@Html.T("الدورة", "Course")</th>
                            <th>@Html.T("بدأ في", "Started at")</th>
                            <th>@Html.T("المدة", "Duration")</th>
                            <th>@Html.T("الإجراءات", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            foreach (var attempt in Model)
                            {
                                var elapsed = DateTime.UtcNow - attempt.StartedAt;
                                <tr>
                                    <td>
                                        @if (attempt.Student != null)
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="avatar avatar-sm bg-light-primary rounded-circle me-2">
                                                    <span class="fw-semibold text-primary">@attempt.Student.FirstName?.Substring(0, 1)</span>
                                                </div>
                                                @attempt.Student.FirstName @attempt.Student.LastName
                                            </div>
                                        }
                                    </td>
                                    <td>@attempt.Quiz?.Title</td>
                                    <td>@attempt.Quiz?.Lesson?.Module?.Course?.Title</td>
                                    <td>@attempt.StartedAt.ToString("HH:mm")</td>
                                    <td>
                                        <span class="badge bg-info">@elapsed.ToString(@"hh\:mm\:ss")</span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-danger" title="@Html.T("إنهاء الاختبار", "End exam")">
                                            <i class="feather-x-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted">
                                    <i class="feather-check-circle fs-1 mb-3 d-block opacity-50"></i>
                                    @Html.T("لا توجد اختبارات نشطة حالياً", "No active exams at the moment")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

