@using LMS.Services.Interfaces
@inject IPlatformSettingsService PlatformSettings
@inject IConfiguration Configuration
@inject IWebHostEnvironment Environment

@{
    ViewData["Title"] = Html.T("الإعدادات", "Settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;

    // Get system info dynamically
    var platformVersion = await PlatformSettings.GetPlatformVersionAsync();
    var lastUpdate = await PlatformSettings.GetSettingAsync("LastDeploymentDate", DateTime.Now.ToString("dd/MM/yyyy"));
    var connectionString = Configuration.GetConnectionString("DefaultConnection") ?? "";
    var dbProvider = connectionString.Contains("Server=") ? "SQL Server" : 
                     connectionString.Contains("Host=") ? "PostgreSQL" : 
                     connectionString.Contains("Data Source=") && connectionString.Contains(".db") ? "SQLite" : "Unknown";
    var environmentName = Environment.EnvironmentName;
}

@section Styles {
    <style>
        .settings-card {
            transition: all 0.3s ease;
            cursor: pointer;
            border: 2px solid #e5e7eb;
        }
        .settings-card:hover {
            border-color: #3454d1;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }
        .settings-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 15px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <!-- General Settings -->
        <div class="col-lg-12 mb-4">
            <h5 class="mb-3">@Html.T("الإعدادات العامة", "General Settings")</h5>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("General", "Settings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-primary text-primary">
                                <i class="feather-settings"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("الإعدادات العامة", "General Settings")</h6>
                            <p class="text-muted small mb-0">@Html.T("إعدادات المنصة الأساسية", "Core platform settings")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "PlatformSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-success text-success">
                                <i class="feather-globe"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("إعدادات المنصة", "Platform Settings")</h6>
                            <p class="text-muted small mb-0">@Html.T("خصائص ووظائف المنصة", "Platform features and options")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "SeoSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-info text-info">
                                <i class="feather-search"></i>
                            </div>
                            <h6 class="mb-2">SEO</h6>
                            <p class="text-muted small mb-0">@Html.T("تحسين محركات البحث", "Search engine optimization")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Communication Settings -->
        <div class="col-lg-12 mb-4">
            <h5 class="mb-3">@Html.T("إعدادات الاتصالات", "Communication Settings")</h5>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "EmailSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-primary text-primary">
                                <i class="feather-mail"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("البريد الإلكتروني", "Email")</h6>
                            <p class="text-muted small mb-0">@Html.T("SMTP وقوالب البريد", "SMTP and email templates")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "SmsSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-success text-success">
                                <i class="feather-message-square"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("الرسائل النصية", "SMS")</h6>
                            <p class="text-muted small mb-0">@Html.T("SMS و إعدادات الإرسال", "SMS and delivery settings")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "PushNotificationSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-warning text-warning">
                                <i class="feather-bell"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("الإشعارات الفورية", "Push Notifications")</h6>
                            <p class="text-muted small mb-0">Push Notifications</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "NotificationPreferences")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-info text-info">
                                <i class="feather-sliders"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("تفضيلات الإشعارات", "Notification Preferences")</h6>
                            <p class="text-muted small mb-0">@Html.T("إدارة أنواع الإشعارات", "Manage notification types")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment & Financial -->
        <div class="col-lg-12 mb-4">
            <h5 class="mb-3">@Html.T("الإعدادات المالية", "Financial Settings")</h5>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "PaymentSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-primary text-primary">
                                <i class="feather-credit-card"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("إعدادات الدفع", "Payment Settings")</h6>
                            <p class="text-muted small mb-0">@Html.T("العملات وبوابات الدفع", "Currencies and payment gateways")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "TaxSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-success text-success">
                                <i class="feather-percent"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("الضرائب", "Taxes")</h6>
                            <p class="text-muted small mb-0">@Html.T("إعدادات الضرائب والرسوم", "Tax and fee settings")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "CommissionSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-info text-info">
                                <i class="feather-dollar-sign"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("العمولات", "Commissions")</h6>
                            <p class="text-muted small mb-0">@Html.T("إعدادات العمولات ونسب المدرسين", "Commission and instructor rate settings")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Security & Advanced -->
        <div class="col-lg-12 mb-4">
            <h5 class="mb-3">@Html.T("الأمان والمتقدم", "Security & Advanced")</h5>
            <div class="row">
                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "SecuritySettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-danger text-danger">
                                <i class="feather-shield"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("الأمان", "Security")</h6>
                            <p class="text-muted small mb-0">@Html.T("كلمات المرور والحماية", "Passwords and protection")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "TwoFactorSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-warning text-warning">
                                <i class="feather-lock"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("المصادقة الثنائية", "Two-Factor Authentication")</h6>
                            <p class="text-muted small mb-0">@Html.T("إدارة مستخدمي 2FA", "Manage 2FA users")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Index", "VideoSettings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-info text-info">
                                <i class="feather-video"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("إعدادات الفيديو", "Video Settings")</h6>
                            <p class="text-muted small mb-0">@Html.T("جودة وتشفير الفيديو", "Video quality and encoding")</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 mb-3">
                    <div class="settings-card card" onclick="window.location='@Url.Action("Integrations", "Settings")'">
                        <div class="card-body text-center">
                            <div class="settings-icon bg-soft-primary text-primary">
                                <i class="feather-link"></i>
                            </div>
                            <h6 class="mb-2">@Html.T("التكاملات", "Integrations")</h6>
                            <p class="text-muted small mb-0">@Html.T("APIs والخدمات الخارجية", "APIs and external services")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Info -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات النظام", "System Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("إصدار المنصة", "Platform version")</label>
                            <p class="fw-semibold mb-0">v@platformVersion</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("آخر تحديث", "Last update")</label>
                            <p class="fw-semibold mb-0">@lastUpdate</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("قاعدة البيانات", "Database")</label>
                            <p class="fw-semibold mb-0">@dbProvider</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("بيئة التشغيل", "Environment")</label>
                            <p class="fw-semibold mb-0">
                                @switch (environmentName)
                                {
                                    case "Development":
                                        <span class="badge bg-warning">@Html.T("التطوير", "Development")</span>
                                        break;
                                    case "Staging":
                                        <span class="badge bg-info">@Html.T("الاختبار", "Staging")</span>
                                        break;
                                    case "Production":
                                        <span class="badge bg-success">@Html.T("الإنتاج", "Production")</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@environmentName</span>
                                        break;
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("إصدار .NET", ".NET Version")</label>
                            <p class="fw-semibold mb-0">@System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">@Html.T("نظام التشغيل", "Operating system")</label>
                            <p class="fw-semibold mb-0">@System.Runtime.InteropServices.RuntimeInformation.OSDescription</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
