@model List<LMS.Domain.Entities.Settings.PlatformSetting>
@{
    ViewData["Title"] = Html.T("الإعدادات العامة", "General Settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("الإعدادات العامة", "General Settings"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    
    // Helper to get setting value
    string GetSetting(string key, string defaultValue = "") =>
        Model?.FirstOrDefault(s => s.Key == key)?.Value ?? defaultValue;

    var platformName = ViewBag.PlatformName as string ?? GetSetting("PlatformName", "WEBUILDER");
    var platformLogo = ViewBag.PlatformLogo as string ?? "/assets/images/logo.png";
    var platformLogoDark = ViewBag.PlatformLogoDark as string ?? "/assets/images/logo-light.png";
    var platformFavicon = ViewBag.PlatformFavicon as string ?? "/favicon.ico";
    if (!platformLogo.StartsWith("/")) { platformLogo = "/" + platformLogo.TrimStart('/'); }
    if (!platformLogoDark.StartsWith("/")) { platformLogoDark = "/" + platformLogoDark.TrimStart('/'); }
    if (!platformFavicon.StartsWith("/")) { platformFavicon = "/" + platformFavicon.TrimStart('/'); }
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form method="post" asp-action="General" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row">
            <!-- Form -->
            <div class="col-lg-8">
                <!-- Site Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات الموقع", "Site Information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="form-label">@Html.T("اسم الموقع", "Site Name") <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="settings[SiteName]" value="@GetSetting("SiteName", "منصة LMS")" required />
                            </div>
                            <div class="col-12">
                                <label class="form-label">@Html.T("الشعار", "Tagline")</label>
                                <textarea class="form-control" name="settings[SiteTagline]" rows="2">@GetSetting("SiteTagline", "منصة التعلم الإلكتروني المتكاملة")</textarea>
                            </div>
                            <div class="col-12">
                                <label class="form-label">@Html.T("الوصف", "Description")</label>
                                <textarea class="form-control" name="settings[SiteDescription]" rows="4">@GetSetting("SiteDescription", "منصة تعليمية متقدمة توفر دورات تدريبية متنوعة")</textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("البريد الإلكتروني", "Email")</label>
                                <input type="email" class="form-control" name="settings[AdminEmail]" value="@GetSetting("AdminEmail", "admin@lms.com")" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("رقم الهاتف", "Phone Number")</label>
                                <input type="tel" class="form-control" name="settings[SupportPhone]" value="@GetSetting("SupportPhone", "+966 5X XXX XXXX")" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Regional Settings -->
                @{
                    var defaultLanguage = GetSetting("DefaultLanguage", "ar");
                    var timezone = GetSetting("Timezone", "Asia/Riyadh");
                    var dateFormat = GetSetting("DateFormat", "dd/MM/yyyy");
                    var currency = GetSetting("Currency", "EGP");
                }
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الإعدادات الإقليمية", "Regional Settings")</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("اللغة الافتراضية", "Default Language")</label>
                                <select class="form-select" name="settings[DefaultLanguage]">
                                    <option value="ar" selected="@(defaultLanguage == "ar")">@Html.T("العربية", "Arabic")</option>
                                    <option value="en" selected="@(defaultLanguage == "en")">@Html.T("الإنجليزية", "English")</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("المنطقة الزمنية", "Timezone")</label>
                                <select class="form-select" name="settings[Timezone]">
                                    <option value="Asia/Riyadh" selected="@(timezone == "Asia/Riyadh")">@Html.T("الرياض (GMT+3)", "Riyadh (GMT+3)")</option>
                                    <option value="Asia/Dubai" selected="@(timezone == "Asia/Dubai")">@Html.T("دبي (GMT+4)", "Dubai (GMT+4)")</option>
                                    <option value="Africa/Cairo" selected="@(timezone == "Africa/Cairo")">@Html.T("القاهرة (GMT+2)", "Cairo (GMT+2)")</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("التاريخ", "Date")</label>
                                <select class="form-select" name="settings[DateFormat]">
                                    <option value="dd/MM/yyyy" selected="@(dateFormat == "dd/MM/yyyy")">DD/MM/YYYY</option>
                                    <option value="MM/dd/yyyy" selected="@(dateFormat == "MM/dd/yyyy")">MM/DD/YYYY</option>
                                    <option value="yyyy-MM-dd" selected="@(dateFormat == "yyyy-MM-dd")">YYYY-MM-DD</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("العملة", "Currency")</label>
                                <select class="form-select" name="settings[Currency]">
                                    <option value="EGP" selected="@(currency == "EGP")">@Html.T("جنيه مصري (EGP)", "Egyptian Pound (EGP)")</option>
                                    <option value="SAR" selected="@(currency == "SAR")">@Html.T("ريال سعودي (SAR)", "Saudi Riyal (SAR)")</option>
                                    <option value="USD" selected="@(currency == "USD")">@Html.T("دولار أمريكي (USD)", "US Dollar (USD)")</option>
                                    <option value="AED" selected="@(currency == "AED")">@Html.T("درهم إماراتي (AED)", "UAE Dirham (AED)")</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Features -->
                @{
                    var enableRegistration = GetSetting("EnableRegistration", "true") == "true";
                    var requireEmailVerification = GetSetting("RequireEmailVerification", "true") == "true";
                    var enableReviews = GetSetting("EnableReviews", "true") == "true";
                    var enableDiscussions = GetSetting("EnableDiscussions", "true") == "true";
                    var maintenanceMode = GetSetting("MaintenanceMode", "false") == "true";
                }
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الميزات", "Features")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="settings[EnableRegistration]" value="false" />
                            <input class="form-check-input" type="checkbox" id="enableRegistration" name="settings[EnableRegistration]" value="true" @(enableRegistration ? "checked" : "")>
                            <label class="form-check-label" for="enableRegistration">
                                @Html.T("السماح بالتسجيل الجديد", "Allow new registration")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="settings[RequireEmailVerification]" value="false" />
                            <input class="form-check-input" type="checkbox" id="requireEmailVerification" name="settings[RequireEmailVerification]" value="true" @(requireEmailVerification ? "checked" : "")>
                            <label class="form-check-label" for="requireEmailVerification">
                                @Html.T("تفعيل البريد الإلكتروني إلزامي", "Require email verification")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="settings[EnableReviews]" value="false" />
                            <input class="form-check-input" type="checkbox" id="enableReviews" name="settings[EnableReviews]" value="true" @(enableReviews ? "checked" : "")>
                            <label class="form-check-label" for="enableReviews">
                                @Html.T("السماح بالتقييمات", "Allow reviews")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="settings[EnableDiscussions]" value="false" />
                            <input class="form-check-input" type="checkbox" id="enableDiscussions" name="settings[EnableDiscussions]" value="true" @(enableDiscussions ? "checked" : "")>
                            <label class="form-check-label" for="enableDiscussions">
                                @Html.T("السماح بالمناقشات", "Allow discussions")
                            </label>
                        </div>
                        <div class="form-check form-switch">
                            <input type="hidden" name="settings[MaintenanceMode]" value="false" />
                            <input class="form-check-input" type="checkbox" id="maintenanceMode" name="settings[MaintenanceMode]" value="true" @(maintenanceMode ? "checked" : "")>
                            <label class="form-check-label" for="maintenanceMode">
                                @Html.T("وضع الصيانة", "Maintenance mode")
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Branding (العلامة التجارية) -->
                <div class="card stretch stretch-full mb-4 mt-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("العلامة التجارية", "Branding")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("اسم المنصة", "Platform name")</label>
                            <input type="text" class="form-control" name="settings[PlatformName]" value="@platformName" placeholder="@Html.T("اسم المنصة يظهر في كل الواجهات", "Platform name shown across the site")" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Html.T("شعار المنصة (فاتح)", "Platform logo (light)")</label>
                                <div class="border rounded p-3 text-center mb-2">
                                    <img src="@platformLogo" alt="Logo" style="max-height: 60px;" id="logoPreview" onerror="this.src='@Url.Content("~/assets/images/logo.png")'">
                                </div>
                                <input type="file" class="form-control" name="Logo" accept="image/*" onchange="previewLogo(event)">
                                <small class="text-muted">@Html.T("PNG أو SVG، الحجم الموصى به: 200x60px", "PNG or SVG, recommended size: 200x60px")</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Html.T("شعار المنصة (داكن)", "Platform logo (dark)")</label>
                                <div class="border rounded p-3 text-center mb-2 bg-dark">
                                    <img src="@platformLogoDark" alt="Logo" style="max-height: 60px;" id="logoLightPreview" onerror="this.src='@Url.Content("~/assets/images/logo-light.png")'">
                                </div>
                                <input type="file" class="form-control" name="LogoDark" accept="image/*" onchange="previewLogoDark(event)">
                                <small class="text-muted">@Html.T("للخلفيات الداكنة", "For dark backgrounds")</small>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("أيقونة المنصة (Favicon)", "Platform favicon")</label>
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <img src="@platformFavicon" alt="Favicon" style="width: 32px; height: 32px;" id="faviconPreview" onerror="this.src='@Url.Content("~/favicon.ico")'">
                                <span class="text-muted">32x32px</span>
                            </div>
                            <input type="file" class="form-control" name="Favicon" accept="image/x-icon,image/png">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Actions -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ الإعدادات", "Save Settings")
                            </button>
                            <button type="button" class="btn btn-light" onclick="location.reload()">
                                <i class="feather-refresh-cw me-2"></i>
                                @Html.T("إعادة تحميل", "Reload")
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Settings Navigation -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إعدادات أخرى", "Other Settings")</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <a asp-area="Admin" asp-controller="Settings" asp-action="General" class="list-group-item list-group-item-action active">
                                <i class="feather-settings me-3"></i>
                                @Html.T("الإعدادات العامة", "General Settings")
                            </a>
                            <a asp-area="Admin" asp-controller="EmailSettings" asp-action="Index" class="list-group-item list-group-item-action">
                                <i class="feather-mail me-3"></i>
                                @Html.T("إعدادات البريد", "Email Settings")
                            </a>
                            <a asp-area="Admin" asp-controller="PaymentGatewaySettings" asp-action="Index" class="list-group-item list-group-item-action">
                                <i class="feather-credit-card me-3"></i>
                                @Html.T("بوابات الدفع", "Payment Gateways")
                            </a>
                            <a asp-area="Admin" asp-controller="SmsSettings" asp-action="Index" class="list-group-item list-group-item-action">
                                <i class="feather-message-square me-3"></i>
                                @Html.T("إعدادات SMS", "SMS Settings")
                            </a>
                            <a asp-area="Admin" asp-controller="VideoSettings" asp-action="Index" class="list-group-item list-group-item-action">
                                <i class="feather-video me-3"></i>
                                @Html.T("إعدادات الفيديو", "Video Settings")
                            </a>
                            <a asp-area="Admin" asp-controller="SeoSettings" asp-action="Index" class="list-group-item list-group-item-action">
                                <i class="feather-search me-3"></i>
                                @Html.T("تحسين محركات البحث", "SEO")
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewLogo(event) {
            var reader = new FileReader();
            reader.onload = function () {
                document.getElementById('logoPreview').setAttribute('src', reader.result);
            };
            if (event.target.files && event.target.files[0]) reader.readAsDataURL(event.target.files[0]);
        }
        function previewLogoDark(event) {
            var reader = new FileReader();
            reader.onload = function () {
                document.getElementById('logoLightPreview').setAttribute('src', reader.result);
            };
            if (event.target.files && event.target.files[0]) reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
