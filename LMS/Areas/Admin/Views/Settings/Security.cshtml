@{
    ViewData["Title"] = Html.T("إعدادات الأمان", "Security Settings");
    ViewData["Breadcrumbs"] = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("الأمان", "Security"), null)
    };
}
@await Html.PartialAsync("_PageHeader")
<div class="main-content">
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="feather-shield text-primary" style="font-size: 3rem;"></i>
            <h5 class="mt-3">@Html.T("إعدادات الأمان", "Security Settings")</h5>
            <p class="text-muted mb-4">@Html.T("تم نقل إعدادات الأمان إلى صفحة مخصصة.", "Security settings have been moved to a dedicated page.")</p>
            <a asp-area="Admin" asp-controller="SecuritySettings" asp-action="Index" class="btn btn-primary">
                <i class="feather-settings me-2"></i>@Html.T("فتح إعدادات الأمان", "Open Security Settings")
            </a>
        </div>
    </div>
</div>
