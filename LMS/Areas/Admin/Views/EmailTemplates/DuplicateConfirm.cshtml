@model LMS.Domain.Entities.Notifications.EmailTemplate
@{
    ViewData["Title"] = Html.T("نسخ قالب البريد", "Duplicate email template");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("قوالب البريد الإلكتروني", "Email templates"), Url.Action("Index", "EmailTemplates")),
        (Html.T("نسخ القالب", "Duplicate template"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}
@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-body text-center py-5">
                    <i class="feather-copy text-primary mb-3" style="font-size: 3rem;"></i>
                    <h4 class="fw-bold mb-2">@Html.T("نسخ قالب البريد", "Duplicate email template")</h4>
                    <p class="text-muted mb-4">
                        @Html.T("هل تريد نسخ القالب", "Do you want to duplicate the template") <strong>@(Model?.Name ?? Html.T("هذا القالب", "this template"))</strong>? @Html.T("سيتم إنشاء قالب جديد بنفس المحتوى.", "A new template will be created with the same content.")
                    </p>
                    <form asp-action="DuplicateConfirm" asp-route-id="@Model?.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="feather-check me-2"></i>
                            نعم، نسخ القالب
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="feather-x me-2"></i>
                        إلغاء
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
