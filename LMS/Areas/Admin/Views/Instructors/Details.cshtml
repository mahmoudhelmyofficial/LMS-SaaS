@model LMS.Domain.Entities.Users.InstructorProfile

@{
    ViewData["Title"] = Html.T("تفاصيل المدرس", "Instructor Details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المدرسين", "Instructor Management"), Url.Action("Index", "Instructors")),
        ($"{Model.User?.FirstName} {Model.User?.LastName}", null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تعديل", "Edit"), "feather-edit", Url.Action("Edit", "Instructors", new { id = Model.UserId }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
    
    var courses = Model.User?.CoursesCreated ?? new List<LMS.Domain.Entities.Courses.Course>();
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("معلومات المدرس", "Instructor Information")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="d-flex align-items-center gap-3 mb-4">
                                <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                    @(Model.User?.FirstName?.Substring(0, 1) ?? "")@(Model.User?.LastName?.Substring(0, 1) ?? "")
                                </div>
                                <div>
                                    <h4 class="mb-1">@Model.User?.FirstName @Model.User?.LastName</h4>
                                    <p class="text-muted mb-0">@Model.User?.Email</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("رقم الهاتف", "Phone Number")</label>
                            <p class="fw-semibold mb-0">@(Model.User?.PhoneNumber ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("التخصص", "Expertise")</label>
                            <p class="fw-semibold mb-0">@(Model.Expertise ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Bio))
                        {
                            <div class="col-12">
                                <label class="text-muted fs-12 mb-1">@Html.T("السيرة الذاتية", "Bio")</label>
                                <p class="mb-0">@Model.Bio</p>
                            </div>
                        }

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("عدد الدورات", "Courses Count")</label>
                            <h5 class="fw-bold mb-0">@courses.Count</h5>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("إجمالي الطلاب", "Total Students")</label>
                            <h5 class="fw-bold mb-0">@(ViewBag.TotalStudents ?? 0)</h5>
                        </div>

                        <div class="col-md-4">
                            <label class="text-muted fs-12 mb-1">@Html.T("متوسط التقييم", "Average Rating")</label>
                            <h5 class="fw-bold mb-0">@Model.AverageRating.ToString("F1") ⭐</h5>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("تاريخ الانضمام", "Join Date")</label>
                            <p class="mb-0">@(Model.User?.CreatedAt.ToString("dd/MM/yyyy") ?? Html.T("غير محدد", "Not set"))</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted fs-12 mb-1">@Html.T("آخر نشاط", "Last Activity")</label>
                            <p class="mb-0">@(Model.User?.LastLoginAt?.ToString("dd/MM/yyyy hh:mm tt") ?? Html.T("لا يوجد", "None"))</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (courses.Any())
            {
                <div class="card stretch stretch-full mt-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("الدورات", "Courses") (@courses.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var course in courses.OrderByDescending(c => c.CreatedAt).Take(10))
                            {
                                <div class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                            <i class="feather-book"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@course.Title</h6>
                                            <small class="text-muted">@course.TotalStudents @Html.T("طالب", "students") • @course.AverageRating.ToString("F1") ⭐</small>
                                        </div>
                                    </div>
                                    <span class="badge bg-soft-@(course.Status == LMS.Domain.Enums.CourseStatus.Published ? "success" : "warning") text-@(course.Status == LMS.Domain.Enums.CourseStatus.Published ? "success" : "warning")">
                                        @course.Status
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الحالة", "Status")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("حالة الحساب", "Account Status")</label>
                        <p class="mb-0">
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("موافق عليه", "Approved")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">@Html.T("قيد المراجعة", "Under Review")</span>
                            }
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("نشط", "Active")</label>
                        <p class="mb-0">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("نعم", "Yes")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-danger text-danger">@Html.T("لا", "No")</span>
                            }
                        </p>
                    </div>
                    <div>
                        <label class="text-muted fs-12">@Html.T("البريد موثق", "Email Verified")</label>
                        <p class="mb-0">
                            @if (Model.User?.EmailConfirmed == true)
                            {
                                <span class="badge bg-soft-success text-success">@Html.T("موثق", "Verified")</span>
                            }
                            else
                            {
                                <span class="badge bg-soft-warning text-warning">@Html.T("غير موثق", "Unverified")</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الإحصائيات المالية", "Financial Statistics")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("إجمالي الأرباح", "Total Earnings")</label>
                        <h5 class="fw-bold text-success mb-0">@Model.TotalEarnings.ToString("N2") @Html.T("ج.م", "EGP")</h5>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted fs-12">@Html.T("الأرباح هذا الشهر", "Earnings This Month")</label>
                        <p class="fw-semibold mb-0">@((ViewBag.MonthlyEarnings ?? 0m).ToString("N2")) @Html.T("ج.م", "EGP")</p>
                    </div>
                    <div>
                        <label class="text-muted fs-12">@Html.T("نسبة العمولة", "Commission Rate")</label>
                        <p class="fw-semibold mb-0">@Model.CommissionRate%</p>
                    </div>
                </div>
            </div>

            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick Actions")</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Instructors", new { id = Model.UserId })" class="btn btn-primary">
                            <i class="feather-edit me-2"></i>
                            @Html.T("تعديل المعلومات", "Edit Information")
                        </a>
                        <a href="@Url.Action("Courses", "Instructors", new { id = Model.UserId })" class="btn btn-light-brand">
                            <i class="feather-book me-2"></i>
                            @Html.T("عرض الدورات", "View Courses")
                        </a>
                        <a href="@Url.Action("Earnings", "Instructors", new { id = Model.UserId })" class="btn btn-light-brand">
                            <i class="feather-dollar-sign me-2"></i>
                            @Html.T("عرض الأرباح", "View Earnings")
                        </a>
                        <a href="@Url.Action("Students", "Instructors", new { id = Model.UserId })" class="btn btn-light-brand">
                            <i class="feather-users me-2"></i>
                            @Html.T("عرض الطلاب", "View Students")
                        </a>
                        <a href="@Url.Action("Reviews", "Instructors", new { id = Model.UserId })" class="btn btn-light-brand">
                            <i class="feather-star me-2"></i>
                            @Html.T("عرض التقييمات", "View Reviews")
                        </a>
                        @if (Model.IsSuspended)
                        {
                            <form asp-action="Reactivate" asp-route-id="@Model.Id" method="post" class="d-grid">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success" onclick="return confirm('@(Html.T("هل تريد إعادة تفعيل هذا المدرس؟", "Do you want to reactivate this instructor?"))');">
                                    <i class="feather-check-circle me-2"></i>
                                    @Html.T("إعادة التفعيل", "Reactivate")
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#suspendModal">
                                <i class="feather-x-circle me-2"></i>
                                @Html.T("تعليق الحساب", "Suspend Account")
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Suspend Modal -->
<div class="modal fade" id="suspendModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Suspend" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">@Html.T("تعليق حساب المدرس", "Suspend Instructor Account")</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">@Html.T("سبب التعليق", "Suspension Reason") <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" required placeholder="@(Html.T("أدخل سبب تعليق الحساب", "Enter suspension reason"))"></textarea>
                    </div>
                    <div class="alert alert-warning">
                        <i class="feather-alert-triangle me-2"></i>
                        @Html.T("سيتم تعليق جميع دورات هذا المدرس أيضاً.", "All courses by this instructor will also be suspended.")
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-danger">@Html.T("تأكيد التعليق", "Confirm Suspend")</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

