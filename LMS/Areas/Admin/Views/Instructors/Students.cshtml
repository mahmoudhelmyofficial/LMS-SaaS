@{
    var instructor = ViewBag.Instructor as LMS.Domain.Entities.Users.InstructorProfile;
    var students = ViewBag.Students as IEnumerable<dynamic> ?? Model as IEnumerable<dynamic>;
    ViewData["Title"] = Html.T("طلاب المدرس", "Instructor students") + " - " + $"{instructor?.User?.FirstName} {instructor?.User?.LastName}";
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المدرسين", "Instructors"), Url.Action("Index", "Instructors")),
        ($"{instructor?.User?.FirstName} {instructor?.User?.LastName}", Url.Action("Details", "Instructors", new { id = instructor?.UserId })),
        (Html.T("الطلاب", "Students"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                        @(instructor?.User?.FirstName?.Substring(0, 1) ?? "")@(instructor?.User?.LastName?.Substring(0, 1) ?? "")
                    </div>
                    <div>
                        <h4 class="mb-1">@instructor?.User?.FirstName @instructor?.User?.LastName</h4>
                        <p class="text-muted mb-0">إجمالي الطلاب: @ViewBag.TotalStudents</p>
                    </div>
                </div>
                <a href="@Url.Action("Details", "Instructors", new { id = instructor?.UserId })" class="btn btn-light-brand">
                    <i class="feather-arrow-right me-2"></i>
                    عودة للتفاصيل
                </a>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-muted">إجمالي الطلاب</span>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalStudents</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title">@Html.T("قائمة الطلاب", "Students list")</h5>
        </div>
        <div class="card-body p-0">
            @if (students != null && students.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>@Html.T("الطالب", "Student")</th>
                                <th>@Html.T("عدد التسجيلات", "Enrollments")</th>
                                <th>@Html.T("المكتمل", "Completed")</th>
                                <th>@Html.T("متوسط التقدم", "Avg. progress")</th>
                                <th class="text-end">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in students)
                            {
                                var student = item.Student as LMS.Domain.Entities.Users.ApplicationUser;
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                @(student?.FirstName?.Substring(0, 1) ?? "")@(student?.LastName?.Substring(0, 1) ?? "")
                                            </div>
                                            <div>
                                                <span class="fw-semibold d-block">@student?.FirstName @student?.LastName</span>
                                                <small class="text-muted">@student?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-soft-primary text-primary">@item.EnrollmentsCount دورة</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-soft-success text-success">@item.CompletedCount مكتمل</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="progress" style="width: 100px; height: 6px;">
                                                <div class="progress-bar bg-primary" style="width: @item.TotalProgress%"></div>
                                            </div>
                                            <span class="small">@(((double)item.TotalProgress).ToString("F0"))%</span>
                                        </div>
                                    </td>
                                    <td class="text-end">
                                        <a href="@Url.Action("Details", "Students", new { id = student?.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض التفاصيل", "View details")">
                                            <i class="feather-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-3">
                        <i class="feather-users"></i>
                    </div>
                    <h5>@Html.T("لا يوجد طلاب", "No students")</h5>
                    <p class="text-muted">@Html.T("لا يوجد طلاب مسجلين في دورات هذا المدرس", "No students enrolled in this instructor's courses")</p>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Students", new { id = instructor?.UserId, page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

