@model dynamic

@{
    ViewData["Title"] = Html.T("إحصائيات المدرسين", "Instructor Statistics");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة المدرسين", "Instructor Management"), Url.Action("Index", "Instructors")),
        (Html.T("الإحصائيات", "Statistics"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .stat-card {
            border-radius: 12px;
            padding: 24px;
            height: 100%;
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        .stat-value {
            font-size: 32px;
            font-weight: 700;
            line-height: 1;
        }
        .top-earner-item {
            border-radius: 8px;
            padding: 15px;
            transition: all 0.3s ease;
        }
        .top-earner-item:hover {
            background-color: #f8f9fa;
        }
        .chart-container {
            position: relative;
            height: 350px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <!-- Statistics Overview -->
    <div class="row g-4 mb-4">
        <!-- Total Instructors -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-2">@Html.T("إجمالي المدرسين", "Total Instructors")</p>
                        <h2 class="stat-value text-dark mb-0">@Model.TotalInstructors</h2>
                    </div>
                    <div class="stat-icon bg-soft-primary text-primary">
                        <i class="feather-users"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approved Instructors -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-2">@Html.T("مدرسون نشطون", "Active Instructors")</p>
                        <h2 class="stat-value text-success mb-0">@Model.ApprovedInstructors</h2>
                    </div>
                    <div class="stat-icon bg-soft-success text-success">
                        <i class="feather-user-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Applications -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-2">@Html.T("طلبات قيد المراجعة", "Pending Applications")</p>
                        <h2 class="stat-value text-warning mb-0">@Model.PendingApplications</h2>
                    </div>
                    <div class="stat-icon bg-soft-warning text-warning">
                        <i class="feather-clock"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Suspended Instructors -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-2">@Html.T("مدرسون معلقون", "Suspended Instructors")</p>
                        <h2 class="stat-value text-danger mb-0">@Model.SuspendedInstructors</h2>
                    </div>
                    <div class="stat-icon bg-soft-danger text-danger">
                        <i class="feather-user-x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Statistics -->
    <div class="row g-4 mb-4">
        <!-- Total Courses -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 bg-soft-primary">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-primary mb-2">@Html.T("إجمالي الدورات", "Total Courses")</p>
                        <h2 class="stat-value text-primary mb-0">@Model.TotalCourses</h2>
                    </div>
                    <div class="stat-icon bg-primary text-white">
                        <i class="feather-book"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 bg-soft-success">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-success mb-2">@Html.T("إجمالي الإيرادات", "Total Revenue")</p>
                        <h2 class="stat-value text-success mb-0">@(((decimal)(Model.TotalRevenue ?? 0)).ToEGP())</h2>
                    </div>
                    <div class="stat-icon bg-success text-white">
                        <i class="feather-dollar-sign"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Instructor Earnings -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 bg-soft-info">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-info mb-2">@Html.T("أرباح المدرسين", "Instructor Earnings")</p>
                        <h2 class="stat-value text-info mb-0">@(((decimal)(Model.TotalInstructorEarnings ?? 0)).ToEGP())</h2>
                    </div>
                    <div class="stat-icon bg-info text-white">
                        <i class="feather-trending-up"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Commission Rate -->
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0 bg-soft-secondary">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-secondary mb-2">@Html.T("متوسط العمولة", "Average Commission Rate")</p>
                        <h2 class="stat-value text-secondary mb-0">@Model.AverageCommissionRate.ToString("F1")%</h2>
                    </div>
                    <div class="stat-icon bg-secondary text-white">
                        <i class="feather-percent"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Top Earners -->
        <div class="col-xl-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أفضل 10 مدرسين (الأرباح)", "Top 10 Instructors (Earnings)")</h5>
                    <div class="card-header-action">
                        <span class="badge bg-soft-primary text-primary">@Html.T("أفضل 10", "Top 10")</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.TopEarners != null && Model.TopEarners.Count > 0)
                    {
                        <div class="list-group list-group-flush">
                            @{ int rank = 1; }
                            @foreach (var earner in Model.TopEarners)
                            {
                                <div class="list-group-item top-earner-item border-0 px-0">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center gap-3 flex-grow-1">
                                            <div class="avatar-text avatar-md 
                                                @(rank == 1 ? "bg-gradient-warning text-white" : 
                                                  rank == 2 ? "bg-gradient-secondary text-white" : 
                                                  rank == 3 ? "bg-gradient-danger text-white" : 
                                                  "bg-soft-primary text-primary")">
                                                #@rank
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@earner.Name</h6>
                                                <div class="d-flex align-items-center gap-3">
                                                    <span class="text-muted fs-12">
                                                        <i class="feather-book me-1"></i>@earner.CoursesCount @Html.T("دورة", "course(s)")
                                                    </span>
                                                    <span class="text-muted fs-12">
                                                        <i class="feather-percent me-1"></i>@earner.CommissionRate.ToString("F0")%
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <h5 class="mb-0 text-success">@(((decimal)(earner.TotalEarnings ?? 0)).ToEGP())</h5>
                                        </div>
                                    </div>
                                </div>
                                rank++;
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-3">
                                <i class="feather-inbox"></i>
                            </div>
                            <p class="text-muted">@Html.T("لا توجد بيانات للعرض", "No data to display")</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Statistics Chart -->
        <div class="col-xl-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("توزيع المدرسين", "Instructors Distribution")</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="instructorsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Commission Distribution -->
        <div class="col-xl-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("توزيع معدلات العمولة", "Commission Rate Distribution")</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="commissionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue Breakdown -->
        <div class="col-xl-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("تفصيل الإيرادات", "Revenue Breakdown")</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <a href="@Url.Action("Index", "Instructors")" class="btn btn-primary">
                            <i class="feather-users me-2"></i>
                            @Html.T("عرض جميع المدرسين", "View All Instructors")
                        </a>
                        <a href="@Url.Action("Applications", "Instructors")" class="btn btn-warning">
                            <i class="feather-clock me-2"></i>
                            @Html.T("طلبات قيد المراجعة", "Pending Applications") (@Model.PendingApplications)
                        </a>
                        <a href="@Url.Action("Index", "Courses")" class="btn btn-info">
                            <i class="feather-book me-2"></i>
                            @Html.T("إدارة الدورات", "Manage Courses")
                        </a>
                        <a href="@Url.Action("Index", "Payments")" class="btn btn-success">
                            <i class="feather-dollar-sign me-2"></i>
                            @Html.T("المدفوعات والأرباح", "Payments & Earnings")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Chart.js Configuration
        Chart.defaults.font.family = 'Cairo, sans-serif';
        Chart.defaults.color = '#6c757d';

        // Instructors Distribution Chart
        const instructorsCtx = document.getElementById('instructorsChart').getContext('2d');
        new Chart(instructorsCtx, {
            type: 'doughnut',
            data: {
                labels: ['@Html.Raw(Html.T("نشطون", "Active"))', '@Html.Raw(Html.T("قيد المراجعة", "Pending"))', '@Html.Raw(Html.T("معلقون", "Suspended"))'],
                datasets: [{
                    data: [@Model.ApprovedInstructors, @Model.PendingApplications, @Model.SuspendedInstructors],
                    backgroundColor: [
                        'rgba(40, 199, 111, 0.8)',
                        'rgba(255, 159, 67, 0.8)',
                        'rgba(234, 84, 85, 0.8)'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        rtl: true,
                        textDirection: 'rtl'
                    }
                }
            }
        });

        // Commission Distribution Chart
        const commissionCtx = document.getElementById('commissionChart').getContext('2d');
        const commissionData = @Html.Raw(Json.Serialize(Model.CommissionDistribution ?? new int[0]));
        new Chart(commissionCtx, {
            type: 'bar',
            data: {
                labels: ['50-60%', '60-70%', '70-80%', '80-90%', '90-95%'],
                datasets: [{
                    label: '@Html.Raw(Html.T("عدد المدرسين", "Number of Instructors"))',
                    data: commissionData,
                    backgroundColor: 'rgba(52, 84, 209, 0.8)',
                    borderRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Revenue Breakdown Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'pie',
            data: {
                labels: ['@Html.Raw(Html.T("إيرادات المنصة", "Platform Revenue"))', '@Html.Raw(Html.T("أرباح المدرسين", "Instructor Earnings"))'],
                datasets: [{
                    data: [
                        @(Model.TotalRevenue - Model.TotalInstructorEarnings),
                        @Model.TotalInstructorEarnings
                    ],
                    backgroundColor: [
                        'rgba(52, 84, 209, 0.8)',
                        'rgba(40, 199, 111, 0.8)'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        rtl: true,
                        textDirection: 'rtl'
                    }
                }
            }
        });
    </script>
}

