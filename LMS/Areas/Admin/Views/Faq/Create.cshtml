@model LMS.Areas.Admin.ViewModels.FaqCreateViewModel

@{
    ViewData["Title"] = Html.T("إنشاء سؤال شائع", "Create FAQ");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدعم", "Support"), null),
        (Html.T("الأسئلة الشائعة", "FAQ"), Url.Action("Index", "Faq")),
        (Html.T("إنشاء سؤال جديد", "Create new question"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var courses = ViewBag.Courses as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var lessons = ViewBag.Lessons as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <link rel="stylesheet" href="https://cdn.quilljs.com/1.3.6/quill.snow.css" />
    <style>
        .tag-input-wrapper {
            position: relative;
        }
        .tag-item {
            display: inline-block;
            padding: 6px 12px;
            background: #e5e7eb;
            border-radius: 20px;
            margin: 4px;
        }
        .category-badge {
            padding: 10px 20px;
            border: 2px solid #e5e7eb;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s;
            text-align: center;
        }
        .category-badge:hover {
            border-color: #3b82f6;
            background: #f0f9ff;
        }
        .category-badge.selected {
            border-color: #3b82f6;
            background: #eff6ff;
            font-weight: 600;
        }
        .editor-container {
            height: 300px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Create" method="post" id="faqForm">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <!-- Main Form -->
            <div class="col-lg-8">
                <!-- Question -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-help-circle me-2"></i>
                            السؤال
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-4">
                            <label asp-for="Question" class="form-label">
                                نص السؤال <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Question" class="form-control form-control-lg" rows="3" placeholder="@Html.T("ما هو السؤال الشائع الذي يطرحه الطلاب؟", "What is the common question students ask?")" id="questionInput"></textarea>
                            <span asp-validation-for="Question" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="feather-info"></i>
                                اكتب السؤال بصيغة واضحة ومباشرة
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Answer -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-message-square me-2"></i>
                            الإجابة
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Answer" class="form-label">
                                نص الإجابة <span class="text-danger">*</span>
                            </label>
                            <div id="answerEditor" class="editor-container"></div>
                            <input asp-for="Answer" type="hidden" id="answerHidden" />
                            <span asp-validation-for="Answer" class="text-danger"></span>
                            <small class="form-text text-muted mt-2 d-block">
                                <i class="feather-edit-3"></i>
                                استخدم محرر النصوص لتنسيق الإجابة
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Category & Tags -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-tag me-2"></i>
                            التصنيف والوسوم
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Category -->
                        <div class="form-group mb-4">
                            <label asp-for="Category" class="form-label">
                                الفئة
                            </label>
                            <input asp-for="Category" type="hidden" id="categoryHidden" />
                            <div class="row g-2">
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="عام" onclick="selectCategory(this, 'عام')">
                                        <i class="feather-grid"></i>
                                        <div>@Html.T("عام", "General")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="الدورات" onclick="selectCategory(this, 'الدورات')">
                                        <i class="feather-book"></i>
                                        <div>@Html.T("الدورات", "Courses")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="الدفع" onclick="selectCategory(this, 'الدفع')">
                                        <i class="feather-credit-card"></i>
                                        <div>@Html.T("الدفع", "Payment")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="الحساب" onclick="selectCategory(this, 'الحساب')">
                                        <i class="feather-user"></i>
                                        <div>@Html.T("الحساب", "Account")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="الشهادات" onclick="selectCategory(this, 'الشهادات')">
                                        <i class="feather-award"></i>
                                        <div>@Html.T("الشهادات", "Certificates")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="التقني" onclick="selectCategory(this, 'التقني')">
                                        <i class="feather-settings"></i>
                                        <div>@Html.T("التقني", "Technical")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="المدربين" onclick="selectCategory(this, 'المدربين')">
                                        <i class="feather-users"></i>
                                        <div>@Html.T("المدربين", "Instructors")</div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="category-badge" data-category="أخرى" onclick="selectCategory(this, 'أخرى')">
                                        <i class="feather-more-horizontal"></i>
                                        <div>@Html.T("أخرى", "Other")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2">
                                <input type="text" class="form-control" placeholder="@Html.T("أو أدخل فئة مخصصة", "Or enter a custom category")" id="customCategory" />
                            </div>
                        </div>

                        <!-- Tags -->
                        <div class="form-group mb-4">
                            <label asp-for="Tags" class="form-label">
                                الوسوم
                            </label>
                            <div id="tagDisplay" class="mb-2"></div>
                            <div class="input-group">
                                <input type="text" class="form-control" id="tagInput" placeholder="@Html.T("أدخل وسماً واضغط Enter", "Enter a tag and press Enter")" />
                                <button type="button" class="btn btn-light" onclick="addTag()">
                                    <i class="feather-plus"></i>
                                </button>
                            </div>
                            <input asp-for="Tags" type="hidden" id="tagsHidden" />
                            <small class="form-text text-muted">
                                <i class="feather-info"></i>
                                الوسوم تساعد في البحث والتصنيف
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Related Course & Lesson -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-link me-2"></i>
                            ربط بدورة أو درس (اختياري)
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Course -->
                        <div class="form-group mb-4">
                            <label asp-for="CourseId" class="form-label">
                                الدورة
                            </label>
                            <select asp-for="CourseId" class="form-select select2" id="courseSelect">
                                <option value="">-- اختر الدورة (اختياري) --</option>
                                @if (courses != null)
                                {
                                    @foreach (var course in courses)
                                    {
                                        <option value="@course.Value">@course.Text</option>
                                    }
                                }
                            </select>
                            <small class="form-text text-muted">
                                <i class="feather-info"></i>
                                ربط السؤال بدورة محددة
                            </small>
                        </div>

                        <!-- Lesson -->
                        <div class="form-group mb-4" id="lessonSection" style="display: none;">
                            <label asp-for="LessonId" class="form-label">
                                الدرس
                            </label>
                            <select asp-for="LessonId" class="form-select select2" id="lessonSelect">
                                <option value="">-- اختر الدرس (اختياري) --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="card stretch stretch-full">
                    <div class="card-body">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                            <button type="submit" name="action" value="draft" class="btn btn-secondary">
                                <i class="feather-save me-2"></i>
                                حفظ كمسودة
                            </button>
                            <button type="submit" name="action" value="publish" class="btn btn-primary">
                                <i class="feather-check me-2"></i>
                                نشر السؤال
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Preview Card -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-eye me-2"></i>
                            معاينة
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong class="d-block text-muted mb-2">السؤال:</strong>
                            <p id="previewQuestion" class="text-muted">لم يتم إدخال السؤال بعد...</p>
                        </div>
                        <div>
                            <strong class="d-block text-muted mb-2">الإجابة:</strong>
                            <div id="previewAnswer" class="text-muted">لم يتم إدخال الإجابة بعد...</div>
                        </div>
                    </div>
                </div>

                <!-- Settings -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-settings me-2"></i>
                            إعدادات
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Display Order -->
                        <div class="form-group mb-4">
                            <label asp-for="DisplayOrder" class="form-label">
                                ترتيب العرض
                            </label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" min="0" placeholder="0" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                            <small class="form-text text-muted">
                                <i class="feather-info"></i>
                                الترتيب في قائمة الأسئلة
                            </small>
                        </div>

                        <!-- Is Published -->
                        <div class="form-group">
                            <div class="form-check form-switch">
                                <input asp-for="IsPublished" class="form-check-input" type="checkbox" id="publishSwitch" />
                                <label class="form-check-label" for="publishSwitch">
                                    <i class="feather-eye me-2"></i>
                                    نشر مباشرة
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                إذا كان معطلاً، سيتم حفظ السؤال كمسودة
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Tips -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">
                            <i class="feather-lightbulb me-2"></i>
                            نصائح
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="vstack gap-2">
                            <div class="alert alert-light mb-0">
                                <i class="feather-check me-2 text-success"></i>
                                <small>@Html.T("اكتب أسئلة واضحة ومباشرة", "Write clear and direct questions")</small>
                            </div>
                            <div class="alert alert-light mb-0">
                                <i class="feather-check me-2 text-success"></i>
                                <small>@Html.T("قدم إجابات شاملة ومفيدة", "Provide comprehensive and helpful answers")</small>
                            </div>
                            <div class="alert alert-light mb-0">
                                <i class="feather-check me-2 text-success"></i>
                                <small>@Html.T("استخدم الوسوم لتسهيل البحث", "Use tags to make search easier")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    
    <script>
        const tags = [];
        let quill;

        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                dir: 'rtl',
                language: 'ar'
            });

            // Initialize Quill Editor
            quill = new Quill('#answerEditor', {
                theme: 'snow',
                placeholder: 'اكتب الإجابة هنا...',
                modules: {
                    toolbar: [
                        ['bold', 'italic', 'underline'],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                        ['link'],
                        ['clean']
                    ]
                }
            });

            // Update hidden field on text change
            quill.on('text-change', function() {
                $('#answerHidden').val(quill.root.innerHTML);
                $('#previewAnswer').html(quill.root.innerHTML || 'لم يتم إدخال الإجابة بعد...');
            });

            // Question preview
            $('#questionInput').on('input', function() {
                $('#previewQuestion').text($(this).val() || 'لم يتم إدخال السؤال بعد...');
            });

            // Tag input
            $('#tagInput').keypress(function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    addTag();
                }
            });

            // Custom category
            $('#customCategory').on('blur', function() {
                const value = $(this).val().trim();
                if (value) {
                    $('.category-badge').removeClass('selected');
                    $('#categoryHidden').val(value);
                }
            });

            // Course change - load lessons
            $('#courseSelect').change(function() {
                const courseId = $(this).val();
                if (courseId) {
                    $('#lessonSection').show();
                    // TODO: Load lessons via AJAX
                } else {
                    $('#lessonSection').hide();
                }
            });
        });

        function selectCategory(element, category) {
            $('.category-badge').removeClass('selected');
            $(element).addClass('selected');
            $('#categoryHidden').val(category);
            $('#customCategory').val('');
        }

        function addTag() {
            const tagInput = $('#tagInput');
            const tag = tagInput.val().trim();
            if (tag && !tags.includes(tag)) {
                tags.push(tag);
                updateTagDisplay();
                updateTagsInput();
                tagInput.val('');
            }
        }

        function removeTag(tag) {
            const index = tags.indexOf(tag);
            if (index > -1) {
                tags.splice(index, 1);
                updateTagDisplay();
                updateTagsInput();
            }
        }

        function updateTagDisplay() {
            const html = tags.map(tag => 
                `<span class="tag-item">
                    ${tag}
                    <button type="button" class="btn-close btn-close-sm ms-2" onclick="removeTag('${tag}')"></button>
                </span>`
            ).join('');
            $('#tagDisplay').html(html);
        }

        function updateTagsInput() {
            $('#tagsHidden').val(tags.join(','));
        }
    </script>
}

