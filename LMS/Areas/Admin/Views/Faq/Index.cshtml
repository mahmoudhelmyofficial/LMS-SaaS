@model IEnumerable<LMS.Domain.Entities.Courses.Faq>

@{
    ViewData["Title"] = Html.T("إدارة الأسئلة الشائعة", "FAQ management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدعم الفني", "Support"), null),
        (Html.T("الأسئلة الشائعة", "FAQ"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة سؤال", "Add question"), "feather-plus", Url.Action("Create", "Faq"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("الأسئلة الشائعة", "FAQ")</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="accordion" id="faqAccordion">
                            @foreach (var faq in Model.OrderBy(f => f.DisplayOrder))
                            {
                                <div class="accordion-item mb-2">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-@faq.Id">
                                            <div class="d-flex align-items-center gap-3 w-100">
                                                <i class="feather-help-circle text-primary"></i>
                                                <span class="fw-semibold">@faq.Question</span>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="faq-@faq.Id" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                        <div class="accordion-body">
                                            <p class="mb-3">@faq.Answer</p>
                                            <div class="d-flex gap-2">
                                                <a href="@Url.Action("Edit", "Faq", new { id = faq.Id })" class="btn btn-sm btn-light-brand">
                                                    <i class="feather-edit me-1"></i>
                                                    تعديل
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@faq.Id')">
                                                    <i class="feather-trash-2 me-1"></i>
                                                    حذف
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="feather-help-circle fs-1 text-muted mb-3"></i>
                            <p class="text-muted">@Html.T("لا توجد أسئلة شائعة بعد", "No FAQ questions yet")</p>
                            <a href="@Url.Action("Create", "Faq")" class="btn btn-primary">
                                <i class="feather-plus me-2"></i>
                                إضافة سؤال جديد
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Categories -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التصنيفات", "Categories")</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Index")" class="list-group-item list-group-item-action @(ViewBag.Category == null ? "active" : "")">
                            <div class="d-flex align-items-center justify-content-between">
                                <span>@Html.T("جميع الأسئلة", "All questions")</span>
                                <span class="badge bg-primary">@Model.Count()</span>
                            </div>
                        </a>
                        @{
                            var categoryCounts = ViewBag.CategoryCounts as Dictionary<string, int> ?? new Dictionary<string, int>();
                        }
                        @foreach (var cat in categoryCounts)
                        {
                            <a href="@Url.Action("Index", new { category = cat.Key })" class="list-group-item list-group-item-action @(ViewBag.Category == cat.Key ? "active" : "")">
                                <div class="d-flex align-items-center justify-content-between">
                                    <span>@cat.Key</span>
                                    <span class="badge bg-soft-primary text-primary">@cat.Value</span>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إحصائيات", "Statistics")</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">@Html.T("إجمالي الأسئلة", "Total questions")</span>
                        <h4 class="mb-0">@Model.Count()</h4>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <span class="text-muted">@Html.T("الأكثر مشاهدة", "Most viewed")</span>
                        <h4 class="mb-0">@(ViewBag.MostViewedCount ?? 0)</h4>
                    </div>
                    <div class="d-flex align-items-center justify-content-between">
                        <span class="text-muted">@Html.T("المفيدة", "Helpful")</span>
                        <h4 class="mb-0">@(ViewBag.HelpfulRate ?? 0)%</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.__FaqIndexT = { deleteConfirm: '@Html.Raw(Html.T("هل أنت متأكد من حذف هذا السؤال؟", "Are you sure you want to delete this question?").Replace("'", "\\'"))' };
        function confirmDelete(faqId) {
            if (confirm(window.__FaqIndexT.deleteConfirm)) {
                // Implement delete functionality
                console.log('Deleting FAQ:', faqId);
            }
        }
    </script>
}

