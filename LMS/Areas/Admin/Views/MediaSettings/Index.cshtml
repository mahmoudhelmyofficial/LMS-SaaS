@model List<LMS.Domain.Entities.Settings.PlatformSetting>
@{
    ViewData["Title"] = Html.T("إعدادات الوسائط", "Media settings");
    ViewData["Breadcrumbs"] = new List<(string Name, string Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("الوسائط", "Media"), "")
    };
}

<div class="main-content">
    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-primary rounded">
                                <i class="feather-file fs-4 text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.TotalFiles</h3>
                            <span class="text-muted fs-12">@Html.T("إجمالي الملفات", "Total files")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-success rounded">
                                <i class="feather-image fs-4 text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.ImageCount</h3>
                            <span class="text-muted fs-12">@Html.T("الصور", "Images")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-info rounded">
                                <i class="feather-video fs-4 text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.VideoCount</h3>
                            <span class="text-muted fs-12">@Html.T("الفيديوهات", "Videos")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-soft-warning rounded">
                                <i class="feather-hard-drive fs-4 text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h3 class="mb-0">@ViewBag.TotalSize</h3>
                            <span class="text-muted fs-12">@Html.T("حجم التخزين", "Storage size")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="feather-image me-2"></i>@Html.T("إعدادات الصور والملفات", "Image and file settings")</h5>
        </div>
        <div class="card-body">
            <form asp-action="Save" method="post">
                @Html.AntiForgeryToken()
                
                <div class="row g-4">
                    <!-- File Size Limits -->
                    <div class="col-12">
                        <h6 class="text-primary mb-3"><i class="feather-upload-cloud me-2"></i>@Html.T("حدود حجم الملفات", "File size limits")</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("الحد الأقصى للصور (MB)", "Max image size (MB)")</label>
                                <input type="number" name="MaxImageSizeMB" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaMaxImageSize")?.Value ?? "5")">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("الحد الأقصى للمستندات (MB)", "Max document size (MB)")</label>
                                <input type="number" name="MaxDocumentSizeMB" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaMaxDocumentSize")?.Value ?? "25")">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">@Html.T("الحد الأقصى للفيديو (MB)", "Max video size (MB)")</label>
                                <input type="number" name="MaxVideoSizeMB" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaMaxVideoSize")?.Value ?? "500")">
                            </div>
                        </div>
                    </div>

                    <!-- Allowed Types -->
                    <div class="col-12">
                        <h6 class="text-primary mb-3"><i class="feather-file-text me-2"></i>@Html.T("أنواع الملفات المسموحة", "Allowed file types")</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("الصور", "Images")</label>
                                <input type="text" name="AllowedImageTypes" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaAllowedImageTypes")?.Value ?? "jpg,jpeg,png,gif,webp")"
                                       placeholder="jpg,jpeg,png,gif,webp">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("المستندات", "Documents")</label>
                                <input type="text" name="AllowedDocumentTypes" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaAllowedDocumentTypes")?.Value ?? "pdf,doc,docx,xls,xlsx,ppt,pptx")"
                                       placeholder="pdf,doc,docx,xls,xlsx">
                            </div>
                        </div>
                    </div>

                    <!-- Image Processing -->
                    <div class="col-12">
                        <h6 class="text-primary mb-3"><i class="feather-sliders me-2"></i>@Html.T("معالجة الصور", "Image processing")</h6>
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("جودة الضغط %", "Compression quality %")</label>
                                <input type="number" name="ImageCompressionQuality" class="form-control" min="1" max="100"
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaImageQuality")?.Value ?? "85")">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("الحد الأقصى للعرض (px)", "Max width (px)")</label>
                                <input type="number" name="MaxImageWidth" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaMaxImageWidth")?.Value ?? "1920")">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("الحد الأقصى للارتفاع (px)", "Max height (px)")</label>
                                <input type="number" name="MaxImageHeight" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaMaxImageHeight")?.Value ?? "1080")">
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-switch mt-4">
                                    <input type="hidden" name="AutoResizeImages" value="false" />
                                    <input type="checkbox" name="AutoResizeImages" value="true" class="form-check-input" 
                                           @(Model?.FirstOrDefault(s => s.Key == "MediaAutoResize")?.Value != "false" ? "checked" : "")>
                                    <label class="form-check-label">@Html.T("تغيير الحجم تلقائياً", "Auto resize")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thumbnails -->
                    <div class="col-12">
                        <h6 class="text-primary mb-3"><i class="feather-grid me-2"></i>@Html.T("الصور المصغرة", "Thumbnails")</h6>
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("عرض الصورة المصغرة (px)", "Thumbnail width (px)")</label>
                                <input type="number" name="ThumbnailWidth" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaThumbnailWidth")?.Value ?? "300")">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">@Html.T("ارتفاع الصورة المصغرة (px)", "Thumbnail height (px)")</label>
                                <input type="number" name="ThumbnailHeight" class="form-control" 
                                       value="@(Model?.FirstOrDefault(s => s.Key == "MediaThumbnailHeight")?.Value ?? "200")">
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-switch mt-4">
                                    <input type="hidden" name="GenerateThumbnails" value="false" />
                                    <input type="checkbox" name="GenerateThumbnails" value="true" class="form-check-input" 
                                           @(Model?.FirstOrDefault(s => s.Key == "MediaGenerateThumbnails")?.Value != "false" ? "checked" : "")>
                                    <label class="form-check-label">@Html.T("إنشاء صور مصغرة", "Generate thumbnails")</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Watermark -->
                    <div class="col-12">
                        <h6 class="text-primary mb-3"><i class="feather-droplet me-2"></i>@Html.T("العلامة المائية", "Watermark")</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">@Html.T("نص العلامة المائية", "Watermark text")</label>
                                <input type="text" name="WatermarkText" class="form-control" 
                                       value="@Model?.FirstOrDefault(s => s.Key == "MediaWatermarkText")?.Value"
                                       placeholder="@Html.T("اختياري", "Optional")">
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-switch mt-4">
                                    <input type="hidden" name="WatermarkEnabled" value="false" />
                                    <input type="checkbox" name="WatermarkEnabled" value="true" class="form-check-input" 
                                           @(Model?.FirstOrDefault(s => s.Key == "MediaWatermarkEnabled")?.Value == "true" ? "checked" : "")>
                                    <label class="form-check-label">@Html.T("تفعيل العلامة المائية", "Enable watermark")</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="feather-save me-2"></i>@Html.T("حفظ الإعدادات", "Save settings")
                    </button>
                </div>
            </form>
            
            <form asp-action="CleanTempFiles" method="post" class="mt-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-warning">
                    <i class="feather-trash-2 me-2"></i>@Html.T("تنظيف الملفات المؤقتة", "Clean temporary files")
                </button>
            </form>
        </div>
    </div>
</div>

