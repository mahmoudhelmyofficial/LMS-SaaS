@model IEnumerable<LMS.Domain.Entities.Payments.Refund>

@{
    ViewData["Title"] = Html.T("طلبات الاسترداد", "Refund requests");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("المدفوعات", "Payments"), Url.Action("Index", "Payments")),
        (Html.T("طلبات الاسترداد", "Refund requests"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .refund-status-badge {
            padding: 0.35rem 0.85rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .payment-amount {
            font-size: 1.1rem;
            font-weight: 600;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-refresh-cw"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">إجمالي الطلبات</span>
                            <h3 class="fw-bolder d-block">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">قيد المراجعة</span>
                            <h3 class="fw-bolder d-block">@Model.Count(r => r.Status == LMS.Domain.Enums.RefundStatus.Pending).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">تم الموافقة</span>
                            <h3 class="fw-bolder d-block">@Model.Count(r => r.Status == LMS.Domain.Enums.RefundStatus.Approved).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-x-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">تم الرفض</span>
                            <h3 class="fw-bolder d-block">@Model.Count(r => r.Status == LMS.Domain.Enums.RefundStatus.Rejected).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة طلبات الاسترداد", "Refund requests list")</h5>
                    <div class="card-header-action">
                        <div class="dropdown">
                            <a href="javascript:void(0);" class="btn btn-sm btn-light-brand" data-bs-toggle="dropdown">
                                <i class="feather-filter me-2"></i>
                                @Html.T("تصفية", "Filter")
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="javascript:void(0);" class="dropdown-item filter-all">
                                    <i class="feather-eye me-3"></i>
                                    @Html.T("عرض الكل", "View all")
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript:void(0);" class="dropdown-item filter-pending">
                                    <i class="feather-clock me-3"></i>
                                    @Html.T("قيد المراجعة", "Pending review")
                                </a>
                                <a href="javascript:void(0);" class="dropdown-item filter-approved">
                                    <i class="feather-check-circle me-3"></i>
                                    @Html.T("تمت الموافقة", "Approved")
                                </a>
                                <a href="javascript:void(0);" class="dropdown-item filter-rejected">
                                    <i class="feather-x-circle me-3"></i>
                                    @Html.T("تم الرفض", "Rejected")
                                </a>
                                <a href="javascript:void(0);" class="dropdown-item filter-completed">
                                    <i class="feather-check me-3"></i>
                                    مكتمل
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="refundsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("رقم الطلب", "Order #")</th>
                                    <th>@Html.T("الطالب", "Student")</th>
                                    <th>@Html.T("الدفعة", "Payment")</th>
                                    <th>@Html.T("المبلغ", "Amount")</th>
                                    <th>@Html.T("السبب", "Reason")</th>
                                    <th>@Html.T("تاريخ الطلب", "Request date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var refund in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold text-primary">#@refund.Id</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                    <i class="feather-user"></i>
                                                </div>
                                                <div>
                                                    <span class="d-block fw-semibold">@refund.Payment.Student.FirstName @refund.Payment.Student.LastName</span>
                                                    <small class="text-muted">@refund.Payment.Student.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted">#@refund.PaymentId</span>
                                        </td>
                                        <td>
                                            <span class="payment-amount text-success">
                                                @refund.Amount.ToEGP()
                                            </span>
                                            <small class="text-muted d-block">@refund.Currency</small>
                                        </td>
                                        <td>
                                            <span class="text-truncate-1-line d-inline-block" style="max-width: 200px;" data-bs-toggle="tooltip" title="@refund.Reason">
                                                @refund.Reason
                                            </span>
                                        </td>
                                        <td>
                                            <span>@refund.CreatedAt.ToString("dd/MM/yyyy")</span>
                                            <small class="text-muted d-block">@refund.CreatedAt.ToString("hh:mm tt")</small>
                                        </td>
                                        <td>
                                            @switch (refund.Status)
                                            {
                                                case LMS.Domain.Enums.RefundStatus.Pending:
                                                    <span class="badge bg-soft-warning text-warning refund-status-badge">قيد المراجعة</span>
                                                    break;
                                                case LMS.Domain.Enums.RefundStatus.Approved:
                                                    <span class="badge bg-soft-success text-success refund-status-badge">تمت الموافقة</span>
                                                    break;
                                                case LMS.Domain.Enums.RefundStatus.Rejected:
                                                    <span class="badge bg-soft-danger text-danger refund-status-badge">مرفوض</span>
                                                    break;
                                                case LMS.Domain.Enums.RefundStatus.Completed:
                                                    <span class="badge bg-soft-info text-info refund-status-badge">مكتمل</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-soft-secondary text-secondary refund-status-badge">@refund.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "Refunds", new { id = refund.Id })" 
                                                   class="avatar-text avatar-md" 
                                                   data-bs-toggle="tooltip" 
                                                   title="@Html.T("عرض التفاصيل", "View details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                @if (refund.Status == LMS.Domain.Enums.RefundStatus.Pending)
                                                {
                                                    <div class="dropdown">
                                                        <a href="javascript:void(0)" class="avatar-text avatar-md" data-bs-toggle="dropdown" data-bs-offset="0,21">
                                                            <i class="feather-more-horizontal"></i>
                                                        </a>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            <li>
                                                                <a class="dropdown-item text-success" href="javascript:void(0)" onclick="processRefund(@refund.Id, 'approve')">
                                                                    <i class="feather-check me-3"></i>
                                                                    <span>الموافقة</span>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="processRefund(@refund.Id, 'reject')">
                                                                    <i class="feather-x me-3"></i>
                                                                    <span>الرفض</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Refund Statistics -->
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إحصائيات الاسترداد", "Refund statistics")</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <h5 class="fw-bold mb-1">@Model.Where(r => r.Status == LMS.Domain.Enums.RefundStatus.Completed).Sum(r => r.Amount).ToEGP()</h5>
                                <small class="text-muted">إجمالي المبالغ المستردة</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <h5 class="fw-bold mb-1">@((Model.Any() ? Model.Average(r => r.Amount) : 0).ToEGP())</h5>
                                <small class="text-muted">متوسط المبلغ المسترد</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <h5 class="fw-bold mb-1">@((Model.Any() ? (Model.Count(r => r.Status == LMS.Domain.Enums.RefundStatus.Approved) / (double)Model.Count() * 100) : 0).ToString("F1"))%</h5>
                                <small class="text-muted">معدل الموافقة</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 border rounded text-center">
                                <h5 class="fw-bold mb-1">@((Model.Any() ? Model.Where(r => r.ProcessedAt.HasValue).Average(r => (r.ProcessedAt.Value - r.CreatedAt).TotalDays) : 0).ToString("F0"))</h5>
                                <small class="text-muted">متوسط وقت المعالجة (أيام)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("أسباب الاسترداد الشائعة", "Common refund reasons")</h5>
                </div>
                <div class="card-body">
                    @{
                        var topReasons = Model.GroupBy(r => r.Reason)
                            .OrderByDescending(g => g.Count())
                            .Take(5);
                    }
                    @foreach (var reasonGroup in topReasons)
                    {
                        <div class="mb-3">
                            <div class="d-flex align-items-center justify-content-between mb-1">
                                <span class="text-truncate-1-line" style="max-width: 70%;">@reasonGroup.Key</span>
                                <span class="badge bg-soft-primary text-primary">@reasonGroup.Count()</span>
                            </div>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar" 
                                     style="width: @((reasonGroup.Count() / (double)Model.Count() * 100).ToString("F0"))%"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#refundsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[5, "desc"]],
                "pageLength": 25
            });

            // Filter functions
            $('.filter-all').on('click', function() {
                table.column(6).search('').draw();
            });

            $('.filter-pending').on('click', function() {
                table.column(6).search('قيد المراجعة').draw();
            });

            $('.filter-approved').on('click', function() {
                table.column(6).search('تمت الموافقة').draw();
            });

            $('.filter-rejected').on('click', function() {
                table.column(6).search('مرفوض').draw();
            });

            $('.filter-completed').on('click', function() {
                table.column(6).search('مكتمل').draw();
            });

            // Tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        window.__RefundT = {
            promptRejectReason: '@Html.Raw(Html.T("يرجى إدخال سبب الرفض:", "Please enter rejection reason:").Replace("'", "\\'"))',
            alertReasonRequired: '@Html.Raw(Html.T("يجب إدخال سبب الرفض", "You must enter a rejection reason").Replace("'", "\\'"))',
            confirmApprove: '@Html.Raw(Html.T("هل أنت متأكد من الموافقة على هذا الطلب؟", "Are you sure you want to approve this request?").Replace("'", "\\'"))',
            confirmReject: '@Html.Raw(Html.T("هل أنت متأكد من رفض هذا الطلب؟", "Are you sure you want to reject this request?").Replace("'", "\\'"))',
            errorPrefix: '@Html.Raw(Html.T("حدث خطأ:", "An error occurred:").Replace("'", "\\'"))',
            errorProcessing: '@Html.Raw(Html.T("حدث خطأ أثناء معالجة الطلب", "An error occurred while processing the request").Replace("'", "\\'"))'
        };

        function processRefund(refundId, action) {
            const reason = action === 'reject' ? prompt(window.__RefundT.promptRejectReason) : null;
            
            if (action === 'reject' && !reason) {
                alert(window.__RefundT.alertReasonRequired);
                return;
            }

            const confirmMsg = action === 'approve' ? window.__RefundT.confirmApprove : window.__RefundT.confirmReject;
            if (confirm(confirmMsg)) {
                // Implement AJAX call to process refund
                fetch(`/Admin/Refunds/Process`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify({
                        id: refundId,
                        action: action,
                        reason: reason
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(window.__RefundT.errorPrefix + ' ' + (data.message || ''));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert(window.__RefundT.errorProcessing);
                });
            }
        }
    </script>
}

