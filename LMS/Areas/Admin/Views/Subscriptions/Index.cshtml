@model IEnumerable<LMS.Areas.Admin.ViewModels.SubscriptionDisplayViewModel>

@{
    ViewData["Title"] = Html.T("إدارة الاشتراكات", "Subscriptions management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإدارة المالية", "Finance"), null),
        (Html.T("الاشتراكات", "Subscriptions"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة خطة", "Add Plan"), "feather-plus", Url.Action("CreatePlan", "Subscriptions"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
    
    // Calculate actual subscription statistics
    var activeSubscriptions = Model.Where(s => s.Status == "Active").ToList();
    var expiringCount = Model.Count(s => s.Status == "Active" && s.EndDate.HasValue && s.EndDate.Value <= DateTime.UtcNow.AddDays(30));
    var monthlyRevenue = activeSubscriptions.Sum(s => s.Price ?? 0);
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .pricing-card {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        .pricing-card:hover {
            border-color: #3454d1;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transform: translateY(-10px);
        }
        .pricing-card.popular {
            border-color: #10b981;
            background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
