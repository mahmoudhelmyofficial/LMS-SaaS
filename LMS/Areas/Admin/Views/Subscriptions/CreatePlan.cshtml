@model LMS.Areas.Admin.ViewModels.SubscriptionPlanCreateViewModel

@{
    ViewData["Title"] = Html.T("إنشاء خطة اشتراك", "Create subscription plan");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الاشتراكات", "Subscriptions"), Url.Action("Index", "Subscriptions")),
        (Html.T("الخطط", "Plans"), Url.Action("Plans", "Subscriptions")),
        (Html.T("إنشاء خطة", "Create plan"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .form-section {
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .feature-card {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 15px;
            transition: all 0.3s ease;
        }
        .feature-card.selected {
            border-color: #3454d1;
            background: #f0f4ff;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form asp-action="CreatePlan" method="post">
        <div class="row">
            <!-- Form Section -->
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">المعلومات الأساسية</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label class="form-label" for="name">@Html.T("اسم الخطة", "Plan name") <span class="text-danger">*</span></label>
                                <input type="text" 
                                       class="form-control" 
                                       id="name" 
                                       asp-for="Name" 
                                       placeholder="@Html.T("مثال: الخطة الأساسية", "e.g. Basic Plan")"
                                       required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label" for="price">السعر (جنيه) <span class="text-danger">*</span></label>
                                <input type="number" 
                                       class="form-control" 
                                       id="price" 
                                       asp-for="Price" 
                                       placeholder="0.00"
                                       step="0.01"
                                       min="0"
                                       required>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-12 mb-4">
                                <label class="form-label" for="description">@Html.T("الوصف", "Description")</label>
                                <textarea class="form-control" 
                                          id="description" 
                                          asp-for="Description" 
                                          rows="3" 
                                          placeholder="@Html.T("وصف مختصر للخطة...", "Brief description of the plan...")"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label" for="durationDays">مدة الاشتراك (بالأيام) <span class="text-danger">*</span></label>
                                <input type="number" 
                                       class="form-control" 
                                       id="durationDays" 
                                       asp-for="DurationDays" 
                                       placeholder="30"
                                       min="1"
                                       required>
                                <small class="text-muted">مثال: 30 يوم = شهر واحد، 365 يوم = سنة</small>
                                <span asp-validation-for="DurationDays" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label class="form-label" for="coursesLimit">حد الدورات</label>
                                <input type="number" 
                                       class="form-control" 
                                       id="coursesLimit" 
                                       asp-for="CoursesLimit" 
                                       placeholder="@Html.T("-1 = غير محدود", "-1 = unlimited")"
                                       value="-1">
                                <small class="text-muted">استخدم -1 للدورات غير المحدودة</small>
                                <span asp-validation-for="CoursesLimit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Features -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">الميزات والصلاحيات</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="feature-card">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="accessToPremiumContent" 
                                               asp-for="AccessToPremiumContent">
                                        <label class="form-check-label" for="accessToPremiumContent">
                                            <i class="feather-star text-warning me-2"></i>
                                            <strong>الوصول للمحتوى المميز</strong>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-2">إمكانية الوصول للدورات والمحتوى المميز</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="accessToLiveClasses" 
                                               asp-for="AccessToLiveClasses">
                                        <label class="form-check-label" for="accessToLiveClasses">
                                            <i class="feather-video text-info me-2"></i>
                                            <strong>حضور الفصول المباشرة</strong>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-2">المشاركة في البث المباشر والفصول الحية</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="prioritySupport" 
                                               asp-for="PrioritySupport">
                                        <label class="form-check-label" for="prioritySupport">
                                            <i class="feather-headphones text-primary me-2"></i>
                                            <strong>دعم فني ذو أولوية</strong>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-2">الحصول على دعم فني سريع ومباشر</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="feature-card">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="certificatesIncluded" 
                                               asp-for="CertificatesIncluded">
                                        <label class="form-check-label" for="certificatesIncluded">
                                            <i class="feather-award text-success me-2"></i>
                                            <strong>شهادات إتمام</strong>
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-2">الحصول على شهادات معتمدة بعد إتمام الدورات</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Settings -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">إعدادات إضافية</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label" for="trialPeriodDays">فترة التجربة (أيام)</label>
                                <input type="number" 
                                       class="form-control" 
                                       id="trialPeriodDays" 
                                       asp-for="TrialPeriodDays" 
                                       placeholder="0"
                                       min="0"
                                       value="0">
                                <small class="text-muted">0 = بدون فترة تجربة</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label" for="displayOrder">ترتيب العرض</label>
                                <input type="number" 
                                       class="form-control" 
                                       id="displayOrder" 
                                       asp-for="DisplayOrder" 
                                       placeholder="0"
                                       min="0"
                                       value="0">
                                <small class="text-muted">يحدد ترتيب ظهور الخطة</small>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">الحالة</label>
                                <div>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="isActive" 
                                               asp-for="IsActive"
                                               checked>
                                        <label class="form-check-label" for="isActive">
                                            نشط
                                        </label>
                                    </div>
                                    <div class="form-check form-switch mt-2">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="isFeatured" 
                                               asp-for="IsFeatured">
                                        <label class="form-check-label" for="isFeatured">
                                            مميز
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <a asp-action="Plans" class="btn btn-light me-2">
                            <i class="feather-x me-2"></i>إلغاء
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="feather-save me-2"></i>حفظ الخطة
                        </button>
                    </div>
                </div>
            </div>

            <!-- Preview Section -->
            <div class="col-lg-4">
                <div class="card stretch stretch-full sticky-top" style="top: 100px;">
                    <div class="card-header">
                        <h5 class="card-title">معاينة الخطة</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <h4 id="previewName" class="fw-bold">اسم الخطة</h4>
                            <p id="previewDescription" class="text-muted small">وصف الخطة</p>
                            <div class="my-4">
                                <span id="previewPrice" class="display-4 fw-bold text-primary">0</span>
                                <span class="text-muted">جنيه</span>
                            </div>
                            <small id="previewDuration" class="text-muted">لمدة 0 يوم</small>
                        </div>

                        <hr>

                        <h6 class="fw-bold mb-3">الميزات:</h6>
                        <ul class="list-unstyled" id="previewFeatures">
                            <li class="mb-2">
                                <i class="feather-check text-success me-2"></i>
                                <span>سيتم عرض الميزات هنا</span>
                            </li>
                        </ul>

                        <hr>

                        <div class="alert alert-info">
                            <small>
                                <i class="feather-info me-2"></i>
                                هذه معاينة لكيفية ظهور الخطة للمستخدمين
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Live preview
            function updatePreview() {
                const name = $('#name').val() || 'اسم الخطة';
                const description = $('#description').val() || 'وصف الخطة';
                const price = $('#price').val() || '0';
                const duration = $('#durationDays').val() || '0';
                const coursesLimit = $('#coursesLimit').val();

                $('#previewName').text(name);
                $('#previewDescription').text(description);
                $('#previewPrice').text(parseFloat(price).toLocaleString('ar-EG'));
                $('#previewDuration').text(`لمدة ${duration} يوم`);

                // Build features list
                let features = '';
                
                if (coursesLimit == -1) {
                    features += '<li class="mb-2"><i class="feather-check text-success me-2"></i>دورات غير محدودة</li>';
                } else if (coursesLimit > 0) {
                    features += `<li class="mb-2"><i class="feather-check text-success me-2"></i>${coursesLimit} دورات</li>`;
                }

                if ($('#accessToPremiumContent').is(':checked')) {
                    features += '<li class="mb-2"><i class="feather-check text-success me-2"></i>الوصول للمحتوى المميز</li>';
                }

                if ($('#accessToLiveClasses').is(':checked')) {
                    features += '<li class="mb-2"><i class="feather-check text-success me-2"></i>حضور الفصول المباشرة</li>';
                }

                if ($('#prioritySupport').is(':checked')) {
                    features += '<li class="mb-2"><i class="feather-check text-success me-2"></i>دعم فني ذو أولوية</li>';
                }

                if ($('#certificatesIncluded').is(':checked')) {
                    features += '<li class="mb-2"><i class="feather-check text-success me-2"></i>شهادات إتمام</li>';
                }

                const trialDays = $('#trialPeriodDays').val();
                if (trialDays > 0) {
                    features += `<li class="mb-2"><i class="feather-check text-success me-2"></i>${trialDays} أيام تجربة مجانية</li>`;
                }

                if (!features) {
                    features = '<li class="mb-2"><i class="feather-info text-muted me-2"></i>لم يتم تحديد ميزات بعد</li>';
                }

                $('#previewFeatures').html(features);
            }

            // Update preview on input
            $('#name, #description, #price, #durationDays, #coursesLimit, #trialPeriodDays').on('input', updatePreview);
            $('#accessToPremiumContent, #accessToLiveClasses, #prioritySupport, #certificatesIncluded').on('change', updatePreview);

            // Initial preview
            updatePreview();

            // Highlight selected features
            $('.feature-card input[type="checkbox"]').on('change', function() {
                if ($(this).is(':checked')) {
                    $(this).closest('.feature-card').addClass('selected');
                } else {
                    $(this).closest('.feature-card').removeClass('selected');
                }
            });
        });
    </script>
}

