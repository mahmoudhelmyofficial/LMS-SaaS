@model IEnumerable<LMS.Domain.Entities.Analytics.UserActivity>

@{
    ViewData["Title"] = Html.T("نشاط المستخدمين", "User Activity");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التقارير", "Reports"), null),
        (Html.T("نشاط المستخدمين", "User Activity"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
    <style>
        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-activity"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("نشاطات اليوم", "Today's Activities")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.CreatedAt.Date == DateTime.Today).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("مستخدمون نشطون", "Active Users")</span>
                            <h3 class="fw-bolder d-block">@Model.Select(a => a.UserId).Distinct().Count().ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-video"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دروس مشاهدة", "Lessons Viewed")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.ActivityType == "LessonView").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دروس مكتملة", "Lessons Completed")</span>
                            <h3 class="fw-bolder d-block">@Model.Count(a => a.ActivityType == "LessonComplete").ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("جميع الأنشطة", "All Activities")</span>
    </a>
    <div class="dropdown-divider"></div>
    <a href="javascript:void(0);" class="dropdown-item filter-lesson">
        <i class="feather-video me-3"></i>
        <span>@Html.T("مشاهدة دروس", "Lesson Views")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-complete">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("إكمال دروس", "Lesson Complete")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-quiz">
        <i class="feather-help-circle me-3"></i>
        <span>@Html.T("اختبارات", "Quizzes")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-certificate">
        <i class="feather-award me-3"></i>
        <span>@Html.T("شهادات", "Certificates")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="activityTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("المستخدم", "User")</th>
                                    <th>@Html.T("النشاط", "Activity")</th>
                                    <th>@Html.T("التفاصيل", "Details")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("المدة", "Duration")</th>
                                    <th>@Html.T("الجهاز", "Device")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model.OrderByDescending(a => a.CreatedAt).Take(100))
                                {
                                    <tr>
                                        <td>
                                            @if (activity.User != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @activity.User.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <span class="fw-semibold d-block">@activity.User.FirstName @activity.User.LastName</span>
                                                        <small class="text-muted">@activity.User.Email</small>
                                                    </div>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var (icon, color, text) = activity.ActivityType switch
                                                {
                                                    "LessonView" => ("feather-video", "bg-soft-primary text-primary", Html.T("مشاهدة درس", "Lesson View")),
                                                    "LessonComplete" => ("feather-check-circle", "bg-soft-success text-success", Html.T("إكمال درس", "Lesson Complete")),
                                                    "QuizAttempt" => ("feather-help-circle", "bg-soft-warning text-warning", Html.T("محاولة اختبار", "Quiz Attempt")),
                                                    "CourseEnroll" => ("feather-book", "bg-soft-info text-info", Html.T("تسجيل في دورة", "Course Enroll")),
                                                    "CertificateEarn" => ("feather-award", "bg-soft-danger text-danger", Html.T("حصول على شهادة", "Certificate Earned")),
                                                    _ => ("feather-activity", "bg-soft-secondary text-secondary", activity.ActivityType)
                                                };
                                            }
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="activity-icon @color">
                                                    <i class="@icon"></i>
                                                </div>
                                                <span>@text</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">
                                                @activity.Description
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span class="small">@activity.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <span class="text-muted smaller">@activity.CreatedAt.ToString("hh:mm tt")</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (activity.Duration != TimeSpan.Zero)
                                            {
                                                <span>@activity.Duration.TotalMinutes.ToString("F0") @Html.T("دقيقة", "min")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(activity.DeviceType))
                                            {
                                                <span class="badge bg-soft-secondary text-secondary">@activity.DeviceType</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#activityTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[3, "desc"]],
                "pageLength": 50
            });

            $('.filter-all').on('click', function() {
                table.column(1).search('').draw();
            });

            $('.filter-lesson').on('click', function() {
                table.column(1).search('@(Html.T("مشاهدة درس", "Lesson View"))').draw();
            });

            $('.filter-complete').on('click', function() {
                table.column(1).search('@(Html.T("إكمال درس", "Lesson Complete"))').draw();
            });

            $('.filter-quiz').on('click', function() {
                table.column(1).search('@(Html.T("محاولة اختبار", "Quiz Attempt"))').draw();
            });

            $('.filter-certificate').on('click', function() {
                table.column(1).search('@(Html.T("حصول على شهادة", "Certificate Earned"))').draw();
            });
        });
    </script>
}
