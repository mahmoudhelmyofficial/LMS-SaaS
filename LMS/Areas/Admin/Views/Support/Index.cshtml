@model IEnumerable<LMS.Domain.Entities.Support.SupportTicket>

@{
    ViewData["Title"] = Html.T("إدارة تذاكر الدعم", "Support Ticket Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدعم الفني", "Support"), null),
        (Html.T("التذاكر", "Tickets"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-alert-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تذاكر مفتوحة", "Open tickets")</span>
                            <h3 class="fw-bolder d-block">@(((int?)ViewBag.OpenCount ?? 0).ToString("N0"))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-message-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("قيد المعالجة", "In progress")</span>
                            <h3 class="fw-bolder d-block">@(((int?)ViewBag.InProgressCount ?? 0).ToString("N0"))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تذاكر محلولة", "Resolved tickets")</span>
                            <h3 class="fw-bolder d-block">@(((int?)ViewBag.ResolvedCount ?? 0).ToString("N0"))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-x-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تذاكر مغلقة", "Closed tickets")</span>
                            <h3 class="fw-bolder d-block">@(((int?)ViewBag.ClosedCount ?? 0).ToString("N0"))</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section FilterDropdown {
    <a href="javascript:void(0);" class="dropdown-item filter-all">
        <i class="feather-eye me-3"></i>
        <span>@Html.T("الكل", "All")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-open">
        <i class="feather-alert-circle me-3"></i>
        <span>@Html.T("مفتوحة", "Open")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-in-progress">
        <i class="feather-message-circle me-3"></i>
        <span>@Html.T("قيد المعالجة", "In progress")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-resolved">
        <i class="feather-check-circle me-3"></i>
        <span>@Html.T("محلولة", "Resolved")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-closed">
        <i class="feather-x-circle me-3"></i>
        <span>@Html.T("مغلقة", "Closed")</span>
    </a>
    <div class="dropdown-divider"></div>
    <a href="javascript:void(0);" class="dropdown-item filter-high">
        <i class="feather-alert-triangle me-3 text-danger"></i>
        <span>@Html.T("أولوية عالية", "High priority")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-medium">
        <i class="feather-minus-circle me-3 text-warning"></i>
        <span>@Html.T("أولوية متوسطة", "Medium priority")</span>
    </a>
    <a href="javascript:void(0);" class="dropdown-item filter-low">
        <i class="feather-chevron-down me-3 text-info"></i>
        <span>@Html.T("أولوية منخفضة", "Low priority")</span>
    </a>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة تذاكر الدعم", "Support tickets list")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="feather-download me-2"></i>@Html.T("تصدير", "Export")
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير CSV", "Export CSV") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file me-2 text-muted"></i>@Html.T("تصدير Excel", "Export Excel") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير PDF", "Export PDF") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="window.print()">
                                        <i class="feather-printer me-2 text-secondary"></i>@Html.T("طباعة", "Print")
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="ticketsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("رقم التذكرة", "Ticket #")</th>
                                    <th>@Html.T("الموضوع", "Subject")</th>
                                    <th>@Html.T("المستخدم", "User")</th>
                                    <th>@Html.T("التصنيف", "Category")</th>
                                    <th>@Html.T("الأولوية", "Priority")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold">#@(ticket.Id.ToString().PadLeft(8, '0').Substring(0, 8))</span>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Support", new { id = ticket.Id })" class="fw-semibold">
                                                @ticket.Subject
                                            </a>
                                        </td>
                                        <td>
                                            @if (ticket.User != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @ticket.User.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <span>@ticket.User.FirstName @ticket.User.LastName</span>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @if (ticket.CategoryEntity != null)
                                            {
                                                <span class="badge bg-soft-info text-info">@ticket.CategoryEntity.Name</span>
                                            }
                                        </td>
                                        <td>
                                            @switch (ticket.Priority)
                                            {
                                                case LMS.Domain.Enums.TicketPriority.High:
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("عالية", "High")</span>
                                                    break;
                                                case LMS.Domain.Enums.TicketPriority.Medium:
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("متوسطة", "Medium")</span>
                                                    break;
                                                case LMS.Domain.Enums.TicketPriority.Low:
                                                    <span class="badge bg-soft-info text-info">@Html.T("منخفضة", "Low")</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@ticket.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</td>
                                        <td>
                                            @switch (ticket.Status)
                                            {
                                                case LMS.Domain.Enums.TicketStatus.Open:
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("مفتوحة", "Open")</span>
                                                    break;
                                                case LMS.Domain.Enums.TicketStatus.InProgress:
                                                    <span class="badge bg-soft-primary text-primary">@Html.T("قيد المعالجة", "In progress")</span>
                                                    break;
                                                case LMS.Domain.Enums.TicketStatus.Resolved:
                                                    <span class="badge bg-soft-success text-success">@Html.T("محلولة", "Resolved")</span>
                                                    break;
                                                case LMS.Domain.Enums.TicketStatus.Closed:
                                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("مغلقة", "Closed")</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "Support", new { id = ticket.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض التفاصيل والرد", "View details and reply")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Pagination -->
                    @if ((int?)ViewBag.TotalPages > 1)
                    {
                        <div class="card-footer border-top">
                            <nav aria-label="@Html.T("تنقل الصفحة", "Page navigation")">
                                <ul class="pagination justify-content-center mb-0">
                                    @{
                                        var currentPage = (int?)ViewBag.Page ?? 1;
                                        var totalPages = (int?)ViewBag.TotalPages ?? 1;
                                        var status = ViewBag.Status as LMS.Domain.Enums.TicketStatus?;
                                        var priority = ViewBag.Priority as LMS.Domain.Enums.TicketPriority?;
                                    }
                                    
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-status="@status" asp-route-priority="@priority">
                                                <i class="feather-chevron-right"></i>
                                            </a>
                                        </li>
                                    }
                                    
                                    @for (int i = 1; i <= totalPages; i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@status" asp-route-priority="@priority">@i</a>
                                        </li>
                                    }
                                    
                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-status="@status" asp-route-priority="@priority">
                                                <i class="feather-chevron-left"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                            <div class="text-center mt-2">
                                <small class="text-muted">@Html.T("عرض", "Showing") @((currentPage - 1) * 20 + 1) - @Math.Min(currentPage * 20, (int?)ViewBag.TotalCount ?? 0) @Html.T("من", "of") @((int?)ViewBag.TotalCount ?? 0) @Html.T("تذكرة", "ticket(s)")</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#ticketsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[5, "desc"]],
                "pageLength": 25
            });

            $('.filter-all').on('click', function() {
                table.column(6).search('').draw();
            });

            $('.filter-open').on('click', function() {
                table.column(6).search('مفتوحة').draw();
            });

            $('.filter-in-progress').on('click', function() {
                table.column(6).search('قيد المعالجة').draw();
            });

            $('.filter-resolved').on('click', function() {
                table.column(6).search('محلولة').draw();
            });

            $('.filter-closed').on('click', function() {
                table.column(6).search('مغلقة').draw();
            });

            // Priority filters
            $('.filter-high').on('click', function() {
                table.column(4).search('عالية').draw();
            });

            $('.filter-medium').on('click', function() {
                table.column(4).search('متوسطة').draw();
            });

            $('.filter-low').on('click', function() {
                table.column(4).search('منخفضة').draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

