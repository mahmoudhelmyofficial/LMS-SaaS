@model IEnumerable<LMS.Areas.Admin.ViewModels.EmailQueueListViewModel>

@{
    ViewData["Title"] = Html.T("قائمة رسائل البريد", "Email messages list");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الاتصالات", "Communications"), null),
        (Html.T("قائمة البريد", "Email queue"), Url.Action("Index", "EmailQueue")),
        (Html.T("الرسائل", "Messages"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="emailTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("الأولوية", "Priority")</th>
                                    <th>@Html.T("المستلم", "Recipient")</th>
                                    <th>@Html.T("الموضوع", "Subject")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th>@Html.T("المحاولات", "Attempts")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var email in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @(email.Priority > 5 ? "bg-danger" : email.Priority > 3 ? "bg-warning" : "bg-secondary")">
                                                @email.Priority
                                            </span>
                                        </td>
                                        <td>
                                            <div>
                                                <div class="fw-bold">@email.ToEmail</div>
                                                <div class="fs-12 text-muted">@email.ToName</div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">@email.Subject</div>
                                        </td>
                                        <td>
                                            @switch (email.Status)
                                            {
                                                case "Pending":
                                                    <span class="badge bg-soft-warning text-warning">@Html.T("معلق", "Pending")</span>
                                                    break;
                                                case "Sent":
                                                    <span class="badge bg-soft-success text-success">@Html.T("تم الإرسال", "Sent")</span>
                                                    break;
                                                case "Failed":
                                                    <span class="badge bg-soft-danger text-danger">@Html.T("فاشل", "Failed")</span>
                                                    break;
                                                case "Processing":
                                                    <span class="badge bg-soft-info text-info">@Html.T("قيد المعالجة", "Processing")</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@email.RetryCount / @email.MaxRetries</td>
                                        <td>@email.CreatedAt.ToString("dd/MM/yyyy hh:mm")</td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "EmailQueue", new { id = email.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                @if (email.Status == "Failed")
                                                {
                                                    <a href="@Url.Action("Retry", "EmailQueue", new { id = email.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("إعادة المحاولة", "Retry")">
                                                        <i class="feather-refresh-cw"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            $('#emailTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[0, "desc"], [5, "desc"]],
                "pageLength": 50
            });
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

