@model LMS.Areas.Admin.ViewModels.RetryEmailViewModel

@{
    ViewData["Title"] = Html.T("إعادة إرسال البريد", "Retry email");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الاتصالات", "Communications"), null),
        (Html.T("قائمة البريد", "Email queue"), Url.Action("Index", "EmailQueue")),
        (Html.T("إعادة الإرسال", "Retry"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إعادة جدولة البريد الإلكتروني", "Reschedule email")</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Retry">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EmailId" />

                        <div class="mb-3">
                            <label asp-for="RescheduleFor" class="form-label">@Html.T("موعد إعادة الإرسال", "Reschedule for")</label>
                            <input asp-for="RescheduleFor" class="form-control" type="datetime-local" />
                            <span asp-validation-for="RescheduleFor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewEmail" class="form-label">@Html.T("البريد الإلكتروني (اختياري)", "Email (optional)")</label>
                            <input asp-for="NewEmail" class="form-control" type="email" placeholder="@Html.T("اترك فارغاً للإبقاء على البريد الحالي", "Leave empty to keep current email")" />
                            <span asp-validation-for="NewEmail" class="text-danger"></span>
                            <small class="form-text text-muted">@Html.T("اترك فارغاً إذا كنت تريد استخدام البريد الإلكتروني الأصلي", "Leave empty to use the original email")</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewSubject" class="form-label">@Html.T("عنوان الرسالة (اختياري)", "Subject (optional)")</label>
                            <input asp-for="NewSubject" class="form-control" placeholder="@Html.T("اترك فارغاً للإبقاء على العنوان الحالي", "Leave empty to keep current subject")" />
                            <span asp-validation-for="NewSubject" class="text-danger"></span>
                            <small class="form-text text-muted">@Html.T("اترك فارغاً إذا كنت تريد استخدام العنوان الأصلي", "Leave empty to use the original subject")</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-send me-2"></i>@Html.T("إعادة الإرسال", "Retry")
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.EmailId })" class="btn btn-light">
                                <i class="feather-x me-2"></i>@Html.T("إلغاء", "Cancel")
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

