@model LMS.Areas.Admin.ViewModels.PlatformFeaturesViewModel

@{
    ViewData["Title"] = Html.T("إعدادات المنصة", "Platform Settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("إعدادات المنصة", "Platform Settings"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="SavePlatformFeatures" method="post">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("وظائف المنصة", "Platform features")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableRegistration" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableRegistration" value="true" id="enableRegistration" @(Model.EnableRegistration ? "checked" : "")>
                            <label class="form-check-label" for="enableRegistration">
                                @Html.T("السماح بالتسجيل الجديد", "Allow new registration")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableInstructorApplication" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableInstructorApplication" value="true" id="enableInstructorApplication" @(Model.EnableInstructorApplication ? "checked" : "")>
                            <label class="form-check-label" for="enableInstructorApplication">
                                @Html.T("السماح للمدربين بالتقديم", "Allow instructors to apply")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableReviews" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableReviews" value="true" id="enableReviews" @(Model.EnableReviews ? "checked" : "")>
                            <label class="form-check-label" for="enableReviews">
                                @Html.T("السماح بالتقييمات", "Allow reviews")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableComments" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableComments" value="true" id="enableComments" @(Model.EnableComments ? "checked" : "")>
                            <label class="form-check-label" for="enableComments">
                                @Html.T("السماح بالتعليقات", "Allow comments")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableDiscussions" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableDiscussions" value="true" id="enableDiscussions" @(Model.EnableDiscussions ? "checked" : "")>
                            <label class="form-check-label" for="enableDiscussions">
                                @Html.T("تفعيل المنتديات", "Enable forums")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableCertificates" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableCertificates" value="true" id="enableCertificates" @(Model.EnableCertificates ? "checked" : "")>
                            <label class="form-check-label" for="enableCertificates">
                                @Html.T("تفعيل الشهادات", "Enable certificates")
                            </label>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input type="hidden" name="EnableGamification" value="false" />
                            <input class="form-check-input" type="checkbox" name="EnableGamification" value="true" id="enableGamification" @(Model.EnableGamification ? "checked" : "")>
                            <label class="form-check-label" for="enableGamification">
                                @Html.T("تفعيل التحفيز (Gamification)", "Enable gamification")
                            </label>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("حدود الاستخدام", "Usage limits")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الحد الأقصى لحجم رفع الملفات (MB)", "Max upload size (MB)")</label>
                            <input type="number" class="form-control" name="MaxUploadSizeMB" value="@Model.MaxUploadSizeMB" min="1" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الحد الأقصى للطلاب لكل دورة", "Max students per course")</label>
                            <input type="number" class="form-control" name="MaxStudentsPerCourse" value="@Model.MaxStudentsPerCourse" min="0" />
                            <small class="text-muted">@Html.T("اترك 0 للامحدود", "Use 0 for unlimited")</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الحد الأقصى لطول الفيديو (دقيقة)", "Max video length (minutes)")</label>
                            <input type="number" class="form-control" name="MaxVideoLengthMinutes" value="@Model.MaxVideoLengthMinutes" min="1" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ الإعدادات", "Save settings")
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات", "Information")</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-2">
                            <i class="feather-info me-1"></i>
                            @Html.T("هذه الإعدادات تؤثر على وظائف المنصة بشكل عام.", "These settings affect the platform's general functionality.")
                        </p>
                        <p class="text-muted small mb-0">
                            <i class="feather-alert-triangle me-1"></i>
                            @Html.T("تعطيل بعض الوظائف قد يؤثر على تجربة المستخدمين.", "Disabling some features may affect the user experience.")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
