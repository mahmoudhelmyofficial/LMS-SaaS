@model IEnumerable<LMS.Domain.Entities.Social.Review>

@{
    ViewData["Title"] = Html.T("التقييمات المعلقة", "Pending reviews");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التواصل", "Communication"), null),
        (Html.T("التقييمات", "Reviews"), Url.Action("Index", "Reviews")),
        (Html.T("المعلقة", "Pending"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <style>
        .rating-stars {
            color: #ffc107;
        }
        .review-card {
            transition: all 0.3s ease;
        }
        .review-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
    </style>
}

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تقييمات معلقة", "Pending reviews")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.PendingCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تقييمات معتمدة", "Approved reviews")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.ApprovedCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-danger text-danger">
                            <i class="feather-x-circle"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("تقييمات مرفوضة", "Rejected reviews")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.RejectedCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-star"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي التقييمات", "Total reviews")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalReviews</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التقييمات بانتظار المراجعة", "Reviews Pending Moderation")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <a asp-action="Index" class="btn btn-sm btn-light-brand">
                                <i class="feather-list me-1"></i>
                                جميع التقييمات
                            </a>
                            <a asp-action="Pending" class="btn btn-sm btn-warning">
                                <i class="feather-clock me-1"></i>
                                المعلقة
                            </a>
                            <a asp-action="SpamDetection" class="btn btn-sm btn-light-brand">
                                <i class="feather-alert-triangle me-1"></i>
                                المشتبه بها
                            </a>
                        </div>
                        @if (Model.Any())
                        {
                            <form asp-action="BulkApprove" method="post" class="d-inline ms-2" id="bulkApproveForm">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-success" id="bulkApproveBtn" disabled>
                                    <i class="feather-check-circle me-1"></i>
                                    الموافقة على المحدد
                                </button>
                            </form>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 30px;">
                                            <input type="checkbox" class="form-check-input" id="selectAll" />
                                        </th>
                                        <th>@Html.T("الطالب", "Student")</th>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("التقييم", "Rating")</th>
                                        <th>@Html.T("التعليق", "Comment")</th>
                                        <th>@Html.T("التاريخ", "Date")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in Model)
                                    {
                                        <tr class="review-card">
                                            <td>
                                                <input type="checkbox" class="form-check-input review-checkbox" name="ids" value="@review.Id" form="bulkApproveForm" />
                                            </td>
                                            <td>
                                                @if (review.Student != null)
                                                {
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                            @review.Student.FirstName?.Substring(0, 1)
                                                        </div>
                                                        <div>
                                                            <span class="fw-semibold">@review.Student.FirstName @review.Student.LastName</span>
                                                            <small class="d-block text-muted">@review.Student.Email</small>
                                                        </div>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @if (review.Course != null)
                                                {
                                                    <span class="fw-semibold">@review.Course.Title</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-1">
                                                    <span class="rating-stars">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= review.Rating)
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                                                            }
                                                            else
                                                            {
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                                                            }
                                                        }
                                                    </span>
                                                    <span class="fw-bold ms-2">@review.Rating.ToString("F1")</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 300px;" title="@review.Comment">
                                                    @review.Comment
                                                </div>
                                            </td>
                                            <td>
                                                <span>@review.CreatedAt.ToString("dd/MM/yyyy")</span>
                                                <small class="text-muted d-block">@review.CreatedAt.ToString("hh:mm tt")</small>
                                            </td>
                                            <td class="text-end">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a asp-action="Details" asp-route-id="@review.Id" class="avatar-text avatar-md" title="@Html.T("التفاصيل", "Details")">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <form asp-action="Approve" asp-route-id="@review.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md bg-soft-success text-success border-0" title="@Html.T("اعتماد", "Approve")">
                                                            <i class="feather-check"></i>
                                                        </button>
                                                    </form>
                                                    <button type="button" class="avatar-text avatar-md bg-soft-danger text-danger border-0" title="@Html.T("رفض", "Reject")" onclick="showRejectModal('@review.Id')">
                                                        <i class="feather-x"></i>
                                                    </button>
                                                    <form asp-action="Delete" asp-route-id="@review.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md bg-soft-secondary text-secondary border-0" title="@Html.T("حذف", "Delete")" onclick="return confirm('@(Html.Raw(Html.T("هل أنت متأكد من حذف هذا التقييم؟", "Are you sure you want to delete this review?")))')">
                                                            <i class="feather-trash-2"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if ((int)ViewBag.TotalPages > 1)
                        {
                            <div class="card-footer border-top">
                                <nav aria-label="@Html.T("تنقل الصفحة", "Page navigation")">
                                    <ul class="pagination justify-content-center mb-0">
                                        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == (int)ViewBag.Page ? "active" : "")">
                                                <a class="page-link" asp-action="Pending" asp-route-page="@i" asp-route-courseId="@ViewBag.CourseId">@i</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl bg-soft-success text-success mx-auto mb-3">
                                <i class="feather-check-circle"></i>
                            </div>
                            <h5>@Html.T("لا توجد تقييمات معلقة", "No pending reviews")</h5>
                            <p class="text-muted mb-3">@Html.T("جميع التقييمات تمت مراجعتها", "All reviews have been reviewed")</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="feather-list me-2"></i>
                                عرض جميع التقييمات
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" data-bs-backdrop="false" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">
                    <i class="feather-x-circle me-2"></i>
                    @Html.T("رفض التقييم", "Reject review")
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@Html.T("إغلاق", "Close")"></button>
            </div>
            <form asp-action="Reject" method="post" id="rejectForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="rejectReviewId" />
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="feather-alert-triangle me-2"></i>
                        @Html.T("سيتم إرسال إشعار للطالب يتضمن سبب الرفض", "The student will be notified with the rejection reason")
                    </div>
                    <div class="form-group">
                        <label class="form-label">@Html.T("سبب الرفض", "Rejection reason") <span class="text-danger">*</span></label>
                        <textarea name="reason" id="rejectReason" class="form-control" rows="3" placeholder="@Html.T("أدخل سبب رفض التقييم...", "Enter reason for rejecting the review...")" required></textarea>
                        <small class="form-text text-muted">@Html.T("سيتم إرسال هذا السبب إلى الطالب عبر البريد الإلكتروني", "This reason will be sent to the student by email")</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-x-circle me-2"></i>
                        رفض التقييم
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select all checkbox functionality
            $('#selectAll').on('change', function() {
                $('.review-checkbox').prop('checked', $(this).is(':checked'));
                updateBulkApproveButton();
            });

            // Individual checkbox change
            $('.review-checkbox').on('change', function() {
                updateBulkApproveButton();
            });

            function updateBulkApproveButton() {
                var checkedCount = $('.review-checkbox:checked').length;
                $('#bulkApproveBtn').prop('disabled', checkedCount === 0);
                if (checkedCount > 0) {
                    $('#bulkApproveBtn').text('الموافقة على المحدد (' + checkedCount + ')');
                } else {
                    $('#bulkApproveBtn').text('الموافقة على المحدد');
                }
            }
            
            // Form validation for reject
            $('#rejectForm').on('submit', function(e) {
                const reason = $('#rejectReason').val().trim();
                if (!reason) {
                    e.preventDefault();
                    alert('@Html.Raw(Html.T("يرجى إدخال سبب الرفض", "Please enter rejection reason").Replace("'", "\\'"))');
                    return false;
                }
            });
        });

        function showRejectModal(reviewId) {
            $('#rejectReviewId').val(reviewId);
            $('#rejectReason').val('');
            var rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
            rejectModal.show();
        }
    </script>
}

