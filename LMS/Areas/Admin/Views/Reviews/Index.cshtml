<!-- Main Content -->
<div class="main-content">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("قائمة التقييمات", "Reviews List")</h5>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="feather-download me-2"></i>@Html.T("تصدير", "Export")
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير CSV", "Export CSV") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file me-2 text-muted"></i>@Html.T("تصدير Excel", "Export Excel") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                        <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير PDF", "Export PDF") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="window.print()">
                                        <i class="feather-printer me-2 text-secondary"></i>@Html.T("طباعة", "Print")
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover" id="reviewsTable">
                            <thead>
                                <tr>
                                    <th>@Html.T("الطالب", "Student")</th>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th>@Html.T("التقييم", "Rating")</th>
                                    <th>@Html.T("التعليق", "Comment")</th>
                                    <th>@Html.T("التاريخ", "Date")</th>
                                    <th>@Html.T("الحالة", "Status")</th>
                                    <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var review in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (review.Student != null)
                                            {
                                                <div class="d-flex align-items-center gap-2">
                                                    <div class="avatar-text avatar-sm bg-soft-primary text-primary">
                                                        @review.Student.FirstName?.Substring(0, 1)
                                                    </div>
                                                    <div>
                                                        <span class="fw-semibold">@review.Student.FirstName @review.Student.LastName</span>
                                                    </div>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            @if (review.Course != null)
                                            {
                                                <span>@review.Course.Title</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-1">
                                                <span class="rating-stars">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (i <= review.Rating)
                                                        {
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                                                        }
                                                        else
                                                        {
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
                                                        }
                                                    }
                                                </span>
                                                <span class="fw-bold">@review.Rating.ToString("F1")</span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">
                                                @review.Comment
                                            </div>
                                        </td>
                                        <td>
                                            <span class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>
                                            @if (review.IsApproved)
                                            {
                                                <span class="badge bg-soft-success text-success">@Html.T("معتمد", "Approved")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-soft-warning text-warning">@Html.T("بانتظار المراجعة", "Pending review")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="hstack gap-2 justify-content-end">
                                                <a href="@Url.Action("Details", "Reviews", new { id = review.Id })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("التفاصيل", "Details")">
                                                    <i class="feather-eye"></i>
                                                </a>
                                                @if (!review.IsApproved)
                                                {
                                                    <form asp-action="Approve" asp-route-id="@review.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="avatar-text avatar-md text-success border-0 bg-transparent" data-bs-toggle="tooltip" title="@Html.T("اعتماد", "Approve")">
                                                            <i class="feather-check-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button type="button" class="avatar-text avatar-md text-warning" data-bs-toggle="tooltip" title="@Html.T("إلغاء الاعتماد", "Revoke approval")" onclick="showRejectModal('@review.Id')">
                                                        <i class="feather-x-circle"></i>
                                                    </button>
                                                }
                                                <div class="dropdown">
                                                    <a href="javascript:void(0)" class="avatar-text avatar-md" data-bs-toggle="dropdown">
                                                        <i class="feather-more-horizontal"></i>
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="@Url.Action("Reply", "Reviews", new { id = review.Id })">
                                                                <i class="feather-message-circle me-3"></i>
                                                                الرد
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@review.Id')">
                                                                <i class="feather-trash-2 me-3"></i>
                                                                حذف
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            var table = $('#reviewsTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[4, "desc"]],
                "pageLength": 25
            });

            $('.filter-all').on('click', function() {
                table.search('').columns().search('').draw();
            });

            $('.filter-approved').on('click', function() {
                table.column(5).search('معتمد').draw();
            });

            $('.filter-pending').on('click', function() {
                table.column(5).search('بانتظار المراجعة').draw();
            });

            $('.filter-5star, .filter-4star, .filter-3star, .filter-low').on('click', function(e) {
                var rating = $(this).attr('class').includes('5star') ? '5' : 
                             $(this).attr('class').includes('4star') ? '4' : 
                             $(this).attr('class').includes('3star') ? '3' : '[12]';
                table.column(2).search(rating, true, false).draw();
            });

            $('[data-bs-toggle="tooltip"]').tooltip();
        });

        function confirmDelete(reviewId) {
            if (confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا التقييم؟", "Are you sure you want to delete this review?").ToString().Replace("'", "\\'"))')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete", "Reviews")';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = reviewId;
                form.appendChild(input);
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                form.appendChild(tokenInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        function showRejectModal(reviewId) {
            $('#rejectReviewId').val(reviewId);
            var rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
            rejectModal.show();
        }
    </script>
}

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" data-bs-backdrop="false" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">
                    <i class="feather-x-circle me-2"></i>
                    رفض التقييم
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="@Html.T("إغلاق", "Close")"></button>
            </div>
            <form asp-action="Reject" method="post" id="rejectForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="rejectReviewId" />
                <div class="modal-body">
                    <div class="alert alert-warning mb-3">
                        <i class="feather-alert-triangle me-2"></i>
                        سيتم إرسال إشعار للطالب يتضمن سبب الرفض
                    </div>
                    <div class="form-group">
                        <label class="form-label">@Html.T("سبب الرفض", "Rejection reason") <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" placeholder="@Html.T("أدخل سبب رفض التقييم...", "Enter reason for rejecting the review...")" required></textarea>
                        <small class="form-text text-muted">@Html.T("سيتم إرسال هذا السبب إلى الطالب عبر البريد الإلكتروني", "This reason will be sent to the student by email")</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-x-circle me-2"></i>
                        رفض التقييم
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

