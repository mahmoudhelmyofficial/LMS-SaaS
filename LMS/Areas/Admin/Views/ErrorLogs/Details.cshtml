@model LMS.Domain.Entities.Settings.ApplicationError
@{
    ViewData["Title"] = Html.T("تفاصيل الخطأ", "Error details");
    ViewData["Breadcrumbs"] = new List<(string Name, string? Url)>
    {
        (Html.T("النظام", "System"), null),
        (Html.T("سجل الأخطاء", "Error logs"), Url.Action("Index")),
        (Html.T("تفاصيل الخطأ", "Error details"), null)
    };
}

<div class="main-content">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="feather-alert-triangle text-danger me-2"></i>
                @Html.T("تفاصيل الخطأ", "Error details") #@Model.Id
            </h5>
            <div>
                @if (!Model.IsResolved)
                {
                    <form method="post" asp-action="MarkResolved" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="feather-check me-1"></i> @Html.T("تحديد كمحلول", "Mark as resolved")
                        </button>
                    </form>
                }
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="feather-arrow-right me-1"></i> @Html.T("العودة", "Back")
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="150">@Html.T("الوقت", "Time"):</th>
                            <td>@Model.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        </tr>
                        <tr>
                            <th>@Html.T("المسار", "Path"):</th>
                            <td><code>@Model.Path</code></td>
                        </tr>
                        <tr>
                            <th>@Html.T("الطريقة", "Method"):</th>
                            <td><span class="badge bg-secondary">@Model.HttpMethod</span></td>
                        </tr>
                        <tr>
                            <th>@Html.T("كود الحالة", "Status code"):</th>
                            <td><span class="badge bg-danger">@Model.StatusCode</span></td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th width="150">@Html.T("المستخدم", "User"):</th>
                            <td>@(Model.UserName ?? "Anonymous")</td>
                        </tr>
                        <tr>
                            <th>@Html.T("الأدوار", "Roles"):</th>
                            <td>@(Model.UserRoles ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>@Html.T("عنوان IP:", "IP:")</th>
                            <td>@(Model.IpAddress ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>@Html.T("الحالة", "Status"):</th>
                            <td>
                                @if (Model.IsResolved)
                                {
                                    <span class="badge bg-success">@Html.T("محلول", "Resolved")</span>
                                    <small class="text-muted ms-2">@Model.ResolvedAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</small>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Html.T("غير محلول", "Unresolved")</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="mb-4">
                <h6><i class="feather-alert-circle text-danger me-2"></i> @Html.T("نوع الخطأ", "Exception type"):</h6>
                <code class="d-block p-2 bg-light rounded">@Model.ExceptionType</code>
            </div>

            <div class="mb-4">
                <h6><i class="feather-message-circle text-warning me-2"></i> @Html.T("رسالة الخطأ", "Error message"):</h6>
                <div class="alert alert-danger">@Model.Message</div>
            </div>

            @if (!string.IsNullOrEmpty(Model.InnerException))
            {
                <div class="mb-4">
                    <h6><i class="feather-layers text-info me-2"></i> @Html.T("الاستثناء الداخلي", "Inner Exception"):</h6>
                    <div class="alert alert-warning">@Model.InnerException</div>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.StackTrace))
            {
                <div class="mb-4">
                    <h6><i class="feather-code text-primary me-2"></i> @Html.T("تتبع المكدس", "Stack Trace"):</h6>
                    <pre class="bg-dark text-light p-3 rounded" style="max-height: 500px; overflow-y: auto; font-size: 12px;">@Model.StackTrace</pre>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.RequestInfo))
            {
                <div class="mb-4">
                    <h6><i class="feather-info text-secondary me-2"></i> @Html.T("معلومات الطلب", "Request info"):</h6>
                    <code class="d-block p-2 bg-light rounded">@Model.RequestInfo</code>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.UserAgent))
            {
                <div class="mb-4">
                    <h6><i class="feather-monitor text-secondary me-2"></i> @Html.T("وكيل المستخدم", "User Agent"):</h6>
                    <small class="text-muted">@Model.UserAgent</small>
                </div>
            }
        </div>
    </div>
</div>

