@{
    ViewData["Title"] = Html.T("إعدادات SEO", "SEO settings");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الإعدادات", "Settings"), Url.Action("Index", "Settings")),
        (Html.T("SEO", "SEO"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <form asp-action="Index" method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات SEO الأساسية", "Basic SEO Information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("عنوان الموقع (Title)", "Site Title")</label>
                            <input type="text" class="form-control" placeholder="@Html.T("منصة التعليم الإلكتروني", "E-Learning Platform")" />
                            <small class="text-muted">@Html.T("يظهر في تبويب المتصفح ونتائج البحث", "Shows in browser tab and search results")</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("وصف الموقع (Meta Description)", "Site Description (Meta)")</label>
                            <textarea class="form-control" rows="3" placeholder="@Html.T("منصة تعليمية متكاملة تقدم أفضل الدورات...", "Integrated learning platform offering the best courses...")"></textarea>
                            <small class="text-muted">@Html.T("155-160 حرف (يظهر في نتائج البحث)", "155-160 characters (shows in search results)")</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الكلمات المفتاحية (Keywords)", "Keywords")</label>
                            <input type="text" class="form-control" placeholder="@Html.T("دورات، تعليم، أونلاين", "courses, education, online")" />
                            <small class="text-muted">@Html.T("افصل بفواصل", "Separate with commas")</small>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("وسوم التواصل الاجتماعي", "Social Media Tags")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("صورة Open Graph", "Open Graph Image")</label>
                            <input type="file" class="form-control" />
                            <small class="text-muted">@Html.T("1200x630px موصى به", "1200x630px recommended")</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("نوع بطاقة Twitter", "Twitter Card Type")</label>
                            <select class="form-select">
                                <option>@Html.T("بطاقة ملخص مع صورة كبيرة", "Summary Card with Large Image")</option>
                                <option>@Html.T("بطاقة ملخص", "Summary Card")</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("أدوات Webmaster", "Webmaster Tools")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("التحقق من Google Search Console", "Google Search Console Verification")</label>
                            <input type="text" class="form-control" placeholder="google-site-verification=..." />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Html.T("التحقق من Bing Webmaster", "Bing Webmaster Verification")</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ الإعدادات", "Save settings")
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("خريطة الموقع", "Sitemap")</h5>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-3">آخر تحديث: @DateTime.Now.ToString("dd/MM/yyyy")</p>
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-light">
                                <i class="feather-refresh-cw me-2"></i>
                                إعادة إنشاء Sitemap
                            </button>
                            <a href="/sitemap.xml" target="_blank" class="btn btn-light">
                                <i class="feather-external-link me-2"></i>
                                عرض Sitemap
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
