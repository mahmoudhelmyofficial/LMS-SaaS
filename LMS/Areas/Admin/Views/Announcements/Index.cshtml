@model IEnumerable<LMS.Areas.Admin.ViewModels.AnnouncementDisplayViewModel>

@{
    ViewData["Title"] = Html.T("إدارة الإعلانات", "Announcement Management");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("التسويق", "Marketing"), null),
        (Html.T("الإعلانات", "Announcements"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إضافة إعلان", "Add announcement"), "feather-plus", Url.Action("Create", "Announcements", new { area = "Admin" }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .announcement-card {
            border-right: 4px solid #3454d1;
            transition: all 0.3s ease;
        }
        .announcement-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateX(-5px);
        }
        .announcement-preview {
            max-height: 100px;
            overflow: hidden;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <!-- Export Row -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">@Html.T("الإعلانات المتاحة", "Available announcements")</h5>
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="feather-download me-2"></i>@Html.T("تصدير", "Export")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير CSV", "Export CSV") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                <i class="feather-file me-2 text-muted"></i>@Html.T("تصدير Excel", "Export Excel") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item disabled" href="javascript:void(0)" title="@Html.T("قريباً", "Coming soon")">
                                <i class="feather-file-text me-2 text-muted"></i>@Html.T("تصدير PDF", "Export PDF") <small class="text-muted">(@Html.T("قريباً", "Coming soon"))</small>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="javascript:void(0)" onclick="window.print()">
                                <i class="feather-printer me-2 text-secondary"></i>@Html.T("طباعة", "Print")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var announcement in Model.OrderByDescending(a => a.CreatedAt))
            {
                <div class="col-lg-6 mb-4">
                    <div class="card announcement-card">
                        <div class="card-body">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-text bg-soft-primary text-primary">
                                        <i class="feather-bell"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0">@announcement.Title</h5>
                                        <small class="text-muted">@announcement.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</small>
                                    </div>
                                </div>
                                <div class="dropdown">
                                    <a href="javascript:void(0)" data-bs-toggle="dropdown">
                                        <i class="feather-more-vertical"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("Edit", "Announcements", new { area = "Admin", id = announcement.Id })">
                                                <i class="feather-edit me-3"></i>
                                                تعديل
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-area="Admin" asp-action="Duplicate" asp-route-id="@announcement.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="dropdown-item">
                                                    <i class="feather-copy me-3"></i>
                                                    نسخ
                                                </button>
                                            </form>
                                        </li>
                                        @if (announcement.IsActive)
                                        {
                                            <li>
                                                <form asp-area="Admin" asp-action="TogglePin" asp-route-id="@announcement.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="feather-@(announcement.IsPinned ? "bookmark" : "bookmark-plus") me-3"></i>
                                                        @(announcement.IsPinned ? "إلغاء التثبيت" : "تثبيت")
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Edit", "Announcements", new { area = "Admin", id = announcement.Id })">
                                                    <i class="feather-eye me-3"></i>
                                                    تفعيل
                                                </a>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@announcement.Id')">
                                                <i class="feather-trash-2 me-3"></i>
                                                حذف
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="announcement-preview mb-3">
                                <p class="text-muted">@announcement.Content</p>
                            </div>

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex gap-2">
                                    @if (announcement.IsActive)
                                    {
                                        <span class="badge bg-soft-success text-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-secondary text-secondary">معطل</span>
                                    }
                                    
                                    @if (announcement.IsPinned)
                                    {
                                        <span class="badge bg-soft-warning text-warning">
                                            <i class="feather-bookmark me-1"></i>
                                            @Html.T("مثبت", "Pinned")
                                        </span>
                                    }
                                    @if (announcement.ShowOnLandingPage)
                                    {
                                        <span class="badge bg-soft-info text-info">
                                            <i class="feather-home me-1"></i>
                                            @Html.T("على الصفحة الرئيسية", "On landing")
                                        </span>
                                    }

                                    @switch (announcement.Priority)
                                    {
                                        case "Critical":
                                        case "High":
                                            <span class="badge bg-soft-danger text-danger">أولوية عالية</span>
                                            break;
                                        case "Normal":
                                            <span class="badge bg-soft-warning text-warning">أولوية متوسطة</span>
                                            break;
                                        case "Low":
                                            <span class="badge bg-soft-info text-info">أولوية منخفضة</span>
                                            break;
                                    }
                                </div>
                                <div class="text-muted">
                                    <i class="feather-eye me-1"></i>
                                    <span>@announcement.ViewsCount مشاهدة</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-bell fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد إعلانات بعد", "No announcements yet")</h5>
                        <p class="text-muted mb-4">ابدأ بإنشاء إعلانات للتواصل مع المستخدمين</p>
                        <a href="@Url.Action("Create", "Announcements", new { area = "Admin" })" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            إضافة إعلان جديد
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(announcementId) {
            if (confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذا الإعلان؟", "Are you sure you want to delete this announcement?").ToString().Replace("'", "\\'"))')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("Delete", "Announcements", new { area = "Admin" })' + '?id=' + announcementId;
                
                const idInput = document.createElement('input');
                idInput.type = 'hidden';
                idInput.name = 'id';
                idInput.value = announcementId;
                form.appendChild(idInput);
                
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
                form.appendChild(tokenInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
    @Html.AntiForgeryToken()
}

