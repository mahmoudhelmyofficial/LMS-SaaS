@model IEnumerable<LMS.Areas.Admin.ViewModels.LearningPathDisplayViewModel>

@{
    ViewData["Title"] = Html.T("مسارات التعلم", "Learning Paths");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدورات", "Courses"), null),
        (Html.T("المسارات التعليمية", "Learning Paths"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("إنشاء مسار", "Create path"), "feather-plus", Url.Action("Create", "LearningPaths"), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .learning-path-card {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        .learning-path-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }
        .learning-path-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .course-node {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: white;
            border: 3px solid #3454d1;
            position: relative;
            flex-shrink: 0;
        }
        .course-connector {
            height: 3px;
            background: #e5e7eb;
            flex-grow: 1;
            min-width: 20px;
        }
        /* Fix description overflow */
        .path-description {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            max-height: 3em;
            line-height: 1.5em;
            word-break: break-word;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

@{
    var totalEnrollments = Model?.Sum(p => p.EnrollmentsCount) ?? 0;
    var activePaths = Model?.Count(p => p.IsActive) ?? 0;
    var featuredPaths = Model?.Count(p => p.IsFeatured) ?? 0;
    var totalHours = Model?.Sum(p => p.EstimatedDurationHours) ?? 0;
}

@section StatsCards {
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-map"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي المسارات", "Total paths")</span>
                            <h3 class="fw-bolder d-block">@Model.Count().ToString("N0")</h3>
                        </div>
                    </div>
                    <div class="badge bg-soft-success text-success">@activePaths @Html.T("نشط", "Active")</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي المتدربين", "Total enrollments")</span>
                            <h3 class="fw-bolder d-block">@totalEnrollments.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-book"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("دورات في المسارات", "Courses in paths")</span>
                            <h3 class="fw-bolder d-block">@Model.Sum(p => p.CoursesCount).ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xxl-3 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-clock"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("إجمالي الساعات", "Total hours")</span>
                            <h3 class="fw-bolder d-block">@totalHours.ToString("N0") @Html.T("ساعة", "hr(s)")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var path in Model)
            {
                <div class="col-lg-12 mb-4">
                    <div class="card learning-path-card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-start gap-3 mb-3">
                                        <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                                            <i class="feather-map"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center gap-2 mb-2">
                                                <h5 class="mb-0">@path.Name</h5>
                                                @if (path.IsActive)
                                                {
                                                    <span class="badge bg-soft-success text-success">@Html.T("منشور", "Published")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("مسودة", "Draft")</span>
                                                }
                                                @if (path.IsFeatured)
                                                {
                                                    <span class="badge bg-soft-warning text-warning">
                                                        <i class="feather-star me-1"></i>
                                                        @Html.T("مميز", "Featured")
                                                    </span>
                                                }
                                            </div>
                                            <p class="text-muted mb-3 path-description" title="@path.Description">@(path.Description?.Length > 150 ? path.Description.Substring(0, 150) + "..." : path.Description)</p>
                                            
                                            <!-- Course Path Visualization -->
                                            @if (path.CoursesCount > 0)
                                            {
                                                <div class="d-flex align-items-center gap-2 mb-3" style="overflow-x: auto;">
                                                    @for (int i = 0; i < Math.Min(path.CoursesCount, 5); i++)
                                                    {
                                                        <div class="course-node bg-primary text-white">
                                                            <i class="feather-book"></i>
                                                        </div>
                                                        @if (i < Math.Min(path.CoursesCount, 5) - 1)
                                                        {
                                                            <div class="course-connector"></div>
                                                        }
                                                    }
                                                    @if (path.CoursesCount > 5)
                                                    {
                                                        <span class="text-muted">+@(path.CoursesCount - 5) @Html.T("دورة", "course(s)")</span>
                                                    }
                                                </div>
                                            }

                                            <div class="d-flex align-items-center gap-3">
                                                <small class="text-muted">
                                                    <i class="feather-book me-1"></i>
                                                    @path.CoursesCount @Html.T("دورات", "courses")
                                                </small>
                                                <small class="text-muted">
                                                    <i class="feather-clock me-1"></i>
                                                    @path.EstimatedDurationHours @Html.T("ساعة", "hr(s)")
                                                </small>
                                                <small class="text-muted">
                                                    <i class="feather-users me-1"></i>
                                                    @path.EnrollmentsCount @Html.T("متدرب", "enrollment(s)")
                                                </small>
                                                @if (!string.IsNullOrEmpty(path.Level))
                                                {
                                                    <span class="badge bg-soft-info text-info">@path.Level</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-end">
                                        <div class="mb-3">
                                            @if (path.Price > 0)
                                            {
                                                <h4 class="text-primary mb-0">@path.Price.ToString("N0") @Html.T("ج.م", "EGP")</h4>
                                            }
                                            else
                                            {
                                                <h4 class="text-success mb-0">@Html.T("مجاني", "Free")</h4>
                                            }
                                        </div>
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="@Url.Action("Edit", "LearningPaths", new { id = path.Id })" class="btn btn-light">
                                                <i class="feather-edit me-1"></i>
                                                @Html.T("تعديل", "Edit")
                                            </a>
                                            <a href="@Url.Action("Details", "LearningPaths", new { id = path.Id })" class="btn btn-light">
                                                <i class="feather-eye"></i>
                                            </a>
                                            <div class="dropdown">
                                                <button class="btn btn-light" data-bs-toggle="dropdown">
                                                    <i class="feather-more-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    <li>
                                                        <form asp-action="Duplicate" asp-controller="LearningPaths" asp-route-id="@path.Id" method="post" class="d-inline w-100">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="dropdown-item">
                                                                <i class="feather-copy me-3"></i>
                                                                @Html.T("نسخ", "Duplicate")
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="@Url.Action("Statistics", "LearningPaths", new { id = path.Id })">
                                                            <i class="feather-bar-chart-2 me-3"></i>
                                                            @Html.T("إحصائيات", "Statistics")
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <form asp-action="ToggleStatus" asp-controller="LearningPaths" asp-route-id="@path.Id" method="post" class="d-inline w-100">
                                                            @Html.AntiForgeryToken()
                                                            @if (path.IsActive)
                                                            {
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="feather-eye-off me-3"></i>
                                                                    @Html.T("إلغاء النشر", "Unpublish")
                                                                </button>
                                                            }
                                                            else
                                                            {
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="feather-eye me-3"></i>
                                                                    @Html.T("نشر", "Publish")
                                                                </button>
                                                            }
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li>
                                                        <a class="dropdown-item text-danger" href="javascript:void(0)" onclick="confirmDelete('@path.Id')">
                                                            <i class="feather-trash-2 me-3"></i>
                                                            @Html.T("حذف", "Delete")
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="feather-map fs-1 text-muted mb-3"></i>
                        <h5>@Html.T("لا توجد مسارات تعليمية بعد", "No learning paths yet")</h5>
                        <p class="text-muted mb-4">@Html.T("ابدأ بإنشاء مسارات تعليمية لتنظيم الدورات", "Start by creating learning paths to organize courses")</p>
                        <a href="@Url.Action("Create", "LearningPaths")" class="btn btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إنشاء مسار جديد", "Create new path")
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Hidden form for delete operations -->
<form id="deleteForm" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteId" value="" />
</form>

@section Scripts {
    <script>
        function confirmDelete(pathId) {
            if (confirm('@(Html.T("هل أنت متأكد من حذف هذا المسار؟", "Are you sure you want to delete this path?"))')) {
                var form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "LearningPaths")';
                document.getElementById('deleteId').value = pathId;
                form.submit();
            }
        }
    </script>
}

