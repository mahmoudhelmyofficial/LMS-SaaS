@model LMS.Areas.Admin.Controllers.CourseCreateViewModel

@{
    ViewData["Title"] = Html.T("إضافة دورة جديدة", "Add New Course");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (Html.T("إضافة دورة جديدة", "Add New Course"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    
    var categories = ViewBag.Categories as IEnumerable<LMS.Domain.Entities.Courses.Category>;
    var instructors = ViewBag.Instructors as IEnumerable<LMS.Domain.Entities.Users.InstructorProfile>;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/select2.min.css" />
    <style>
        .image-upload-box {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .image-upload-box:hover {
            border-color: #3454d1;
            background-color: #f8f9fa;
        }
        .image-preview {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form asp-action="Create" method="post" enctype="multipart/form-data" id="courseForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <!-- Main Form -->
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المعلومات الأساسية", "Basic Information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@Html.T("عنوان الدورة", "Course Title") <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" placeholder="@Html.T("أدخل عنوان الدورة", "Enter course title")" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ShortDescription" class="form-label">@Html.T("الوصف المختصر", "Short Description")</label>
                            <input asp-for="ShortDescription" class="form-control" placeholder="@Html.T("وصف مختصر للدورة", "Brief course description")" />
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Html.T("وصف الدورة", "Course Description") <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="@Html.T("وصف تفصيلي للدورة", "Detailed course description")" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="InstructorId" class="form-label">@Html.T("المدرس", "Instructor") <span class="text-danger">*</span></label>
                                <select asp-for="InstructorId" class="form-select select2" required>
                                    <option value="">@Html.T("اختر المدرس", "Select Instructor")</option>
                                    @if (instructors != null)
                                    {
                                        @foreach (var instructor in instructors)
                                        {
                                            <option value="@instructor.UserId">@instructor.User?.FirstName @instructor.User?.LastName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="InstructorId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">@Html.T("التصنيف", "Category") <span class="text-danger">*</span></label>
                                <select asp-for="CategoryId" class="form-select select2" required>
                                    <option value="">اختر التصنيف</option>
                                    @if (categories != null)
                                    {
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Level" class="form-label">@Html.T("مستوى الدورة", "Course level")</label>
                                <select asp-for="Level" class="form-select">
                                    <option value="@LMS.Domain.Enums.CourseLevel.Beginner">مبتدئ</option>
                                    <option value="@LMS.Domain.Enums.CourseLevel.Intermediate">متوسط</option>
                                    <option value="@LMS.Domain.Enums.CourseLevel.Advanced">متقدم</option>
                                    <option value="@LMS.Domain.Enums.CourseLevel.AllLevels">جميع المستويات</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Language" class="form-label">@Html.T("اللغة", "Language")</label>
                                <select asp-for="Language" class="form-select">
                                    <option value="ar">@Html.T("العربية", "Arabic")</option>
                                    <option value="en">@Html.T("الإنجليزية", "English")</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Thumbnail -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">صورة الدورة</h5>
                    </div>
                    <div class="card-body">
                        <div class="image-upload-box" onclick="document.getElementById('thumbnailInput').click()">
                            <input type="file" id="thumbnailInput" name="Thumbnail" accept="image/*" style="display: none;" onchange="previewImage(event)">
                            <div id="uploadPlaceholder">
                                <i class="feather-upload fs-1 text-muted mb-3 d-block"></i>
                                <p class="mb-0">انقر لرفع صورة الدورة</p>
                                <small class="text-muted">الحجم الموصى به: 1280x720 بكسل</small>
                            </div>
                            <img id="imagePreview" class="image-preview" style="display: none;">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Actions -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">إجراءات</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                حفظ الدورة
                            </button>
                            <a asp-action="Index" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">التسعير</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="isFreeSwitch" asp-for="IsFree" onchange="togglePrice()">
                            <label class="form-check-label" for="isFreeSwitch">
                                دورة مجانية
                            </label>
                        </div>

                        <div id="priceFields">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">@Html.T("السعر ($)", "Price ($)")</label>
                                <input asp-for="Price" type="number" class="form-control" step="0.01" min="0" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tips -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">نصائح</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                اختر عنواناً واضحاً وجذاباً
                            </li>
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                استخدم صورة عالية الجودة
                            </li>
                            <li class="mb-2">
                                <i class="feather-check-circle text-success me-2"></i>
                                اكتب وصفاً تفصيلياً
                            </li>
                            <li>
                                <i class="feather-check-circle text-success me-2"></i>
                                حدد المستوى بدقة
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/vendors/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                dir: 'rtl',
                language: 'ar'
            });

            togglePrice();
        });

        function togglePrice() {
            var isFree = $('#isFreeSwitch').is(':checked');
            $('#priceFields').toggle(!isFree);
        }

        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function() {
                var preview = $('#imagePreview');
                preview.attr('src', reader.result);
                preview.show();
                $('#uploadPlaceholder').hide();
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
