@model LMS.Domain.Entities.Courses.Course

@{
    ViewData["Title"] = Html.T("تعديل الدورة", "Edit Course");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (Html.T("تعديل الدورة", "Edit course"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/select2.min.css" />
    <style>
        .image-upload-box {
            border: 2px dashed #ddd;
            border-radius: 8px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .image-upload-box:hover {
            border-color: #3454d1;
            background-color: #f8f9fa;
        }
        .current-image {
            max-width: 100%;
            max-height: 200px;
            border-radius: 8px;
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="InstructorId" />
        <input type="hidden" asp-for="CreatedAt" />
        
        <div class="row">
            <!-- Main Form -->
            <div class="col-lg-8">
                <!-- Basic Information -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المعلومات الأساسية", "Basic information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">@Html.T("عنوان الدورة", "Course title") <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subtitle" class="form-label">@Html.T("العنوان الفرعي", "Subtitle")</label>
                            <input asp-for="Subtitle" class="form-control" />
                            <span asp-validation-for="Subtitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">@Html.T("وصف الدورة", "Course description") <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label">@Html.T("التصنيف", "Category") <span class="text-danger">*</span></label>
                                <select asp-for="CategoryId" class="form-select select2" required>
                                    <option value="">@Html.T("اختر التصنيف", "Select category")</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var category in ViewBag.Categories as IEnumerable<LMS.Domain.Entities.Courses.Category>)
                                        {
                                            <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Level" class="form-label">@Html.T("مستوى الدورة", "Course level")</label>
                                <select asp-for="Level" class="form-select">
                                    <option value="">@Html.T("اختر المستوى", "Select level")</option>
                                    <option value="0">@Html.T("مبتدئ", "Beginner")</option>
                                    <option value="1">@Html.T("متوسط", "Intermediate")</option>
                                    <option value="2">@Html.T("متقدم", "Advanced")</option>
                                    <option value="3">@Html.T("جميع المستويات", "All levels")</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Html.T("اللغة", "Language")</label>
                            <select asp-for="Language" class="form-select">
                                <option value="ar">@Html.T("العربية", "Arabic")</option>
                                <option value="en">@Html.T("الإنجليزية", "English")</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Course Content -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("محتوى الدورة", "Course content")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="WhatYouWillLearn" class="form-label">@Html.T("ما ستتعلمه", "What you'll learn")</label>
                            <textarea asp-for="WhatYouWillLearn" class="form-control" rows="4"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Requirements" class="form-label">@Html.T("المتطلبات", "Requirements")</label>
                            <textarea asp-for="Requirements" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TargetAudience" class="form-label">@Html.T("الجمهور المستهدف", "Target audience")</label>
                            <textarea asp-for="TargetAudience" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <!-- Thumbnail -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("صورة الدورة", "Course image")</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">@Html.T("الصورة الحالية", "Current image")</label>
                                <div class="text-center">
                                    <img src="@Model.ThumbnailUrl" alt="@Model.Title" class="current-image mb-2" />
                                </div>
                            </div>
                        }
                        
                        <div class="image-upload-box" onclick="document.getElementById('thumbnailInput').click()">
                            <input type="file" id="thumbnailInput" name="Thumbnail" accept="image/*" style="display: none;" onchange="previewImage(event)">
                            <div id="uploadPlaceholder">
                                <i class="feather-upload fs-1 text-muted mb-3"></i>
                                <p class="mb-0">@Html.T("انقر لتغيير صورة الدورة", "Click to change course image")</p>
                                <small class="text-muted">@Html.T("الحجم الموصى به: 1280x720 بكسل", "Recommended size: 1280x720 pixels")</small>
                            </div>
                            <img id="imagePreview" class="current-image" style="display: none;">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Actions -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("إجراءات", "Actions")</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-save me-2"></i>
                                @Html.T("حفظ التغييرات", "Save changes")
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                @Html.T("إلغاء", "Cancel")
                            </a>
                            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline w-100">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger w-100" onclick="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الدورة؟ سيتم حذف جميع المحتوى المرتبط بها.", "Are you sure you want to delete this course? All related content will be deleted.").Replace("'", "\\'"))');">
                                    <i class="feather-trash-2 me-2"></i>
                                    @Html.T("حذف الدورة", "Delete course")
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("التسعير", "Pricing")</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="isFreeSwitch" asp-for="IsFree" onchange="togglePrice()">
                            <label class="form-check-label" for="isFreeSwitch">
                                @Html.T("دورة مجانية", "Free course")
                            </label>
                        </div>

                        <div id="priceFields">
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label">@Html.T("السعر (ر.س)", "Price (SAR)")</label>
                                <input asp-for="Price" type="number" class="form-control" step="0.01" min="0" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="DiscountPrice" class="form-label">@Html.T("سعر الخصم", "Discount price")</label>
                                <input asp-for="DiscountPrice" type="number" class="form-control" step="0.01" min="0" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("حالة الدورة", "Course status")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">@Html.T("الحالة", "Status")</label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">@Html.T("مسودة", "Draft")</option>
                                <option value="1">@Html.T("قيد المراجعة", "Under review")</option>
                                <option value="2">@Html.T("منشورة", "Published")</option>
                                <option value="3">@Html.T("مؤرشفة", "Archived")</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Info -->
                <div class="card stretch stretch-full">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("معلومات إضافية", "Additional information")</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="text-muted d-block mb-1">@Html.T("تاريخ الإنشاء", "Created")</label>
                            <span class="fw-semibold">@Model.CreatedAt.ToString("dd/MM/yyyy hh:mm tt")</span>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted d-block mb-1">@Html.T("آخر تحديث", "Last updated")</label>
                            <span class="fw-semibold">@(Model.UpdatedAt?.ToString("dd/MM/yyyy hh:mm tt") ?? "لا يوجد")</span>
                        </div>
                        <div class="mb-3">
                            <label class="text-muted d-block mb-1">@Html.T("عدد الطلاب", "Students count")</label>
                            <span class="fw-semibold">@Model.TotalStudents.ToString("N0")</span>
                        </div>
                        <div>
                            <label class="text-muted d-block mb-1">@Html.T("التقييم", "Rating")</label>
                            <div class="d-flex align-items-center gap-1">
                                <i class="feather-star text-warning"></i>
                                <span class="fw-semibold">@Model.AverageRating.ToString("F1")</span>
                                <span class="text-muted">(@Model.ReviewCount)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/assets/vendors/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                dir: 'rtl',
                language: 'ar'
            });

            togglePrice();
        });

        function togglePrice() {
            var isFree = $('#isFreeSwitch').is(':checked');
            $('#priceFields').toggle(!isFree);
        }

        function previewImage(event) {
            var reader = new FileReader();
            reader.onload = function() {
                var preview = $('#imagePreview');
                preview.attr('src', reader.result);
                preview.show();
                $('#uploadPlaceholder').hide();
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}

