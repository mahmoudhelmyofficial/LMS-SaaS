@model LMS.Domain.Entities.Courses.Course

@{
    ViewData["Title"] = Html.T("نسخ الدورة", "Duplicate course");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدورات", "Courses"), Url.Action("Index", "Courses")),
        (Html.T("تفاصيل الدورة", "Course details"), Url.Action("Details", "Courses", new { id = Model.Id })),
        (Html.T("نسخ الدورة", "Duplicate course"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="feather-copy me-2"></i>
                        تأكيد نسخ الدورة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <i class="feather-info me-2"></i>
                        سيتم إنشاء نسخة جديدة من هذه الدورة مع جميع الوحدات والدروس.
                        <br>
                        <strong>ملاحظة:</strong> لن يتم نسخ التسجيلات أو التقييمات.
                    </div>

                    <div class="border rounded p-4 mb-4">
                        <h5 class="mb-3">@Model.Title</h5>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="d-flex align-items-center">
                                    <i class="feather-user me-2 text-primary"></i>
                                    <div>
                                        <small class="text-muted">المدرس</small>
                                        <div>@Model.Instructor?.FirstName @Model.Instructor?.LastName</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center">
                                    <i class="feather-layers me-2 text-success"></i>
                                    <div>
                                        <small class="text-muted">الوحدات</small>
                                        <div>@ViewBag.ModulesCount وحدة</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="d-flex align-items-center">
                                    <i class="feather-play-circle me-2 text-warning"></i>
                                    <div>
                                        <small class="text-muted">الدروس</small>
                                        <div>@ViewBag.LessonsCount درس</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <i class="feather-alert-triangle me-2"></i>
                        <strong>تنبيه:</strong> سيتم إنشاء الدورة المنسوخة بحالة "مسودة" وستحتاج إلى المراجعة قبل النشر.
                    </div>

                    <form asp-action="DuplicateConfirm" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light">
                                <i class="feather-x me-2"></i>
                                إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather-copy me-2"></i>
                                نسخ الدورة
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

