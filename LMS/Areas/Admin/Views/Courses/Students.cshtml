@model IEnumerable<LMS.Domain.Entities.Learning.Enrollment>

@{
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
    ViewData["Title"] = Html.T("طلاب الدورة", "Course students") + " - " + (course?.Title ?? "");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (course?.Title ?? Html.T("الدورة", "Course"), Url.Action("Details", "Courses", new { id = course?.Id })),
        (Html.T("الطلاب", "Students"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    @if (!string.IsNullOrEmpty(course?.ThumbnailUrl))
                    {
                        <img src="@course.ThumbnailUrl" alt="@course.Title" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="avatar-text avatar-xl bg-soft-primary text-primary">
                            <i class="feather-book"></i>
                        </div>
                    }
                    <div>
                        <h4 class="mb-1">@course?.Title</h4>
                        <p class="text-muted mb-0">@ViewBag.TotalStudents طالب مسجل</p>
                    </div>
                </div>
                <a href="@Url.Action("Details", "Courses", new { id = course?.Id })" class="btn btn-light-brand">
                    <i class="feather-arrow-right me-2"></i>عودة للدورة
                </a>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-primary text-primary">
                            <i class="feather-users"></i>
                        </div>
                        <div>
                            <span class="text-muted">إجمالي الطلاب</span>
                            <h3 class="fw-bold mb-0">@ViewBag.TotalStudents</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-info text-info">
                            <i class="feather-activity"></i>
                        </div>
                        <div>
                            <span class="text-muted">نشط</span>
                            <h3 class="fw-bold mb-0">@Model.Count(e => e.Status == LMS.Domain.Enums.EnrollmentStatus.Active)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-success text-success">
                            <i class="feather-check-circle"></i>
                        </div>
                        <div>
                            <span class="text-muted">مكتمل</span>
                            <h3 class="fw-bold mb-0">@Model.Count(e => e.Status == LMS.Domain.Enums.EnrollmentStatus.Completed)</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card stretch stretch-full">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-trending-up"></i>
                        </div>
                        <div>
                            <span class="text-muted">متوسط التقدم</span>
                            <h3 class="fw-bold mb-0">@(Model.Any() ? Model.Average(e => e.ProgressPercentage).ToString("F0") : "0")%</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Students Table -->
    <div class="card stretch stretch-full">
        <div class="card-header">
            <h5 class="card-title">@Html.T("قائمة الطلاب", "Students list")</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>@Html.T("الطالب", "Student")</th>
                                <th>@Html.T("البريد الإلكتروني", "Email")</th>
                                <th>@Html.T("التقدم", "Progress")</th>
                                <th>@Html.T("الحالة", "Status")</th>
                                <th>@Html.T("المبلغ المدفوع", "Amount paid")</th>
                                <th>@Html.T("تاريخ التسجيل", "Enrollment date")</th>
                                <th class="text-end">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                                @(enrollment.Student?.FirstName?.Substring(0, 1) ?? "")@(enrollment.Student?.LastName?.Substring(0, 1) ?? "")
                                            </div>
                                            <span class="fw-semibold">@enrollment.Student?.FirstName @enrollment.Student?.LastName</span>
                                        </div>
                                    </td>
                                    <td>@enrollment.Student?.Email</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="progress" style="width: 100px; height: 6px;">
                                                <div class="progress-bar bg-primary" style="width: @enrollment.ProgressPercentage%"></div>
                                            </div>
                                            <span class="small">@enrollment.ProgressPercentage%</span>
                                        </div>
                                    </td>
                                    <td>
                                        @switch (enrollment.Status)
                                        {
                                            case LMS.Domain.Enums.EnrollmentStatus.Active:
                                                <span class="badge bg-soft-primary text-primary">نشط</span>
                                                break;
                                            case LMS.Domain.Enums.EnrollmentStatus.Completed:
                                                <span class="badge bg-soft-success text-success">مكتمل</span>
                                                break;
                                            case LMS.Domain.Enums.EnrollmentStatus.Cancelled:
                                                <span class="badge bg-soft-danger text-danger">ملغي</span>
                                                break;
                                            case LMS.Domain.Enums.EnrollmentStatus.Expired:
                                                <span class="badge bg-soft-warning text-warning">منتهي</span>
                                                break;
                                            default:
                                                <span class="badge bg-soft-secondary text-secondary">@enrollment.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (enrollment.PaidAmount > 0)
                                        {
                                            <span class="fw-semibold">$@enrollment.PaidAmount.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">مجاني</span>
                                        }
                                    </td>
                                    <td>@enrollment.EnrolledAt.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end">
                                        <a href="@Url.Action("Details", "Students", new { id = enrollment.StudentId })" class="avatar-text avatar-md" data-bs-toggle="tooltip" title="@Html.T("عرض الطالب", "View student")">
                                            <i class="feather-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-secondary text-secondary mx-auto mb-3">
                        <i class="feather-users"></i>
                    </div>
                    <h5>@Html.T("لا يوجد طلاب", "No students")</h5>
                    <p class="text-muted">@Html.T("لا يوجد طلاب مسجلين في هذه الدورة", "No students enrolled in this course")</p>
                </div>
            }
        </div>
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Students", new { id = course?.Id, page = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}

