@model LMS.Domain.Entities.Courses.Course

@{
    ViewData["Title"] = Html.T("تفاصيل الدورة", "Course Details");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("إدارة الدورات", "Course Management"), Url.Action("Index", "Courses")),
        (Html.T("تفاصيل الدورة", "Course Details"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    var actions = new List<(string Text, string Icon, string Url, string? CssClass)>
    {
        (Html.T("تعديل", "Edit"), "feather-edit", Url.Action("Edit", "Courses", new { id = Model.Id }), "btn-primary")
    };
    ViewData["HeaderActions"] = actions;
}

@section Styles {
    <style>
        .course-thumbnail-large {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 12px;
        }
        .stat-box {
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }
        .module-item {
            border-left: 3px solid #3454d1;
            transition: all 0.3s ease;
        }
        .module-item:hover {
            background-color: #f8f9fa;
            transform: translateX(-5px);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Course Overview -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                    {
                        <img src="@Model.ThumbnailUrl" alt="@Model.Title" class="course-thumbnail-large mb-4">
                    }
                    
                    <div class="d-flex align-items-center gap-3 mb-3">
                        @if (Model.Category != null)
                        {
                            <span class="badge bg-soft-primary text-primary">@Model.Category.Name</span>
                        }
                        <span class="badge bg-soft-info text-info">@Model.Level</span>
                        <span class="badge @(Model.IsFree ? "bg-soft-success text-success" : "bg-soft-warning text-warning")">
                            @(Model.IsFree ? Html.T("مجاني", "Free") : Model.Price.ToEGP())
                        </span>
                    </div>

                    <h3 class="fw-bold mb-3">@Model.Title</h3>
                    
                    <div class="mb-4">
                        <h5 class="mb-2">@Html.T("الوصف", "Description")</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    @if (Model.CourseRequirements != null && Model.CourseRequirements.Any())
                    {
                        <div class="mb-4">
                            <h5 class="mb-2">@Html.T("المتطلبات", "Requirements")</h5>
                            <ul class="text-muted">
                                @foreach (var req in Model.CourseRequirements)
                                {
                                    <li>@req.Text</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.CourseWhatYouWillLearn != null && Model.CourseWhatYouWillLearn.Any())
                    {
                        <div>
                            <h5 class="mb-2">ما ستتعلمه</h5>
                            <ul class="text-muted">
                                @foreach (var item in Model.CourseWhatYouWillLearn)
                                {
                                    <li>@item.Text</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <!-- Course Content -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("محتوى الدورة", "Course content")</h5>
                    <div class="card-header-action">
                        <a href="@Url.Action("ManageModules", "Modules", new { courseId = Model.Id })" class="btn btn-sm btn-primary">
                            <i class="feather-plus me-2"></i>
                            @Html.T("إدارة المحتوى", "Manage content")
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Modules != null && Model.Modules.Any())
                    {
                        <div class="accordion" id="courseModules">
                            @foreach (var module in Model.Modules.OrderBy(m => m.OrderIndex))
                            {
                                <div class="accordion-item mb-2">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#module-@module.Id">
                                            <div class="d-flex align-items-center gap-3 w-100">
                                                <i class="feather-folder text-primary"></i>
                                                <span class="fw-semibold">@module.Title</span>
                                                <span class="badge bg-soft-primary text-primary ms-auto me-3">@module.Lessons.Count() @Html.T("دروس", "lessons")</span>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="module-@module.Id" class="accordion-collapse collapse" data-bs-parent="#courseModules">
                                        <div class="accordion-body">
                                            @if (module.Lessons != null && module.Lessons.Any())
                                            {
                                                <div class="list-group list-group-flush">
                                                    @foreach (var lesson in module.Lessons.OrderBy(l => l.OrderIndex))
                                                    {
                                                        <div class="list-group-item d-flex align-items-center justify-content-between">
                                                            <div class="d-flex align-items-center gap-3">
                                                                <i class="feather-@(lesson.Type == LMS.Domain.Enums.LessonType.Video ? "video" : lesson.Type == LMS.Domain.Enums.LessonType.Article ? "file-text" : "play-circle") text-muted"></i>
                                                                <span>@lesson.Title</span>
                                                            </div>
                                                            <span class="text-muted">@lesson.Duration @Html.T("دقيقة", "min")</span>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted mb-0">@Html.T("لا توجد دروس في هذه الوحدة", "No lessons in this module")</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="feather-book-open fs-1 text-muted mb-3"></i>
                            <p class="text-muted">@Html.T("لا يوجد محتوى في هذه الدورة بعد", "No content in this course yet")</p>
                            <a href="@Url.Action("ManageModules", "Modules", new { courseId = Model.Id })" class="btn btn-primary">
                                <i class="feather-plus me-2"></i>
                                @Html.T("إضافة محتوى", "Add content")
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Reviews -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("التقييمات", "Reviews") (@Model.ReviewCount)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews.Take(5))
                        {
                            <div class="d-flex gap-3 mb-4 pb-4 border-bottom">
                                <div class="avatar-text bg-soft-primary text-primary">
                                    @review.Student?.FirstName?.Substring(0, 1)
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <h6 class="mb-0">@review.Student?.FirstName @review.Student?.LastName</h6>
                                        <div class="text-warning">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="feather-star"></i>
                                            }
                                        </div>
                                    </div>
                                    <p class="text-muted mb-0">@review.Comment</p>
                                    <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted mb-0">@Html.T("لا توجد تقييمات بعد", "No reviews yet")</p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Statistics -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إحصائيات الدورة", "Course statistics")</h5>
                </div>
                <div class="card-body">
                    <div class="stat-box bg-soft-primary mb-3">
                        <h3 class="text-primary mb-1">@Model.TotalStudents.ToString("N0")</h3>
                        <span class="text-muted">@Html.T("طالب مسجل", "Enrolled students")</span>
                    </div>
                    <div class="stat-box bg-soft-success mb-3">
                        <div class="d-flex align-items-center justify-content-center gap-2 mb-1">
                            <i class="feather-star text-warning"></i>
                            <h3 class="text-success mb-0">@Model.AverageRating.ToString("F1")</h3>
                        </div>
                        <span class="text-muted">@Html.T("التقييم", "Rating") (@Model.ReviewCount @Html.T("تقييم", "reviews"))</span>
                    </div>
                    <div class="stat-box bg-soft-info mb-3">
                        <h3 class="text-info mb-1">@Model.TotalDuration</h3>
                        <span class="text-muted">@Html.T("مدة الدورة (دقيقة)", "Duration (min)")</span>
                    </div>
                    <div class="stat-box bg-soft-warning">
                        <h3 class="text-warning mb-1">@(Model.Modules?.Count ?? 0)</h3>
                        <span class="text-muted">@Html.T("وحدة تعليمية", "Modules")</span>
                    </div>
                </div>
            </div>

            <!-- Instructor Info -->
            @if (Model.Instructor != null)
            {
                <div class="card stretch stretch-full mb-4">
                    <div class="card-header">
                        <h5 class="card-title">@Html.T("المدرس", "Instructor")</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-2">
                                @(!string.IsNullOrEmpty(Model.Instructor?.FirstName) ? Model.Instructor.FirstName.Substring(0, 1) : "")@(!string.IsNullOrEmpty(Model.Instructor?.LastName) ? Model.Instructor.LastName.Substring(0, 1) : "")
                            </div>
                            <h6 class="mb-1">@Model.Instructor?.FirstName @Model.Instructor?.LastName</h6>
                            <p class="text-muted mb-0">@(Model.Instructor?.InstructorProfile?.Specialization ?? Html.T("مدرس", "Instructor").ToString())</p>
                        </div>
                        <div class="d-flex justify-content-around text-center">
                            <div>
                                <h6 class="mb-0">@(Model.Instructor.InstructorProfile?.TotalCourses ?? 0)</h6>
                                <small class="text-muted">@Html.T("دورة", "Course(s)")</small>
                            </div>
                            <div>
                                <h6 class="mb-0">@(Model.Instructor.InstructorProfile?.TotalStudents ?? 0)</h6>
                                <small class="text-muted">@Html.T("طالب", "Student(s)")</small>
                            </div>
                            <div>
                                <h6 class="mb-0">@((Model.Instructor.InstructorProfile?.AverageRating ?? 0).ToString("F1"))</h6>
                                <small class="text-muted">@Html.T("تقييم", "Rating")</small>
                            </div>
                        </div>
                        <a href="@Url.Action("Details", "Instructors", new { id = Model.InstructorId })" class="btn btn-light-brand w-100 mt-3">
                            @Html.T("عرض الملف الشخصي", "View profile")
                        </a>
                    </div>
                </div>
            }

            <!-- Course Status -->
            <div class="card stretch stretch-full mb-4">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("حالة الدورة", "Course status")</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">@Html.T("الحالة الحالية", "Current status")</label>
                        <div>
                            @switch (Model.Status)
                            {
                                case LMS.Domain.Enums.CourseStatus.Published:
                                    <span class="badge bg-soft-success text-success">@Html.T("منشورة", "Published")</span>
                                    break;
                                case LMS.Domain.Enums.CourseStatus.PendingReview:
                                    <span class="badge bg-soft-warning text-warning">@Html.T("قيد المراجعة", "Pending review")</span>
                                    break;
                                case LMS.Domain.Enums.CourseStatus.Draft:
                                    <span class="badge bg-soft-secondary text-secondary">@Html.T("مسودة", "Draft")</span>
                                    break;
                                case LMS.Domain.Enums.CourseStatus.Archived:
                                    <span class="badge bg-soft-danger text-danger">@Html.T("مؤرشفة", "Archived")</span>
                                    break;
                            }
                        </div>
                    </div>

                    @if (Model.Status == LMS.Domain.Enums.CourseStatus.PendingReview)
                    {
                        <div class="d-grid gap-2">
                            <form asp-action="Approve" asp-controller="Courses" asp-area="Admin" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="feather-check me-2"></i>
                                    @Html.T("الموافقة على الدورة", "Approve course")
                                </button>
                            </form>
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="feather-x me-2"></i>
                                @Html.T("رفض الدورة", "Reject course")
                            </button>
                        </div>
                    }

                    <div class="mt-3">
                        <small class="text-muted d-block">@Html.T("تاريخ الإنشاء:", "Created:") @Model.CreatedAt.ToString("dd/MM/yyyy")</small>
                        <small class="text-muted d-block">@Html.T("آخر تحديث:", "Last updated:") @(Model.UpdatedAt?.ToString("dd/MM/yyyy") ?? Html.T("لا يوجد", "N/A").ToString())</small>
                        @if (Model.PublishedAt.HasValue)
                        {
                            <small class="text-muted d-block">@Html.T("تاريخ النشر:", "Published:") @Model.PublishedAt.Value.ToString("dd/MM/yyyy")</small>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card stretch stretch-full">
                <div class="card-header">
                    <h5 class="card-title">@Html.T("إجراءات سريعة", "Quick actions")</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("Students", "Courses", new { id = Model.Id })" class="list-group-item list-group-item-action">
                            <i class="feather-users me-3"></i>
                            @Html.T("الطلاب المسجلين", "Enrolled students")
                        </a>
                        <a href="@Url.Action("Analytics", "CourseAnalytics", new { id = Model.Id })" class="list-group-item list-group-item-action">
                            <i class="feather-bar-chart-2 me-3"></i>
                            @Html.T("التحليلات", "Analytics")
                        </a>
                        <a href="@Url.Action("Reviews", "Courses", new { id = Model.Id })" class="list-group-item list-group-item-action">
                            <i class="feather-star me-3"></i>
                            @Html.T("إدارة التقييمات", "Manage reviews")
                        </a>
                        <a href="@Url.Action("Duplicate", "Courses", new { id = Model.Id })" class="list-group-item list-group-item-action">
                            <i class="feather-copy me-3"></i>
                            @Html.T("نسخ الدورة", "Duplicate course")
                        </a>
                        @if (Model.Status == LMS.Domain.Enums.CourseStatus.Published)
                        {
                            <a href="javascript:void(0)" class="list-group-item list-group-item-action text-warning" data-bs-toggle="modal" data-bs-target="#suspendModal">
                                <i class="feather-pause-circle me-3"></i>
                                @Html.T("تعليق الدورة", "Suspend course")
                            </a>
                        }
                        @if (Model.Status == LMS.Domain.Enums.CourseStatus.Suspended)
                        {
                            <form asp-action="Reactivate" asp-controller="Courses" method="post" class="d-inline w-100">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="list-group-item list-group-item-action text-success border-0 bg-transparent text-start w-100">
                                    <i class="feather-play-circle me-3"></i>
                                    @Html.T("إعادة تفعيل الدورة", "Reactivate course")
                                </button>
                            </form>
                        }
                        <form asp-action="ToggleFeatured" asp-controller="Courses" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="list-group-item list-group-item-action border-0 bg-transparent text-start w-100 @(Model.IsFeatured ? "text-secondary" : "text-warning")">
                                <i class="feather-star me-3"></i>
                                @(Model.IsFeatured ? Html.T("إلغاء التمييز", "Remove featured") : Html.T("تمييز الدورة", "Feature course"))
                            </button>
                        </form>
                        <form asp-action="Delete" asp-controller="Courses" method="post" class="d-inline w-100" onsubmit="return confirm('@Html.Raw(Html.T("هل أنت متأكد من حذف هذه الدورة؟ سيتم حذف جميع المحتوى المرتبط بها.", "Are you sure you want to delete this course? All related content will be deleted.").Replace("'", "\\'"))')">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="list-group-item list-group-item-action text-danger border-0 bg-transparent text-start w-100">
                                <i class="feather-trash-2 me-3"></i>
                                حذف الدورة
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" data-bs-backdrop="false" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" asp-controller="Courses" asp-area="Admin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">
                        <i class="feather-x-circle text-danger me-2"></i>
                        رفض الدورة
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Html.T("إغلاق", "Close")"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="feather-alert-triangle me-2"></i>
                        @Html.T("سيتم إرسال إشعار للمدرس بسبب الرفض", "The instructor will be notified of the rejection")
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.T("سبب الرفض", "Rejection reason") <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="4" required 
                                  placeholder="@Html.T("أدخل سبب رفض الدورة بالتفصيل ليتمكن المدرس من تصحيح المشكلة...", "Enter the reason for rejecting the course in detail so the instructor can fix the issue...")"></textarea>
                        <small class="text-muted">@Html.T("يرجى توضيح السبب بشكل واضح لمساعدة المدرس على تحسين الدورة", "Please explain the reason clearly to help the instructor improve the course")</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="feather-x me-2"></i>
                        @Html.T("رفض الدورة", "Reject Course")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Suspend Modal -->
<div class="modal fade" id="suspendModal" tabindex="-1" data-bs-backdrop="false" aria-labelledby="suspendModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Suspend" asp-controller="Courses" asp-area="Admin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-header">
                    <h5 class="modal-title" id="suspendModalLabel">
                        <i class="feather-pause-circle text-warning me-2"></i>
                        @Html.T("تعليق الدورة", "Suspend Course")
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="@Html.T("إغلاق", "Close")"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="feather-alert-triangle me-2"></i>
                        @Html.T("سيتم إيقاف التسجيلات الجديدة وإرسال إشعار للمدرس والطلاب المسجلين", "New enrollments will be stopped and the instructor and enrolled students will be notified")
                    </div>
                    <div class="mb-3">
                        <label class="form-label">@Html.T("سبب التعليق (اختياري)", "Suspension reason (optional)")</label>
                        <textarea name="reason" class="form-control" rows="3" 
                                  placeholder="@Html.T("أدخل سبب تعليق الدورة...", "Enter the reason for suspending the course...")"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">@Html.T("إلغاء", "Cancel")</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="feather-pause me-2"></i>
                        @Html.T("تعليق الدورة", "Suspend Course")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
