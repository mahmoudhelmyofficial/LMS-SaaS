@model IEnumerable<LMS.Domain.Entities.Courses.Course>

@{
    ViewData["Title"] = Html.T("الدورات المميزة", "Featured courses");
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدورات", "Courses"), Url.Action("Index", "Courses")),
        (Html.T("الدورات المميزة", "Featured courses"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
    ViewData["ShowStats"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/dataTables.bs5.min.css" />
}

@await Html.PartialAsync("_PageHeader")

@section StatsCards {
    <div class="col-xxl-4 col-md-6">
        <div class="card stretch stretch-full">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-text avatar-xl rounded bg-soft-warning text-warning">
                            <i class="feather-star"></i>
                        </div>
                        <div>
                            <span class="text-truncate-1-line">@Html.T("الدورات المميزة", "Featured courses")</span>
                            <h3 class="fw-bolder d-block">@ViewBag.TotalFeatured</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main Content -->
<div class="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card stretch stretch-full">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title">@Html.T("الدورات المميزة", "Featured courses")</h5>
                    <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                        <i class="feather-list me-1"></i>
                        @Html.T("جميع الدورات", "All courses")
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="avatar-text avatar-xl rounded-circle bg-soft-warning text-warning mx-auto mb-3">
                                <i class="feather-star"></i>
                            </div>
                            <h5>@Html.T("لا توجد دورات مميزة", "No featured courses")</h5>
                            <p class="text-muted">@Html.T("يمكنك تمييز الدورات من صفحة تفاصيل الدورة", "You can feature courses from the course details page")</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="featuredCoursesTable">
                                <thead>
                                    <tr>
                                        <th>@Html.T("الدورة", "Course")</th>
                                        <th>@Html.T("المدرس", "Instructor")</th>
                                        <th>@Html.T("التصنيف", "Category")</th>
                                        <th>@Html.T("السعر", "Price")</th>
                                        <th>@Html.T("التقييم", "Rating")</th>
                                        <th>@Html.T("الطلاب", "Students")</th>
                                        <th class="text-end">@Html.T("الإجراءات", "Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = course.Id })" class="hstack gap-3">
                                                    <div class="avatar-image avatar-md rounded" style="background-image: url('@(course.ThumbnailUrl ?? "/assets/images/placeholder-course.png")'); background-size: cover;"></div>
                                                    <div>
                                                        <span class="text-truncate-1-line fw-semibold">@course.Title</span>
                                                        <small class="text-muted">@course.Duration @Html.T("دقيقة", "min")</small>
                                                    </div>
                                                </a>
                                            </td>
                                            <td>
                                                @if (course.Instructor != null)
                                                {
                                                    <span>@course.Instructor.FirstName @course.Instructor.LastName</span>
                                                }
                                            </td>
                                            <td>
                                                @if (course.Category != null)
                                                {
                                                    <span class="badge bg-soft-primary text-primary">@course.Category.Name</span>
                                                }
                                            </td>
                                            <td>
                                                @if (course.IsFree)
                                                {
                                                    <span class="badge bg-soft-success text-success">@Html.T("مجاني", "Free")</span>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold">@course.Price.ToString("N0") @Html.T("ر.س", "SAR")</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-1">
                                                    <i class="feather-star text-warning"></i>
                                                    <span>@course.AverageRating.ToString("F1")</span>
                                                </div>
                                            </td>
                                            <td>@course.EnrollmentCount</td>
                                            <td class="text-end">
                                                <div class="hstack gap-2 justify-content-end">
                                                    <a href="@Url.Action("Details", new { id = course.Id })" class="btn btn-sm btn-outline-primary">
                                                        <i class="feather-eye"></i>
                                                    </a>
                                                    <form asp-action="ToggleFeatured" asp-route-id="@course.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="@Html.T("إلغاء التمييز", "Remove featured")">
                                                            <i class="feather-star-off"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/vendors/js/dataTables.min.js"></script>
    <script src="~/assets/vendors/js/dataTables.bs5.min.js"></script>
    <script>
        $(document).ready(function() {
            var dataTableLangUrl = "@(Html.IsRtl() ? "//cdn.datatables.net/plug-ins/1.13.7/i18n/ar.json" : "//cdn.datatables.net/plug-ins/1.13.7/i18n/en-GB.json")";
            $('#featuredCoursesTable').DataTable({
                "language": { "url": dataTableLangUrl },
                "order": [[5, "desc"]],
                "pageLength": 25
            });
        });
    </script>
}

