@model IEnumerable<LMS.Domain.Entities.Social.Review>
@{
    ViewData["Title"] = Html.T("مراجعات الدورة", "Course reviews");
    var course = ViewBag.Course as LMS.Domain.Entities.Courses.Course;
    var breadcrumbs = new List<(string Name, string? Url)>
    {
        (Html.T("الدورات", "Courses"), Url.Action("Index", "Courses")),
        (course?.Title ?? Html.T("الدورة", "Course"), Url.Action("Details", "Courses", new { id = course?.Id })),
        (Html.T("المراجعات", "Reviews"), null)
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

@section Styles {
    <style>
        .course-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .rating-stars {
            color: #ffc107;
        }
        .review-card {
            transition: all 0.3s;
            border-right: 4px solid transparent;
        }
        .review-card:hover {
            border-right-color: #667eea;
            transform: translateX(-3px);
        }
    </style>
}

@await Html.PartialAsync("_PageHeader")

<div class="main-content">
    @await Html.PartialAsync("_AlertMessages")

    <!-- Course Header -->
    <div class="course-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h3 class="text-white mb-2">@course?.Title</h3>
                <p class="text-white opacity-75 mb-0">مراجعات وتقييمات الطلاب</p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="d-flex align-items-center justify-content-md-end gap-3">
                    <div class="text-center">
                        <div class="rating-stars mb-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= (int)(ViewBag.AverageRating ?? 0))
                                {
                                    <i class="feather-star fill"></i>
                                }
                                else
                                {
                                    <i class="feather-star"></i>
                                }
                            }
                        </div>
                        <small class="text-white">@((ViewBag.AverageRating ?? 0).ToString("F1")) / 5.0</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-primary text-primary mx-auto mb-3">
                        <i class="feather-star fs-4"></i>
                    </div>
                    <h4 class="mb-1">@(ViewBag.TotalReviews ?? 0)</h4>
                    <small class="text-muted">إجمالي التقييمات</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-success text-success mx-auto mb-3">
                        <i class="feather-check-circle fs-4"></i>
                    </div>
                    <h4 class="mb-1">@(ViewBag.ApprovedReviews ?? 0)</h4>
                    <small class="text-muted">موافق عليها</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-warning text-warning mx-auto mb-3">
                        <i class="feather-clock fs-4"></i>
                    </div>
                    <h4 class="mb-1">@(ViewBag.PendingReviews ?? 0)</h4>
                    <small class="text-muted">في الانتظار</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stretch stretch-full">
                <div class="card-body text-center">
                    <div class="avatar-text avatar-lg bg-soft-info text-info mx-auto mb-3">
                        <i class="feather-trending-up fs-4"></i>
                    </div>
                    <h4 class="mb-1">@((ViewBag.AverageRating ?? 0).ToString("F1"))</h4>
                    <small class="text-muted">متوسط التقييم</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews List -->
    <div class="card stretch stretch-full">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="feather-message-square me-2"></i>
                التقييمات (@(ViewBag.TotalReviews ?? 0))
            </h5>
            <a asp-action="Details" asp-route-id="@course?.Id" class="btn btn-light">
                <i class="feather-arrow-left me-2"></i>
                العودة للدورة
            </a>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                @foreach (var review in Model)
                {
                    <div class="card review-card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar-text avatar-md bg-soft-primary text-primary">
                                        @review.Student?.FirstName?.Substring(0, 1)
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@review.Student?.FirstName @review.Student?.LastName</h6>
                                        <small class="text-muted">@review.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="rating-stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="feather-star fill"></i>
                                            }
                                            else
                                            {
                                                <i class="feather-star"></i>
                                            }
                                        }
                                    </div>
                                    @if (review.IsApproved)
                                    {
                                        <span class="badge bg-soft-success text-success">موافق عليه</span>
                                    }
                                    else if (review.IsRejected)
                                    {
                                        <span class="badge bg-soft-danger text-danger">مرفوض</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-soft-warning text-warning">في الانتظار</span>
                                    }
                                </div>
                            </div>
                            <p class="mb-3">@review.Comment</p>
                            <div class="d-flex gap-2">
                                <a asp-controller="Reviews" asp-action="Details" asp-route-id="@review.Id" class="btn btn-sm btn-light">
                                    <i class="feather-eye me-1"></i>
                                    عرض
                                </a>
                                @if (!review.IsApproved && !review.IsRejected)
                                {
                                    <form asp-controller="Reviews" asp-action="Approve" asp-route-id="@review.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="feather-check me-1"></i>
                                            موافقة
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if ((ViewBag.TotalPages ?? 0) > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= (int)(ViewBag.TotalPages ?? 1); i++)
                            {
                                <li class="page-item @(i == (int)(ViewBag.Page ?? 1) ? "active" : "")">
                                    <a class="page-link" asp-action="Reviews" asp-route-id="@(course?.Id ?? 0)" asp-route-page="@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="avatar-text avatar-xl bg-soft-primary text-primary mx-auto mb-3">
                        <i class="feather-star fs-1"></i>
                    </div>
                    <h5 class="mb-2">لا توجد تقييمات</h5>
                    <p class="text-muted">لم يقم أي طالب بتقييم هذه الدورة حتى الآن</p>
                </div>
            }
        </div>
    </div>
</div>

