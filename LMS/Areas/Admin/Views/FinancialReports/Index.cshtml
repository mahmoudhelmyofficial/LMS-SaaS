@using LMS.Services.Interfaces
@model LMS.Services.FinancialDashboard
@inject IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("التقارير المالية", "Financial Reports");
    ViewData["ActiveMenu"] = "FinancialReports";
    
    // Load UI settings
    var topCoursesLimit = await PlatformSettings.GetIntSettingAsync("UI.RecentItems.Limit", 5);
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="fas fa-chart-line text-primary me-2"></i>
                        @Html.T("التقارير المالية", "Financial Reports")
                    </h1>
                    <p class="text-muted mb-0">
                        @Html.T("من", "From") @Model.FromDate.ToString("dd/MM/yyyy") @Html.T("إلى", "to") @Model.ToDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
                <div class="d-flex gap-2">
                    <form method="get" class="d-flex gap-2 align-items-center">
                        <input type="date" name="fromDate" value="@Model.FromDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        <span class="text-muted">@Html.T("إلى", "To")</span>
                        <input type="date" name="toDate" value="@Model.ToDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-filter"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Main KPIs -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50 mb-2">@Html.T("إجمالي الإيرادات", "Total Revenue")</h6>
                            <h3 class="mb-0">@Model.TotalRevenue.ToString("N0") @Html.T("ج.م", "EGP")</h3>
                        </div>
                        <div class="text-white-50">
                            <i class="fas fa-coins fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <span class="@(Model.RevenueGrowth >= 0 ? "text-success" : "text-danger")">
                            <i class="fas fa-@(Model.RevenueGrowth >= 0 ? "arrow-up" : "arrow-down") me-1"></i>
                            @Math.Abs(Model.RevenueGrowth).ToString("F1")%
                        </span>
                        @Html.T("مقارنة بالفترة السابقة", "vs previous period")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">@Html.T("صافي الإيرادات", "Net Revenue")</h6>
                            <h3 class="mb-0 text-success">@Model.NetRevenue.ToString("N0") @Html.T("ج.م", "EGP")</h3>
                        </div>
                        <div class="text-success opacity-50">
                            <i class="fas fa-hand-holding-usd fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        @Html.T("بعد خصم المستردات", "After deducting refunds")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">@Html.T("عدد المعاملات", "Transaction count")</h6>
                            <h3 class="mb-0">@Model.TotalTransactions</h3>
                        </div>
                        <div class="text-info opacity-50">
                            <i class="fas fa-receipt fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        @Html.T("متوسط قيمة الطلب", "Avg. order value"): @Model.AverageOrderValue.ToString("N0") @Html.T("ج.م", "EGP")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">@Html.T("المبالغ المستردة", "Refunded amounts")</h6>
                            <h3 class="mb-0 text-danger">@Model.TotalRefunds.ToString("N0") @Html.T("ج.م", "EGP")</h3>
                        </div>
                        <div class="text-danger opacity-50">
                            <i class="fas fa-undo fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        @Html.T("نسبة الاسترداد", "Refund rate"): @Model.RefundRate.ToString("F1")%
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <div class="col-xl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-area text-primary me-2"></i>
                        @Html.T("الإيرادات الشهرية", "Monthly revenue")
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie text-primary me-2"></i>
                        @Html.T("الإيرادات حسب المنتج", "Revenue by product")
                    </h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 280px; max-height: 350px;">
                    <div style="width: 100%; max-width: 280px; height: 250px;">
                        <canvas id="productChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row -->
    <div class="row g-4 mb-4">
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-credit-card text-primary me-2"></i>
                        @Html.T("أداء بوابات الدفع", "Payment gateways performance")
                    </h5>
                    <a asp-action="GatewayPerformance" class="btn btn-sm btn-outline-primary">
                        @Html.T("عرض التفاصيل", "View details")
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.T("البوابة", "Gateway")</th>
                                    <th class="text-end">@Html.T("الإيرادات", "Revenue")</th>
                                    <th class="text-end">@Html.T("النسبة", "Share")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gateway in Model.RevenueByGateway.OrderByDescending(g => g.Value))
                                {
                                    var percentage = Model.TotalRevenue > 0 ? (gateway.Value / Model.TotalRevenue * 100) : 0;
                                    <tr>
                                        <td>
                                            <i class="fas fa-credit-card text-primary me-2"></i>
                                            @gateway.Key
                                        </td>
                                        <td class="text-end fw-bold">@gateway.Value.ToString("N0") @Html.T("ج.م", "EGP")</td>
                                        <td class="text-end">
                                            <div class="progress" style="width: 80px; height: 8px;">
                                                <div class="progress-bar" style="width: @percentage%"></div>
                                            </div>
                                            <small class="text-muted">@percentage.ToString("F1")%</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap text-primary me-2"></i>
                        @Html.T("الدورات الأكثر إيراداً", "Top courses by revenue")
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>@Html.T("الدورة", "Course")</th>
                                    <th class="text-end">@Html.T("المبيعات", "Sales")</th>
                                    <th class="text-end">@Html.T("الإيرادات", "Revenue")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var rank = 1; }
                                @foreach (var course in Model.TopCoursesByRevenue.Take(topCoursesLimit))
                                {
                                    <tr>
                                        <td><span class="badge bg-primary">@rank</span></td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 200px;" title="@course.CourseTitle">
                                                @course.CourseTitle
                                            </div>
                                        </td>
                                        <td class="text-end">@course.SalesCount</td>
                                        <td class="text-end fw-bold text-success">@course.Revenue.ToString("N0") @Html.T("ج.م", "EGP")</td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row g-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt text-primary me-2"></i>
                        @Html.T("التقارير المتاحة", "Available reports")
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="DailyRevenue" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-calendar-day fa-2x text-primary mb-2"></i>
                                    <h6 class="mb-0">@Html.T("الإيرادات اليومية", "Daily revenue")</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="GatewayPerformance" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-credit-card fa-2x text-info mb-2"></i>
                                    <h6 class="mb-0">@Html.T("بوابات الدفع", "Payment gateways")</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="InstructorEarnings" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-chalkboard-teacher fa-2x text-success mb-2"></i>
                                    <h6 class="mb-0">@Html.T("أرباح المدربين", "Instructor earnings")</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="CouponUsage" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-tags fa-2x text-warning mb-2"></i>
                                    <h6 class="mb-0">@Html.T("استخدام الكوبونات", "Coupon usage")</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="Subscriptions" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-sync-alt fa-2x text-purple mb-2"></i>
                                    <h6 class="mb-0">@Html.T("الاشتراكات", "Subscriptions")</h6>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-4 col-lg-2">
                            <a asp-action="Refunds" class="card border h-100 text-decoration-none hover-shadow">
                                <div class="card-body text-center py-4">
                                    <i class="fas fa-undo fa-2x text-danger mb-2"></i>
                                    <h6 class="mb-0">@Html.T("المبالغ المستردة", "Refunds")</h6>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .hover-shadow:hover {
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transform: translateY(-2px);
        transition: all 0.2s;
    }
    .text-purple { color: #6f42c1; }
</style>
}

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Monthly Revenue Chart
    var revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
        type: 'line',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.MonthlyRevenue.Select(m => $"'{m.Year}/{m.Month}'")))],
            datasets: [{
                label: '@Html.Raw(Html.T("الإيرادات", "Revenue"))',
                data: [@string.Join(",", Model.MonthlyRevenue.Select(m => m.Revenue))],
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                fill: true,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) {
                            return value.toLocaleString() + ' @Html.Raw(Html.T("ج.م", "EGP"))';
                        }
                    }
                }
            }
        }
    });

    // Product Revenue Chart
    var productCtx = document.getElementById('productChart').getContext('2d');
    new Chart(productCtx, {
        type: 'doughnut',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.RevenueByProduct.Select(p => $"'{p.Key}'")))],
            datasets: [{
                data: [@string.Join(",", Model.RevenueByProduct.Select(p => p.Value))],
                backgroundColor: ['#0d6efd', '#198754', '#ffc107', '#6f42c1', '#0dcaf0']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            aspectRatio: 1.2,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        boxWidth: 12,
                        padding: 10,
                        font: {
                            size: 11
                        }
                    }
                }
            },
            cutout: '50%'
        }
    });
</script>
}

