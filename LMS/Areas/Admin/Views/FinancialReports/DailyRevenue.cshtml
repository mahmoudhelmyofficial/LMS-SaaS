@model List<LMS.Services.DailyRevenueReport>
@{
    ViewData["Title"] = Html.T("تقرير الإيرادات اليومية", "Daily revenue report");
    ViewData["ActiveMenu"] = "FinancialReports";
    var fromDate = ViewBag.FromDate as DateTime? ?? DateTime.UtcNow.AddDays(-30);
    var toDate = ViewBag.ToDate as DateTime? ?? DateTime.UtcNow;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <nav aria-label="@Html.T("مسار التنقل", "Breadcrumb")">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a asp-action="Index">@Html.T("التقارير المالية", "Financial reports")</a></li>
                            <li class="breadcrumb-item active">@Html.T("الإيرادات اليومية", "Daily revenue")</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calendar-day text-primary me-2"></i>
                        @Html.T("تقرير الإيرادات اليومية", "Daily revenue report")
                    </h1>
                </div>
                <div class="d-flex gap-2">
                    <form method="get" class="d-flex gap-2 align-items-center">
                        <input type="date" name="fromDate" value="@fromDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        <span class="text-muted">@Html.T("إلى", "To")</span>
                        <input type="date" name="toDate" value="@toDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-filter me-1"></i>فلترة
                        </button>
                    </form>
                    <div class="btn-group">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-download me-1"></i>تصدير
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/api/export/payments?format=csv&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")">
                                    <i class="fas fa-file-csv me-2 text-success"></i>تصدير CSV
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/api/export/payments?format=excel&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")">
                                    <i class="fas fa-file-excel me-2 text-primary"></i>تصدير Excel
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/api/export/payments?format=pdf&fromDate=@fromDate.ToString("yyyy-MM-dd")&toDate=@toDate.ToString("yyyy-MM-dd")">
                                    <i class="fas fa-file-pdf me-2 text-danger"></i>تصدير PDF
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="javascript:void(0)" onclick="window.print()">
                                    <i class="fas fa-print me-2 text-secondary"></i>طباعة
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("إجمالي الإيرادات", "Total revenue")</h6>
                    <h3 class="text-primary mb-0">@Model.Sum(d => d.TotalRevenue).ToString("N0") @Html.T("ج.م", "EGP")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("إجمالي المعاملات", "Total transactions")</h6>
                    <h3 class="text-info mb-0">@Model.Sum(d => d.TransactionCount)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("متوسط الإيرادات اليومية", "Average daily revenue")</h6>
                    <h3 class="text-success mb-0">@((Model.Count > 0 ? Model.Average(d => d.TotalRevenue) : 0).ToString("N0")) @Html.T("ج.م", "EGP")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("عملاء جدد", "New customers")</h6>
                    <h3 class="text-warning mb-0">@Model.Sum(d => d.NewCustomers)</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0">
                <i class="fas fa-chart-bar text-primary me-2"></i>
                رسم بياني للإيرادات
            </h5>
        </div>
        <div class="card-body">
            <canvas id="dailyChart" height="300"></canvas>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent">
            <h5 class="mb-0">
                <i class="fas fa-table text-primary me-2"></i>
                تفاصيل الإيرادات اليومية
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("التاريخ", "Date")</th>
                            <th class="text-end">@Html.T("إجمالي الإيرادات", "Total revenue")</th>
                            <th class="text-end">@Html.T("الدورات", "Courses")</th>
                            <th class="text-end">@Html.T("الكتب", "Books")</th>
                            <th class="text-end">@Html.T("الاشتراكات", "Subscriptions")</th>
                            <th class="text-center">@Html.T("المعاملات", "Transactions")</th>
                            <th class="text-center">@Html.T("عملاء جدد", "New customers")</th>
                            <th class="text-end">@Html.T("متوسط الطلب", "Average order")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day in Model.OrderByDescending(d => d.Date))
                        {
                            var isToday = day.Date.Date == DateTime.UtcNow.Date;
                            <tr class="@(isToday ? "table-primary" : "")">
                                <td>
                                    <div class="fw-bold">@day.Date.ToString("yyyy/MM/dd")</div>
                                    <small class="text-muted">@day.Date.ToString("dddd", new System.Globalization.CultureInfo("ar-EG"))</small>
                                </td>
                                <td class="text-end fw-bold text-success">@day.TotalRevenue.ToString("N2") ج.م</td>
                                <td class="text-end">@day.CourseRevenue.ToString("N2") ج.م</td>
                                <td class="text-end">@day.BookRevenue.ToString("N2") ج.م</td>
                                <td class="text-end">@day.SubscriptionRevenue.ToString("N2") ج.م</td>
                                <td class="text-center"><span class="badge bg-info">@day.TransactionCount</span></td>
                                <td class="text-center"><span class="badge bg-warning text-dark">@day.NewCustomers</span></td>
                                <td class="text-end">@day.AverageOrderValue.ToString("N2") ج.م</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th>@Html.T("الإجمالي", "Total")</th>
                            <th class="text-end">@Model.Sum(d => d.TotalRevenue).ToString("N2") @Html.T("ج.م", "EGP")</th>
                            <th class="text-end">@Model.Sum(d => d.CourseRevenue).ToString("N2") @Html.T("ج.م", "EGP")</th>
                            <th class="text-end">@Model.Sum(d => d.BookRevenue).ToString("N2") @Html.T("ج.م", "EGP")</th>
                            <th class="text-end">@Model.Sum(d => d.SubscriptionRevenue).ToString("N2") @Html.T("ج.م", "EGP")</th>
                            <th class="text-center">@Model.Sum(d => d.TransactionCount)</th>
                            <th class="text-center">@Model.Sum(d => d.NewCustomers)</th>
                            <th class="text-end">-</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('dailyChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.OrderBy(d => d.Date).Select(d => $"'{d.Date:MM/dd}'")))],
            datasets: [
                {
                    label: 'الدورات',
                    data: [@string.Join(",", Model.OrderBy(d => d.Date).Select(d => d.CourseRevenue))],
                    backgroundColor: '#0d6efd',
                    stack: 'revenue'
                },
                {
                    label: 'الكتب',
                    data: [@string.Join(",", Model.OrderBy(d => d.Date).Select(d => d.BookRevenue))],
                    backgroundColor: '#198754',
                    stack: 'revenue'
                },
                {
                    label: 'الاشتراكات',
                    data: [@string.Join(",", Model.OrderBy(d => d.Date).Select(d => d.SubscriptionRevenue))],
                    backgroundColor: '#6f42c1',
                    stack: 'revenue'
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' }
            },
            scales: {
                x: { stacked: true },
                y: {
                    stacked: true,
                    beginAtZero: true,
                    ticks: {
                        callback: function(value) { return value.toLocaleString() + ' ج.م'; }
                    }
                }
            }
        }
    });
</script>
}

