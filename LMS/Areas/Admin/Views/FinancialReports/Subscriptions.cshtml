@model LMS.Services.SubscriptionReport
@{
    ViewData["Title"] = Html.T("تقرير الاشتراكات", "Subscriptions report");
    ViewData["ActiveMenu"] = "FinancialReports";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <nav aria-label="@Html.T("مسار التنقل", "Breadcrumb")">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item"><a asp-action="Index">@Html.T("التقارير المالية", "Financial reports")</a></li>
                            <li class="breadcrumb-item active">@Html.T("الاشتراكات", "Subscriptions")</li>
                        </ol>
                    </nav>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-sync-alt text-primary me-2"></i>
                        @Html.T("تقرير الاشتراكات المتكررة", "Recurring subscriptions report")
                    </h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h6 class="text-white-50 mb-2">@Html.T("الإيرادات الشهرية المتكررة (MRR)", "Monthly Recurring Revenue (MRR)")</h6>
                    <h3 class="mb-0">@Model.MonthlyRecurringRevenue.ToString("N0") @Html.T("ج.م", "EGP")</h3>
                    <div class="mt-2 small">
                        <span class="@(Model.MrrGrowth >= 0 ? "" : "text-warning")">
                            <i class="fas fa-@(Model.MrrGrowth >= 0 ? "arrow-up" : "arrow-down") me-1"></i>
                            @Math.Abs(Model.MrrGrowth).ToString("F1")%
                        </span>
                        @Html.T("مقارنة بالشهر الماضي", "vs last month")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("الاشتراكات النشطة", "Active subscriptions")</h6>
                    <h3 class="text-success mb-0">@Model.ActiveSubscriptions</h3>
                    <small class="text-muted">@Html.T("من", "of") @Model.TotalSubscriptions @Html.T("إجمالي", "total")</small>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("معدل الإلغاء (Churn Rate)", "Churn rate")</h6>
                    <h3 class="@(Model.ChurnRate <= 5 ? "text-success" : Model.ChurnRate <= 10 ? "text-warning" : "text-danger") mb-0">
                        @Model.ChurnRate.ToString("F1")%
                    </h3>
                    <small class="text-muted">@Model.CancelledThisMonth إلغاء هذا الشهر</small>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-xl-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-muted mb-2">@Html.T("متوسط قيمة العميل (LTV)", "Customer LTV")</h6>
                    <h3 class="text-info mb-0">@Model.AverageCustomerLifetimeValue.ToString("N0") ج.م</h3>
                    <small class="text-muted">@Html.T("متوسط", "Avg") @Model.AverageSubscriptionDuration.ToString("F1") @Html.T("شهر", "month(s)")</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- MRR Trend Chart -->
        <div class="col-xl-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-area text-primary me-2"></i>
                        نمو الإيرادات الشهرية المتكررة
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="mrrChart" height="300"></canvas>
                </div>
            </div>
        </div>

        <!-- Subscription Status Distribution -->
        <div class="col-xl-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie text-primary me-2"></i>
                        توزيع حالات الاشتراك
                    </h5>
                </div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="statusChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Plans Performance -->
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-layer-group text-primary me-2"></i>
                        أداء خطط الاشتراك
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.T("الخطة", "Plan")</th>
                                    <th class="text-end">@Html.T("السعر", "Price")</th>
                                    <th class="text-center">@Html.T("المشتركين", "Subscribers")</th>
                                    <th class="text-end">@Html.T("الإيرادات", "Revenue")</th>
                                    <th class="text-center">@Html.T("معدل الإلغاء", "Churn rate")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var plan in Model.PlanPerformance.OrderByDescending(p => p.Revenue))
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-bold">@plan.PlanName</div>
                                            <small class="text-muted">@plan.BillingCycle</small>
                                        </td>
                                        <td class="text-end">@plan.Price.ToString("N0") ج.م</td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@plan.ActiveSubscribers</span>
                                        </td>
                                        <td class="text-end text-success fw-bold">@plan.Revenue.ToString("N0") ج.م</td>
                                        <td class="text-center">
                                            <span class="badge @(plan.ChurnRate <= 5 ? "bg-success" : plan.ChurnRate <= 10 ? "bg-warning" : "bg-danger")">
                                                @plan.ChurnRate.ToString("F1")%
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-primary me-2"></i>
                        أحدث نشاط الاشتراكات
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var activity in Model.RecentActivities.Take(8))
                        {
                            var iconClass = activity.Type switch
                            {
                                "New" => "fas fa-plus-circle text-success",
                                "Renewed" => "fas fa-redo text-info",
                                "Cancelled" => "fas fa-times-circle text-danger",
                                "Upgraded" => "fas fa-arrow-up text-primary",
                                "Downgraded" => "fas fa-arrow-down text-warning",
                                _ => "fas fa-circle text-secondary"
                            };
                            
                            <div class="list-group-item d-flex align-items-center gap-3">
                                <div class="avatar-text bg-light rounded-circle" 
                                     style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                                    <i class="@iconClass"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold">@activity.UserName</div>
                                    <small class="text-muted">
                                        @(activity.Type switch
                                        {
                                            "New" => "اشتراك جديد في",
                                            "Renewed" => "تجديد اشتراك",
                                            "Cancelled" => "إلغاء اشتراك",
                                            "Upgraded" => "ترقية إلى",
                                            "Downgraded" => "تخفيض إلى",
                                            _ => ""
                                        })
                                        @activity.PlanName
                                    </small>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@activity.Date.ToString("MM/dd HH:mm")</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Renewals & Expirations -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-calendar-alt text-primary me-2"></i>
                التجديدات والانتهاءات القادمة
            </h5>
            <div class="btn-group btn-group-sm">
                <button class="btn btn-outline-primary active" data-filter="all">@Html.T("الكل", "All")</button>
                <button class="btn btn-outline-primary" data-filter="renewals">@Html.T("تجديدات", "Renewals")</button>
                <button class="btn btn-outline-primary" data-filter="trials">@Html.T("انتهاء تجريبي", "Trial ended")</button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.T("المشترك", "Subscriber")</th>
                            <th>@Html.T("الخطة", "Plan")</th>
                            <th class="text-center">@Html.T("النوع", "Type")</th>
                            <th class="text-end">@Html.T("المبلغ", "Amount")</th>
                            <th class="text-end">@Html.T("التاريخ", "Date")</th>
                            <th class="text-center">@Html.T("الأيام المتبقية", "Days left")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var upcoming in Model.UpcomingRenewals.Take(10))
                        {
                            var daysRemaining = (upcoming.Date - DateTime.UtcNow).Days;
                            <tr>
                                <td>
                                    <div class="fw-bold">@upcoming.UserName</div>
                                    <small class="text-muted">@upcoming.UserEmail</small>
                                </td>
                                <td>@upcoming.PlanName</td>
                                <td class="text-center">
                                    @if (upcoming.IsTrialEnding)
                                    {
                                        <span class="badge bg-warning text-dark">@Html.T("انتهاء تجريبي", "Trial ended")</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@Html.T("تجديد", "Renewal")</span>
                                    }
                                </td>
                                <td class="text-end">@upcoming.Amount.ToString("N2") ج.م</td>
                                <td class="text-end">@upcoming.Date.ToString("yyyy/MM/dd")</td>
                                <td class="text-center">
                                    <span class="badge @(daysRemaining <= 3 ? "bg-danger" : daysRemaining <= 7 ? "bg-warning text-dark" : "bg-success")">
                                        @daysRemaining يوم
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // MRR Trend Chart
    new Chart(document.getElementById('mrrChart'), {
        type: 'line',
        data: {
            labels: [@Html.Raw(string.Join(",", Model.MrrTrend.Select(m => $"'{m.Month}'")))],
            datasets: [
                {
                    label: 'MRR',
                    data: [@string.Join(",", Model.MrrTrend.Select(m => m.MRR))],
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    fill: true,
                    tension: 0.4
                },
                {
                    label: 'اشتراكات جديدة',
                    data: [@string.Join(",", Model.MrrTrend.Select(m => m.NewMRR))],
                    borderColor: '#198754',
                    borderDash: [5, 5],
                    fill: false
                },
                {
                    label: 'إلغاءات',
                    data: [@string.Join(",", Model.MrrTrend.Select(m => -m.ChurnedMRR))],
                    borderColor: '#dc3545',
                    borderDash: [5, 5],
                    fill: false
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { callback: function(value) { return value.toLocaleString() + ' ج.م'; } }
                }
            }
        }
    });

    // Status Distribution Chart
    new Chart(document.getElementById('statusChart'), {
        type: 'doughnut',
        data: {
            labels: ['نشط', 'تجريبي', 'متأخر', 'ملغى'],
            datasets: [{
                data: [@Model.ActiveSubscriptions, @Model.TrialingSubscriptions, @Model.PastDueSubscriptions, @Model.CancelledSubscriptions],
                backgroundColor: ['#198754', '#0dcaf0', '#ffc107', '#dc3545']
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } }
        }
    });
</script>
}

