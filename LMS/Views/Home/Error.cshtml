@model LMS.Models.ErrorViewModel
@{
    ViewData["Title"] = Html.T("خطأ", "Error");
    
    if (User.Identity?.IsAuthenticated == true)
    {
        if (User.IsInRole("Student"))
        {
            Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
        }
        else if (User.IsInRole("Admin"))
        {
            Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
        }
        else if (User.IsInRole("Instructor"))
        {
            Layout = "~/Areas/Instructor/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @if (Model.StatusCode == 404)
                        {
                            <span>@Html.T("الصفحة غير موجودة", "Page Not Found")</span>
                        }
                        else if (Model.StatusCode == 401)
                        {
                            <span>@Html.T("غير مصرح", "Unauthorized")</span>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <span>@Html.T("ممنوع", "Forbidden")</span>
                        }
                        else
                        {
                            <span>@Html.T("حدث خطأ", "Error Occurred")</span>
                        }
                    </h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="display-1 text-danger mb-3">
                            @(Model.StatusCode)
                        </div>
                        <h4 class="text-muted mb-4">
                            @ViewBag.ErrorMessage
                        </h4>
                    </div>

                    <div class="alert alert-info" role="alert">
                        @if (Model.StatusCode == 404)
                        {
                            <p class="mb-0">
                                @Html.T("الصفحة التي تبحث عنها غير موجودة. قد تكون قد تم حذفها أو نقلها.", "The page you're looking for doesn't exist. It may have been moved or deleted.")
                            </p>
                        }
                        else if (Model.StatusCode == 401)
                        {
                            <p class="mb-0">
                                @Html.T("يجب عليك تسجيل الدخول للوصول إلى هذه الصفحة.", "You must be logged in to access this page.")
                            </p>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <p class="mb-0">
                                @Html.T("ليس لديك صلاحية للوصول إلى هذه الصفحة.", "You don't have permission to access this page.")
                            </p>
                        }
                        else
                        {
                            <p class="mb-0">
                                @Html.T("حدث خطأ غير متوقع أثناء معالجة طلبك. يرجى المحاولة مرة أخرى.", "An unexpected error occurred while processing your request. Please try again.")
                            </p>
                        }
                    </div>

                    @if (Context.Session != null && Context.Session.GetString("ErrorMessage") != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong>@Html.T("تفاصيل إضافية:", "Additional Details:")</strong><br />
                            @Context.Session.GetString("ErrorMessage")
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>@Html.T("معرف الطلب:", "Request ID:")</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="text-center mt-4">
                        @if (Model.StatusCode == 401)
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                @Html.T("تسجيل الدخول", "Login")
                            </a>
                        }
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-house-door me-1"></i>
                            @Html.T("العودة للصفحة الرئيسية", "Go Home")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .display-1 {
        font-size: 6rem;
        font-weight: 300;
    }
    
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

