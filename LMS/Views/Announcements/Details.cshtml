@model LMS.Domain.Entities.Notifications.SystemAnnouncement
@{
    ViewData["Title"] = Model?.Title ?? Html.T("تفاصيل الإعلان", "Announcement details");
    ViewData["Subtitle"] = Html.T("تفاصيل الإعلان", "Announcement details");
    var isInstructor = User.IsInRole("Instructor");
    var isStudent = User.IsInRole("Student");
    Layout = isInstructor ? "~/Areas/Instructor/Views/Shared/_Layout.cshtml" : (isStudent ? "~/Areas/Student/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_Layout.cshtml");
    var dashboardUrl = isInstructor ? Url.Action("Index", "Dashboard", new { area = "Instructor" }) : (isStudent ? Url.Action("Index", "Dashboard", new { area = "Student" }) : "/");
    var path = Context.Request.Path.Value ?? "";
    var announcementsBase = path.StartsWith("/Student/Announcements", StringComparison.OrdinalIgnoreCase) ? "/Student/Announcements" : (path.StartsWith("/Instructor/PlatformAnnouncements", StringComparison.OrdinalIgnoreCase) ? "/Instructor/PlatformAnnouncements" : "/Announcements");
    var announcementsUrl = path.StartsWith("/Announcements/", StringComparison.OrdinalIgnoreCase) && !path.StartsWith("/Student/", StringComparison.OrdinalIgnoreCase) && !path.StartsWith("/Instructor/", StringComparison.OrdinalIgnoreCase)
        ? (isStudent ? "/Student/Announcements" : (isInstructor ? "/Instructor/PlatformAnnouncements" : "/Announcements"))
        : announcementsBase;
}

<div class="page-header mb-4">
    <div class="page-header-left d-flex align-items-center">
        <div class="page-header-title">
            <h5 class="m-b-10">@ViewData["Title"]</h5>
            @if (ViewData["Subtitle"] != null)
            {
                <p class="fs-12 fw-medium text-muted mb-0">@ViewData["Subtitle"]</p>
            }
        </div>
        <ul class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="@dashboardUrl">@Html.T("الرئيسية", "Home")</a></li>
            <li class="breadcrumb-item"><a href="@announcementsUrl">@Html.T("الإعلانات", "Announcements")</a></li>
            <li class="breadcrumb-item active">@Html.T("التفاصيل", "Details")</li>
        </ul>
    </div>
    <div class="page-header-right ms-auto">
        <a href="@announcementsUrl" class="btn btn-outline-secondary btn-sm">
            <i class="feather-arrow-right"></i> @Html.T("العودة للإعلانات", "Back to Announcements")
        </a>
    </div>
</div>

@if (isInstructor)
{
    @await Html.PartialAsync("~/Areas/Instructor/Views/Shared/_AlertMessages.cshtml")
}
else if (isStudent)
{
    @await Html.PartialAsync("~/Areas/Student/Views/Shared/_AlertMessage.cshtml")
}

<div class="card border shadow-sm">
    <div class="card-body p-4">
        <div class="border-bottom pb-3 mb-3">
            <div class="d-flex align-items-center gap-2 flex-wrap mb-2">
                @if (Model.IsPinned)
                {
                    <span class="badge bg-warning text-dark"><i class="feather-anchor"></i> @Html.T("مثبت", "Pinned")</span>
                }
                <span class="badge bg-secondary">@(Model?.Type ?? "General")</span>
                <span class="badge bg-info">@(Model?.Priority ?? "Normal")</span>
            </div>
            <h2 class="h4 mb-2">@Model?.Title</h2>
            <div class="text-muted small d-flex flex-wrap gap-3">
                <span><i class="feather-calendar"></i> @Model?.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                <span><i class="feather-users"></i> @(Model?.Target ?? "All")</span>
                @if (Model?.ViewsCount > 0)
                {
                    <span><i class="feather-eye"></i> @Model.ViewsCount @Html.T("مشاهدة", "views")</span>
                }
                @if (Model?.CreatedByUser != null)
                {
                    <span><i class="feather-user"></i> @($"{Model.CreatedByUser.FirstName} {Model.CreatedByUser.LastName}")</span>
                }
                else if (Model?.CreatedBy != null)
                {
                    <span><i class="feather-user"></i> @Model.CreatedBy</span>
                }
            </div>
        </div>
        <div class="announcement-content" style="font-size: 1.05rem; line-height: 1.7;">
            @if (!string.IsNullOrEmpty(Model?.Content))
            {
                @Html.Raw(Model.Content)
            }
            else
            {
                <p class="text-muted mb-0">@Html.T("لا يوجد محتوى.", "No content.")</p>
            }
        </div>
        @if (Model?.StartDate.HasValue == true || Model?.EndDate.HasValue == true)
        {
            <div class="mt-4 pt-3 border-top">
                <h6 class="text-muted mb-2">@Html.T("الفترة", "Period")</h6>
                <ul class="list-unstyled mb-0 small">
                    @if (Model.StartDate.HasValue)
                    {
                        <li><i class="feather-play-circle text-success"></i> @Html.T("البدء:", "Start:") @Model.StartDate.Value.ToString("dd/MM/yyyy HH:mm")</li>
                    }
                    @if (Model.EndDate.HasValue)
                    {
                        <li><i class="feather-stop-circle text-danger"></i> @Html.T("الانتهاء:", "End:") @Model.EndDate.Value.ToString("dd/MM/yyyy HH:mm")</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@announcementsUrl" class="btn btn-outline-secondary">
        <i class="feather-arrow-right"></i> @Html.T("العودة للإعلانات", "Back to Announcements")
    </a>
</div>
