@{
    ViewData["Title"] = Html.T("الوصول مرفوض", "Access Denied");
    Layout = "~/Views/Shared/_ErrorDashboardLayout.cshtml";
    var adminEmail = "admin@lms.com";
}

@section Styles {
<style>
    .access-denied-wrapper {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    .access-denied-card {
        width: 100%;
        max-width: 600px;
    }
    .access-denied-card .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }
    .icon-container {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }
    .icon-container i {
        font-size: 50px;
        color: white;
    }
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    .btn-outline-secondary {
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-outline-secondary:hover {
        transform: translateY(-2px);
    }
    .alert-custom {
        background: #fff3cd;
        border: 2px solid #ffc107;
        border-radius: 10px;
        padding: 20px;
    }
</style>
}

<div class="access-denied-wrapper">
    <div class="access-denied-card">
        <div class="card">
            <div class="card-body p-5 text-center">
                <div class="icon-container">
                    <i class="feather-shield-off"></i>
                </div>
                
                <h1 class="display-4 fw-bold mb-3">@Html.T("الوصول مرفوض", "Access Denied")</h1>
                <h2 class="fs-18 fw-semibold text-muted mb-4">@Html.T("ليس لديك صلاحية الوصول", "You do not have access permission")</h2>
                
                <div class="alert-custom mb-4">
                    <p class="fs-15 fw-medium mb-2">
                        @(ViewBag.Message ?? Html.T("حسابك ليس لديه الصلاحيات المطلوبة للوصول إلى هذا النظام.", "Your account does not have the required permissions to access this system."))
                    </p>
                    <p class="fs-14 text-muted mb-0">
                        @(ViewBag.Details ?? Html.T("يرجى الاتصال بمدير النظام لتفعيل حسابك أو منحك الصلاحيات المناسبة.", "Please contact the system administrator to activate your account or grant you the appropriate permissions."))
                    </p>
                    
                    @if (ViewBag.CurrentRole != null && ViewBag.UserName != null)
                    {
                        <hr class="my-3">
                        <div class="text-start">
                            <p class="fs-14 mb-1">
                                <strong>@Html.T("المستخدم الحالي:", "Current User:")</strong> @ViewBag.UserName
                            </p>
                            <p class="fs-14 mb-0">
                                <strong>@Html.T("الدور الحالي:", "Current Role:")</strong> <span class="badge bg-info">@ViewBag.CurrentRole</span>
                            </p>
                        </div>
                    }
                </div>

                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    @if (ViewBag.DashboardUrl != null)
                    {
                        <a href="@ViewBag.DashboardUrl" class="btn btn-success">
                            <i class="feather-home me-2"></i>
                            @Html.T("العودة إلى لوحة التحكم", "Back to Dashboard")
                        </a>
                    }
                    
                    <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary">
                            <i class="feather-log-out me-2"></i>
                            @Html.T("تسجيل الخروج", "Sign Out")
                        </button>
                    </form>
                    
                    <a href="mailto:@adminEmail" class="btn btn-outline-secondary">
                        <i class="feather-mail me-2"></i>
                        @Html.T("الاتصال بالإدارة", "Contact Administration")
                    </a>
                </div>

                <div class="mt-4">
                    <p class="text-muted fs-13">
                        <i class="feather-info me-1"></i>
                        @Html.T("إذا كنت تعتقد أن هذا خطأ، يرجى التواصل مع فريق الدعم الفني", "If you believe this is an error, please contact the support team")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
