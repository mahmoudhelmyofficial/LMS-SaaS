@inject LMS.Services.Interfaces.IPlatformSettingsService PlatformSettings
@{
    ViewData["Title"] = Html.T("خطأ في إعادة تعيين كلمة المرور", "Password Reset Error");
    Layout = null;
    var platformFavicon = await PlatformSettings.GetPlatformFaviconAsync();
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - LMS Platform</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content(string.IsNullOrEmpty(platformFavicon) ? "~/assets/images/favicon.ico" : "~" + platformFavicon)">
    
    <!-- Google Fonts - Cairo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS RTL -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    
    <!-- Vendors CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/vendors/css/vendors.min.css">
    
    <style>
        :root {
            --primary: #004aad;
            --danger: #ef4444;
        }
        
        body {
            font-family: 'Cairo', sans-serif;
            direction: rtl;
            text-align: right;
            min-height: 100vh;
            background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 50%, #ffffff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .error-container {
            width: 100%;
            max-width: 480px;
        }
        
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            border: 1px solid rgba(239, 68, 68, 0.2);
            box-shadow: 0 8px 32px rgba(239, 68, 68, 0.1);
            overflow: hidden;
            text-align: center;
            padding: 3rem 2rem;
        }
        
        .error-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #ef4444, #dc2626);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
        }
        
        .error-icon i {
            font-size: 3rem;
            color: white;
        }
        
        .error-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #dc2626;
            margin-bottom: 1rem;
        }
        
        .error-message {
            font-size: 1rem;
            color: #64748b;
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        
        .btn-primary-custom {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            font-family: 'Cairo', sans-serif;
            color: white;
            background: linear-gradient(135deg, var(--primary), #1a5cb8);
            border: none;
            border-radius: 14px;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 74, 173, 0.35);
            color: white;
        }
    </style>
</head>

<body>
    <div class="error-container">
        <div class="glass-card">
            <div class="error-icon">
                <i class="feather-alert-triangle"></i>
            </div>
            <h1 class="error-title">@Html.T("حدث خطأ", "An Error Occurred")</h1>
            <p class="error-message">@ViewBag.Error</p>
            <a href="@Url.Action("Login", "Account")" class="btn-primary-custom">
                <i class="feather-arrow-right"></i>
                @Html.T("العودة لتسجيل الدخول", "Back to Sign In")
            </a>
        </div>
    </div>

    <!-- Vendors JS -->
    <script src="~/assets/vendors/js/vendors.min.js"></script>
</body>
</html>
