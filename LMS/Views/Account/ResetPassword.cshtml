@inject LMS.Services.Interfaces.IPlatformSettingsService PlatformSettings

@{
    ViewData["Title"] = Html.T("إعادة تعيين كلمة المرور", "Reset Password");
    Layout = null;
    var passwordMinLength = await PlatformSettings.GetIntSettingAsync("Security.PasswordMinLength", 8);
    var platformFavicon = await PlatformSettings.GetPlatformFaviconAsync();
}
<!DOCTYPE html>
<html lang="@Html.Lang()" dir="@Html.Dir()">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="@Html.T("إعادة تعيين كلمة المرور - LMS", "Reset Password - LMS")">
    <title>@ViewData["Title"] - LMS Platform</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content(string.IsNullOrEmpty(platformFavicon) ? "~/assets/images/favicon.ico" : "~" + platformFavicon)">
    
    <!-- Google Fonts - Cairo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS RTL -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    
    <!-- Vendors CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/vendors/css/vendors.min.css">
    
    <style>
        :root {
            --primary: #004aad;
            --primary-light: #1a5cb8;
        }
        
        body {
            font-family: 'Cairo', sans-serif;
            direction: rtl;
            text-align: right;
            min-height: 100vh;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 25%, #e8f4ff 50%, #ffffff 75%, #f0f7ff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .reset-container {
            width: 100%;
            max-width: 480px;
        }
        
        .glass-card {
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.5);
            box-shadow: 0 8px 32px rgba(0, 74, 173, 0.12);
            overflow: hidden;
        }
        
        .logo-section {
            text-align: center;
            padding: 2.5rem 2rem 1.5rem;
        }
        
        .logo-wrapper {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            border-radius: 20px;
            margin-bottom: 1.25rem;
        }
        
        .logo-wrapper i {
            font-size: 2rem;
            color: white;
        }
        
        .welcome-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }
        
        .welcome-subtitle {
            font-size: 0.9rem;
            color: #64748b;
        }
        
        .form-section {
            padding: 1.5rem 2rem 2.5rem;
        }
        
        .form-floating-custom {
            margin-bottom: 1rem;
        }
        
        .form-floating-custom label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: 0.5rem;
        }
        
        .form-floating-custom label i {
            color: var(--primary);
        }
        
        .form-control-custom {
            width: 100%;
            padding: 0.875rem 1rem;
            font-size: 0.95rem;
            font-family: 'Cairo', sans-serif;
            color: #1e293b;
            background: rgba(255, 255, 255, 0.8);
            border: 2px solid rgba(0, 74, 173, 0.1);
            border-radius: 14px;
            outline: none;
            transition: all 0.3s;
        }
        
        .form-control-custom:focus {
            background: rgba(255, 255, 255, 0.95);
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(0, 74, 173, 0.1);
        }
        
        .btn-primary-custom {
            width: 100%;
            padding: 1rem;
            font-size: 1rem;
            font-weight: 700;
            font-family: 'Cairo', sans-serif;
            color: white;
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            border: none;
            border-radius: 14px;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(0, 74, 173, 0.3);
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 74, 173, 0.35);
        }
        
        .alert-danger-custom {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 12px;
            padding: 0.875rem 1rem;
            margin-bottom: 1rem;
            color: #dc2626;
            font-size: 0.85rem;
        }
        
        .password-requirements {
            background: rgba(0, 74, 173, 0.05);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .password-requirements h6 {
            font-size: 0.85rem;
            font-weight: 600;
            color: #475569;
            margin-bottom: 0.75rem;
        }
        
        .password-requirements ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .password-requirements li {
            font-size: 0.8rem;
            color: #64748b;
            padding: 0.25rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .password-requirements li i {
            color: var(--primary);
            font-size: 0.75rem;
        }
        
        .back-link {
            display: block;
            text-align: center;
            margin-top: 1.5rem;
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
        }
        
        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="reset-container">
        <div class="glass-card">
            <div class="logo-section">
                <div class="logo-wrapper">
                    <i class="feather-key"></i>
                </div>
                <h1 class="welcome-title">@Html.T("إعادة تعيين كلمة المرور", "Reset Password")</h1>
                <p class="welcome-subtitle">@Html.T("أدخل كلمة المرور الجديدة لحسابك:", "Enter the new password for your account:") @ViewBag.Email</p>
            </div>
            
            <div class="form-section">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-danger-custom">
                        <div asp-validation-summary="All"></div>
                    </div>
                }
                
                <form asp-action="ResetPassword" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" value="@ViewBag.UserId" />
                    <input type="hidden" name="token" value="@ViewBag.Token" />
                    
                    <div class="password-requirements">
                        <h6><i class="feather-info me-2"></i>@Html.T("متطلبات كلمة المرور:", "Password Requirements:")</h6>
                        <ul>
                            <li><i class="feather-check"></i>@passwordMinLength @Html.T("أحرف على الأقل", "characters minimum")</li>
                            <li><i class="feather-check"></i>@Html.T("حرف كبير واحد على الأقل", "At least one uppercase letter")</li>
                            <li><i class="feather-check"></i>@Html.T("حرف صغير واحد على الأقل", "At least one lowercase letter")</li>
                            <li><i class="feather-check"></i>@Html.T("رقم واحد على الأقل", "At least one number")</li>
                            <li><i class="feather-check"></i>@Html.T("رمز خاص واحد", "One special character") (!@@#$%)</li>
                        </ul>
                    </div>
                    
                    <div class="form-floating-custom">
                        <label>
                            <i class="feather-lock"></i>
                            @Html.T("كلمة المرور الجديدة", "New Password")
                        </label>
                        <input type="password" 
                               class="form-control-custom" 
                               name="newPassword" 
                               placeholder="@Html.T("أدخل كلمة المرور الجديدة", "Enter new password")"
                               required
                               minlength="@passwordMinLength">
                    </div>
                    
                    <div class="form-floating-custom">
                        <label>
                            <i class="feather-lock"></i>
                            @Html.T("تأكيد كلمة المرور", "Confirm Password")
                        </label>
                        <input type="password" 
                               class="form-control-custom" 
                               name="confirmPassword" 
                               placeholder="@Html.T("أعد إدخال كلمة المرور", "Re-enter password")"
                               required
                               minlength="@passwordMinLength">
                    </div>
                    
                    <button type="submit" class="btn-primary-custom">
                        <i class="feather-check me-2"></i>
                        @Html.T("تعيين كلمة المرور الجديدة", "Set New Password")
                    </button>
                </form>
                
                <a href="@Url.Action("Login", "Account")" class="back-link">
                    <i class="feather-arrow-right me-1"></i>
                    @Html.T("العودة لتسجيل الدخول", "Back to Sign In")
                </a>
            </div>
        </div>
    </div>

    <!-- Vendors JS -->
    <script src="~/assets/vendors/js/vendors.min.js"></script>
</body>
</html>
