@inject LMS.Services.Interfaces.IPlatformSettingsService PlatformSettings
@{
    ViewData["Title"] = Html.T("تم تغيير كلمة المرور بنجاح", "Password Changed Successfully");
    Layout = null;
    var platformFavicon = await PlatformSettings.GetPlatformFaviconAsync();
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - LMS Platform</title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content(string.IsNullOrEmpty(platformFavicon) ? "~/assets/images/favicon.ico" : "~" + platformFavicon)">
    
    <!-- Google Fonts - Cairo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS RTL -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    
    <!-- Vendors CSS -->
    <link rel="stylesheet" type="text/css" href="~/assets/vendors/css/vendors.min.css">
    
    <style>
        :root {
            --primary: #004aad;
            --success: #10b981;
        }
        
        body {
            font-family: 'Cairo', sans-serif;
            direction: rtl;
            text-align: right;
            min-height: 100vh;
            background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 50%, #ffffff 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        
        .success-container {
            width: 100%;
            max-width: 480px;
        }
        
        .glass-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(20px);
            border-radius: 24px;
            border: 1px solid rgba(16, 185, 129, 0.2);
            box-shadow: 0 8px 32px rgba(16, 185, 129, 0.1);
            overflow: hidden;
            text-align: center;
            padding: 3rem 2rem;
        }
        
        .success-icon {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #10b981, #059669);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            animation: scaleIn 0.5s ease-out;
        }
        
        @@keyframes scaleIn {
            from {
                transform: scale(0);
                opacity: 0;
            }
            to {
                transform: scale(1);
                opacity: 1;
            }
        }
        
        .success-icon i {
            font-size: 3rem;
            color: white;
        }
        
        .success-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #059669;
            margin-bottom: 1rem;
        }
        
        .success-message {
            font-size: 1rem;
            color: #64748b;
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        
        .btn-primary-custom {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.875rem 2rem;
            font-size: 1rem;
            font-weight: 600;
            font-family: 'Cairo', sans-serif;
            color: white;
            background: linear-gradient(135deg, var(--primary), #1a5cb8);
            border: none;
            border-radius: 14px;
            text-decoration: none;
            transition: all 0.3s;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 74, 173, 0.35);
            color: white;
        }
        
        .checkmark {
            animation: checkmark 0.8s ease-in-out 0.3s forwards;
            stroke-dasharray: 100;
            stroke-dashoffset: 100;
        }
        
        @@keyframes checkmark {
            to {
                stroke-dashoffset: 0;
            }
        }
    </style>
</head>

<body>
    <div class="success-container">
        <div class="glass-card">
            <div class="success-icon">
                <i class="feather-check"></i>
            </div>
            <h1 class="success-title">@Html.T("تم بنجاح!", "Success!")</h1>
            <p class="success-message">
                @Html.T("تم تغيير كلمة المرور الخاصة بك بنجاح.", "Your password has been changed successfully.")
                <br>
                @Html.T("يمكنك الآن تسجيل الدخول باستخدام كلمة المرور الجديدة.", "You can now sign in with your new password.")
            </p>
            <a href="@Url.Action("Login", "Account")" class="btn-primary-custom">
                <i class="feather-log-in"></i>
                @Html.T("تسجيل الدخول الآن", "Sign In Now")
            </a>
        </div>
    </div>

    <!-- Vendors JS -->
    <script src="~/assets/vendors/js/vendors.min.js"></script>
</body>
</html>
