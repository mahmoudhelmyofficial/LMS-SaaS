@inject LMS.Services.Interfaces.IPlatformSettingsService PlatformSettings
@{
    var platformName = ViewBag.PlatformName as string ?? (await PlatformSettings.GetPlatformNameAsync()) ?? "LMS";
    var platformLogo = ViewBag.LogoUrl as string ?? (await PlatformSettings.GetPlatformLogoAsync());
    var platformFavicon = await PlatformSettings.GetPlatformFaviconAsync();
    var primaryColor = ViewBag.PrimaryColor as string ?? "#0d6efd";
    var secondaryColor = ViewBag.SecondaryColor as string ?? "#6c757d";
    var fontFamily = ViewBag.FontFamily as string;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
    if (string.IsNullOrEmpty(returnUrl)) { returnUrl = "/"; }
}
<!DOCTYPE html>
<html lang="@Html.Lang()" dir="@Html.Dir()">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <partial name="_PwaMeta" />
    <title>@ViewData["Title"] - @platformName</title>
    <link rel="shortcut icon" type="image/x-icon" href="@(string.IsNullOrEmpty(platformFavicon) ? Url.Content("~/favicon.ico") : (platformFavicon.StartsWith("http://", StringComparison.OrdinalIgnoreCase) || platformFavicon.StartsWith("https://", StringComparison.OrdinalIgnoreCase) ? platformFavicon : Url.Content("~" + platformFavicon)))" />
    @if (Html.IsRtl())
    {
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMS.styles.css" asp-append-version="true" />
    <style>
        :root {
            --lp-primary: @primaryColor;
            --lp-secondary: @secondaryColor;
        }
        .btn-primary, .bg-primary { background-color: var(--lp-primary) !important; border-color: var(--lp-primary) !important; }
        .text-primary { color: var(--lp-primary) !important; }
        .btn-outline-primary { border-color: var(--lp-primary); color: var(--lp-primary); }
        .btn-outline-primary:hover { background-color: var(--lp-primary); color: #fff; }
        @if (!string.IsNullOrEmpty(fontFamily))
        {
            @:body { font-family: '@fontFamily', sans-serif !important; }
        }
        @if (Html.IsRtl())
        {
            @:body { font-family: 'Cairo', sans-serif; direction: rtl; text-align: right; }
        }
        else
        {
            @:body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; direction: ltr; text-align: left; }
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Landing" asp-action="Index">
                    <img src="@(string.IsNullOrEmpty(platformLogo) ? Url.Content("~/logo.png") : (platformLogo.StartsWith("http://", StringComparison.OrdinalIgnoreCase) || platformLogo.StartsWith("https://", StringComparison.OrdinalIgnoreCase) ? platformLogo : Url.Content("~" + platformLogo)))" alt="@platformName" style="max-height: 60px;" class="me-2" onerror="this.src='@Url.Content("~/logo.png")'">
                    <span>@platformName</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#landingNav" aria-controls="landingNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="landingNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#courses">@Html.T("الدورات", "Courses")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#books">@Html.T("الكتب", "Books")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">@Html.T("عنّا", "About")</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="feather-globe"></i> @Html.T("English", "العربية")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form asp-controller="Culture" asp-action="SetCulture" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <input type="hidden" name="culture" value="@(Html.IsRtl() ? "en" : "ar")" />
                                        <button type="submit" class="dropdown-item">@Html.T("English", "العربية")</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@returnUrl">@Html.T("تسجيل الدخول", "Login")</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary text-white ms-2" asp-controller="Account" asp-action="Register">@Html.T("التسجيل", "Register")</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    &copy; @DateTime.Now.Year - @platformName - @Html.T("جميع الحقوق محفوظة", "All rights reserved")
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-controller="Account" asp-action="Login" class="text-muted me-3">@Html.T("تسجيل الدخول", "Login")</a>
                    <a asp-controller="Account" asp-action="Register" class="text-muted">@Html.T("التسجيل", "Register")</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
