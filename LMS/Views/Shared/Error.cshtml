@model LMS.Models.ErrorViewModel
@{
    // Use safe dashboard layout - no service injection, never throws
    Layout = "~/Views/Shared/_ErrorDashboardLayout.cshtml";
    var m = Model ?? new LMS.Models.ErrorViewModel { StatusCode = 500, TitleAr = "حدث خطأ", MessageAr = "حدث خطأ غير متوقع. يرجى المحاولة مرة أخرى.", IconCssClass = "feather-alert-circle", CssTheme = "primary" };
    ViewData["Title"] = m.TitleAr;
    var themeGradient = m.CssTheme switch
    {
        "danger" => "linear-gradient(135deg, #dc2626 0%, #ef4444 50%, #f87171 100%)",
        "warning" => "linear-gradient(135deg, #d97706 0%, #f59e0b 50%, #fbbf24 100%)",
        "info" => "linear-gradient(135deg, #0284c7 0%, #0ea5e9 50%, #38bdf8 100%)",
        _ => "var(--gradient-hero, linear-gradient(135deg, #004aad 0%, #0055c4 50%, #1a5cb9 100%))"
    };
}

@section Styles {
    <link rel="stylesheet" href="~/assets/vendors/css/feather.min.css" />
    <link rel="stylesheet" href="~/css/brand-identity.css" />
<style>
    .error-page-wrapper { padding: 0 1rem; }
    .error-page-container {
        min-height: calc(100vh - 180px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }
    .error-card { max-width: 560px; margin: 0 auto; }
    .error-card .card {
        border-radius: 12px;
        box-shadow: var(--shadow-lg, 0 10px 15px -3px rgba(0,0,0,.1));
        border: 1px solid var(--border-color, #e2e8f0);
    }
    .error-icon-wrap {
        width: 120px;
        height: 120px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: @themeGradient;
    }
    .error-icon-wrap i {
        font-size: 3rem;
        color: #fff;
    }
    .error-code {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 0.5rem;
        text-align: center;
        background: @themeGradient;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .error-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary, #1e293b);
        margin-bottom: 0.75rem;
        text-align: center;
    }
    .error-message {
        color: var(--text-secondary, #64748b);
        font-size: 1rem;
        line-height: 1.7;
        margin-bottom: 1.5rem;
        text-align: center;
    }
    .error-actions {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    .error-actions .btn {
        padding: 0.6rem 1.25rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
</style>
}

<div class="error-page-wrapper">
    <div class="error-page-container">
        <div class="error-card">
            <div class="card stretch stretch-full">
                <div class="card-body text-center py-5 px-4">
                    <div class="error-icon-wrap">
                        <i class="@m.IconCssClass"></i>
                    </div>
                    <div class="error-code">@m.StatusCode</div>
                    <h1 class="error-title">@m.TitleAr</h1>
                    <p class="error-message">@m.MessageAr</p>
                    <div class="error-actions">
                        <a href="javascript:history.back()" class="btn btn-light">
                            <i class="feather-arrow-right"></i>
                            @Html.T("رجوع", "Back")
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                                    <i class="feather-home"></i>
                                    @Html.T("لوحة التحكم", "Dashboard")
                                </a>
                            }
                            else if (User.IsInRole("Instructor"))
                            {
                                <a asp-area="Instructor" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                                    <i class="feather-home"></i>
                                    @Html.T("لوحة التحكم", "Dashboard")
                                </a>
                            }
                            else if (User.IsInRole("Student"))
                            {
                                <a asp-area="Student" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                                    <i class="feather-home"></i>
                                    @Html.T("لوحة التحكم", "Dashboard")
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                    <i class="feather-home"></i>
                                    @Html.T("الصفحة الرئيسية", "Home Page")
                                </a>
                            }
                        }
                        else
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="feather-home"></i>
                                @Html.T("الصفحة الرئيسية", "Home Page")
                            </a>
                        }
                    </div>
                    @if (m.ShowRequestId)
                    {
                        <div class="mt-4 pt-3 border-top">
                            <small class="text-muted">
                                <i class="feather-info me-1"></i>
                                @Html.T("معرف الطلب:", "Request ID:") <code>@m.RequestId</code>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
